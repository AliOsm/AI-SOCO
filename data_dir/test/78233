#include <bits/stdc++.h>
using namespace std;

int n;
vector<double> arr;

bool check(double num) {
	int cnt = 0;
	double last = 0;
	for(int i = 0; i < n; ++i) {
		if(arr[i] <= last) {
			continue;
		}
		++cnt;
		last = arr[i] + 2 * num;
	}

	return cnt <= 3;
}

void recover(double num) {
	int cnt = 0;
	double last = 0;
	for(int i = 0; i < n; ++i) {
		if(arr[i] - last < 1) {
			continue;
		}
		++cnt;
		printf("%.6lf ", arr[i] + num);
		last = arr[i] + 2 * num;
	}
	for(; cnt < 3; ++cnt) {
		printf("0 ");
	}
}

int main (int argc, char *argv[])
{
	scanf("%d", &n);
	arr.resize(n);
	for(int i = 0; i < n; ++i) {
		scanf("%lf", &arr[i]);
	}
	sort(arr.begin(), arr.end());
	double l = 0,
		r = 1e9;
	for(int i = 0; i < 100; ++i) {
		double mid = (r + l) / 2;
		if(check(mid)) {
			r = mid;
		} else {
			l = mid;
		}
	}
	printf("%.6lf\n", l);
	recover(l);

	return 0;
}

