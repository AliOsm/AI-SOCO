#include <bits/stdc++.h>
#define ll long long

using namespace std;

int c, x, y;

main()
{
    cin >> x >> y;
    while (x>0 && y>0)
    {
        if (x==1 && y==1)
        {
            break;
        }
        if (x<=y)
        {
            x++;
            y-=2;
        }
        else
        {
            y++;
            x-=2;
        }
        c++;
    }
    cout << c;
}
