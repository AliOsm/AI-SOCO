#include<bits/stdc++.h>
using namespace std;

int main(){
	ios::sync_with_stdio(0);
	cin.tie(0);
	int x, y; cin>>x>>y;
	int x_temp=y-1;
	if (y==0){
		cout<<"No";
		return 0;
	}
	if (x_temp<=x){
		if (x_temp==0 && x >0) cout<<"No";
		else if (x_temp%2==x%2) cout<<"Yes";
		else cout<<"No";
		return 0;
	}
	cout<<"No";
	
}

