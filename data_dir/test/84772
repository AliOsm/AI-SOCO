#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define f first
#define s second
#define bp push_back
#define mp make_pair
const int mx=1e5+10;
const double eps=1e-9;
const int inf=1e9;
int a[mx];
main(){
    int n,k;
    scanf("%d%d",&n,&k);
    ll sum=0;
    for(int i=0;;i++){
        sum+=i;
        if(n-i==sum-k){
            printf("%d",sum-k);
            return 0;
        }
    }



}
