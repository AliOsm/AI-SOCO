#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[223456],a[1111234], b[1125678],d[123456], l,ll,r, s, t, k,x, y,y1,z,m;
string p,q;
map <long long , long long> mm,u;
int main() {
    cin >>n>>m;
    if (n == m || m == 0){
        cout << 0<<' '<< 0;
        return 0;
    }
    if (m*3<= n){
        cout << 1<<' '<< m*2;
    }
    else 
        cout << 1<<' '<<n-m;
    return 0;
}