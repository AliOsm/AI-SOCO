#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define MOD 10000007
using namespace std;
ll n, x, y, a[100100], eq, les, z;
int main()
{
    cin >> n >> x >> y;
    for (int i=0; i<n; i++){
        cin >> a[i];
        if (a[i] <= x)  eq++;
    }
    if (x>y)    cout << n << '\n';
    else cout << eq/2 + (eq%2 != 0) << '\n';
    return 0;
}
