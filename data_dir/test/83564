#include<bits/stdc++.h>
#define REP(i,j,k) for(int i=j;i<k;i++)
#define RREP(i,j,k) for(int i=j-1;i>=k;i--)
#define int long long
#define pb emplace_back
#define P pair<double,int>
#define F first
#define S second
#define ALL(x) x.begin(),x.end()
#define sz(x) x.size()
#define MX 400005
#define oo 1e18
#define L d*2
#define R (d*2+1)
#define mid (l+r>>1)
#define Ls l,mid,L
#define Rs mid+1,r,R
#define MIN(x,y) x = min(x,y)
#define MAX(x,y) x = max(x,y)
#define mo (int)(1e9+7)
#define IOS cin.tie(0),cout.tie(0),cout.sync_with_stdio(0)
using namespace std;
int t,x,y,a,b;
main(){
	IOS;
	cin>>t;
	while(t--){
		cin>>x>>y>>a>>b;
		if((y-x)%(a+b)) cout<<"-1\n";
		else cout<<(y-x)/(a+b)<<"\n";
	}
} 
