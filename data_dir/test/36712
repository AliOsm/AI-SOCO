    pair<int, int> a[n];
    rep(i, 0, n)
    {
        int sum = 0;
        rep(j, 0, 4)
        {
            int x;
            cin >> x;
            sum += x;
        }
        a[i] = {-sum, i};
    }
    sort(a, a + n);
    rep(i, 0, n)
        if (a[i].se == 0)
        {
            cout << i + 1 << "\n";
            break;
        }
