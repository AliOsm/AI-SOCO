int const N = 1e5+5,M = 105;
using namespace std;
ll n,brr[N],cnt,arr[N];
int main()
{
    abdelrahman001
    cin >> n;
    for(int i =0;i<n;i++)
        cin >> arr[i],brr[i] = arr[i];
    sort(brr,brr+n);
    for(int i =0;i<n;i++)
        cnt+=(arr[i]!=brr[i]);
    (!cnt || cnt == 2)?cout << "YES":cout << "NO";
    return 0;
}
