const int a228 = 18;
const ll MOD = 1000000007;
const int maxelem = 12000000;
const int fsconst = 12000;
ld x;
ld bp(ld a, int b)
{
	ld res = 1;
	while (b)
	{
		if (b & 1)
		{
			res *= a;
		}
		a *= a;
		b >>= 1;
	}
	return res;
}
signed main()
{
	fastio();
	int n, m;
	cin >> m >> n;
	vector<ld> idk(m + 1);
	for (int i = 1; i <= m; ++i)
	{
		idk[i] = bp((ld)i / m, n);
	}
	ld ans = 0;
	for (int i = 1; i <= m; ++i)
	{
		ans += i * (idk[i] - idk[i - 1]);
	}
	cout << fixed << ans;
//	sp;
}