#include<bits/stdc++.h>
#define REP(i,j,k) for(int i=j;i<k;i++)
#define RREP(i,j,k) for(int i=j-1;i>=k;i--)
#define int long long
#define pb emplace_back
#define P pair<int,int>
#define F first
#define S second
#define ALL(x) x.begin(),x.end()
#define sz(x) x.size()
#define MX 100005
#define oo 1e18
#define L d*2
#define R (d*2+1)
#define mid (l+r>>1)
#define Ls l,mid,L
#define Rs mid+1,r,R
#define MIN(x,y) x = min(x,y)
#define MAX(x,y) x = max(x,y)
#define mo (int)(1e9+7)
#define IOS cin.tie(0),cout.tie(0),cout.sync_with_stdio(0)
using namespace std;
int n,a[MX],b[MX],ca,cb;
main(){
	cin>>n;
	REP(i,0,n) cin>>a[i];
	REP(i,0,n) cin>>b[i];	
	REP(i,0,n){
		if(a[i] && !b[i]) ca++;
		if(!a[i] && b[i]) cb++;
	}
	if(ca==0) return cout<<-1,0;
	cout<<(cb)/ca+1;
}
