# include <bits/stdc++.h>
# define ll long long  
using namespace std;
const ll N = 3e5 + 10, mod = 1e9 + 7, INF = 1e10 + 100;
int main(){
    ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    string s;
    cin >> s;
    bool ok = false;
    for(int i = 1; i < s.size(); i ++){
    	if(s[i] == '1')ok = true;
	}
	if(ok == true){
		cout << (int)(s.size() + 1) / 2;
	}else{
		cout << (int)(s.size()) / 2;
	}
}