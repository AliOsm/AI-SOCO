#include <bits/stdc++.h>

using namespace std;

#define int long long
#define MP make_pair
#define F first
#define S second
#define pi pair<int,int> 
#define sz(s) ((int)s.size())

const unsigned mod = 1e9 + 7;
const unsigned N = 5e5 + 4;

signed main() {
  ios::sync_with_stdio(false); cin.tie(0); cout.tie(0);

  int t = 1; cin >> t;
  while (t--) {    
  	int n, k;
  	cin >> n >> k;
  	int x = n - k;

  	if (x & 1) cout << "NO\n";
  	else {
  		if (k * k <= n) cout << "YES\n";
  		else cout << "NO\n";
  	}
  }




  
  
  return 0;
}