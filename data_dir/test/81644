#include<bits/stdc++.h>
using namespace std ;
#define Rep( i , a , b ) for( i = a ; i <= b ; i ++ )
#define Rev( i , b , a ) for( i = b ; i >= a ; i -- )
#define LL long long
#define MOD 1000000007LL
LL n , m , t , caseno , k ;


char s[100005] ;
int main(){
    LL i , j ;
    scanf("%lld",&t) ;
    Rep( caseno , 1 , t ){
        scanf("%lld",&n) ;
        scanf("%s",&s) ;
        if( n == 2 && s[0] >= s[1] ) puts("NO") ;
        else{
            puts("YES") ;
            puts("2") ;
            printf("%c",s[0]) ;
            puts("") ;
            Rep( i , 1 , n - 1 ){
                printf("%c",s[i]) ;
            }puts("") ;
        }
    }
    return 0 ;
}