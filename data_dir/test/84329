#include <bits/stdc++.h>
using namespace std;
const long long md=1e9+7;
long long a[1000005],n,freq[5];

int main(){
	#ifdef ONLINE_JUDGE
	ios_base::sync_with_stdio(0);
	cin.tie(0);cout.tie(0);
	#endif
	long long q,m,k,h,ans=0,sum=0,p,x,y;
	cin>>n;
	for(int i=0;i<n;++i){
		cin>>a[i];
		++freq[a[i]];
	}
	if(freq[1]>=freq[2]) cout<<freq[2]+(freq[1]-freq[2])/3;
	else cout<<freq[1];
}