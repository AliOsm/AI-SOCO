#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef pair<int, int> pi;


int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  ll n;
  cin >> n;
  ll m=n/3;
  ll extra = n-3*m;
  ll total=2*m;
  if ((extra == 1) or (extra ==2)) total++;
  cout <<total<<endl;
  return 0;
}

