# define fast ios_base::sync_with_stdio(false) ; cin.tie(0) ; cout.tie(0);
# define dist(a,b,p,q) sqrt((p-a)*(p-a) + (q-b)*(q-b))

# define pp(n) printf("%.10Lf",n);
# define line cout<<"\n";

const ld pie = 3.14159265358979 ;
const ll mod = 1e9 + 7 ;

string vow = "aeiou";

void solve ( int test_case )
{
    int n , m ;
    cin >> n >> m ;

    vvi v ( n , vi ( m ) ) ;
    for ( int i=0 ; i < n ; i++ )
    {
        int temp ; cin >> temp ;

        for ( int j = 0 ; j < temp ; j++ )
            v[i][j] = -1 ;

        if ( temp < m ) v[i][temp] = 1 ;
    }

    for ( int j = 0 ; j < m ; j++ )
    {
        int temp ;
        cin >> temp ;

        for ( int i=0 ; i < temp ; i++ )
        {
            if ( v[i][j] == 1 ) { cout << 0 ; line ; R ; }
            v[i][j] = -1 ;
        }

        if ( temp < n )
        {
            if ( v[temp][j] == -1 ) { cout << 0 ; line ; R; }
            v[temp][j] = 1 ;
        }
    }

    ll ans = 1 ;
    for ( int i=0 ; i < n ; i++ )
    {
        for ( int j = 0 ; j < m ; j++ )
        {
            if ( v[i][j] == 0 )
                ans <<= 1 , ans %= mod ;
        }
    }

    cout << ans << "\n" ;
}

int main()
{
    int t = 1;
    //cin >> t;

    for ( int i=0 ; i<t ; i++ ) solve(i);
    return 0;
}
