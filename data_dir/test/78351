
#include <bits/stdc++.h>
typedef long long int lli;
using namespace std;
#define mp make_pair

int a[112345];

int main()
{
    ios_base::sync_with_stdio(false);
	
	int n; cin>>n;
	string s; cin>>s;
	
	int c[255] = {};
	for ( int i=0 ; i<n ; i++ ) c[s[i]]++;
	
	cout<<( c['I']>1 ? 0 : c['I']==1 ? 1 : c['A'] );
	
    return 0;
}