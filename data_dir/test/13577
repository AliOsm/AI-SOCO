#include <bits/stdc++.h>
#define pb push_back
#define adelkhah main
#define int long long
using namespace std;
typedef long long ll;
typedef long double ld;
typedef pair<int,int> pii;


signed adelkhah()
{
    int q; cin >> q;
    while(q--){
        int n,m,k; cin >> n >> m >> k;
        int a[n]; for(int i = 0; i < n; i++) cin >> a[i];
        int sw = 0;
        for(int i = 1; i < n; i++){
            int h = max(a[i]-k,(ll)0);
            m += a[i-1] - h;
            if(m < 0){
                sw = 1;
            }
        }
        cout << (sw?"NO":"YES") << endl;
    }
}
