#include <bits/stdc++.h>

using namespace std;

typedef long long ll;

int main(){
    int n, s =0, c =0;
    string a;
    cin >> n;
    cin >> a;
    while(a[s] == '<'){
        s++;
    }
    int l = n - 1;
    while(a[l] == '>'){
        l--;
    }
    cout << s + n - 1 - l;
}
