#include <iostream>
#include<stdio.h>
#include<string.h>
#include<algorithm>
#include<queue>
#include<vector>
#include<map>
using namespace std;
#define N 20005

int main()
{
   // freopen("in.txt","r",stdin);
    int t,n,m,i,j,k;
    while(~scanf("%d",&n))
    {
        i=1;j=n*n;
        for(k=1;k<=n;k++)
        {
            m=n;
            while(m)
            {
                printf("%d %d ",i++,j--);
                m-=2;
            }
            puts("");
        }
    }
    return 0;
}
