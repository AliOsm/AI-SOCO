#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long int n,a,b,c,i,j,k,l,s;
    cin>>k;
    a=0;
    b=0;
    while(1)
    {
        a++;
        c=a;
        s=0;
        while(c!=0)
        {
            s=s+(c%10);
            c=c/10;
            if(s>10)
                break;
        }
        if(s==10)
        {
            b++;
            if(b==k)
            {
                cout<<a<<endl;
                return 0;
            }
        }
    }


}
