int a[111111],x,y[111111],i,j,n;
int main ()
{
    speed;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
        scanf("%d%d",&x,&y[i]),a[x]++;
    for(i=1;i<=n;i++)
        j=a[y[i]],printf("%d %d\n",n-1+j,n-1-j);

    return 0;
}
