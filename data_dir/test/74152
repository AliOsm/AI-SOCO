#include <bits/stdc++.h>

using namespace std;
typedef long long ll;

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    freopen("input.txt","r",stdin);
    freopen("output.txt","w",stdout);
    

    int n,m;
    cin >> n >> m;
    if(n>m){
        n-=m;
        for(int i=0;i<m;i++)
            cout << "BG";
        for(int i=0;i<n;i++)
            cout << "B";
    }else{
        m-=n;
        for(int i=0;i<n;i++)
            cout << "GB";
        for(int i=0;i<m;i++)
            cout << "G";
    }


}
