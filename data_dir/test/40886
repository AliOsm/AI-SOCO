#include <bits/stdc++.h>
using namespace std;
     
#define ll long long int
#define ld long double
#define ff first
#define ss second
#define pb push_back
#define mp make_pair
#define bp __builtin_popcountll
#define MOD 1000000007
#define MOD1 1000000006
#define MOD2 500000002
const int N = 1e3+5;

void solve()
{
    ll x,y,a,b;
    cin >> x >> y >> a >> b;
    ll dif = y - x;
    ll tot = a+b;
    if(dif%tot)  
    {
        cout<<"-1\n";
        return;
    }
    cout<<dif/tot<<"\n";
}         

int main()
{
    ll t=1;
    cin >> t;
    while(t--)
    {
        solve();
    }
}