#include <math.h>
#include <iostream>
#include <map>
#include <vector>
#include <set>
#include <cstring>
#include <algorithm>
#include <stack>
#include <queue>
#include <cstring>
#include <sstream>
#include <stdio.h>
using namespace std;
int n;
const int N=100005;
int a[N];
int b[N];
int ans;
int main() {
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        scanf("%d",&a[i]);b[i]=a[i];}
        sort(b,b+n);
    
    for(int i=0;i<n;i++){
        if(a[i]!=b[i]){ans++;}
        if(ans>2){puts("NO");return 0;}
    }
    puts("YES");

    return 0;
}
