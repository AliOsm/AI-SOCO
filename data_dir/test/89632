#include <bits/stdc++.h>
using namespace std;
int main() {
    ios::sync_with_stdio(false);
	char a,b;
	int n;
	cin>>a>>b>>n;
	n%=4;
	if(n%2==0) cout<<"undefined";
	else
	{
	    if(a=='<'&&b=='^')
	    {
	        if(n==1) cout<<"cw";
	        else cout<<"ccw";
	    }
	    else if(a=='v'&&b=='<')
	    {
	        if(n==1) cout<<"cw";
	        else cout<<"ccw";
	    }
	    else if(a=='>'&&b=='v')
	    {
	        if(n==1) cout<<"cw";
	        else cout<<"ccw";
	    }
	    else if(a=='^'&&b=='>')
	    {
	        if(n==1) cout<<"cw";
	        else cout<<"ccw";
	    }
	    else if(a=='<'&&b=='v')
	    {
	        if(n==1) cout<<"ccw";
	        else cout<<"cw";
	    }
	    else if(a=='^'&&b=='<')
	    {
	        if(n==1) cout<<"ccw";
	        else cout<<"cw";
	    }
	    else if(a=='>'&&b=='^')
	    {
	        if(n==1) cout<<"ccw";
	        else cout<<"cw";
	    }
	    else if(a=='v'&&b=='>')
	    {
	        if(n==1) cout<<"ccw";
	        else cout<<"cw";
	    }
	}
	return 0;
}
