#include <iostream>

using namespace std;


int main(){
    int n;
    cin >> n;

    int t[n];
    for(int i =0; i<n; i++){
        cin >>t[i];
    }
    if(t[0]%2!=0 && t[n-1]%2!=0 && n %2!=0){
        cout << "YES" << endl;
    }else {
        cout << "NO" << endl;
    }
    return 0;
}