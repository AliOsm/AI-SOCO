# include <bits/stdc++.h>
# define ll long long
using namespace std;
const int N = 2e5 + 10, INF = 1e9 + 100;
void query(){
	int a, b, x, y;
	cin >> x >> y >> a >> b;
	if((y - x) % (a + b) == 0){
		cout << (y - x) / (a + b) << endl;
	}else{
		cout << "-1\n";
	}

}
int main(){
	ios::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);
	int t = 1;
	cin >> t;
	while(t --){
		query();
	}
}
