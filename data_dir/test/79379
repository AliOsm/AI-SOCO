#include<iostream>
#include<string.h>
using namespace std;
int main()
{
    char s[100010];
    cin>>s;
    int i,flag=0,n,boy=0;
    n=strlen(s);
    for(i=0;i<n/2;i++)
    {
        if(s[i]!=s[n-1-i])
        {
            boy=1; cout<<"NO"; break;
        }
    }
    if(boy==0){
for(i=0;s[i]!='\0';i++)
{
    if(!(s[i]=='A'||s[i]=='H'||s[i]=='I'||s[i]=='M'||s[i]=='O'||s[i]=='T'||s[i]=='U'||s[i]=='V'||s[i]=='W'||s[i]=='X'||s[i]=='Y'))
{
        flag=1; cout<<"NO"; break;
    }
}
  if(flag==0)
        cout<<"YES";}

}
