#include <iostream>
#include<stdio.h>
#include<string.h>
#include<algorithm>
#include<queue>
using namespace std;
#define inf 1000000007
#define ll long long
#define mp make_pair
#define N 10010

int main()
{
   // freopen("in.txt","r",stdin);
    ll n,k;
    cin>>n>>k;
    {
        ll i=(n+1)/2;
        if(k<=i)
        cout<<2LL*k-1<<endl;
        else cout<<2LL*(k-i)<<endl;
    }
    return 0;
}
