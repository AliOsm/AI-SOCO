#include<bits/stdc++.h>
#define int long long
using namespace std;



main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    int test;
    cin >> test;
    while(test--){
        int a, b, k;
        cin >> a >> b >> k;
        cout << (k + 1) / 2 * a - (k / 2) * b << "\n";
    }
}
