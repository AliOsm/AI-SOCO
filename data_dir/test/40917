#include <bits/stdc++.h>
#define ff first
#define ss second
using namespace std;
#define MP make_pair
#define PB push_back
#define ll long long
#define int long long
#define f(i,x,n) for(int i=x;i<n;i++)
#define ld long double
#define mod 1000000007

int a[100005],n;
int32_t main()
{
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	int t;
	cin>>t;
	while(t--)
	{
		cin>>n;
		f(i,0,n)
			cin>>a[i];
		sort(a,a+n,greater <int> ());
		cout<<min(a[1]-1,n-2)<<endl;
	}
	
	return 0;
}