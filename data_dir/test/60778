#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N;
string s1, s2;

void check( string a ) {
    for( int i = 0; i < a.size() - 1; i ++ ) {
        if( a[i] == s1[0] && a[i + 1] == s1[1] )
            return;
        if( a[i] == s2[0] && a[i + 1] == s2[1] )
            return;
    }
    cout << "YES\n";
    cout << a << "\n";
    exit( 0 );
}

void create( char a , char b , char c ) {
    string s = "";
    for( int i = 0; i < N; i ++ ) {
        s += a;
        s += b;
        s += c;
    }
    check( s );
    s = "";
    for( int i = 0; i < N; i ++ ) s += a;
    for( int i = 0; i < N; i ++ ) s += b;
    for( int i = 0; i < N; i ++ ) s += c;
    check( s );
}


int main()
{
    optimiza_io
    cin >> N;
    cin >> s1 >> s2;
    for( char a = 'a'; a <= 'c'; a ++ )
        for( char b = 'a'; b <= 'c'; b ++ )
            for( char c = 'a'; c <= 'c'; c ++ ) 
                if( a != b && a != c && b != c )
                    create( a , b , c );
    cout << "NO\n";
    return 0;
}