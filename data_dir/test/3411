/// لَا أَبْرَحُ حَتَّىٰ أَبْلُغَ


#include <bits/stdc++.h>
#define LL long long
#define LD long double

#define IO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define S second
#define F first
#define PI acos(-1)
#define MAX 2000005
#define file freopen("input.txt","r",stdin); freopen("output.txt","w",stdout);

#define N   100005
using namespace std;



int main()
{
    IO
    int t;
    cin>>t;
    while(t--)
    {
        LL s,a,b,c;
        cin>>s>>a>>b>>c;
        LL v=s/(c);

        cout<<1ll*((v/a *(a+b) )+ (v%a) )<<endl;

    }

    return 0;
}
