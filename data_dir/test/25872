#include <cstdio>
#include <iostream>
#include <cmath>
#include <algorithm>
#include <functional>
#include <numeric>
#include <queue>
#include <stack>
#include <vector>
#include <string>
#include <set>
#include <map>
#include <memory.h>

using namespace std;

typedef long long LL;

int n;

int main()
{
	cin >> n;
	int res = 0;
	for(int i = 0; i < n; ++i)
		res += (n - i - 1) * (i + 1) + 1;
	cout << res << endl;
	return 0;
}