#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, K, ans;

int main()
{
    optimiza_io
    cin >> N >> K;
    i64 r = ( K / 2 );
    if( r > N or r + 1 > N )
    {
        cout << "0\n";
        return 0;
    }
    i64 ini = 1;
    i64 fin = r;
    while( ini < fin )
    {
        i64 mid = ( ini + fin ) / 2;
        if( mid <= N && K - mid <= N )
            fin = mid;
        else
            ini = mid + 1;
    }
    if( ! ( K & 1 ) )
        r--;
    
    cout << max( 0LL , r - ini + 1 );
    return 0;
}
