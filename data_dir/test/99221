/*
1100C. NN and the Optical Illusion
*/

#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define ull unsigned long long
#define ul unsigned long
#define pi 3.1415926535

int main(){
  double n, r;
  cin >> n >> r;
  double A = (n-2)*pi/(2*n), B = 2*pi/n;
  cout << setprecision(10) << r*sin(B)/(2*sin(A) - sin(B));
}