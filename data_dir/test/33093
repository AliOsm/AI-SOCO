#include<bits/stdc++.h>
using namespace std;
#define Jewel ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

int main()
{
    Jewel;
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);

    int n, k, i;
    cin>>n>>k;
    vector<int>a(n);
    for(i=1; i<=n; i++)
        cin>>a[i];
    while(!a[k])
    {
        k = (k==n) ? 1 : k+1;
    }
    cout<<k<<endl;

    return 0;
}


