#define N 200005
ll n,ans=hell;
string s,ans1;
string a[6]={"RGB","RBG","GBR","GRB","BRG","BGR"};
void solve(){
    cin>>n>>s;
    rep(k,0,6){
        string t=a[k];
        ll c=0;
        rep(i,0,sz(s)){
            if(s[i]!=t[i%3])c++;
        }
        if(ans>c){
            ans=c;
            ans1=t;
        }
    }
    outl(ans);
    rep(i,0,n)cout<<ans1[i%3];
}
void prep(){

}
int main(){
    io;
    ll t=1;
    // cin>>t;
    prep();
    fix(12);
    while(t--)
        solve();
    return 0;
}
