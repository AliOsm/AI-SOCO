#include <bits/stdc++.h>
using namespace std;

#define pb push_back
#define mp make_pair

typedef long long ll;
typedef pair<int, int> pii;

ll k, n, w;

int main() {
  //freopen("input.txt", "r", stdin);
  //ios_base::sync_with_stdio(false);
  cin >> k >> n >> w;
  cout << max(0ll, k * w * (w + 1) / 2- n);
  return 0;
}
