#include <bits/stdc++.h>
#define intt long long
#define pb push_back
#define mk make_pair
#define ii pair<int,int>
#define sc second
#define fr first
using namespace std;

int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        n*=2;
        int a[n];
        int i;
        for(i=0;i<n;i++)
            cin>>a[i];
        sort(a,a+n);
        cout<<a[n/2]-a[n/2-1]<<endl;


    }

   return 0;
}
