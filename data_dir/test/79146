#include <iostream>
#include<cstdio>
#include<cmath>
#include<algorithm>
#include<map>
#include<set>
#include<vector>
#include<bitset>
#include<iomanip>
#include<cstring>
#include<string>
#include<deque>
#include<limits>

using namespace std;

#define ll long long

int c;

int main()
{
//    freopen("a.in","r",stdin);
    string s;
    cin>>s;
    for(int i=0;i<s.size();i++)
    {
        if(s[i]=='a')
        {
            c++;
        }
    }
    c*=2;
    c--;
    int n=s.size();
    cout<<min(c,n);

}



