typedef long long ll;
typedef unsigned long long ull;
typedef long double ld;

const double PI=3.1415926535897932384626433832795;
const ll INF = 1LL<<62;
const ll MINF = -1LL<<62;

template<typename T> T getint() {
	T val=0;
	char c;
	
	bool neg=false;
	while((c=gc()) && !(c>='0' && c<='9')) {
		neg|=c=='-';
	}

	do {
		val=(val*10)+c-'0';
	} while((c=gc()) && (c>='0' && c<='9'));

	return val*(neg?-1:1);
}

int main() {
	IO;
	int n;
	cin>>n;
	vector<int> t(n);
	for(int i=0;i<n;++i) {
		cin>>t[i];
	}
	
	sort(all(t));
	int ans=0;
	for(int i=0;i<n;++i) {
		int j=i;
		for(int k=20;k>=0;k--) {
			int akt=j+(1<<k);
			if(akt>=n) continue ;
			if(t[akt]-t[i]<=5) j=akt;
		}
		ans=max(ans, j-i+1);
	}
	
	cout<<ans<<"\n";
	return 0;
}

