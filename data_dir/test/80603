#include <bits/stdc++.h>
void init(){
#ifndef ONLINE_JUDGE
    freopen("xx/3.txt","r",stdin);
#endif
}
using namespace std;


int main(){
  init();
  int k, b, n, t;
  scanf("%d%d%d%d",&k,&b,&n,&t);
  int64_t x = 1;
  while(x<=t){
    x = x*k+b;
    n--;
  }
  n++;
  n = max(0,n);
  printf("%d",n);
  return 0;
}
