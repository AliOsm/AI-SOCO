//let's do it
 #include <iostream>
#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define inf 1000000000000
#define mod 1000000007
#define pb push_back
#define mp make_pair
#define all(v) v.begin(),v.end()
#define S second
#define F first
#define boost1 ios::sync_with_stdio(false);
#define boost2 cin.tie(0);
#define mem(a,val) memset(a,val,sizeof a)
#define endl "\n"
#define maxn 100001

int main()
{
	boost1;boost2;
	ll t,x,y,p,q,lo,mid,hi;
	cin>>t;
	while(t--)
	{
		cin>>x>>y>>p>>q;
		lo=-1;
		hi=2000000000;
		if(!(0LL<=p*hi-x && p*hi-x<=q*hi-y))
		{
			cout<<"-1"<<endl;
			continue;
		}
		while(hi-lo>1)
		{
			mid=(lo+hi)/2;
			if(0LL<=p*mid-x && p*mid-x<=q*mid-y)
			hi=mid;
			else
			lo=mid;
		}
		cout<<q*hi-y<<endl;
	}
	return 0;
}
