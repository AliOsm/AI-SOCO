	string s;
	cin >> s;
	rep(i, s.size()){
		if (s[i] != '1') {
			cout << "NO";
			return 0;
		}
		if (i + 1 < s.size() && i + 2 < s.size() && s[i + 1] == '4' && s[i + 2] == '4') i += 2;
		else if (i + 1 < s.size() && s[i + 1] == '4') i += 1;
	}
	cout << "YES";
	return 0;
