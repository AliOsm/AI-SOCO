#include<bits/stdc++.h>
#define ll long long
#define OO 2e18
#define oo 1e9
#define yalla ios::sync_with_stdio(0),cin.tie(0),cout.tie(0);
#define FILES freopen("input.txt", "r", stdin); freopen("output.txt", "w", stdout);
#define sz  100005
#define re return
#define mod  1000000007
#define pi acos(-1)
using namespace std;
string s;
ll n,x,y,cnt,z;
int main()
{yalla;
 cin>>n>>x>>y>>s;
 for(int i=0;i<n;i++)
 {if(s[i]=='0')z++;
  else
   {if(z) cnt++;
     z=0;
   }
 }
 if(z)cnt++;
 ///
 cout<<min(y*cnt,(x*( max(cnt-1,(ll)0) ))+y )<<endl;

 re 0;
}
