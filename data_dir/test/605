#include <bits/stdc++.h>

using namespace std;

const int N = 1e6 + 9, MOD = 1e9 + 7, MOD1 = (1 << 30) + 1;

#define int long long
#define ss second
#define ff first
//#define double long double

using vi = vector <int>;
using vb = vector <bool>;
using vp = vector <pair <int, int>>;


mt19937 Flash_new_51(525252);



signed main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    int x;
    cin >> x;
    x%= 4;
    if (x == 3) {
        cout << "2 A";
        return 0;
    }
    if (x == 1) {
        cout << "0 A";
        return 0;
    }
    if (x == 0) {
        cout << "1 A";
        return 0;
    }
    cout << "1 B";

}

