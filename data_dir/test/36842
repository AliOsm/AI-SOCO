//g++  5.4.0

#include<bits/stdc++.h>
using namespace std;

#define ff first
#define ss second
#define int long long
#define pb push_back
#define pii pair< int,int >
#define fast ios::sync_with_stdio(0) , cin.tie(0) , cout.tie(0) ;

signed main()
{
    fast;
    int t;
    cin >> t;
    while( t-- )
    {
        int a , b;
        cin >> a >> b;
        if( (a+b)%3 == 0 && a+b <= 3*min(a,b) ) 
            cout << "YES\n";
        else
            cout << "NO\n";
    }
}



