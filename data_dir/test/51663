#include<stdio.h>
#include<string.h>
#include<algorithm>
#include<map>
#include<string>
#include<math.h>
#include<queue>
#include<stack>
#include<iostream>
using namespace std;
#define LL long long
#define mod 1000000007
int main(void)
{
	int n, i;
	scanf("%d", &n);
	for(i=1;i<=n*2/3;i++)
		printf("0 %d\n", i);
	for(i=1;i<=n-n*2/3;i++)
		printf("3 %d\n", i*2);
	return 0;
}