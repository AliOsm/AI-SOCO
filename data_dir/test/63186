#include<bits/stdc++.h>
using namespace std;
#define ll  long long


int main(){
	ios::sync_with_stdio(0);
	cin.tie(0);
	int n, m, k, x, y;
	cin>>n>>m>>k;
	vector<ll>A(n),B(n+1) ,L(m), R(m), D(m), cnt(m+1);
	for(int i=0; i<n; i++) {cin>>A[i]; B[i]=A[i];}
	for(int i=0; i<m; i++) cin>>L[i]>>R[i]>>D[i];
	for(int i=0; i<k; i++){
		cin>>x>>y;
		cnt[--x]++; cnt[y]--;
	}
	for(int i=1; i<m; i++) cnt[i]+=cnt[i-1];
	for(int i=0; i<m; i++){
		B[--L[i]]+=(cnt[i]*D[i]);
		B[R[i]]-=(cnt[i]*D[i]);
	}
	cout<<B[0]<<' ';
	for(int i=1;i<n; i++){
		B[i]+=B[i-1]-A[i-1];
		cout<<B[i]<<' ';
	}
}
