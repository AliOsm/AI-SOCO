#include <bits/stdc++.h>
#define mk make_pair
#define fs first
#define sc second
using namespace std;
typedef long long ll;
typedef long double ld;

int main(){
  ll n, k;
  while(cin>>n>>k){
    if(k!=n&&k!=0){
      cout<<1<<" ";
    }
    else{
      cout<<0<<" ";
    }
    cout<<min(n-k, k*2)<<endl;
  }
  return 0;
}


