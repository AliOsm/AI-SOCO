#include <bits/stdc++.h>

using namespace std;

#define pb push_back
#define mp make_pair
#define ff first
#define ss second

typedef long long int ll;
typedef vector< pair<int, int> > vii;
typedef vector<int> vi;
typedef vector<vi> vvi;
typedef vector<long long int> vll;
typedef pair<int, int> pii;

const ll INF = 1e18;
const int inf = 1e9;
const int MOD = 1e9 + 7;
const int nax = 1000000 + 10;

int main()
{
    ios::sync_with_stdio(0);
    double n, k;
    cin >> n >> k;
    double lim = k - 0.5;

    double sum = 0;
    for(int i = 1; i <= n; i++)
    {
        double num;
        cin >> num;
        sum += num;
    }
    int cnt = n;
    while(1)
    {
        if(sum / cnt >= lim)
        {
            cout << cnt - n;
            break;
        }
        cnt++;
        sum += k;
    }


    return 0;
}
