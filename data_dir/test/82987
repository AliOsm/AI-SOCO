#include<bits/stdc++.h>
using namespace std;

int main()
{
    ios::sync_with_stdio(0) , cin.tie(0) , cout.tie(0);

    string s;
    cin >> s;

    if(s.find("ABC") != string::npos || s.find("BCA") != string::npos || s.find("ACB") != string::npos || s.find("BAC") != string::npos || s.find("CAB") != string::npos || s.find("CBA") != string::npos)
        cout << "Yes";
    else cout << "No";


    return 0;
}
