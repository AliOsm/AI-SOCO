#include <iostream>

using namespace std;

int main()
{
    int n,d;
    cin >> n >> d;
    int m=0;
    int now=0;
    for (int i=0;i<d;i++)
    {
        string s;
        cin >> s;
        if (s.find('0')==string::npos){now=0;}else{now++;m=max(m,now);}
    }
    cout << m;
    return 0;
}
