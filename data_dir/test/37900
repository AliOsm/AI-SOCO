#include <bits/stdc++.h>
using namespace std;

int T, N;
char S[305];

int main() {
    scanf("%d", &T);

    while (T--) {
        scanf("%d %s", &N, S);
        if ((N == 2 && S[0] < S[1]) || N > 2) {
            printf("YES\n2\n%c %s\n", S[0], S + 1);
        } else {
            printf("NO\n");
        }
    }
}
