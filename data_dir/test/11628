#define X first
#define Y second

ll Pow(ll x, ll y) // computes (x^y) in O(log(y)) 
{
	if (y == 0)
		return 1;
	if (y % 2 == 0)
	{
		ll temp = Pow(x, y / 2);
		return (temp*temp);
	}
	return x * Pow(x, y - 1);
}

ll c[1000][1000];
int main(){
	//read; write;	
	ll n;
	cin >> n;
	rep(i, n + 1)c[i][i] = c[i][0] = 1;
	repi(i, 2, n + 1){
		repi(j, 1, n)c[i][j] = c[i - 1][j - 1] + c[i - 1][j];
	}
	
	cout << c[n][5] + c[n][6] + c[n][7];
	return 0;	
}