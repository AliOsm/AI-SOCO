ll arr[100000][2];

void solve(int ii)
{
    int n;
    cin >> n;
    ll s = 0;
    ll s2 = 0;
    for (int i = 0; i < 2; ++i)
        for (int j = 0; j < n; ++j)
            cin >> arr[j][i];
    for (int i = n - 2; i >= 0; --i)
    {
        for (int j = 0; j < 2; ++j)
        {
            arr[i][j] = max(arr[i][j] + arr[i + 1][1 - j], arr[i + 1][j]);
        }
    }
    cout << max(arr[0][1], arr[0][0]);

}

int main()
{
    ios_base::sync_with_stdio(0);
    cout.tie(0);
    cin.tie(0);

    int t;
    t = 1;
    //cin >> t;
    for (int i = 0; i < t; ++i)
        solve(i);

    return 0;
}
