#include <iostream>
#include <string>

using namespace std;

int cases;

int main()
{
  ios::sync_with_stdio(false);
  cin>>cases;
  for (int cas=0;cas<cases;cas++) {
    int n;
    string s;
    cin>>n>>s;
    if (3<=n or s[0]<s[1]) {
      cout<<"YES"<<endl;
      cout<<2<<endl;
      cout<<s[0]<<" "<<s.substr(1)<<endl;
    } else {
      cout<<"NO"<<endl;
    }
  }
}
