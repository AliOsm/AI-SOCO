#include <algorithm>
#include <iostream>
#include <map>

using namespace std;
const int N = 10000;
string vs[] = { "O-|-OOOO",
				"O-|O-OOO",
				"O-|OO-OO",
				"O-|OOO-O",
				"O-|OOOO-",
				"-O|-OOOO",
				"-O|O-OOO",
				"-O|OO-OO",
				"-O|OOO-O",
				"-O|OOOO-",};
int main()
{
	string s; cin >> s;
	for(int i = s.length()-1; i >= 0; i--)
	{
		cout << vs[s[i]-'0'] << endl;
	}
	return 0;
}