#include <bits/stdc++.h> 

#define all(x) x.begin(), x.end()
#define ll long long
#define pb push_back
#define S second
#define F first
#define mp make_pair

using namespace std;
const int INT = int(1e5) + 5;
const int INF = int(1e9) + 7;
inline void boost () {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);
}

int main () {
	boost ();
	int n, m;
	cin >> n >> m;
	cout << min(n, m) + 1 << " ";
		int x = n, y = 0;
		for (int i = 0; i < min(n, m) + 1; i ++) {
			cout  << x <<  " " << y << endl;
			x --;
			y ++;
		}
	return 0;
}              