#include<bits/stdc++.h>
#define long long long
using namespace std;
const int N=1e6,inf=1e9;
int main()
{
  ios_base::sync_with_stdio(0);cin.tie(0);
  int t;cin>>t;
  while(t--)
  {
    int n,k;cin>>n>>k;

    int a=k/n;int md=k%n;
    cout<<1LL*(a+1)*(a+1)*md+1LL*a*a*(n-md)<<"\n";
  }
  return 0;
}