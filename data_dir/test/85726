#define _CRT_SECURE_NO_WARNINGS

#include <iostream>
#include <conio.h>
#include <cstdlib>
#include <ctime>
#include <cmath>
#include <cstring>
#include <string>
#include <vector>
#include <stdio.h>
#include <climits>
#include <Windows.h>
#include <set>
#include <iterator>

using namespace std;

typedef unsigned long long ull;
typedef long long ll;

void bla()
{
    string s;

    cin >> s;

    vector<int> vec;

    for (int i(0); i < s.size(); i++)
    {
        vec.push_back(s[i] - '0');
    }

    int temp(0);

    for (int i(0); i < vec.size(); i++)
        if (vec[i] == 4 || vec[i] == 7)
            temp++;

    cout << ((temp == 4 || temp == 7) ? "YES" : "NO");


}


int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);


    bla();


    //_getch();
    return 0;
}