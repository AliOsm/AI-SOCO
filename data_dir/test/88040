#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
const int maxn = 1e5 + 17;

int main(){
	ios::sync_with_stdio(0), cin.tie(0);
	int n;
	cin >> n;
	while(true){
		string s = to_string(n);
		int sum = 0;
		for(auto c : s)
			sum += c - '0';
		if(sum % 4 == 0){
			cout << n << '\n';
			return 0;
		}
		n++;
	}
}
	
