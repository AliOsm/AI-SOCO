#define pb push_back
#define ff first
#define ss second
#define ll long long
#define IOS ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL)
#define maxn 1005
#define mod 1000000007
#include <bits/stdc++.h>
using namespace std;
 
 
 
int main() {
 
    int tc;
    cin >> tc;
    while(tc--){
        ll x, y, n, sum, b, w;
        cin >> n >> x >> y;
        sum = (x + y);
        if( sum <= n){
            b = 1;
            w = sum - 1;
        }
        else{
            b = min(n, sum - n + 1);
            w = n;
        }
        cout << b << " "<< w << endl;
 
 
    }
    return 0;
}