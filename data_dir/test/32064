#include <bits/stdc++.h>

using namespace std;

class ADrazilAndDate {
public:
    void solve(std::istream &in, std::ostream &out) {
        int a, b, c;
        in >> a >> b >> c;
        if (c < (abs(a) + abs(b)) || (c - (abs(a) + abs(b))) % 2 != 0) {
            out << "No" << "\n";
        } else {
            out << "Yes" << "\n";
        }
    }
};


int main() {
	ADrazilAndDate solver;
	std::ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
