#include<bits/stdc++.h>
using namespace std;
 
#define ll long long
#define __   ios_base::sync_with_stdio(0);cin.tie();cout.tie();
#define for(i,a,b) for(i=a;i<=b;i++)
#define mem(arr) memset(arr,0,sizeof(arr));
 
ll ar[]={0,0,1,-1};
ll br[]={1,-1,0,0};
 
string s[1000];
ll n,m;
ll arr[500000];
ll brr[500000];
 
int main()
{__
        ll i,j,a,b,c;
    cin>>a>>b>>c;
    if(a%c==0||b%c==0||(a%c+b%c)<c) cout<<(a+b)/c<<" "<<0<<endl;
    else{
        if(a%c>b%c){
            cout<<(a+b)/c<<" "<<c-a%c<<endl;
        }
        else
            cout<<(a+b)/c<<" "<<c-b%c<<endl;
    }
}
 