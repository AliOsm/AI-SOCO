using namespace std;

int cop,orig;

int main(){
	
	cin >> cop >> orig;
	
	if (orig==0) cout << "NO";
	else if (orig==1 && cop!=0) cout << "NO";
	
	else if (cop<orig-1 || (cop-orig-1)%2) cout << "NO";
	else cout << "YES";
	
}


