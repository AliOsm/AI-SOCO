#include <bits/stdc++.h>
using namespace std; 
#define FOR(i,begin,end) for (int i=begin;i<=end;++i)
#define rep(i,t) for (int i=0;i<t;++i)
#define pb push_back
#define mp make_pair
#define endl '\n'
typedef long long ll;
int main()
{
    ios_base::sync_with_stdio(false);
    int n;
    cin >> n;
    if(n<3)
        cout << -1;
    if(n==3)
        cout << 210;
    if(n > 3)
    {
        cout<<1;
        rep(i,n-4)
            cout<<0;
        if(n%6==4)
            cout<<"050";
        if(n%6==5)
            cout<<"080";
        if(n%6==0)
            cout<<"170";
        if(n%6==1)
            cout<<"020";
        if(n%6==2)
            cout<<"200";
        if(n%6==3)
            cout<<"110";
    }
    return 0;
}
