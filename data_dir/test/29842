#include<bits/stdc++.h>
using namespace std;
int main (){
    int n;
    cin >> n;
    if (n== 1)
    {
        int x ;
        cin >> x;
        if (x==1)
            return puts("YES");
        else
            return puts("NO");
    }
    int cnt = 0 ;
    for(int i = 0 ; i < n ; i++)
    {
        int x;
        cin >> x;
        if (x)
            cnt ++;
    }
    if (cnt == n -1)
        cout <<"YES";
    else cout <<"NO";
    return 0;
}
