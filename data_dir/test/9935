#include <bits/stdc++.h>
#define int long long
#define ld long double
using namespace std;

const int MAXN = 1001 * 1001   ;


 main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);
    int n,k , ans = 0 ;
    cin >> n >> k ;
    while(n>1&&k)
    {
        ans+=2*n-3;
        n-=2;
        k--;
    }
    cout<<ans;

}
