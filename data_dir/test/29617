#define ll long long
#define ss second
#define ff first
using namespace std;
ll n,m,x,y,xx,yy;
int main(){
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>x>>y>>xx>>yy;
        m+=(abs(x-xx)+1)*(abs(y-yy)+1);
    }
    cout<<m;
    return 0;
}