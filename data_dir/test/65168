#include<iostream>

using namespace std;

int main(){
    int n;
    cin >> n;
    int f1;
    int ans=0;
    f1=n/100;
    ans+=f1;
    n-=f1*100;
    f1=n/20;
    ans+=f1;
    n-=f1*20;
    f1=n/10;
    ans+=f1;
    n-=f1*10;
    f1=n/5;
    ans+=f1;
    n-=f1*5;
    f1=n/1;
    ans+=f1;
    n-=f1*1;
    cout << ans;
    
}