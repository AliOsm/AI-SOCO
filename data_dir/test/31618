#include <bits/stdc++.h>

using namespace std;

int main()
{
    int k;
    cin >> k;
    if (k <= 36)
    {
        string res;
        k -= 2;
        while (k >= 0)
        {
            res += '8';
            k -= 2;
        }
        if (k + 2 > 0)
        {
            res += '4';
        }
        cout << res;
    }
    else
    {
        cout << "-1";
    }
    return 0;
}
