#include <bits/stdc++.h>

#define long long long

using namespace std;

int main() {
	ios_base::sync_with_stdio(false), cin.tie(0);

	int TC ; cin >> TC ;

	while(TC --)
	{
		int n ; string s ;
		cin >> n >> s ;

		if(n == 2)
		{
			if(s[0] >= s[1])
				cout<< "NO" << endl ;
			else cout << "YES\n2\n" << s[0] << " "<<s[1] << endl;
		}
		else cout << "YES\n2\n"<< s[0] << " " << s.substr(1 , n) << endl;

	}

	return 0;

}
