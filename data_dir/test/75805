#include <iostream>
#include <cstdio>
using namespace std;

int main() {
	int k;
	cin >> k;
	char b[34];
	for(int i = 0; i < 34; i++) {
		b[i] = '#';
	}
	for(int i = 0; i < k; i++) {
		b[i] = 'O';
	}
	printf("+------------------------+\n|%c.%c.%c.%c.%c.%c.%c.%c.%c.%c.%c.|D|)\n|%c.%c.%c.%c.%c.%c.%c.%c.%c.%c.%c.|.|\n|%c.......................|\n|%c.%c.%c.%c.%c.%c.%c.%c.%c.%c.%c.|.|)\n+------------------------+\n",
		   b[0],b[4],b[7],b[10],b[13],b[16],b[19],b[22],b[25],b[28],b[31],
		   b[1],b[5],b[8],b[11],b[14],b[17],b[20],b[23],b[26],b[29],b[32],
		   b[2],
		   b[3],b[6],b[9],b[12],b[15],b[18],b[21],b[24],b[27],b[30],b[33]);
	return 0;
}