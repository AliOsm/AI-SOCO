#include <bits/stdc++.h>

#define int         long long
#define pb          push_back
#define pii         pair<int,int>
#define vi          vector<int>
#define vii         vector<pii>
#define mi          map<int,int>
#define mii         map<pii,int>
#define all(a)      (a).begin(),(a).end()
#define x           first
#define y           second
#define sz(x)       (int)x.size()
#define endl        '\n'
#define hell        1000000007
#define rep(i,a,b)  for(int i=a;i<b;i++)
using namespace std;
int d,m;
void solve(){
    cin>>d>>m;
    int ans=1;
    int w=log2(d);
    rep(len,1,w+2){
        int l=1<<(len-1);
        int r=min(d,(1LL<<len)-1);
        ans=ans*(r-l+2)%m;
    }
    cout<<(ans+m-1)%m<<endl;
}

signed main(){
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    int t=1;
    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}