#include <bits/stdc++.h>
#define ll long long
#define INF 10000000000
using namespace std;
int main()
{
    //ifstream cin("in.in");
    ll sk;
    cin >> sk;
    sk = sk % 4;
    if(sk == 1) cout << "0 A";
    else if(sk==3) cout << "2 A";
    else if(sk==0) cout << "1 A";
    else cout << "1 B";
    //cin.close();
	return 0;
}
