#include <iostream>
#include <cstdio>
using namespace std;
int main(){
    int n;
    cin>>n;
    if(n%2==0) puts("-1");
    else{
        for(int i=0;i<n;i++)
            cout<<i<<endl;
        for(int i=0;i<n;i++)
            cout<<i<<endl;
        for(int i=0;i<n;i++)
            cout<<(i+i)%n<<endl;
    }
}