#include <stdio.h>
#include<iostream>
#include<string>
#include<cstring>
#include<vector>
using namespace std;
int main()
{
  int a;
  int b;
  int c;
  cin>>a;
  cin>>b;
  cin>>c;
  if(c!=0)
  {
if(b<a && c>0)
{
    cout<<"NO";
    return 0;
}
if(b>a && c<0)
{
    cout<<"NO";
    return 0;
}
  if((b-a)%c==0)
  cout<<"YES";
  else
  cout<<"NO";
  }
  else
  {
      if(b-a==0)
      cout<<"YES";
      else
      cout<<"NO";
  }
}
