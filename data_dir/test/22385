template<class T> using Tree = tree<T, null_type, less<T>, rb_tree_tag, tree_order_statistics_node_update>;

typedef long long ll;
typedef long double ld;
typedef pair<ll, ll> pll;
typedef pair<double, double> pdd;

#define all(x)                      (x).begin(),(x).end()
#define Sort(x)                     sort(all((x)))
#define X                           first
#define Y                           second
#define sep                         ' '
#define endl                        '\n'
#define SZ(x)                       ll(x.size())

ll poww(ll a, ll b, ll md) {
    return (!b ? 1 : (b & 1 ? a * poww(a * a % md, b / 2, md) % md : poww(a * a % md, b / 2, md) % md));
}

const ll MAXN = 1e6 + 10;
const ll LOG = 22;
const ll INF = 1e18;
const ll MOD = 1e9 + 7; // 998244353; // 1e9 + 9;

ll n, m, p, ans = -INF, A[MAXN], B[MAXN], Ca[MAXN], Cb[MAXN], x[MAXN], y[MAXN], z[MAXN], val[MAXN], seg[MAXN << 2], lz[
    MAXN << 2];
vector<ll> Q[MAXN], Add[MAXN];

void build(int id = 1, int l = 0, int r = MAXN) {
    if (r - l == 1) {
        seg[id] = val[l];
        return;
    }
    int mid = l + r >> 1;
    build(id << 1, l, mid);
    build(id << 1 | 1, mid, r);
    seg[id] = max(seg[id << 1], seg[id << 1 | 1]);
}

void shift(int id) {
    seg[id << 1] += lz[id];
    seg[id << 1 | 1] += lz[id];
    lz[id << 1] += lz[id];
    lz[id << 1 | 1] += lz[id];
    lz[id] = 0;
}

void update(int ql, int qr, int x, int id = 1, int l = 0, int r = MAXN) {
    if (qr <= l || r <= ql) return;
    if (ql <= l && r <= qr) {
        lz[id] += x;
        seg[id] += x;
        return;
    }
    shift(id);
    int mid = l + r >> 1;
    update(ql, qr, x, id << 1, l, mid);
    update(ql, qr, x, id << 1 | 1, mid, r);
    seg[id] = max(seg[id << 1], seg[id << 1 | 1]);
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    fill(val, val + MAXN, -INF);

    cin >> n >> m >> p;
    for (ll i = 1; i <= n; i++) {
        cin >> A[i] >> Ca[i];
        Q[A[i]].push_back(i);
    }
    for (ll i = 1; i <= m; i++) {
        cin >> B[i] >> Cb[i];
        val[B[i]] = max(val[B[i]], -Cb[i]);
    }
    build();
    for (ll i = 1; i <= p; i++) {
        cin >> x[i] >> y[i] >> z[i];
        Add[x[i]].push_back(i);
    }

    for (ll i = 0; i < MAXN; i++) {
        for (ll j : Q[i]) ans = max(ans, seg[1] - Ca[j]);
        for (ll j : Add[i]) update(y[j] + 1, MAXN, z[j]);
    }
    cout << ans << endl;

    return 0;
}
