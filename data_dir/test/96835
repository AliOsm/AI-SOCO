const int INF = (int)1e9;
const LL  INFF = (LL)1e18;
const int mod = (int)1e9 + 7;
const int MXN = (int)2e5 + 7;
inline LL add(LL v1, LL v2){
	v1 += v2;
	if (v1 >= mod) v1 -= mod;
	if (v1 < 0) v1 += mod;
	return v1;
}
