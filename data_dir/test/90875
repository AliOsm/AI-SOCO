#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef pair < double , double > pd;
const int maxn = (int) 1e5 + 1;

int n, m;
int p1, p2 = 1;
int main(){
    cin >> n >> m;
    cout << min(n, m) + 1 << "\n";
    for(int i = 0; i <= min(n, m); i++){
        cout << i << " " << min(n, m) - i << "\n";
    }
}
