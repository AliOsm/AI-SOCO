#include <bits/stdc++.h>

using namespace std;

using ll = long long;

int main()
{
    int i , j , k , n ;
    double mn = 1000000000.0 , temp , a , b , m;
    cin >> n >> k;
    m=  (double)k;
    for(i = 0 ; i < n ; i++)
    {
        cin >> a >> b;
        temp = (a*m)/b;
        mn = min(temp,mn);
    }

    cout << setprecision(10) << fixed << mn << endl;


    return 0;
}

