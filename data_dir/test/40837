#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <set>
#include <queue>
#include <deque>
#include <map>
#include <stack>
#include<bitset>
#include<list>
#include<cassert>
#include<numeric>
#include<string>

using namespace std;

long long cnt = 0;

int main() 
{
	int n;
	cin >> n;
	string s;
	cin >> s;
	for (int i = 0; i < s.size(); i++)
	{
		if (s[i] == '1')
			cnt++;
		else
			break;
	}
	if (cnt < s.size())
	{
		cnt++;
	}
	cout << cnt << endl;

	
	
}


