#include<iostream>
#include<cstdio>
#include<vector>
#include<map>
#include<set>
#include<algorithm>
#include<cmath>
#include<sstream>

using namespace std;

#define ll long long

int main()
{
// freopen("a.in","r",stdin);
    int n,a,b,c,d,sum,co=1,john;

    cin>>n;
    cin>>a>>b>>c>>d;
    john=a+b+c+d;
    while(--n)
    {
        cin>>a>>b>>c>>d;
        sum=a+b+c+d;
        if(sum>john)
        {
            co++;
        }
    }
    cout<<co<<endl;
}
