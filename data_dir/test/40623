//ll SET(ll mask,ll pos){ return mask = (mask | (1ll<<pos)); }
//ll RESET(ll mask,ll pos){ return mask = mask & ~(1ll<<pos); }
//bool CHECK(ll mask,ll pos) { return (bool) (mask & (1ll<<pos)); }
//priority_queue <ll, vector<ll>, greater<ll> > pq;

ll a[105];
int main(){
    ll tc,n,val=0,ans=0;
    sfl(tc);
    FOR(cs,tc){
        sfl(n);
        ans=val=0;
        for(ll i=1;i<=n;i++){
            sfl(a[i]);
            if(a[i]==0){
                a[i]=1;
                ans++;
            }
            val += a[i];
        }
        if(val==0) ans++;
        pfl(ans);
    }
    return 0;
}