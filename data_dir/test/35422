#include<iostream>
using namespace std;
int main()
{
long  n,i,x;
cin>>n;
if(n%4==0)
{
x=((n%28))/4;
for(i=1;i<=x;i++)
    cout<<4;
x=(n-x*4)/7;
for(i=1;i<=x;i++)
    cout<<7;
}
else if(n%4==1 && n>=21)
{
 n-=21;
 x=((n%28))/4;
for(i=1;i<=x;i++)
    cout<<4;
x=(n-x*4)/7;
for(i=1;i<=x;i++)
    cout<<7;
     cout<<777;
}
else if(n%4==2 && n>=14)
{
    n-=14;
    x=((n%28))/4;
for(i=1;i<=x;i++)
    cout<<4;
x=(n-x*4)/7;
for(i=1;i<=x;i++)
    cout<<7;
    cout<<77;
}
else if(n%4==3 && n>=7)
{
    n-=7;
x=((n%28))/4;
for(i=1;i<=x;i++)
    cout<<4;
x=(n-x*4)/7;
for(i=1;i<=x;i++)
    cout<<7;
    cout<<7;
}
else cout<<-1;


}
