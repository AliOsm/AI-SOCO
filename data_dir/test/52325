#include <bits/stdc++.h>
#define ll long long
#define mp make_pair
#define PI 3.14159265

/*
*
* Zaiiiiiin
*
*/

using namespace std;

typedef pair<int,int> ii;

int x, y, z, ans;

int main(){
  cin >> x >> y >> z;
  ans = x + y + z;
  ans = min(ans, x + x + y + y);
  ans = min(ans, x + x + z + z);
  ans = min(ans, z + z + y + y);
  cout << ans;
  return 0;
}
