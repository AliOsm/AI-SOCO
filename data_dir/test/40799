//head

const int N = 105;
int a[N];
int main() {
    int n;
    scanf("%d", &n);
    int mx = 0, sum = 0;
    for (int i = 1; i <= n; i++) scanf("%d", &a[i]), sum += a[i], mx = max(mx, a[i]);
    for (int i = mx; ; i++) {
        if(i*n - sum > sum) {
            printf("%d\n", i);
            return 0;
        }
    }
    return 0;
}
