using namespace std;

#define ma  100005

int main()
{
    ll n,i,j;
    while(cin>>n)
    {
        vector<pair<ll,ll> > v;
        ll ans=n-1;
        for(i=1;i<n;i++)v.pb(mk(i,i+1));
        if(n>3)
        {
            for(i=1;i<=n;i++)
            {
                for(j=i+3;j<=n;j+=2)v.pb(mk(i,j));
            }
        }

        cout<<v.sz<<endl;
        f(i,0,v.sz)cout<<v[i].ff<<" "<<v[i].ss<<endl;
    }
    return 0;
}
