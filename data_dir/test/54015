#include<bits/stdc++.h>
using namespace std;
#define Jewel ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

int main()
{
    Jewel;
    int n, m, i, j;
    cin>>n>>m;
    cout<<n+m-1<<endl;
    for(i=1; i<=m; i++)
    {
        cout<<"1"<<" "<<i<<endl;
    }
    for(i=2; i<=n; i++)
    {
        cout<<i<<" "<<"1"<<endl;
    }
    return 0;
}

