#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define endl '\n';
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
const ll mod=1e9+7;

int main(){
	IOS;
	int q;
	cin>>q;
	while(q--){
		ll n,a,b;
		cin>>n>>a>>b;
		ll ans=0;
		if(2*a < b){
			ans=n*a;
		}
		else{
			ans=(n/2)*b+(n%2)*a;
		}
		cout<<ans<<endl;
	}
	return 0;
}