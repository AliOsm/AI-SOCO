using namespace std;

#define EPS 1e-9
#define INF MOD
#define MOD 1000000007LL
#define fir first
#define iss istringstream
#define sst stringstream
#define ite iterator
#define ll long long
#define mp make_pair
#define rep(i,n) rep2(i,0,n)
#define rep2(i,m,n) for(int i=m;i<n;i++)
#define pi pair<int,int>
#define pb push_back
#define sec second
#define sh(i) (1LL<<i)
#define sz size()
#define vi vector<int>
#define vc vector
#define vl vector<ll>
#define vs vector<string>

int n,a,b,c,ans;
vi v;

int main(){
	cin>>n;
	rep(i,n){
		cin>>a>>b;
		if(b>0)ans+=a,c+=b-1;
		else v.pb(a);
	}
	sort(v.begin(),v.end());
	reverse(v.begin(),v.end());
	rep(i,min((int)v.sz,c+1))ans+=v[i];
	cout<<ans;
}
