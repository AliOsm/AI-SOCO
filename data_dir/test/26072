#include <bits/stdc++.h>

using namespace std; 	
typedef long long ll;
typedef unsigned long long ull;
const int N = 1e5+50;
const int oo = 1e9;
const int mod = 1e9+7;

int main(){
	int n,k,d=0,p=0;
	scanf("%d%d",&n,&k);
	for(int i=0;i<n;i++){
		int a;
		scanf("%d",&a);
		p += ceil(a/(k+0.0));
		d+= p/2;
		p%=2;
	}
	cout << d+p << endl;
}