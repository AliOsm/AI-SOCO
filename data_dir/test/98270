//////////////////////////////////////////

int main(){
    int tc = 1 ;
    while( tc-- ){
        int n = Int , m = Int , k = Int , arr[ n + 1 ] , ind[ n + 1 ] ;
        fr( i , 1 , n , 1 ){
           int u = Int ;
           arr[ u ] = i ;
           ind[ i ] = u ;
        }
        ll ans = 0 ;
        fr( i , 1 , m , 1 ){
            int u = Int ;
            int d = arr[ u ] ; //cout<<d<<endl;
            ans += ( ( d / k ) ) ;
            if( arr[ u ] != 1 ){
                arr[ u ] = d - 1 ;
                arr[ ind[ d - 1 ] ] = d ;
                swap( ind[ d ] , ind[ d - 1 ] ) ;
            }
            if( d % k ) ans++ ;
        }
        cout<<ans<<"\n";
    }
 done ;
}
