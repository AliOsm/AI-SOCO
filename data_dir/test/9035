#include <iostream>
using namespace std;
int main()
{
   int n, kol = 0;
   cin >> n;
   string s = """";
   s = "I hate";
   for(int i = 2; i <= n; i++)
   {
       if(i % 2 == 0)
       {
           s = s + ' ';
           s = s+ "that I love";
       }
       else
       {
           s  = s + ' ';
           s = s + "that I hate";
       }

   }
   cout << s << ' ' << "it";
}
