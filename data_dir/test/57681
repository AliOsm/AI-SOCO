const int N=100005;
typedef pair<int,int>ii;
typedef pair<ii,int>event;

int gcd(int a, int b) { return b == 0 ? a : gcd(b, a % b); }


int main()
{
 //   freopen("test.in","r",stdin);
    // freopen("test.out","w",stdout);
  int n;
  cin>>n;
  for(int i=0;i<n;i++){
    int a=4*i;
    int rest=n-a;
    if(abs(rest)%7||rest<0)continue;
    for(int j=0;j<i;j++)cout<<4;
      while(rest){
        cout<<7;
        rest-=7;
    }
    return 0;
  }
  cout<<-1;
  return 0;
}
