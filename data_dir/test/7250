#include <cstdio>
#include <cmath>

int main()
{
     int x1, y1, x2, y2;
     
     scanf("%d%d%d%d", &x1, &y1, &x2, &y2);
     
     int width, height;
     if (x1 == x2)
          width = 2;
     else
          width = fabs(x1 - x2) + 1;
          
     if (y1 == y2)
          height = 2;
     else
          height = fabs(y1 - y2) + 1;
          
     printf("%d\n", (width + height) * 2);
     
     return 0;
}
