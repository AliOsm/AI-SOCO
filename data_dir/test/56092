#include<bits/stdc++.h>
using namespace std;
#define forr(i,a,n) for(int i=a; i<n; i++)
#define loop(i,a,n)	for(int i=a; i>=n; i--)
#define conti continue
#define brk break
#define pb push_back
#define SPEED ios_base :: sync_with_stdio(0), cin.tie(0), cout.tie(0)
#define in cin>>
#define out cout<<
#define endl <<"\n"
#define ll long long 

int main() 
{
	SPEED;
	
	int a;
	in a;

	string s1="I hate ",s2=" I love ";
	forr(i,0,a)
	{
		if(i==0)	out s1;
		if(i%2==0&& i>0)	out " "<<s1;
		if(i%2!=0)	out s2;
		if(i!=a-1)	out "that";
		if(i==a-1)	out "it";
	
	}
	
	return 0;
}