#include <bits/stdc++.h>
#include <stdio.h>
#include <string.h>
using namespace std;
int min(long long a, long long b)
{
	if (a<b) return a;
	else
	return b;
}
int max(long long a, long long b)
{
	if (a<b) return b;
	else
	return a;
}

int main()
{
	ios::sync_with_stdio(false);
	cin.tie(0);
	
	
	long w1,h1,w2,h2;
	cin>>w1>>h1>>w2>>h2;
	cout<<2*h1 + 2 + w1 + 2*h2 + 2 + w2 + abs(w1-w2)<<endl;
	return 0;
}