ll n,m,i,j,a[500005],ans,lys=1e9+7,fa[500005];
ll qp(ll x,ll y)
{
	ll z=1;
	while (y)
	{
		if (y&1)
		{
			z=z*x%lys;
		}
		y/=2;x=x*x%lys;
	} 
	return z;
}
ll fnd(ll x)
{
	if (fa[x]==x) return x;
	return fa[x]=fnd(fa[x]); 
}
int main()
{
	fast;
	cin>>n>>m;
	rep(i,n) fa[i]=i;
	rep(i,n-1)
	{
		ll x,y,z;
		cin>>x>>y>>z;
		if (!z) fa[fnd(x)]=fnd(y);
	}
	ans=qp(n,m);
	map<ll,ll> cnt;
	rep(i,n) cnt[fnd(i)]++;
	lyscsc(it,cnt)
	{
		(ans-=qp(it->se,m))%=lys;
	}
	(ans+=lys)%=lys;
	cout<<ans<<endl;
	return 0;
}