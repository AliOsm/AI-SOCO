#include <bits/stdc++.h>
#define fr first
#define se second
#define r_0 return 0
#define ll long long
#define pb push_back
#define TIME ios_base::sync_with_stdio(0);
using namespace std;

const long long INF = 1e6;
const long long N = 1e3 + 7;
const long long mod = 1e9;
const long double eps = 1E-7;

ll a , b  , cnt , n , m , ans , sum;
string s , s1;
vector<int>v;
int main(){
    ll T;
    cin >> T;
    while( T -- ){
        cin >> n >> m;
        for ( int i = 0; i < n; i ++ ){
            for ( int j = 0; j < m; j ++ ){
            if( i == 0 and j == 0 )
            cout << "W";
            else
                cout << "B";
            }
            cout << endl;
    }

}
}
