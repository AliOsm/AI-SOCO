#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, ans, mx;
map < i64 , i64 > pos;
map < i64 , bool > ya;
i64 sm[MAX];

int main()
{
    optimiza_io
    cin >> N;
    mx = 0;
    pos[0] = 0;
    ya[0] = 1;
    for( i64 i = 1; i <= N; i ++ ) {
        cin >> sm[i];
        if( ! sm[i] )
            mx = i;
        sm[i] += sm[i - 1];
        if( ya[sm[i]] )
            mx = max( mx , pos[sm[i]] + 1 );
        ans += i - mx;
        pos[sm[i]] = i;
        ya[sm[i]] = 1;
    }
    
    cout << ans << "\n";
    return 0;
}

