	char tc;
	for (int i = 0; i < n; i++) {
		scan(l);
		scan(r);
		scan(k);
		k %= (r - l + 1);

		for (int i = l - 1; i < r - k; i++) {
			strb[i + k] = stra[i];
		}
		for (int i = r - k; i < r; i++) {
			strb[l - 1 + i - (r - k)] = stra[i];
		}
		memcpy(stra + l - 1, strb + l - 1, (r - l + 1));
	}

//	long long nowa = 0;
