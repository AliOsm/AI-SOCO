#include <bits/stdc++.h>

using namespace std;

int main()
{ios_base::sync_with_stdio(0);cout.tie(0);cin.tie(0);
    int t;
    cin>>t;
    while(t--){
        long long n,k;
        cin>>n>>k;
        bool ans=0;
        if(k*k>n){
            cout<<"NO"<<endl;
            continue;
        }
        if(k%2!=n%2){
            cout<<"NO"<<endl;
            continue;
        }
        cout<<"YES"<<endl;
    }
    return 0;
}
