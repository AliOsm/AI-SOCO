#include <bits/stdc++.h>
#define LL long long
#define pb push_back
#define mp make_pair
#define fi first
#define sc second
using namespace std;

int main() {
    LL a,b,c;
    cin>>a>>b>>c;
    if((b<a && c>0) || (b>a && c<0)){
        cout<<"NO"<<endl;
    }
    else if(b-a==0){
        cout<<"YES"<<endl;
    }
    else if(b-a!=0 && c==0){
        cout<<"NO"<<endl;
    }
    else if((b-a)%c==0){
        cout<<"YES"<<endl;
    }
    else cout<<"NO"<<endl;
	return 0;
}
