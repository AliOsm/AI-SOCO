#include <iostream>
#include <string>
#include <vector>
#include <set>
#include <map>
#include <stack>
#include <queue>
#include <cstdio>
#include <algorithm>
#include <cmath>
using namespace std;

#define ll long long
#define MP make_pair

const int MAX_VALUE = 1e9 + 7;

int main()
{
    int n = 0;
    cin >> n;

    ll ans = 1;
    for (int i = 1; i <= n; ++i) ans <<= 1;
    ans--;
    ans <<= 1;

    cout << ans << endl;

    return 0;
}












