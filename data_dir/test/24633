ll n , k , cnt , ans , l=2 , mx , x , y,a,b,c;
ll mn=1e9+7;
const ll N=1e5+7;
int main(){
cin >> n;
for( int i=0; i < n;i ++ ){
        cnt=0;
    cin >> a >> b >> c;
if( a==1 ){
    cout<<b<<endl;
    continue;
}
else if( b*2<=c ){
    cout<<a*b<<endl;
    continue;
}
else if( a%2==0 ){
    cout<<a/2*c<<endl;
    continue;
}
else if( a%2!=0 ){
    cout<<a/2*c+b<<endl;
    continue;
}
}
