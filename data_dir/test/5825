#include <bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t; while (t--) {
		long long x, y, a, b; cin >> x >> y >> a >> b;
		long long t = (y - x) / (a + b);
		x += a * t, y -= b * t;
		if (x == y) {
			cout << t << '\n';
			continue;
		}
		// ++t;
		// x += a;
		// if (x == y) {
		// 	cout << t << '\n';
		// 	continue;
		// }
		// ++t;
		// y -= b;
		// if (x == y) {
		// 	cout << t << '\n';
		// 	continue;
		// }
		cout << -1 << '\n';
	}
}
