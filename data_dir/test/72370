#include <bits/stdc++.h>
using namespace std;

#define FastIO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl "\n"
#define long int64_t

int main()
{
    FastIO;
    int n, i, v, ans = 0;
    cin >> n >> v;
    for(i = 1; i < n; ++i)
        ans += max(1, i-(v-1));
    cout << ans;
    return 0;
}
