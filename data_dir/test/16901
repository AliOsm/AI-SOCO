#include<bits/stdc++.h>
using namespace std;
#define ll  long long
#define FASTINOUT ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
const ll mod = 1e9+7;
const int N=5009;
int main()
{
    FASTINOUT;
    int q;
    cin>>q;
    while (q--)
    {
        int r,c;
        cin>>r>>c;
        int cc=2;
        for (int i=0; i<r; i++)
        {
            for (int j=0; j<c; j++)
            {
                if (cc)
                {
                    if (cc&1)
                        cout<<"B";
                    else
                        cout<<"W";
                    cc--;
                }
                else
                    cout<<"B";
            }
            cout<<endl;
        }
    }
    return 0;
}
