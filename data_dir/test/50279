#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, Q;
string s;
int cnt[MAX][3];

int sum( int l , int r , int t ) { return cnt[r][t] - cnt[l - 1][t]; }

int main()
{
    optimiza_io
    cin >> s;
    N = s.size();
    for( int i = 1; i <= N; i ++ ) {
        for( int j = 0; j < 3; j ++ )
            cnt[i][j] = cnt[i - 1][j];
        cnt[i][s[i - 1] - 'x']++;
    }
    
    cin >> Q;
    while( Q -- ) {
        int l, r;
        cin >> l >> r;
        int x = sum( l , r , 0 );
        int y = sum( l , r , 1 );
        int z = sum( l , r , 2 );
        int mx = min( x , min( y , z ) );
        x -= mx;
        y -= mx;
        z -= mx;
        if( ( x > 1 or y > 1 or z > 1 ) && r - l + 1 >= 3 )
            cout << "NO\n";
        else
            cout << "YES\n";
    }
    return 0;
}
