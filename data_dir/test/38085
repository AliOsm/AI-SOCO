#include<iostream>

using namespace std;

int main(){
	
	int n,t;
	cin>>n>>t;
	
	if(n==1 && t==10){
		cout<<"-1";
		return 0;
	}
	
	if(n==1){
		cout<<t;
		return 0;
	}
	
	if(n>1){
		if(t==10){
			
			for(int i=0;i<n/2;i++){
			cout<<t;
			
		}
		if(n%2==1){
			cout<<"0";
		}
		return 0 ;	
		}
		for(int i=0;i<n;i++){
			cout<<t;
		}
	}
	
}
