#include<bits/stdc++.h>
#define MAX 200005
#define se second
#define fi first
#define pii pair < i64 , i64 >
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, K, ans;
pii a[MAX];
bool vis[MAX];

int main()
{
    optimiza_io
    cin >> N >> K;
    for( i64 i = 1; i <= N; i ++ )
        cin >> a[i].se;
    for( i64 i = 1; i <= N; i ++ )
        cin >> a[i].fi;
    
    sort( a + 1 , a + N + 1 );
    for( i64 i = N; i >= 1; i -- )
        if( ! vis[a[i].se] )
        {
            vis[a[i].se] = 1;
            K--;
            a[i].fi = -1;
        }
    
    for( i64 i = 1; i <= N; i ++ )
        if( a[i].fi != -1 && K )
        {
            K--;
            ans += a[i].fi;
        }
    
    cout << ans;
    return 0;
}