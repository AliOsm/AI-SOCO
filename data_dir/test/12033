#include<bits/stdc++.h>
#define MEM(dp,i) memset(dp,i,sizeof(dp))
#define R return
#define F first
#define S second
#define C continue
#define pb push_back
using namespace std;
typedef long long ll;
typedef pair<ll,ll> pll;
typedef pair<int,int> pii;
const int MX=2e5+9;
const ll mod=1e9+7;
const ll inf=(1ll<<60);
int n;
int cel(int x,int y){
    if(x%y==0)R x/y;
    R x/y+1;
}
int main(){
    cin>>n;
    cout<<cel(n,2)-1<<endl;
}
