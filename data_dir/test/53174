#include <bits/stdc++.h>

using namespace std;

int main() {
	ios::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);
	
	const int N = 5e5 + 1, S = 710;
	vector<long long> a(N);
	vector<vector<long long>> mod(S, vector<long long>(S));
	int q;
	cin >> q;
	while (q--) {
		int t, x, y;
		cin >> t >> x >> y;
		if (t == 1) {
			a[x] += y;
			for (int i = 1; i < S; ++i) {
				mod[i][x % i] += y;
			}
		}
		else {
			if (x < S) {
				cout << mod[x][y];
			}
			else {
				long long ans = 0;
				for (int i = y; i < N; i += x) {
					ans += a[i];
				}
				cout << ans;
			}
			cout << '\n';
		}
	}

	return 0;
}