#include <bits/stdc++.h>
#pragma GCC optimization ("unroll-loops")
#pragma GCC optimization ("O2")
#pragma GCC target("popcnt")
#pragma GCC target ("avx2")
using namespace std;

int main(){
	int t;
	cin >> t;
	while(t--){
		long long a,b,k;
		cin >> a >> b >> k;
		if(k % 2 == 0){
			cout << (a-b)*(k/2) << endl;
		}else{
			cout << a*(k/2+1)-b*(k/2) << endl;
		}
	}
}