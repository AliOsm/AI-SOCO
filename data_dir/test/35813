#include <bits/stdc++.h>
#define F first
#define S second
using namespace std;
typedef long long ll;
typedef double D;
const ll mod=1e9+7;
const ll inf=(1ll<<61);
const int MX=3e5+9;
int l,r,a;
int main(){
    cin>>l>>r>>a;
    int x=min(l,r),y=max(l,r);
    cout<<(x + min(y-x,a) + max(0,(a-(y-x))/2))*2 << endl;
}
