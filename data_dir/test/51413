#include <bits/stdc++.h>
using namespace std;
typedef unsigned int uint;
typedef long long ll;

#define fori(n) for(ll i=0; i<(n); i++)
#define forn(i, n) for(ll i=0; i<(n); i++)
#define forn3(i, x, n) for(ll i=(x); i<(n); i++)

int main() {
cin.tie(nullptr);
std::ios::sync_with_stdio(false);
    int a, b, c;
    cin>>a>>b>>c;

    ll ans=2LL*c + 2LL*min(a, b);
    if(b!=a)
        ans++;
    cout<<ans<<endl;
}

