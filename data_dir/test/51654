#include <bits/stdc++.h>
using namespace std;

typedef long long int ll;
typedef pair <ll, ll> pll;

const int Max = 2e6 + 10;
const int Mod = 1e9 + 7;
const ll Inf = 1LL << 62;

int main() {
#ifdef Mr_Emrul
	freopen("inputf.in", "r", stdin);
#endif /// Mr_Emrul

	ll w1, h1, w2, h2;
	cin >> w1 >> h1 >> w2 >> h2;
	ll ans = (h1 + h2) * 2LL + 4LL + w1 + w2;
	//cout << ans << endl;
	if(w1 != w2) ans += w1 - w2;
	cout << ans << endl;
	return 0;
}