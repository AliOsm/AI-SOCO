#include<bits/stdc++.h>
using namespace std;
typedef vector<int> vi;
typedef vector<pair<int,int> > vp;
#define pb push_back
#define mp make_pair
#define ll long long
#define rep(i,n) for(int i=0;i<n;i++)
#define MOD 1000000007
int main(){
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	int y,b,r;
	cin>>y>>b>>r;
	for(int i=r;i>=3;i--){
		if(i-2 <= y && i-1 <= b){
			cout<<3*i - 3<<'\n';
			return 0;
		}
	}

	
}