#include <bits/stdc++.h>
using namespace std;

int n, ans;
set<pair<int, int> > st;

int main (int argc, char *argv[])
{
	scanf("%d", &n);
	ans = n;
	int q;
	scanf("%d", &q);
	while(q--)
	{
		int l, r, k;
		scanf("%d%d%d", &l, &r, &k);
		for(;;)
		{
			set<pair<int, int> >::iterator it = st.lower_bound(make_pair(l, 0));
			if(it == st.end())
			{
				break;
			}
			int L = it -> second,
				R = it -> first;
			if(l > R || r < L)
			{
				break;
			}
			ans += R - L + 1;
			st.erase(it);
			if(L < l)
			{
				ans -= l - L;
				st.insert(make_pair(l - 1, L));
			}
			if(r < R)
			{
				ans -= R - r;
				st.insert(make_pair(R, r + 1));
			}
		}
		if(k == 1)
		{
			ans -= r - l + 1;
			st.insert(make_pair(r, l));
		}
		printf("%d\n", ans);
	}

	return 0;
}

