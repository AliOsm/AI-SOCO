#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define ff first
#define ss second
#define pb push_back
#define mp make_pair
int main()
{
    ll n;
    cin>>n;
    ll ans = 0;
    ll temp = 2;
    for(ll i=0;i<n;i++)
    {
        ans += temp;
        temp *= 2;
    }
    cout<<ans;
}