#include "bits/stdc++.h"
#define int long long
using namespace std;
int32_t main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    int n,k,ans;cin>>n>>k;
    for(int i=1;i<=1e5;i++)
    {
        int x=i*(i+1)/2-k; 
        int move=i+x;
        if(move==n)
            ans=i*(i+1)/2-k;

    }
    cout<<ans;
 
}