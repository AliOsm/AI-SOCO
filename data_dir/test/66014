#include <bits/stdc++.h>
#define ll long long
#define mp make_pair
#define MOD 1000000007
#define OO 2e9
#define EPS 1e-7

/*
 *
 * Zaiiiiiin
 *
 */

using namespace std;

typedef pair<int, int> ii;
const double PI = acos(-1);

ll n, sum = 0, x;

int main(){
  //freopen("input.txt", "r", stdin);
  cin >> n;
  while(n--){
    scanf("%lld", &x);
    sum += x - 1;
    if(sum & 1) puts("1");
    else puts("2");
  }
  return 0;
}
