int main(){
    ios_base::sync_with_stdio(0);cin.tie(NULL);cout.tie(NULL);
    int n, k, i, j, x;
    cin >> n >> k;
    vector<pair<int,int> > a;
    // array<ll,700005>used;
    // memset(used,-1,sizeof(used));
    // fo(i,300005)used[i] = -1;
    fo(i,n){
        cin >> x;
        a.pb(mp(x,i+1));
    }           
    sort(a.begin(),a.end());//,[](pair<int,int> &left, pair<int,int> &right){
     //     return left.fi >= right.fi;
     // });


    int finalans[300005];

    int traverse = k + 1;
    int sub = k + 1;
    ll cost = 0;


    int lol[700005] = {0};

    forr(i,sz(a)){
     if(a[i].se >= traverse){
        lol[a[i].se] = i+1;
        finalans[a[i].se] = a[i].se;
     }
     else{
        while(lol[traverse]>0)traverse++;
        lol[traverse] = i+1;
        finalans[a[i].se] = traverse;
        cost = cost + 1LL*abs(traverse - a[i].se)*a[i].fi;
        traverse++;
     }
    }

    cout << cost << endl;
    for(i=1;i<=n;++i)
     cout << finalans[i] << " ";
    cout << endl;

    return 0;
}