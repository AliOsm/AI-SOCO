#include <bits/stdc++.h>
using namespace std;
#define REP(i, n) for (int i = 0; i < int(n); i++)
#define FOR(i, a, b) for (int i = a; i < int(b); i++)
#define FOREACH(i, v) for (__typeof((v).begin()) i = (v).begin(); i != (v).end(); i++)
#define SIZE(v) ((int)(v).size())
#define pb push_back
#define mp make_pair
#define st first
#define nd second
#define ll long long
#define pii pair<int, int>
#define pll pair<long long, long long>


int main() {
	int n, k, t;
	scanf("%d %d %d", &n, &k, &t);
	int id0 = t - k, id1 = t;
	id0 = max(id0, 0), id1 = min(id1, n);
	if(id0 <= id1) printf("%d\n", id1 - id0);
	else printf("0\n");
}