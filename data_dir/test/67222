#include<iostream>
#include<set>
#include<cmath>
using namespace std;
int main()
{
	int n;
	cin>>n;
	string s;
	cin>>s;
	int c=0;
    for(int i=0;i<n;i=i+2)
    {
    	if(s[i]==s[i+1])
    	{
    	c++;
    	if(s[i]=='a')
    	s[i]='b';
    	else
    	s[i]='a';
        }
    }
	cout<<c<<endl<<s;
}
