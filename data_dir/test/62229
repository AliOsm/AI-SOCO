#define re return(0);
typedef long long ll;
typedef long double ld;
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <cstring>
#include <set>
#include <iomanip>

using namespace std;
double const pi=3.1415926536;
int main()
{
	int t;
	cin>>t;
	for(int i=0;i<t;i++)
	{
	   int n;
	   cin>>n;
	   int s1=0,s2=0;
	   for(int j=1;j<=n/2-1;j++)
	   {
	   	s1+=pow(2,j);
       }
       s1+=pow(2,n);
       for(int j=n/2;j<n;j++)
	   {
	   	s2+=pow(2,j);
       }
	   cout<<s1-s2<<endl;
	}
}
