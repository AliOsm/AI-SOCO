#include<bits/stdc++.h>
using namespace std;
//int ar[101];

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int n;
    cin >> n;
    int hun = n / 100;
    n = n% 100;
    int tw = n / 20;
    n = n% 20;
    int ten = n / 10;
    n = n % 10;
    int five = n / 5;
    n = n % 5;
    int one = n;
    cout<<hun+tw+ten+five+one<<endl;
    return 0;

}

