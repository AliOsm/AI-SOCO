void brainfuck()
{
    cin>>n>>s;
    for ( i = 0 ; i < n; i++ )
    {
        if ( s [ i ] == '+' )
        {
            a++;
        }
        else a--;
        if ( a < 0 )a = 0;
    }
    cout<<a;
}
