//NO OF ELEMENTS < X
//cout << "No of elements less than " << X << " are " << A.order_of_key(X) << endl;
 
int main()
{
	std::ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
 
 	ll n, k;
 	cin >> n >> k;
 	ll val = (1 + (ll)sqrt(1 + (8 * k) + (8 * n))) / 2;
 	cout << n - val + 1 << endl;   
    return 0;
}