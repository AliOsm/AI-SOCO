#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define scn(n) scanf("%d",&n)
#define lscn(n) scanf("%lld",&n)
#define pri(n) printf("%d",n)
#define lpri(n) printf("%lld",n)
#define priln(n) printf("%d\n",n)
#define lpriln(n) printf("%lld\n",n)
int main()
{
    string s;
    int temp=0;
    cin>>s;
    int n=s.size();
    for(int i=0;i<n;i++)
    {
        if(s[i]=='a')
        temp++;
    }
    if(temp>n/2)
    pri(n);
    else
    {
    int r=temp+temp-1;
    pri(r);
    }
    return 0;
}