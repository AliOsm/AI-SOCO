#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define pb push_back
#define f first
#define s second
#define y1 bbp
using namespace std;
ll a[1005][1005],n,m;
main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    cin>>n;
    for (int i=1;i<=n;i+=4)
    {
        for (int j=1;j<=n;j++)
        {
            for (int z=i;z<=i+3;z++)
            {
                a[j][z]=m;m++;
            }
        }

    }
    for (int i=1;i<=n;i++)
    {
        for (int j=1;j<=n;j++)
        {
            cout<<a[i][j]<<" ";
        }
        cout<<endl;
    }
    return 0;
}
