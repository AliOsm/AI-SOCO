/// إِنَّ مَعَ الْعُسْرِ يُسْرًا
/// لَا أَبْرَحُ حَتَّىٰ أَبْلُغَ

#include <bits/stdc++.h>
#define LL long long
#define LD long double
#define S second
#define F first
#define IO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);

using namespace std;

int main()
{
    IO
    LL n,m,d;
    LL c=0;
    vector<LL>vec;
    for(int i=0; i<3;i++ )
    {
        cin>>m;
        c+=m;
        vec.push_back(m);
    }
    c/=3;
    sort(vec.begin(),vec.end());
    cout<<min(c,vec[0]+vec[1]);


    return 0;
}
