#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define F first
#define S second
int main()
{
    ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    int tc;
    cin >> tc;
    while(tc--)
    {
        ll n;
        cin >> n;
        cout << (n % 2 ? n / 2 : n / 2 - 1) << '\n';
    }
    return 0;
}