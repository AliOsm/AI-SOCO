#include<bits/stdc++.h>
#define r_0 return 0;
#define ll long long int
#define ld long double
#define pb push_back
#define in freopen("input.txt","r",stdin);
#define out freopen("output.txt","w" stdout);
#define TIME ios_base::sync_with_stdio(NULL);
#define tcn cin.tie(NULL);
#define tct cout.tie(NULL);
using namespace std;
ll n,k,cnt,ans,l;
string s,s1;
vector<int>v,v1;
set<int>se;
int main()
{
        TIME tcn tct
      cin >> n;
    if( n%2!=0 ){
        cnt=n/2;
        ans=n/2+1;
    }
    else if( n%4==0 ){
        cnt=n/2-1;
        ans=n/2+1;
    }
    else{
        cnt=n/2-2;
        ans=n/2+2;
    }
    cout<<cnt<<" "<<ans;
}

