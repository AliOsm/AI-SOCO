#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;

class ProblemBFarRelativesProblem {
public:
    int male[400], female[400];
	void solve(std::istream& in, std::ostream& out) {
		int n; in>>n;
        memset(male, 0, sizeof(male));
        memset(female, 0, sizeof(female));
        for(int i = 0; i<n; ++i){
            char c; in>>c;
            int l, r; in>>l>>r;
            if(c=='M') male[l]++, male[r+1]--;
            else female[l]++, female[r+1]--;
        }
        for(int i = 1; i<400; ++i) male[i]+=male[i-1], female[i]+=female[i-1];
        int res = 0;
        for(int i = 1; i<400; ++i) res = max(res, min(male[i], female[i]));
        out<<res*2;
	}
};


int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	ProblemBFarRelativesProblem solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
