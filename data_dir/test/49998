/**************************** FXNS ****************************/
 
void solve()
{

	cin>>t;

	W(t){

		cin>>a>>b>>n>>sum;

		sum -= min(a,sum/n)*n;

		if(sum <= b)cout<<"YES\n";

		else cout<<"NO\n";
	}
	
}
 
