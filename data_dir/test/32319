#include <bits/stdc++.h>
#define ll long long
#define mp make_pair
#define pb push_back
#define fi first
#define se second
using namespace std;

int main()
{
    ios::sync_with_stdio(false);
    ll n;
    cin>>n;
    ll last=2;
    ll sol=0;
    for(ll i=3;i<=n;i++)
    {
        sol+=(i*last);
        last=i;
    }
    cout<<sol<<endl;
    return 0;
}
