#include<bits/stdc++.h>
#define long long long
using namespace std;
const int N=1e5;
int bit[N+2];
void upd(int x,int vl)
{
  for( ;x<=N;x+=x&-x)
    bit[x]=max(bit[x],vl);
}
int get(int x)
{
  int ret=0;
  for( ;x>0;x-=x&-x)
    ret=max(ret,bit[x]);
  return ret;
}
int main()
{
  ios_base::sync_with_stdio(0);cin.tie(0);
  int n;cin>>n;int mx=0;
  for(int i=1;i<=n;i++)
  {
    int x;cin>>x;
    int now=get(x);mx=max(mx,now+1);
    upd(x,now+1);
  }
  cout<<mx<<endl;
  return 0;
}
