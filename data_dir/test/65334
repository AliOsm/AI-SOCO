#include<bits/stdc++.h>
using namespace std;
int n,a,sum,k,b,i;
int main()
{


    int n;
    cin >>n;
    for(int i=0;i<n;i++)
    {
        cin   >>a;
        sum  +=a;
        k+=1-a-a;
        if(k<0)  k=0;
        if(b<k)  b=k;
    }
    if(b)  cout <<sum+b<<endl;
    else cout <<sum-1<<endl;


}

