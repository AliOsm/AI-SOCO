#include <bits/stdc++.h>
using namespace std;

const int N = int(5e5) + 5;

char s[N];
int n, k;

void case2() {
	int ans_1 = 0, ans_2 = 0;
	for(int i = 0; i < n; ++i) {
		if(i % 2) {
			if(s[i] == 'A') {
				++ans_1;
			} else {
				++ans_2;
			}
		} else {
			if(s[i] == 'A') {
				++ans_2;
			} else {
				++ans_1;
			}
		}
	}
	if(ans_1 < ans_2) {
		printf("%d\n", ans_1);
		for(int i = 0; i < n; ++i) {
			if(i % 2) {
				printf("B");
			} else {
				printf("A");
			}
		}
	} else {
		printf("%d\n", ans_2);
		for(int i = 0; i < n; ++i) {
			if(i % 2) {
				printf("A");
			} else {
				printf("B");
			}
		}
	}
}

void case1() {
	int ans = 0;
	for(int i = 0; i < n;) {
		int j;
		for(j = i; j < n && s[i] == s[j]; ++j);
		int q = (j - i);
		if(q % 2) {
			for(int k = i + 1; k < j; k += 2) {
				if(s[i] == 'A') {
					s[k] = 'B';
				} else {
					s[k] = 'A';
				}
			}
		} else {
			char a = s[i],
				b;
			if(j != n) {
				b = s[j];
			} else {
				b = '1';
			}
			char c;
			if(a == 'A' || b == 'A') {
				if(a == 'B' || b == 'B') {
					c = 'C';
				} else {
					c = 'B';
				}
			} else {
				c = 'A';
			}
			for(int k = i + 1; k < j; k += 2) {
				s[k] = c;
			}
		}
		ans += q / 2;
		i = j;
	}
	printf("%d\n%s", ans, s);
}

int main (int argc, char *argv[])
{
	scanf("%d%d", &n, &k);
	scanf("%s", &s);
	if(k == 2) {
		case2();
	} else {
		case1();
	}

	return 0;
}

