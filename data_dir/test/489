#include <bits/stdc++.h>
using namespace std;

int n,x;

int main(){
    scanf("%d %d",&n,&x);
    if(n%6==0){
        printf("%d\n",x);
    }
    else if(n%6==1){
        if(x==0)
            printf("1\n");
        else if(x==1)
            printf("0\n");
        else
            printf("2\n");
    }
    else if(n%6==2){
        if(x==0)
            printf("1\n");
        else if(x==1)
            printf("2\n");
        else
            printf("0\n");
    }
    else if(n%6==3){
        if(x==0)
            printf("2\n");
        else if(x==1)
            printf("1\n");
        else
            printf("0\n");
    }
    else if(n%6==4){
        if(x==0)
            printf("2\n");
        else if(x==1)
            printf("0\n");
        else
            printf("1\n");
    }
    else{
        if(x==0)
            printf("0\n");
        else if(x==1)
            printf("2\n");
        else
            printf("1\n");
    }
    return 0;
}