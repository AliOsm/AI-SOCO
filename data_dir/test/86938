#include <cstdio>
#include <iostream>
#include <vector>
#include <algorithm>
#include <functional>
#include <set>
#include <map>
#include <string>
#include <queue>
#include <stack>
#include <cstring>
#include <iterator>
#include <cmath>
using namespace std;
typedef int mt;
#define rep(a, b, i) for(register mt i = a; i < b; ++i)
#define repe(a, b, i) for(register mt i = a; i <= b; ++i)
#define repd(a, b, i) for(register mt i = a; i > b; --i)
#define repde(a, b, i) for(register mt i = a; i >= b; --i)

#define N 2000010 
#define K N * N
#define M (2021)
#define INF 10000000000000007// 1e16 + 7
#define MOD 1000000007ll //1000000007//1e9 + 7
#define EPS 1e-9

mt primes[148934], pc;
mt md[N];

void init(void) 
{
	rep(2, N, i) {
		if (!md[i])
			primes[pc++] = md[i] = i;
		for (mt j = 0; j < pc && md[i] >= primes[j] && primes[j] * i < N; ++j)
			md[i * primes[j]] = primes[j];
	}
}

mt n;
int main(void)
{
#ifdef _DEBUG	
	freopen("in.txt", "r", stdin);
#endif
	init();
	scanf("%d", &n);
	rep(n + 1, N, i) {
		if (md[i] != i && !((i - 1) % n)) {
			printf("%d\n", (i - 1) / n);
			break;
		}
	}
	return 0;
}