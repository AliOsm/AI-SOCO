#include <bits/stdc++.h>
#define ll long long

using namespace std;

int main()
{
    ll n,k; cin>>n>>k;

    ll d1 = k-1;
    ll d2 = n-k;

    ll Ans = 0;

    if(d1<d2)   swap(d1,d2);

    /// d1 is max

    Ans++;
    Ans++;
    Ans++;

    Ans += 4*d2;
    Ans += 3*d1;

    cout<<Ans;
}
