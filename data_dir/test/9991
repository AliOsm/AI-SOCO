#include<iostream>
#include<stdio.h>
#include<memory.h>
#include<set>
#include<map>
#include<vector>
#include<queue>
#include<algorithm>
#include<math.h>
#include<string.h>
using namespace std;
typedef long long ll;
int main(){
    int n , a[1000];
    cin >> n;
    for(int i=0;i<n;++i)
        cin >> a[i];
    sort(a,a+n);
    if(a[0] == 1)
        puts("-1");
    else puts("1");
    return 0;
}
