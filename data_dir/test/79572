//http://codeforces.com/problemset/problem/224/A

#include <iostream>
#include <string>
#include <cmath>
#include <vector>
#include <algorithm>
#include <iterator>
#include <cstdlib>
#include <cstdio>
#include <map>
#include <set>
#include <queue>
#include <deque>
#include <stack>
#include <list>

using namespace std;

double s1, s2, s3;
double fir, sec, thd;

int main()
{
	cin >> s1 >> s2 >> s3;

	fir = sqrt(s1 * s2 / s3);
	sec = sqrt(s1 * s3 / s2);
	thd = sqrt(s2 * s3 / s1);

	cout << (4 * int(fir + sec + thd)) << endl;

	return 0;
}