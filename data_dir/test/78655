#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <set>
#include <queue>
#include <deque>
#include <map>
#include <stack>
#include<bitset>
#include<list>
#include<cassert>
#include<numeric>

using namespace std;

int a, b;
int main() 
{
	cin >> a >> b;
	int dis = abs(a - b);
	int x1, x2;
	x1 = dis / 2;
	x2 = dis / 2;
	if (dis % 2 == 1)
		x1++;
	cout << x1 * (x1 + 1) / 2 + x2 * (x2 + 1) / 2;

}


