#include<bits/stdc++.h>
using namespace std;
long long a,b,c,d,i,e,f,g,n,m,k,l,A[100005],ans,maxx,maxx2;
int main()
{
           cin>>n>>m;                                                                                                                                                                                                                                                                                                                                                                                       //DEJEEEEEEEEEEQI
           for(i=1;i<=n;i++)                                                                                                                                                    //CHAMAVALI MZEEEEEEEEEEEEEEEEEEEE                                                                                                                                   
           {
           cin>>A[i];                                                                                                                                     //IBERIAAAAAAAAAAAAAA PIRVELIAAAAAAAAAAAAAAAAAAAA                                NANANANANANANANANANANANNADGHOFLA;VDOFJHIJFDA
           maxx=max(maxx,A[i]);                                                                                                                                                                                                                                                        //AU ES GATENVEBIRA                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          //ZARMACO ISE RO ICODE SAQARTVELO GABRWYINDEBA
           k+=A[i];                                                                                                                            //ES AR CHANS                      //NICHESNIAAAAAAAAAAA MZE AMOBRWYNDEBAAAAAAAAAAAAAAAAAAAAAAAAAAAA
           }
           sort(A+1,A+1+n);
           for(i=1;i<=n;i++)                                                                                  //me var barni patarebis megobariiiiii marcvleulis qveynidan mosuliiii
           if(A[i]>maxx2) maxx2++;                                                                                                                                                                                                                                                 //MZE 
           cout<<k-n-maxx+maxx2;                                                                                                                                                                                            //21:23 ALEEEEEEEEEEEEE 24:35   
}