#define sz 2010 
 
 
#define name "."
 
typedef long long ll;
 
using namespace std;

int main()
{
//	   	freopen (name".in","r",stdin);
//		freopen (name".out","w",stdout);
	int t;
	cin >> t;
	while(t--){
		ll a, b, n, s;
		cin >> a >> b >> n >> s;
		ll x = s / n;
		if(x > a)
			x = a;
		if(x * n + b >= s)
			cout << "YES" << endl;
		else
			cout << "NO" << endl;

	}
	return 0;
	
}