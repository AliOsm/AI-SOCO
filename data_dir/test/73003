//be naame khodaa

#include <bits/stdc++.h>

typedef long long ll;

using namespace std;

int main()
{
	ios_base::sync_with_stdio(false);
	int a, b, s;
	cin >> a >> b >> s;
	a = abs(a), b = abs(b);
	if (s >= a+b && (a+b)%2 == s%2)
		cout << "Yes" << endl;
	else
		cout << "No" << endl;
    return 0;
}
