using namespace std;

const int N = 100005;
const int inf = 1000 * 1000 * 1000;
const int mod = 998244353;

int t;
int n , x , a , b;

int main(){
    cin >> t;
    while(t--){
        cin >> n >> x >> a >> b;
        cout << min(n - 1 , x + abs(a - b)) << endl;
    }
    return 0;
}
