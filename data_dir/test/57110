#include <bits/stdc++.h>
using namespace std;

long long n, k;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(NULL);

    cin >> n;
    if (n == 1 || n == 2){
        cout << -1 << endl;
        return 0;
    }

    k = n/2;
    if (n%2 == 1){
        cout << 2*k*(k+1) << " " << 2*k*(k+1)+1 << endl;
    } else{
        cout << k*k-1 << " " << k*k+1 << endl;
    }
    return 0;
}
