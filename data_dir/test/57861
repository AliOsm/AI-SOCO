using namespace std;

const int SS = 5e2 + 123;
const int N = 1e5 + 123;
const int NN = 1e6;
const int M = 1e7 + 123;
const int MM = 1e8 + 123;
const int inf = 1e9 + 123;
const ll INF = 1e18 + 123;
const ll MAXN = 1e10 + 123;
const ll MOD = 1e9 + 7;
const ll mod = 555557;
const double pi = acos (-1.0);

ll n, cur1 = 1, cur2 = NN;     

int main ()
{
	speed;
	cin >> n;
	for (ll i = 1, a; i <= n; i ++)
	{
		cin >> a;
		if (a <= 500000)
			cur1 = max (a, cur1);
		else
			cur2 = min (a, cur2);
	}
	cout << max ((cur1 - 1), (NN - cur2));
}
