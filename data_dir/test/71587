#include<bits/stdc++.h>
#define LL long long
#define IO ios_base::sync_with_stdio(0);cin.tie(0);
using namespace std;
//int ar[20000001];
int main()
{
    IO
    long long n;
    cin >> n;

    if(n == 0)cout<<"0"<<"\n";
   // else if(n == 1)cout<<"1"<<"\n";
    else if((n + 1) % 2 == 0)cout<<(n+1)/2<<"\n";
    else cout<<n+1<<"\n";
    return 0;
}
