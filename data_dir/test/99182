#define rson			mid+1, r, rt<<1|1

int main() {
	ios::sync_with_stdio(false);
	#ifndef ONLINE_JUDGE
		freopen("data.in", "r", stdin);
		freopen("data.out", "w", stdout);
	#endif
	
	int n, m;
	
	scanf("%d %d", &n, &m);
	if (n < m) {
		printf("%d\n", n+1);
		rep(i, 0, n+1)
			printf("%d %d\n", n-i, i);
	} else {
		printf("%d\n", m+1);
		rep(i, 0, m+1)
			printf("%d %d\n", m-i, i);
	}
	
	#ifndef ONLINE_JUDGE
		printf("time = %d.\n", (int)clock());
	#endif
	
	return 0;
}
