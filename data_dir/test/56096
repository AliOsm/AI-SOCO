//++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
typedef long long ll;
typedef long double ld;
typedef unsigned long long ull;
//++--++--++--++--++--++--++--++--++--+--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
const int MAXN = 500088;
const ll inf = 20000000000001;
const ll INF = 2e18;
const ld EPS = 1e-7;
const ll mod = inf + 6;
const ld PI = acos(-1.0);
int cs = 1;
#define int long long
vector<int> a;
int n ,m;
bool check(int d)
{
	ll nw = 0;
	for (int i = 0; i < n; ++i)
	{
		nw += max(0ll, a[i] - i / d);
	}
	return nw >= m;
}
signed main()
{
	fastio();
	cin >> n >> m;
	a.resize(n);
	vin(a);
	sort(rall(a));
	int l = 0, r = 2e9;
	while (r - l > 1)
	{
		int m = (l + r) / 2;
		if (check(m))
		{
			r = m;
		}
		else
			l = m;
	}

	if (r == 2e9)
	{
		cout << -1;
	}
	else cout << r;
}