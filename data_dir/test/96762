#include <bits/stdc++.h>

using namespace std;

const string s="WB";

void solve(const int &test_id)
{
 int n;

 cin >> n;
 for(int i=0;i<n;i++)
 {
  for(int j=0;j<n;j++) cout << s[(i+j)%2];
  cout << endl;
 }
}

void solve_cases()
{
 int test_cases=1;
 //cin >> test_cases;
 for(int i=1;i<=test_cases;i++) solve(i);
}

void fast_io()
{
 ios::sync_with_stdio(false);
 cin.tie(0);
 cout.tie(0);
 cout << fixed << setprecision(15);
 cerr << fixed << setprecision(15);
}

int main()
{
 fast_io();
 solve_cases();
 return EXIT_SUCCESS;
}
