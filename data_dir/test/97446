#include <bits/stdc++.h>

#define F first
#define S second
#define _sz(x) (int)x.size()

using namespace std ;
using ll = long long ;
using ld = long double ;
using pii = pair <int , int> ;

int n ;
string s , t ;

int main(){
	ios::sync_with_stdio(false) , cin.tie(0) , cout.tie(0) ;

	cin >> n >> t ;

	for (int i = 0 , c = 1 ; i < _sz(t) ; i += c , c ++) s += t[i] ;

	cout << s << '\n' ;
}
