#include <bits/stdc++.h>


#define pb push_back
#define Mp make_pair
#define F first
#define S second
#define all(x) x.begin(), x.end()
#define Sort(x) sort(all(x))
#define sz(x) x.size()
#define debug(x)  cerr << #x << " = " << x << endl
#define endl '\n'
#define sync ios::sync_with_stdio(0), cin.tie(0)


using namespace std;

typedef long long ll;
typedef long double ld;
typedef pair<int, int> pii;
typedef vector<int> vi;
typedef pair<ll , ll> pll ;
typedef vector<ll> vll ;
typedef string str ;


const ll MOD = 1e9 + 7 ;
const ll MAXN = 2e5 + 30 ;
const ll MINN = 1e3 + 20 ;
const ll MOD2 = 998244353ll ;
const ll INF = 74592896151251 ;
const ld EPS = 1e-9 ;


ll gcd(ll a, ll b) { return (b ? gcd(b, a % b) : a); }
ll mod(ll n) { while(n < 0) n += MOD; return n % MOD; }
ll pow(ll a, ll b) { return (!b ? 1 : pow(a, b / 2) * pow(a, b / 2) * (b % 2 ? a : 1)) ;}

ll ans[MAXN] , Cnt [MAXN] , cnt , A [MAXN] ;

int Main() {
    ll n ;
    cin >> n ;
    for (int i = 1 ; i <= n ; i ++) 
        cin >> A[i] , A[i] = n - A[i] , Cnt [A[i]] ++ ;
    for (int i = 1 ; i <= n ; i ++) {
        if (Cnt [i] % i != 0) {
            cout << "Impossible" ;
            return 0 ;
        }
    }
    cout << "Possible\n" ;
    for (int i = 1 ; i <= n ; i ++) {
        if (Cnt[A[i]] % A[i] == 0) 
            cnt ++ , ans [A[i]] = cnt ;
        Cnt [A[i]] -- ;
        cout << ans[A[i]] << ' ' ;
    }
}

int main () {
    sync ;
    int q ;
    q = 1 ;
    while (q --) 
        Main() ;
	return 0;
}
