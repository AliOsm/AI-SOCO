#include <bits/stdc++.h>
using namespace std;

int n, res = 0;
string input;
int main()
{
    cin >> n;
    for (int i = 0; i < n; i++){
        cin >> input;
        if (input.at(1) == '+'){
            res++;
        } else{
            res--;
        }
    }

    cout << res << endl;
    return 0;
}
