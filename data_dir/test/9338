#define ll long long
#define clr(x) memset(x,0,sizeof(x))
#define _clr(x) memset(x,-1,sizeof(x))
#define fr(i,a,b) for(int i = a; i < b; ++i)
#define frr(i,a,b) for(int i = a; i > b; --i)
#define pb push_back
#define sf scanf

#define pf printf
#define mp make_pair

using namespace std;

int d[1000010];
int n,s;
int main(){
	int y,b,r;
	cin>>y>>b>>r;
	int ans = 0;
	for(int i = 1; i <=y; ++i) {
		if(i<=y&&i+1<=b&&i+2<=r) {
			ans = max(ans,(i+(i+1)+(i+2)));
		}
	}
	cout<<ans<<endl;
}