#include <bits/stdc++.h>

using namespace std;
#define ll long long


int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int b,g,n;
    cin>>b>>g>>n;
    int l=min(n,b),r=n-l;
    int cnt=0;
    while(l>=0){
        cnt++;
        l--;
        r++;
        if(r>g){
            break;
        }
    }
    cout<<cnt<<endl;

    return 0;
}
