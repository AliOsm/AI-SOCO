#include <bits/stdc++.h>
#define ll long long int
#define mod 1000000007
#define pii pair<int, int>
#define fr(n) for (int i = 0; i < n; i++)
#define fr1(n) for (int i = 1; i <= n; i++)
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    ll n, k;
    cin >> n >> k;
    if (k == 1) cout << n;
    else {
        ll a = 2;
        while (a <= n) a += a;
        cout << a - 1;
    }
}
