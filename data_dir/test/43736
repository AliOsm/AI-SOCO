//In the name of Allah

#include <bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef pair <int , int> pii;

const int N = 1e5+10;

int32_t main(){
	ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0);
	int n , a[N];
	cin >> n;
	for(int i = 0 ; i < n ; i++)
		cin >> a[i];
	if(a[0] % 2 && a[n - 1] % 2 && n % 2)
		cout << "Yes";
	else
		cout << "No";
	return 0;
}

