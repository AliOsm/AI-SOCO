#define rng 100010

map < l , l > na;

l val[rng] , n ;

char s[rng];



int main()
{
    l i , j , r =0 , p , k ;

    //fil;
    //freopen("out.txt","w",stdout);

    //p = lin() ;
    sf( "%s" , s ) ;

    l n = strlen(s) ;

    k = lin() ;

    l ma = 0 ;
    rep( i , 'a' , 'z' )
    {
        val[i] = lin() ;

        if( val[i] > ma )
        {
            ma = val[i]  ;
        }
    }

    rep( i , 0 , n-1 )
    {
        r += ((val[s[i]]) * ( i + 1 ) ) ;
    }

    rep( i , n + 1 , n + k )
    {
        r += ( ma * i ) ;
    }

    P( r ) ;

    return 0;
}


