#include <bits/stdc++.h>
#define ll long long int
#define pb push_back
#define pll pair<ll, ll>
#pragma GCC optimize ("O3")
using namespace std;
int main () {
    #ifdef LOCAL
        freopen ("input.txt", "r", stdin);
        freopen ("output.txt", "w", stdout);
        freopen ("error.txt", "w", stderr);
    #else
        ios::sync_with_stdio(false);
        cin.tie (NULL);
    #endif

    int t; cin >> t;
    while (t--) {
        ll n, k; cin >> n >> k;
        cout << n / k * k + min(n % k, k / 2) << '\n';
    }

    return 0;
}
