#include<iomanip>
#include<bitset>
#include<ctime>
#define L long long int
#define LD long double
#define pi 3.141592653589793238462643383
#define M 1000000007

using namespace std;

int main()
{
    int n,i;
    while(cin>>n)
    {
              if(n%2)
              {
                     cout<<"-1\n";
                     continue;
              }
              else
              {
                     int a[n];
                     for(i=0;i<n/2;i++)
                     {
                                       a[i]=n-i;
                                       a[n-i-1]=i+1;
                     }
                     for(i=0;i<n;i++)
                     cout<<a[i]<<" ";
                     cout<<"\n";
              }
              
              
              
    }
    return 0;
}
