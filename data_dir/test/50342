#include<iostream>
#include<stdio.h>
#include<math.h>
using namespace std;
int a,s,d[1002],f,g,h,j,k,l,i,n,m;
main(){
cin>>n;
if(n==0) cout<<"O-|-OOOO";
while(n>0){
k=n%10;n/=10;
if(k>=5) {cout<<"-O";k-=5;} else cout<<"O-";
cout<<"|";
if(k>0) cout<<"O"; else {cout<<"-OOOO"<<endl;continue;}
if(k>1) cout<<"O"; else {cout<<"-OOO"<<endl;continue;}
if(k>2) cout<<"O"; else {cout<<"-OO"<<endl;continue;}
if(k>3) cout<<"O"; else {cout<<"-O"<<endl;continue;}
cout<<"-"<<endl;
}//system("pause");
}
