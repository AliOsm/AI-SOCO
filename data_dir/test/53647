#include <iostream>
#include <cmath>
#include <cstring>
#include <algorithm>
#include <map>
#include <vector>
#define pb push_back
#define mp make_pair
#define pp pair<int,int>
#define ppp pair<pp,pp>
#define st first
#define nd second

using namespace std;
int a,b,s;
int main()
{
    ios::sync_with_stdio(false);
    cin>>a>>b>>s;
    if (a<0) a*=-1;
    if (b<0) b*=-1;
    int x = a + b;
    if (s < x) cout<<"No";
    else
    if ((s - x) % 2 == 0) cout<<"Yes";
    else
        cout<<"No";
    return 0;
}
