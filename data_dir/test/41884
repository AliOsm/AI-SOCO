#include <iostream>
#include <cstdlib>
#include <ctime>
#define _CRT_SECURE_NO_WARNINGS

#include <cmath>
#include <cstring>
#include <string>
#include <vector>
#include <stdio.h>
#include <climits>
#include <Windows.h>
#include <iterator>
#include <algorithm>

using namespace std;

typedef unsigned long long ull;
typedef long long ll;
#define all(a) (a.begin(),a.end())

void solve()
{
    int n, temp(0), tempLast(0), count(0);
    cin >> n;

    for (int i(0); i < n; i++)
    {
        cin >> temp;
        if (!(tempLast == temp)) count++;
        tempLast = temp;
    }

    cout << count;
}

int main()
{
    //SetConsoleCP(1251);
    //SetConsoleOutputCP(1251);

    solve();

    //cout << "\n\n"; system("pause");
    return 0;
}