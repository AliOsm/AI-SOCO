#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, K, ans;
i64 v[MAX];
string s;

int main()
{
    optimiza_io
    cin >> N >> K;
    for( i64 i = 0; i < N; i ++ )
        cin >> v[i];
    cin >> s;
    
    i64 l = 0;
    while( l < N )
    {
        priority_queue < i64 > q;
        q.push( v[l] );
        i64 r = l;
        while( r + 1 < N && s[r + 1] == s[l] )
        {
            r++;
            q.push( v[r] );
        }
        i64 t = min( ( i64 ) q.size() , K );
        while( t -- )
        {
            ans += q.top();
            q.pop();
        }
        l = r + 1;
    }
    
    cout << ans;
    return 0;
}

