#define M 1000000007

using namespace std;

int main()
{
    int in,i,nt;
    string s,t;
    while(cin>>s)
    {
              cin>>t;
              nt=t.size();
              in=1;
              for(i=0;i<nt;i++)
              {
                               if(t[i]==s[in-1])
                               in++;
              }
              cout<<in<<"\n";
              
    }
    return 0;
}
