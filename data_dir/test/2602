#ifdef __cpp_init_captures
template<typename T>vector<T> table(int n, T v){ return vector<T>(n, v);}
template <class... Args> auto table(int n, Args... args){auto val = table(args...); return vector<decltype(val)>(n, move(val));}
#endif
const ll MOD=1e9+7;

int dp[5123][5123][2];

int main(){
  ios_base::sync_with_stdio(false);
  cout<<fixed<<setprecision(0);
	fill(dp[0][0],dp[5123][0],MOD);
  int n;
	cin>>n;
	vector<int> a(n);
	rep(i,n) cin>>a[i];
	dp[0][0][0]=0;
	rep(i,n)rep(j,n){
		MN(dp[i+1][j][0],dp[i][j][0]);
		MN(dp[i+1][j][0],dp[i][j][1]);
		{
			int h=a[i]-1;
			int c=0;
			if(i+1<n) c+=max(0,a[i+1]-h);
			int c0=c,c1=c;
			if(i){
				c0+=max(0,a[i-1]-h);
				if(i>1) c1+=max(0,min(a[i-2]-1,a[i-1])-h);
				else c1=MOD;
			}
			MN(dp[i+2][j+1][1],dp[i][j][0]+c0);
			MN(dp[i+2][j+1][1],dp[i][j][1]+c1);
		}
	}
	//rep(i,n+1){rep(j,n+1) cout<<pii(dp[i][j][0],dp[i][j][1]);cout<<endl;}
	vector<int> re(n,MOD);
	reps(i,n,n+2)rep(j,n+1)rep(k,2) MN(re[j],dp[i][j][k]);
	rep(i,(n+1)/2) cout<<re[i+1]<<" ";cout<<endl;
  return 0;
}
