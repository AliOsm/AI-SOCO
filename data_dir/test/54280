#include<iostream>

using namespace std;

int main()
{
    int i,n,c=0,d=-1;
    cin>>n;
    int a[n],b[n];
    for(i=0;i<n;i++)
    {
          cin>>a[i];
          cin>>b[i];
    }          
    for(i=0;i<n-1;i++)
    {
                    c+=b[i];
                    c-=a[i];
                    if(d<c)
                          d=c;
    }
    cout<<d;
    return 0;
}   
