#include<bits/stdc++.h>
#define MAX 200005
#define PI 3.14159265358979323
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
#define what_is(x) cerr << #x << " is " << x << endl;
#define pii pair < int , int >
#define fi first
#define se second
using namespace std;
typedef long long ll;

int T;
long double N;

int main()
{
    optimiza_io
    cin >> T;
    while( T -- ) {
        cin >> N;
        long double rad = ( 2.0 * PI ) / ( 4.0 * N );
        cout << fixed << setprecision( 15 ) << 1 / tan( rad ) << "\n";
    }
    return 0;
}

