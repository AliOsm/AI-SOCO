#include<bits/stdc++.h>
using namespace std;

typedef long long LL;

int main()
{
    LL N, K;
    cin >> N >> K;
    N = min(N, K);

    if (N==1 || K >= N+N) {
        cout << 0 << endl;
        return 0;
    }

    if (K==N) {
        cout << (K-1)/2 << endl;
    } else {
        cout << (N+N+1-K)/2 << endl;
    }



    return 0;
}

