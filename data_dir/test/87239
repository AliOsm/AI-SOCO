#include <bits/stdc++.h>

using namespace std;

int main()
{
 
  long long a,count =0;
  cin>>a;
  int k = 0;
  while(123)
  { 
   a = a+1;
   count++;
   long long n = a;
   n = abs(n);
   while(n)
   {
    if(n%10==8)
    {
     k = 1;
     break;
    }

    n = n/10;
   }

   if(k==1)
   break;
  }

  cout<<count<<endl;
 
  return 0;
} 
