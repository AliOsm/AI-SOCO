#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 a[105], T, x, sum[105];

int main()
{
    optimiza_io
    a[0] = sum[0] = 1;
    for( i64 i = 1; i <= 38; i ++ ) {
        a[i] = a[i - 1] * 3;
        sum[i] = sum[i - 1] + a[i];
    }
    cin >> T;
    while( T -- ) {
        cin >> x;
        i64 ans = 0;
        for( i64 i = 38; i >= 0; i -- ) 
            if( ans + ( i > 0 ? sum[i - 1] : 0 ) < x )
                ans += a[i];
        cout << ans << "\n";
    }
    return 0;
}