#include<bits/stdc++.h>
using namespace std;

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int t,n;
    cin>>t;
    while(t--)
    {
        cin>>n;
        int res=0;
        if(n%2!=0)
        {
            res+=1;
            n-=3;
        }
        res+=n/2;
        cout<<res<<endl;
    }
    return 0;
}
