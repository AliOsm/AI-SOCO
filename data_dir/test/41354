#define dbg(args...) do {cerr << #args << " : "; faltu(args); } while(0)
void faltu(){cerr << endl;}
template<typename T>void faltu(T a[],int n){for(int i=0;i<n;++i)cerr<<a[i]<<' ';cerr<<endl;}
template<typename T,typename...hello>void faltu(T arg,const hello&...rest){cerr<<arg<<' ';faltu(rest...);}
//#else
//#define dbg(args...)

ll a, b, p;
string s;

bool check( int mid )
{
	char cur = s[mid];
	ll sum = 0;
	for( int i = mid; i < s.size()-1; ++i ) {
		if( cur == s[i] ) continue;
		else {
			if( cur == 'A' ) sum += a;
			else sum += b;
			cur = s[i];
		}
	}
	if( cur == 'A' ) sum += a;
	else sum += b;
	if( sum > p ) return 0;
	return 1;
}

int main()
{
	optimize();
	int t;
	cin >> t;
	while(t--) {
		cin >> a >> b >> p;
		cin >> s;
		s = '#' + s;
		int lo = 1, hi = s.size()-2, mid;
		while( lo <= hi ) {
			mid = (lo + hi)/2;
			if( check(mid) ) hi = mid-1;
			else lo = mid+1;
		}
		cout << lo << endl;
	}
}





















