#include <bits/stdc++.h>

#define FI(i,a,b) for(int i=(a);i<=(b);i++)
#define FD(i,a,b) for(int i=(a);i>=(b);i--)

#define LL long long
#define Ldouble long double
#define PI 3.1415926535897932384626

#define PII pair<int,int>
#define PLL pair<LL,LL>
#define mp make_pair
#define fi first
#define se second

using namespace std;

int a, b, c;

int main(){
	scanf("%d %d %d", &a, &b, &c);
	printf("%d\n", 7 * min(min(a, b / 2), c / 4));
	return 0;
}