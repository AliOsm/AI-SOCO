#include <iostream>
#include <cstdio>
#include <cstdlib>
using namespace std;
int T;
long long n,a,b;
int main()
{
	scanf("%d",&T);
	while (T--)
	{
		scanf("%lld%lld%lld",&n,&a,&b);
		if (2*a>b) 
		{
			if (n&1) printf("%lld\n",n/2*b+a);
			else printf("%lld\n",n/2*b);
		}
		else printf("%lld\n",n*a);
	}
return 0;
}