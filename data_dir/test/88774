    ios_base::sync_with_stdio(false);

    int n, i, j, k;
    LL b = 0, sum = 0;

    cin>>A;
    for (i = A.size()-1; i >= 0; i--)
    {
        if (A[i] == 'b') b = (b+1) % mod;
        else
        {
            sum = (sum+b) % mod;
            b = (b*2) % mod;
        }
    }

    cout<<sum<<endl;


return 0;
}
