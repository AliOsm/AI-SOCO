//g++  5.4.0

#include<bits/stdc++.h>
using namespace std;

#define ff first
#define ss second
#define int long long
#define pb push_back
#define pii pair< int,int >
#define fast ios::sync_with_stdio(0) , cin.tie(0) , cout.tie(0) ;

signed main()
{
    fast;
    int n;
    cin >> n;
    int ne =0;
    int po =0;
    while( n-- )
    {
        int x,y;
        cin >> x >> y;
        if( x > 0 ) po++;
        else ne++;
    }
    if( po <= 1 || ne <= 1 ) cout << "Yes\n";
    else cout << "No";
}
