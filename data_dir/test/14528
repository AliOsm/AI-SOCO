#include<bits/stdc++.h>
using namespace std;

#define ll long long

int main()
{
    vector<ll> v(3);
    for (int i = 0; i < 3; i++) cin >> v[i];
    sort(v.begin(), v.end());
    ll x = (v[0] + v[1] + v[2]) / 3;
    ll y = v[0] + v[1];
    cout << min(x, y) << endl;
    return 0;
}
