#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;


i64 N, ans;
map < i64 , i64 > mp;

void checkS( string x )
{
    // Checa de izq a der y de der a izq
    bool vd = true, vi = true;
    int abre = 0, cierra = 0;
    int t1 = 0, t2 = 0;
    for( i64 i = 0; i < x.size(); i ++ )
    {
        if( x[i] == '(' )
            t1++;
        else
        {
            t1--;
            if( t1 < 0 )
            {
                vd = false;
                break;
            }
        }
    }
    for( i64 i = x.size() - 1; i >= 0; i -- )
    {
        if( x[i] == ')' )
            t2++;
        else
        {
            t2--;
            if( t2 < 0 )
                vi = false;
        }
        if( x[i] == '(' )
            abre++;
        else
            cierra++;
    }
    if( vd && vi )
    {
        ans += 2*mp[0];
        ans++;
        mp[0]++;
        return;
    }
    else if( ! vi and ! vd )
        return;
    abre -= cierra;
    ans += mp[abre * -1];
    mp[abre]++;
}


int main()
{
    optimiza_io
    cin >> N;
    for( i64 i = 1; i <= N; i ++ )
    {
        string s;
        cin >> s;
        checkS( s );
    }
    cout << ans << "\n";
    return 0;
}
