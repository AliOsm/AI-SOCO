#include <bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin >> n;
	
	vector<long long> t(n), w(n);
	for (int i = 0; i < n; i++) {
		scanf("%lld %lld", &t[i], &w[i]);
	}

	priority_queue<long long> a;
	priority_queue<pair<long long, long long>> b;
	for (int i = 1; i < n; i++) {
		if (t[i] > t[0]) a.push(-(w[i] - t[i] + 1));
		else b.emplace(t[i], w[i] - t[i] + 1);
	}

	int rank = a.size() + 1;
	int max_rank = rank;

	for (int ii = 0; ii < n && !a.empty(); ii++) {
		long long val = a.top(); a.pop();
		val *= -1;
		if (val > t[0]) break;
		t[0] -= val;
		while (!b.empty()) {
			if (b.top().first > t[0]) {
				a.push(-b.top().second);
				b.pop();
			} else break;
		}
		max_rank = min<int>(max_rank, a.size() + 1);
	}

	cout << max_rank << endl;
}