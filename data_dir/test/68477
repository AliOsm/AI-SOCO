#include <bits/stdc++.h>
#define ll long long int
#define pb push_back
#define mp make_pair
#define mod 1000000007
#define pi 3.141592653589793
using namespace std;


int main() {
//    cout << setprecision(30);
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    int n;
    cin >> n;
    int a[n];
    for (int i = 0; i < n; i++) {
        cin >> a[i];
        a[i] = abs(a[i]);
    }

    sort(a, a + n);

    ll ans = 0;
    for (int i = 1; i < n; i++) {
        ans += a + i - lower_bound(a, a + i, a[i] / 2 + a[i] % 2);
    }

    cout << ans;

}
