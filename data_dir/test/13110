#include <iostream>
#include <iomanip>
#include <cstdio>
#include <cmath>
#include <tuple>
#include <numeric>
#include <ctime>
#include <random>
#define ll long long
using namespace std;


int main() {
    int T;
    cin>>T;
    for(int t=1;t<=T;t++) {
        ll x,y;
        cin>>x>>y;
        ll a,b;
        cin>>a>>b;
        
        ll diff = abs(x-y);
        cout << a*diff+min(b,2*a)*min(x,y) << endl;
        
        
    }
}
