#define ull            unsigned long long
#define ll             long long
#define vi             vector<int>
#define pb             push_back
#define mp             make_pair
#define pii            pair<int,int>
#define vit            vector<int> :: iterator
#define sit            set<int> :: iterator
#define vrit           vector<int> :: reverse iterator
#define ff             first
#define ss             second



int dx[8]= {1,0,-1,0,-1,-1,1,1};
int dy[8]= {0,1,0,-1,-1,1,-1,1};
int ini(){
    int x;
    scanf("%d",&x);
    return x;
}
long long inl(){
    long long x;
    scanf("%lld",&x);
    return x;
}

const int N = (int) 2e5 + 5;
const int inf = (int) 1e9 + 7;
const double pi=2* acos(0.0);
int a[N];


int main()
{
    int t;

    t=ini();

    while(t--){
        int n,k;
        n=ini();
        k=ini();

        for(int i=1;i<=n;){
            for(int j=k-1;j>=0 and i<=n;j--,i++){
                    char c=(char)(j+'a');
                cout<<c;
            }
        }
        cout<<endl;
    }
    return 0;
}

