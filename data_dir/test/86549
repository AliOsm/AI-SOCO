#include <bits/stdc++.h>
using namespace std;
const int N = 1e5 + 5;

int main() {

    int w1,h1,w2,h2;
    cin>>w1>>h1>>w2>>h2;
    if(w1 == w2)
    {
        cout<<w1+w2+2*h1+2*h2+4<<endl;
    }
    else
    {
        cout<<w1+w2+2*h1+2*h2+5 + w1 - w2 - 1<<endl;
    }
    return 0;
}
