int main()
{
    std::cin.tie(0);
    std::ios::sync_with_stdio(false);
    //freopen("C-large.in", "r", stdin);
    //freopen("out.txt", "w", stdout);
    int n;
    cin >> n;
    if(n==1)
    {
        cout << 0 << endl;
        return 0;
    }
    if(n%2)
    {
        n++;
    }
    cout << n/2-1 << endl;
    return 0;
}
