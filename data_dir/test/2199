#include<iostream>
#include<algorithm>

using namespace std;

int main()
{
	int n;
	cin >> n;
	if(n < 4)
		cout << "NO" << endl;
	else
	{
		cout << "YES" << endl;
		if(n >= 6)
		{
			cout << "1 + 2 = 3" << endl;
			cout << "3 - 3 = 0" << endl;
			for(int i = 5; i <= n; i++)
				if(i != 6)
					cout << "0 * " << i << " = 0" << endl;
			cout << "4 * 6 = 24" << endl;
			cout << "0 + 24 = 24" << endl;
		}
		else if(n == 4)
		{
			cout << "4 * 3 = 12" << endl;
			cout << "12 * 2 = 24" << endl;
			cout << "24 * 1 = 24" << endl;
		}
		else
		{
			cout << "5 + 1 = 6" << endl;
			cout << "6 * 4 = 24" << endl;
			cout << "3 - 2 = 1" << endl;
			cout << "24 * 1 = 24" << endl;
		}
	}
	return 0;
}
