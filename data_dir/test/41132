int  powermod(int  x, int  y, int p )
{
    int res = 1;
    while (y > 0)
    {
        if (y & 1)
            res = (res * x) % p;
        y = y >> 1;
        x = (x * x) % p;
    }
    return res % p;
}

int32_t main()
{
    fast;
    int n,m,k;cin>>n>>m>>k;
    int *arr=new int[n];
    for(int i=0;i<n;i++)
        cin>>arr[i];
    int rem=k;
    m--;
    for(int i=n-1;i>=0;i--)
    {
        if((rem-arr[i])>=0)
            rem-=arr[i];
        else
        {
            if(m==0)
            {
                cout<<(n-1-i);
                return 0;
            }
            else
                rem=k-arr[i],m--;
        }
    }
    cout<<n;
}