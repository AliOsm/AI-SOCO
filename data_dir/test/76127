#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define int ll
#define endl '\n';
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define floop(i,a,b) for(int i=a;i<=b;++i)
const ll mod=1e9+7;
const int maxn=2e5+5;
bool solve(){
	int x,y;
	cin>>x>>y;
	int t=x-y;
	if(t<2) return 0;
	return 1;
}
int32_t main(){
	IOS;	
	int t;
	cin>>t;
	while(t--){
		if(solve()){
			cout<<"YES"<<endl;
		}
		else cout<<"NO"<<endl;
	}
	return 0;
}