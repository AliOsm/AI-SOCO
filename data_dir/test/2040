#include <iostream>
#include <cstdio>
#include <cmath>
#include <cstdlib>
#include <string>
#include <cstring>
#include <algorithm>
#include <vector>
#include <list>
#include <map>
#include <set>
#include <deque>
#include <queue>
#include <stack>

using namespace std;
int main() {
//  freopen("input.txt","r",stdin); 
    int n,i,j;
    while(scanf("%d",&n)==1){
        int t=n/2;
        for(i=1,j=n*n;j>i;i++,j--){
            printf("%d %d ",i,j);
            if(i%t==0)
                putchar('\n');
        }
    }
    return 0;
}
