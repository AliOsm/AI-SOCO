#include <bits/stdc++.h>
using namespace std;
#define int long long
int32_t main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    int n,m;cin>>n>>m;
    if(n==m)
    {
        cout<<0;
        exit(0);
    }
    if(m==0)
    {
        cout<<1;
        exit(0);
    }
    cout<<min(m,n-m);

}