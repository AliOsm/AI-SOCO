#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
    ll a,b,c,d,e,i,j,k,l,n,m,x,y,t,p;
    scanf("%lld",&t);
    for(p=1;p<=t;p++)
    {
        scanf("%lld",&n);
        if(n%2==1)
        {
            x=n/2;
        }
        else
        {
            x=n/2;
            x--;
        }
        printf("%lld\n",x);
    }
}
