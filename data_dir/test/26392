#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define pb push_back
#define read(x) scanf( "%lld" , &x )
#define forq(i , a , b) for (int i = (a); i <= (b); ++i)
#define forr(i , b) forq( i , 0 , b - 1 )
#define carr( n , array ) forr(i , n) read(array[i])
#define coutarr(n , array ) cout << "\n" ; forr (i , n) printf("%lld " , array[i]) ; cout << "\n" ;
#define F first
#define S second
#define IF ->first
#define IS ->second
#define qqmemset(array , val) memset (array , val , sizeof(array))
#define ALLV(vect) vect.begin() , vect.end()
#define sizee(vec) (ll)vec.size()

ll R = 7 + 1e9 , NUMTESTCASE ;
const int NN = 10 + 1e5 ;
const double pi = acos(-1.0) ;
int di [4] = {1 , 0 , -1 , 0} , dj [4] = {0 , 1 , 0 , -1} , DI [8] = {1 , 1 , 0 , -1 , -1 , -1 , 0 , 1} , DJ [8] = {0 , 1 , 1 , 1 , 0 , -1 , -1 , -1} ;
using namespace std;
int n , m , ans , t ;
string s[24] ;
bool isvalid (int a , int b) {
    return a >= 0 && b >= 0 && a < n && b < m ;
}

int main()
{
    cin >> n >> m ;
    forr (i , n) cin >> s[i] ;
    forr (i , n) forr (j , m)
        if (s[i][j] == 'P') {
            forr (k , 4) {
                if (!isvalid(i + di[k] , j + dj[k])) continue ;
                if (s[i + di[k]][j + dj[k]] != 'W') continue ;
                ans ++ ; break ;
            }
        } else if (s[i][j] == 'W') {
            forr (k , 4) {
                if (!isvalid(i + di[k] , j + dj[k])) continue ;
                if (s[i + di[k]][j + dj[k]] != 'P') continue ;
                t ++ ; break ;
            }
        }
    cout << min(t , ans) ;
    return 0;
}
