#include<bits/stdc++.h>
#define MAX 505
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, K, ans, idx;
int a[MAX][MAX];

int main()
{
    optimiza_io
    cin >> N >> K;
    for( int i = 1; i <= N; i ++ )
        for( int j = 1; j < K; j ++ )
            a[i][j] = ++idx;
    
    for( int i = 1; i <= N; i ++ ) {
        ans += idx + 1;
        for( int j = K; j <= N; j ++ ) 
            a[i][j] = ++idx;
    }
    
    cout << ans << "\n";
    for( int i = 1; i <= N; i ++ )
        for( int j = 1; j <= N; j ++ )
            cout << a[i][j] << " \n"[j == N];
    return 0;
}