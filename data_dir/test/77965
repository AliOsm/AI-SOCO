#include <bits/stdc++.h>
#include <ext/numeric>

using namespace std;
using namespace __gnu_cxx;

typedef long long ll;
typedef unsigned long long ull;

void fastInOut();

int main() {
#ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
#endif
    fastInOut();
    int n, cnt;
    cin >> n, cnt = n / 2;
    cout << cnt << "\n";
    for (int i = 0; i < cnt; ++i)
        cout << ((i < cnt - 1 || n % 2 == 0) ? 2 : 3) << " \n"[i == cnt - 1];
    return 0;
}

