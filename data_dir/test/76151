#include <bits/stdc++.h>

using namespace std;

#define mod 1000000007
#define ff first
#define ss second
#define pb push_back
#define mp make_pair

int ft[2000005];
int n,k;

void upd(int id){
	while(id <= 2000000){
		ft[id] += 1;
		id += id & (-id);
	}
}

int qry(int id){
	int ans = 0;
	while(id){
		ans += ft[id];
		id -= id & (-id);   
	}

	return ans;
}

int main(){
	int v[300005];
	scanf("%d %d",&n,&k);
	int mi = 1000005;
	for(int i = 0; i < n; i++){
		scanf("%d",v+i);
		mi = min(mi,v[i]);
		upd(v[i]);
	}
	//printf("%d\n",qry(21) );
	int l = min(k+1, mi), r = mi;
	int ans = l;
	for(int i = l+1; i <= r; i++){
		// printf("%d\n",i);
		int f = 1;
		for(int j = i; j <= 1000001 ; j += i){
		// ;;printf("%d\n",j );
			//printf("%d %d %d %d %d\n",qry(j+i-1),qry(j+k),j+i-1,j+k,i);
			if(qry(j+i-1) - qry(j+k)){
				f = 0;
				break;
			}
		}
		if(f) ans = i;
	}
	printf("%d\n",ans );
	return 0;
}