#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define IOS ios_base:: sync_with_stdio(false),cin.tie(0),cout.tie(0);
int32_t main()
{
 
    ll n,m,x=1,y=0;
    cin>>n;
    while(n--)
    {
    	m=y;
    	y=(3*x+2*y)%1000000007;
    	x=m;
    }
    cout<<x<<endl;

}

