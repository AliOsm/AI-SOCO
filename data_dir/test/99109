#include <bits/stdc++.h>
using namespace std;
typedef long long intt;
#define mk make_pair
#define pb push_back
#define fr first
#define sc second
int main()
{

    intt n;
    cin>>n;
    if(n&1)
    {
        
    
        cout<<"0";
        return 0;
    }
    int i=2;
    intt res=0;

    while(1)
    {
        if(n-i>i)
            res++;
        else
            break;
        i+=2;

    }
    cout<<res;

       return 0;
}
