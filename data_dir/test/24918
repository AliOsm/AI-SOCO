#include <ctime>
#include <unordered_map>

using namespace std;

#define ll  long long
#define ld long double

int main()
{
	ios::sync_with_stdio(false);
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr), cout.tie(nullptr);
	//freopen("input.txt", "r", stdin);
	//freopen("output.txt", "w", stdout);
	ll a, b;
	while (cin >> a >> b)
	{
		if (a == b || b == 0)
			cout << "0 0\n";
		else if (b + b * 2 <= a)
			cout << 1 << " " << b * 2 << endl;
		else
			cout << 1 << " " << a - b << endl;
	}
	return 0;
}