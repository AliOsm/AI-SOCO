// in the name of Allah

#include <bits/stdc++.h>

using namespace std;

#define endl '\n'
#define pb push_back
#define ll long long
#define double long double
#define sz(x) ((int) (x.size()))

#define fr first
#define se second

#define inf 1e9+7
#define max_n 5005

int main() {
	ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	int n, t;
	cin >> n;
	while(n--) {
		cin >> t;
		if(t<=7) cout << 1 << endl;
		else if(t%2 == 1) cout << (t - 3) / 2 + 1 << endl;
		else cout << t / 2 << endl;
	}
	return 0;
}