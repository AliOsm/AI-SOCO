#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define ss second
#define ff first
#define pb push_back
#define mp make_pair

int main() {
    int q;
    cin>>q;
    while(q--)
    {
        int n;
        string x;
        cin>>n>>x;
        if(n==2&&x[0]-'0'>=x[1]-'0')
        {
            cout<<"NO"<<endl;
            continue;
        }
        cout<<"YES"<<endl;
        cout<<2<<endl;
        cout<<x[0]<<' '<<x.substr(1,x.size()-1)<<endl;
    }
 	return 0;
}
