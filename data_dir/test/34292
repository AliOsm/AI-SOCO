using namespace std;


int n;
int sz, x;
int q[100005];

int main(int argc, const char * argv[]) {
//    freopen("/Users/danya.smelskiy/Documents/Danya/Resources/input.txt","r",stdin);
    ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0);
    cin >> n;
    for (int i = 1; i <= n; ++i) {
        cin >> x;
        if (sz == 0 || q[sz] < x) q[++sz] = x;
        else {
            int l = 1;
            int r = sz;
            while (l < r) {
                int mid = (l + r) >> 1;
                if (q[mid] >= x) r = mid;
                else l = mid + 1;
            }
            q[r] = x;
        }
    }
    cout << sz << '\n';
}

