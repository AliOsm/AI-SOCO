////////////////////////////
using namespace std;
int main()
{
 ll n,i,a,b,c,cn;
 while(cin>>n)
 {
  cn=0;
  for(i=1;i<=n;i++)
  {
   cin>>a>>b>>c;
   if(a+b+c>=2)cn++;
  }
  cout<<cn<<endl;
 }
 return 0;

}
