#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef long double ld;
const ll N = 1e5 + 5;
const ll mod = 1e9 + 7;
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll l,p,q;;
    cin>>l>>p>>q;
    ld num = l*p;
    ld dem = q+p;
    cout<<fixed<<setprecision(18)<<num/dem<<"\n";
}
