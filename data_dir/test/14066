#include <bits/stdc++.h>

using namespace std;

#define ll long long int

#define pii pair < int , int >

map < pii , bool > mp;

int main()
{
    int n,ans,i,j,cnt=0;

    cin>>n;

    ans=0;

    for(i=n; i>=1; i--)
    {
        if(cnt%2==0)
        {
            ans+=i;
        }

        cnt++;

    }

    cout<<ans<<endl;



}
