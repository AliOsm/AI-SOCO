#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, ans;
i64 p1[MAX];
i64 p2[MAX];

int main()
{
    optimiza_io
    cin >> N;
    for( i64 i = 1; i <= 2*N; i ++ )
    {
        i64 x;
        cin >> x;
        if( p1[x] )
            p2[x] = i;
        else
            p1[x] = i;
    }
    p1[0] = p2[0] = 1;
    for( i64 i = 1; i <= N; i ++ )
        ans += min( abs( p1[i] - p1[i - 1] ) + abs( p2[i] - p2[i - 1] ) , abs( p2[i] - p1[i - 1] ) + abs( p1[i] - p2[i - 1] ) );
    
    cout << ans;
    return 0;
}

