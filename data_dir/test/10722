//----------------------------------------------------------    
int n, m, k;
int a[1000][1000];
int co, po;
void init()
{
    cin >> n >> k;
}
int ot;
int q = 0;
void solve()
{
    if (k > (n - 1) / 2)
    {
        cout << -1;
        return;
    }
    printf("%d\n", n * k);
    for (int i = 0; i < n; ++i)
    {
        int j = 0, co = 0;
        while(co < k)
        {
            
            if (i == j)
            {
                j++;
                continue;
            }
            if (a[i][j])
            {
                j++;
                continue;
            }
            co++;
            a[i][j] = 1;
            a[j][i] = 1;
            printf("%d %d\n", i + 1, j + 1);
            j++;
        }
    }
}
int main()
{
    #ifndef ONLINE_JUDGE
         freopen ("input.txt", "r", stdin); freopen ("output.txt", "w", stdout);
    #endif
    init();
    solve();
    
    return 0;
}