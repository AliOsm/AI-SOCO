#include <algorithm>
#include <iostream>

using namespace std;

const int A = (1 << 18) - 1, B = 1 << 17;

int main() {
	int k; cin >> k;
	cout << "2 3\n";
	cout << A << ' ' << k << " 0\n";
	cout << B << ' ' << A << ' ' << k << '\n';
	return 0;
}
