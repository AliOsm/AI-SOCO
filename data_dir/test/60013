const int MAX = 1e6;

int main()
{
    int n;

    cin >> n;

    int s1 = 0 , s2 = 0;

    ll x = (n*1LL*(n+1))/2;

    if(x&1)
        s1 = 1;
    else
        s1 = 0;

    cout << s1 << endl;
}
