#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef long double ld;


int main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    string s;
    cin >> s;
    for (int i = 1; i < s.size(); i++){
        if (s[i-1] == 'a' || s[i-1] == 'o' || s[i-1] == 'u' || s[i-1] == 'i' || s[i-1] == 'e' || s[i-1] == 'n')
            continue;
        if (!(s[i] == 'a' || s[i] == 'o' || s[i] == 'u' || s[i] == 'i' || s[i] == 'e'))
            return cout << "NO", 0;
    }
    int i = s.size();
    if (!(s[i-1] == 'a' || s[i-1] == 'o' || s[i-1] == 'u' || s[i-1] == 'i' || s[i-1] == 'e' || s[i-1] == 'n'))
        return cout << "NO", 0;
    cout << "YES";

}
