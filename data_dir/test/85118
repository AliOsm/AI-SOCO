#include<bits/stdc++.h>
#define MOD 1000000007
#define ll long long
#define mp make_pair
#define pb push_back 
using namespace std;
int main(){
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	int t;
	cin >> t;
	while(t--){
		ll x, y;
		cin >> x >> y;
		if(x - y <= 1)
			cout << "NO\n";
		else cout << "YES\n";
	}


}