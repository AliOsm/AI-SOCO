using namespace std;

const int INF = 2e9;
const int MOD = 998244353;



void solve() {
	int w1, h1, w2, h2;
	cin >> w1 >> h1 >> w2 >> h2;
	int ans = w1 + w2 + h1 * 2 + h2 * 2 + 4 + (w1 - w2);
	cout << ans;
}
signed main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	cout.tie(nullptr);
	solve();
}
