#define pb push_back
#define ff first
#define ss second
#define ll long long

#include <bits/stdc++.h>
using namespace std;

int main(int argc, char const *argv[]) {
    int n, mn = 0;
    cin >> n;
    while(n--){
        int x, y;
        cin >> x >> y;
        mn = max(mn, x+y);
    }
    cout << mn << endl;


    return 0;
}
