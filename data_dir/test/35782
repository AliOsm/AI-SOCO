#include "bits/stdc++.h"
using namespace std;

#define F first
#define S second
#define mp make_pair
#define pb push_back
typedef long long int ll;
const ll N = 1e6,inf = 1e9+7;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);

    int n;cin>>n;
    int a = sqrt(n);
    ll cnt = 2 * a;
    n -= a*a;
    cnt += n/a + (n%a!=0);
    cout<<cnt<< "\n";





    return 0;
}
