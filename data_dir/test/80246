#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;


int ans;
int N;
string a, b;
    
int main()
{
    optimiza_io
    cin >> N;
    cin >> a >> b;
    for( int i = 0; i < N - 1; i ++ )
        if( a[i] != b[i] && a[i] == b[i + 1] && a[i + 1] == b[i] )
            ans++, swap( a[i] , a[i + 1] );
    for( int i = 0; i < N; i ++ )
        if( a[i] != b[i] )
            ans++;
    cout << ans << "\n";
    return 0;
}