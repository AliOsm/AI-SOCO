//In the name of good
#include <bits/stdc++.h>
using namespace std ;
#define fast ios_base::sync_with_stdio(false),cin.tie(0),cout.tie(0)
#define int long long 
const int maxn = 50 + 1 ;
const int maxL = 34 ;
int n ; 
bool mark [ maxn ] [ maxn ];

main ( ) 
{ 
  cin >> n ;
  n = abs ( n ) ;
  for ( int i = 0 ; ; i ++ )
    {
      int hlp = ( i * ( i + 1 ) ) / 2 ;
      if ( hlp % 2 == n % 2 && n >= -hlp && n <= hlp )
	cout << i , exit ( 0 ) ;
    } 
}
