#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define PI 3.14159265
#define Mod 10000007
using namespace std;
double n, r, ang, R;
int main()
{
    cin >> n >> r;
    ang = (360.0 / n) / 2.0;
    R = r * sin(ang*PI/180.0) / (1.0 - sin(ang*PI/180.0));
    cout << fixed << setprecision(7) << R << '\n';
    return 0;
}
