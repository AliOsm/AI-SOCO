#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    for (int i=0;i<t;i++)
    {
        long long n;
        cin>>n;
        long long d = n * (n+1) / 2;
        long long ot = 1;
        while (ot <= n) d -= ot*2 , ot *= 2;
        cout<<d<<endl;
    }
}