#include<bits/stdc++.h>
#define pb push_back
#define adelkhah main
#define int long long
using namespace std;
typedef long long ll;
typedef long double ld;
typedef pair<int,char> pii;
int ans;
int32_t adelkhah()
{
    int n; cin >> n; string s; cin >> s; bool sw = true;
    for(int i = 0; i < s.size(); i++){
        if(sw){
            if(s[i] == '1'){
                s[i] = '0';
                ans++;
            }
            else{
                sw = false;
                s[i] = '1';
                ans++;
            }
        }
    }
    return cout << ans,0;
}
