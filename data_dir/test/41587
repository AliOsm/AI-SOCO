#include <cstring>
#include <string>
#include <vector>
#include <stdio.h>
#include <climits>
#include <Windows.h>
#include <set>

using namespace std;

typedef unsigned long long ull;
typedef long long ll;

void bla()
{
    int n, itog(0);
    int in[3];

    cin >> n;

    for (int i(0); i < n; i++)
    {
        cin >> in[0] >> in[1] >> in[2];
        if ((in[0] + in[1] + in[2]) >= 2) itog++;
    }

    cout << itog;
}


int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    bla();
    
    //_getch();
    return 0;
}