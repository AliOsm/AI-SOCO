#include <bits/stdc++.h>
#define ll long long
#define LL long long
#define mp make_pair
#define pb push_back
#define VI vector<int>
#define pii pair<int,int>
#define INF 0x3f3f3f3f
using namespace std;
int main(){
	int t, x, n, m;
	scanf("%d", &t);
	while(t--){
		scanf("%d %d %d", &x, &n, &m);
		while(n > 0 && x > 20) x = x/2 +10, n--;
		x -= m*10;
		if(x <= 0) printf("YES\n");
		else printf("NO\n");
	}
	return 0;
}