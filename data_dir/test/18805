#include<bits/stdc++.h>
#define pb push_back
#define adelkhah main
//#define int long long
using namespace std;
typedef long long ll;
typedef long double ld;
typedef pair<int,int> pii;
int32_t adelkhah()
{
    string a;
long long i;
    cin>>a;
for(i=0;i<a.size();i++)
if((a[i]!='a'&&a[i]!='e'&&a[i]!='i'&&a[i]!='u'&&a[i]!='n'&&a[i]!='o')&&(a[i+1]!='a'&&a[i+1]!='e'&&a[i+1]!='i'&&a[i+1]!='u'&&a[i+1]!='o'))
{cout<<"NO"; return 0;}
cout<<"YES";
return 0;
}
