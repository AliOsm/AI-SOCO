#include <iostream>
#include <algorithm>

using namespace std;

int main()
{
    int a , b , s;
    cin >> a >> b >> s;
    int minDis = abs(a) + abs(b);
    if (s < minDis || (s - minDis)%2)
    {
        cout << "NO" << endl;
    }
    else
    {
        cout << "YES" << endl;
    }
    return 0;
}
