#include<iostream>
#include<math.h>
#include<algorithm>
#include<string>
#include<bits/stdc++.h>
using namespace std;
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.precision(20);
    long long int n,m,k;
    cin>>n>>m>>k;
    long long int a[n];
    for(int i=0;i<n;i++)
     cin>>a[i];
    sort(a,a+n);
    long long int x=m/(k+1);
    cout<<(m-x)*a[n-1]+x*a[n-2];}