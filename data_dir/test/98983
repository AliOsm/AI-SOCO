#include<bits/stdc++.h>
#define ll long long
using namespace std;
const int N = 1e5 + 5;
int main()
{
    ios_base ::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
    int n;
    cin >> n;
    if(n <= 5)
        cout << -1 << "\n";
    else{
        for(int i = 2; i <= n; i++){
            if(i == 5 || i == 6) continue;
            cout << 1 << " " << i << "\n";
        }
        cout << 2 << " " << 5 << "\n";
        cout << 2 << " " << 6 << "\n";
    }
    for(int i = 0; i < n - 1; i++){
        cout << 1 << " " << i + 2 << "\n";
    }
return 0;
}
