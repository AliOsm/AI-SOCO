#include <bits/stdc++.h>
 
using namespace std;
 
#define pb push_back
#define mp make_pair
#define fir first
#define sec second
#define ll long long
#define ull unsigned long long
 
//int md=998244353,inf=-1e9-7;
 
int main()
{
    ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    int a,b,c,ans=0;
    cin>>a>>b>>c;
    for (int i=1;i<=a;i++)
        if (i+1<=b&&i+2<=c) ans=max(ans,i+i+1+i+2);
    cout<<ans;
    return 0;
}