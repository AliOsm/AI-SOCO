int to[105];

ll gcd(ll a, ll b) {
  return a%b == 0 ? b : gcd(b, a%b);
}

ll lcm(ll a, ll b) {
  return a / gcd(a, b) * b;
}

void solve() {
  int n;
  scanf("%d", &n);
  ll ret = 1;
  ret += 3LL*n*(n+1LL);
  printf("%lld\n", ret);
}

int main() {
  /*
