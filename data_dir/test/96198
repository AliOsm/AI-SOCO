//		n /= p[n]; 
//	}
//	return f;
//}






int main()
{
	#ifdef ACMTUYO
		assert(freopen("entrada.in", "r", stdin));
	#endif
	ios_base::sync_with_stdio(0);
	cin.tie(NULL);
	
	for (int i = 1; i <= maxN; ++i)
	if (p[i] == 1)
		for (int j = i; j <= maxN; j += i)
			p[j] = i;
	
	tint n;
	while (cin >> n)
	{
		if (n <= 2)
		{
			cout << "1\n";
			forn(i,n)
			{
				if (i)
					cout << " ";
				cout << "1";
			}
			cout << "\n";
		}
		else
		{
			cout << "2\n";
			forn(i,n)
			{
				if (i)
					cout << " ";
				if (p[i+2] == i+2)
					cout << "1";
				else
					cout << "2";
			}
			cout << "\n";
		}
	}
	return 0;
}



