#include <bits/stdc++.h>
using namespace std;
#define oo 1000000000
#define mod 1000000007

int main(){
    string s;
    cin >> s;
    int ans = (int)s.size() / 2;
    for(int i = 1;i < (int)s.size() && ((int)s.size() % 2 == 1);i++){
        if(s[i] == '1'){
            ans++;
            break;
        }
    }
    cout << ans << endl;
    return 0;
}