using namespace std;

const int SS = 5e2 + 123;
const int N = 1e5 + 123;
const int NN = 1e6 + 123;
const int M = 1e7 + 123;
const int MM = 1e8 + 123;
const int inf = 1e9 + 123;
const ll INF = 1e18 + 123;
const ll MAXN = 1e10 + 123;
const ll MOD = 1e9 + 7;
const ll mod = 555557;
const double pi = acos (-1.0);

ll n, x, a[N];     

int main ()
{
	speed;
	cin >> n >> x;
	for (int i = 1; i <= n; i ++)
		cin >> a[i];
	if (n == 1)
		cout << 0, stop;
	sort (a + 1, a + 1 + n);
	ll m1 = min (abs (x - a[n - 1]), abs (x - a[1])) + a[n - 1] - a[1];
	ll m2 = min (abs (x - a[n]), abs (x - a[2])) + a[n] - a[2];
	cout << min (m1, m2);
}
