#include<bits/stdc++.h>

#define ll long long
#define dl double

using namespace std;

int main()
{
    int n;
    cin >> n;

    int F = 1, L = n * n;

    for(int i = 1; i <= n; i++){
        for(int j = 1; j <= n / 2; j++) {
            cout << F << " ";
            F++;
        }
        for(int j = n / 2 + 1; j <= n; j++){
            cout << L << " ";
            L--;
        }
        cout << endl;
    }
    return 0;
}
