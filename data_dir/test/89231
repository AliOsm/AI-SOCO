#include <bits/stdc++.h>
#define ll long long
#define ull unsigned ll
#define ld lond double
#define F first
#define S second
#define mp make_pair
#define pb push_back
#define RAD 0.0174532925
#define E 2.71828182846

using namespace std;

const int MIN = 1e3 + 2;
const int MXN = 1e6 + 3;
const int INF = 1e9 + 7;
const double EPS = 1e-9;
const ll LINF = 1e18 + 15;
const ll MOD = 998244353;

int n;
int a[MXN];
int ans;

int main(){
	#ifdef Pissoir
		//freopen("input.txt", "r", stdin);                                                                                                              
		//freopen("output.txt", "w", stdout);                       
	#else
		ios_base::sync_with_stdio(0);
		cin.tie(0);             
		cout.tie(0);                                                                                         
		//freopen("twopaths.in", "r", stdin);
  		//freopen("twopaths.out", "w", stdout);			
	#endif
	cin >> n;
	for (int i = 1; i <= n; ++i){
		cin >> a[i];
	}
	sort(a + 1, a + n + 1);
	for (int i = 1; i <= n; i += 2){
		ans += a[i + 1] - a[i];
	}
	cout << ans;
	return 0;
}