// Let's bring the sky down :)
#include<bits/stdc++.h>
#define ll long long
using namespace std;
const int N = 3e5 + 5;
int main()
{
    ios_base ::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
    double a, b, c, d;
    cin >> a >> b >> c >> d;
    double p = a / b;
    double q = (1.0 - c / d) * (1.0 - a / b);
    cout << fixed << setprecision(15) << p / (1.0 - q);
return 0;
}
