#include <bits/stdc++.h>
using namespace std;
int n,k=1;
int main(){
    scanf("%d",&n);
    if(n<=5){
        printf("-1\n");
    }
    else{
        printf("1 2\n");
        for(int i=3;i<=n;i++){
            printf("%d %d\n",i,i%2+1);
        }
    //printf("\n");
    }
    while(k!=n){
        printf("%d %d\n",k,k+1);
        k++;
    }
    return 0;
}
