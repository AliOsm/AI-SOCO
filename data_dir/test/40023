using namespace std;

#define eps 1e-9
#define pi acos(-1.0)
#define o 1000000007
#define ll long long int
#define forn(i, n)  for (i=1; i<=(n); i++) 
#define pb push_back
#define pf push_front
#define mp make_pair
#define pii pair<int, int> 
#define sz size()
#define fors(w, s) for (set <ll> :: iterator w=s.begin(); w!=s.end(); w++)
#define sqr(a) a*a
#define sqrt(a) pow(a, 0.5)
/*#define x first
#define y second*/

int n, k, q, l, d, p, h, j, i, a[1000500], b[1000500], sum1, sum2;
char c[1000500];

void vv()
{
	forn (j, n)
	{
		printf ("%c", c[j]);
	}
	return;
}

int main()
{
    //freopen ("input.txt","r",stdin); freopen ("output.txt","w",stdout);
    //freopen ("cross.in","r",stdin); freopen ("cross.out","w",stdout);
	scanf ("%d", &n);
	forn (j, n)
	{
		scanf ("%d%d", &a[j], &b[j]);
		sum1+=a[j];
		c[j]='A';
	}
	j=1;
	while (abs(sum1-sum2)>500)
	{
		sum1-=a[j];
		sum2+=b[j];
		c[j]='G';
		j++;
	}
	vv();
    return 0;
}