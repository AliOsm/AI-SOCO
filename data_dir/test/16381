///________CODE_STARTS_HERE________\\\

long long n,cnt;

bool isPrim(long long p){
    if(p==1) return false;
    long long s=sqrt(p);
    for(long long i=2;i<=s;i++){
        if(!(p%i)) return false;
    }
    return true;
}

int main(){
    ios_base :: sync_with_stdio(0);
    cin >> n;
    if(isPrim(n)){
        cout << 1;
        return 0;
    }
    if(!(n%2)){
        cout << 2;
        return 0;
    }
    if(isPrim(n-2)){
        cout << 2;
        return 0;
    }
    cout << 3;
    nibab 0;
}
