/// NO PAIN <-> NO GAIN
/// FROM ASHES TO THE EMPIRE
#include <bits/stdc++.h>

#define ss second
#define ff first
#define pb push_back
#define faster ios::sync_with_stdio(0), cin.tie(0), cout.tie(0)

using namespace std;

typedef long long ll;
typedef long double ld;

const ll N=100100,SQ=330,LG=25,inf=1e17;

ll n,m,t,k,ans,x,y,z,w,a[N],b[N];
string s,f[N];
set <ll> ss;

int main(){
    faster;
    cin>>n;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n;j++){
            if(i%j==0){
                if(i*j>n && i/j<n)return cout<<i<<' '<<j,0;
            }
        }
    }
    cout<<-1;
    return 0;
}
