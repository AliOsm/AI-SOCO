#include "bits/stdc++.h"
#define ll long long
#define pb push_back
using namespace std;
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    int t; cin>>t;
    while(t--){
        int n; cin>>n;
        int ar[n];
        for(int i=0;i<n;i++)
            cin>>ar[i];
        sort(ar,ar+n);
        int y=ar[n-2];
        int g= min(y-1,n-2);
        cout<<g<<"\n";
    }
	return 0;
}
