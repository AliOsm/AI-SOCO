#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cin>>n;
    int num=n/2;
    int num2=n-num;
    while(1){
        if(__gcd(num,num2)!=1){
            num--;num2++;
        }
        else{
            cout<<num<<" "<<num2;
            break;
        }
    }
	// your code goes here
	return 0;
}
