#include <iostream>
#include <cmath>
#include <algorithm>
#include <fstream>
#include <cstdlib>
#include <cstdio>
#include <string>
#include <cstring>
#include <vector>
#include <queue>
#include <set>
#include <map>
#include <stack>
#include <deque>
#include <list>
#include <time.h>
using namespace std;

#define space " "
#define enter endl
#define ex exit(0)
#define mp make_pair
#define pb push_back
#define pf push_front
#define fi first
#define se second
#define input(s)\
    freopen(s,"r",stdin)
#define output(s)\
    freopen(s,"w",stdout)
#define INF 2000000007
#define LINF 40000000000000000007

typedef long long LL;
typedef unsigned long long ULL;
typedef double DB;
typedef long double LDB;
typedef pair<int,int> pii;

int n;

int main()
{
    //input("input.txt"); output("output.txt");
    cin >> n;
    if (n <= 2)
    {
        cout << 1 << enter << 1;
        return 0;
    }
    if (n == 3)
    {
        cout << 2 << enter << 1 << space << 3;
        return 0;
    }
    if (n == 4)
    {
        cout << 4 << enter;
        cout << 3 << space << 1 << space << 4 << space << 2;
        return 0;
    }
    cout << n << enter;
    for (int i = 1; i <= n; i += 2)
        cout << i << space;
    for (int i = 2; i <= n; i += 2)
        cout << i << space;
}

