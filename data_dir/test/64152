int n, ans;
int32_t main() {
    kchay;

    cin >> n;
    n--;
    for(int p = 2, x = 1; x <= n; p *= 2){
        ans += ((n-x)/p + 1)*(p/2);
        // cout << p/2 << endl;
        x = p;
    }
    cout << ans;
    return 0;
}