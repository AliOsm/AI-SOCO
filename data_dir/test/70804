#include<bits/stdc++.h>

using namespace std;

#define lli long long int

int main(){
	
	ios :: sync_with_stdio(false); cin.tie(nullptr); cout.tie(nullptr);
	
	string t,s;
	
	cin>>s>>t;
	
	int Now = 1;
	
	for(auto &i : t){
		
		if(i == s[Now-1]){
			
			Now++;
		}
	}
	
	cout<<Now;
}
