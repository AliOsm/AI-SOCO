#include<bits/stdc++.h>
#define F first
#define S second
using namespace std;

typedef long long ll;
typedef vector<int> vi;
typedef vector<vi> vvi;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    int n;
    cin >> n;
    if (n%2) {
        cout << 7;
        n -= 3;
    }
    for (int i = 0; i < n/2; ++i) cout << 1;
    cout << "\n";
    return 0;
}