/// إِنَّ مَعَ الْعُسْرِ يُسْرًا
/// لَا أَبْرَحُ حَتَّىٰ أَبْلُغَ

#include <bits/stdc++.h>
#define LL long long
#define LD long double
#define S second
#define F first
#define IO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define PI acos(-1)

using namespace std;


int main()
{
    IO
    LD n;
    LD r,R;
    cin>>n>>r>>R;
    if(n>1)
    {
   LD a=2*(r-R)*sin(PI/n);
   if(a+0.00000001<2*R)
    cout<<"NO";
   else
    cout<<"YES";
    }
    else
    {
        if(r>=R)
        cout<<"YES";
        else
        cout<<"NO";
    }
}
