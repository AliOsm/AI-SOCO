#include<bits/stdc++.h>
#define ll long long
using namespace std;
int arr[10001],b[10001];
ll cnt;
int main(){
string s;
getline(cin,s);
for( int i = 0;i < s.size();i ++ ){
           if (s[i] >= 'a' and s[i] <= 'z'){
           if (cnt == 1)
            cout << " ";
              cout << s[i];
              cnt = 0;
        }
         else  if ( s[i] == ',' or s[i] == '.' or s[i] == '?' or s[i] == '!' ){
                cout << s[i];
                cnt = 1;
          }
          else {
            cnt = 1;
}
}
}
