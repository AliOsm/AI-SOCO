int n,m,i,j,a[200005],b[200005],ans;
int main()
{
	read(n);rep(i,n)read(a[i]);
	rep(i,n){read(b[i]);if(b[i])ans=max(ans,i-b[i]+1);if(b[i]==1)j=i;}
	if (j){
		forup(i,j+1,n)if(b[i]!=b[i-1]+1)break;
		if(i>n){
			rep(i,j-1){
				if(b[i]&&b[i]<=n-j+i+1) break;
			}
			if (i==j){
				cout<<j-1<<endl;
				return 0;
			} 
		}
	}
	cout<<ans+n<<endl;
	return 0;
}