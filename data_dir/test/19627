#include <bits/stdc++.h>
using namespace std;
int main()
{
	long long n, x, y;
	cin>>n>>x>>y;
	long long x1=n/2, y1=n/2, x2=x1+1, y2=y1+1;
	if ((x==x1 && y==y1) || (x==x1 && y==y2) || (x==x2 && y==y1) || (x==x2 && y==y2))
	{
		cout<<"NO";
		return 0;
	}
	/*if ((x==x1-1 && y==y1) || (x==x1 && y==y1-1) || (x==x1-1 && y==y2) || (x==x1 && y==y2+1) || (x==x2+1 && y==y1) || (x==x2 && y==y1-1) || (x==x2+1 && y==y2) || (x==x2 && y==y2+1))
	{
		cout<<"NO";
		return 0;
	}*/
	cout<<"YES";
	return 0;
	
}