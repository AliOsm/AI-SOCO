#include <bits/stdc++.h>
#define pii pair<int,int>
#define fi first
#define se second
#define pb push_back
#define mp make_pair
#define mt make_tuple
using namespace std;
#define DEBUG 0
#define cerr if (DEBUG) cerr
#define fprintf if (DEBUG) fprintf
#define INF 0x3f3f3f3f
#define tii tuple<int,int,int > 
#define test cerr << "hi\n";

vector<char> v;

string s;

int main(){
	ios_base::sync_with_stdio(false);

	cin >> s;
	for (char c:s){
		if (v.size()==0 || v.back()!=c) v.pb(c);
		else v.pop_back();
	}
	if (v.size()==0) cout << "YES\n"; else cout << "NO\n";


}

