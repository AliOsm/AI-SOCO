#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define FAST ios_base:: sync_with_stdio(false),cin.tie(0),cout.tie(0);
int32_t main()
{
    ll t;
    cin>>t;
    while(t--)
    {
        ll n;
        cin>>n;
        ll ans=n*(n+1)/2;
        ll temp=floor(log2(n));
        temp=pow(2,temp+1);temp-=1;temp*=2;
        cout<<ans-temp<<endl;
    }
}
