#include<iostream>
using namespace std;
int a,s,d,f,g,h,j,k,l,i,n,m;
main(){
cin>>m>>n>>l;

cout<<n*(n-1)/2<<endl;
k=n+1;if(l==0)
for(i=1;i<n;i++){
k--;
for(a=1;a<k;a++){
cout<<a<<" "<<a+1<<endl;
}
}

else
for(i=1;i<n;i++){
k--;
for(a=1;a<k;a++){
cout<<a+1<<" "<<a<<endl;
}
}
//system("pause");
}
