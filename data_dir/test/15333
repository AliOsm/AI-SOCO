#define eps 1e-9
#define pi acos(-1.0)
#define o 1000000007
#define ull unsigned long long
#define forn(i, n)  for (i=1; i<=(n); i++) 
#define pb push_back
#define mp make_pair
#define pii pair<int, int> 
#define sz size()
#define fors(w, s) for (set <int> :: iterator w=s.begin(); w!=s.end(); w++)

struct qwe
{
	int mn1, mn2, mx, q;
};

unsigned int n, j, i, h=0, k, l, m, q1, q2, x, y, a[100500], c[100500], e[100500];

int main()
{
    //freopen ("input.txt","r",stdin); freopen ("output.txt","w",stdout);
    //freopen ("cross.in","r",stdin); freopen ("cross.out","w",stdout);
	scanf ("%u%u", &n, &m);
	forn (j, n)
	{
		scanf ("%u", &a[j]);
	}
	q1=1;
	a[n+1]=m*2;
	forn (j, n+1)
	{
		q2++;
		c[j]=c[j-1]+a[j];
		for (i=q1; i<=q2; i++)
		{
			if (c[j]-c[i-1]<=m)
			{
				break;
			}
			else
			{
				q1++;
				if (j-i>h)
				{
					h=j-i;
				}
			}
		}
	}
	printf ("%u", h);
    return 0;
}