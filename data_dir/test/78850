#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

int main() {
    ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
    
    int t;
    cin >> t;
    
    for(int i = 0; i < t; i++) {
        int n, x;
        cin >> n >> x;
        
        cout << x * 2 << endl;
    }
}
