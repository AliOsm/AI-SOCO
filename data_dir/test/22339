#include <bits/stdc++.h>
using namespace std;
#define FASTIO ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL)
#define LL long long 
#define ar32(x) array<int, x> 
#define ar64(x) array<LL, x>
// const int MOD = 998244353;
// const int MOD = 1e9 + 7;
const int oo = 1e9 + 5;
const LL ooll = 1e18 + 5;
const int N = 1e3 + 5;

void solve() {
    int n, m;
    cin >> n >> m;
    if (n == 1) cout << "0\n";
    else if (n == 2) cout << m << '\n';
    else cout << m + m << '\n';
}

int main() {
    FASTIO;
    int t = 1;
    cin >> t;
    for (int tc=1;tc<=t;++tc) {
        solve();
    }
    return 0;
}