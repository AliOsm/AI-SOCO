#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef long double ld;

int main()
{
	ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
	int n;
	cin >> n;
	int even = 0;
	for(int i = 0; i < n; i++)
	{
		int a;
		cin >> a;
		if(a % 2 == 0)
			even++;
		if(even % 2 == 1)
			cout << 1 << '\n';
		else
			cout << 2 << '\n';
	}
	return 0;
}
