#include<bits/stdc++.h>
#define MAX 200005
#define pii pair < int , int > 
#define se second
#define fi first
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N;
vector < pii > a1;
vector < pii > a2;

int main()
{
    optimiza_io
    cin >> N;
    for( int i = 1; i <= N; i ++ ) {
        int a, b;
        cin >> a >> b;
        if( a < b )
            a1.push_back( { a , i } );
        else 
            a2.push_back( { a , i } );
    }
    
    sort( a1.begin() , a1.end() );
    sort( a2.begin() , a2.end() );
    
    if( a1.size() > a2.size() ) {
        cout << a1.size() << "\n";
        for( int i = a1.size() - 1; i >= 0; i -- )
            cout << a1[i].se << " ";
        cout << "\n";
    }
    else {
        cout << a2.size() << "\n";
        for( int i = 0; i < a2.size(); i ++ )
            cout << a2[i].se << " ";
        cout << "\n";
    }
    return 0;
}