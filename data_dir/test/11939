#include <iostream>
#include <vector>
#include <string>
#include <cmath>
#include <algorithm>

using namespace std;

typedef long long ll;
typedef vector<int> vi;
typedef vector<ll> vl;
typedef pair<int, int> ii;

int main() {
    int a, b, c;
    cin >> a >> b >> c;
    
    int answer = min(a, min(b / 2, c / 4)) * 7;
    cout << answer << endl;
    
    return 0;
}