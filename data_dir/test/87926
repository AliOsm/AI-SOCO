#define ld long  double
#define ll long long int
#define pb push_back
#define TIME ios_base::sync_with_stdio(NULL);
#define tcn cin.tie(NULL);
#define tct cout.tie(NULL);
using namespace std;
ll ans , n, m, k,s,p,cnt;
const ll N=1e5+7;

vector<int>v[N];
ll used[N];
main(){
       cin >> k >> n >> s >> p;
       cnt = n / s;
       if (n % s != 0)
        cnt++;
       cnt *= k;
       if (cnt % p != 0)
       cout<<cnt/p+1;
       else
       cout<<cnt/p;
}
