#include<bits/stdc++.h>
using namespace std;
#define ll long long 
#define pb push_back
#define mem(a,b) memset(a,b,sizeof(a))

const int N=1e5+5;
int a[N];
int main()
{
	ios::sync_with_stdio(false);
	cin.tie(0);
	int n;
	cin>>n;
	int ans=1;
	for(int i=0;i<n;i++)
	{
		cin>>a[i];
		if(i&&a[i]!=a[i-1])ans++;
	}
	cout<<ans<<endl;
	return 0;	
} 