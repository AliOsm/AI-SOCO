bool cmp(ll a,ll b)
{
    return a.second<b.second;
}
int main()
{
    cin>>n;
    lli a[n+1];
    map<lli,lli> ml;
    for(int i=1;i<=n;i++)
    {
        cin>>a[i];
        ml[a[i]]++;
    }
    if(ml.size()>3)
    return cout<<-1,0;
    if(ml.size()==1)
    return cout<<0,0;
    if(ml.size()==2)
    {
        auto it=ml.begin();
        auto it1=it;
        it++;
        lli d=abs(it->first-it1->first);
        if(d%2==0)
        return cout<<d/2,0;
        cout<<d;
    }
    if(ml.size()==3)
    {
        auto it=ml.begin();
        auto it1=it;
        it++;
        lli d1=abs(it->first-it1->first);
        //cout<<d1<<endl;
        it1=it;
        it++;
        lli d=abs(it->first-it1->first);
        if(d==d1)
        return cout<<d,0;
        cout<<-1;
    }
}