/*****int exgcd(int A, int B, int *X, int *Y){


    int x2, y2, x1, y1, x, y, r, r1, r2, q;
    x2=1; y2=0;
    x1=0; y1=1;
    for(r2=A, r1=B; r1!=0 ; r2=r1, r1=r, x2=x1, y2=y1, x1=x, y1=y){

        q=r2/r1;
        r=r2%r1;
        x=x2-(x1*q);

        y=y2-(y1*q);
    }
    *X=x2;
    *Y=y2;
    return r2;

}******/




///-----------------------------START FROM HERE--------------------------------------///

vector<int>vv, vv1;

int n, l, a;

int fnc(int id){

    int ret=vv[id+1]-vv1[id];
    ret/=a;
    return ret;

}

int main(){

    vv.pb(0);
    vv1.pb(0);
    scanf("%d %d %d", &n, &l, &a);

    for(int i=1; i<=n; i++){

        int x,y;
        scanf("%d %d", &x, &y);
        vv.pb(x);
        vv1.pb(x+y);
    }
    vv.pb(l);
    vv1.pb(l);
    int ans=0;

    for(int i=0; i<vv.size()-1; i++){

        ans+=fnc(i);


    }
    cout<<ans<<endl;
}

