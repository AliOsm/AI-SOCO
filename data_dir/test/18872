#include <math.h>

#include <set>
#include <list>
#include <cmath>
#include <ctime>
#include <map>
#include <deque>
#include <queue>
#include <stack>
#include <string>
#include <bitset>
#include <cstdio>
#include <limits>
#include <vector>
#include <climits>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <numeric>
#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>
#include <functional>
#include <iomanip>

using namespace std;

#define PI 3.14159265358979323846
#define EPS 1.E-8

#define FIN(a, n) { for (ul i = 0; i < n; ++i) cin >> a[i]; }
#define FOUT(a, n) { cout << a[0]; for (ul i = 1; i < n; ++i) cout << ' ' << a[i]; cout << '\n'; }

//typedef unsigned long long ull;
//typedef long long sll;

typedef unsigned char uc;
typedef unsigned int ui;
typedef unsigned long long ul;
typedef long long sl;

using namespace std;

ui x[100][100];

int main(int argc, char* argv[])
{
    ios_base::sync_with_stdio(false);

    ui n, m, k;
    cin >> n >> m >> k;

    for (ui i = 0; i < n; ++i)
        for (ui j = 0; j < m; ++j)
            cin >> x[i][j];

    ui r = 0,
       c = 0;

    for (ui j = 0; j < m; ++j) {

        ui q = 0,
           p = 0,
           qp = 0;
        for (ui i = 0; i < n; ++i) {
            if (x[i][j]) {
                ui cq = 0;
                for (ui l = i; l < n && l < i + k; ++l)
                    if (x[l][j])
                        ++cq;

                if (cq > q) {
                    q = cq;
                    qp = p;
                }

                ++p;
            }
        }

        r += q;
        c += qp;
    }

    cout << r << ' ' << c << endl;
    return 0;
}
