void solve();
signed main()
{
	fast;
	int t = 1;
	cin >> t;
	while(t--)
		solve();
}
void solve()
{
	int n,m;
    cin >> n >> m;
    if(m==0)
	{ 
		cout << 0 << endl; 
		return;
	}
    int ans=(n*(n+1))/2 , z = (n-m), g = m+1, k = z/g, r = z%g, min = r*(((k+1)*(k+2))/2) + (g-r)*(((k+1)*(k))/2);
    ans -= min;
    cout << ans << endl ;
} 