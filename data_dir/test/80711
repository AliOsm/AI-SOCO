#include<iostream>
using namespace std;
int main()
{
	int n,counter1,counter2;
	cin >> n;
	counter1 = 1;
	counter2 = n*n;
	for (int j = 0;j<n; j++)
	{
		for (int i = 0; i < n / 2; i++)
			cout << counter1++ << " ";
		for (int i = 0; i < n / 2; i++)
			cout << counter2-- << " ";
		cout << endl;
	}
	return 0;
}