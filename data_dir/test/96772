#include<bits/stdc++.h>
#define P(x,y) make_pair(x,y)
using namespace std;
const int MX=(1<<20);
typedef long long ll;
ll n , arr[MX] , sum = 0 , ans = 0;
int main(){
    cin>>n;
    for(int j=1;j<=n;j++){
        ll x;
        cin>>x;
        ans += (x - 1) * (j);
        ans++;
    }
    cout<<ans<<endl;
}
