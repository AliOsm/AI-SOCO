#include <bits/stdc++.h>

using namespace std;

#define mx 300005
#define int long long
#define pii pair <int, int>
#define piii pair <int, pii>
#define fi first
#define se second
#define mod 1000000007
#define inf 1e18
#define pb push_back
#define mem(ara, x) memset(ara, x, sizeof ara)
#define read() freopen("in.txt", "r", stdin)
#define write() freopen("out.txt", "w", stdout)
#define fst ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);

int ara[mx];

int32_t main(){
    //read();
    fst;
    int t;
    cin >> t;
    while(t--){
        int n, k;
        cin >> n >> k;
        int ans = 0;
        while(n){
            if(n%k==0) {
                n /= k;
                ans++;
            }
            else {
                int rem = n%k;
                n = n - rem;
                ans+= rem;
            }
        }
        cout << ans << endl;
    }
	return 0;
}























