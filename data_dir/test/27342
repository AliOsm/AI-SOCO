#include<bits/stdc++.h>
#define ll long long
#define ld long double
#define se second
#define fr first
#define pb push_back
using namespace std;
ll cnt,ans;
string s,s1;
int main(){
cin >> s >> s1;
for( int i=0; i < s1.size();i ++ ){
    if( s1[i]=='1' )
        cnt++;
    else
        ans++;
}
if( cnt!=ans )
    cout<<1<<endl<<s1;
else{
    cout<<2<<endl;
cout<<s1[0]<<" ";
for( int i=1; i<s1.size();i ++ )
    cout<<s1[i];
}
 }

