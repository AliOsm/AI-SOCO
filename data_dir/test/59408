#include<bits/stdc++.h>
#define MAX 1000005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, T, mn, mx;
i64 a[MAX], b[MAX];

i64 calcMax() {
    i64 sum = 0;
    i64 vl = N;
    i64 t = N;
    while( t ) {
        if( t >= 2 ) {
            sum += 2 * vl;
            vl --;
            t -= 2;
        }
        else {
            t--;
            sum += vl;
            vl--;
        }
    }
    return sum;
}

int main()
{
    optimiza_io
    cin >> N >> T;
    mn = ( N * ( N + 1 ) / 2 );
    mx = calcMax();
    if( T < mn ) {
        cout << "-1\n";
        exit( 0 );
    }

    T = min( T , mx );
    cout << T << "\n";
    
    T -= mn;
    for( i64 i = 1; i <= N; i ++ ) 
        a[i] = b[i] = i;
    
    i64 l = 1;
    i64 r = N;
    while( T ) {
        if( T <= r - l ) {
            swap( a[l] , a[l + T] );
            T = 0;
        }
        else {
            swap( a[l] , a[r] );
            T -= ( r - l );
            l++, r--;
        }
    }
    
    for( int i = 1; i <= N; i ++ )
        cout << a[i] << " \n"[i == N];
    for( int i = 1; i <= N; i ++ )
        cout << b[i] << " \n"[i == N];
    return 0;
}

/*
5 1 4 2 3 
1 5 2 4 3
*/