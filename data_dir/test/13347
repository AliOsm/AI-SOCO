#include<bits/stdc++.h>
#define pb push_back
#define adelkhah main
//#define int long long
using namespace std;
typedef long long ll;
typedef long double ld;
typedef pair<int,int> pii;
int32_t adelkhah()
{
    string s; cin >> s;
    int ans = 0;
    int id = 'a';
    for(int i = 0; i < s.size(); i++){
        int l = s[i];
        int t = min(abs(l - id), 26 - abs(l - id));
        ans += t;
        id = l;
    }
    cout << ans;
}
