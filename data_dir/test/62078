#define ph(a)           push(a)
#define pb(a)           push_back(a)
#define scd(a)          scanf("%d",&a)
#define scdd(a,b)       scanf("%d %d",&a,&b)
#define ll              long long int
#define scl(w)          scanf("%I64d",&w)
#define scll(a,b)       scanf("%I64d %I64d",&a,&b)
#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n;
    cin >> n;
    cout << (n&1?((n/2+1)*(n/2+1)):((n/2)*(n/2+1))) << endl;

    return 0;
}
