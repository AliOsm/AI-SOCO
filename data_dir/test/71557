#include <bits/stdc++.h>
using namespace std;

int n, ans = 0;
int d[101][3];

int main (int argc, char *argv[])
{
	scanf("%d", &n);
	memset(d, 0, sizeof(d));
	for(int i = 1; i <= n; ++i) {
		int a;
		scanf("%d", &a);
		d[i][0] = max(d[i - 1][0], max(d[i - 1][1], d[i - 1][2]));
		if(a == 1 || a == 3) {
			d[i][1] = max(d[i - 1][0] + 1, d[i - 1][2] + 1);
		}
		if(a == 2 || a == 3) {
			d[i][2] = max(d[i - 1][0] + 1, d[i - 1][1] + 1);
		}
	}
	ans = max(d[n][0], max(d[n][1], d[n][2]));
	printf("%d", n - ans);

	return 0;
}

