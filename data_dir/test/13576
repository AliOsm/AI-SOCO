  #include <bits/stdc++.h>

using namespace std;

const int N = int(1e5 + 5);
const int INF = 1e9 + 7;

typedef long long ll;
typedef pair < int, int > pii;

int n;
vector < char > v;
int main (){
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);
  cin >> n;
  string s;
  for (int i = 1; i <= n; ++i){
    if (i % 4 == 1){
      s += 'a';
    }
    else if (i % 4 == 2){
      s += 'b';
    }
    else if (i % 4 == 3){
      s += 'c';
    }
    else {
      s += 'd';
    }
  }
  cout << s;
  return 0;
}
