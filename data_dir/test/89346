#include <bits/stdc++.h>
#define ll long long
#define ull unsigned ll
#define ld long double
#define F first
#define S second
#define mp make_pair
#define pb push_back

using namespace std;

const int MIN = 1e3 + 2;
const int MXN = 1e6 + 3;
const int INF = 1e9 + 7;
const double EPS = 1e-9;
const ll LINF = 1e18 + 15;

ll n, t, k, d;

int main()
{
    cin >> n >> t >> k >> d;
    ll how = d / t * k;
    //ll need = (n + k - 1) / k * t;
    n -= how;
    if ((n + k - 1) / k > 1){
        cout << "YES";
    }
    else {
        cout << "NO";
    }
    return 0;
}
