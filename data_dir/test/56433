	cin >> n >> k;
	cout << 1ll*k*(6*(n-1)+5) << endl;
	for(int i=0;i<n;++i){
		cout << k*(i*6+1) << ' ' << k*(i*6+2) << ' '<< k*(i*6+3) << ' ' << k*(i*6+5) << endl;
	}
	return 0;
