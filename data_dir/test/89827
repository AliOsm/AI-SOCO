main ()
{
    ios;
    int n;
    cin>>n;
    int f=n/2;
    int l=f*(n-f);
    cout<<l<<endl;
    for (int i=1;i<=f;++i){
        for (int j=f+1;j<=n;++j){
            cout<<i<<' '<<j<<endl;
        }
    }
}

