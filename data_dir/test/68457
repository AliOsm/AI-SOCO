#include<bits/stdc++.h>
using namespace std;
#define ll long long int
vector<ll>vec;
int main()
{
    ll a,b,c,d,e,i,j,k,l,n,m,x,y,t,p;
    scanf("%lld",&t);
    for(p=1;p<=t;p++)
    {
        scanf("%lld",&n);
        vec.clear();
        for(i=0;i<n;i++)
        {
            scanf("%lld",&a);
            vec.push_back(a);
        }
        sort(vec.begin(),vec.end());
        a=vec[n-2]-1;
        a=min(a,n-2);
        printf("%lld\n",a);
    }

}
