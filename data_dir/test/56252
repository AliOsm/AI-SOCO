#include <iostream>
#include <stdio.h>
#include <algorithm>
#include <vector>

#define pb push_back

using namespace std;

int n,m,p,i,j;

main()
 {
  cin>>n;
  cout<<(n*n+1)/2<<endl;
  for (i=1;i<=n;i++)
   {
    for (j=1;j<=n;j++)
     if ((i+j)%2 == 0) cout<<"C"; else cout<<".";
    cout<<endl;
   }
   
 }
