using namespace std;

int main() {
    ios_base::sync_with_stdio(false);
	//freopen("input.txt", "r", stdin);
	//freopen("output.txt", "w", stdout);
    int a, b;
    cin >> a >> b;
    if (a == 0 && b == 0) {
        cout << "NO" << endl;
    } else {
        cout << (abs(a - b) <= 1 ? "YES" : "NO") << endl;
    }
	return 0;
}