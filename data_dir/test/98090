#include<bits/stdc++.h>

using namespace std;

string s;
int k,a,b;

int main()
{
    cin>>k>>a>>b;
    int p=a/k;
    int p1=b/k;

    if (p==0 && b%k!=0) {
        printf("-1\n");
        return 0;
    }
    if (p1==0 && a%k!=0)
    {
        printf("-1\n");
        return 0;
    }
    printf("%d\n",p+p1);
    return 0;

}
