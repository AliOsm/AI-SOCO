#include<iostream>
#include<cstring>
#include<string>
using namespace std;
int main()
{
    
  int d;
  cin>>d;
  int t;
  cin>>t;
  char och[d];
  cin>>och;
    
   for(int a=0; a<t; a++)
   {
       for(int aa=0; aa<d-1; aa++)
       {
           
       
       if(och[aa]=='B' && och[aa+1]=='G')
       {
           och[aa]='G';
           och[aa+1]='B';
           aa++;
       }
       }
   }
    
    cout<<och;




return 0;
}