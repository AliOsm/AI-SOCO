#include<bits/stdc++.h>
#define ll long long
#define fi first
#define se second
#define MOD 1000000007
ll mpow(ll a, ll n,ll mod)
{ll ret=1;ll b=a;while(n) {if(n&1)
    ret=(ret*b)%mod;b=(b*b)%mod;n>>=1;}
return (ll)ret;
}
using namespace std;
#define irr acos(-1.0)
#define MAX 1000003
#define MAXA 100003
#define mem(x,a) memset(x,a,sizeof(x))
#define pii pair<int,int>
#define mp make_pair
int main()
{
    int i,j;
    int n;
    cin>>n;
    if(n==2)
        {cout<<"white"<<endl;cout<<1<<" "<<2;return 0;}
    if(n==3)
    {
        cout<<"black";
        return 0;
    }
    if(n%2)
        cout<<"black"<<endl;
    if(n%2==0)
    {
        cout<<"white"<<endl;
        cout<<1<<" "<<2;
    }
    return 0;
}
