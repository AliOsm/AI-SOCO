#include <bits/stdc++.h>
using namespace std;

#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl "\n"
#define long long long 

int main(){
   IOS;

   long int n;
   cin>>n;

   n--;
   for(long int i = 1; i <= n; i++)
        n -= i;
    
    cout<<n+1;      
   return 0;
}