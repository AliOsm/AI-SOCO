#include <bits/stdc++.h>
using namespace std;

const int inf = 1000000000;

int main( )
{
    int a, b, n;
    cin >> n;
    if (n % 2 == 0)
    {
        a = inf;
        b = a - n;
    }
    else
    {
        a = inf - 1;
        b = a - n;
    }
    cout << a << ' ' << b << '\n';
    return 0;
}
