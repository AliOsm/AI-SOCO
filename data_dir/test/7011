/*
1118A. Water Buying
*/

#include<bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef unsigned long long ull;
const ll prime = 1e9+7;

int main(){
  ll q, n, a, b, s;
  cin >> q;
  while(q--){
    scanf("%lld %lld %lld", &n, &a, &b);
    if(a*2 > b){s = b*(n/2)+(n%2)*a;}
    else{s = n*a;}
    printf("%lld\n", s);
  }
}