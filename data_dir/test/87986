int main(){
    cin>>n>>k;
    rep(i,1,n){
        cin>>c[i];
        d[i]=c[i];
    }
    sort(d+1,d+n+1);
    reverse(d+1,d+n+1);
    rep(i,1,k){
        sum+=d[i];
        mp[d[i]]++;
    }
    cout<<sum<<'\n';
    rep(i,1,n){
        ans++;
        if(mp[c[i]] && k > 1){
            cout<<ans<<" ", ans = 0;
            mp[c[i]]--;
            k--;
        }
    }
    cout<<ans;
}