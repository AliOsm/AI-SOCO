#include<bits/stdc++.h>
using namespace std;
#define ll  long long
#define endl '\n'
#define FASTINOUT ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
const ll mod = 1000000007;
const double PI = 3.141592653589793238463;
const int N=2e5+100;
int main()
{
    FASTINOUT;
    int q;
    cin>>q;
    while (q--){
       int x;
       cin>>x;
       int y[2*x];
       for (int i=0;i<2*x;i++)
        cin>>y[i];
       sort(y,y+2*x);
       cout<<y[x]-y[x-1]<<endl;
    }
    return 0;
}
