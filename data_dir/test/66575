#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    ll i,j,k,n;
    cin>>n;
    for(i=0;i<n;i++)
    {
        ll c,sum;
        cin>>c>>sum;
        ll x=sum/c;
        ll y=x*c;
        ll z=sum-y;
        ll tot=(x+1)*(x+1)*z+x*x*(c-z);
        cout<<tot<<endl;
    }
}
