#include <iostream>
#include <algorithm>
#include <vector>
#include <queue>
#include <string>
#include <set>
#include <iomanip>
using namespace std;

int gcd(int a, int b) {
	while (b) {
		a%=b;
		swap(a,b);
	}
	return a;
}

int main() {
	int n;
	cin >> n;
	cout << (n-1)/2;


	return 0;
}