#include <bits/stdc++.h>
#define ll long long
#define OO LONG_LONG_MAX
#define oo 1e9
#define yalla ios::sync_with_stdio(0),cin.tie(0),cout.tie(0);
#define sz  100005
#define re return
#define mod  1000000007
#define pi acos(-1)
using namespace std;
ll n,m,res,day;
//
ll searchh()
{ll s=1,e=2e9,mid;

 while(s<=e)
 {
  mid=(s+e)/2;
  ll eq=(mid*(mid-1))/2;

  if(eq>=n-m)
    e=mid-1,res=mid-1;
  else
    s=mid+1;
 }

}
///
int main()
{yalla;
 cin>>n>>m;
if(n<=m)cout<<n<<endl,exit(0);
searchh();
cout<<res+m<<endl;
 return 0;
}
