//ios::sync_with_stdio(false);
#include <bits/stdc++.h>
#define pb push_back
#define adelkhah main
#define int long long
using namespace std;
typedef long long ll;
typedef pair<int,int> pii;
int32_t adelkhah()
{
    int n; cin >> n; int k; cin >> k;
    for(int i = k-1; i > 0; i--){
        if(n % i == 0){
            cout << i + (n/i) * k;
            return 0;
        }
    }
}
