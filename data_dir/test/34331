#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define f first
#define s second
#define bp push_back
#define mp make_pair
const int mx=1e5+10;
const double eps=1e-9;
const int inf=1e9;
vector<pair<int,int> >adj[105];
int ans=0;
main(){
    int n;
    scanf("%d",&n);
    if(n==2){
        printf("-1\n1 2");
        return 0;
    }
    if(n<6){
        printf("-1\n");
    }
    else{
        printf("1 2\n2 3\n2 4\n");
        for(int i=5;i<=n;i++)printf("4 %d\n",i);
    }
    for(int i=2;i<=n;i++){
        printf("1 %d\n",i);
    }
}
