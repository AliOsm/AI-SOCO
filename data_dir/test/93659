#include <bits/stdc++.h>

using namespace std;

int main()
{
	long long n;
	cin >> n;
	
	if (n < 4)
	{
		cout << "NO";
		return 0;
	}
	
	cout << "YES\n";
	
	if (n == 5)
	{
		cout << "4 * 5 = 20\n2 - 1 = 1\n1 + 3 = 4\n20 + 4 = 24\n";
		return 0;
	}
	
	if (n == 4)
	{
		cout << "1 * 2 = 2\n2 * 3 = 6\n6 * 4 = 24\n";
		return 0;
	}
	
	cout << "2 * 3 = 6\n6 * 4 = 24\n6 - 5 = 1\n1 - 1 = 0\n";
	
	for (long long i = 7; i <= n; i++)
		cout << i << " * 0 = 0\n"; 
		
	cout << "24 + 0 = 24\n";
}