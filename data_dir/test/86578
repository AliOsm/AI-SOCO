#include<bits/stdc++.h>
using namespace std;
 
#define pb push_back
#define ll long long
#define maxn 500005
#define fr(i,j,k) for(int i=j;i<k;i++)
#define f(n) fr(i,0,n)
#define f1(n) fr(i,1,n+1)
#define ms(i) memset(i,0,sizeof(i));
#define ms1(i) memset(i,-1,sizeof(i));
#define F first
#define S second
const int mod = 1e9 + 7;

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n, m;
    cin >> n >> m;
    string s;
    cin >> s;
    int f = 0;
    for(auto i:s){
        if(i != '9'){
            f = 1;
        }
    }
    cout << n << endl;
    string tmp = s.substr(0,m);
    string ans = "";
    f(n){
        ans += tmp[i%m];
    }
    if(ans >= s){
        cout << ans << '\n';
        exit(0);
    }
    reverse(tmp.begin(),tmp.end());
    for(auto &i:tmp){
        if(i!='9'){
            i++;
            break;
        }
        else{
            i = '0';
        }
    }
    reverse(tmp.begin(),tmp.end());
    f(n){
        cout << tmp[i%m];
    }
    cout << endl;
}