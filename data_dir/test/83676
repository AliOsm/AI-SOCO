#define gcd(a,b) __gcd((a),(b))
#define sqr(a) ((a)*(a))
#define odd(a) ((a)&1)
#define foru(i,n) for (int i=0;i<(n);i++)
#define ford(i,n) for (int i=(n)-1;i>=0;i--)
#define forab(i,l,r) for (int i=(l);i<=(r);i++)
#define forabd(i,r,l) for (int i=(r);i>=(l);i--)
#define fillchar(a,b) memset((a),(b),sizeof((a)))
#define pb push_back
#define F first
#define S second
#define all(x) x.begin,x.end
#define pw2(x) (1ull<<(x))

const long double eps=1e-20;
const long double pi=acos(-1.0);
const long long inf=1000*1000*1000*1000*1000*1000;
const long long base=1000*1000*1000+7;

using namespace std;

int f[111111],m,l,r;
string s;

int main(){
	ios_base :: sync_with_stdio(false);
	cin>>s;
	forab(i,1,s.size()-1)f[i]=f[i-1]+(s[i-1]==s[i]);
	cin>>m;
	while (m--){
		cin>>l>>r;
		r--;
		cout<<f[r]-f[l-1];
		cout<<endl;
	}
	return 0;
}

	 