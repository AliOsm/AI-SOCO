#include <bits/stdc++.h>
#include <ext/pb_ds/assoc_container.hpp>
#include <ext/pb_ds/tree_policy.hpp>
using namespace std;
using namespace __gnu_pbds;

int32_t main() {
    ios_base :: sync_with_stdio(false);
    long long n, k;
    cin >> n >> k;
    for (int i = 0; i < k; ++i) {
        cout << i * 2 + 2 << " " << i * 2 + 1 << " ";
    }
    for (int i = k; i < n; ++i) {
        cout << i * 2 + 1 << " " << i * 2 + 2 << " ";
    }
}
