#include<bits/stdc++.h>
using namespace std;

#define ll long long

ll t,n,a[200001];

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);
//    freopen("a.in","r",stdin);
    cin>>t;
    while(t--)
    {
        cin>>n;
        n*=2;
        for(int i=1;i<=n;i++)
            cin>>a[i];
        sort(a+1,a+n+1);
        cout<<a[n/2+1]-a[n/2]<<endl;
    }
}


