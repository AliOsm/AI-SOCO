	ios::sync_with_stdio(false);
	cin.tie(0); cout.tie(0); cout.setf(ios::fixed); cout.precision(20);
	ll r;
	cin >> r;
	for (ll x = 1; x <= 1000000; x++) {
		ll kek = r - x * x - x - 1;
		if (kek < 0) break;
		if (kek % (2 * x) == 0 && kek/(2*x)>0) {
			cout << x << " " << kek / (2 * x);
			return 0;
		}
	}
	cout << "NO";
	return 0;
}