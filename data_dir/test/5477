#include "bits/stdc++.h"

#ifdef PRINTERS
#include "printers.hpp"
using namespace printers;
#define tr(a)		cerr<<#a<<" : "<<a<<endl
#else
#define tr(a)    
#endif

#define ll          long long
#define pb          push_back
#define mp          make_pair
#define pii         pair<int,int>
#define vi          vector<int>
#define all(a)      (a).begin(),(a).end()
#define F           first
#define S           second
#define sz(x)       (int)x.size()
#define hell        1000000007
#define endl        '\n'
#define rep(i,a,b)	for(int i=a;i<b;i++)
using namespace std;

void solve(){
	int N;
	cin>>N;
	vector<int>v(N);
	rep(i,0,N)cin>>v[i];
	string s;
	cin>>s;
	s.pb('0');
	int cur=0;
	for(int i=1;i<=N;i++){
		if(s[i-1]=='1')continue;
		else{
			sort(v.begin()+cur,v.begin()+i);
			cur=i;
		}
	}
	cout<<(is_sorted(all(v))?"YES":"NO");
}

int main(){
	ios_base::sync_with_stdio(false);
	cin.tie(0);
	cout.tie(0);
	int t=1;
//	cin>>t;
	while(t--){
		solve();
	}
	return 0;
}