#include<bits/stdc++.h>
using namespace std;

#define ll long long

int main()
{
//    freopen("a.in","r",stdin);
//    freopen("a.out","w",stdout);
    ll n;
    cin>>n;
    if(n>36)
    {
        cout<<-1;
    }
    else
    {
        for(int i=0;i<n/2;i++)
        {
            cout<<8;
        }
        if(n&1)
            cout<<6;
    }
}
