using namespace std;


int main() {
    //freopen("input.txt", "r", stdin);
    //freopen("output.txt", "w", stdout);

    int n, a, b;
    cin >> n >> a >> b;
    
    int h[2010];
    for (int i = 0; i < n; i++) {
        cin >> h[i];
    }
    sort(h, h + n);

    cout << h[b] - h[b - 1];
}