#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    int n,a[200005],ans=0,m;
    double min1=1e9;
    cin>>n>>m;
    for (int i=0;i<n;i++)
    {
        int x,y;
        cin>>x>>y;
        double f=(double)x/y;
        min1=min(min1,f);
    }
    cout.precision(10);
    cout<<m*min1;
    return 0;
}
