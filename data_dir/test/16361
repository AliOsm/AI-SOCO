int main()
{
    //freopen("a.in", "r", stdin);
    //freopen("a.out", "w", stdout);
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.precision(20);
    cout << fixed;
    //ll TL = 0.95 * CLOCKS_PER_SEC;
    //clock_t time = clock();
    int n;
    cin >> n;
    int a[n];
    int b = 0;
    rep(i, 0, n) {
        cin >> a[i];
        setmax(b, a[i]);
    }
    int ans = 0, cur = 0;
    rep(i, 0, n) {
        cur++;
        if (i == n - 1 || a[i] != a[i + 1]) {
            if (a[i] == b) {
                setmax(ans, cur);
            }
            cur = 0;
        }
    }
    cout << ans << "\n";
    return 0;
}