#include<bits/stdc++.h>
#define MAX 5005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, K, mx;
int a[MAX];
int cnt[MAX];
int b[MAX];
int vec[MAX];

int main()
{
    optimiza_io
    cin >> N >> K;
    for( int i = 1; i <= N; i ++ )
    {
        cin >> a[i];
        cnt[a[i]]++;
        if( cnt[a[i]] > K )
        {
            cout << "NO\n";
            exit(0);
        }
        b[i] = cnt[a[i]];
        vec[b[i]]++;
        mx = max( mx , b[i] );
    }
    mx++;
    for( int i = 1; i <= N; i ++ )
        if( mx <= K && vec[b[i]] > 1 )
        {
            vec[b[i]]--;
            b[i] = mx++;
        }
    
    cout << "YES\n";
    for( int i = 1; i <= N; i ++ )
        cout << b[i] << " ";
    
    return 0;
}


