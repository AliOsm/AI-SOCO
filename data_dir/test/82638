#include <iostream>
#include <string>
#include <cmath>
#include <algorithm>
#include <vector>
#include <set>
#include <map>
#include <sstream>
using namespace std;
int main()
{
    int n , t1 , t2 , res=0 , c=0 , x;
    cin >> n >> t1 >> t2;
    for(int i=0 ; i < n ; i++)
    {
        cin >> x;
        if(x <= t1)
            c++;
        else
            c=0;
        if(c >= t2)
            res++;
    }
    cout << res << endl;
}