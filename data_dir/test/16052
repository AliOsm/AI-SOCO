const int mod=1000000007;
typedef pair<int,int> pii;
const int N=1e5+5;
int32_t main()
{
    ios_base::sync_with_stdio(0); cin.tie(0);cout.tie(0);
    int n,a;
    cin>>n>>a;
    if(a%2){
        int d=(a-1)/2;
        cout<<d+1<<endl;
    }
    else{
        int d=n-a;
        cout<<d/2+1<<endl;
    }
}