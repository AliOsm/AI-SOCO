const int MOD = 1e9 + 7;
int main()
{
  BUFF;
  int n;
  cin >> n;
  int a = 0, b = 0;
  string s;
  cin >> s;
  int r=0;
  for(int i=0;i<s.size();i++){
    if(s[i]=='<') r++;
    else break;
  }
  for(int i=s.size()-1;i>=0;i--) {
    if(s[i]=='>') r++;
    else break;
  }
  cout<<r<<endl;
  return 0;
}
