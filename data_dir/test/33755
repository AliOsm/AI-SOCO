#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define M 100005

int ara[M];

int main()
{
    int q;
    scanf("%d", &q);

    while(q--)
    {
        ll x, y;
        scanf("%lld %lld", &x, &y);

        printf("%s\n", (x-y > 1)? "YES": "NO");
    }

    return 0;
}
