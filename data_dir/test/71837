#include <bits/stdc++.h>
#define ll long long

using namespace std;

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    ll k, n, sc;
    cin >> k;
    sc = 2000 + k;
    cout << "2000\n-1 ";

    for (int i = 0; i < 1999; i++)
        if (i < sc % 1999)
            cout << sc / 1999 + 1 << " ";
        else
            cout << sc / 1999 << " ";
}
