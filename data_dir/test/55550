#include <bits/stdc++.h>

#define F first
#define S second
#define Pb push_back

using namespace std;

int n,a[100005];

main ()
{
    cin>>n;
    
    for (int i=1; i<=n; i++)
        cin>>a[i];
        
    sort(a+1,a+n+1);
    
    cout<<min(abs(a[1]-a[n-1]),abs(a[2]-a[n]))<<endl;
}