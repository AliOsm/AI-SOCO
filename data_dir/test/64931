using namespace std;
#include<bits/stdc++.h>
#define ll long long

main(void)
{
    ll n;
    cin>>n;
    if(n==2)
    {
        cout<<"NO";
        return 0;
    }
    else if(n>2)
    {
        for(int i=2; i<=n; i+=2)
            if((n-i)%2==0)
            {
                cout<<"YES";
                return 0;
            }
    }
    cout<<"NO";
}
