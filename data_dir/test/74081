int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int a,b,c;
    cin>>a>>b>>c;
    int arr[4];
    arr[0]=a+b+c;
    arr[1]=2*a+2*c;
    arr[2]=2*b+2*c;
    arr[3]=2*a+2*b;
    sort(arr,arr+4);
