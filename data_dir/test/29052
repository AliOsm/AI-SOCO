#include <bits/stdc++.h>
using namespace std;

const int MAXN = 100005;

int main()
{
    int n;

    scanf("%d", &n);
    if(n < 6)
        printf("-1\n");
    else
    {   
        printf("1 2\n2 3\n2 4\n");
        for(int i = 5; i <= n; ++i)
            printf("1 %d\n", i); 
    }   
    for(int i = 1; i < n; ++i)
        printf("%d %d\n", i, i + 1); 

    return 0;
}
