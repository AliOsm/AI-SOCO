void f(){
    int n,m;cin>>n>>m;
    
    
    if(n % 2 && m % 2){
        for(int i = 0;i<n;i++){
            for(int j = 0;j<m;j++){
                if((i+j)%2 ){
                    cout<<"W";
                }else{
                    cout<<"B";
                }
            }
            cout<<"\n";
        }
        return;
    }
    
    if(n%2 == 0 && m%2 == 0){
        for(int i = 0;i<n;i++){
            for(int j = 0;j<m;j++){
                
                if(i+j == n+m-2){
                    cout<<"B";
                }
                else if((i+j)%2 ){
                    cout<<"B";
                }else{
                    cout<<"W";
                }
            }
            cout<<"\n";
        }
        return;
    }
    
    if(n%2 == 0 && m%2 == 1){
        for(int i = 0;i<n;i++){
            for(int j = 0;j<m;j++){
                
                if(i+j == n+m-2){
                    cout<<"B";
                }
                else if((i+j)%2 ){
                    cout<<"W";
                }else{
                    cout<<"B";
                }
            }
            cout<<"\n";
        }
        return;
    }
    
    
    if(n%2 == 1 && m%2 == 0){
        for(int i = 0;i<n;i++){
            for(int j = 0;j<m;j++){
                
                if(i+j == n+m-2){
                    cout<<"B";
                }
                else if((i+j)%2 ){
                    cout<<"W";
                }else{
                    cout<<"B";
                }
            }
            cout<<"\n";
        }
        return;
    }
}


int main(int argc, char *argv[]){
    //freopen("input.txt", "r", stdin);
    //freopen("output.txt", "w", stdout);
    
    
    int k;cin>>k;
    for(int i = 0;i<k;i++){
        f();
    }
	return 0;
}
 