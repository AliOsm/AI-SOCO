#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c,a[123456], b[125678], l, r, s, t, k, m, xh, x, x1, y,z;
string p;
int main() {
    cin >>n>>k;
    s = 2*(n+k);
    for (i = 1; i <12345678; i ++){
        if (i*(i+3) == s){
            y = i;
            break;
        }
    }
    cout <<n-y;
