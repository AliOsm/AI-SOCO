// In The Name Of God
#include<bits/stdc++.h>
#define pb push_back
#define ll long long
using namespace std;

const int MAXN = 1e5+22 ;

int n;
ll res,x;
int main()
{
	ios::sync_with_stdio(false),cin.tie(0);
	cin>>n;
	for(int i=1;i<=n;i++)
	{
		cin>>x;
		res+=(x-1)*(i);
	}	
	cout<<res+n;
	return 0;
}
