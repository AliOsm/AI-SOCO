using namespace std;

#define FOR(i,a,b) for(int i=a;i<b;i++)
#define FOR1(i,a,b) for(int i=a;i>=b;i--)

int min(int x,int y)
{
    return (x<y)?x:y;
}
int max(int x,int y)
{
    return (x>y)?x:y;
}


int main()
{
    int n,m;

    scanf("%d %d",&n,&m);
    
    cout<<m+n-1;
    FOR(i,0,m)cout<<"\n1 "<<i+1;
    FOR(i,1,n)cout<<"\n"<<i+1<<" 1";

    //_getch();
    return 0;
}