#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, K;

int main()
{
    optimiza_io
    cin >> N >> K;
    if( K * K - K < N )
    {
        cout << "NO\n";
        return 0;
    }
    cout << "YES\n";
    for( i64 i = 1; i <= N; i ++ )
    {
        i64 a = i % K;
        if( ! a ) a = K;
        i64 b = a + ( i64 ) ceil( ( double ) i / ( double ) K );
        b %= K;
        if( ! b ) b = K;
        cout << a << " " << b << "\n";
    }
    return 0;
}

