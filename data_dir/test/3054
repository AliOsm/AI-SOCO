#include<bits/stdc++.h>
#include<ext/pb_ds/assoc_container.hpp>
#include<ext/pb_ds/tree_policy.hpp>
#define MAX ((ll)(1e15))
#define pi (2*acos(0))
#define mp make_pair
#define M ((int)(998244353))
#define xx first
#define yy second
#define NN ((int)(305))
#define N ((int)(3e5 + 5))
#define pq priority_queue
///#define Q queue
#define eps 0
#define log 20
#define pb push_back
#define MOD 998244353


using namespace std;
using namespace __gnu_pbds;

typedef long long ll;
typedef unsigned long long lu;

typedef tree < int,  null_type,  less < int >,  rb_tree_tag,  tree_order_statistics_node_update > o_set;

int main()
{
    int t;
    scanf("%d",&t);
    while(t--){
        ll n, x, y, d;
        scanf("%lld %lld %lld %lld",&n,&x,&y,&d);
        if(abs(x-y)%d==0) printf("%lld\n",abs(x-y)/d);
        else{
            ll ans = MAX;
            if((y-1)%d==0){
                ll sum = (x-1)/d;
                if((x-1)%d!=0) sum++;
                sum += (y-1)/d;
                ans = sum;
            }
            if((n-y)%d==0){
                ll sum = (n-x)/d;
                if((n-x)%d!=0) sum++;
                sum += (n-y)/d;
                ans = min(ans,sum);
            }
            if(ans==MAX) printf("-1\n");
            else printf("%lld\n",ans);
        }
    }
}
