#include <algorithm>
#include <cstdio>
#include <cstdlib>
#include <cstring>
#include <iostream>
using namespace std;

int main(void)
{
    int n;
    int a, b;

    scanf("%d", &n);

    b = n / 3 + (n % 3 == 2);
    a = b / 12;
    b %= 12;

    printf("%d %d\n", a, b);

    return 0;
}