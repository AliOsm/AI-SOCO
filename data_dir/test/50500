#include <iostream>
#include <algorithm>
#include <vector>
#include <set>
#include <stack>
#include <map>
#include <iomanip>
#include <cmath>
using namespace std;
int main() {

  ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);

  int t = 0;

  cin >> t;

  while(t--) {
    int x = 0, y = 0, a = 0, b = 0;
    cin >> x >> y >> a >> b;
    if((y - x) % (a + b) == 0) cout << (y - x) / (a + b) << endl;
    else cout << "-1\n";
  }

  return 0;
}
