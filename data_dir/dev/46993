inline int in(){ int x, y; y = scanf("%d", &x); return x; }

const int N = -1;

int main(){
	int n = in();
	if (n < 6)
		cout << -1 << endl;
	else{
		cout << 1 << ' ' << 2 << '\n';
		for (int i = 3; i <= n; i++)
			cout << i%2+1 << ' ' << i << '\n';
	}
	for (int i = 2; i <= n; i++)
		cout << 1 << ' ' << i << '\n';
	return 0;
}

