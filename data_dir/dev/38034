#include <bits/stdc++.h>
using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    //freopen("input.in", "r", stdin);
    int n, m;
    cin >> n >> m;
    cout << 3223223 << " " << 3223223 << endl;
    for(int i = 0; i < n - 2; i++) {
        cout << i + 1 << " " << i + 2 << " 1\n";
    }
    cout << n - 1 << " " << n << " " << 3223223 - (n - 2) << endl;
    int cnt = m - (n - 1);
    int a = 1, b = 3;
    while(cnt--) {
        cout << a << " " << b << " " << (int)1e9 << endl;
        b++;
        if(b > n) {
            a++, b = a + 2;
        }
    }
}
