#define _CRT_SECURE_NO_WARNINGS

#include <string>
#include <sstream>
#include <cstring>
#include <sstream>
#include <vector>
#include <algorithm>
#include <iostream>
#include <stdio.h>
#include <fstream>
#include <ctime>
#include <cmath>
#include <math.h>
#include <set>
#include <map>
using namespace std;

#define pp system("pause");
#define ct double ttme = clock()
#define p_ct cout << (clock() - ttme) / CLOCKS_PER_SEC << endl
#define all(c) c.begin(),c.end()
#define fft ifstream fin("input.txt"); ofstream fout("output.txt")
#define fft_c FILE *fin, *fout
#define fft_c_open fin = fopen("input.txt","r"); fout = fopen("output.txt","w")
#define fft_c_cl fclose(fin); fclose(fout)
typedef unsigned long long ull;
typedef signed long long ll;



int main()
{
	int n;
	int mass[400];

	cin >> n;

	int sum = 0;

	for(int i = 0; i < n; i++)
	{
		cin >> mass[i];
		sum += mass[i];
	}

	int start = 0;

	while(sum > 0)
	{
		if(mass[start] > 0)
		{
			cout << "P";
			sum--;
			mass[start]--;
		}

		if(sum == 0)
			break;


		bool left = true;

		if(start > 0)
		{
			if(mass[start - 1] == 0 && start < n - 1)
				left = false;
		}
		else
			left = false;


		if(left)
		{
			cout << "L";
			start--;
		}
		else
		{
			cout << "R";
			start++;
		}
	}

	//pp;
}