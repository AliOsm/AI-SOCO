#include <bits/stdc++.h>

using namespace std;

#define mem(a,b) memset(a,b,sizeof(a))
#define FOR(i,j,k) for(int i=j;i<=k;i++)
#define read        freopen("in.txt", "r", stdin)
#define write       freopen("out.txt", "w", stdout)
#define pf          printf
#define sf(n)       scanf("%d", &n)
#define sff(a,b)    scanf("%d %d", &a, &b)
#define PB push_back
#define F first
#define S second
#define MP make_pair

typedef long long LL;
typedef pair<int,int> pii;

const int MAX = (2e5) + 5;

void solve()
{
    int n, x, a, b;

    cin >> n >> x >> a >> b;

    int prin = abs(a - b) + x;
    cout << min(n-1, prin) << endl;
}

int main()
{
    ios::sync_with_stdio(false);
    //read;

    int tc;

    cin >> tc;

    FOR(tt,1,tc) solve();
    return 0;
}

