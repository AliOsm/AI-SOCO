#include <bits/stdc++.h>
#define REP(i, n) for (long long i = 0; i < n; i++)
using namespace std;
typedef long long Long;

//const Long N=;

int main(){
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.precision(10);
	cout << fixed;
    
    Long t;
    cin >> t;
    while(t--){
    	Long n, a ,b;
    	cin >> n >> a >> b;
    	cout << min(n*a,(n/2)*b + (n%2)*a) << endl;
	}
	return 0;
}
