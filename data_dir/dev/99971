#include <iostream>
#include <vector>
#include <string>
#include <set>
#include <fstream>
#include <map>
#include <stack>
#include <algorithm>
#include <cmath>
#include <ctime>

using namespace std;
#define ll long long
#define MOD 1000000007
#define mp(a, b) make_pair(a, b)
#define PI 3.1415926535
#define EPS 0.00000001
#define pii pair<int, int>
#define INF 3000000

#define DEBUG 41

#ifndef DEBUG

ifstream in("tickets.in");
ofstream out("tickets.out");

#define cin in
#define cout out

#endif

int main()
{
	ll a, b, s;
	cin >> a >> b >> s;
	a = abs(a);
	b = abs(b);
	if(a + b > s)
		cout << "No";
	else
		if((a + b) % 2 == s % 2)
			cout << "Yes";
		else
			cout << "No";
}


