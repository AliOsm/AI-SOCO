#include <string>
#include <string.h>
#include <time.h>
#include <vector>

using namespace std;

#if LOCAL
	#define DO_NOT_SEND
#endif

typedef long long LL;

int IntMaxVal = (int) 1e20;
int IntMinVal = (int) -1e20;
LL LongMaxVal = (LL) 1e20;
LL LongMinVal = (LL) -1e20;

#define FOR(i, a, b) for(int i = a; i < b ; ++i)
#define FORD(i, a, b) for(int i = a; i >= b; --i)

template<typename T> inline void minimize(T &a, T b) { a = std::min(a, b); }
template<typename T> inline void maximize(T &a, T b) { a = std::max(a, b); }

template<typename T> inline void swap(pair<T, T> &p) { swap(p.first , p.second ); }

#define all(v) v.begin(),v.end()

#define endl '\n'
template<typename T> struct argument_type;
template<typename T, typename U> struct argument_type<T(U)> { typedef U type; };
#define next(t, i) argument_type<void(t)>::type i; cin >> i;

template <typename T1, typename T2> istream& operator >>(istream& is, pair<T1, T2>& s) { is >> s.first >> s.second; return is; }
template <typename T> ostream& operator << (ostream& os, const vector<T> &v) { for (int i = 0 ; i < v.size() ; i++) { if (i) os << ' '; os << v[i]; } os << endl; return os; }
template <typename T1, typename T2> ostream& operator << (ostream& os, const vector<pair<T1, T2>> &v) { for (int i = 0 ; i < v.size() ; i++) { os << v[i] << endl; } return os; }
template <typename T1, typename T2> ostream& operator <<(ostream& s, const pair<T1, T2>& t) { s << t.first << ' ' << t.second; return s; }
template <typename T> vector<T> readVector(int n) { vector<T> res(n); for (int i = 0 ; i < n ; i++) cin >> res[i]; return res; }

int main() {
	srand (time(NULL));
	ios_base::sync_with_stdio(false); cin.tie(NULL);
	
	next(int, n);
	next(int, q);

	auto v = readVector<int>(n);

	auto d = v; d.pop_back();
	FOR (i, 0, n - 1) d[i] = abs(v[i + 1] - v[i]);
	
	vector<pair<int, int>> pairs = { { IntMaxVal , -1 } };

	vector<int> left_border(n - 1);
	FOR (i, 0, n - 1) {
		auto p = make_pair(d[i] , i);
		while (pairs.back() < p) pairs.pop_back();
		left_border[i] = pairs.back().second + 1;
		pairs.push_back(p);
	}

	pairs = { { IntMaxVal, n - 1} };
	vector<int> right_border(n - 1);
	FORD (i, n - 2, 0) {
		auto p = make_pair(d[i], i);
		while (pairs.back() < p) pairs.pop_back();
		right_border[i] = pairs.back().second - 1;
		pairs.push_back(p);
	}

	while (q --> 0) {
		next(int, l); l--;
		next(int, r); r--;

		LL ans = 0;
		FOR (i, l, r) {
			int lb = max(left_border[i], l);
			int rb = min(right_border[i], r - 1);

			ans += d[i] * 1LL * (i - lb + 1) * 1LL *  (rb - i + 1);
		}
		cout << ans << endl;
	}
}