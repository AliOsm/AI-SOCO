#include <iostream>
#include <string>
#include <algorithm>
#include <vector>
#include <set>

void solve() {
    int n;
    std::cin >> n;
    int s = 0;
    for (int i = 0; i < n; ++i) {
        int p, q;
        std::cin >> p >> q;
        if (p + 2 <= q) {
            ++s;
        }
    }
    std::cout << s;
}

int main () {

    solve();

    return 0;
}
