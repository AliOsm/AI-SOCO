#include<bits/stdc++.h>
using namespace std;
bool check(int a){
    if(a<0) a=-a;
    while(a!=0){
        if(a%10==8) return 1;
        a=a/10;
    }
    return 0;
}
int main(){
    int n,m,t=0,sum=0,A[105],ii=1;
    cin >> n;
    for(int i=n+1;i<8888888888;i++){
        if(check(i)==1){
            cout << i-n ;
            return 0;
        }
    }
    return 0;
}
