#include<bits/stdc++.h>
using namespace std;
long long a,b,c,d,i,e,f,g,n,m,k,l,A[200005],B[200005],fix[200005];
int main()
{
           cin>>n;
           if(n%2==0) { cout<<"NO"; return 0; }
           cout<<"YES"<<endl;
           for(long long i=1;i<=2*n;i+=2)
           {
                      k++;
                      if(k%2==1) { A[k]=i; A[k+n]=i+1; }
                      else { A[k]=i+1; A[k+n]=i; }
           }
           for(long long i=1;i<=2*n;i++)
           cout<<A[i]<<" ";
}