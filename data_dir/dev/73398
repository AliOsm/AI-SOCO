#include <iostream>
#include <cstdio>
#include <cstring>
#include <string>
#include <vector>
#include <cmath>
#include <algorithm>
#include <set>
#include <map>
#include <queue>
#include <ctime>

#define pb push_back
#define ll long long
#define mp make_pair
#define f first
#define s second
#define pii pair < int, int >
#define ull unsigned long long
#define pll pair < ll, ll >
#define forit(it, s) for(__typeof(s.begin()) it = s.begin(); it != s.end(); it ++)
#define all(s) s.begin(), s.end()
#define sz(a) (int)a.size()

const int inf = (1 << 29) - 1;
const int maxn = (int)3e5 + 10; //maximum + 10
const int mod = (int) 1e9 + 7;
using namespace std;
int n;
int p[maxn];

void solve(){
	cin >> n;
	ll s = 0;
	ll w = 0;
	for(int i = 1; i <= n; i++) {
		cin >> p[i];
		s += p[i];
		w += (p[i] + i % 2)/2;
	}
	cout << min(w, s-w) << "\n";
	
}
int main () {

    int t=1;
    //scanf("%d", &t);
    for(int i=1; i <= t; i++){
      //printf("Case #%d: ", i);
      solve();
    }
    
    return 0;
}



