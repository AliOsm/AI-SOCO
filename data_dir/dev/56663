#include<bits/stdc++.h>
#define int long long

using namespace std;

signed main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);

    int n, arr[100];
    cin >> n;
    for (int i = 0; i < n; i++)
        cin >> arr[i];

    if (n % 2)
        if (arr[0] % 2 && arr[n - 1] % 2)
            cout << "Yes\n";
        else
            cout << "No\n";
    else
        cout << "No\n";

    return 0;
}
