#include<bits/stdc++.h>
#define ll long long
using namespace std;

int main()
{
    ll a[3], t = 0;

    cin >> a[0] >> a[1] >> a[2];

    sort(a, a + 3);

    if((a[0] + a[1]) * 2 >= a[2]) cout << (a[1] + a[0] + a[2]) / 3 << endl;
    else cout << min((a[0] + a[1]), a[2]) << endl;

    return 0;
}
