#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef long double ld;

int a, b;

int main() {
    ios::sync_with_stdio(false); cin.tie(NULL);
    cin >> a >> b;
    if (a == 0 && b == 0) {
        cout << "NO\n";
        return 0;
    }
    if (b-a == 0 || abs(b-a) == 1) {
        cout << "YES\n";
    } else {
        cout << "NO\n";
    }
}
