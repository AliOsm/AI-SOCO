#include <bits/stdc++.h>
using namespace std;

char a[20]; int k;

void sw(int beg, int end) {
	for(int i = end; i > beg; --i) {
		swap(a[i], a[i-1]);
		k--;
	}
}

void solve() {
	for(int i = 0; a[i]; ++i) {
		if(a[i] == '9') {
			continue;
		}
		int max_i = i;
		for(int j = i + 1; j < strlen(a) && j <= i + k; ++j) {
			if(a[j] > a[max_i]) {
				max_i = j;
			}
		}
		if(max_i != i) {
			sw(i, max_i);
		}
	}
}

int main (int argc, char *argv[])
{
	scanf("%s%d", &a, &k);
	solve();
	printf("%s", a);
	
	return 0;
}

