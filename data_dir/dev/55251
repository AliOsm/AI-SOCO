#include <bits/stdc++.h>

#define ll long long
#define pb push_back
#define pii pair<int,int>
#define pll pair<ll,ll>
#define ff first
#define ss second

using namespace std;

const double pi = acos(-1);
const int N = 1e6 + 6, mod = 998244353, M = 1e7 + 7;
const ll MAX = 5e18;

int T, n, x, a, b;

int main()
{
    cin >> T;
    while(T--){
        cin >> n >> x >> a >> b;
        cout << min(n - 1, abs(a - b) + x) << '\n';
    }

    return 0;
}
