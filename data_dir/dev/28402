#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

template<typename T>
void out(T x) { cout << x << endl; exit(0); }
#define watch(x) cout << (#x) << " is " << (x) << endl

const int maxn = 1e6 + 5;

int n;
int a[maxn];

int main() {
  ios_base::sync_with_stdio(false); cin.tie(0);  cout.tie(0);

  cin>>n;
  for (int i=0; i<n; i++) {
    cin>>a[i];
  }
  sort(a,a+n);

  ll ans=0;
  for (int i=0; i<n; i++) {
    ans += abs((i+1)-a[i]);
  }

  cout<<ans<<endl;
  return 0;
}
// don't forget to read in the input :^)
