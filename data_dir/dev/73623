int main() {
    int d, n;
    cin >> d >> n;
    int ans = 0;
    for (int i = 0; i < n; i++){
        int x;
        cin >> x;
        if (i < n - 1){
            ans += (d - x);
        }
    }
    cout << ans << "\n";
}