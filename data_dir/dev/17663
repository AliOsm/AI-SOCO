#include <bits/stdc++.h>
#include <vector>
#define pb push_back
#define sc second
#define fr first
#define mk make_pair
#define ii pair<intt,intt>
typedef long long intt;
using namespace std;
int main()
{
   intt n;
   cin>>n;
   intt i;
   intt res=0;
 for(i=n;i>=3;i--)
    res+=(i*(i-1));
 cout<<res;
 
 
 

    return 0;
}
