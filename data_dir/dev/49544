#include <string>
#include <vector>
#define SZ(x) ((int)(x).size())
#define FOR(it, c) for(__typeof((c).begin()) it = (c).begin(); it != (c).end(); ++it)
using namespace std;
typedef long long LL;

int main(void) {
  int n, a, b;
  cin >> n >> a >> b;
  --a;
  a += b;
  a = (a%n+n)%n;
  a ++;
  printf("%d\n", a);
  return 0;
}
