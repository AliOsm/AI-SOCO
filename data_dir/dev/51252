#include<iostream>
#include<stdio.h>
#include<assert.h>
#include<string.h>
#include<time.h>
#include<stdlib.h>
#include<math.h>
#include<string>
#include<sstream>
#include<map>
#include<set>
#include<queue>
#include<stack>
#include<vector>
#include<algorithm>
#pragma comment(linker, "/STACK:16777216")
#define pb push_back
#define ppb pop_back
#define mp make_pair
#define all(x) (x).begin(),(x).end()
#define sz(x) (int)(x).size()
#define LL long long
#define bit __builtin_popcountll
#define sqr(x) (x) * (x)
using namespace std;
typedef pair<int, int> pii;
const double eps = 1e-9;
const double pi = acos(-1.0);
const int maxn = (int)1e6 + (int)1e5 + 10;
int a[maxn];
int main()
{
	#ifndef ONLINE_JUDGE
	freopen("input.txt","r",stdin);
	freopen("output.txt","w",stdout);
	#endif
	int n,k;
	cin>>n>>k;
	map<int, int> d;
	for(int i = 0; i < n; i++)
	{
		scanf("%d",&a[i]);
		d[a[i]]++;
	}
	for(int i = 0; i < (int)1e6; i++)
	{
		if (sz(d) == 1)
		{
			cout<<i<<endl;
			return 0;
		}
		a[i + n] = a[i + k - 1];
		d[a[i]]--;
		map<int, int>::iterator it = d.find(a[i]);
		if (it -> second == 0) d.erase(it);
		d[a[i + k - 1]]++;
	}
	cout<<-1<<endl;
	return 0;
}
