int32_t main()
{ 
	  getFaster;
      int a;
      cin>>a;
      if(a==1 || a==2)
      {
      	cout<<-1<<endl;
      	return 0;
      }
      if(a&1)
      {
      	  int sq=a*a;
      	  int ans1=(sq-1)/2,ans2=(sq+1)/2;
      	  cout<<ans1<<" "<<ans2<<endl;
      } 
      else
      {
      	  int sq=(a*a)/2;
      	  int ans1=(sq-2)/2,ans2=(sq+2)/2;
      	  cout<<ans1<<" "<<ans2<<endl;
      }
      return 0;     
}
