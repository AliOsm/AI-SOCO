#include<bits/stdc++.h>
using namespace std;
int main(){
    long long a,b,c,d,e,w,x,y,z,s=0,i,n,j,l;
    cin>>x>>y;
    a=max(x,y);
    b=min(x,y);
    z=a-b;
    l=1;
    while(z>0){
       z--;
       s+=l;
       if(z>0){
           z--;
           s=s+l;
       }
       l++;
    }
    cout<<s;
}
