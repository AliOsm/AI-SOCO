#include <bits/stdc++.h>
using namespace std;
#define mod 1000000007
#define oo 2000000000
const int N = 100010;

int main(){
    long long n;
    cin >> n;
    n++;
    if(n == 1){
        cout << 0 << endl;
        return 0;
    }
    if(n % 2 == 0)
        cout << n / 2 << endl;
    else
        cout << n << endl;
    return 0;
}
