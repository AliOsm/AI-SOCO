using namespace std;

typedef unsigned long long ull;
typedef long long ll;

void bla()
{
    string s;
    int n, temp(0);

    cin >> n >> s;

        for (int i(1); i < s.size(); i++)
        {
            if (s[i - 1] == s[i])
            {
                temp++;
            }
        }
    cout << temp;




}


int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    bla();

    //_getch();
    return 0;
}