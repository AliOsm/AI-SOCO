#include <bits/stdc++.h>

#define ll long long
#define sz size()
#define all(xx) xx.begin(),xx.end()
#define pb push_back
#define in insert
#define er erase
#define x1 x_pervii
#define x2 x_vtoroi
#define y1 y_pervii
#define y2 y_vtoroi
#define S second
#define F first
#define mp make_pair
#define YES cout<<"YES"
#define NO cout<<"NO"
#define speed ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0) 
#define input freopen ("source.in", "r", stdin)
#define output freopen ("source.out", "w", stdout)

using namespace std;

const int N = 1e5 + 123;
const int M = 1e7 + 123;
const int inf = 1e9 + 123;
const ll INF = 1e18 + 123;
const ll MAXN = 1e10 + 123;
                     
bool f;
int n, m, a[N], cnt;

int main ()
{
	speed;
	cin >> n >> m;
	for (int i = 1; i <= n; i ++)
		cin >> a[i];
	int k = m;
	for (int i = 1; i <= n; i ++)
	{
		f = 0;
		for (int j = i; j <= n; j ++)
		{
			if (a[j] <= k && !f)
				k -= a[j], f = 34;
			else if (a[j] <= k && f)
				k -= a[j], i ++;
			else
				break;
		}
		k = m;
		cnt ++;
	}
	cout << cnt;
	//5 1
	//1 1 1 1 1
}
