#define go ios::sync_with_stdio(0); cin.tie(0); cout.tie(0)
int n,idx;
ll a[300100],b[300100],ans=1e18,pre[300100],x=-1e10,y=-1e10;
int main()
{
    go;
    cin>>n;
    for(int i=0;i<n;i++)
