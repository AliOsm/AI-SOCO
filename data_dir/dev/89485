#include<bits/stdc++.h>

using namespace std ; 

const int N = 1e6 + 7 ; 


double pi = acos(-1) ;


int main(){
        ios_base::sync_with_stdio(0) ; 
        cin.tie(0) ; 
        //freopen("in.in" , "r" , stdin) ; 
        int t ; 
        cin>> t;
        double d = pi / 180.0 ; 
        while(t--){
                double  x ; 
                cin>>x ; 
                double d1 = 360.0 / x /4.0 ; 
                double d2 = 90.0  - (360.0/ x/4.0) ; 
                cout<<fixed<<setprecision(10)<<sin(d2 * d) / sin(d * d1) <<"\n" ; 
        }

        return 0 ; 
}
