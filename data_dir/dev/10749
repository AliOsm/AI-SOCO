#define re return(0);
#define ce continue;
typedef long long ll;
typedef long double ld;
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <cstring>
#include <set>
#include <iomanip>
#include <fstream>
using namespace std;
double const pi=3.1415926536;
int main()
{
   int n;
   cin>>n;
   int a[n];
   ll s=0;
   for(int i=0;i<n;i++)
   {
   cin>>a[i];
   s+=a[i];
   }
   sort(a,a+n);
   ll c=0;
   for(int i=0;i<n;i++)
   {
   	c+=s;
   	if(i>0)
   	s-=a[i-1];
   }
   cout<<c;
}

