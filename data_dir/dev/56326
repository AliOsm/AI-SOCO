// start + (end - start) / 2;
#define OO 1e8
int main() {
    int n;
    cin >> n;
    int less = 0, more = 0, x, ans = 0;
    cin >> x;
    less = more = x;
    for (int i = 0; i < n - 1;i++) {
        cin >> x;
        if (x < less) {
            ans++;
            less = x;
        }
        else if (x > more) {
            ans++;
            more = x;
        }
    }
    cout << ans << "\n";
}