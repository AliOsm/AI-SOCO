#include <bits/stdc++.h>
#define int long long
using namespace std;

signed main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n,k,x;
    cin>>n>>k>>x;
    int a[n];
    int s=0;
    for (int i = 0; i < n; ++i) {
        cin>>a[i];
    }

    for (int i = 0; i < n-k; ++i) {
        s+=a[i];
    }
    s+=k*x;
    cout<<s;
    }