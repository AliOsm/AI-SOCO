#include<bits/stdc++.h>
using namespace std;
#define ll long long int
ll n , m , a , b , c , x , y ;
int main()
{
    cin>>x>>y>>n;
    a = abs( x ) + abs ( y );
    if ( n < a )
    {
        printf("No");
        return 0;
    }
    else if ( n == a )
    {
        printf("Yes");
        return 0;
    }
    b = n - a;
    if ( !(b%2) )printf("Yes\n");
    else printf("No");
    return 0;
}
