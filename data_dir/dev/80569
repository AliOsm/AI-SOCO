const int maxn = 55;
char s[maxn];

int main() {
	ios::sync_with_stdio(false);
	#ifndef ONLINE_JUDGE
		freopen("data.in", "r", stdin);
		freopen("data.out", "w", stdout);
	#endif
	
	int n;
	
	scanf("%s %d", s, &n);
	int len = strlen(s);
	
	rep(i, 0, len) {
		if (isupper(s[i]))
			s[i] = s[i] - 'A' + 'a';
	}
	
	n += 97;
	rep(i, 0, len) {
		if (s[i] < n) {
			s[i] = s[i] - 'a' + 'A';
		}
	}
	
	puts(s);
	
	#ifndef ONLINE_JUDGE
		printf("time = %d.\n", (int)clock());
	#endif
	
	return 0;
}
