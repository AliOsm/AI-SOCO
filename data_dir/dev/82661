#include<iostream>
#include<cstdlib>
#include<vector>
#include<climits>
#include<cctype>
#include<map>
#include<list>
#include<cstdio>
#include<algorithm>
#include<memory.h>
#include<cmath>
#include<queue>
#include<fstream>
#include<sstream>
#include<set>
#include<iomanip>
#include<bitset>
#include<ctime>
#define L long long int
#define LD long double
#define pi 3.141592653589793238462643383
#define M 1000000007

using namespace std;

ifstream in("input.txt");
    ofstream out("output.txt");
    
int main()
{
    int n,m,i;
    in>>n;
              in>>m;
              if(n>=m)
              {
                      for(i=0;i<m;i++)
                      {
                                      out<<"BG";
                      }
                      for(i=0;i<n-m;i++)
                      {
                                        out<<"B";
                      }
              }
              else
              {
                      for(i=0;i<n;i++)
                      {
                                      out<<"GB";
                      }
                      for(i=0;i<m-n;i++)
                      {
                                        out<<"G";
                      }
              }
              out<<"\n";
              
    
    return 0;
}
