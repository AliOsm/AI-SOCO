#include <bits/stdc++.h>
#define ll long long
#define fr first
#define sc second
#define mp make_pair
#define ii pair<int,int>
using namespace std;
int a[200][200];
int main()
{
   ios_base::sync_with_stdio(false);
   int t;
   cin>>t;
   while(t--)
   {
       int n,m;
       cin>>n>>m;
       a[0][0] = 1;
       for(int i=0;i<n;i++)
       {
           for(int j=0;j<m;j++)
           {
               if(a[i][j] == 1)
                cout<<"W";
               else
                cout<<"B";
           }
           cout<<endl;
       }
   }
   return 0;
}
