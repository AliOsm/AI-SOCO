//Itâ€™s never too late to become what you might have been....
 #include <iostream>
#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define inf 1000000000000
#define mod 1000000007
#define pb push_back
#define mp make_pair
#define all(v) v.begin(),v.end()
#define S second
#define F first
#define boost1 ios::sync_with_stdio(false);
#define boost2 cin.tie(0);
#define mem(a,val) memset(a,val,sizeof a)
#define endl "\n"
#define maxn 100001

ll a[5005],b[5005],dp[2][5005];
int main()
{
	boost1;boost2;
	ll i,j,n;
	cin>>n;
	for(i=1;i<=n;i++)
	{
		cin>>a[i];
		b[i]=a[i];
	}	
	sort(b+1,b+n+1);
	for(i=0;i<2;i++)
	{
		for(j=0;j<=n;j++)
		dp[i][j]=inf;
	}
	for(i=0;i<=n;i++)
	dp[0&1][i]=0;
	//mem(dp,0);
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=n;j++)
		{
			dp[i&1][j]=dp[(i+1)&1][j]+abs(a[i]-b[j]);
			if(j>1)
			dp[i&1][j]=min(dp[i&1][j],dp[i&1][j-1]);
		}
	}
	cout<<dp[n&1][n];
	return 0;
}
