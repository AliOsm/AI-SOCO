#include <bits/stdc++.h>
using namespace std;
long long i,j,k,l,m,s,t,n,a[123456],b[123456],c,x,y,d;
string  p,q,r,rr;
int main() {
    freopen ("input.txt", "r",stdin);
    freopen ("output.txt", "w",stdout);
    
    cin >> n>>m;
    if (n < m){
        for (i = 0; i < n; i ++){
            cout << "GB";
        }
        for (i = 0; i < m-n; i ++)
            cout << "G";
        return 0;
    }
    swap (n,m);
    for (i = 0; i < n; i ++){
            cout << "BG";
        }
        for (i = 0; i < m-n; i ++)
            cout << "B";
    return 0;
}