using namespace std;
ll n,mx,my;
long double xt,e,t,m,x,y,z,xx,yy,w,bb;
set <long double> s;
int main(){
    cin>>n>>x>>y;
    for(int i=0;i<n;i++){
        cin>>xx>>yy;
        if(xx-x==0){e=1;continue;}
        w=(yy-y)/(xx-x);
        s.insert(w);
    }
    cout<<s.size()+e;
    return 0;
}
