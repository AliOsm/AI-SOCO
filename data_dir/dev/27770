#include<bits/stdc++.h>
#include<ext/numeric>
using namespace std;
using namespace __gnu_cxx;

int main() {
#ifndef ONLINE_JUDGE
    freopen("in.txt", "r", stdin);
#endif
    int n;
    scanf("%d", &n);
    if (n == 1) {
        printf("0\n0\n0");
        return 0;
    }
    if (!(n % 2))
        return puts("-1");
    vector<int> a(n), b(n), c(n);
    int cur = n / 2 + 1;
    for (int i = 0; i < n; ++i) {
        c[i] = i;
        int x = i;
        if (cur > x)
            x += n;
        a[i] = cur;
        b[i] = x - cur;
        --cur;
        if (cur == -1)
            cur = n - 1;
    }
    for (int i = 0; i < n; ++i)
        printf("%d ", a[i]);
    printf("\n");
    for (int i = 0; i < n; ++i)
        printf("%d ", b[i]);
    printf("\n");
    for (int i = 0; i < n; ++i)
        printf("%d ", c[i]);
}
