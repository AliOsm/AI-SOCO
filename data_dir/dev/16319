#include <bits/stdc++.h>
using namespace std;

//Hello World

typedef long long int lli;
#define pii pair<int,int>
#define tiii pair< <int,int>,int>
#define pdd pair<double,double>
#define mod 1000000007
#define lasB(b) (b&(-b))

lli n,m,mn=100000000,t1,t2,i;

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    cin>>n>>m;
    while(m-- && cin>>t1>>t2)
        mn=min(mn,t2-t1);
    cout<<mn+1<<"\n";
    while(n--)
    {
        cout<<i++<<" ";
        if(i>mn)i=0;
    }
    return 0;
}
