/// إِنَّ مَعَ الْعُسْرِ يُسْرًا
/// لَا أَبْرَحُ حَتَّىٰ أَبْلُغَ


#include <bits/stdc++.h>
#define LL long long
#define LD long double

#define IO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define S second
#define F first
#define PI acos(-1)
#define MAX 2000005
#define file freopen("input.txt","r",stdin); freopen("output.txt","w",stdout);

#define MAXN   15000005
using namespace std;


int main()
{
    IO
    LL n;
    cin>>n;
    LL c=0;
    while(n>0)
    {
        if(n%100==0)
        n-=100;
        else if(n%20==0)
        n-=20;
        else if(n%10==0)
        n-=10;
        else if(n%5==0)
        n-=5;
        else
            n--;
       // cout<<n<<endl;
        c++;

    }
    cout<<c;

    return 0;
}
