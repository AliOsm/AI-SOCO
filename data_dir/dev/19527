#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[123456],a[1111234], b[1125678],d[123456], l,ll,r, s, t, k, m, xh, x, x1, y,z;
string p[34567],q;
map<long long,long long> mm;
int main() {
    cin >> n;
    s = (n+1)*n/2;
    if (n < 3){
        cout << "No";
        return 0;
    }
    cout << "Yes"<<endl;
    for (i = 2; i <= n; i ++ ){
        if (s%i == 0){
            cout << 1<<' '<<i<<endl;
            break;
        }
    }
    k = i;
    cout << n-1<<' ';
    for (i = 1; i <=n; i ++)
        if (i != k)
    cout << i<<' ';
    return 0;
}