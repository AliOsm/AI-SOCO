#include <bits/stdc++.h>
using namespace std;

int main() {
	int n, K;
	cin >> n >> K;

	vector<double> p(n);
	int zero = 0;
	for (int i = 0; i < n; i++) {
		cin >> p[i];
		if (p[i] < 1e-8) zero++;
	}
	K = min(K, n - zero);

	vector<double> dp(1 << n);
	dp[0] = 1;

	for (int i = 0; i < 1 << n; i++) {
		bool ok = true;
		double q = 1;
		for (int j = 0; j < n; j++) {
			if (~i & 1 << j) continue;
			if (p[j] > 1e-8) {
				q -= p[j];
			} else {
				ok = false;
			}
		}
		if (!ok) continue;
		for (int j = 0; j < n; j++) {
			if (i & 1 << j) continue;
			dp[i | 1 << j] += p[j] * dp[i] / q;
		}
	}

	vector<double> ans(n);
	for (int i = 0; i < 1 << n; i++) {
		if (__builtin_popcount(i) == K) {
			for (int j = 0; j < n; j++) {
				if (i & 1 << j) {
					ans[j] += dp[i];
				}
			}
		}
	}

	for (double x : ans) {
		printf("%.20f ", x);
	}
	cout << endl;
}