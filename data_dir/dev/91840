#include <ctime>
#define _CRT_SECURE_NO_WARNINGS

#include <cmath>
#include <cstring>
#include <string>
#include <vector>
#include <stdio.h>
#include <climits>
#include <Windows.h>
#include <iterator>
#include <algorithm>

using namespace std;

typedef unsigned long long ull;
typedef long long ll;
#define all(a) a.begin(),a.end()

void solve()
{
    int n;
    cin >> n;
    int count = n;

    for (int i(1); i < n; i++)
    {
        count += (n - i) * i;
    }

    cout << count;
}

int main()
{
//  SetConsoleCP(1251);
//  SetConsoleOutputCP(1251);

    solve();

//  cout << "\n\n"; system("pause");
    return 0;
}