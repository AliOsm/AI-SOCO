#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef pair<int, int> pi;


int main() {
  ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
  ll n;
  cin >> n;
  for (int i = 0 ; i < n; i++) {
    ll c, s;
    cin >> c >> s;
    ll d = s/c;
    ll r = s%c;
    cout << (d+1)*(d+1)*r + d*d*(c-r) << "\n";
  }
}

