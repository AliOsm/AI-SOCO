#include <bits/stdc++.h>
using namespace std;

int n, K;
string s;

int solve(char c) {
	int num = 0;
	int j = 0;
	int ans = 0;
	for (int i = 0; i < n; i++) {
		while (j < n && num + (s[j] != c) <= K) {
			num += s[j] != c;
			j++;
		}
		ans = max(ans, j - i);
		num -= s[i] != c;
	}
	return ans;
}

int main() {
	cin >> n >> K >> s;
	cout << max(solve('a'), solve('b')) << endl;
}