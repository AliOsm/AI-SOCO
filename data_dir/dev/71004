#include <bits/stdc++.h>

using namespace std;

#define mx 300005
#define int long long
#define pii pair <int, int>
#define piii pair <int, pii>
#define fi first
#define se second
#define mod 1000000007
#define inf 1e18
#define pb push_back
#define mem(ara, x) memset(ara, x, sizeof ara)
#define read() freopen("in.txt", "r", stdin)
#define write() freopen("out.txt", "w", stdout)
#define fst ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);

int ara[mx];

int32_t main(){
    //read();
    fst;
    int a, b, c;
    while(cin >> a >> b >> c){
        int ans = 2*c;
        if(a==b){
            ans = ans + a + b;
        }
        else if(a<b){
            ans = ans + a*2 + 1;
        }
        else {
            ans = ans + b*2 + 1;
        }
        cout << ans << endl;
    }
	return 0;
}






