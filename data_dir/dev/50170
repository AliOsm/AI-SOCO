#include <bits/stdc++.h>
using namespace std;

int ans = 0, n, k;
int arr[2000];

int main (int argc, char *argv[])
{
	scanf("%d%d", &n, &k);
	memset(arr, 0, sizeof(arr));
	for(int i = 0; i < n; ++i) {
		int a;
		scanf("%d", &a);
		a--;
		arr[a]++;
	}
	for(int i = 1; i < 2000 && n; ++i) {
		int q = n / k;
		if(n % k) {
			q++;
		}
		ans += q * 2;
		ans--;
		n -= arr[i];
		if(!n) {
			ans += i;
		}
	}
	printf("%d", ans);

	return 0;
}

