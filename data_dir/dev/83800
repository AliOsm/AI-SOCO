#define REP(a,b) for(long long a = 0;a < b;++a)
#define ALL(x) (x).begin(),(x).end()
void init() {
    iostream::sync_with_stdio(false);
    cout << fixed << setprecision(20);
}
unsigned long xor128() {
    static unsigned long x = 123456789, y = 362436069, z = 521288629, w = 88675123;
    unsigned long t = (x ^ (x << 11));
    x = y; y = z; z = w;
    return (w = (w ^ (w >> 19)) ^ (t ^ (t >> 8)));
}

ll dp[21000];
#define int ll
int now_min[6000][6000];
void solve() {
    int n;
    cin >> n;
    assert(n <= 5000);
    dp[0] = 0;
    vector<ll> inputs;
    inputs.push_back(0);
    REP(i, n) {
        int a;
        cin >> a;
        inputs.push_back(a);
    }
    inputs.push_back(0);
    REP(i, inputs.size()) {
        now_min[i][i] = inputs[i];
        for (int q = i + 1; q < inputs.size(); ++q) {
            now_min[i][q] = min(now_min[i][q - 1], inputs[q]);
        }
    }
    REP(i, inputs.size()) {
        dp[i] = i;
        REP(q, i) {
            dp[i] = min(dp[i], dp[q] + (i - q - 1LL) + max(inputs[q] - min(inputs[i],now_min[q][i-1]), 0LL));
        }
    }
    cout << dp[inputs.size() - 1]<< endl;
}
#undef int
int main() {
    init();
    solve();
}