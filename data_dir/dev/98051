#include <bits/stdc++.h>
using namespace std;
double dis(int x1, int y1, int x2, int y2)
{
	return sqrt(1.0*(x1-x2)*(x1-x2)+1.0*(y1-y2)*(y1-y2));
}
int main()
{
	int n;
	cin>>n;
	for (int i=0; i<n; i++)
	{
		int x;
		cin>>x;
		if (x%2==0)
		{
			x--;
		}
		cout<<x<<" ";
	}
	return 0;
}