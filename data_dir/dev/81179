using namespace std;

const long long N = 1e4 + 7;
const long long inf = 1e18 + 7;
const long long mod = 1e9 + 7;

long long a , b , c , d , e;
long long n;
long long ans , cnt;
pair < int , int > p[N];
int main()
{
    /// freopen("input.txt", "r", stdin);
    /// freopen("output.txt", "w", stdout);

    ios_base::sync_with_stdio( false );
    cin >> a >> b >> c >> d;
    cnt = max( 2LL , abs(a - c) + 1 );
    ans = max( 2LL , abs(b - d) + 1 );
    cnt += ans;
    cout << 2 * cnt;
}
