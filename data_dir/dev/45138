#include <bits/stdc++.h>
using namespace std;

int t;


int main(){



    cin >> t;



    for (int i = 1;i <= t;i++){

        long long n,ans = 0,x = 1;
        cin >> n;
        ans = n * (n + 1) / 2;

        while (x <= n){
            ans -= 2 * x;
            x *= 2;
        }
        cout << ans << '\n';
    }


}
