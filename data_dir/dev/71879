#include<bits/stdc++.h>
#define mod 1000000007

using namespace std;


int main()
{
    long long x,y,l,m,n,i;
    string s;
    while(cin>>n)
    {
        if(n==1)
        {
            cout<<"0 1\n";
            continue;
        }
        if((n+1)%7==0)
        {
            cout<<(2*(n/7))+1<<" "<<2+(2*((n-2)/7))<<endl;
        }
        else
        {
            cout<<2*(n/7)<<" ";
            if((n-1)%7==0)
            {
                cout<<3+(2*((n-2)/7))<<endl;
            }
            else
                cout<<2+(2*((n-2)/7))<<endl;
        }
    }
    return 0;
}
