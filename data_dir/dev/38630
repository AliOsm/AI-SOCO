#include <bits/stdc++.h>

using namespace std;
//#define f first
//#define s second
//#define ll long long

int cm[100025],ar[100005];
int n,m;
bool check(int in){
    int sum=0;
    for(int i=1;i<=in;i++){
        sum+=ar[i];
    }
    int rec=0,cnt=1;
    for(int i=in+1;i<=n;i++){
        sum+=max(0,ar[i]-cnt);
        rec++;
        if(rec==in){
            cnt++;
            rec=0;
        }
    }
    if(sum>=m){
        return 1;
    }
    else{
        return 0;
    }
}

int main() {
    //freopen("input.in", "r", stdin);
    //freopen("output.txt", "w", stdout);
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    cin>>n>>m;
    int s=0;
    for(int i=1;i<=n;i++){
        cin>>ar[i];
        s+=ar[i];
    }
    if(s<m){
        cout<<-1<<endl;
        return 0;
    }
    sort(ar+1,ar+n+1);
    reverse(ar+1,ar+n+1);
    int l=1,r=n;
    int res=0;
    while(l<=r){
        int mid=(l+r)/2;
        if(check(mid)){
            r=mid-1;
            res=mid;
        }
        else{
            l=mid+1;
        }
    }
    cout<<res<<endl;
    return 0;
}