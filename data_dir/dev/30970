#include<bits/stdc++.h>
using namespace std;
#define forr(i,a,n)	for(long long int i=a; i<n; i++)
#define loop(i,a,n)	for(long long int i=a; i>=n; i--)

int main() 
{
	ios_base :: sync_with_stdio(false),cin.tie(NULL),cout.tie(0);
	
	int a;
	cin>>a;
	int b[a];
	forr(i,0,a)
		cin>>b[i];
	sort(b,b+a);
	cout<<b[a-1]<<" ";
	forr(i,1,a-1)
		cout<<b[i]<<' ';
	cout<<b[0];
	return 0;
}
