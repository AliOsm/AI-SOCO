#include<bits/stdc++.h>
using namespace std;
#define ld long double
#define int long long


signed main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
    int t;
    cin >> t;
    while(t--)
    {
        ld a,b;
        cin >> a >> b;
        if( a < 4*b )
            cout << fixed << setprecision(6) << 0.5000000 + a/(16.000000*b) << "\n";
        else
        {
            if(a!=0.000000)
                cout << fixed << setprecision(6) << 1.0000000 - b/(a) << "\n";
            else
                cout << 1.0000000 << "\n";
        }
    }
}