#include <bits/stdc++.h>
#define ll long long
using namespace std;
const ll N=1e5+7;
ll n,m,cnt,a;
ll arr[2003];
int main() {
   cin >> n >> m;
   for( int i=0; i < n;i ++ ){
    cin >> a;
    arr[a]++;
   }
   for( int i=0; i<=m;i ++ ){
    if( arr[i]%2==1 )
    cnt++;
   }
   cout<<n-cnt/2;
  }
