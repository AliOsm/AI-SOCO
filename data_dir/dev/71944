/********************************************************************/

llong n, k; 
double all, ans, m;


main() {
    kchay;
    cin >> n >> k;
    
    for(int i = 0; i < n; i++)
    {
        int x;
        cin >> x;
        all += x;
    }
    m = n;
    double K = double(k) - 0.5;
    while(all/m<K)
    // for(int i =0 ;i < 10;i++)
    {
        // cout << (double)all/n << endl;
        ans++, all+=k, m++;
    }
    
    
    cout << ans;
    return 0;
}