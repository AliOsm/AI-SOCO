#include <bits/stdc++.h>

using namespace std;
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int q;
    cin >> q;
    for(int i = 1;i <= q;i++){
        int var;
        cin >> var;
        if(var % 4 == 0 || var % 4 == 2){
            if(var < 4)cout << "-1";
            else cout << var / 4;
        }
        else if(var % 4 == 1){
            if(var < 9)cout << "-1";
            else cout << var / 4 - 1;
        }
        else{
            if(var < 15)cout << "-1";
            else cout << var / 4 - 1;
        }
        cout << "\n";
    }
}
