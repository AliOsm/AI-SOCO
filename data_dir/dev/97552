#include <bits/stdc++.h>
#define ll long long
using namespace std;
ll n, m, a[ 20005 ], l, z, x;
vector < ll > v;
map < ll, bool > mp;
int main()
{
    cin >> n;
    for( int i = 1; i <= n; i ++ )cin >> a[ i ];
    cout << n + 1 << endl;
    cout << "1 " << n << " 20005" << endl;
    for( int i = 1; i <= n; i ++ )
    {
        a[ i ] += 20005;
        cout << "2 " << i << " " << a[ i ] - i + 1 << endl;
    }
}
