#include<cstdio>
#include<cstdlib>
#include<cstring>
#include<cmath>
#include<iostream>
#include<algorithm>
#include<vector>
#include<queue>
#include<stack>
#include<list>
#include<set>
#include<map>
#include<string>
#include<utility>
using namespace std;
#define REP(i,FN) for(int i=0;i<FN;i++)
#define FOR(i,ST,FN) for(int i=ST;i<=FN;i++)
#define FORD(i,FN,ST) for(int i=FN;i>=ST;i--)
#define FORX(i,c) for(typeof(c.begin())i=c.begin();i!=c.end();i++)
#define pause system("pause")
#define S scanf
#define P printf
#define X first
#define Y second
#define pb push_back
#define PII pair<int,int>
#define mp make_pair
#define sz size()
#define eps 1e-8

const int MOD(1000000007);
const int INF((1<<30)-1);
const int MAXN(100005);

int m, a[MAXN], ans;

vector<int>g[MAXN];

void dfs(int node,int p,int c){

    if(c > m) return;

    bool isleaf = true;

    REP(i,g[node].sz)
    {
        int u = g[node][i];
        if(u != p)
        {
            isleaf = false;
            if(a[u] == 0)
                dfs(u, node, 0);
            else
                dfs(u, node, c+1);
        }
    }

    if(isleaf) ans++;

}

int main(){

    int n;
    S("%d%d",&n,&m);
    FOR(i,1,n)
        S("%d",&a[i]);
    REP(i,n-1)
    {
        int u,v;
        S("%d%d",&u,&v);
        g[u].pb(v);
        g[v].pb(u);
    }

    dfs(1,-1,a[1]);

    P("%d",ans);
}
