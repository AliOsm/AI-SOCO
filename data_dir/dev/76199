#include<bits/stdc++.h>
// #include "testlib.h"

using namespace std;

#define ll long long
#define X first
#define Y second
#define all(x) x.begin(), x.end()

const int MX = (int)1e5 + 10;
// const int mod = (int)1e9 + 7;

int main(int argc, char* argv[]){

    cin.tie(0); cout.tie(0);
    ios_base::sync_with_stdio(0);

    int n, k;
    cin >> n >> k;

    int mn = min(k - 1, n - k);
    int mx = max(k - 1, n - k);
    int moves = 2 * mn + mx;
    int stones = n + 1;
    int coins = n;
    cout << coins + moves + stones << endl;

    return 0;
}