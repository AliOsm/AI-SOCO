typedef  long long ll;
typedef vector<int> vi;
typedef pair<int,int> ii;
typedef   double ld;



int main(){
    fastIO; 
   // read;
    int n;string s;
    cin>>n>>s;
    vi co(26,0);
    int res=0;
    rep(i,s.size()){
        if(i%2==0){
            co[s[i]-'a']++;
        }
        else{
            if(co[s[i]-'A'])co[s[i]-'A']--;
            else res++;
        }
    }
    cout<<res;
    return 0;
}
