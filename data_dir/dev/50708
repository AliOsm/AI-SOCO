#include <bits/stdc++.h>
using namespace std;

int T, c, sum;

int main(){
    scanf("%d", &T);
    while(T--){
        scanf("%d %d", &c, &sum);
        int d = sum / c, r = sum % c;
        int ans = r * (d + 1) * (d + 1) + (c - r) * d * d;
        printf("%d\n", ans);
    }
    return 0;
}
