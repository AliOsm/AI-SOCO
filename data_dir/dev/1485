#include <bits/stdc++.h>
using namespace std;
typedef long long intt;
#define pb push_back
#define sc second
#define fr first
#define mk make_pair



int main()
{
ios::sync_with_stdio(false);
int n;
cin>>n;
int a[n];
int maxx=-1;
int i;
for(i=0;i<n;i++)
{
    cin>>a[i];
    if(a[i]<=maxx+1)
    {
        maxx=max(maxx,a[i]);
    }
    else
    {
        cout<<i+1;
        return 0;
    }
}
cout<<"-1";
return 0;
}
