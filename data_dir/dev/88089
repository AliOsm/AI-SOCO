#include<bits/stdc++.h>
using namespace std;
#define int long long
#define pii pair<int,int>
#define ld long double
const int mod=1e9 +7;

int dx[] = {-1, 0, 1, 0};
int dy[] = { 0,-1, 0, 1};


int call(int n)
{
    if(n==1)
    {
        return 1;
    }
    else
    return call(n-1) + 4*(n-1);
}

int32_t main()
{
     ios::sync_with_stdio(false);
  cin.tie(0);
  cout.tie(0);

   // freopen("input.txt", "rt", stdin);
  //freopen("output.txt", "wt", stdout);
  int n;
  cin>>n;
  cout<<call(n);
  
      
}