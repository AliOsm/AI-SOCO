#include<bits/stdc++.h>
using namespace std;

#define IO ios_base::sync_with_stdio(NULL); cin.tie(false);
#define endl '\n'
#define D(x) cout << #x << " = " << (x) << endl;


int main() {
  int d1,d2,d3;
  cin >> d1 >> d2 >> d3;

  int a = 2 * d1 + 2 * d2;
  int b = d1 + d2 + d3;
  int e = 2 * d1 + 2 * d3;
  int f = 2 * d2 + 2 * d3;

  cout << min(a,min(b, min(e,f)));

  return 0;
}