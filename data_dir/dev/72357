//++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
typedef long long ll;
typedef long double ld;
typedef unsigned long long ull;
//++--++--++--++--++--++--++--++--++--+--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
//#define int long long
const int MAXN = 100228;
const int inf = 200000001;
const ll INF = 2e18;
const ld EPS = 1e-6;
const ll mod = inf + 6;
const ld PI = acos(-1.0);
const int alpha = 27;
signed main()
{
	fastio();
	int n;
	cin >> n;
	vector<int> a(n);
	vin(a);
	int ma = max_element(all(a)) - a.begin();
	rev(a);
	int mnp  = min_element(all(a)) - a.begin();
	mnp = n - mnp - 1;
	cout << ma + n - mnp - 1 - (mnp < ma);
	//sp;
}