void precalc() {
}

//#define int li
//const int mod = 1000000007;

void solve(bool read) {
    int n;
    cin >> n;
    vector<int> a(n);
    for (int i = 0; i < n; ++i) {
        cin >> a[i];
    }

    vector<pair<int, int>> b(n);
    for (int i = 0; i < n; ++i) {
        b[i] = {a[i] + a[(i + 1) % n], i};
    }
    sort(all(b));
    vector<int> ans(n);
    for (int i = 0; i < n; ++i) {
        ans[b[i].second] = i;
    }
    for (int x : ans) {
        cout << x << " ";
    }
    cout << "\n";
}