#include <iostream>
#include <stdio.h>
#include <string>
#include <memory.h>
#include <set>
#include <map>
#include <vector>
#include <queue>
#include <time.h>
#include <assert.h>
#include <cmath>
#include <stack>
#include <string.h>
#include <sstream>
#include <functional>
#include <algorithm>
using namespace std;
typedef long long ll;
char s[100000];
int main() {
	int n;
	scanf("%d", &n);
	scanf("%s", s);
	long long res = 0;
	for (int i = 0; i < n; ++i)
		if (s[i] % 2 == 0)
			res += i + 1;
	printf("%lld\n", res);
	return 0;
}