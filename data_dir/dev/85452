#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ld = long double;
#define ff first
#define ss second
#define nl '\n'
/* -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- */



int main() {
  ios::sync_with_stdio(false);
  cin.tie(0); cout.tie(0); srand(time(0));

  int n, a, b, c, t;
  cin >> n >> a >> b >> c >> t;
  ll tot = 0;
  for(int i=1; i<=n; i++) {
    int ti;
    cin >> ti;
    if( c > b )
      tot += a + (t + 0ll - ti) * (c + 0ll - b);
    else
      tot += a;
  }
  cout << tot << endl;

  
  return 0;
}
/* -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- -*- */
