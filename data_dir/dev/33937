#include <string>
#include <cstring>
#include <algorithm>
#include <bitset>
#include <cmath>

using namespace std;

#define ll long long
#define vt vector
#define inf 1000000000
#define mod 1000000007

int main()
{
	int n;
	cin >> n;
	if (n % 2 != 0)
		cout << "0\n";
	else
	{
		n /= 2;
		n = (n + 1) / 2 - 1;
		cout << n << '\n';
	}
	return 0;
}