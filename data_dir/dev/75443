#include <bits/stdc++.h>

using namespace std;

#define ll long long
#define ld long double
#define mk make_pair
#define fr first
#define sc second
#define MAX 1007
#define pb push_back

const int N = (int)1e5 + 7;
const int INF = (int)1e9 + 7;

int main () {
        ll n, k; scanf ("%I64d %I64d", &n, &k);
        ll even = n / 2;
        ll odd = (n + 1) / 2;
        if (k <= odd) {
                cout << k * 2 - 1;
        } else {
                cout << (k - odd) * 2;
        }
}
