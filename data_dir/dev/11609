#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    ll n,d,m;
    cin>>n>>d>>m;
    for(ll i=0;i<m;i++){
        ll x,y;
        cin>>x>>y;
        if(abs(y-x-d)+abs(y-x+d)==2*d&&abs(y+x-d)+abs(y+x-2*n+d)==2*(n-d))
        cout<<"YES\n";
        else
        cout<<"NO\n";
    }
}