#include <bits/stdc++.h>
#define ll long long
using namespace std;
int main()
{
    //ifstream cin("in.in");
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    ll sk, kop = 0, a, b, sum = 0;
    cin >> sk;
    for(ll i = 0;i < sk;i++)
    {
        cin >> a >> b;
        kop += b-a;
        sum = max(sum, kop);
    }
    cout << sum;
    return 0;
}
