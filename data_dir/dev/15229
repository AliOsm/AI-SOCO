#include <algorithm>
#include <iostream>
#include <cstdlib>
#include <iomanip>
#include <sstream>
#include <cstdio>
#include <vector>
#include <cmath>
#include <stack>
#include <set>
#include <map>
#include <bitset>
#include <cstring>
#include <cctype>

using namespace std;

#define fi first
#define se second
#define pb push_back
#define mk make_pair
#define all(c) (c).begin(), (c).end()
#define sz(x) (int)x.size()
#define SWS ios_base::sync_with_stdio(false)
#define rfile freopen("input.txt", "r", stdin)
#define wfile freopen("output.txt", "w", stdout)
#define files rfile; wfile

typedef long long ll;
typedef long double ld;

const int Z = (int)1e5 + 111;
const int inf = (int)1e9 + 111;
const ll llinf = (ll)1e18 + 5;

int main() {
	//files;
	SWS;
	int n;
	cin >> n;
	int k = 1;
	bool ok = true;
	for (int i = 1; i <= n; ++i) {
        for (int j = 1; j <= (n-k)/2; ++j) {
            cout << '*';
        }
        for (int j = 1; j <= k; ++j) {
            cout << 'D';
        }
        for (int j = 1; j <= (n-k)/2; ++j) {
            cout << '*';
        }
        if (k == n) ok = false;
        if (ok)
            k += 2;
        else
            k -= 2;
        cout << '\n';
	}
	return 0;
}
