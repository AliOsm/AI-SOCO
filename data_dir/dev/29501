#include <bits/stdc++.h>
#define ll long long
#define pb push_back
using namespace std;
ll n,m,e,a[100001],b,c,r,h,q,w,l,k;
string s,t,ss;
bool us[100001];
int main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
cin>>n;
for (int i=0;i<n;i++)
{
    cin>>q;
    if (q%2==0) e=i+1,b++; else c=i+1; 
}
if (b==1) cout<<e; else cout<<c;
}