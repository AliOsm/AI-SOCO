#include <bits/stdc++.h>
using namespace std;
int n;
int m;

int main()
{
    //freopen("in.txt","r",stdin);
    //freopen("out.txt","w",stdout);
    cin>>n;
    m=(n+1)>>1;
    m+=(n+1)&1;
    cout<<m<<'\n';
    for(int i=1;i<=m;i++){
        if(!n) break;
        n--;
        cout<<1<< " "<<i<<'\n';
    }
    for(int i=2;i<=m;i++){
        if(!n) break;
        n--;
        cout<<i<< " "<<m<<'\n';
    }
    return 0;
}
