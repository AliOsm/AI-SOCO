#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long int a,b,c,d,e,i,j,k,l,n,m,x,y;
    long long int nm[6]={0};
    cin>>n;
    for(i=0;i<n;i++)
    {
        cin>>a;
        nm[a]++;
    }
    a=nm[4];
    a+=nm[3];
    if(nm[1]>=nm[3])
    {
        nm[1]=nm[1]-nm[3];
    }
    else
    {
        nm[1]=0;
    }
    if(nm[2]%2==0)
    {
        a=a+(nm[2]/2);
    }
    else
    {
        a=a+(nm[2]/2);
        a++;
        if(nm[1]>=2)
        {
            nm[1]=nm[1]-2;
        }
        else
        {
            nm[1]=0;
        }
    }
    if(nm[1]%4==0)
    {
        a+=nm[1]/4;
    }
    else
    {
        a+=nm[1]/4;
        a++;
    }
    cout<<a<<endl;
}
