#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define f first
#define s second
#define bp push_back
#define mp make_pair
const int mx=1e5+10;
const double eps=1e-9;
const int inf=1e9;
bool ok(int x){
    int sum=0;
    while(x){
        sum+=x%10;
        x/=10;
    }
    return sum%4==0;
}
main(){
    int n;
    scanf("%d",&n);
    for(int i=n;i<=n+100;i++){
        if(ok(i)){
            printf("%d",i);
            return 0;
        }
    }



}
