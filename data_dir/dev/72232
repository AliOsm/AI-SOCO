#include <bits/stdc++.h>
#define ll long long

using namespace std;

int n, a[1000005], c=1;
vector <int> s;

main()
{
    cin >> n;
    int l=0;
    int r=n*n+1;
    while (c<=n)
    {
        for (int i=1;i<=n/2;i++)
        {
            l++;
            cout << l << " ";
        }
        for (int j=1;j<=n/2;j++)
        {
            r--;
            cout << r << " ";
        }
        c++;
        puts("");
    }
}
