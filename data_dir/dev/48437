#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <string>
#include <vector>
#include <iterator>
#include <algorithm>
#include <set>
#include <cmath>
#include <iterator>

using namespace std;

typedef unsigned long long ull;
typedef long long ll;
#define all(a) a.begin(),a.end()

void solve(int argc, char *argv[])
{
    int n;
    cin >> n;

    string s;
    cin >> s;

    int count(1);

    for (int i(0); i < s.size(); i++)
    {
        if (s[i] == '1')
        {
            count++;
        }
        else
        {
            cout << count;
            return;
        }
    }

    cout << s.size();
}

int main(int argc, char *argv[])
{
    setlocale(LC_ALL, "Russian");

    solve(argc, argv);

//  cout << "\n\n"; system("pause");
    return 0;
}