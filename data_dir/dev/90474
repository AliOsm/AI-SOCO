#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n, s;
    scanf("%d %d", &n, &s);
    int maxs = 0;
    for(int i=0; i<n; i++){
        int f, t;
        scanf("%d %d", &f, &t);
        maxs = max(maxs, f+t);
    }
    maxs = max(maxs, s);
    printf("%d", maxs);
}
