#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
const int maxn = (int) 1e5 + 1;

int n, m;
string s;
int a[maxn];
int main(){
	cin >> n >> s;
	for(int i = 0; i < s.size(); i++){
		if(s[i] == 'a' || s[i] == 'e' || s[i] == 'i' || s[i] == 'o' || s[i] == 'u' || s[i] == 'y'){
			m++;
			if(m == 1){
				cout << s[i];
			}
		}
		else {
			cout << s[i];
			m = 0;
		}
	}
}