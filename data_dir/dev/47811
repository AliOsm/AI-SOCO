using namespace std;

int a[3000];
int main()
{
    int t=1,d,n,i,s;
    while(t--)
    {
              cin>>d>>n;
              for(i=0;i<n;i++)
              cin>>a[i];
              s=0;
              for(i=0;i<n-1;i++)
              s+=(d-a[i]);
              cout<<s<<"\n";
              
              
              
    }
    return 0;
}
