#include<bits/stdc++.h>

using namespace std;

int main(){
	
	ios :: sync_with_stdio(false); cin.tie(nullptr); cout.tie(nullptr);
	
	long long int a,b,ab;
	
	cin>>a>>b>>ab;
	
	long long int Ans = 2*(ab+min(a,b));
	
	ab = min(a,b);
	
	a -= ab;
	
	b -= ab;
	
	if(a > 0){
		
		Ans++;
	}
	
	else if(b > 0){
		
		Ans++;
	}
	
	cout<<Ans;
}
