#include <bits/stdc++.h>

using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    int t, a, b, c, n; cin >> t;
    while(t--) {
        cin >> a >> b >> c >> n;
        int d = (a+b+c+n)/3;
        if(d-a>=0 && d-b>=0 && d-c>=0 && 3*d==(n+a+b+c))
            cout << "YES" << endl;
        else cout << "NO" << endl;
    }
    return 0;
}
