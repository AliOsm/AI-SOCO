#define X first
#define Y second
#define pb push_back
#define rep(X,Y) for (int (X) = 0;(X) < (Y);++(X))
#define reps(X,S,Y) for (int (X) = S;(X) < (Y);++(X))
#define rrep(X,Y) for (int (X) = (Y)-1;(X) >=0;--(X))
#define rreps(X,S,Y) for (int (X) = (Y)-1;(X) >= (S);--(X))
#define repe(X,Y) for ((X) = 0;(X) < (Y);++(X))
#define peat(X,Y) for (;(X) < (Y);++(X))
#define all(X) (X).begin(),(X).end()
#define rall(X) (X).rbegin(),(X).rend()
#define eb emplace_back
#define UNIQUE(X) (X).erase(unique(all(X)),(X).end())
#define Endl endl
#define NL <<"\n"

using namespace std;
using ll=long long;
using pii=pair<int,int>;
using pll=pair<ll,ll>;
template<class T> using vv=vector<vector<T>>;
template<class T> inline bool MX(T &l,const T &r){return l<r?l=r,1:0;}
template<class T> inline bool MN(T &l,const T &r){return l>r?l=r,1:0;}
//#undef NUIP
#ifdef NUIP
#include "../benri.h"
#else
#define out(args...)
#endif
#ifdef __cpp_init_captures
template<typename T>vector<T> table(int n, T v){ return vector<T>(n, v);}
template <class... Args> auto table(int n, Args... args){auto val = table(args...); return vector<decltype(val)>(n, move(val));}
#endif
const ll MOD=1e9+7; //998244353

int main(){
  ios_base::sync_with_stdio(false); cin.tie(0);
  cout<<fixed<<setprecision(0);
	int n;
	cin>>n;
	using TP=tuple<int,int,int>;
	vector<TP> pts;
	map<pii,vector<pii>> mp;
	rep(i,n){
		int a,b,c;
		cin>>a>>b>>c;
		pts.eb(a,b,c);
		mp[pii(a,b)].eb(c,i);
	}
	vector<pii> re;
	map<int,vector<pii>> mp2;
	for(auto &pv:mp){
		sort(all(pv.Y));
		rep(i,pv.Y.size())if(i%2==1){
			re.eb(pv.Y[i].Y,pv.Y[i-1].Y);
		}
		if(pv.Y.size()%2){
			mp2[pv.X.X].eb(pv.X.Y,pv.Y.back().Y);
		}
	}
	vector<int> vec;
	for(auto &pv:mp2){
		sort(all(pv.Y));
		rep(i,pv.Y.size())if(i%2==1){
			re.eb(pv.Y[i].Y,pv.Y[i-1].Y);
		}
		if(pv.Y.size()%2) vec.pb(pv.Y.back().Y);
	}
	rep(i,vec.size())if(i%2) re.eb(vec[i],vec[i-1]);
	out(re,1);
	for(pii p:re) cout<<p.X+1<<" "<<p.Y+1 NL;
  return 0;
}

