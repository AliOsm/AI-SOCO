#include "bits/stdc++.h"
using namespace std;

int main() {

	long long n;
	cin >> n;

	if(n & 1) {

		long long a = n >> 1;
		cout << a << " " << a + 1;
	} else {
		long long a = n >> 1;
		long long b = a;
		a = a- 1;
		b = b+ 1;

		if(a%2 == 0){
			a--;
			b++;
		}
		cout << a << " " << b;
	}
}