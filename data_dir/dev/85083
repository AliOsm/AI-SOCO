typedef long long LL;
typedef struct data sd;
int main()
{
    //use %I64d
    //read;
    int i, j, k, A[100010];
    LL cnt=1, sum=0;
    int n;

    in(n);
    for (i=0; i<n; i++) in(A[i]);
    A[n]=1000000001;
    for (i=0; i<n; i++)
    {
        if (A[i]==A[i+1])
        {
            cnt++;
        }
        else
        {
            sum+= (cnt*(cnt+1))/2;
            cnt=1;
        }
    }
cout<<sum<<endl;
//file?
return 0;
}
