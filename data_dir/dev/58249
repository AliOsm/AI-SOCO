#include<bits/stdc++.h>
using namespace std;

#define sc( x ) scanf( "%d" , &x )
#define REP( i , n ) for( int i = 0 ; i < n ; ++i )
#define clr( t , val ) memset( t , val , sizeof( t ) )

#define pb push_back
#define all( v ) v.begin() , v.end()
#define SZ( v ) ((int)v.size())

#define mp make_pair
#define fi first
#define se second

int main(){
    int n;
    while( sc( n ) == 1 ){
        if( n & 1 ) puts( "black" );
        else {
            puts( "white" );
            puts( "1 2" );
        }
    }
}
