const int N = 1e5 + 10;
const long long INF = 1e9 + 19;
typedef long long ll;
typedef vector<int> vi;
typedef pair<int,int> pi;

int n;
vector<int> e[N];

void read() {
    scanf("%d", &n);
    for (int i = 0; i < n; i++) {
        int v;
        scanf("%d", &v); v--;
        e[i].pb(v);
        e[v].pb(i);
    }
}

bool use[N];

void dfs(int v) {
    use[v] = 1;
    for (auto u: e[v])
        if (!use[u])
            dfs(u);
}

void solve() {
    int cnt = 0;
    for (int i = 0; i < n; i++) {
        if (!use[i]) {
            cnt++;
            dfs(i);
        } 
    }
    cout << cnt << endl;

}

void stress() {

}

int main(){
#ifdef HOME 
    freopen("in", "r", stdin);
#endif
    if (1) {
        read();
        solve();
    }
    else {
        stress();
    }

    return 0;
}

