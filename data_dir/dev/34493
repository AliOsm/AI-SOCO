#include <bits/stdc++.h>
#define pb push_back
#define sc second
#define fr first
#define mk make_pair
#define ll long long
#define ii pair<ll,ll>
#define mp make_pair
using namespace std;
int main ()
{
 int t;
 cin>>t;
 while(t--)
 {
     ll s,a,b,c;
     cin>>s>>a>>b>>c;
     ll ans = 0;
     ans = s/c;
     ll Y = ans/a;
     Y = Y*b;
     ans+=Y;
     cout<<ans<<endl;
 }
}
