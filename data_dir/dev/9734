#define pb push_back
#define ll long long
#define ld long double
#define FILE "answer"
#define pii pair <int,int>

using namespace std;

const int mod = 1e9 + 7;
const int INF = 1e9;


int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
   // freopen("input.txt","r",stdin);
   // freopen("output.txt","w",stdout);
    int n;
    cin >> n;
    int ans = 0;
    for (int i=1;i<n;i+=2) ans += 2;
    for (int i=0;i<n;i+=2) ans++;
    cout << ans << endl;
    for (int i=1;i<n;i+=2) cout << i + 1 << " ";
    for (int i=0;i<n;i+=2) cout << i + 1 << " ";
    for (int i=1;i<n;i+=2) cout << i + 1 << " ";
}