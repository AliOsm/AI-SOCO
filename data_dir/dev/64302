#include <bits/stdc++.h>

using namespace std;

#define ll long long
#define F first
#define pb push_back
#define S second
#define er erase
#define in insert
#define fi find
#define pi pair<int,int>
#define pii pair<int,pi>
#define go ios::sync_with_stdio(0)
int n,a[100100];
int main()
{
    go;
    cin>>n;
    for(int i=0;i<n;i++)
        cin>>a[i];
    sort(a,a+n);
    cout<<min(a[n-2]-a[0],a[n-1]-a[1]);
    return 0;
}
