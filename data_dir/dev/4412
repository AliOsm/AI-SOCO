#define mendl "\n"
#define N 3004//10000001
#define M N*N//(1<<19) + 100 10000001
#define P 2
#define K 32
#define MOD 1000000007//1e9 + 7   ((1LL << 30) + 1LL)//1000000007LL//1000000007LL  
#define MOD1 1000000000000007LL//1000000007LL  
#define INF 1000000000000000001LL//18
#define msq(px) (p2(px.first) + p2(px.second)) 
#define PI 3.141592653589793238462643383279 
#define EPS 1e-5

#define Mod(a) ((a) % MOD)

mt n, m, mx;
mt a[N];
//
//mt dfs(mt v) 
//{
//	if (v >= m)
//		return 0;
//	return max(dfs(v << 1), dfs((v << 1) + 1)) + a[v];
//}

mt answ;//s[N],
mt dfs1(mt v) 
{
	if (v >= (1 << n))
		return 0;
	mt x = dfs1(v << 1) + a[v << 1];
	mt y = dfs1((v << 1) + 1) + a[(v << 1) + 1];
	answ += max(x, y) - min(x, y);
	//s[v] = max(x, y);
	return max(x, y);
}


int main()
{
#ifdef _DEBUG	
	freopen("in.txt", "r", stdin);
#endif
	//std::ios::sync_with_stdio(false);
	scanf("%lld", &n);
	m = 1 << (n + 1);
	rep(2, m, i)
		scanf("%lld", a + i);
	dfs1(1);
	printf("%lld\n", answ);

	return 0;
}