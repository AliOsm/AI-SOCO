const int N = 100*1000+123;


bool pr(ll n){
    for(ll i = 2; i*i <= n; i++){
        if(n%i==0)
        return false;
    }
    return true;
}

int main() {
    int t;cin >> t;
    loop(tt,t){
        ll a,b;
        cin >> a >> b;
        if(a - b == 1 && pr(a+b)) cout << "YES\n";
        else cout << "NO\n";
    }



    return 0;
}
