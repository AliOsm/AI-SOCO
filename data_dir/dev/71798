#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n;
    scanf("%d", &n);
    string str;
    cin >> str;
    int res = 0;
    for(int i=0; i<str.length(); i++){
        if(str[i] == '>') break;
        else res++;
    }
    for(int i=str.length()-1; i>=0; i--){
        if(str[i] == '<') break;
        else res++;
    }
    cout << res;
}
