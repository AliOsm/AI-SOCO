#define _CRT_SECURE_NO_WARNINGS

#include <iostream>
#include <conio.h>
#include <cstdlib>
#include <ctime>
#include <cmath>
#include <cstring>
#include <string>
#include <vector>
#include <stdio.h>
#include <climits>
#include <Windows.h>
#include <set>
#include <iterator>

using namespace std;

typedef unsigned long long ull;
typedef long long ll;


void bla()
{
    int cel, b, sgor(0);

    cin >> cel >> b;

    int temp(0), itog(0);

    while (true)
    {
        itog += cel;//целые сгорели
        sgor += cel;//целые сгорели
        cel = sgor / b;//сгоревшие в целые
        sgor = sgor - (cel * b);//сгоревшие = сг - целые * b
        if (!(cel)) break;

    }
    cout << itog;
}


int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);


    bla();


    //_getch();
    return 0;
}