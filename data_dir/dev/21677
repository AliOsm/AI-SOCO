#include <bits/stdc++.h>
using namespace std;




int main()
{
	ios_base::sync_with_stdio;
	cin.tie(NULL);
	long long a, b, c; cin >> a >> b >> c;
	long long limit = max(max(a, b), c) - 1;
	long long ans = 0;
	a < limit ? ans += limit - a : NULL;
	b < limit ? ans += limit - b : NULL;
	c < limit ? ans += limit - c : NULL;
	cout << ans << endl;
	return 0;
}

/*
9
arrayhead
5
arya
harry
ray
r
areahydra


 */
