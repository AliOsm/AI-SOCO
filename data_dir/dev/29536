#define ph(a)           push(a)
#define pb(a)           push_back(a)
#define scd(a)          scanf("%d",&a)
#define scdd(a,b)       scanf("%d %d",&a,&b)
#define ll              long long int
#define scl(w)          scanf("%I64d",&w)
#define scll(a,b)       scanf("%I64d %I64d",&a,&b)
#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n,tut;
    scd(n);
    n%2 ? tut=(n/2+1)*(n/2+1)+(n/2)*(n/2):tut= n*(n/2);
    printf("%d\n",tut);
    for (int i=0;i<n;i++){
        for (int j=0;j<n;j++){
            (i+j)%2?printf("."):printf("C");
        }
        printf("\n");
    }

    return 0;
}


