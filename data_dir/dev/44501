#include <math.h>

#include <set>
#include <list>
#include <cmath>
#include <ctime>
#include <map>
#include <deque>
#include <queue>
#include <stack>
#include <string>
#include <bitset>
#include <cstdio>
#include <limits>
#include <vector>
#include <climits>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <numeric>
#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>
#include <functional>
#include <iomanip>

using namespace std;

#define PI 3.14159265358979323846
#define EPS 1.E-8

#define FIN(a, n) { for (ul _ = 0; _ < n; ++_) cin >> a[_]; }
#define FOUT(a, n) { cout << a[0]; for (ul _ = 1; _ < n; ++_) cout << ' ' << a[_]; cout << '\n'; }

typedef unsigned char uc;
typedef unsigned int ui;
typedef unsigned long long ul;
typedef long long sl;

int main(int argc, char* argv[])
{
    ios_base::sync_with_stdio(false);

    ui n;
    cin >> n;

    ui f1 = 1,
       f2 = 1;

    for (ui i = 1; i <= n; ++i)
    {
        if (i == f1)
        {
            cout << 'O';
            ui t = f1 + f2;
            f2 = f1;
            f1 = t;
        }
        else
            cout << 'o';
    }

    cout << '\n';
    return 0;
}