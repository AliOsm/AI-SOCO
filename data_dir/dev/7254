#include <bits/stdc++.h>
using namespace std;

#define int long long
#define f(i,n) for(int i=0;i<n;i++)
#define rep(i,a,b) for(int i=a;i<=b;i++)

class BPashaMaximizes {
public:
	void solve(std::istream& in, std::ostream& out) {
		string s; in >> s;
		int k; in >> k;
		int n = s.length();
		f(i, n){
			int ind = -1;
            char ma = s[i];
            rep(j, i+1, n-1){
                if(s[j] > ma and (j-i) <= k) ind = j, ma = s[j];
            }
            if(ind == -1) continue;
            for(int j = ind; j>i; --j) swap(s[j], s[j-1]);
            k -= (ind-i);
            if(!k) break;
		}
		out << s;
	}
};


int32_t main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	BPashaMaximizes solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
