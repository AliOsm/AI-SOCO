#include<bits/stdc++.h>
#define EPS 1e-7
#define ll long long
#define fr first
#define sc second
#define ii pair < int , int >
#define mp make_pair
using namespace std;
int main()
{
 int n;
 cin>>n;
 if(n < 6)
 {
     cout<<-1<<endl;
     for(int i=1;i<n;i++)
     {
         cout<<i<<" "<<i+1<<endl;
     }
 }
 else
 {
     cout<<1<<" "<<2<<endl;
     cout<<2<<" "<<3<<endl;
     cout<<2<<" "<<4<<endl;
     for(int i=5;i<=n;i++)
     {
         cout<<4<<" "<<i<<endl;
     }
     for(int i=1;i<n;i++)
     {
         cout<<i<<" "<<i+1<<endl;
     }
 }


}
