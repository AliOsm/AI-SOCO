#include <stdio.h>
#include <iostream>
#include <vector>
#include <assert.h>
#include <queue>
#include <set>
#include <memory.h>
using namespace std;
#define ll long double

const int N = 2e5 + 5;

int in[N];
void solve() {
	int n, s, t;
	scanf("%d %d %d", &n, &s, &t);
	if (s > t) {
		swap(s, t);
	}
	printf("%d\n", n - s + 1);
}

int main() {
	///freopen("input.txt", "r", stdin);
	int q; scanf("%d", &q);
	while (q--) {
		solve();
	}
}