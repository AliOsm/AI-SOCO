int main()
{
	boost;
	int n;
	cin >> n;
	cout << 1ll*(n/2)*((n+1)/2) << endl;
	for(int i=0;i<n/2;++i)
		for(int j=n/2;j<n;++j)
			cout << i+1 << ' ' << j+1 << endl;
	return 0;	
}
