#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define po pop_back
#define pb push_back
#define mk make_pair
#define lw lower_bound
#define up upper_bound
#define ff first
#define ss second
#define boost ios_base::sync_with_stdio(); cin.tie(0); cout.tie(0);
#define MOD 1000000007
#define MAX INT_MAX
#define MIN INT_MIN
#define forn(i,n) for(int i=0;i<n;i++)
#define forn1(i,n) for(int i=1;i<=n;i++)
#define ford(i,n) for(int i=n-1;i>=0;i--)
#define ford1(i,n) for(int i=n;i>=1;i--)
#define forlr(i,l,r) for(int i=l;i<=r;i++)
#define forrl(i,r,l) for(int i=r;i>=l;i--)
ll d[1234567],a,b,c[1234567],c1[123456][6],e,i,j,n,k,x,y;
pair<ll,ll> p[1234567];
vector<ll> v,v1;
int main(){
	ll T;
	cin>>n>>k;
	string s;
	cin>>s;
	if(n==1 && k==1){
		cout<<0;exit(0);
	}
	if(s[0] != '1' && k>0)s[0]='1',k--;
	for(int i= 1;i<n;i++){
		if(s[i]!='0' && k>0)k--,s[i]='0';
	}
	cout<<s;
}