#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;

class ProblemAKString {
public:
	void solve(std::istream& in, std::ostream& out) {
		int k; in>>k;
		string s;
		in>>s;
		vector<int> freq(26, 0);
		for(char x: s) ++freq[x-'a'];
		int n = s.length();
		string res = "";
		for(int i = 0; i<=25; ++i){
			if(freq[i]){
				if(freq[i]%k!=0){
					out<<-1;
					return;
				}
				for(int j = 0; j<freq[i]/k; ++j) res+=('a'+i);
			}
		}
		for(int i = 0; i<k; ++i) out<<res;
	}
};


int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	ProblemAKString solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
