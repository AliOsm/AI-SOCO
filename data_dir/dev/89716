#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
#include <iterator>
#include <set>
#include <cmath>
#include <ctime>

using namespace std;
typedef unsigned long long ull;
typedef long long ll;
#define all(a)  a.begin(), a.end()
#define Pause   cout << "\n\n"; system("pause")

bool fnd(vector<int> v, int k)
{
    for (int i(0); i < v.size(); i++)
        if (v[i] == k)
            return true;

    return false;
}

void solve()
{
    ll n, res;
    cin >> n;

    res = n / 2 + n % 2;

    if (n % 2) res *= -1;

    cout << res;
}

int main()
{
    solve();
//  Pause;
    return 0;
}