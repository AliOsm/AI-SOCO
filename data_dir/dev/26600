//Itâ€™s never too late to become what you might have been....
 #include <iostream>
#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define inf 1000000000000
#define mod 1000000007
#define pb push_back
#define mp make_pair
#define all(v) v.begin(),v.end()
#define S second
#define F first
#define boost1 ios::sync_with_stdio(false);
#define boost2 cin.tie(0);
#define mem(a,val) memset(a,val,sizeof a)
#define endl "\n"
#define maxn 100001
int ch(char c)
{
	if(c>='a' && c<='z')
	return 1;
	if(c>='A' && c<='Z')
	return 1;
	return 0;
}
int main()
{
	boost1;boost2;
	ll i,j,n,out=0,in=0,l=0,open=0,ctr=0;
	string s;	
	cin>>n;
	cin>>s;
	for(i=0;i<n;i++)
	{
		if(s[i]=='(')
		open=1;
		if(s[i]==')')
		{
			if(ch(s[i-1]))
			ctr++;
			open=0;
		}
		if(s[i]=='_')
		{
			if(open)
			{
				if(i!=0 && ch(s[i-1]))
				ctr++;
			}
			//ctr++;
		}
	}
	for(i=0;i<n;i++)
	{
		if(s[i]=='(')
		{
			out=max(out,l);
			l=0;
			open=1;	
		}
		else if(s[i]==')')
		{
			l=0;
			open=0;
		}
		else if(s[i]=='_')
		{
			if(!open)
			out=max(out,l);
			l=0;
		}
		else
		{
			if(!open)
			l++;
		}
	}
	out=max(out,l);
	cout<<out<<" "<<ctr;
	return 0;
}
