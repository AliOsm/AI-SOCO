#include <bits/stdc++.h>
using namespace std;
 
typedef pair<int,int > pp;
typedef long long ll;
 
#define sz(x) (int)x.size() 
int const N=3e5+10,oo=1e9;
ll const OO=2e18;
double const eps=1e-8,PI=acos(-1);
int mod=oo+7;

int n;
int main(){
  ios::sync_with_stdio(0);
  cin.tie(0);
  cin>>n;
  ll sum=0;
  for(int i=2;i<n;i++){
      sum+=i*(i+1);
  }
  cout<<sum;
  return 0;
}