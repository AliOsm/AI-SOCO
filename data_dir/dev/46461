#include<iostream>
#include<vector>
#include<algorithm>
#include<string>
#include<sstream>
#include<map>
#include<set>
#include<iomanip>
#include<stdlib.h>
#include<stdio.h>
using namespace std;

int main() {
	int n,a,b; cin>>n>>a>>b;
	int ans=0;
	for (int i=0; i<n; i++) {
		int l=i,r=n-1-i;
		if(l>=a&&r<=b) ans++;
	}
	cout << ans << endl;
	return 0;
}