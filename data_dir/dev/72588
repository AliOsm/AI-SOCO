#include <bits/stdc++.h>
using namespace std;
#define ll long long 
const long long N=1e6+5;
#define pb push_back
#define INF INT_MAX
#define fast ios_base::sync_with_stdio(0);cin.tie(NULL);cout.tie(NULL) 
int main() {
       fast;
       ll n,m,a,b;
       cin>>n>>m>>a>>b;
       if(n%m==0)
       return cout<<0,0;
       ll l=(n%m)*b;
       ll p=(m-n%m)*a;
       return cout<<min(l,p),0;
}