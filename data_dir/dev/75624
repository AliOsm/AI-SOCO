#include <bits/stdc++.h>
#define pb push_back
#define mp make_pair
#define inf 0x3f3f3f3f
#define all(v) (v).begin() , (v).end()

using namespace std;

typedef vector<int> vi;
typedef long long ll;

int di[] = {0 , 0 , 1 , -1 , 1 , 1 , -1 , -1};
int dj[] = {1 ,-1 , 0 , 0 , -1 , 1 ,  1 , -1};

int main(){
    string a , b , res;
    cin >> a >> b;

    res = a[0];
    for(int i = 1 ;i < a.size() ;i++){
        if(a[i] < b[0])
            res += a[i];
        else
            break;
    }
    cout << res << b[0] ;

}
