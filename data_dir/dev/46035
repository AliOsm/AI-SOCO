#include <bits/stdc++.h>
using namespace std;
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n, x , c = 0;
    cin >> n;
    while(n -- ){
        cin >> x;
        if (x % 2 == 0)
            ++c;
        if (c % 2 == 1){
            cout << 1 << "\n";
        }else
            cout << 2 << "\n";
    }

}
