int main()
{
    std::cin.tie(0);
    std::ios::sync_with_stdio(false);
    //freopen("read.txt", "r", stdin);
    //freopen("out.txt", "w", stdout);
    ll d1,d2,d3,out=1e13;
    cin >> d1>>d2>>d3;
    out=min(d1+d3+d2,out);
    out=min(d1*2+d2*2,out);
    out=min(d2*2+d3*2,out);
    out=min(d1*2+d3*2,out);
    cout << out << endl;
    return 0;
}