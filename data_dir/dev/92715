#include <iostream>
#include <cmath>
#include <algorithm>

using namespace std;

int main() {
    int a, b;
    cin >> a >> b;
    int res = min(a, b);
    a -= res;
    b -= res;
    cout << res << " " << (a + b) / 2 << endl;
    return 0;
}
