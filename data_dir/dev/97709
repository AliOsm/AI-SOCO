#define re return(0);
#define ce continue;
typedef long long ll;
typedef long double ld;
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <cstring>
#include <set>
#include <iomanip>
#include <fstream>
using namespace std;
double const pi=3.1415926536;
int main()
{
	int T;
	cin>>T;
	for(int i=0;i<T;i++)
	{
		int n,m;
		cin>>n>>m;
		int a[n];
		int c=0;
		for(int j=0;j<n;j++)
		{
		cin>>a[j];
		c+=a[j];
	    }
		if(n==m && (n!=2 && m!=2))
		{
		cout<<2*c<<endl;
		for(int j=1;j<=m;j++)
		{
			if(j+1<=m)
			{
				cout<<j<<" "<<j+1<<endl;
			}
			else
			{
				cout<<m<<" "<<1<<endl;
			}
		}
		}
		else
		cout<<-1<<endl;
	}
	
}

