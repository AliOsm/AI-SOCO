#include<bits/stdc++.h>

using namespace std;

int main()
{
    int a, b, c;

    cin >> a >> b >> c;

    double x = sqrt(b * c * 1.0 / a * 1.0);
    double y = sqrt(c * a * 1.0 / b * 1.0);
    double z = sqrt(a * b * 1.0 / c * 1.0);

    cout << 4 * (x + y + z) << endl;

    return 0;
}
