#include <iostream>
#include <cstdio>
#include <string>
#include <algorithm>
#include <vector>
#include <cmath>
#include <map>
#include <memory.h>
#include <queue>
#include <set>
using namespace std;
const int mod = 1000000007;
const int N = 100005;
typedef long long ll;

int main(){
    int t;
    cin >> t;
    while(t --> 0){
        ll n;
        cin >> n;
        if((n + 1) % 2 == 1){
                cout << 4 * n + 1 << endl;
        }
        else if((n + 1) % 4 == 0){
            cout << n + 1 << endl;
        }
        else
            cout << 2 * n + 1 << endl;
    }
}
