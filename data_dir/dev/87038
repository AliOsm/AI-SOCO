#include<bits/stdc++.h>

using namespace std;

using ll = long long int;

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    ll line,n,i,j,k,m;
    cin>>line;
    while(line--)
    {
        cin>>n>>m;
        if(n==1) cout<<0<<endl;
        else if(n==2) cout<<m<<endl;
        else
        {
            cout<<m*2<<endl;
        }

    }


}
