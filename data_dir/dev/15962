#include <bits/stdc++.h>

using namespace std  ;

int main()
{
    ios_base :: sync_with_stdio(false) ;
    cin.tie(nullptr) ;
    int n ;
    cin >> n ;
    string s ;
    cin >> s ;
    int ans = 0 ;
    for(char c: s)
        if(c == '-')
            ans = max(ans - 1 , 0) ;
        else
            ans ++ ;
    cout << ans << '\n' ;
    return 0 ;
}