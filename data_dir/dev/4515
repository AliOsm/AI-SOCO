#include<bits/stdc++.h>
#define pb push_back
#define adelkhah main
using namespace std;
typedef long long ll;
typedef pair<int,int> pii;
int adelkhah()
{
    int n;
    cin >> n;
    string s;
    cin >> s;
    string ans;
    int sw = 0;
    for(int i = 0; i < n; i++){
        if(s[i] != 'a' && s[i] != 'e' && s[i] != 'i' && s[i] != 'o' && s[i] != 'u' && s[i] != 'y'){
            ans.pb(s[i]);
            sw = 0;
        }
        else{
            if(sw == 0){
                ans.pb(s[i]);
                sw = 1;
            }
        }
    }
    cout << ans;
}
