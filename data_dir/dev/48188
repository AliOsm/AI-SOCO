#include <bits/stdc++.h >
using namespace std;
typedef long long intt;
#define fr first
#define sc second
#define mk make_pair
#define pb push_back


int main()
{
    intt n;
    cin>>n;
    if(n%2==0)
    {
        cout<<n/2;
        return 0;
    }
    intt i;
    for(i=2;i*i<=n;i++)
    {
        if(n%i==0)
        {
            intt c=n-i;
            cout<<1+c/2;
            return 0;
        }
    }
    cout<<1;



return 0;
}
