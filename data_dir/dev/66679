#include<bits/stdc++.h>
#define ll long long
#define ld long double
using namespace std;
ll n,i,a[200005],sum,s;
int main()
{
    cin >> n ;
    for (i=0;i<n;i++)
    {
        cin >> a[i];
        s+=a[i];
    }
    for (i=0;sum<s/2+(s%2==1);i++)
        sum+=a[i];
    cout << i << endl ;
    return 0;
}
