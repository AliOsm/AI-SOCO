/*************************************************/
int n,m,i,j,la,lb;
double a[2005],b[2005],l,r,mid,s1,s2;
struct ii
{
	double s;
	int s1,s2;
}dp[2005];
set<int> ss;
void solve(double c1,double c2)
{
	int i,j;
	rep(i,n)
	{
		ii t=dp[i-1];
		dp[i]=t;
		t=dp[i-1];t.s+=a[i]-c1;t.s1++;
		if (t.s>dp[i].s+1e-10) dp[i]=t;
		t=dp[i-1];t.s+=b[i]-c2;t.s2++;
		if (t.s>dp[i].s+1e-10) dp[i]=t;
		t=dp[i-1];t.s+=1-(1-a[i])*(1-b[i])-c1-c2;t.s1++;t.s2++;
		if (t.s>dp[i].s+1e-10) dp[i]=t;
	}
}
double lys(double x)
{
	double l=0,r=1,mid;
	lyscsc(_,ss)
	{
		mid=(l+r)/2;
		solve(x,mid);
		if (dp[n].s2>lb)
		{
			l=mid;
		}
		else
		{
			r=mid;
		}
	}
	return l;
}
int main()
{
	srand(time(NULL));
	rep(i,50) ss.in(rand()%32768+rand());
	fast;
	cin>>n>>la>>lb;
	rep(i,n)
	{
		cin>>a[i];
	}
	rep(i,n)
	{
		cin>>b[i];
	}
	l=0;r=1;
	lyscsc(_,ss)
	{
		mid=(l+r)/2;
		s1=l;s2=lys(mid);
		if (dp[n].s1>la)
		{
			l=mid;
		}
		else
		{
			r=mid;
		}
	}
	solve(s1,s2);
	printf("%.10f\n",dp[n].s+s1*la+s2*lb);
	return 0;
} 