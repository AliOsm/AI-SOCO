#include <iostream>
using namespace std;

int main()
{
    int n;
    cin >> n;
    int k = n * n;
    for ( int i = 1 , l = 1 ; i <= n ; i++ )
    {
        for ( int j = 0 ; j < n / 2 ; j++ , k-- , l++ )
        {
            if(j) cout << " " ;
            cout << l << " " << k ;
        }
        cout << endl;
    }
    return 0;
}
