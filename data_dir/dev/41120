#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

ll p, q, r;
int n;
vector<ll> arr, last;

int main (int argc, char *argv[])
{
	scanf("%d%lld%lld%lld", &n, &p, &q, &r);
	arr.resize(n);
	for(int i = 0; i < n; ++i) {	
		scanf("%lld", &arr[i]);
	}
	last.resize(n);
	for(int i = 0; i < n; ++i) {
		last[i] = arr[i] * p;
		if(i) {
			last[i] = max(last[i], last[i - 1]);
		}
	}
	for(int i = 0; i < n; ++i) {
		last[i] += arr[i] * q;
		if(i) {
			last[i] = max(last[i], last[i - 1]);
		}
	}
	for(int i = 0; i < n; ++i) {
		last[i] += arr[i] * r;
		if(i) {
			last[i] = max(last[i], last[i - 1]);
		}
	}
	printf("%lld", last.back());

	return 0;
}

