#include<bits/stdc++.h>
#define endl '\n'

using namespace std;
const int MAX_N = (int) (1e6 + 42);

int a,b,c;
double l,p,q;

void input()
{
    cin >> a >> b >> c;
    l = double(a);
    p = double(b);
    q = double(c);
}

void solve()
{
    double t = l / ( p + q );
    cout << t*p << endl;
}

int main()
{
    input();
    solve();
    return 0;
}


