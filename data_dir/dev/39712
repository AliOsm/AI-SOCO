#include<bits/stdc++.h>

using namespace std;

#define ll   long long


int main()
{
    ll n,m,x;
    ll cnt=0,ans=0,i=1,z=1;
    cin >> n >> m;
    if(m>=n)cout << n;
    else
    {
        x=m;
        while(z<(n-x) )
        {
            i++;
            z+=i;
        }
          cout << i+x;
    }
return 0;
}
