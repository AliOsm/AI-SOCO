#include <iostream>
#include <fstream>
#include <cstdio>
#include <cmath>
#include <vector>
#include <string>
#include <set>
#include <map>
#include <stack>
#include <queue>
#include <algorithm>
using namespace std;

#define REP(i,n) for(int i=0; i<n; i++)
#define FOR(i,a,b) for(int i=a; i<=b; i++)
#define FORR(i,a,b) for (int i=a; i>=b; i--)
#define pi M_PI

typedef long long ll;
typedef vector<int> VI;
typedef vector<ll> VL;
typedef vector<VI> VVI;
typedef pair<int,int> P;
typedef pair<ll,ll> PL;

int main(void){
    int n;
    cin >> n;
    int a, b;
    a = n/7;
    n -= 7*a;
    a *= 2;
    b = a;
    if (n==1)
        a += 1;
    else if (n>1)
        a += 2;
    if (n==6)
        b += 1;

    cout << b << " " << a << endl;

    return 0;
}