#include<bits/stdc++.h>
using namespace std;

typedef long long ll;
const ll MXN = 2e5 + 10;
const double PI = acos(-1);
double rad(double x){
    return PI * x / 180;
}
ll q, n, ans;
void solve(){
    cin >> n;
    double m = n * 2;
    double d = (m - 2) * 180.0 / m;
    d = d / 2;
    double g = 1.0 / ( 2 * sin(rad(180 / m)));
    cout << sqrt(g * g - 0.25) * 2 << '\n';
}
int main(){
    ios::sync_with_stdio(0);cin.tie(0); cout.tie(0);
    cout << fixed << setprecision(13);
    cin >> q;
    while(q --) solve();
    return 0;
}
