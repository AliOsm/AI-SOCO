typedef long long ll;
typedef unsigned long long ull;
typedef long double ld;

const double PI=3.1415926535897932384626433832795;
const ll INF = 1LL<<62;
const ll MINF = -1LL<<62;

template<typename T> T getint() {
	T val=0;
	char c;
	
	bool neg=false;
	while((c=gc()) && !(c>='0' && c<='9')) {
		neg|=c=='-';
	}

	do {
		val=(val*10)+c-'0';
	} while((c=gc()) && (c>='0' && c<='9'));

	return val*(neg?-1:1);
}

int main() {
	IO;
	int n;
	cin>>n;
	vector<pair<ll,ll>> t(n);
	vector<ll> val;
	ll alap=0;
	for(int i=0;i<n;++i) {
		cin>>t[i].xx>>t[i].yy;
		alap+=-t[i].xx+n*t[i].yy;
		val.pb(t[i].xx-t[i].yy);
	}
	sort(val.begin(), val.end());
	reverse(val.begin(), val.end());
	for(int j=1;j<=n;++j) {
		alap+=val[j-1]*j;
	}
	
	cout<<alap<<"\n";
	
	return 0;
}
