/** END OF TEMPLATE. DRINK A CUP OF TIGERSUGAR BEFORE READING MY CODE.  **/

const int MOD = 998244353;

void process(void) {
    int n, k; scanf("%d%d", &n, &k);
    vector<int> pos;
    long long sum = 0;

    FOR(i, 1, n) {
        int x; scanf("%d", &x);
        if (x >= n - k + 1) {
            sum += x;
            pos.push_back(i);
        }
    }

    int res = 1;
    REP(i, k - 1) res = 1LL * res * (pos[i + 1] - pos[i]) % MOD;
    cout << sum << " " << res << endl;
}

int main(void) {
    process();
    return 0;
}

