#include <bits/stdc++.h>
#define pb push_back
#define rep(i, a, b) for(int i = a; i < b; i++)
#define per(i, a, b) for(int i = a - 1; i >= b; i--)
typedef long long ll;
typedef long double ld;

using namespace std;


int main(){
    ios::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);

    int n, m;
    cin >> n >> m;
    if(n == 1){
    	cout << 1 << endl;
    }
    else{
    	int lower = m - 1;
    	int upper = n - m;
    	if(lower >= upper){
    		cout << m - 1 << endl;
    	}
    	else{
    		cout << m + 1 << endl;
    	}
    }

    return 0;
}