#include <bits/stdc++.h>
using namespace std;
typedef long long LL;



class Solution {
  int n;
public:
  void run(istream &in, ostream &out) {
    in >> n;
    out << n / 2 * (n - n / 2) << '\n';
    for (int i = 0; i < n / 2; ++i) {
      for (int j = n / 2; j < n; ++j) {
        out << i + 1 << ' ' << j + 1 << '\n';
      }
    }
  }
};

int main() {
  ios::sync_with_stdio(0); cin.tie(0);
  Solution().run(cin, cout);
}
