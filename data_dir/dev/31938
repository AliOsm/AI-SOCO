#include<bits/stdc++.h>
using namespace std;
int dp[200][200];


void update(int &a, int b) {
    a = max(a, b);
}


main() {
#ifndef ONLINE_JUDGE
    freopen("1.txt", "r", stdin);
#endif // ONLINE_JUDGE
    for (int i = 0; i < 200; i++)
        for (int j = 0; j < 200; j++)
            dp[i][j] = -1e9;

    int n;
    scanf("%d\n", &n);

    while (n--) {
        string s;
        getline(cin, s);
        char a, b;
        a = s[0];
        b = s.back();
        for (char i = 'a'; i <= 'z'; i++)
            update(dp[i][b], dp[i][a] + s.length());
        dp[a][b] = max(dp[a][b], (int) s.length());
    }

    int ans = 0;
    for (char i = 'a'; i <= 'z'; i++)
        ans = max(ans, dp[i][i]);

    printf("%d", ans);

    return 0;
}