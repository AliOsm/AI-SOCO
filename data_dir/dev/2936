#include <bits/stdc++.h>
using namespace std;
#define pb  push_back
#define ll  long long
#define vi  vector<ll >
#define vvi vector<vi >
#define all(x) x.begin(), x.end()

int n, m;

void f() {
    cin >> n >> m;
    for (int i = 0; i < n - 1; ++i)
        cout << string(m, 'B') + "\n";
    cout << string(m - 1, 'B') + "W\n";
}

int main() {
    ios_base::sync_with_stdio(false); cin.tie(0);
    int t; cin >> t;
    while (t--)
        f();

    return 0;
}