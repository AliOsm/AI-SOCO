#include <bits/stdc++.h>

using namespace std;

int main()
{
	int t,n;
	bool ok=1;
	string s;
	scanf("%d",&t);
	while(t--)
	{
		ok = 1;
		cin >> n >> s;
		for(int i=0; i < n/2 ; i++)
		{
			if(abs(s[i]-s[n-i-1]) != 2 && abs(s[i]-s[n-i-1]))
			{
				ok=0;
				break;
			}
		}
		if(ok)
			cout << "YES\n";
		else
			cout << "NO\n";
	}
}
