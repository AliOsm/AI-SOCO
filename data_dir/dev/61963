#include<bits/stdc++.h>
using namespace std;
typedef vector<int> vi;
typedef vector<pair<int,int> > vp;
#define pb push_back
#define mp make_pair
#define ll long long
#define rep(i,n) for(int i=0;i<n;i++)
#define MOD 1000000007
int A[100010];
int main(){
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	int n;
	cin>>n;
	for(int i=0;i<n;i++)
		cin>>A[i];
	sort(A, A + n);
	reverse(A, A + n);
	vector<int> ans;
	cout<<A[0]<<" ";
	for(int i=n-2;i>=1;i--)
		cout<<A[i]<<" ";
	cout<<A[n-1]<<'\n';


	
}