#define task "a"

typedef long long ll;
typedef pair<int,int> pii;

const int maxN=100500;
const int INF=(int)1e9;
const int MOD = 7+(int)1e9;
const double eps = 1e-9;

int main(void){
   // freopen(task".in", "r",stdin); freopen(task".out","w",stdout);
	int n, k;
	cin >> n >> k;
	int res = 0;
	for (int i = 0; i < n; i++) {
		int l, r;
		cin >> l >> r;
		res += r - l + 1;
		res %= k;
	}
	cout << (k - res) % k << endl;
	return 0;
}
