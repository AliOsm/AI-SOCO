#include <bits/stdc++.h>
using namespace std;

int main(){
    int T;
    cin >> T;
    while(T--){
        int A, B, C, N;
        cin >> A >> B >> C >> N;
        int S = (A+B+C+N);
        if(S%3 || (S/3) < max({A, B, C})){
            cout << "NO" << endl;
        }else{
            cout << "YES" << endl;
        }
    }
    return 0;
}
