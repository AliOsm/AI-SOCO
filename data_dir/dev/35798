char a[123][1234];

int main()
{
    int n, m;
    cin >> n >> m;
    ++n;
    int mx = n-1;
    int mn = n/2;
    for(int i = mn; i <= mx; ++i)
    {
        if(i % m == 0)
        {
            cout << i;
            return 0;
        }
    }
    cout << -1;

}

