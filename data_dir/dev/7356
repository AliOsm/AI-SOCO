#include <bits/stdc++.h>
#define SZ(x) (int)x.size()
const int SIZE=2e6+3;
using namespace std;

int Mp[SIZE];

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(NULL),cout.tie(NULL);
    
    int n,x; 
    scanf("%d",&n);
    
    for(int i=0;i<n;i++)
    {
        scanf("%d",&x);
        Mp[x]++;
    }
    
    int res=0;
    for(int i=0;i<=SIZE;i++)
    {
        Mp[i+1]+=Mp[i]/2;
        Mp[i]%=2;
        res+=Mp[i];
    }
    
    cout<<res;  
}