*/

//#define pi 3.141592654
#define forr(i,a,b) for(int i=a;i<=b;i++)
#define F first
#define S second
#define input ios_base::sync_with_stdio(0);cin.tie(0);
#define NOT(x) (1^x)

const double PI  = acos(-1.0);
using namespace std;
typedef pair<double,double>pdd;
typedef long long  ll;
typedef pair<ll, ll>pii;
typedef complex<double> point;

//int x[8]={1,0,0,-1,-1,-1,1,1};
//int y[8]={0,1,-1,0,-1,1,-1,1};
//const int N=500009,M=1000000;
const double EPS= 1e-9,eps=-1e9;
const int N =100005;

int n,x,y,ans;
string s;

int get(int u,int v)
{
    int c=0;
    swap(s[u],s[v]);

    stack<char>k;
    int t=0;
    for(int i=0;i<n;i++)
    {
        if(s[i]=='(')k.push(s[i]);
        else if(k.size()==0)t++,c=0;
        else{
          k.pop();
          if(k.size()==0)c++;
        }
    }
    swap(s[u],s[v]);
    if((t||k.size())&&(int)k.size()==t)c++;
    else if(t||k.size())c=0;
   // cout<<u<<" "<<v<<" "<<c<<endl;
    return c;
}
 int main()
{
//freopen("travel.in","r",stdin);
//freopen("travel.out","w",stdout);
//__builtin_popcount()
input;

    cin>>n>>s;
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            int k=get(i,j);
            if(k>ans)
            {
                ans=k;
                x=i,y=j;
            }
        }
    }
    cout<<ans<<endl;
    cout<<x+1<<" "<<y+1<<endl;







return 0;
}
