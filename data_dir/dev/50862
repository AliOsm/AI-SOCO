#include<iostream>
#include<set>
#include<map>
#include<vector>
#include<queue>
#include<algorithm>
#include<string>
#include<string.h>
#include<math.h>
using namespace std;

const int INF = 1000 * 1000 * 1000;

typedef long long li;
typedef long double ld;


int main()
{
    int a[1111];
    int n;
    cin >> n;
    for(int i = 1; i <= n; i++)
        cin >> a[i];
    sort(a + 1, a + n + 1);
    cout << a[n] << ' ';
    for(int i = 2; i <= n - 1; i++)
        cout << a[i] << ' ';
    cout << a[1] << endl;
    return 0;
}