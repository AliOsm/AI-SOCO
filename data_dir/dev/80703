#include <vector>
#include <iostream>
#include <regex>
using namespace std;

int main()
{
    int n;
    cin >> n;
    for (int i = 0; i < n; ++i)
    {
        for (int j = 0; j < n; ++j)
        {
            if (abs(n / 2 - i) + abs(n / 2 - j) <= n / 2)
                cout << "D";
            else
                cout << "*";
        }
        cout << endl;
    }
} 