//Hello World

typedef long long int lli;
typedef long double ld;
#define pii pair<int,int>
#define piiti pair< pair<int,int>,int>
#define ipii pair<int,pair<int,int> >
#define mod 1000000007
#define lasB(b) (b&(-b))
#define N 1000006

int n;

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);cout.tie();
