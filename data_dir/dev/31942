#define ll long long
#define MAX  1000005
#define INF 1000000000
using namespace std;
string s;
string t;
int main(){
    cin>>s;
    cin>>t;
    int ind = 0;
    int i = 0;
    while((i < s.size())&&(ind < t.size())){
        if(s[i] == t[ind]){
            ++i;
            ++ind;
        }
        else ++ind;
    }
    cout<<i + 1;
}
