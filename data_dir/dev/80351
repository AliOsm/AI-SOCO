#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
const ll maxn = 5e5;
const int P = 51;
const ll mod = 1e9 + 9;

#define pb push_back


ll n, a, b, c, ans, pos = 1;
int main(){
  cin >> n >> a >> b >> c;
  if(n > 1){
    cout << min(a * (n - 1), min(b * (n - 1), min(a, b) + c * (n - 2)));
  }
  else {
    cout << 0;
  }
}
