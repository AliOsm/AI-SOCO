#include <iostream>

using namespace std;

int main()
{
    int n;
    string s;
    cin>>n>>s;
    bool f=1;
    for (int i=0;i<n;i++)
    {
        if (s[i]!='a'&&s[i]!='e'&&s[i]!='i'&&s[i]!='o'&&s[i]!='u'&&s[i]!='y') {f=1; cout<<s[i];}
        else
        {
            if (f) {cout<<s[i]; f=0;}
            else f=0;
        }
    }
    return 0;
}
