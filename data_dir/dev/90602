 #include <iostream>
#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define inf 1000000000000
#define mod 1000000007
#define pb push_back
#define mp make_pair
#define all(v) v.begin(),v.end()
#define S second
#define F first
#define boost1 ios::sync_with_stdio(false);
#define boost2 cin.tie(0);
#define mem(a,val) memset(a,val,sizeof a)
#define endl "\n"
#define maxn 200001

ll par[maxn],a[maxn];
ll find(ll x)
{
    if(par[x]==x)
    return x;
    return par[x]=find(par[x]);
}
int main()
{
    boost1;boost2;
    ll i,j,n,sum=0,ans=0,x,y,xp,yp;
    cin>>n;
    for(i=1;i<=n;i++)
    cin>>a[i];
    for(i=1;i<=n;i++)
    {
        cin>>x;
        sum+=x;
    }    
    sum=sum%2;
    ans=(sum==0);
    sum=0;
    for(i=1;i<=n;i++)
    par[i]=i;
    for(i=1;i<=n;i++)
    {
        x=i;
        y=a[i];
        xp=find(x);
        yp=find(y);
        if(xp==yp)
        continue;
        par[xp]=yp;
    }
    for(i=1;i<=n;i++)
    sum+=(find(i)==i);
    if(sum!=1)
    ans+=sum;
    cout<<ans;
    return 0;
}
