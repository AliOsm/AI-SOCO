#include <bits/stdc++.h>

using namespace std;

inline void prep()
{
    cin.tie(0);
    cin.sync_with_stdio(0);
}

#define X first
#define Y second
#define ll long long
#define inf (0x7fffffffffffffff)
#define all(x) x.begin(), x.end()

const int mod = (int)1e9 + 7;
const int MX = (int)1e6 + 1;


int main()
{
    prep();

    int n;
    cin >> n;

    cout << "I ";
    for(int i = 0; i < n; ++i){
        if(i & 1) cout << "love ";
        else cout << "hate ";
        if(i == n - 1) cout << "it" << endl;
        else cout << "that I ";
    }

    return 0;
}