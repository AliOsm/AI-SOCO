#include<bits/stdc++.h>
using namespace std;
int n , m , a , b , c;
int main()
{
    cin>>n>>m;
    while ( ( n >= 2 &&  m ) || ( m >= 2 && n ) )
    {
        a++;
        if ( n > m )
        {
            n -= 2;
            m--;
        }
        else
        {
            m -= 2;
            n--;
        }
    }
    printf("%d\n",a);
    return 0;
}
