#include <bits/stdc++.h>

using namespace std;

#define x1 myx1
#define y1 myy1

int main() {
  int n;
  scanf("%d", &n);
  puts("YES");
  for (int i = 1, x1, y1, x2, y2; i <= n; ++i) {
    scanf("%d%d%d%d", &x1, &y1, &x2, &y2);
    printf("%d\n", (x1 & 1) + (y1 & 1) * 2 + 1);
  }
  return 0;
}
