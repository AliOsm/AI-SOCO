#include<bits/stdc++.h>
using namespace std;

#define si(n) scanf("%d",&n)
#define ll long long
#define MAX 200005

int main()
{
    //freopen("input.txt","r",stdin);
    int i,j;
    int n;
    cin>>n;
    ll ans=1;
    ll now=4;
    for(i=2,j=1;i<=n;i++,j++){
        ans+=j*4;
    }
    cout<<ans<<endl;




    return 0;
}
