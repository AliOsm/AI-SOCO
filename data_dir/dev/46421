#include <bits/stdc++.h>
using namespace std;

#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl "\n"
#define long long long 

int main() {
    IOS;

    long int n;
    cin>>n;

    vector<long int> v(n);
    for(long int i = 0; i < n; i++)
        cin>>v[i];

    sort(v.begin(),v.end());
    swap(v[0],v[v.size()-1]);

    for(auto ele : v)
        cout<<ele<<" ";
    return 0;
}
