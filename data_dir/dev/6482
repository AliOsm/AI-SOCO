#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[123456],a[1111234], b[1125678],d[123456], l,ll,r, s, t, k, m, xh, x, x1, y,z;
string p[12],q;
map<long long,long long> mm;
int main() {
    cin >> n;
    p[0] = "O-|-OOOO";
    p[1] = "O-|O-OOO";
    p[2] = "O-|OO-OO";
    p[3] = "O-|OOO-O";
    p[4] = "O-|OOOO-";
    p[5] = "-O|-OOOO";
    p[6] = "-O|O-OOO";
    p[7] = "-O|OO-OO";
    p[8] = "-O|OOO-O";
    p[9] = "-O|OOOO-";
    if (n == 0){
        cout <<p[0];
        return 0;
    }
   
    while (n > 0){
        cout << p[n%10]<<endl;
        n/=10;
    }
 
    return 0;
}