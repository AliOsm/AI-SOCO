#include<bits/stdc++.h>
 using namespace std;
 #define ll long long
 #define pb push_back
 #define fi first
 #define se second

 int main()
 {
     //ios_base::sync_with_stdio(false);cin.tie(0), cout.tie(0);
     int a,b;
     cin >> a >> b;
     if(abs(a-b)>1 || (a==0 && b==0))
     {
         cout << "NO";
         return 0;
     }
     cout << "YES";
     return 0;
 }

