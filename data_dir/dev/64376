int main(){
//    freopen("data.in","r",stdin);
    int n,p,q,ans=0;
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>p>>q;
        if(p+2<=q) ans++;
    }
    cout<<ans<<endl;

    return 0;
}
