#include <bits/stdc++.h>

using namespace std;

const int mx = 1011;
const long long mod = 1e9 + 7;

int a,b,n;

void solve(){
    cin>>n;
    int ans = 0;
    vector<int>vec;
    for(int i=0;i<2*n;i++){
        int p;
        cin>>p;
        vec.push_back(p);
    }
    sort(vec.begin(),vec.end());

    cout<<vec[n]-vec[n-1]<<endl;
}

int main()
{
//    pre();
    int t;
    t = 1;
    //scanf("%d",&t);
    //cin>>t;
    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}
