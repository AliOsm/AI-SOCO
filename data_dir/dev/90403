// In the name of God

#include<bits/stdc++.h>
using namespace std;
#define pb push_back
#define Size(x) ((int)(x).size())
typedef long long ll;
typedef long double ld;
typedef pair<int , int>pii;
const int INF = 1e9 + 10;

int main(){
	ios_base :: sync_with_stdio(false) , cin.tie(0) , cout.tie(0);
	int x,y;cin>>x>>y;
	if(y == 0) return cout << "No\n" , 0;
	if(y == 1 && x > 0) return cout << "No\n" , 0;

	if(x < y-1) return cout << "No\n" , 0;
	if((x - (y-1))%2 == 0) return cout << "Yes\n" , 0;
	cout << "No\n";
	return 0;
}
