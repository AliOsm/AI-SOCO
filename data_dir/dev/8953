#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
const ll N= 3e5 + 5;
const ll mod=1e9 + 7;

int main(){
    ios_base:: sync_with_stdio(false);
    cin.tie(NULL); cout.tie(NULL);

    ll x,y;
    cin>>x>>y;
    if(!y || (y==1&&x>0) || (y-1)>x || (x-(y-1))%2)cout<<"No";
    else cout<<"Yes";
}


