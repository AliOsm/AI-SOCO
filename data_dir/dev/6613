#include <bits/stdc++.h>

using namespace std;

int main()
{
    long long n,k;
    cin>>n>>k;
    if (2*n-1<k) {cout<<0; return 0;}
    if (k<=n)
    {
        if (k%2)
        {
            cout<<k/2;
        }
        else
        {
            cout<<k/2-1;
        }
    }
    else
    {
        k=2*n-1-k+1;
        if (k%2)
        {
            cout<<k/2+1;
        }
        else
        {
            cout<<k/2;
        }
    }
    return 0;
}
