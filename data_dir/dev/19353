#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef long double ld;

int main() {
    int test;
    cin >> test;
    for (int tst = 1; tst <= test; ++tst) {
        ll a, b, k;
        cin >> a >> b >> k;
        ll pos = (a - b) * (k / 2);
        if (k % 2 == 1) pos += a;
        cout << pos << endl;
    }
    return 0;
}
