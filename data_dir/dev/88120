const int N = 2e6 + 5;
int n;
int cnt1, cnt2;
int main(){
    fast;
    cin >> n;
    string s;
    cin >> s;
    for(int i = 0; i < n; ++i){
        if(s[i] == '8'){
            cnt1 ++;
        }
        else{
            cnt2 ++;
        }
    }
    cout << min(cnt1, (cnt2 + cnt1) / 11) << endl;
    return 0;
}
