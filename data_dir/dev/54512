#include<stdio.h>
#include<string.h>
#include<algorithm>
#include<map>
#include<string>
#include<math.h>
#include<queue>
#include<stack>
#include<iostream>
using namespace std;
#define LL long long
#define mod 1000000007
int main(void)
{
	int n, i, x, y, ans;
	scanf("%d", &n);
	ans = 0;
	for(i=1;i<=n;i++)
	{
		scanf("%d%d", &x, &y);
		ans = max(ans, x+y);
	}
	printf("%d\n", ans);
	return 0;
}