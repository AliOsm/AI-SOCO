#include<bits/stdc++.h>
#define LiangJiaJun main
#define INF 1999122700.1314
using namespace std;
int n,s,d,t=0;
int LiangJiaJun(){
    scanf("%d",&n);
    for(int i=1;i<=n;i++){
        scanf("%d%d",&s,&d);
        while(s<=t)s+=d;
        t=s;
    }
    printf("%d\n",t);
    return 0;
}


