#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, tam;
string s;
i64 anso, anse;
i64 even[2], odd[2];

int main()
{
    optimiza_io
    cin >> s;
    N = s.size();
    for( i64 i = 0; i < N; i ++ )
    {
        i64 v = s[i] - 'a';
        if( i & 1 )
            odd[v]++;
        else
            even[v]++;
        if( i & 1 )
        {    
            anse += even[v];
            anso += odd[v];
        }
        else
        {
            anse += odd[v];
            anso += even[v];
        }
        
    }
    cout << anse << " " << anso << "\n";
    return 0;
}