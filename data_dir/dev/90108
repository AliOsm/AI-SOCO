#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define all(x) x.begin(),x.end()

int const N = 200001;

int main(){
    #ifndef ONLINE_JUDGE
    freopen("read.txt","r",stdin);
    #endif
    int k, n, s, d; 
    scanf("%d%d%d%d", &k, &n, &s, &d);
    ll perone = n / s + (n % s ? 1: 0);
    ll sh = 1ll * perone * k;
    ll an = sh / d + (sh % d? 1 : 0);
    printf("%lld\n", an); 
} 