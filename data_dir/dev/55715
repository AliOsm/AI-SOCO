int tc , V , E , w;
string a , b ;
map<string,int> strIdx;
vector<pair<int , pair< int , int> > > edgeList;
int kruskal ()
{
  UnionFind UF(V);
  sort(edgeList.begin(),edgeList.end());
  int mst_cost = 0;
  for(int i =0 ; i < edgeList.size() ; ++i)
  {
    pair<int , pair<int,int> > v = edgeList[i];
    int cost = v.f , u = v.s.f , u2 = v.s.s;
    if(!UF.isSameSet(u,u2))
    {
      mst_cost+=cost;
      UF.unionSet(u,u2);
    }
  }

  return mst_cost;
}

int k ;
ll mod = 1000000007;
ll dp[100001] , cum[100001];
long long search(int N)
{
    if(N==0)return 1L;
    if(N<0) return 0L;
    if(dp[N]!=-1) return dp[N];
    return dp[N] = N-k>=0?(search(N-k)%mod + search(N-1)%mod):(search(N-1)%mod);
}
int main() {


  int n , k ;
  cin>>n>>k;
  int cnt =1;
  
  for(int i =0 ; i < 2*n ;i+=2)
  {
    if(k>0)
      cout<<(cnt+1)<<" "<<(cnt)<<" ";
    else cout<<(cnt)<<" "<<(cnt+1)<<" ";
    cnt+=2;k--;
  }
  return 0;
}