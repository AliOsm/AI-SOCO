unsigned power( unsigned val, unsigned _pow=0 ) {
  if ( _pow <= 0 )
    return 1;
  return val * power( val, _pow-1 );
}
int str2int (const string &str) {
  stringstream ss(str);
  int num;
  if((ss >> num).fail())
  {
      //ERROR
  }
  return num;
}
