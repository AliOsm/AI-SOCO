#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define pi pair<int, int>
#define F first
#define S second
#define pb push_back
#define mp make_pair
#define PI acos(-1.0)
using namespace std;
int n, k;
int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);

    cin >> n >> k;
    int tmp = n - 1;
    int Ans = tmp*2;
    Ans += min(n - k + n - 1, k + n - 2);
    Ans += 3;
    cout << Ans << '\n';
    return 0;
}
