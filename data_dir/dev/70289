#include <bits/stdc++.h>
#define INT long long int
#define oo 987654321
using namespace std;
INT n, ans, T, k;
string s, t;
int main()
{
    ios::sync_with_stdio(false);
    cin>>T;
    while( T-- )
    {
        cin>>n>>k;
        if( k*k > n ) cout<<"NO\n";
        else if( k%2 == n%2 ) cout<<"YES\n";
        else cout<<"NO\n";
    }
    return 0;
}
