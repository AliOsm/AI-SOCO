	int i,j; 
	cin>>n>>s;
	string st="";
	for(i=0;i<n;++i)
	{
		if(!st.size()||st.size()%2==0)
			st+=s[i];
		else
		{
			if(st.back()==s[i])continue;
			else
				st+=s[i];
		}
	}
	if(st.size()%2==1)
		st.pop_back();
	cout<<(n-(int)st.size())<<endl<<st;
}