typedef long long ll;
typedef unsigned long long ull;
typedef long double ld;
typedef vector<int> vi;
typedef pair<ll, ll> pll;
typedef pair<int, int> pii;

string itosm(ll x){
    if(x == 0)
        return "0";
    string ans = "";
    while(x > 0){
        ans +=((x%10) + '0');
        x/=10;
    }
    reverse(ans.begin(), ans.end());
    return ans;
}

ll stoim(string str){
    ll ans = 0;
    ll k = 1;
    for(int i = str.length()-1; i >= 0; i--){
        ans+=(str[i]-'0')*k;
        k*=10;
    }
    return ans;
}

const ll infll = 1e18 + 3;
const int inf = 1009000999;
const double eps = 1e-7;
const int maxn = 1e6 + 777;
const int baseint = 1000200013;
const ll basell = 1e18 + 3;
const ld PI = acos(-1.0);
const ll mod = 1e9 + 7;

int a[200][200];

void solve(){
    int n, m, k;
    cin >> n >> m >> k;
    for(int i = 0; i < n; i++){
        for(int j = 0; j < m; j++){
            cin >> a[i][j];
        }
    }
    int ans = 0, ans2 = 0;
    for(int j = 0; j < m; j++){
        int mx = 0, f = 0;
        int cnt = 0, cntf = 0;
        for(int i = 0; i < k; i++)
            f += a[i][j];
        mx = f;
        for(int i = k; i < n; i++){
            cnt += a[i - k][j];
            f += a[i][j];
            f -= a[i - k][j];
            if(f > mx)
                cntf = cnt;
            mx = max(mx, f);
        }
        ans += mx;
        ans2 += cntf;
    }
    cout << ans << " " << ans2;
}

