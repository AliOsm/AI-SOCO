#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
int main(){
    ios_base:: sync_with_stdio(false);
    cin.tie(NULL); cout.tie(NULL);
    ll n,k;cin>>n>>k;
    ll len = (n-k)/2;
    string s="";
    while(s.size()<n){
        for(ll i=0;i<len && s.size()<n ;i++)s+="0";
        if(s.size()<n)s+="1";
    }
    cout<<s;
}
