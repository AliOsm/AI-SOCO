#include<bits/stdc++.h>
using namespace std;
typedef vector<int> vi;
typedef vector<pair<int,int> > vp;
#define pb push_back
#define mp make_pair
#define ll long long
#define rep(i,n) for(int i=0;i<n;i++)
#define MOD 1000000007
int main(){
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	int a,b;
	cin>>a>>b;
	if(a > b)swap(a,b);
	if(a % 2 == 0 || b % 2 == 0)
		cout<<(a*b)/2<<'\n';
	else{
		if(b <= 1)
			cout<<0<<'\n';
		else if(b == 3 && a == 1)
			cout<<1<<'\n';
		else
			cout<<(a*b-1)/2<<'\n';
	}

	
}