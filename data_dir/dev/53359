#include <bits/stdc++.h>
using namespace std;
#define ll long long
ifstream in("file.in");
ofstream out("file.out");
#define nibab return
#define INF 1000000005
#define LINF 1000000000000000005

///________CODE_STARTS_HERE________\\\

int n,m,k,x,y,t;
char c;

int main(){
    ios_base :: sync_with_stdio(0);
    cin >> n >> m >> k;
    x=((k+1)/2)%m;
    if(x==0) x=m;
    y=(k-2*x+1)/(2*m)+1;
    if(k%2) c='L';
    else c='R';
    cout << y << ' ' << x << ' ' << c;
}


