#include <bits/stdc++.h>
using namespace std;
const int N = 35000 + 1;
long long dp[N][51],ans;
int v[N],R,L = 1;
int freq[N];
void add(int l,int r){
	while(L < l)ans-=!--freq[v[L++]];
	while(L > l)ans+=!freq[v[--L]]++;
	while(R < r)ans+=!freq[v[++R]]++;
	while(R > r)ans-=!--freq[v[R--]];
}
void calc(int l,int r,int bl,int br,int at){
	if(l > r)return;
	int mid = (l + r)/2,bst;
	long long &ref = dp[mid][at];
	ref = 0;
	for(int i = bl;i <= min(mid,br);i++){
		add(i,mid);
		if(ans + dp[i - 1][at - 1] > ref){
			ref = ans + dp[i - 1][at - 1];
			bst = i;
		}
	}
	calc(l,mid - 1,bl,bst,at);
	calc(mid + 1,r,bst,br,at);
}
int main(){
// 	freopen("readin.txt","r",stdin);
	int n,k;
	scanf("%d%d",&n,&k);
	for(int i = 1;i <= n;i++)scanf("%d",v + i);
	for(int i = 1;i <= n;i++)add(1,i),dp[i][1] = ans;
	for(int i = 2;i <= k;i++)calc(1,n,1,n,i);
	cout << dp[n][k] << endl;
}