#include <bits/stdc++.h>
using namespace std;

int n;

int main()
{
    cin>>n;
    int x,p1=1,p2=2,p3=3;
    while(n--)
    {
        cin>>x;
        if(x==p1)
            swap(p2,p3);
        else
        if(x==p2)
            swap(p1,p3);
        else
        {
            cout<<"NO";
            return 0;
        }
    }
    cout<<"YES";
}
