#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main(){

int n;
cin>>n;
if( n==1 ){
    int x;cin>>x;
    if( x )cout<<"YES"<<endl;
    else cout<<"NO"<<endl;

    return 0;
}
int on=0,off=0;
while(n--){
    int x;
    cin>>x;

    if(x)on++;
    else off++;

}


if( on >0 && off==1 )cout<<"YES"<<endl;
else cout<<"NO"<<endl;

return 0;
}
