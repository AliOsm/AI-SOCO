#include<iostream>
using namespace std;
int a,b,c,d,i,e,f,g,n,m,k,l,A[200005],r,s;
int main()
{
           	       std::ios_base::sync_with_stdio(false);

           cin>>n>>m;
	for(i=1;i<=n;i++)
	{
	           cin>>A[i];
	           if(A[i]>0) a++; 
	           else b++;
	}
	for(i=1;i<=m;i++)
	{ 
	           cin>>l>>r;
	           s=r-l+1;
	           if(s%2==0 && s/2<=b && s/2<=a) cout<<1<<endl; 
	           else cout<<0<<endl;
	}
}