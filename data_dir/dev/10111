#include<bits/stdc++.h>
using namespace std;

int main(){
    int n,m;
    char A[105];
    string a;
    cin >> a;
    for(int i=0;i<a.size();i+=2){
        for(int j=0;j<a.size();j+=2){
            if(a[i]<a[j]){
                swap(a[i],a[j]);
            }
        }
    }
    cout << a;
    return 0;
}
