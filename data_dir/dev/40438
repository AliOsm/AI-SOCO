#include<bits/stdc++.h>
#define ll long long
#define pb push_back
#define fr first
#define sc second
#define r_0 return 0
using namespace std;
    const ll N = 2e5 + 7;

int T , n ;
string s ;
int main()
{
    ios_base::sync_with_stdio(0);

    cin >> T ;
    while ( T -- )
    {
        cin >> n >> s ;
        if ( n != 2 )
        {
            cout << "YES\n2\n" << s[0] << " " ;
            s.erase( s.begin() );
            cout << s << "\n" ;
        }
        else if ( s[0] >= s[1] )
            cout << "NO\n";
        else{
            cout << "YES\n2\n" << s[0] << " " << s[1] << endl;
        }
    }

}
