int main()
{
    cin >> n ;
    n = n % 4 ;
    if( n == 0 ){
        puts("1 A") ;
    }
    else if( n == 1 ){
        puts("0 A") ;
    }
    else if( n == 2 ){
        puts("1 B") ;
    }
    else{
        puts("2 A") ;
    }
    return 0 ;
}
