#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <set>
using namespace std;
int main()
{
	int n;
	cin>>n;
	if(n==1||n==2)
    cout<<"No";
    else
    {
    	cout<<"Yes"<<endl<<n-1<<" ";
    	for(int i=1;i<n;i++)
    	cout<<i<<" ";
    	cout<<endl;
    	cout<<1<<" "<<n;
	}
}
