#include <iostream>
#include <string>
#include <vector>
#include <math.h>
#include <cmath>
#include <map>
#include <algorithm>
using namespace std;

int n,c, x1,x2,ans;

int main() {
	cin >> n >> c>> x1;
	ans++;
	for(int i = 1 ; i < n; i++){
		cin >> x2;
		if(x2-x1>c){
			ans=1;
		}else{
			ans++;
		}
		x1=x2;
		
	}
	
	cout<< ans;
	
	
	return 0;
}