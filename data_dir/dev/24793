#include <cstdio>
#include <iostream>
#include <cmath>
#include <algorithm>
#include <functional>
#include <numeric>
#include <queue>
#include <stack>
#include <vector>
#include <string>
#include <set>
#include <map>
#include <memory.h>

using namespace std;

typedef long long LL;

int main()
{
	int n, m;
	cin >> n >> m;
	cout << min(n + 1, m + 1) << endl;
	for(int i = 0; i <= min(n, m); ++i)
		cout << i << " " << min(n, m) - i << endl;
	return 0;
}