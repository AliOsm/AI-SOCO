typedef long long ll;
typedef unsigned long long lu;

typedef tree < int,  null_type,  less < int >,  rb_tree_tag,  tree_order_statistics_node_update > o_set;

int main()
{
    int t;
    scanf("%d",&t);
    while(t--){
        int a, ans;
        scanf("%d",&a);
        if(a%2==1){
            ans = (a-3)/2 + 1;
        }
        else ans = a/2;
        printf("%d\n",ans);
    }
    return 0;
}
