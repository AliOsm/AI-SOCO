#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define ull unsigned long long
#define F first
#define S second
#define pb push_back
#define pi  acos(-1)
#define TIME 1.0*clock()/CLOCKS_PER_SEC
#define ld long double
#define endl '\n'

int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
#ifdef LOCAL
    freopen("output.txt", "w", stdout);
    freopen("input.txt", "r", stdin);
#else
    //    freopen("input.txt", "r", stdin);
    //    freopen("output.txt", "w", stdout);
#endif
    int n;
    cin>>n;
    for (int i = 0;i < n; ++i){
        int x;
        cin>>x;
        if (x <= 7){
            cout<<1<<endl;
            continue;
        }
        if (x % 7 == 0){
            cout<<x / 7<<endl;
            continue;
        }else {
            cout<<(x / 7) + 1<<endl;
        }
    }
    return  0;
}
