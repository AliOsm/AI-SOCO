#include <bits/stdc++.h>
#define ld long double
#define ll long long int
#define mod 1000000007
#define ll_inf 1000000000000000
#define int_inf 1000000000
#define pb push_back
#define endl '\n'
#define Endl '\n'
#define eps 1e-9
#define PI acos(-1.0)
#define ii pair<int,int>
#define se second
#define fi first
using namespace std;
int n;
void gen(){
    for(int i=2;i<=4;i++)cout<<1<<" "<<i<<endl;
    for(int i=5;i<=n;i++)cout<<2<<" "<<i<<endl;
}
int main(){
    cin>>n;
    if(n<=5)cout<<-1<<endl;
    else gen();
    for(int i=2;i<=n;i++){
        cout<<1<<" "<<i<<endl;
    }
}
