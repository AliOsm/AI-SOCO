#include<bits/stdc++.h>
using namespace std;
int main()
{
   long long int a,b,c,d,e,i,j,k,l,n,m,x,y,t,p;
   scanf("%lld",&n);
   long long int nm[n];
   for(i=0;i<n;i++)
   {
       scanf("%lld",&nm[i]);
   }
   sort(nm,nm+n);
   a=nm[n-1]-nm[0]+1;
   b=a-n;
   printf("%lld\n",b);
   return 0;
}
