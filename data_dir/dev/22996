#include<bits/stdc++.h>
#define int long long
using namespace std;
main()
{
    int q;
    cin>>q;
    while(q--)
    {
        int a,b,c,sum=0;
        scanf("%lld%lld%lld",&a,&b,&c);
        sum=a+b+c;
        sum=sum/2;

            printf("%lld\n",sum);
    }
    return 0;
}
