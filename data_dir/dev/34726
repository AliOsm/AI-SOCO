#include <bits/stdc++.h>
using namespace std;
typedef long long Long;

//const Long MX = ;

void solve(){
	Long n;
	cin >> n;
	cout << n / 2  - (n%2 == 0)<< "\n";
	return;
}

int main(){
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);
	cout.precision(10);
	cout << fixed;

	Long t;
	cin >> t;
	while(t--) solve();
	return 0;
}
