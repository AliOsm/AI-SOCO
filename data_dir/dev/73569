#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define pi pair<int, int>
#define F first
#define S second
#define pb push_back
#define mp make_pair
#define PI acos(-1.0)
using namespace std;
ll t, n, a, b, ans;
int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
    cin >> t;
    while(t--){
        cin >> n >> a >> b;
        if (2*a <= b) ans = n*a;
        else ans = (n/2)*b + ((n&1) ? a : 0);
        cout << ans << '\n';
            }
    

    return 0;
}
