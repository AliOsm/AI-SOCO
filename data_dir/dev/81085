    int cntPositive = 0, cntNegative = 0;
    rep(i,0,n)
    {
        int x;
        cin >> x;
        if ( x < 0)
            cntNegative++;
        else if (x > 0)
            cntPositive++;
    }
    if (cntPositive >= (n+1)/2)
        cout << 1;
    else if (cntNegative >= (n+1)/2)
        cout << -1;
    else
        cout << 0;
    return  0;

}