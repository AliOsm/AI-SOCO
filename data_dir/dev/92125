#include <bits/stdc++.h>
using namespace std;

typedef long long ll;
const int maxn = (int) 1e6 + 2;
const int inf = (int)1e8;
const double pi = acos(-1);

ll n, m, k, t;
int main(){
    cin >> t;
    while(t--){
        cin >> n >> m >> k;
        ll ans = ((k + 1) / 2) * n;
        ans -= ((k / 2) * m);
        cout << ans << "\n";
    }
}
