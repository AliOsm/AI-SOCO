#include<bits/stdc++.h>
#define MAX 1000005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, K, Q;
char a[MAX];

int main()
{
    optimiza_io
    cin >> Q;
    while( Q -- ) {
        cin >> N >> K;
        for( i64 i = 1; i <= N; i ++ )
            cin >> a[i];
        priority_queue < i64 , vector < i64 > , greater < i64 > > q;
        for( i64 i = 1; i <= N; i ++ ) {
            if( a[i] == '1' ) 
                q.push( i );
            else {
                while( ! q.empty() && i - q.top() > K ) 
                    q.pop();
                if( ! q.empty() ) {
                    i64 x = q.top();
                    q.pop();
                    swap( a[i] , a[x] );
                    K -= i - x;
                    q.push( i );
                }
            }
        }
        for( i64 i = 1; i <= N; i ++ )
            cout << a[i];
        cout << "\n";
    }
    return 0;
}