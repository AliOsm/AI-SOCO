#include <bits/stdc++.h>
using namespace std;
int n,r;
double R,N,ang;
double pi=acos(-1);
int main()
{
    //freopen("in.txt","r",stdin);
    //freopen("out.txt","w",stdout);
    scanf("%d %d",&n,&r);
    N=n;
    R=r;
    ang=sin(pi/N);
    double ans=r*ang/(1-ang);
    //cout<<ans;
    printf("%.7f",ans);
    return 0;
}
