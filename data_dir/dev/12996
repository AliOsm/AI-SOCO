#include<bits/stdc++.h>
#define M 500005
#define mpr(a,b) make_pair(a,b)
#define fs first
#define sc second
#define si size()
#define all(v) v.begin(),v.end()
#define pb(x) push_back(x)
#define clr(a) memset(a,0,sizeof(a))
#define fr(i,a,n) for(i=a;i<=n;i++)
using namespace std;
typedef long long ll;


ll a,b,c,d,e,f,g,h,i,j,k,l,m,n,o,p,q,r,t,tp,u,w,x,y,z,sz,sm,mx,mn,ln,ar[1005][1005],br[1005][1005],fr[55],cnt;
int main()
{
    while(cin>>r>>c>>k)
    {
        fr(i,0,r-1)fr(j,0,c-1)
        {
            cin>>ar[i][j];
        }
        cout<<(c*(c-1)/2)<<endl;
        fr(i,1,c)
        {
            fr(j,i+1,c)
            {
               if(k==0) cout<<i<< " "<<j<<endl;
               else cout<<j<< " "<<i<<endl;
            }
        }

    }
    return 0;
}
