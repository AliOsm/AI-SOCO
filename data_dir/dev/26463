bool Ems(LL n)
{
    stringstream ss;
    ss << n;
    string s;
    s = ss.str();
    if (s.find('8') != -1)
        return true;
    return false;
}
int main()
{
    LL n;
    cin >> n;
    for (LL i = n + 1; i <= n + 50; i++)
    {
        if (Ems(i))
        {
            cout << i - n << endl;
            break;
        }
    }
    


        //  Pause;
    return 0;
}