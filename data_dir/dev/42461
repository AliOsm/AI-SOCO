main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(false);
    cout.tie(false);

    int n,m;
    cin>>n>>m;
    if(n==0 && m==0){
cout<<"NO"<<endl;
return 0;
}
    if(abs(n-m)>1){
        cout<<"NO"<<endl;
    }
    else{
        cout<<"YES"<<endl;
    }


    return 0;
}