#include<bits/stdc++.h>
using namespace std;
 
typedef long long ll;
#define pb push_back
#define Mehrkish ios::sync_with_stdio(false),		cin.tie(0),			cout.tie(0)
 
const int maxx = 5e2 + 19;
ll n, k, b, dp[maxx], maxn = -99999999999, flag[maxx], ans, jvb, t, a, c, d;
vector <ll> v;
void Input(){
	cin >> a >> b >> c >> d;
}
 
void Solve(){
	ans = 2 * ( b + d ) + (max( a, c )) * 2 + 4;
	cout << ans << endl;
}
int main(){
	Mehrkish;
	Input(),	Solve();
	return 0;
}