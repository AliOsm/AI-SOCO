lli modexp(lli a,lli n)
{
    lli r=1;
    while(n){
        if(n&1)
            r=(r*a)%mod;
        a=(a*a)%mod;
        n>>=1;
    }
    return r;
}


void solve()
{

    lli n, l;
    cin>>n>>l;
    in(c, n);
    rep(i, n-1)
    {
        c[i + 1] =  min(c[i + 1], 2 * c[i]);
    }
    lli tot, ans = 5e18, temp = 0;
    fd(i, n-1, 0)
    {
        tot  = l / (1<<i);
        temp += c[i] * tot;
        l -= (tot<<i);
        if(l > 0)
            ans = min(ans, temp + c[i]);
        else
            ans = min(ans, temp);
    }
    cout<<ans;
    return ;
}



int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);

    lli t;
//    cin>>t;
    t=1;
    while(t--)
    {
        solve();
    }
    return 0;
}
