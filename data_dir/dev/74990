#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define all(x) x.begin(),x.end()

int const N = 200001;

int main(){
    #ifndef ONLINE_JUDGE
    freopen("read.txt","r",stdin);
    #endif
    ll n; 
    scanf("%lld", &n);
    if(n <= 1)puts("-1");
    else printf("%lld %lld %lld\n", n, n+1, (n) * (n+1));
} 