#include <bits/stdc++.h>
using namespace std;
long long  i,j,n,c[223456],d[234567],b[222265],a[456123],e[345678],l,r,s,t,tt,k,x, y,z,m;
string p,q,du,qq;
map <string, long long> u,w[123456];
int main() {
    cin>>tt;
    while (tt--){
        cin >>n>>m;
        for (i = 0; i < n; i ++){
            for (j = 0; j <m; j ++){
                if (i==0&&j==1&&n*m%2==0){
                    cout << 'B';
                    continue;
                }
                if((i+j)%2==0)
                    cout << 'B';
                else cout <<'W';
            }
            cout <<endl;
        }
    }
    return 0;   
}
