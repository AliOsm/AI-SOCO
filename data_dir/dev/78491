//ya_hossein
#include<bits/stdc++.h>
using namespace std;
int main()
{
	int n;
	cin >> n;
	int x = 1, y = 2, z = 3 ,s;
	for(int i = 0; i < n; i++)
	{
		cin >> s;
		if(s != x && s != y)
		{
			cout << "NO";
			return 0;
		}
		else if(s == x)
		{
			swap(z, y);
		}
		else
		swap(z, x);
	}
	cout << "YES";
}