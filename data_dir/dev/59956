#include<bits/stdc++.h>
#define ll long long
#define ld long double
#define PB push_back
#define MP make_pair
#define INF 1000000000000000007
#define inf 1000000007
#define y1 dasdsvcvd
using namespace std;
int n,k;
int h[1005][1005],cnt[1005];
int main()
{
  ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0);
  cin>>n>>k;
  if(n*k>(n*(n-1))/2)
  {
      cout<<-1;
      return 0;
  }
  cout<<n*k<<"\n";
  for(int i=1;i<=n;i++)
  { int x=i+1;
      for(int j=0;j<k;j++)
      {
          x%=n;
          if(x==0)
            x=n;
          cout<<i<<" "<<x++<<"\n";

      }
  }

return 0;
}
