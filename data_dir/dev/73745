#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <cstdio>
#include <map>
#include <queue>
#include <cstring>
#include <cstdlib>
#include <set>
#include <cassert>
#include <deque>
using namespace std;
#define INF 2001001001
#define MOD 1000000007
#define endl '\n'
typedef long long ll;

int N,arr[2001];

int main()
{
  //ios_base::sync_with_stdio(0);cin.tie(0);
  cin>>N;
  for (int i=1;i<=N;i++){
    cin>>arr[i];
    arr[i]+=100000;
  }
  cout<<N+1<<endl;
  cout<<"1 "<<N<<" 100000"<<endl;
  for (int i=1;i<=N;i++)
    cout<<"2 "<<i<<' '<<arr[i]-i<<endl;
  return 0;
}
