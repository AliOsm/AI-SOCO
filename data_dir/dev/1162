const int N = 3e5 + 123;                                          
const int PRI = 555557;
const int pri = 997;

int tests = 1;
ll n;
int q;
ll a[N];

inline void Solve () {
	//easy (c) Dalen
	cin >> n >> q;
	for (int i = 1; i <= q; i ++) {
		cin >> a[i];
		while(a[i] % 2 == 0) {
    		a[i] += n - a[i] / 2;
    	}             
    	cout << (a[i] + 1) / 2 << '\n';
	}
}

int main () {
	SpeedForce;
