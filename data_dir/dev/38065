#include<bits/stdc++.h>
using namespace std;

string s;
int n;

int main()
{
    cin>>n>>s;
        
    if(s.length()%2==0)
    {
        cout<<s[0]<<s[1];
        for(int i=2;i<s.length();i+=2)
            cout<<"-"<<s[i]<<s[i+1];
    }
    
    else
    {
        cout<<s[0]<<s[1]<<s[2];
        for(int i=3;i<s.length();i+=2)
            cout<<"-"<<s[i]<<s[i+1];
    }
}