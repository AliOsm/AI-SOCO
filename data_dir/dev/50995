int arr[105];

int main(){

    int n;
    scanf("%d", &n);

    for(int i=1; i<=n; i++)scanf("%d", &arr[i]);

    if(n%2 && arr[1]%2 && arr[n]%2)printf("Yes\n");
    else printf("No\n");


}
