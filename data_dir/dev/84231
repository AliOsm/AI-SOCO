#include <bits/stdc++.h>
using namespace std;
#define pb push_back
#define mp make_pair
#define mod 1000000007
#define pi 3.1415926535897932384626
#define LMAX 9223372036854775807
#define ll long long
#define fi first
#define sec second
#define pii pair<int, int>
int n, m, k, x, y, sum, ans, a[105];
int main () {
	scanf("%d %d", &n, &m);
	for (int i=0; i<n; i++) scanf("%d", &a[i]);
	sort(a, a+n);
	for (int i=0; i<m; i++) if (a[i]<0) ans-=a[i];
	cout<<ans;
	return 0;
}