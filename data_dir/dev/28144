# include <bits/stdc++.h>
# define ll long long  
using namespace std;
const ll N = 3e5 + 10, M = 1e4 + 10 , mod = 1e9 + 7, INF = 1e9 + 100; 
int main(){
	ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	int q;
	cin >> q;
	while(q --){
		ll a , b;
		cin >> a >> b;
		if(a < b) swap(a , b);
		if(a > 2 * b){
			cout << "No\n";
			continue;
		}
		if((a + b) % 3 == 0){
			cout << "Yes\n";
		} else{
			cout << "No\n";
		}
	}
}