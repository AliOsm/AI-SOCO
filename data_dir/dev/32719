//besmellah
#include <bits/stdc++.h>
using namespace std;

//#pragma GCC optimize("O3,Ofast,no-stack-protector,unroll-loops,fast-math")

#define int long long
typedef pair <int, int> pii;

const int maxn = 3e5, mod = 1e9 + 7, lg = 20;
int a[maxn];

int32_t main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	int t;
	cin >> t;
	while (t--) {
		int x, y, a, b;
		cin >> x >> y >> a >> b;
		y -= x;
		a += b;
		if (y % a) {
			cout << "-1\n";
		}
		else
			cout << y / a << '\n';
	}
}
