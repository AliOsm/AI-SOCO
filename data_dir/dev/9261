using namespace std;

char s[1005];
int n;

int main() {

	//freopen("input.txt","r",stdin);

	scanf("%d",&n);

	scanf("%s",s+1);

	for(int i=1;i<n;i++) {

		if(s[i]!=s[i+1]) {

			printf("YES\n%c%c",s[i],s[i+1]);

			return 0;

		}

	}

	printf("NO");
 
}