const int base = 2187;
const double eps = 1e-9;
const int N = 300'000;
const int LOGN = 19;

int n, m, k;

void solve(int) {
  string s;
  cin >> n;
  int64 a = 1, b = 1;
  vector<int64> ans;
  for (;;) {
    if (a + b >= n - b) {
      ans.push_back(n - a - b);
      break;
    }
    int64 old_b = b;
    b = min((n - a) / 2, b * 2);
    ans.push_back(b - old_b);
    a += b;
  }
  cout << ans.size() << '\n';
  for (int64 x : ans) {
    cout << x << ' ';
  }
  cout << '\n';
}

void precalc() {
}

int main() {
  ios::sync_with_stdio(0);
  cin.tie(0);
  precalc();
  int test = 1;
  cin >> test;
  //auto start = chrono::high_resolution_clock::now();
  for (int i = 1; i <= test; ++i) {
    solve(i);
  }
  //cerr << chrono::duration_cast<chrono::milliseconds>(chrono::high_resolution_clock::now() - start).count() << '\n';
  return 0;
}


