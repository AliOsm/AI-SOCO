#include <bits/stdc++.h>
using namespace std;
#define oo 1000000010
#define mod 1000000007
const int N = 150010;

int main(){
	int x , y , a, b , t;
	cin >> t;
	while(t--){
		cin >> x >> y >> a >> b;
		x = y - x;
		if(x % (a + b) == 0)
			cout << (x / (a + b)) << endl;
		else
			cout << -1 << endl;
	}
	return 0;
}