#include<bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    if (n > 36)
        cout << "-1\n";
    else {
        if (n % 2 == 1) {
            cout << "4";
            n--;
        }
        while(n > 0) {
            cout << "8";
            n -= 2;
        }
        cout << endl;
    }
    return 0;
}
