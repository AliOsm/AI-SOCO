#include <bits/stdc++.h>
using namespace std;

int n, ans = int(2e9);
vector<char> used;
vector<vector<pair<int, int> > > g;

int main (int argc, char *argv[])
{
	int m, k;
	scanf("%d%d%d", &n, &m, &k);
	g.resize(n);
	used.resize(n, false);
	while(m--) {
		int from, to, dist;
		scanf("%d%d%d", &from, &to, &dist);
		from--; to--;
		g[from].push_back(make_pair(to, dist));
		g[to].push_back(make_pair(from, dist));
	}
	while(k--) {
		int a;
		scanf("%d", &a);
		a--;
		used[a] = true;
	}
	for(int i = 0; i < n; ++i) {
		if(used[i]) {
			for(int j = 0; j < g[i].size(); ++j) {
				int to = g[i][j].first,
					dist = g[i][j].second;
				if(!used[to]) {
					ans = min(ans, dist);
				}
			}
		}
	}
	if(ans == int(2e9)) {
		printf("-1");
	} else {
		printf("%d", ans);
	}

	return 0;
}

