#include<bits/stdc++.h>
#define ll long long
#define pb push_back
#define fr first
#define sc second
#define r return
#define TIME ios_base::sync_with_stdio( 0 );
using namespace std;

    const ll N = 1e4 + 1;
    const ll INF = 1e18 ;

ll n , m , l , k , x , y , z , cnt , ans , sum , mx , mn = INF ;
vector < ll > v ;
deque < ll > d ;
string s , t ;
map < ll , ll > mp ;

int main()
{

    TIME ;
    //freopen( "input.txt", "r" , stdin );
    //freopen( "output.txt", "w" , stdout );

    cin >> s;
    for ( int i = 0 ; i < s.size() ; i ++ ){
        if ( s[ i ] == 'a' )
            cnt ++ ;
        else
            ans ++ ;
    }
    if ( cnt > ans )
        r cout << cnt + ans , 0;
     while ( cnt <= ans ){
        ans -- ;
     }
     cout << cnt + ans ;

}



















