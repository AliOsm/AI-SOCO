#include <iostream>
#include <string>
#include <cstring>
#include <algorithm>
#include <cmath>
#include <set>
#include <map>
#include <vector>
#include <bitset>
#include <stdio.h>
#include <queue>

using namespace std;

int main()
{
    int n,k,x1,y1;
    double s;
    cin>>n>>k;
    int x,y;
    s=0;
    for (int i=1;i<=n;i++)
    {
        cin>>x>>y;
        if (i>1) s=s+sqrt(pow(x1-x,2)+pow(y1-y,2));
        x1=x; y1=y;
    }
    s=s*k/50.0;
    printf("%10.9f",s);

    return 0;
}
