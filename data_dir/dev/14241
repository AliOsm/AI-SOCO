#include <bits/stdc++.h>
#define fi first
#define se second
#define pb push_back

using namespace std;

int a, b, c, d;

int main(){
	ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	cin >> a >> b >> c >> d;
	if (a == c) {
		cout <<  2*(2 + abs(d-b)+1);
	}
	else if (b == d) {
		cout << 2*(abs(a-c)+1 + 2);
	}
	else cout << 2*(abs(a-c) + abs(b-d) + 2);
	cout << '\n';
	return 0;
}