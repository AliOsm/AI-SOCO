#include <bits/stdc++.h>
using namespace std;
#define ii pair<int, int>
#define fi first
#define se second
#define MAX 30000


int main()
{
	int n;
	cin >> n;
	for(int i = 0; i < n; i++)
	{
		for(int j = 0; j < n; j++)
			cout << (((i + j) & 1) ? 'B' : 'W');	
		puts("");
	}
	return 0;
}