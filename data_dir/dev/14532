    #include <bits/stdc++.h>
     
    using namespace std;
     
    long long a, b, c;
     
    int main()
    {
      ios_base::sync_with_stdio(false);
        cin.tie(0);
      cin >> a >> b >> c;
      cout << max(2 * min(a, b) + 2 * c + (a > b), 1ll * (b > a) * (min(a, b) * 2 + 1 + 2 * c));
      return 0;
    }