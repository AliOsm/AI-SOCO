#include <string>
#include <vector>
#define SZ(x) ((int)(x).size())
#define FOR(it, c) for(__typeof((c).begin()) it = (c).begin(); it != (c).end(); ++it)
using namespace std;
typedef long long LL;

int main(void) {
  double d, L, a, b;
  cin >> d >> L >> a >> b;
  printf("%.9f\n", (L-d)/(a+b));
  return 0;
}
