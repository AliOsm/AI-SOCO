#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
template <class T> int size(const T &x) { return x.size(); }
#define rep(i,a,b) for(int i = (a); i < (b); i++)
#define iter(it,c) for(auto it = (c).begin(); it != (c).end();++it)
#define pb push_back
#define fs first
#define sc second
typedef pair<int,int> ii;
typedef vector<int> vi;
typedef vector<ii> vii;

const int INF = ~(1<<31);
const double pi = acos(-1);
const double EPS = 1e-9;

int main() {
    cin.sync_with_stdio(false);
	int n;
	cin >> n;
	if(n == 1){
		cout << 1 << endl;
	   	cout << 1 << endl;
	}
	else if(n == 2) {
		cout << 1 << endl;
		cout << "1" << endl;
	}
	else if(n == 3) {
		cout << 2 << endl;
		cout << "1 3" << endl;
	}
	else if(n == 4) {
		cout << 4 << endl;
		cout << "3 1 4 2" << endl;
	}
	else {

		cout << n << endl;
		rep(i,1,n+1) if(i%2 == 1) cout << i << " ";
		rep(i,1,n+1) if(i%2 == 0) cout << i << " "; 
		cout << endl;
	}
    return 0;
}


