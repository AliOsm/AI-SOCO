//ll bigmod(ll b, ll p, ll md){if(p==0) return 1;if(p%2==1){ return ((b%md)*bigmod(b,p-1,md))%md;} else {ll y=bigmod(b,p/2,md);return (y*y)%md;}}
#define N 3002
ll n;
ll dp[N][N];
bool vis[N][N];
vector<pi>arr(N);

ll solve(ll pos, ll pre){

   if(pos==n) return 0;
   if(vis[pos][pre]) return dp[pos][pre];
   vis[pos][pre]=true;

   ll ans=arr[pos].second+solve(pos+1,pos); ///pin up

   ans=min(ans,arr[pos].first-arr[pre].first+solve(pos+1,pre)); /// allow rolling left

   return dp[pos][pre]=ans;
}


int main(){

   cin>>n;
   for(ll i=0;i<n;i++){
         cin>>arr[i].first>>arr[i].second;
   }

   sort(arr.begin(),arr.begin()+n);

   ll ans=arr[0].second+solve(1,0);
   cout<<ans<<endl;



  return 0;
}

