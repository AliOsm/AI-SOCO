#include <bits/stdc++.h>
using namespace std;

const int MAXN = 505;

int main()
{
    int k, a, b;

    // freopen("D:\\1.in", "r", stdin);
    // freopen("D:\\1.out", "w", stdout);

    cin >> k >> a >> b;
    if((a >= k || b >= k) && (a % k <= b / k * (k - 1)) && (b % k <= a / k * (k - 1)))
        cout << a / k + b / k << endl;
    else
        cout << -1 << endl;

    return 0;
}
