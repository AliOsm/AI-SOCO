#include<iostream>
#include<set>
#include<cmath>
using namespace std;
int main()
{
	int n;
	cin>>n;
	string s;
	cin>>s;
	int ed,null;
	ed=0;
	null=0;
	for(int i=0;i<n;i++)
	{
		if(s[i]=='1')
		ed++;
		else
		null++;
	}
	if(null==ed)
	{
		cout<<2<<endl;
		cout<<s[0]<<" ";
		for(int i=1;i<n;i++)
		cout<<s[i];
		
	}
	else
	cout<<1<<endl<<s;
}
