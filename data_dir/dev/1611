#include <bits/stdc++.h>
using namespace std;

int main (int argc, char *argv[])
{
	int n;
	int ans = 0, police = 0;
	scanf("%d", &n);
	for(int i = 0; i < n; ++i) {
		int a;
		scanf("%d", &a);
		if(a == -1) {
			if(police) {
				police--;
			} else {
				ans++;
			}
		} else {
			police += a;
		}
	}
	printf("%d", ans);
	
	return 0;
}

