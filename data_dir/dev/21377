int main()
{
//    ios::sync_with_stdio(false);
//    cin.tie(0);




    ll k,d,t;
    cin>>k>>d>>t;
    t=t*2;
    ll  T=(k/d+(k%d!=0))*d;
    //show(T)
    double  T_time=2*k+(T-k);
    //show(T_time)
    ll ans=t/T_time;
    //show(ans)
    ll  sum=ans*T;
    //cout<<sum<<endl;
    ll temp=ans*T_time;
    //show(temp);
    ll res=t-temp;
    //show(res)
    if(res==0)  {cout<<sum<<endl;return 0;}
    if(res<=2*k) { double tot=sum+(double)res/2;printf("%.8f",tot);}
    else
    {
        res-=2*k;
        sum+=k;
//        show(sum);
//        show(res)
        sum=sum+(ll)res;
        cout<<sum<<endl;



    }
















}
