#include<bits/stdc++.h>
#define ll long long
#define ull unsigned long long
#define ff first
#define ss second
#define pb push_back
#define mk make_pair
#define ld long double
#define y1 asdfghjkl
#define ufo ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0)
using namespace std;

mt19937_64 mt_rnd_64(chrono::steady_clock::now().time_since_epoch().count());
long long rnd(long long l, long long r){
    return (mt_rnd_64() % (r-l+1)) + l;
}

const int N = 1e5 + 5;
const int MOD = 1e9 + 7;

ll n,m,ans,x,y,pr,z;

main()
{
    cin>>n>>m;
    x = 1;
    y = 1;
    pr = 1;
    for(int i = 2;i <= n;i++){
        z = x;
        x = (x + pr) % MOD;
        pr = z;
    }
    pr = 1;
    for(int i = 2;i <= m;i++){
        z = y;
        y = (y + pr) % MOD;
        pr = z;
    }
    x = x + y - 1;
    x %= MOD;
    x = (x * 2) % MOD;
    cout<<x;
}
