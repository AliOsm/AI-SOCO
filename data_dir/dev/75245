#include<bits/stdc++.h>
#define fin freopen( "input.txt", "r" , stdin )
#define fout freopen( "output.txt", "w" , stdout )
#define ll long long
#define T ios_base::sync_with_stdio(0) ;
#define sz size()
#define r return
#define pb push_back
#define fr first
#define sc second
using namespace std;

const ll N = 1e6 + 1;
const ll INF = 1e18;

ll n , m , l , cnt , ans , k , x , y , mn = INF  , mx  ;
string s , t;
vector < ll > v , d;
map < ll , ll > mp;
pair < ll , ll > p [ N ];
set < ll > st;
bool b , boo;
int main()
{
//fin ;
//fout ;
T

    cin >> n ;
    for ( ll i = 0 ; i < n ; i ++ ){
        cin >> l , v.pb ( l );
        if ( l == 1 )
            cnt ++;
        if ( l == 2 )
            ans ++ ;
    }
    if ( ans == n )
        r cout << 0 , 0;
    if ( cnt == n )
        r cout << cnt / 3 , 0;

    x = min ( cnt , ans );
    if ( cnt - 3 < ans )
    {
       r  cout << x , 0;
    }
    y = (cnt - ans) / 3;
    cout << x + y ;




}











