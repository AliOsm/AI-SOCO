#include <bits/stdc++.h>

#define F first
#define S second
#define _sz(x) (int)x.size()
#define pb push_back

#define error(x) cout << #x << " = " << x << endl

using namespace std ;
using ll = long long ;
using ld = long double ;
using pii = pair <int , int> ;

ll q , x , y ;

int main(){
	ios::sync_with_stdio(false) , cin.tie(0) , cout.tie(0) ;

	cin >> q ;

	while (q --) {
		cin >> x >> y ;

		if (x - y <= 1) cout << "NO\n" ;
		else cout << "YES\n" ;
	}

}
