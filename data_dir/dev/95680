#include <bits/stdc++.h>//Nurstan
using namespace std;

inline void boost(){
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);
}

int main(){
	boost();
	freopen("input.txt", "r", stdin);
	freopen("output.txt", "w", stdout);
	int n;
	cin >> n;
	string a;
	cin >> a;
	for(int i = 0; i < n / 2; i ++){
		if(a[i] == 'R' && a[i + n / 2] == 'L'){
			cout << i + n / 2 + 1 << " " << i + 1 << endl;
		}
		else{
			cout << i + 1 << " " << i + (n / 2) + 1 << endl;
		}
	}
}	

