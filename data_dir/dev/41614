#include <iostream>
#include <cstdlib>
#include <ctime>
#define _CRT_SECURE_NO_WARNINGS

#include <cmath>
#include <cstring>
#include <string>
#include <vector>
#include <stdio.h>
#include <climits>
#include <Windows.h>
#include <iterator>
#include <algorithm>

using namespace std;

typedef unsigned long long ull;
typedef long long ll;
#define all(a) a.begin(),a.end()

void solve()
{
    int n;
    cin >> n;

    int x, y, z, x1(0), y1(0), z1(0);

    for (int i(0); i < n; i++)
    {
        cin >> x >> y >> z;
        x1 += x; y1 += y; z1 += z;
    }

    cout << ((!x1 && !y1 && !z1) ? "YES" : "NO");
}

int main()
{
    //SetConsoleCP(1251);
    //SetConsoleOutputCP(1251);

    solve();

    //cout << "\n\n"; system("pause");
    return 0;
}