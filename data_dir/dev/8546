#include <iostream>
#include <cstdio>
#include <iomanip>

using namespace std;

int main()
{
    int s,a,b,c;
    cin>>s>>a>>b>>c;
    if(a+b+c==0){
        printf("0 0 0\n");
        return 0;
    }
    cout<<fixed<<setprecision(15);
    cout<<(double)(s*a)/(a+b+c)<<" "<<(double)(s*b)/(a+b+c)<<" "<<(double)(s*c)/(a+b+c)<<endl;
    return 0;
}
