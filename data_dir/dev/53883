#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef long double ld;
#define MOD 1000000007
#define EPS 1e-6
#define PI 3.14159265

int main()
{
    ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
    ll arr[3];
    for(int i = 0; i < 3; i++)
    {
        cin >> arr[i];
    }
    sort(arr, arr + 3);
    cout << min((arr[0] + arr[1] + arr[2]) / 3, arr[0] + arr[1]);
    return 0;
}
