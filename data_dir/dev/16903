#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define ss second
#define ff first
#define pb push_back
#define mp make_pair

int main(){
   int n;
   cin>>n;
   int a=0;
   for(int i=0;i<n;i++)
   {
       for(int j=0;j<n;j++)
       {
           if((i+j)%2==0)
            cout<<'W';
            else
                cout<<'B';
       }
       cout<<endl;
       a++;
       a%=4;
   }
   return 0;
}
// 6 7 0
// 5 5 1
// 4 3 2
// 2 2 3
// 1 0 4
