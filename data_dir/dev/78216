#include <bits/stdc++.h>
using namespace std;
#define forn(i, n) for(int i = 0; i < (int) (n); i++)
#define mod(x, y) ((((x) % y) + y) % y)
typedef long long tint;

tint n, quitar = 1, k = 1;

int main(){
  scanf("%I64d", &n);
  while(n >= quitar){
    n -= quitar;
    quitar++;
  }
  if(!n){
    printf("%I64d\n", quitar-1);
  }
  else {
    printf("%I64d\n", n);
  }
  return 0;
}
