#include <bits/stdc++.h>
using namespace std;
int n, m;
char s[30], t[30];
int main () {
	scanf("%d %d %s %s", &n, &m, s, t);
	if (s[0]=='>'&&t[m-1]=='v'&&s[n-1]=='<'&&t[0]=='^') printf("YES\n");
	else if (s[0]=='<'&&t[m-1]=='^'&&s[n-1]=='>'&&t[0]=='v') printf("YES\n");
	else printf("NO\n");
	return 0;
}