#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
#define what_is(x) cerr << #x << " is " << x << endl;
#define pii pair < int , int >
#define fi first
#define se second
using namespace std;
typedef long long ll;

int N, T, K;
string s, ans;

void solve() {
    cin >> N >> s;
    ans = s; K = 1;
    for( int k = 2; k <= N; k ++ ) {
        string tmp = s.substr( k - 1 );
        string tmp2 = s.substr( 0 , N - tmp.size() );
        if( tmp.size() & 1 )
            reverse( tmp2.begin() , tmp2.end() );
        tmp += tmp2;
        if( tmp < ans ) {
            ans = tmp;
            K = k;
        }
    }
    cout << ans << "\n";
    cout << K << "\n";
    
}

int main()
{
    // optimiza_io
    cin >> T;
    while( T -- )  
        solve();
        
    return 0;
}

