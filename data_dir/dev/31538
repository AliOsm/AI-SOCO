#include <iostream>
#include <algorithm>
#include <set>
#include <vector>
#include <map>
#include <queue>
#include <string>
#include <cstring>
#include <cstdio>
// Kobe is the GOAT
// DON'T DIVIDE
// Greedy, Prefix, Sets/Bsearch, Dfs/bfs, DP
// Stack, Bitmask, Dsu 
using namespace std;

int t;

int main()
{
	ios::sync_with_stdio(0);
	cin >> t;

	for(int i = 0; i < t; i++)
	{
		int x;
		cin >> x;
		if(x % 2 == 0)
			cout << x / 2 << "\n";
		else 
			cout << (x - 3) / 2 + 1 << "\n";
	}

	return 0;
}
