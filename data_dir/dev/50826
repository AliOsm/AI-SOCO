#include<bits/stdc++.h>
using namespace std;
typedef long long unsigned llu;
#define mod(x) x%(1000003)
int main()
{

    llu n,ans=1;
    cin>>n;
    if(!n){
        cout<<1;return 0;
    }
    n--;
    for(int i=0;i<n;i++){
        ans*=3;
        ans=mod(ans);
    }
    cout<<ans;
    return 0;
}
