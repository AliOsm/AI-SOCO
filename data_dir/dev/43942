#include <bits/stdc++.h>

using namespace std;
const int N=2e5+5;
int a[N];
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        string ans;
        while(n>1)
        {
            n-=2;
            ans+='1';
        }
        if(n==1)ans[0]='7';
        cout<<ans<<'\n';
    }
    return 0;
}
