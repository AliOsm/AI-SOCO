#include <bits/stdc++.h>
using namespace std;
int arr[100005];
void go() {
    int n, i;
    cin >> n;
    for(i = 0; i < n; i++)
        cin >> arr[i];
    sort(arr, arr + n);
    cout << min(n - 2, arr[n - 2] - 1) << "\n"; 
    return;
}
int main() {
    int t;
    cin >> t;
    while(t--)
        go();
    return 0;
}