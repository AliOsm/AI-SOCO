#include <iostream>
using namespace std;
#define ll long long int 
int main() {
	 ll n,b,d;
	 cin>>n>>b>>d;
	 ll a[n],s=0,c=0;
	 for(int i=0;i<n;i++)
	 {
	     cin>>a[i];
	 }
	 for(int i=0;i<n;i++)
	 {
	     if(a[i]<=b)
	       {
	           s=s+a[i];
	       }
	       if(s>d)
	       {
	           c++;
	           s=0;
	       }
	 }
	 cout<<c;
	return 0;
}
