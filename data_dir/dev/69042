#include<iostream>
#include<algorithm>
#include<string>
#include<stack>
#include<map>
#include<vector>
#include<unordered_map>
using namespace std;
void solve(){
	string s;
	cin >> s;
	if (s.size() <= 10)cout << s<<endl;
	else cout << s[0] << s.size() - 2 << s.back() << endl;
}
int main(){
	int n;
	cin >> n;
	while (n--){
		solve();
	}

//	system("pause");
	return 0;
}