const long double eps=1e-20;
const long double pi=acos(-1.0);
const long long inf=1000*1000*1000*1000*1000*1000;
const long long base=1000*1000*1000+7;

using namespace std;

int ans,n;
string s;

int main(){
	cin>>n;
	cin>>s;
	foru(i,s.size()) ans+=(i && i%n==0 && s[i-1]==s[i-2] && s[i-2]==s[i-3]);
	cout<<ans;
	return 0;
}
		