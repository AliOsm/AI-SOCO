#include <bits/stdc++.h>
#define f first
#define s second
#define pb push_back
typedef long long ll;
typedef long double ld;
using namespace std;


int main() {
  int n, k;
  cin >> n >> k;
  int v = (n - k) / 2;
  string s(v, '1');
  s += '0';
  while (s.size() < n) {
    s += s;
  }
  s.resize(n);
  cout << s << endl;
  return 0;
}