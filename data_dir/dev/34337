#define fastio  ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
ll MOD(ll a, ll b)
{
    if(a>b)
        return a-b;
    else
        return b-a;
}
ll max3(ll a,ll b, ll c)
{
    return max(c,max(a,b));
}
ll min3(ll a,ll b,ll c)
{
    return min(a,min(b,c));
}
ll power(ll x,ll y )
{
    ll res = 1;
    while (y > 0)
    {
        if (y & 1)
            res = (res*x)%mod;
        y = y>>1;
        x = (x*x)%mod;
    }
    return res;
}
ll logg(ll a)
{
    ll x=0;
    while(a>1)
    {
        x++;
        a/=2;
    }
    return x;
}
ll gcd(ll a,ll  b)
{
    if (a == 0)
        return b;
    return gcd(b % a, a);
}
int main()
{
    fastio;
    ll n;
    cin>>n;
    vector<ll> a(n);
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    ll g=a[0];
    for(int i=1;i<n;i++)
    {
        g=gcd(g,a[i]);
    }
    if(g!=1)
    {
        cout<<-1;
    }
    else
    {
        ll num=0;
        for(int i=0;i<n;i++)
        {
            if(a[i]==1)
            {
                num++;
            }
        }
        ll ans1=n-num;
        if(num>0)
        {
            cout<<ans1;return 0;
        }
        ll size=n;
        for(int i=0;i<n-1;i++)
        {
            ll temp=a[i];
            for(int j=i+1;j<n;j++)
            {
                if(gcd(temp,a[j])==1)
                {
                    size=min3(size,size,j-i+1);
                }
                temp=gcd(temp,a[j]);
            }
        }
        cout<<n+size-2;
    }
          
}
