// Author: πα

#include <bits/stdc++.h>
using namespace std;
 
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl "\n"
#define long long long

int main()
{
    IOS;
    int n, i, mx = 0, mn = 1123456789, d;
    cin >> n;
    for(i = 0; i < n; i++)
    {
        cin >> d;
        mx = max(mx, d);
        mn = min(mn, d);
    }
    cout << mx - mn - n + 1;
    return 0;
}
