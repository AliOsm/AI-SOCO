#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int y, b, r, ans;

int main()
{
    optimiza_io
    cin >> y >> b >> r;
    for( int Y = 1; Y <= y; Y ++ )
    {
        int B = Y + 1;
        int R = B + 1;
        if( B > b or R > r )
            continue;
        ans = max( ans , Y + R + B );   
    }
    cout << ans;
    return 0;
}

