#include <iostream>
#include <cstdlib>
#include <string>
#include <algorithm>

const int N = 100000;

using namespace std;
int n, a, b, c, ans;

int main()
{
    ios_base::sync_with_stdio(false);
    cin >> n;
    for(int i = 0; i < n; i++)
    {
        cin >> a >> b >> c;
        ans += (a + b + c > 1) ? 1 : 0;
    }
    cout << ans;
	return 0;
}
