#include<cstdio>
#include<cstdlib>
#include<cstring>
#include<cmath>
#include<iostream>
#include<algorithm>
#include<vector>
#include<queue>
#include<stack>
#include<list>
#include<set>
#include<map>
#include<string>
#include<utility>
using namespace std;
#define REP(i,FN) for(int i=0;i<FN;i++)
#define FOR(i,ST,FN) for(int i=ST;i<=FN;i++)
#define FORD(i,FN,ST) for(int i=FN;i>=ST;i--)
#define FORX(i,c) for(typeof(c.begin())i=c.begin();i!=c.end();i++)
#define pause system("pause")
#define S scanf
#define P printf
#define X first
#define Y second
#define pb push_back
#define PII pair<int,int>
#define mp make_pair
#define sz size()
#define eps 1e-8

const int MOD(1000000007);
const int INF((1<<30)-1);
const int MAXN(100005);

int a[MAXN], b[MAXN];

int main(){

    int n,m;
    S("%d%d",&n,&m);

    double suma = 0, sumb = 0;

    REP(i,n)
    {
        S("%d",&a[i]);
        suma += a[i];
    }

    REP(i,m)
    {
        S("%d",&b[i]);
        sumb += b[i];
    }

    sort(a,a+n);
    sort(b,b+m);

    double ans = suma+sumb-b[m-1], t = b[m-1];

    FORD(i,m-2,0)
    {
        t += b[i];
        ans = min(ans, suma*(m-i)+sumb-t);
    }

    t = 0;

    FORD(i,n-1,0)
    {
        t += a[i];
        ans = min(ans, sumb*(n-i)+suma-t);
    }

    P("%.0lf",ans);
}
