#include <iostream>
#include<cstdio>
#include<cmath>
#include<algorithm>
#include<map>
#include<set>
#include<vector>
#include<bitset>
#include<iomanip>

using namespace std;

#define ll long long

int main()
{
//freopen("a.in","r",stdin);
    ll q,n,a,b;
    cin>>q;
    while(q--)
    {
        cin>>n>>a>>b;
        if(b>=2*a)
        {
            cout<<n*a<<endl;
        }
        else
        {
            cout<<(n/2)*b+(n%2)*a<<endl;
        }
    }
}
