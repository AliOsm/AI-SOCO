#include <string>
using namespace std;
long long i,j,k,l,ll,m,n,a[523545],b[115555],c[144222],d[123456],e,f[234567],s,t;
vector <long long> p,qq,r,rr;
bool q[1434569];
map <long long, long long>x,y;
int main() {
    cin >> n;
    if (n >= 6){
        for (i = 2; i < n-1; i ++)
            printf ("1 %lld\n",i);
        cout << 2<<' '<<n<<endl;
        cout << 2<<' '<<n-1<<endl;
    }
    else cout << -1<<endl;
    for (i = 2; i <=n; i ++)
        printf ("1 %lld\n",i);
    
    return 0;
}