#include<bits/stdc++.h>
#define pb push_back
using namespace std;
vector<int>v;
long long int a,b,c;
string mx;
int main()
{
    ios_base::sync_with_stdio(NULL);
   cin >> a >> b >> c;
       if( a==b and c==0 ){
       cout<<"YES";
       return 0;}
       else if( c==0 and b!=a ){
        cout<<"NO";
        return 0;
        }
    if( (a-b)%c==0 and (b-a)/c>=0 )cout<<"YES";
   else cout<<"NO";
}
