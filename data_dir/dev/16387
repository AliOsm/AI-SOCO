#include<bits/stdc++.h>
using namespace std;

#define int long long int
#define fast ios::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define F first
#define S second
#define PB emplace_back
#define endl "\n"
typedef long long ll;
typedef long double ld;
const int mod = 1000000007;
const int N = 1005000;

int power(int x,int y,int m=mod){int res=1;x=x%m;while(y>0){if(y&1)res=(res*x)%m;y=y>>1;x=(x*x)%m;}return res;}
int ncr(int n,int r){if(n<r)return 0;int p=1,k=1;if(n-r<r)r=n-r;if(r!=0){while(r){p*=n;k*=r;int g=__gcd(p, k);p/=g;k/=g;n--;r--;}}else p=1;return p;}
//cout<<fixed<<setprecision(8)<<x<<endl;

int isprime(int n)
{
    for(int i=2;i*i<=n;i++)
    {
        if(n%i==0)
            return 0;
    }
    return 1;
}

signed main()
{
    fast;
    //int t=1; cin>>t; while(t--)
    {
        int n;
        cin>>n;

        if(isprime(n))
            return cout<<"1\n"<<n,0;
    

        int nc=n;
        while(n-nc==1 || !isprime(nc))
            nc--;
    
        n-=nc;
        if(n==2)
           return cout<<"2\n"<<"2 "<<nc,0;
    
        for(int i=2;i<n;i++)
        {
            if(isprime(i) && isprime(n-i))
            {
                cout<<"3\n";
                cout<<nc<<" "<<i<<" "<<n-i<<endl;
                return 0;
            }
        }
        
    }
    cerr << "Time elapsed : " << 1.0 * clock() / CLOCKS_PER_SEC << " sec \n";
    return 0;
}


