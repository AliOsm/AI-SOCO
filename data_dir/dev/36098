#include <bits/stdc++.h>

using namespace std;

#define MOD 1000000007
#define N 100005
#define ll long long 
#define ld long double
#define pb push_back
#define ff first
#define ss second

int main(){
	ios::sync_with_stdio(false); cin.tie(0); cout.tie(0);
	//freopen("input.txt", "r", stdin);
	//freopen("output.txt", "w", stdout);
	int n, i, j, times;
	string s;
	cin>>n>>s;
	i = 0; times = 1;
	while(i < n){
		j = times;
		cout<<s[i];
		while(j--){
			i++;
		}
		times++;
	}
	return 0;
}