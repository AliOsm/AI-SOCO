#define ll long long
#define ss second
#define ff first
using namespace std;
ll n,m,x=9999999999,y,q,z,a[400100];
string s,f[100100];
int main(){
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>a[i];
        if(a[i]-i<=0){
            m=0;
        }
        else {
            m=(a[i]-i+n-1)/n;
        }
        if(m<x){
            x=m;
            y=i+1;
        }
    }
    cout<<y;
    return 0;
}
