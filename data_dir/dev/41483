#include <iostream>
using namespace std;

int N;

int main()
{
    cin >> N;

    if (N % 2 == 1)
    {
        cout << 1 + (N - 3)/2 << "\n";
        cout << "3";
        for (int i = 0; i < (N - 3)/2; i++)
            cout << " 2";
        cout << "\n";
    }
    else
    {
        cout << N/2 << "\n";
        for (int i = 0; i < N/2; i++)
            cout << "2 ";
        cout << "\n";
    }
     
    return 0;
}
