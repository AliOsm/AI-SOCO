#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;
int main(){
    ll n,sum=0;
    cin>>n;
    ll arr[n];
    for(ll i=0;i<n;i++){
        ll k;
        cin>>k;
        sum+=k;
    }
    for(ll i=0;i<n;i++)
    cin>>arr[i];
    sort(arr,arr+n);
    if(arr[n-1]+arr[n-2]>=sum)
    cout<<"YES";
    else
    cout<<"NO";
}