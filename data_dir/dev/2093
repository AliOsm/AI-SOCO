using namespace std;

const int MIN = 1e3 + 2;                                                                                                                                  
const int MXN = 2e6 + 3;
const int INF = 1e9 + 7;                                                                                                       
const int base = 1e9;
const ll LINF = 1e18 + 15;
const double EPS = 1e-9;                                                                                                                 

int n;
int a[MXN];
int pref[MXN];
int mn = INF;

int main(){
	ios_base::sync_with_stdio(0);
	cin.tie(0);             
	cout.tie(0);
    #ifdef Pissoir
		//freopen("input.txt", "r", stdin);                                                                                                              
		//freopen("output.txt", "w", stdout);                       
	#else                                                                                           
		//freopen("typing.in", "r", stdin);
  		//freopen("typing.out", "w", stdout);			
    #endif
    cin >> n;
    for (int i = 1; i <= n; ++i){
    	cin >> a[i];
    }
    for (int i = 1; i < n; ++i){
		mn = min(mn, max(a[i] - 1, 1000000 - a[i + 1]));    
    }
    mn = min(mn, a[n] - 1);
    mn = min(mn, 1000000 - a[1]);
    cout << mn;
	return 0;
}