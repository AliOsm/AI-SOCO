#include <bits/stdc++.h>
using namespace std;
#define int long long
int32_t main() {
    ios::sync_with_stdio(false);cin.tie(0);
    int t;
    cin>>t;
    while(t--) {
        int a,b,c;
        cin>>a>>b>>c;
        if(a>b) swap(a,b);
        if(b>c) swap(b,c);
        if(a>b) swap(a,b);
        if(c>=a+b) {
            cout<<a+b<<'\n';
        } else {
            cout<<(a+b+c)/2<<'\n';
        }
    }
    return 0;
}