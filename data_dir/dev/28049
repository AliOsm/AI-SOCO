#include <iostream>
#include <vector>
#include <string>
#include <cmath>
#include <algorithm>

using namespace std;

typedef long long ll;
typedef vector<int> vi;
typedef vector<ll> vl;
typedef pair<int, int> ii;

int main() {
    int a, b;
    cin >> a >> b;
    
    string answer =  (a + b > 0 && abs(a - b) <= 1) ? "YES" : "NO" ;
    cout << answer << endl;
    
    return 0;
}

