#include <bits/stdc++.h>
using namespace std;
#define FOR(i,begin,end) for (ll i=begin;i<=end;i++)
#define rep(i,t) for (ll i=0;i<t;i++)
#define pb push_back
#define mp make_pair
typedef long long ll;
typedef long double ld;
typedef pair<int,int> pii;
int main()
{
    ios_base::sync_with_stdio(false);
    int n,d;
    cin>>d>>n;
    int res = 0;
    //d-a dafe bayad jolo bezanim ta beshe rooze avvale mahe bad
    rep(i,n-1)
    {
        int a;
        cin>>a;
        res+=(d-a);
    }
    cout<<res;
    return 0;
}