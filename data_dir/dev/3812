#include<bits/stdc++.h>
     
    #define ll long long
    #define ios ios_base::sync_with_stdio(false);cin.tie(NULL);
    #define sz size()
    #define pb push_back
    #define mp make_pair
    #define F first
    #define S second
    #define int ll
    #define all(s) s.begin(), s.end()
    #define file(s) freopen(s".in","r",stdin); freopen(s".out","w",stdout);
    using namespace std;
    int n;
    main() {
    	cin >> n;
    	if(n % 2 == 0){
    		cout << n / 2 << endl;
    		for(int i = 0;i < n / 2; i++)
    			cout << 2 << " ";
    	}
        else
        {
    		cout << n / 2 << endl;
    		for(int i = 0; i < n / 2 - 1; i++)
    			cout << 2 << " ";
    		cout << 3;
    	}
    	return 0;
    }