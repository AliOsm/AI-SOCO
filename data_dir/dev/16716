#include <iostream>

using namespace std;

string s;

int main()
{
    int n,a[200000],x;
    cin>>n>>x;
    if (n%6==1)
    {
        if (x==1) cout<<"0";
        else if (x==0) cout<<"1";
        else cout<<"2";
    }
    else if (n%6==2)
    {
        if (x==1) cout<<"2";
        else if (x==0) cout<<"1";
        else cout<<"0";
    }
    else if (n%6==3)
    {
        if (x==1) cout<<"1";
        else if (x==0) cout<<"2";
        else cout<<"0";
    }
    else if (n%6==4)
    {
        if (x==1) cout<<"0";
        else if (x==0) cout<<"2";
        else cout<<"1";
    }
    else if (n%6==5)
    {
        if (x==1) cout<<"2";
        else if (x==0) cout<<"0";
        else cout<<"1";
    }
    else
    {
        if (x==1) cout<<"1";
        else if (x==0) cout<<"0";
        else cout<<"2";
    }
    
    return 0;
}
