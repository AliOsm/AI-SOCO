#include <bits/stdc++.h>

#define endl '\n'
#define Mod 1000000007

using namespace std;

inline long long add(long long x, long long y) {
	return (x + Mod + Mod + y) % Mod;
}

int main() {
	ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	long long n;
	cin >> n;
	if(n%2 == 0) cout << n/2 - 1 << endl;
	else cout << n/2 << endl;
	return 0;
}