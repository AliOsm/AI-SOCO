#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define finish(x) return cout << x << endl, 0;

ll x, y, a, b = 1;

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(NULL);
    cout.tie(NULL);
    cin >> x >> y;
    if(y == 0) finish("No");
    a = y-1, b = y;
    if(!a && x) finish("No");
    if(a > x) finish("No");
    if((x-a)%2) finish("No");
    cout << "Yes" << endl;
    return 0;
}
