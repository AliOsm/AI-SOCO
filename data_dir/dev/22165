/*
long long C(int x,int y)
{
    if(x<y){
        return 0;
    }
    long long answer=1;
    int i;
    if(y>x-y)
    {
        y=x-y;
    }
    for(i=1;i<=y;i++)
    {
        answer*=(x+1-i);
        answer/=i;
    }
    return answer;
}
*/

int main(){

    int n,m,k;cin>>n>>m>>k;
    int data[5001]={0,};
    
    for(int i=1;i<=n;i++){
        cin>>data[i];
    }
    
    long long sum[5001]={0,};
    for(int i=1;i<=n;i++){
        sum[i]=sum[i-1]+data[i];
    }
    
    long long dp[5001][5001]={0,};
    
    for(int i=1;i<=k;i++){
        for(int j=1;j<=n;j++){
            if(i*m>j){
                dp[i][j]=0;
            }else{
                dp[i][j]=max(dp[i][j-1],dp[i-1][j-m]+sum[j]-sum[j-m]);
            }
        }
    }
    
    cout<<dp[k][n];
    
    
    
    return 0;
}








