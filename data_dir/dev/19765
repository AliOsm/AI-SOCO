#include<bits/stdc++.h>
using namespace std;
int main (){
    int n ;
    cin >> n ;
    int pos = 0 , neg = 0;
    for(int i = 0 ; i < n ; i++){
        int x;
        cin >> x;
        if (x > 0 )
            pos++;
        else if (x < 0)
            neg++;
    }
    if (pos >= (n + 1) / 2)
        cout << 1 ;
    else if (neg >= (n + 1) / 2)
        cout << -1;
    else
        cout << 0;

    return 0;
}
