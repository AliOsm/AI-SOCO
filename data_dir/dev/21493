#include <bits/stdc++.h>

using namespace std;


int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    int a, b, c, rez;
    cin >> a >> b >> c;
    rez = a * 2 + b * 2;
    rez = min(rez, a + b + c);
    rez = min(rez, a * 2 + c * 2);
    rez = min(rez, b * 2 + c * 2);
    cout << rez << '\n';
    return 0;
}
