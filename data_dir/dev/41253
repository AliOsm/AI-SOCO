#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define ld long double
#define oo 666666666

int main()
{
    ios::sync_with_stdio(0);
    ll n;
    cin>>n;
    ll ats = 0;
    for(ll d = 2; n>=d; d+=3)
        {
            n-=d;
            if(n%3==0)ats++;
        }

    cout<<ats<<"\n";
}
