#include <iostream>
#include <algorithm>
using namespace std;
int main() {

	int d1 = 0, d2 = 0, d3 = 0, a1 = 0, a2 = 0, a3 = 0, a4 = 0;

	cin >> d1 >> d2 >> d3;

	a1 = d1 + d2 + d3;

	a2 = d1 * 2 + d2 * 2;

	a3 = d1 * 2 + d3 * 2;

	a4 = d2 * 2 + d3 * 2;

	a1 = min(a1, a2);
	a2 = min(a3, a4);

	cout << min(a1, a2);

	return 0;
}