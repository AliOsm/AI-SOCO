#include <queue>
#include <ctime>
#define ll long long
#define ss second
#define ff first
using namespace std;
ll n,m,x,y,z;
int main(){
    cin>>n>>m;
    x=m-1;y=m;
    if(x!=0){
        if(z<x){
            y=x;z=x;
        }
    }
    x=m+1;
    if(x!=n+1){
        if(z<n-x+1){
            y=x;
            z=n-x+1;
        }
    }
    cout<<y;
    return 0;
}
