#include <bits/stdc++.h>
using namespace std;
#define oo 1000000010
#define mod 998244353
const int N = 200010;

int main(){
    int t , a , b , c;
    cin >> t;
    while(t--){
        cin >> a >> b >> c;
        int ans = (b + c - a + 2) / 2;
        ans = max(ans , 0);
        ans = (c - ans + 1);
        ans = max(ans , 0);
        cout << ans << endl;
    }
    return 0;
}