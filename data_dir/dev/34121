    ll t, s, x, cnt, l, r, m;
int main(){
    cin >> t >> s >> x;
    if (t != x && t + s > x){
        cout << "NO";
        rt 0;
    }
    if ((x - (t + s)) % s <= 1 || t == x) cout << "YES";
    else cout << "NO";
    rt 0;
}
