//besmellah
#include <bits/stdc++.h>
using namespace std;

vector <unsigned short> a, b;

int main(){
    unsigned short n, tmp;
    cin >> n;
    for (unsigned short i = 0; i < n; i++){
        cin >> tmp;
        if (tmp % 2 == 0)
            a.push_back(i);
        else
            b.push_back(i);
    }
    if (a.size() == 1)
        cout << a[0] + 1;
    else
        cout << b[0] + 1;
}