using namespace std;
#define ll long long
int main(){
    int n, k;
    cin >> n >> k;
    int c = 0;
    int x;
    for (int i = 0; i < n; i++){
        cin >> x;
        if (x + k <= 5)c++;
    }
    cout << c / 3 << "\n";
}