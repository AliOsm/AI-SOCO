using namespace std;

const int INF = 1e9 + 7;
const int MAXN = 1e6 + 7;
const double EPS = 1e-8;

int main() {
    #ifdef MY
        freopen("input.txt", "r", stdin);
        //freopen("output.txt", "w", stdout);
    #else
        //freopen(TASKNAME".in", "r", stdin);
        //freopen(TASKNAME".out", "w", stdout);
        ios_base::sync_with_stdio(false);
        cin.tie(0);
        cout.tie(0);
    #endif // MY
    int n;
    cin >> n;
    string s = "aeiouy";
    string res = "";
    bool fl = 0;
    for (int i = 0; i < n; i++) {
        bool fl1 = 0;
        char c;
        cin >> c;
        for (char c1 : s) {
            if (c1 == c) {
                fl1 = 1;
                break;
            }
        }
        if (fl1 && fl) {
            //nothing
        } else {
            res.push_back(c);
        }
        fl = fl1;
    }
    cout << res;
}
