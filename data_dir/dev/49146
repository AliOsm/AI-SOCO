#define pb push_back
#define int long long
using namespace std;

const int INF = 2e9;
const int MOD = 1e9 + 7;

void solve() {
	int t;
	cin >> t;
	for (int i = 0; i < t; i++) {
		int n, a, b;
		cin >> n >> a >> b;
		if (a * 2 <= b) cout << n * a << '\n';
		else cout << (n / 2 * b + (n % 2 ? a : 0)) << '\n';
	}
}

signed main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	cout.tie(nullptr);
	cout.precision(12);
	/*
	freopen("distance4.in", "r", stdin);
	freopen("distance4.out", "w", stdout);
	*/
	solve();
}