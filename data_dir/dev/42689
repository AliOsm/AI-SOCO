#include<bits/stdc++.h>
using namespace std;
#define ll  long long
#define endl '\n'
const ll mod = 1000000007;
const double PI = 3.141592653589793238463;
using namespace std;
int main()
{
    ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
    int q;
    cin>>q;
    while (q--){
       ll x,y;
       cin>>x>>y;
       ll ans=x/y*y;
       x%=y;
       if (x<=y/2)
        ans+=x;
       else
        ans+=(y/2);
       cout<<ans<<endl;
    }
    return 0;
}
