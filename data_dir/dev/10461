#include <bits/stdc++.h>
using namespace std;
long long x, n, m;
int main ()
{
    #ifndef ONLINE_JUDGE 
        freopen (".in", "r", stdin); 
    #endif 
    cin >> n >> m;
    cout << (n / m - 1) * (n / m) / 2 * (m - n % m) + ((n / m) * (n / m + 1)) / 2 * (n % m) << ' ' << (n - m) * (n - m + 1) / 2;
    return 0;
}