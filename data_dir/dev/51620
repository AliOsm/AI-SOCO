#include <bits/stdc++.h>
using namespace std;

int cnt[3];

int main() {

    int n, x;

    // freopen("D:\\1.in", "r", stdin);
    // freopen("D:\\1.out", "w", stdout);

    scanf("%d", &n);
    while(n --) scanf("%d", &x), cnt[x % 3] ++;
    printf("%d\n", cnt[0] / 2 + min(cnt[1], cnt[2]));

	return 0;
}
