#include <bits/stdc++.h>
#define ll long long
#define OO 2e18
#define oo 1e9
#define yalla ios::sync_with_stdio(0),cin.tie(0),cout.tie(0);
#define sz  100005
#define re return
#define mod  1000000007
#define pi acos(-1)
using namespace std;
ll n,m,k;
int main()
{yalla;
cin>>n>>m>>k; ll arr[n];
for(int i=0;i<n;i++)
    cin>>arr[i];
sort(arr,arr+n);
ll t=m/(k+1);
ll rim=m-t;
cout<<(t*arr[n-2])+(rim*arr[n-1])<<endl;
  return 0;
}
