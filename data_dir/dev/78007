#include <bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef long double ld;

inline int in(){int x, y; y = scanf("%d", &x); return x;}

const int N = -1;

int main()
{
	ll n, k;
	cin >> n >> k;
	n = min(n, k - 1);
	ll ans = 0;
	ll L = max(1LL, k - n);
	cerr << L << " " << n << endl;
	ans = (n - L + 1)/2;
	cout << max(ans, 0LL) << endl;
}

