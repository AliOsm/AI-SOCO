#define fast_io() cin.sync_with_stdio(false);cout.sync_with_stdio(false);
#define long_zero 0ll
#define long_one 1ll

using namespace std;

int main() {
    fast_io()
    ll n,k;
    cin>>n>>k;
    ll e = n/2;
    ll o = (n - e);
    if(o>=k)
        cout<<(2*k-1);
    else
        cout<<(2*(k-o));
	return 0;
}
