#include <iostream>

using namespace std;

int main()
{
	int n;
	cin >> n;
	int number = 0;
	for (int i = 0; i < n; i ++)
	{
		int counter = 0, temp;
		for (int j = 0; j < 3; j++)
		{
			cin >> temp;
			if (temp == 1)
				counter ++;
		}
		if (counter >= 2)
			number++;
	}
	cout << number << endl;
	return 0;
}