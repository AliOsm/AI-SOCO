//end of debug defines

void solve() {
    ll a, b;
    cin >> a >> b;
    ll d = abs(a - b);
    ll ans = 0;
    ans = sqrt(2 * d);
    while (ans > 0 && ans * (ans + 1) / 2 > d)
        --ans;
    while (ans * (ans + 1) / 2 < d || ((ans * (ans + 1) / 2 - d) & 1))
        ++ans;
    cout << ans << '\n';
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    int t;
    t = 1;
    cin >> t;
    for (int i = 0; i < t; ++i) {
        solve();
        //cout << '\n';
    }
    return 0;

}
