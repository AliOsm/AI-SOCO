#include<bits/stdc++.h>
using namespace std;
int main()
{
  long long int n, k=0;
  cin >>n>>k;
   long long int ara[n];
  for(int i=0;i<n;i++) cin >> ara[i];
  if (k==2)
  {
    cout << max(ara[0],ara[n-1]);
    return 0;
  }

  sort(ara,ara+n);
  if(k==1)
  {
    cout  <<ara[0 ]<<endl;

  }
  else
  {
    cout <<ara[n-1] <<endl;
  }

}
