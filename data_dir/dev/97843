#define pii pair<int,int>
#define piii pair<int,pair<int,int>>
#define M_PI 3.14159265358979323846
typedef unsigned long long ull;
typedef signed long long ll;
const int INF = 1e9;
const int MAXM = 1e7 + 5;
const int MAX = 1e7;
const int des = 10000;



int main()
{
	int n;
	cin >> n;

	ll* mass = new ll[n];

	for(int i = 0; i < n; i++)
		cin >> mass[i];

	sort(mass,mass+n);

	ll ans = 0;

	for(int i = 0; i < n; i++)
		ans += min(i + 2, n) * mass[i];

	cout << ans << endl;

	//pp;
}