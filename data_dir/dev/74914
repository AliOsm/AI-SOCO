#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

string a;
int N;

int main()
{
    optimiza_io
    cin >> a;
    N = a.size();
    a += a;
    int ans = 1;
    int act = 1;
    for( int i = 1; i < a.size(); i ++ )
    {
        if( a[i] != a[i - 1] )
        {
            act++;
            ans = max( act , ans );
        }
        else
            act = 1;
    }
    act = 1;
    for( int i = a.size() - 2; i >= 0; i -- )
    {
        if( a[i] != a[i + 1] )
        {
            act++;
            ans = max( act , ans );
        }
        else
            act = 1;
        
    }
        
    cout << min( N , ans );
    return 0;
}
