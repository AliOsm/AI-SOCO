#include <bits/stdc++.h>
using namespace std;
#define ll long long int
int main(){
   
       int n;
       cin>>n;
       int i,k;
       for(i=0;i<n;i++){
              cin>>k;
              if(k%2==0){
                     k--;
              }
              cout<<k<<" ";
       }
    return 0;
}