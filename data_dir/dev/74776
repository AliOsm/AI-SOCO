#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long int a,b,c,d,e,i,j,k,l,n,m,x,y,t,p;
    scanf("%lld",&t);
    for(p=1;p<=t;p++)
    {
        scanf("%lld%lld%lld",&n,&a,&b);
        c=n*a;
        if(n%2==0)
        {
            d=n/2;
            e=(d*b);
            c=min(c,e);
        }
        else
        {
            d=n/2;
            e=(d*b)+a;
            c=min(c,e);
        }
        printf("%lld\n",c);
    }
}
