#include <bits/stdc++.h>
#define ll long long int
#define pb push_back
#define pii pair<int, int>
#define pll pair<ll, ll>
#pragma GCC optimize ("O3")
using namespace std;
int main () {
    ios::sync_with_stdio(false);
    cin.tie (0);    
    ll n, m; cin>>n>>m;
    if (n==1) cout<<1;
    else if (m-1<n-m) cout<<m+1;
    else cout<<m-1;
    return 0;
}