#include<bits/stdc++.h>
using namespace std;
string str;
int main(){
    int ans  =0;
    cin>>str>>str;
    int sz = str.size();
    int it = 0;
    while(it < sz && str[it] == '<') ++ans , ++it;
    it = sz - 1;
    while(it >=0 && str[it] == '>') ++ans , --it;
    cout<<ans<<endl;
}
