//950A
#include <iostream>

using namespace std;

int l,r,a;

int main()
{
	cin >> l >> r >> a;

	if (l > r)
	{
		if (l-r > a)
		{
			cout << (r+a)*2;
		}
		else
		{
			cout << (l + (a-(l-r))/2)*2;
		}
	}
	else
	{
		if (r-l > a)
		{
			cout << (l+a)*2;
		}
		else
		{
			cout << (r + (a-(r-l))/2)*2;
		}
	}

	getchar();getchar();
	return 0;
}