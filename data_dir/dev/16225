#include<bits/stdc++.h>
using namespace std;
int main(){
    ios_base::sync_with_stdio(false);
    int n; cin>>n;
    if(n>3){cout<<"YES"<<'\n';}else{cout<<"NO";return 0;}
    while(n>5){
        cout<<n<<" - "<<n-1<<" = "<<1<<'\n'<<1<<" * "<<1<<" = "<<1<<'\n';
        n-=2;
    }
    if(n>=5){
        cout<<"5 - 3 = 2"<<'\n'<<"1 + 2 = 3"<<'\n'<<"3 * 4 = 12"<<'\n'<<"2 * 12 = 24"<<'\n';
    }else{
        cout<<"1 * 2 = 2"<<'\n'<<"3 * 4 = 12"<<'\n'<<"2 * 12 = 24"<<'\n';
    }
    return 0;
}
