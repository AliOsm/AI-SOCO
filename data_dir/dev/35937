vector <vector<int> > g;
///////////////////SOLUTION
inline void solution() 
{ 
	int t;
	cin>>t;
	while(t--)
	{
		ll a,b;
		ll x,y;
		cin>>x>>y;
		cin>>a>>b;
		ll res=0;
		if(x<0 && y<0)
		{
			x=abs(x);
			y=abs(y);
		}
		if(x>0 && y>0)
		{
			ll z=min(x,y);
			ll k1=z*b;
			ll k2=z*a*2;
			res+=min(k1,k2);
			x-=z;
			y-=z;
		}
		
		x=abs(x);
		y=abs(y);
		res+=x*a;
		res+=y*a;
		
		cout<<res<<endl;
	}
}
