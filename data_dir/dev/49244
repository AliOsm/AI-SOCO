#include<bits/stdc++.h>
#define F first
#define S second
#define ld long double
#define pb push_back
#define pf push_front
#define ll long long int
#define acm ios::sync_with_stdio(0),ios_base::sync_with_stdio(0),cin.tie(0),cout.tie(0);
#define mod 1000000009
#define EPS 1e-9
#define rw freopen("input.txt","r",stdin),freopen("output.txt","w",stdout);
using namespace std;
int main()
{
    acm;
    int sumo=0,sumd=0;
    string s;
    cin>>s;
    for (auto u:s) sumo+=(u=='o');
    sumd=(int)s.size()-sumo;
    if (!sumo||(sumd%sumo)==0)  cout<<"YES\n";
    else cout<<"NO\n";
    return 0;
}
