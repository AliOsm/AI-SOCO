#include <bits/stdc++.h>

using namespace std ;


int main()
{
    long long a, b, c ;
    cin >> a >> b >> c ;
    long long aa,bb,cc ;
    aa = a;
    bb = b ;
    cc = c ;
    b = min(a,b/2) ;
    c = min(b,c/4) ;
    aa = c*1 ;
    bb = c*2 ;
    cc = c*4 ;
    cout << aa+bb+cc ;
    return 0 ;
}
