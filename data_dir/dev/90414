ll fast_exp(ll base, ll exp1) {
    ll res=1;
    while(exp1>0) {
       if(exp1&1) res=(res*base)%mod;
       base=(base*base)%mod;
       exp1/=2;
    }
    return res%mod;
} 
ll pr[1000001]={0};
void isprime()
{
    pr[0]=1;
    pr[1]=1;
    for(ll a=2;a*a<=1000001;a++)
    {
        if(!pr[a])
        {
            for(ll b=a*a;b<1000001;b+=a)
            {
                pr[b]=1;
            }
        }
    }
}
ll comp=1,tim=0;
struct vertex
{
    vc<ll> adj;
    ll vis=0;
    ll low=0;
    ll col1=0;
    ll col2=0;
};
ll one=0,two=0,ans=0;
void dfs(struct vertex x[],ll sor)
{
    x[sor].vis=1;
    ll child=0;
    for(auto y:x[sor].adj)
    {
        if(!x[y].vis)
        {
            child++;
            dfs(x,y);
            x[sor].col1+=x[y].col1;
            x[sor].col2+=x[y].col2;
        }
    }
        if(x[sor].low==1)
            x[sor].col1++;
        else if(x[sor].low==2)
            x[sor].col2++;
    if((x[sor].col1==one and x[sor].col2==0) or (x[sor].col1==0 and x[sor].col2==two))
        ans++;
}
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(0);cout.tie(0);
	//isprime();
	//coeff();
	/*freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);*/
    ll n;
    cin>>n;
    struct vertex x[n];
    for(ll a=0;a<n;a++)
    {
        cin>>x[a].low;
        if(x[a].low==1)
            one++;
        else if(x[a].low==2)
            two++;
    }
    for(ll a=0;a<n-1;a++)
    {
        ll i,j;
        cin>>i>>j;
        i--;j--;
        x[i].adj.pb(j);
        x[j].adj.pb(i);
    }
    dfs(x,0*1LL);
    cout<<ans<<endl;
	return 0;
}