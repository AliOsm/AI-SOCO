#include <bits/stdc++.h>
#define ll long long

using namespace std;

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    ll q;
    cin >> q;

    for (int i = 0; i < q; i++)
    {
       ll a, b, c;
       cin >> a >> b >> c;
       cout << (a + b + c) / 2 << endl;
    }
}
