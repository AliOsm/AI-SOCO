// Author: πα

#include <bits/stdc++.h>
using namespace std;
#define long int64_t

int main()
{
    int n, i, d, p = INT_MAX, ans = 0;
    cin >> n;
    for(i = 0; i < n; ++i)
    {
        cin >> d;
        if(d < p)
            ans = i;
        p = d;
    }
    cout << ans;
    return 0;
}
