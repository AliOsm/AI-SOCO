#define dbg(args...) do {cerr << #args << " : "; faltu(args); } while(0)
void faltu(){cerr << endl;}
template<typename T>void faltu(T a[],int n){for(int i=0;i<n;++i)cerr<<a[i]<<' ';cerr<<endl;}
template<typename T,typename...hello>void faltu(T arg,const hello&...rest){cerr<<arg<<' ';faltu(rest...);}
//#else
//#define dbg(args...)


int main()
{
	optimize();
	int t = 1;
	while(t--) {
		stack<char> st;
		int n;
		cin >> n;
		string s;
		cin >> s;
		int cnt1 = 0, cnt2 = 0;
		for( auto x : s ) {
			if( x == '(' ) ++cnt1;
			else ++cnt2;
		}
		if( cnt1 != cnt2 ) {
			cout << -1 << endl;
			continue;
		}
		int cnt_temp = 0;
		int ans = 0;
		for( auto x : s ) {
			if( x == '(' ) {
				if( cnt_temp ) {
					--cnt_temp;
				}
				else {
					st.push( '(' );
				}
			}
			else if( x == ')' ) {
				if( st.empty() ) {
					ans += 2;
					cnt_temp++;
				}
				else st.pop();
			}
		}
		cout << ans << endl;
	}
}





















