#include<bits/stdc++.h>
#define pb push_back
#define adelkhah main
//#define int long long
using namespace std;
typedef long long ll;
typedef long double ld;
typedef pair<int,int> pii;
int32_t adelkhah()
{
    int a,b,c; cin >> a >> b >> c;
    int ans = 0;
    for(int i = 1; i <= a; i++){
        if(b < i+1 || c < i+2){
            break;
        }
        ans = 3*i + 3;
    }
    return cout << ans,0;
}
