#include<bits/stdc++.h>
#define GO ios::sync_with_stdio(0), cin.tie(0), cout.tie(0)
using namespace std;
typedef long long ll;
typedef vector<ll> vec;
const int N = 1e6 + 5;
const int M = 1e6 + 5;
const int Mod = 998244353;

int main()
{
	GO;
	int k;
	cin >> k;
	cout << 2 << ' ' << 3 << endl;
	int full = (1 << 18) - 1;
	int kk = full ^ k;
	cout << full << ' ' << kk << ' ' << 0 << endl;
	cout << k << ' ' << full << ' ' << k << endl;
	return 0;
}