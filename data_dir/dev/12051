#include <bits/stdc++.h>
#define ld long double
#define ll long long int
#define mod 1000000007
#define ll_inf 1000000000000000
#define int_inf 1000000000
#define pb push_back
#define Endl '\n'
#define endl '\n'
#define eps 1e-9
#define PI acos(-1.0)
#define ii pair<int,int>
#define se second
#define fi first
using namespace std;

int main(){
    ll n;
    cin>>n;
    if(n==0){
        cout<<0<<endl;
        return 0;
    }
    n++;
    if(n%2)cout<<n<<endl;
    else cout<<n/2<<endl;
}