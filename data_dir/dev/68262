#include<bits/stdc++.h>

#define ll long long
#define dl double

using namespace std;

int main()
{
    ll n, r;
    cin >> n >> r;

    dl A = 2 * acos(-1.0) / (dl)n;
    dl d = sqrt(2 - 2 * cos(A));

    dl R = d * r / (2 - d);
    cout << fixed << setprecision(12) << R << '\n';
}
