#include <bits/stdc++.h>
#define ll long long
#define pb push_back
#define fr first
#define se second
#define pp pop_back();
#define TIME ios_base::sync_with_stdio(0);
#define tcn cin.tie(0);
#define tct cout.tie(0);
using namespace std;
const long long N = 1e6 + 7;
long long n , l , a , m , cnt, y , k;
vector<int>v1 , v;
string s , s1;
ll used[N];
int main(){
 cin >> n;
while(n --){
        cin >> m;
    cin >> s;
    for( int i = 0;i < m;i ++ ){
        for( int j = i;j < m;j ++ ){
            if( j < m - 1 and s[j] == 'A' and s[j + 1] == 'P' ){
                s[j + 1] = 'A';
                j ++,a = 1;
            }
        }
        if( a )
            cnt ++;
        a = 0;
    }
    cout << cnt << endl;
    cnt = 0;
 }
}

