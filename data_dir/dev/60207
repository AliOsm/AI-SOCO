#include <bits/stdc++.h>
#define int long long
using namespace std;
int32_t main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    int t;cin>>t;
    while(t--){
        int n,g,b;cin>>n>>g>>b;
        int x=(n+1)/2;
        if(g>=b){
            cout<<n<<"\n";
        } else {
            int l=(x-1)/g;
            int ful=x+l*b;
            if(ful<n)ful=n;
            cout<<ful<<"\n";
        }

    }
}