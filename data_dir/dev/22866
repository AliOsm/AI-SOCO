#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define pb push_back
#define f first
#define s second
#define y1 bbp
using namespace std;
int const N=1e6+4,inf=1e9+7,NN=3e5+1;ll const md=998244353;
ll b[N],a[N],pref[N][5],n,k,m,x1,y,x,y1,kk,l,ans,dp[N];
long long q,qq;
char ch;
vector <ll> v[N];
vector <ll> vv;
bool us[N];
string s,t;
map<ll,ll> mp;
main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    cin>>n;
    for (int i=1;i<=n;i++)
    {
        cin>>a[i];q+=abs(a[i]);
    }
    if (n==1) return cout<<a[1],0;
    x=a[1],y=a[1];
    for(int i=1;i<=n;i++)
    {
        x=max(x,a[i]);
        y=min(y,a[i]);
    }
    if (x<0) q+=(x*2); else
    if (y>0) q-=(y*2);
    cout<<q;
    return 0;
}
