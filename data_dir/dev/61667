#include <bits/stdc++.h>

using namespace std ;

int main() {
    ios_base :: sync_with_stdio(false) ;
    cin.tie(nullptr) ;
    int n ;
    int m ;
    cin >> n >> m ;
    if(m >= n - m)
        cout << n - m ;
    else if(m <= 1 )
        cout << 1 ;
    else
        cout << min(n - m , m) ;

    return 0 ;
}