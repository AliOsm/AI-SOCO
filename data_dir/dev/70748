#include <iostream>
#include <string>
#include <vector>
#include <set>
#include <map>
#include <stack>
#include <queue>
#include <cstdio>
#include <algorithm>
#include <cmath>
using namespace std;

#define ll long long
#define MP make_pair

const int MAX_VALUE = 1e9 + 7;

int main() {

    ios_base::sync_with_stdio(false);

    int t = 0;
    cin >> t;

    while (t--)
    {
        int n = 0;
        cin >> n;

        int x = 1;
        while (x <= n) {
            x <<= 1;
        }

        ll ans = 1LL * n * (n + 1) / 2 - 2 * (x - 1);
        cout << ans << endl;
    }


    return 0;
}































