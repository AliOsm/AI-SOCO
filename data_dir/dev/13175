#include<bits/stdc++.h>
using namespace std;

#define pb push_back
#define ll long long
#define maxn 300005
#define fr(i,j,k) for(int i=j;i<k;i++)
#define f(n) fr(i,0,n)
#define f1(n) fr(i,1,n+1)
#define ms(i) memset(i,0,sizeof(i));
const int mod=1e9+7;
int main(){
	int n,m,k;
	while(cin>>n){
		int po=0,ne=0;
		f(n){
			int x,y;
			cin>>x>>y;
			if(x<0){
				po++;
			}
			else{
				ne++;
			}
		}
		if(po>=2&&ne>=2){
			cout<<"No"<<endl;
		}
		else{
			cout<<"Yes"<<endl;
		}
	}
}