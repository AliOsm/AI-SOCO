#include <vector>
#include <list>
#include <map>
#include <set>
#include <deque>
#include <stack>
#include <algorithm>
#include <functional>
#include <iostream>
#include <iomanip>
#include <cstdio>
#include <cmath>
#include <tuple>
#define ll long long
#define MAXN 111111
using namespace std;


int main() {
    int Q;
    cin>>Q;
    for(int q=1;q<=Q;q++) {
        ll K;
        int x;
        cin>>K>>x;
        
        // 9*K+x
        
        if (x == 0) {
            cout << 9*x << endl;
        } else {
            cout << 9*(K-1)+x << endl;
        }
        
        
    }
}
