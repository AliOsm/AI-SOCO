# include <stdio.h>
# include <string.h>
# include <math.h>

/*
# include <vector>
*/

# include <algorithm>

using namespace std;


# define iabs(x) ( (x) < 0 ? (-(x)) : (x) )
# define imax(a,b) ( (a) > (b) ? (a) : (b) )
# define imin(a,b) ( (a) < (b) ? (a) : (b) )

# define isalpha(c) ( (c) >= 'a' && (c) <= 'z' )
# define isAlpha(c) ( (c) >= 'A' && (c) <= 'Z' )
# define isdigit(c) ( (c) >= '0' && (c) <= '9' )


const int N = 300010;


int n, l;
int a [N];
__int64 k, m;

int main ()
{
# ifndef ONLINE_JUDGE
   freopen ("C.txt", "rt", stdin);
   freopen ("C.out", "wt", stdout);
# endif

   scanf ("%d", &n);
   for ( int i=0; i < n; i++ )
   {
      scanf ("%d", &a [i]);
   }

   sort (a, a+n);

   for ( int i=0; i < n; i++ )
   {
      l = iabs (a [i]-i-1);
      k += l;
   }

   printf ("%I64d", k);

   return 0;
}
