# include <bits/stdc++.h>
using namespace std;
# define fi cin
# define fo cout
int main(void)
{
    long long n,k;
    fi>>n>>k;
    long long cnt = (n + 1) >> 1;
    if (k <= cnt) return fo << (2 * k - 1) << '\n',0;
    k -= cnt;
    cnt = n >> 1;
    return fo << (k << 1) << '\n',0;
}
