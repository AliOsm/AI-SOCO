#include <bits/stdc++.h>

using namespace std;

inline void prep()
{
    cin.tie(0);
    cin.sync_with_stdio(0);
};

#define X first
#define Y second
#define endl '\n'
#define ll long long
#define inf (0x7fffffffffffffff)
#define all(x) x.begin(), x.end()
#define debug(x) cerr << #x << " = " << (x) << " ";
#define ZXC cerr << clock() * 1.0 / CLOCKS_PER_SEC << endl;

const int mod = (int)1e9 + 7;
// const int mod = 998244353;
const int MX = (int)2e5 + 20;

int main()
{
    prep();

    ll n, k;
    cin >> n >> k;

    ll mx = min(n, k - 1);
    ll mn = k - mx;

    ll inBetween = max(0ll, mx - mn + 1);

    cout << inBetween / 2 << endl;
   
    // ZXC
    return 0;
}