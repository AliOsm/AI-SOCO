#include <bits/stdc++.h> 

#define all(x) x.begin(), x.end()
#define ll long long
#define pb push_back
#define S second
#define F first
#define mp make_pair

using namespace std;
const int INT = int(1e5) + 5;
const int INF = int(1e9) + 7;
inline void boost () {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);
}                    

int main () {
	boost ();
	int n;
	cin >> n;
	for (int i = 1; i <= n; i ++) {
		ll k, x;
		cin >> k >> x;
		cout << x + (k - 1) * 9 << endl;
	}
	return 0;
}              