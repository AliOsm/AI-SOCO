#include<bits/stdc++.h>
using namespace std;
#define ll long long int
vector<ll>vec;
int main()
{
    ll a,b,c,d,e,i,j,k,l,n,m,x,y,t,p;
    cin>>t;
    for(p=1;p<=t;p++)
    {
        cin>>n>>k;
        x=0;
        vec.clear();
        for(i=1;i<=n;i++)
        {
            cin>>a;
            if(a==k)
            {
                x++;
            }
            if(a>=k)
            {
                vec.push_back(i);
            }
        }
        if(x==0)
        {
            printf("no\n");
            continue;
        }
        if(x==n)
        {
            printf("yes\n");
            continue;
        }
        l=vec.size();
        c=0;
        for(i=1;i<l;i++)
        {
            if(vec[i]-vec[i-1]<=2)
            {
                c=1;
                break;
            }
        }
        if(c)
        {
            printf("yes\n");
        }
        else
        {
            printf("no\n");
        }
    }
}
