# include <bits/stdc++.h>

using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        if (n % 2) {
            cout << 7;
            for (int i = 1; i < n / 2; i++)
                cout << 1;
        } else {
            for (int i = 1; i <= n / 2; i++) {
                cout << 1;
            }
        }
        cout << endl;   
    }
}
