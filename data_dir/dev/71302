#include <vector>
#include <map>
#include <queue>
#include <deque>
#include <stack>
#include <algorithm>
#include <sstream>
#include <iostream>
#include <iomanip>
#include <cstdio>
#include <cmath>
#include <cstring>
#include <string>

#define oo 1e9
#define pi 3.1415926536
#define all(x) x.begin(),x.end()
#define sorta(x) sort(all(x))
#define sortam(x,comp) sort(all(x),comp)
#define sortd(x) sort(x.rbegin(),x.rend())
#define pb push_back
#define mp make_pair


typedef long long ll;
using namespace std;

int main() {
    int n;
    while(cin >> n) {
        int res = 0;
        while(n--) {
            int s = 0, tmp;
            for(int i = 0; i < 3; i++) cin >> tmp, s += tmp;
            res += (s>1);
        }
        cout << res << endl;
    }
    return 0;
}
