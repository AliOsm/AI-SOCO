#include<bits/stdc++.h>
#define ll long long
#define r_0 return 0
using namespace std;

ll n , m , k , l , x , y  , z , cnt , ans , sum , mn = 1e18 , mx = -1e18 ;

int main(){

    cin >> n ;
    while ( 1 ){
        x = n ;
        cnt = 0 ;
        while ( x ){
            cnt += ( x % 10 );
            x /= 10;
        }
        if ( cnt % 4 == 0 )
        {
            cout << n ;
            r_0;
        }
        n ++ ;
    }
}
