#include<bits/stdc++.h>
#define ll long long
#define pb push_back
#define pf push_front
#define fr first
#define sc second
#define r_0 return 0
#define ld long double
#define TIME ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
using namespace std;
    const ll N = 1e3 + 7;
    const ll mod = 1e9 + 7;
ll n;
void solve(){
    cin >> n;
    for(ll i = 1 ;; ++ i){
        ll x = i * (i + 1) / 2;
        if(x == n){
            cout << i;
            return;
        }
        ll j = i + 1;
        ll y = j * (j + 1) / 2;
        if(y > n){
            cout << n - x;
            return;
        }
    }
}

int main(){
    TIME
    int tt = 1;
    //cin >> tt;
    while(tt --){
            solve();
    }
}
