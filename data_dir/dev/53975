# include <bits/stdc++.h>
using namespace std;
# define fi cin
# define fo cout
int main(void)
{
    string s[100005];
    int n;
    fi>>n;
    int ans = 0;
    for (int i = 1;i <= n;++i) fi>>s[i];
    for (int i = 1;i < n;++i) ans += s[i] != s[i+1];
    return fo << ++ans << '\n',0;
}
