#include<bits/stdc++.h>

using namespace std;

typedef long long ll;

int main()
{
    int n;
    cin>>n;
    queue<int> q;
    while(n>3)
    {
        q.push(2);
        n-=2;
    }
    if(n)
        q.push(n);
    cout<<q.size()<<endl;
    while(q.size())
    {
        cout<<q.front()<<" ";
        q.pop();
    }
    return 0;
}

