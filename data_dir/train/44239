#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef long double ld;



int main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

    int tt;
    cin >> tt;
    while(tt--){
        ll s, a, b, c;
        cin >> s >> a >> b >> c;
        ll ans = s/c;
        ans += ans/a*b;
        cout << ans << "\n";
    }

}
