const ll N=1e5+5,mod=998244353,bit=61;

vector<ll> solve(ll m,ll s)
{
    vector<ll> ans(m);
    f(i,0,m-1)
    {
        ll take=min(s,9ll);
        s-=take;
        ans[i]=take;
    }
    return ans;
}

signed main()
{
    fast;
    ll t=1;
    //cin>>t;
    while(t--)
    {
        ll a,b;
        cin>>a>>b;
        cout<<min({a,b,(a+b)/3})<<endl;
    }
    return 0;
}

















