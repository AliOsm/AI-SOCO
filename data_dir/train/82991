#include<iostream>
#include<cstdio>
#include<cstring>
#include<vector>
#include<algorithm>
using namespace std;
typedef long long ll;
ll x,y;
int main(){
    while(cin>>x>>y){
         if(x>0&&y>0)
                     cout<<0<<" "<<x+y<<" "<<x+y<<" "<<0<<endl;
         if(x>0&&y<0)
                     cout<<0<<" "<<y-x<<" "<<x-y<<" "<<0<<endl;
         if(x<0&&y>0)
                     cout<<x-y<<" "<<0<<" "<<0<<" "<<y-x<<endl;
         if(x<0&&y<0)
                     cout<<x+y<<" "<<0<<" "<<0<<" "<<x+y<<endl;
    }
  //  system("pause");
    return 0;
}
