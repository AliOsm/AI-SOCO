#include<bits/stdc++.h>

#define LL long long
#define Dl double
#define Pb push_back
#define Po pop_back
#define Mp make_pair
#define In insert

using namespace std;

typedef vector<LL> Vl;
typedef pair<LL, LL> Pll;
typedef vector<Pll> Vpl;
typedef queue<LL> Ql;
typedef stack<LL> Sl;
#define X first
#define Y second

int main()
{
    LL n, x, y;
    cin >> n >> x >> y;

    if((x == n / 2 || x == n / 2 + 1)
       && (y == n / 2 || y == n / 2 + 1))
        cout << "NO\n";
    else
        cout << "YES\n";
    return 0;
}
