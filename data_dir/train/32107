#define see2(x,y) cout<<#x<<" = "<<x<<"::"<<#y<<" = "<<y<<endl 
const double pi=3.14159265358979323846;
const int mod=1000000007;
typedef pair<int,int> pii;
const int inf=1e18;
const int N=3e5;
void __solve(){
    int k;
    cin>>k;
    int dp[5][5];
    memset(dp,0,sizeof(dp));
    int t=log2(N);
    int x=(1LL<<t)-1;
    int c=(1LL<<(t-1));
    cout<<"2 3\n";
    cout<<x<<' '<<k<<' '<<0<<endl;
    cout<<c<<' '<<x<<' '<<k<<endl;
}
int32_t main()
{
    ios_base::sync_with_stdio(0); cin.tie(0);cout.tie(0);
    int T=1;
    //cin>>T;
    while(T--){
        __solve();
        cout<<endl;
    }
}