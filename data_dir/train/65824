#include <bits/stdc++.h>

using namespace std;

int main()
{
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);

    int n  ;
    string s ;
    cin >> n >> s ;
    int j = n/2 + 1 ;
    for (int i = 1 ; i <= n/2 ; i++ )
    {
        if (s[i-1] == 'R' && s[j-1] == 'L') cout<< j << " " <<i <<endl;
        else    cout<<i<<" "<<j<<endl ;
        j++ ;
    }
}
