//++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
typedef long long ll;
typedef long double ld;
typedef unsigned long long ull;
//++--++--++--++--++--++--++--++--++--+--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
const int MAXN = 200001;
const int inf = 1000000001;
const ld INF = 1.0 / 0.0;
const ld EPS = 1e-7;
const int mod = inf + 7;
const ld PI = acos(-1.0);
int ans = 0;
#define int long long
int A,B;
vector<int> pos;
int amount(int l)
{
	int x = upper_bound(all(pos), l ) - pos.begin();
	return (x == 0 ? 0 : x- 1);
}
int cnt(int l, int r)
{
	return upper_bound(all(pos), r) - lower_bound(all(pos), l);
}
int rec(int l, int r)
{
	if ((r - l + 1) % 2)
	{
		int am = cnt(l,r);
		if (am)
		{
			return B * (r - l + 1) * am;
		}
		return A;
	}
	else
	{
		int am = cnt(l, r);
		int ansfs = (am == 0 ? A : B * am * (r - l + 1));
		if (!am)
		{
			return A;
		}
		int ansss = rec(l, (l + r) / 2) + rec((l + r) / 2 + 1, r);
		return min(ansfs, ansss);
	}
}
signed main()
{
	fastio();
	int n, k;
	cin >> n >> k >> A >> B;
	for (int i = 0; i < k; ++i)
	{
		int x;
		cin >> x;
		pos.pbc(x);
	}
	sort(all(pos));
	cout << rec(1, 1 << n);
//	sp;
}