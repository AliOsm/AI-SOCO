#include <bits/stdc++.h>
#define fast ios_base::sync_with_stdio(0);cin.tie(NULL);cout.tie(NULL)
#define ll long long int
using namespace std;
const int N = 1e6 + 5;
const ll inf = -1e18;
const int MOD = 1e9 + 7;



int main(){
   fast;
   ll n, m, a, b, t, tt;
   cin >> n >> m >> a >> b;
   if(n % m == 0)
      return cout << 0, 0;
   t = n % m;
   tt = m - (t);
   t = t * b;
   tt = tt * a;
   cout << min(t, tt);




   return 0;
} 