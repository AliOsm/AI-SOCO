#include <bits/stdc++.h>

#define ll long long
#define pb push_back
#define pii pair<int,int>
#define pll pair<ll,ll>
#define mp make_pair
#define ff first
#define ss second

using namespace std;

const double pi=acos(-1);
const int N=(int)1e6+7,mod=1000000007,M=2e9;

//scanf("%d",&);
ll n,m,k,l,ans;

int main()
{
//    freopen(".txt","r",stdin);
    cin>>n>>m>>k>>l;
    ans=l+k;
    ans=(ans/m)+(ans%m>0);
    if(m*ans>n)
        puts("-1");
    else
        cout<<ans;
    return 0;
}
