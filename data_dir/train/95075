#include <bits/stdc++.h>
using namespace std;
#define F first
#define S second

typedef long long lli;
const lli   N = 1000000 + 5 , OO =1110111110111 , mod = 1000000007 , mod2=998244353;

int n , m , ok;

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    cin>>n>>m;
    if(!m)return cout<<1,0;
    if(m>=n/2)cout<<n/2 - (m-(n/2)-(n%2&&m>n/2)) ;
    else cout<< (m==1?1:m);
    return 0;
}
