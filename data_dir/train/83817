#include<bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef pair< ll, ll > pll;
typedef pair< int , int >pii;

int main()
{
    int n, m;

    scanf("%d %d", &n, &m);

    double mn = 10000.0;


    while (n--) {
        double a, b;
        scanf("%lf %lf", &a, &b);
        mn = min(mn, a/b);
    }


    printf("%.8lf\n", mn*m);


    return 0;
}
