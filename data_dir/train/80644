#include <bits/stdc++.h>

using namespace std;
#define ll long long
ll arr[4];

int main(){

    for(int i=0; i<3; i++)cin>>arr[i];
    sort(arr,arr+3);
    ll p=arr[2]-1;
    ll ans=0;
    for(int i=0; i<3; i++){
        if(arr[i]<p)ans+=(p-arr[i]);

    }
    cout<<ans<<endl;

}
