#include<bits/stdc++.h>
#define pb push_back
#define adelkhah main
//#define int long long
using namespace std;
typedef long long ll;
typedef long double ld;
typedef pair<int,int> pii;
bool check(int n)
{
    for(int i = 2; i*i <= n; i++) if(n % i == 0)return false;return true;
}
int32_t adelkhah()
{
    int n; cin >> n; int i = 1; for(; check(n*i + 1) ; i++) continue; return cout << i,0;
}
