const ll M=2e5+5,mod=1e9+7;
int main()
{
    ll y,b,r;
    cin>>y>>b>>r;
    b=min(b,r-1);
    y=min(y,b-1);
    cout<<y+y+1+y+2<<endl;
    return 0;
}