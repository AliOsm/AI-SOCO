#include <bits/stdc++.h>
#define ll long long
#define pb push_back
using namespace std;
ll n,m,e,a,b,c,r,h,q,w,l,k;
string s,t;
int main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
cin>>a>>b>>c;
if (a!=1 && b!=1 && c!=1) cout<<a*b*c; else
if (a==1 && b!=1 && c!=1) cout<<(a+b)*c; else
if (a!=1 && b==1 && c!=1) cout<<max((a+b)*c,a*(b+c)); else
if (a!=1 && b!=1 && c==1) cout<<(c+b)*a; else
if (a==1 && b==1 && c!=1) cout<<(a+b)*c; else
if (a!=1 && b==1 && c==1) cout<<(c+b)*a; else
if (a==1 && b!=1 && c==1) cout<<a+b+c; else
if (a==1 && b==1 && c==1) cout<<3; 
}