#include <iostream>
#include<string>
using namespace std;
int main(){
    int n;
    cin>>n;
    if (n == 2) cout<<"3\n2 1 2";
    else{
        cout<<3 * (n/2) + n % 2<<endl;
        for (int i = 2;i<=n;i+=2)cout<<i<<' ';
        for (int i = 1; i<=n; i+=2)cout<<i<<' ';
        for (int i = 2;i<=n;i+=2)cout<<i<<' ';
    }

    }
