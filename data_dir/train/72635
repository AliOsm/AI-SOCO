#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
#define what_is(x) cerr << #x << " is " << x << endl;
#define pii pair < int , int >
#define fi first
#define se second
using namespace std;
typedef long long ll;

int T, N;

int main()
{
    optimiza_io
    cin >> T;
    while( T -- ) {
        cin >> N;
        int t = -1, x;
        string ans = "YES\n";
        while( N -- ) {
            cin >> x;
            if( t == -1 )
                t = ( x & 1 );
            else if( t != ( x & 1 ) )
                ans = "NO\n";
        }
        cout << ans;
    }
    return 0;
}

