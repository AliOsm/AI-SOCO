#include<bits/stdc++.h>
#define REP(i,j,k) for(int i=j;i<k;++i)
#define RREP(i,j,k) for(int i=(int)j-1;i>=k;--i)
#define int long long
#define pb emplace_back
#define P pair<int,int>
#define F first
#define S second
#define ALL(x) x.begin(),x.end()
#define sz(a) (int)(a).size()
#define MX 1000005
#define oo 1e18
#define L d*2
#define R d*2+1
#define mid (l+r>>1)
#define Ls l,mid,d*2
#define Rs mid+1,r,d*2+1
#define MIN(x,y) (x=min(x,(y)))
#define MAX(x,y) (x=max(x,(y)))
#define mo (int)(1e9+7)
#define IOS cin.tie(0) ,cout.tie(0), cout.sync_with_stdio(0)
using namespace std;
int n,cnt[MX],a,po[MX],f[MX],ans;
main(){
	IOS;
	po[0] = 1; 
	REP(i,1,MX) po[i] = po[i-1]*2%mo;
	cin>>n;
	REP(i,0,n) cin>>a,cnt[a]++;
	RREP(i,MX,2){
		int x = 0;
		for(int j=i;j<MX;j+=i) x += cnt[j];
		if(x){
			f[i] = x*po[x-1]%mo;
			for(int j=i*2;j<MX;j+=i) f[i] = (f[i]-f[j]+mo)%mo;
			ans = (ans+f[i]*i)%mo;
		}
	}
	cout<<ans;
}


