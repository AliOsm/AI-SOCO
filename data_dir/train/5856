#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <set>
using namespace std;
int main()
{
   int n;
   cin>>n;
   for(int i=0;i<1000;i++)
   {
    n++;
   	int t=abs(n);
   	while(t)
   	{
   		if(t%10==8)
   		{
		   cout<<i+1;
		   return(0);
	    }
	    t/=10;
	}
	
   }
}
