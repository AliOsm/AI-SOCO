#include <stack>
#include <bitset>
#include <algorithm>
#include <functional>
#include <numeric>
#include <utility>
#include <sstream>
#include <iostream>
#include <iomanip>
#include <cstdio>
#include <cmath>
#include <cstdlib>
#include <ctime>
#include <vector>

#define pb push_back
#define mp make_pair

using namespace std;

int main(){
    int n, k=0, x, y=0;
    cin>>n;
    for(int i=0; i<n; i++) {
        cin>>x;
        if(x!=y) k++;
        y = x;
    } 
    cout<<k;
    return 0;
}