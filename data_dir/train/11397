#include <bits/stdc++.h>
using namespace std;
#define pb  push_back
#define ll  long long
#define vi  vector<int>
#define vvi vector<vi >
#define all(x) x.begin(), x.end()

ll x, y, a, b;

int main() {
    ios_base::sync_with_stdio(false); cin.tie(0);
    int t; cin >> t;
    while (t--) {
        cin >> x >> y >> a >> b;
        cout << (min(b, 2 * a) - a) * min(x, y) + a * max(x, y) << "\n";
    }

    return 0;
}