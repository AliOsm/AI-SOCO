#include <bits/stdc++.h>
using namespace std;
#define F first
#define S second
#define pb push_back
#define ll long long
#define pi pair<int,int>
#define go ios::sync_with_stdio(0); cin.tie(0); cout.tie(0)
int n;
int main()
{
    go;
    cin>>n;
    while(n--)
    {
        int x;
        cin>>x;
        if(x==2)
            cout<<2<<endl;
        else if(x&1)
            cout<<1<<endl;
        else
            cout<<0<<endl;
    }
    return 0;
}
