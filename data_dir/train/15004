#include<bits/stdc++.h>

using namespace std;

int num[101];

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
    int n;
    cin >> n;
    vector<int> a(n);
    for(int i = 0; i < n; i++) {
        cin >> a[i];
    }
    for(int i = 0; i < n; i++) {
        a[i] += 500000;
    }
    cout << n+1 << "\n";
    cout << "1 "<< n << " 500000\n";
    for(int i = 0; i < n; i++) {
        cout << "2 " << i+1 << " " << a[i]-i << "\n";
    }
    return 0;
}
