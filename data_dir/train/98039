    ll w1, h1, w2, h2;
    cin >> w1 >> h1 >> w2 >> h2;
    if (w1 == w2)
    {
        cout << 2 * (h1 + h2 + 2) + (w1 + w2);
    }
    else
    {
        cout << w1 + 2 + 2 * h1 + w1 - w2 + 1 + 2 * h2 - 1 + w2 + 2;
    }
    return  0;

}