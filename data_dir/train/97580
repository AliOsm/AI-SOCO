typedef long long ll;
typedef unsigned long long ull;
typedef long double ld;
typedef vector<int> vi;
typedef pair<ll, ll> pll;
typedef pair<int, int> pii;

string itosm(ll x){
    if(x == 0)
        return "0";
    string ans = "";
    while(x > 0){
        ans +=((x%10) + '0');
        x/=10;
    }
    reverse(ans.begin(), ans.end());
    return ans;
}

ll stoim(string str){
    ll ans = 0;
    ll k = 1;
    for(int i = str.length()-1; i >= 0; i--){
        ans+=(str[i]-'0')*k;
        k*=10;
    }
    return ans;
}

const ll infll = 1e18 + 3;
const int inf = 1009000999;
const double eps = 1e-7;
const int maxn = 3e6 + 46;
const int baseint = 1000200013;
const ll basell = 1e18 + 3;
const ld PI = acos(-1.0);
const ll mod = 1e9 + 7;

ll dp[maxn][2];
ll dp2[maxn][2];

void solve(){
    int n, k, d;
    cin >> n >> k >> d;
    dp[0][0] = 1;
    for(int i = 0; i <= n; i++){
        for(int j = 0; j < n; j++)
            dp2[j][0] = dp2[j][1] = 0;
        for(int j = 0; j <= n; j++){
            for(int g = 1; g <= k; g++){
                if(g < d){
                    dp2[j + g][0] += dp[j][0];
                    dp2[j + g][0] %= mod;
                }
                else{
                    dp2[j + g][1] += dp[j][0];
                    dp2[j + g][1] %= mod;
                }
                dp2[j + g][1] += dp[j][1];
                dp2[j + g][1] %= mod;
            }
        }
        for(int j = 0; j <= n; j++)
            dp[j][0] = dp2[j][0], dp[j][1] = dp2[j][1];
    }
    cout << dp[n][1];
}

