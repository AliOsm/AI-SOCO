
#include<bits/stdc++.h>
#define X first
#define Y second
#define ll long long
#define nl cout<<endl
#define SZ(x) x.size()
#define pii pair<int,int>
#define all(v) v.begin(),v.end()
#define pb(x) push_back(x)
#define clr(a) memset(a,0,sizeof(a))
#define SET(a) memset(a,-1,sizeof(a))
#define fr(i,a,b) for(i=a;i<=b;i++)
using namespace std;

#define MX 5000005//5*10^6
ll ar[MX+5],br[MX+5],fr[256];

int main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);
    ll i,j,k,n,m,x,y,f;
    ll mx=INT_MIN,mn=INT_MAX;

    cin>>n;
    {
        if(n<=3)
        {
            cout<< "NO\n";
            return 0;
        }

        cout<< "YES\n";

        if(n==4)
        {
            cout<< "1 + 2 = 3\n";
            cout<< "3 + 3 = 6\n";
            cout<< "6 * 4 = 24\n";

            return 0;
        }

        if(n==5)
        {
            cout<< "4 * 5 = 20\n";
            cout<< "2 - 1 = 1\n";
            cout<< "3 + 1 = 4\n";
            cout<< "20 + 4 = 24\n";

            return 0;
        }

        cout<< "6 * 4 = 24\n";
        cout<< "3 - 5 = -2\n";
        cout<< "-2 + 2 = 0\n";
        cout<< "1 * 0 = 0\n";
        fr(i,7,n)
        {
            cout<<i<< " * "<<0<< " = "<<0<<endl;
        }
        cout<< "0 + 24 = 24\n";
    }
    return 0;
}
