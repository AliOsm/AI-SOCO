#include <bits/stdc++.h>
using namespace std;




int main() {
  ios_base::sync_with_stdio(false); cin.tie(0);
  int n; cin >> n;
  long long cnt[2] = {0};
  for (int i = 0; i < n; ++i) {
    int a; cin >> a;
    cnt[i % 2] += a / 2;
    cnt[1 - i % 2] += (a + 1) / 2;
  }
  cout << min(cnt[0], cnt[1]) << '\n';
}
