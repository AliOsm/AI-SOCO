/* In the name of Allah */
#include<bits/stdc++.h>
using namespace std;

const int N = 1e5 + 5;
int n, m, k, a[N];

inline void readInput() {
	cin >> n >> m >> k;
	for (int i = 0; i < n; i++)
		cin >> a[i];
	for (int i = n - 1; i; i--)
		a[i] -= a[i - 1];
}

inline void solve() {
	sort(a + 1, a + n);
	long long ans = k;
	for (int i = 1; i <= n - k; i++)
		ans += a[i];
	cout << ans << endl;
}

int main() {
	ios:: sync_with_stdio(0), cin.tie(0), cout.tie(0);
	readInput(), solve();
	return 0;
}
