#include<bits/stdc++.h>
 
#define ll long long
#define ull unsigned long long
#define vi vector<int>
#define pii pair<int, int>
#define vvi vector<vector<int>>
#define I "%d"
#define L "%I64d"

#define over999 1000000000
#define pb push_back
#define mp make_pair
#define fi first
#define se second
#define Pi 3.1415926535897932384626433
#define files freopen("input.txt","r",stdin);freopen("output.txt","w",stdout); 

#define elif else if
#define yes "YES"
#define no "NO"
#define space <<" "<<
#define endl "\n"
#define x1 qqwertyuio
#define y1 tfhjvbknml


using namespace std;

ll n, x, a;

int main()
{
    
    cin >> n;
    
    for(int i=0;i<n;i++)
    {
        cin >> x;
        a+=x;
    }
    if(n==1 && a==1)return cout << yes,0;
    if(n==1 && a==0)return cout << no,0;
    if(a!=n-1)cout << no; else cout << yes;
    
    
    return 0;
}