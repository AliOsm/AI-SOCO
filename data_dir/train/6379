const int inf=1<<28;
const double INF=1e12,EPS=1e-9;

void run()
{
	int d, n, a[2000];
	cin >> d >> n;
	rep(i, n) cin >> a[i];
	int ans = 0;
	rep(i, n){
		if(i) ans += d - a[i-1];
	}
	cout << ans << endl;
}

int main()
{
#ifndef ONLINE_JUDGE
	int cs=3;rep(i,cs)
#endif
	run();
}
