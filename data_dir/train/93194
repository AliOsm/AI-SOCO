#include <bits/stdc++.h>
using namespace std;

#define int long long

int n;

int32_t main() {
	ios::sync_with_stdio(0);
	cin.tie(0);
	
	cin >> n;
	if (n % 4 == 0)
		cout << 1 << ' ' << 'A' << endl;
	else if (n % 4 == 1)
		cout << 0 << ' ' << 'A' << endl;
	else if (n % 4 == 2)
		cout << 1 << ' ' << 'B' << endl;
	else
		cout << 2 << ' ' << 'A' << endl;
}
