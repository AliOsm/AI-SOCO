    for( int i=1;i <= n;i ++ ){
    cin >> arr[i];
    if( i==m && arr[i] ){
        cout<<m;
        return 0;
    }
    }
    for( int i=m+1;i <= n;i ++ ){
        if( arr[i]== 1 ){
            cout<<i ;
            return 0;
        }
    }
        for( int i=1;i <= n;i ++ ){
