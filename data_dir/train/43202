#include<bits/stdc++.h>
using namespace std;
#define ll  long long
#define endl '\n'
#define FASTINOUT ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
const ll mod = 998244353;
const int N=2e5+9;
int main()
{
    FASTINOUT;
    int q;
    cin>>q;
    while (q--){
        int x,k;
        cin>>x>>k;
        if (x%2==1){
            if (k%2==0||k>sqrtl(x))
                cout<<"NO\n";
            else
                cout<<"YES\n";
        }
        else{
            if (k%2==1||k>sqrtl(x))
                cout<<"NO\n";
            else
                cout<<"YES\n";
        }
    }
    return 0;
}
