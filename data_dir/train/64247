#include <bits/stdc++.h>
using namespace std;
string s;
int main()
{
    int n, t;
    cin>>n>>t;
    cin>>s;
    for (int i=0;i<t;++i)
    {
        for (int j=0;j<n-1;++j)
        {
            if (s[j] == 'B' && s[j+1] == 'G')
            {
                swap(s[j], s[j+1]);
                ++j;
            }
        }
    }
    cout<<s<<'\n';
    return 0;
}
