int main()
{
    boost1;boost2;
    int i,j,n;
    string s;
    cin>>n;
    cin>>s;
    for(i=0;i<n-1;i++)
    {
        if(s[i]!=s[i+1])
        {
            cout<<"YES"<<endl;
            cout<<s[i]<<s[i+1];
            return 0;
        }
    }
    cout<<"NO";
    return 0;
}
