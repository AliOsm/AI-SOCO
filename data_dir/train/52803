#include <bits/stdc++.h>
#define fst first
#define snd second
#define fore(i,a,b) for(int i=a,ThxDem=b;i<ThxDem;++i)
#define pb push_back
#define ALL(s) s.begin(),s.end()
#define FIN ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0)
#define SZ(s) int(s.size())
using namespace std;
typedef long long ll;
typedef pair<int,int> ii;

int a[1010][1010];

int main(){FIN;
	int n,tt=0; cin>>n;
	fore(i,0,n/4) fore(j,0,n/4){
		fore(x,0,4) fore(y,0,4) a[4*i+x][4*j+y]=tt++;
	}
	fore(i,0,n){
		fore(j,0,n) cout << a[i][j] << " "; cout << "\n";
	}
}
