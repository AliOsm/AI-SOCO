#include <bits/stdc++.h>
using namespace std;

int main() {
	int a1[] = { 0, 2, 3, 3, 2, 1, 1 };
	int a2[] = { 0, 1, 1, 2, 3, 3, 2 };
	int n, x;
	cin >> n >> x;
	++x;
	n %= 6;
	if (n == 0) {
		n = 6;
	}
	if (a1[n] == x) {
		cout << 0 << "\n";
	} else if (a2[n] == x) {
		cout << 1 << "\n";
	} else {
		cout << 2 << "\n";
	}

	return 0;
}
