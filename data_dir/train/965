#include<bits/stdc++.h>
#define MAX 500005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, t, resp;
i64 sum[MAX];
i64 suf[MAX];
i64 ans[MAX];

int main()
{
    optimiza_io
    cin >> N;
    for( i64 i = 1; i <= N; i ++ )
    {
        cin >> sum[i];
        sum[i] += sum[i - 1];
    }
    
    if( sum[N] % 3 )
    {
        cout << "0\n";
        return 0;
    }
    
    t = sum[N] / 3;
    for( i64 i = N; i >= 0; i -- )
    {
        suf[i] = sum[i] - sum[i - 1] + suf[i + 1];
        ans[i] = ans[i + 1];
        if( suf[i] == t )
            ans[i]++;
    }
    
    for( i64 i = 1; i <= N; i ++ )
        if( sum[i] == t )
            resp += ans[i + 2];
    
    cout << resp;
    return 0;
}

