#include <iostream>
#include <algorithm>
#include <string>

using namespace std;

int main()
{
	int n; cin >> n;
	string op1 = "I hate";
	string op2 = "I love";
	string ret = "";
	for(int i = 0; i < n; i++)
	{
		if(i != 0) ret += " that ";
		if(i%2==0) ret += op1;
		else ret += op2;
	}
	ret += " it";

	cout << ret << endl;
}