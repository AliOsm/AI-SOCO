#include <bits/stdc++.h>

using namespace std;
 
int main() {
  int n;
  cin>>n;
  for(int i=0;i<n*2;i++)
  cout<<' ';
  cout<<0<<endl;
for(int i=1;i<=n;i++)
{for(int j=0;j<(n-i)*2;j++)
cout<<' ';
cout<<0<<' ';
for(int j=1;j<=i;j++)
cout<<j<<' ';
for(int j=i-1;j>=1;j--)
cout<<j<<' ';
cout<<0<<endl;
    
}
for(int i=n-1;i>=1;i--)
{for(int j=0;j<(n-i)*2;j++)
cout<<' ';
cout<<0<<' ';
for(int j=1;j<=i;j++)
cout<<j<<' ';
for(int j=i-1;j>=1;j--)
cout<<j<<' ';
cout<<0<<endl;
    
}
    for(int i=0;i<n*2;i++)
  cout<<' ';
  cout<<0<<endl;
}