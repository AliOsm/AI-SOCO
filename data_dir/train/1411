#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
int main(){
	int n, k, ans;
	cin >> n >> k;
	if ( k == 1 || k == n ) ans = 3 * n;
	else {
		ans = min ( n - k, k - 1 );
		ans += n - 1 + n + n + 1;
	}
	cout << ans << endl;
	return 0;
}