#include <bits/stdc++.h>
using namespace std;

#define pb push_back
#define mk make_pair
#define fi first
#define se second
#define eb emplace_back

typedef long long ll;
typedef pair<int,int> ii;
typedef vector< pair<int,int> > vii;
const int INF = 0x3f3f3f3f;
 
int main() {
    ios_base::sync_with_stdio(false);
    int q; cin >> q;
    while(q--) {
        int x; cin >> x;
        if(x == 2) cout << 2 << endl;
        else if(x&1) cout << 1 << endl;
        else cout << 0 << endl;
    }

    
    
    return 0;
}

