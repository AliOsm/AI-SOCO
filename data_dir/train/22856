#pragma GCC optimize ("O3")
#pragma GCC target ("sse4")
#include "bits/stdc++.h"
using namespace std;
const int N = 2e5 + 5;
const int mod = 1e9 + 7;
using ll = long long ;



int main(){

  int n;
  cin >> n;
  vector<int>a(n);
  for(int i = 0; i < n; i++)cin >> a[i];

  cout << *max_element(a.begin(),a.end()) - *min_element(a.begin(),a.end()) + 1 - n << '\n';


  return 0;
}
