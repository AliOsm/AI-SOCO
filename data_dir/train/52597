#include <bits/stdc++.h>
using namespace std;

typedef long long int ll;
typedef pair <ll, ll> pll;

const int Max = 2e6 + 10;
const int Mod = 1e9 + 7;
const ll Inf = 1LL << 62;

int main() {
        ll t, n;
        cin >> t;
        while(t--) {
                cin >> n;
                if(n < 3) {
                        cout << 0 << endl;
                        continue;
                }
                ll rans = n - 1;
                ll lans = n / 2;
                lans++;
                cout << rans - lans + 1 << endl;
        }
        return 0;
}