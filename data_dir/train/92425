using namespace std;

const int N = 1e5 + 123;
const int M = 1e7 + 123;
const int inf = 1e9 + 123;
const ll INF = 1e18 + 123;
const ll MAXN = 1e10 + 123;

string a, ans;          
int n, k, j, m;

int main ()
{
	speed;
	cin >> n >> a;
	if (n % 2)
	{
	    for (int i = 0; i < n; i ++)
	    {
	        if (i % 2)
	        	ans = a[i] + ans;
	        else
	        	ans += a[i];
	    }
	}
	else 
	{
	    for (int i = 0; i < n; i ++)
	    {
	        if (i % 2 == 0)
	        	ans = a[i] + ans;
	        else
	        	ans += a[i];
	    }
	}
	cout << ans; 
}
