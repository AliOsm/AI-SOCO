#include<bits/stdc++.h>
#pragma GCC optimize ("-O3")
using namespace std;
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl "\n"
#define int long long
const int N=1e6+5;
int t,n;
int32_t main()
{
    IOS;
    cin>>t;
    while(t--)
    {
        cin>>n;
        cout<<(n-1)/2<<endl;
    }
    return 0;
}