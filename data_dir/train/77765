int32_t main()
{
 	IOS
 	int q;
 	cin>>q;
 	while (q--)
    {
        int n;
        cin>>n;
        string s;
        cin>>s;
        if (s.length()==2&&s[0]>=s[1]) cout<<"NO"<<endl;
        else
        {
            cout<<"YES"<<endl;
            cout<<2<<endl;
            for (int i=0;i<n;i++)
            {
                cout<<s[i];
                if (i==0) cout<<' ';
            }
            cout<<endl;
        }
    }
}
