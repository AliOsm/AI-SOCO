int a, b = 1, c = 2, n, x;     

int main ()
{
	speed;
	cin >> n >> x;
	if (n % 6 == 0)
	{
		cout << x;
		return 0;
	}
	if (n % 6 == 1)
	{
		if (x == 1)
			cout << 0;
		if (x == 0)
			cout << 1;
		if (x == 2)
			cout << 2;
	}
	if (n % 6 == 2)
	{
		if (x == 2)
			cout << 0;		
		if (x == 1)
			cout << 2;
		if (x == 0)
			cout << 1;
	}
	if (n % 6 == 3)
	{
		if (x == 2)
			cout << 0;
		if (x == 1)
			cout << 1;
		if (x == 0)
			cout << 2;
	}
	if (n % 6 == 4)
	{
		if (x == 2)
			cout << 1;
		if (x == 1)
			cout << 0;
		if (x == 0)
			cout << 2;
	}
	if (n % 6 == 5)
	{
		if (x == 2)
			cout << 1;
		if (x == 1)
			cout << 2;
		if (x == 0)
			cout << 0;
	}
}
