#include<iostream>
#include<bits/stdc++.h>
#include<math.h>
using namespace std;
int main()
{
    int n,v1;
    cin>>n>>v1;
    vector<int>v;
    for(int i=0;i<n;i++)
    {
        int q;
        cin>>q;
        int a[q],d=0;
        for(int j=0;j<q;j++)
        cin>>a[j];
        sort(a,a+q);
        if(v1>a[0])  
         v.push_back(i+1);
        
    }
    cout<<v.size()<<"\n";
    for(int i=0;i<v.size();i++)
     cout<<v[i]<<" ";}