#include<bits/stdc++.h>
using namespace std;
int main()
{
     long long n;
     cin >>n;
    long long z=n;
     n++;
     while(1)
     {
         long long  m=n;
           m=abs(m);
         while(m>0)
         {
             if(m%10==8)
             {
                   cout <<abs(z-n);
                   return 0;

             }
             m=m/10;
         }
         n++;

     }


}
