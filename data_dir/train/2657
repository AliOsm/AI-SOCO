#include<cstdio>
#include<iostream>
using namespace std;
int main(){
	int n;
	cin>>n;
	if(n==3){
		cout<<2<<endl;
		cout<<"1 3";
		return 0;
	}
	if(n==4){
		cout<<4<<endl;
		cout<<"3 1 4 2";
		return 0;
	}
	if(n==2)
		n--;
	cout<<n<<endl;
	for(int i=n;i>=1;i-=2)
		cout<<i<<" ";
	int t=2;
	if(n%2==0)
		t=1;
	for(int j=n-1;j>=1;j-=2)
		cout<<j<<" ";
}