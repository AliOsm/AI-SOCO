using namespace std;
ll n,m,x,y,z,w,t,d,ans,a[300100],b[300100];
string s,f[300100];
set <ll> ss;
int main(){
    ios::sync_with_stdio(0), cin.tie(0), cout.tie(0);
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>x>>y>>z>>w;
        ans=x/(y*w);
        x%=(y*w);
        ans*=(y+z);
        cout<<ans+x/(w)<<endl;
    }
    return 0;
}
