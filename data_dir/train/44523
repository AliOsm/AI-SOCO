//----------------- ------   -------
string M[505];
int main()
{
    int n; sc(n);

    for(int i = 0;i<n;++i)
        cin>>M[i];
    int ans = 0;
    for(int i = 1;i<n-1;++i)
        for(int j = 1;j<n-1;++j)
            if(M[i][j]=='X' && M[i-1][j-1] == 'X' && M[i+1][j+1] == 'X' && M[i+1][j-1] == 'X' && M[i-1][j+1] == 'X') ans++;
    cout << ans <<endl;



    return 0;
}
