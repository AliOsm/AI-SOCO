#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define ss second
#define ff first
#define pb push_back
#define mp make_pair

int main(){
    ios_base::sync_with_stdio(0);
    int t;
    cin>>t;
    while(t--){
        ll a,b;
        cin>>a>>b;
        if(min(a,b)*2<max(a,b)){cout<<"NO"<<endl;continue;}
        
        if((a+b)%3==0){cout<<"YES"<<endl;}
        else
            cout<<"NO"<<endl;
    }
    return 0;
    }
