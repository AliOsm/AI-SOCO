#include<bits/stdc++.h>

using namespace std;

#define int long long

signed main(){
	
	int t;
	cin >> t;
	
	while(t --){
		int n;
		cin >> n;
		
		if((n / 2) % 2 == 1){
			cout << "NO" << endl;
			continue;
		}
		
		cout << "YES" << endl;
		
		int a = 1000000;
		
		for(int i = 1;i <= n;i++){
			if(i % 2 == 0) cout << i << " ";
		}
		for(int i = 1;i < n - 1;i++){
			if(i % 2 == 1) cout << i << " ";
		}
		
		cout << n - 1 + n / 2 << endl;
		
	}
}