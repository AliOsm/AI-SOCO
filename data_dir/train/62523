#include<stdio.h>
char a[100005];
int main()
{
    int valid = 1; 
    int n;
    scanf("%d",&n);
    scanf("%s",&a);
    int i;
    int cnt = 0;
    int pos = -1;
int ff = 0;
    for(i=0;i<n;i++){
  if(a[i]==a[i+1]){
      if(a[i]=='?')ff = 1; else 
    return printf("No\n")*0;
  }
  else if(a[i]=='?')
    {
     if(i==0)ff = 1;
     else
    if(i==n-1)ff = 1;
    else
    if(a[i-1]==a[i+1])ff = 1;
    }
   }
if(ff)printf("Yes\n");else
printf("No\n");
}