#define y1 sda
using namespace std;    
const int N = int(3e5), mod = int(1e9)  + 7; 

string s;
int n;

int main () {
	cin >> n;
	cin >> s;
	for(int i = 0; i + 1  < n; i++){
		if(s[i] != s[i + 1]){
			cout << "Yes\n" << s[i] << s[i + 1];
			return 0;
		}
	}
	cout << "No";

return 0;
}