int n;

int main(){
	cin>>n;
	int ans=0;
	rep(i,n)rep(j,n){
		int a;
		cin>>a;
		if(i==j || i+j==n-1 || i==n/2 || j==n/2)ans+=a;
	}
	cout<<ans;
}
