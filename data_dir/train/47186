const double PI = acos(-1.0);
double eps = 1e-6;
void solve(){   
	int x, y;
	cin >> x >> y;
	if(y == 0){
		cout << "No";
		return;
	}
	if(y == 1 && x != 0){
		cout << "No";
		return;
	}
	if(y <= x + 1 && (x - y + 1) % 2 == 0) cout << "Yes";
	else cout << "No";


}	// 0 1 2 2 3 3
 
int main()
{
	Red;
	//freopen("input.txt", "r", stdin);s
	//freopen("output.txt", "r", stdin);
  	int T = 1; 
 	//cin >> T; 
  	for(int i = 1; i <= T; ++i){
  		solve();
  	}
    return 0;
}