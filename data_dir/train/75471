#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main(){
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);

  int t;
  cin >> t;
  while(t--){
    int a, b, c;
    cin >> a >> b >> c;
    int ans = 3*min(c/2,b);
    b -= (ans/3);
    ans += 3*min(b/2,a);
    cout << ans << "\n";
  }
}