#include<bits/stdc++.h>

using namespace std;

#define pb push_back
const int maxi=1e6+6;
int n;
int a[maxi];

int main()
{
   cin>>n;

   if (n%2==0)
   {
       printf("%d\n",n/2);

       for (int i=1;i<=n/2;i++)
        printf("%d ",2);
       printf("\n");
   } else
   {
       int ans=1;
       n-=3;
       ans+=n/2;
       cout<<ans<<"\n";
       cout<<"3 ";
       for (int i=1;i<=n/2;i++)
        printf("%d ",2);
       printf("\n");
   }

  return 0;
}
