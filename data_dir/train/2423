#include <bits/stdc++.h>
using namespace std;
const double EBS = 1.00;
int main()
{

    
    string s;
    int x=0 , y=0 ,ans=0 ,prex ,prey;
    bool f=0 ,t=0;
    int n;
    cin >> n;
    cin >> s;
    for(int i=0;i<s.size();++i)
    {   bool u=0,r=0;
        if(s[i]=='U'){
                u=1;
            y++;
        }
        else{
            r=1;
            x++;
        }
         if(t)
        {
            double s2=(double)y/(double)x;
            double s1=(double)prey/(double)prex;
               if( (s2>EBS && s1<EBS) || (s2<EBS &&s1>EBS))
               ans++;
            t=0;
        }
        if(x==y)
        {
            t=1;
           if(u){
            prex=x;
            prey=y-1;
           }
           else{
             prex=x-1;
            prey=y;
           }
        }

    }
    cout << ans;
    return 0;
}