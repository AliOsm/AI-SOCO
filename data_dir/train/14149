#include <bits/stdc++.h>

using namespace std;

int main()
{
    string s[6] = {"+------------------------+","|#.#.#.#.#.#.#.#.#.#.#.|D|)","|#.#.#.#.#.#.#.#.#.#.#.|.|"
    ,"|#.......................|","|#.#.#.#.#.#.#.#.#.#.#.|.|)","+------------------------+"};
    int k , i = 1 , j =1;
    cin >> k ;
    if (k >= 3) { s[3][1] = 'O' ; k-- ; }
    while(k)
    {
        if (i != 3)s[i][j] = 'O' ;
        else k++;
        i ++;
        if (i > 4) {i = 1 ; j+=2 ;}
        k-- ;
    }
    for (int i = 0 ; i<6 ;i++) cout << s[i] << "\n";
}
