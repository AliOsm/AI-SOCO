using namespace std;

typedef long long ll;
typedef unsigned long long ull;

const int N = 1000005, M = 1005;
const ll MOD = 1e9 + 7;
const double eps = 1e-9;
const double PI = acos(-1.0);

int mod = 998244353;
int w, h;

int main() {
#ifndef ONLINE_JUDGE
	freopen("input.in", "r", stdin);
#endif
	scanf("%d%d", &w, &h);
	w += h;
	w -= 2;
	int ans = 4;
	while (w--) {
		ans = (1ll * ans * 2) % mod;
	}
	printf("%d\n", ans);
	return 0;
}