#include<bits/stdc++.h>
#define pb push_back
#define adelkhah main
#define int long long
//#define int long long
using namespace std;
typedef long double ld;
typedef pair<int,int> pii;
int32_t adelkhah()
{
    int a,b,ab; cin >> a >> b >> ab;
    int ans = 0;
    ans += min(a,b); ans *=2;
    ans += 2 * ab;
    if(a == b) return cout << ans,0;
    cout << ++ans;
}
