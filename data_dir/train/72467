#include <bits/stdc++.h>
using namespace std;

int n, k;
vector<int> arr;

int main (int argc, char *argv[])
{
	scanf("%d%d", &n, &k);
	arr.resize(n);
	int mx = -int(2e9),
		mn = int(2e9);
	for(int i = 0; i < n; ++i) {
		scanf("%d", &arr[i]);
		mx = max(mx, arr[i]);
		mn = min(mn, arr[i]);
	}
	if(k == 1) {
		printf("%d", mn);
	} else if(k == 2) {
		vector<int> new_arr(n);
		for(int i = 0; i < n; ++i) {
			new_arr[i] = arr[i];
		}
		for(int i = 1; i < n; ++i) {
			arr[i] = min(arr[i], arr[i - 1]);
		}
		for(int i = n - 2; i >= 0; --i) {
			new_arr[i] = min(new_arr[i], new_arr[i + 1]);
		}
		int ans = -int(2e9);
		for(int i = 0; i + 1 < n; ++i) {
			ans = max(ans, max(arr[i], new_arr[i + 1]));
		}
		printf("%d", ans);
	} else {
		printf("%d", mx);
	}

	return 0;
}

