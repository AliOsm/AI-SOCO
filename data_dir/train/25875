#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef pair<int, int> pi;


int main() {
  ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
  
  ll n;
  cin >> n;
  if (n == 1)
    cout << -1 << endl;
  else  if (n%2==0)
    cout << n << " " << 3*n << " " <<3*(n/2) << endl;
  else
    cout << n << " " << n+1 << " " << n*(n+1) << endl;
  return 0;
}

