}
int getrand()
{
    srand(time(0));
    int x = rand();
    while(x -- > 0)
        rand();
    return rand() % 732 + 1;
}
main()
{
    int a, b, c;
    cin >> a >> b >> c;
    cout << 7 * min(a, min(b / 2, c / 4));
}


