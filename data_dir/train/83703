/* Every circle of size x is cut x-1 times in the end.
 * So ans is parity of sum(a)
 */
void solve() {
    cini(n);
    int sum=0;
    for(int i=0; i<n; i++) {
        cini(aux);
        sum^=((aux-1)&1);
        if(sum)
            cout<<1<<endl;
        else
            cout<<2<<endl;
    }

}

int main() {
    cin.tie(nullptr);
    std::ios::sync_with_stdio(false);
        solve();
}

