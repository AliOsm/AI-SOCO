#include<bits/stdc++.h>

#define SZ(x) ((int(x.size())))

typedef long long ll;
typedef long double ld;

using namespace std;

int m, n;

int main()
{
    cin >> n >> m;
    if (n == 1)
        cout << 1;
    else
    {
        if (m <= n / 2)
            cout << m + 1;
        else
            cout << m - 1;
    }
	return 0;
}
