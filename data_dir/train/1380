#include <bits/stdc++.h>

using namespace std;

#define pb push_back
#define mp make_pair
#define ll long long

int main()
{
    int a,b,k;
    cin>>a>>b>>k;
    long long ans=0;
    while (k--)
    {
        ans+=2*b+2*a-4;
        a-=4; b-=4;
    }
    cout<<ans;
    return 0;
}
