#include <bits/stdc++.h>
#define fi first
#define se second
#define mp make_pair
#define mt make_tuple
#define pb push_back
#define eb emplace_back
#define emp emplace

/* PRESS F TO PAY RESPECTS */

using namespace std;
using ll = long long;
using ii = pair<int, int>;

int main()
{
	int n;
	scanf("%d", &n);
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n; j++)
		{
			int cnt = ((i%2 == 0) + (j%2 == 0))%2;
			if (cnt)
				printf("W");
			else
				printf("B");
		}
		printf("\n");
	}
	return 0;
}

