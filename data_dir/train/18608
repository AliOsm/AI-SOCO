#include<iostream>
#include <bits/stdc++.h>
#define ll long long
#define IO ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
using namespace std;
int t ;
ll a, b, x, y;
int main()
{
    IO
    cin>>t;
    while(t--)
    {
        cin>>x>>y>>a>>b;
        ll ans1=abs(x-y)*a+min(x,y)*b;
        ll ans2=(x+y)*a;
        cout<<min(ans1,ans2)<<"\n";
    }
    return 0 ;
}
