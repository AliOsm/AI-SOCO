#include <bits/stdc++.h>

using namespace std;

int main()
{
    //freopen("in.txt", "r", stdin);
    int n;
    scanf("%d", &n);
    int arr[n];
    for(int i=0; i<n; i++) scanf("%d", &arr[i]);
    if(n % 2 == 1){
        if((arr[0] % 2 == 1) && (arr[n-1] % 2 == 1)) cout << "YES";
        else cout << "NO";
    }
    else {
        /*if((arr[0] % 2 == 1) && (arr[n-1] % 2 == 1)) cout << "YES";
        else {
            bool f = false;
            for(int i=0; i<n; i+=2){
                if((arr[i] % 2 == 1) && (arr[i+1] % 2 == 1)) f = true;
            }
            if(f) cout << "YES";
            else cout << "NO";
        }*/
        cout << "NO";
    }
}
