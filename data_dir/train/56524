#define trace1(x)                cerr<<#x<<": "<<x<<endl
#define trace2(x, y)             cerr<<#x<<": "<<x<<" | "<<#y<<": "<<y<<endl
#define trace3(x, y, z)          cerr<<#x<<":" <<x<<" | "<<#y<<": "<<y<<" | "<<#z<<": "<<z<<endl
#define trace4(a, b, c, d)       cerr<<#a<<": "<<a<<" | "<<#b<<": "<<b<<" | "<<#c<<": "<<c<<" | "<<#d<<": "<<d<<endl
#define trace5(a, b, c, d, e)    cerr<<#a<<": "<<a<<" | "<<#b<<": "<<b<<" | "<<#c<<": "<<c<<" | "<<#d<<": "<<d<<" | "<<#e<< ": "<<e<<endl
#define trace6(a, b, c, d, e, f) cerr<<#a<<": "<<a<<" | "<<#b<<": "<<b<<" | "<<#c<<": "<<c<<" | "<<#d<<": "<<d<<" | "<<#e<< ": "<<e<<" | "<<#f<<": "<<f<<endl

const int N=1e5+5;
vi adj[N];
int color[N];
int n;
bool flag;

void dfs(int node,int pt,int req)
{
    flag=flag and (color[node]==req);
    for(int i=0;i<adj[node].size();i++)
    {
        if(adj[node][i]!=pt)
            dfs(adj[node][i],node,req);
    }
}

bool solve(int node)
{
    bool ans=true;
    for(int i=0;i<adj[node].size();i++)
    {
        flag=true;
        dfs(adj[node][i],node,color[adj[node][i]]);
        ans=ans and flag;
    }
    return ans;
}

int32_t main()
{
    fast;
    cin>>n;
    for(int i=1;i<n;i++)
    {
        int u,v;cin>>u>>v;
        adj[u].pb(v);
        adj[v].pb(u);
    }

    bool chk=true;
    for(int i=1;i<=n;i++)
    {
        cin>>color[i];
        if(i!=1 and color[i]!=color[i-1])
            chk=false;
    }

    if(chk)
    {
        cout<<"YES"<<endl<<1;
        return 0;
    }

    int pehla,doosra;
    for(int i=1;i<=n;i++)
    {
        for(int j=0;j<adj[i].size();j++)
        {
            if(color[i]!=color[adj[i][j]])
            {
                pehla=i;
                doosra=adj[i][j];
            }
        }
    }

    bool chk1=solve(pehla);
    bool chk2=solve(doosra);
    if(chk1)
        cout<<"YES"<<endl<<pehla;
    else if(chk2)
        cout<<"YES"<<endl<<doosra;
    else
        cout<<"NO";
}