#include<bits/stdc++.h>
using namespace std;
const int inf = 1000000001;
const int MOD = 1000000007;
typedef long long Int;
#define FOR(i,a,b) for(int i=(a); i<=(b);++i)
#define mp make_pair
#define pb push_back
#define sz(s) (int)((s).size())

long double binpw(long double x, int times) {
    long double ans = 1;
    while(times) {
        if(times&1) ans*=x;
        x*=x;
        times/=2;
    }
    return ans;
}

int main() {
    //freopen("input.txt", "r", stdin);//freopen("output.txt", "w", stdout);
    Int n;cin>>n;
    cout<<1+6*((n)*(n+1)/2)<<endl;
    //printf("%.10lf\n", (double)(ans*binpw(1.000000011, t)));
}
