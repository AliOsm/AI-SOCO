int ar[100500];

int main() {
	cin.sync_with_stdio(false);
	cin.tie(0);
	//freopen("input.txt", "r", stdin);freopen("output.txt", "w", stdout);
	//freopen("ufo.in", "r", stdin);freopen("ufo.out", "w", stdout);
	int n;
	cin >> n;
	forn(i, n)
		cin >> ar[i];
	sort(ar, ar +n);
	int mn = 0;
	int ans= 0;
	forn(i, n) {
		for (; ar[i] <= mn; ++ar[i], ++ans);
		mn = ar[i];
	}
	cout << ans;

	return 0;
}