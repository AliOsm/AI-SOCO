#define FOR(i,a,b) for(int i=a;i<b;i++)
#define FOR1(i,a,b) for(int i=a;i>=b;i--)
#define sc(n) scanf("%d",&n)
#define sc2(n,m) scanf("%d %d",&n,&m)
#define scp() scanf("\n")

int min(int x,int y)
{
    return (x<y)?x:y;
}
int max(int x,int y)
{
    return (x>y)?x:y;
}


int main()
{
    ios_base::sync_with_stdio(0);
    
    int n;
    sc(n);

    FOR(i,0,n/4)cout<<"abcd";
    FOR(i,0,n%4)cout<<(char)(i+97);
    
    //_getch();
    return 0;
}