#include <bits/stdc++.h>

using namespace std;

void test_case() {
    int n;
    cin >> n;
    if (n % 2 == 1) {
        cout << 7;
        n -= 3;
    }
    cout << string(n / 2 , '1');
}

int main() {
    ios::sync_with_stdio(0) , cin.tie(0) , cout.tie(0);

    int t;
    cin >> t;
    while (t--)  {
        test_case();
        cout << '\n';
    }
}