#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef long double ld;
#define pb push_back
#define endl "\n"



int main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    ll a, b;
    cin >> a >> b;
    ll mid = (a+b)>>1;
    ll ans = (abs(a-mid)*(abs(a-mid)+1))/2 + (abs(b-mid)*(abs(b-mid)+1))/2;
    cout << ans;

}
