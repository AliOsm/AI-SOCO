#include<bits/stdc++.h>
#define pb push_back
#define adelkhah main
//#define int long long
using namespace std;
typedef long long ll;
typedef long double ld;
typedef pair<int,int> pii;
int32_t adelkhah()
{
    int n; cin >> n; int x; cin >> x;
    int a[n]; for(int i =0 ; i < n; i++) cin >> a[i];
    int sum = 0;
    for(int i = 0; i < n; i++) sum += a[i];
    if(sum == 0) cout << 0;
    else{
        sum = abs(sum);
        if(sum % x == 0){
            cout << sum/x;
        }
        if(sum % x != 0){
            cout << sum/x + 1;
        }
    }

}
