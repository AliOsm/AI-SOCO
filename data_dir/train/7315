#include<bits/stdc++.h>

using namespace std;

#define endl "\n"
#define all(x) x.begin(),x.end()
#define rall(x) x.rbegin(),x.rend()

typedef long long ll;
typedef long double ld;



int main(){
	ios_base::sync_with_stdio(0);
//	cin.tie(0);
//	srand(time(0));
	ll x1,y1,x2,y2;
	cin>>x1>>y1>>x2>>y2;
	cout<<max(abs(x2-x1),abs(y2-y1))<<endl;
	return 0;
}








