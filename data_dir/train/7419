#include<bits/stdc++.h>
#define ll long long
#define llu unsigned long long

using namespace std;

int main()
{
    ll n;
    cin>>n;
    if(n<=2) printf("-1");
    else if(n%2==0)
    {
         n=n*n/4;
         cout<<n-1<<" "<<n+1;
    }
    else
    {
        n=n*n;
        n/=2;
        cout<<n<<" "<<n+1;
    }
 return 0;
}
