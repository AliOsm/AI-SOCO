#define re return(0);
#define ce continue;
typedef long long ll;
typedef long double ld;
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <cstring>
#include <set>
#include <iomanip>
#include <fstream>
#include <stack>
using namespace std;
double const pi=3.1415926536;
int main()
{
	int n;
	cin>>n;
	int a[n];
	for(int i=0;i<n;i++)
	cin>>a[i];
	sort(a,a+n);
	int max=0,mini=0,s=1;
	for(int i=1;i<n && mini<n;i++)
	{
		if(a[i]-a[mini]<=5)
		s++;
		else
		{
			if(s>max)
			max=s;
			s--;
			mini++;
			i--;
		}
	}
	if(s>max)
	max=s;
	cout<<max;
}


