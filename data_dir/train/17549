#include <iostream>
using namespace std;

int main()
{
    int n,m,i;
    cin>>n>>m;
    if(n==m){
        int k=min(n+1,m+1);
        cout<<k<<endl;
        for(i=0;i<k;i++){
            cout<<n-i<<" "<<i<<endl;
        }
        return 0;
    }
    int k=min(n+1,m+1);
    cout<<k<<endl;
    for(i=0;i<k;i++){
        if(n>m)
            cout<<i+1<<" "<<i<<endl;
        else
            cout<<i<<" "<<i+1<<endl;
    }
    return 0;
}
