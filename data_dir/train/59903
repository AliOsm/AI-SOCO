#include<bits/stdc++.h>
#define pb push_back
#define mp make_pair
const int INF = 1e9+7;
const int MAXN = 5e5 + 20;
const double eps = 1e-9;
const long long inf = 1e18;
using namespace std;


void solve(){
	long long x,y;
	cin>>x>>y;
	if (x % 2 == y  % 2)
	{
		cout<<"YES"<<endl;
		return;
	}
	if (x - y > 1)
	{
		cout<<"YES"<<endl;
		return;
	}
	cout<<"NO"<<endl;
	
}

int main(){
	ios::sync_with_stdio(NULL), cin.tie(0), cout.tie(0);
	cout.setf(ios::fixed), cout.precision(8);
//	freopen("kotlin.in", "r", stdin);
//	freopen("kotlin.out", "w", stdout);
 
	 int q;
	 cin>>q;
	 
	 while (q > 0){
	 	q--;
	 	solve();
	 }


}
