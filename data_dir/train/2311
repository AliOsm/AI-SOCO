/*************************************************/
ll n,m,i,j,ql,qr,sr,ans,qx[600005],op,x,y,sb,sk,b,k,px[600005],py[600005],cnt;
long double one=1,eps=1e-6;
long double crs(ll x,ll y,ll xx,ll yy)
{
	return one*x*yy-one*y*xx;
}
long double crs(ll x,ll y,ll z)
{
	return crs(px[y]-px[x],py[y]-py[x],px[z]-px[x],py[z]-py[x]);
}
ll calc(ll x)
{
	return px[x]*sk+py[x]+sb;
}
void push(ll x)
{
	cnt++;px[cnt]=x;py[cnt]=-sk*x-sb;
	while (ql<qr&&crs(qx[qr-1],qx[qr],cnt)<eps) qr--;
	qx[++qr]=cnt;
}
int main()
{
	qx[ql=qr=1]=1;px[1]=py[1]=0;cnt=1;
	read(sr);
	read(m);
	while (m--)
	{
		read(op);
		if (op==1){
			read(x);
			qx[ql=qr=1]=1;
			px[1]=0;py[1]=0;cnt=1;sr+=x;
			sk=sb=0;
		}
		if (op==2){
			read(x);
			push(sr);sr+=x;
		}
		if (op==3){
			read(b);read(k);
			sk+=k;sb+=b;
		}
		while (ql<qr&&calc(qx[qr])>=calc(qx[qr-1])) qr--;
		printf("%I64d %I64d\n",px[qx[qr]]+1,calc(qx[qr])); 
	}
	return 0;
}////