#include <bits/stdc++.h>
using namespace std;

inline int in() { int x; scanf("%d", &x); return x; }
const int N = 2000002;

int dp[N], a[N];

int main()
{
	int n = in();
	for(int i = 0; i < n; i++)
		dp[a[i] = in()]++;
	int ans = 0;
	for(int i = 1e6; i; i--)
	{
		int mx = 0;
		for(int j = i + i; j < N; j += i)
			mx = max(mx, dp[j]);
		ans = max(ans, dp[i] += mx);
	}
	cout << ans << endl;
}
