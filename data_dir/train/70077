#include <bits/stdc++.h>
const bool unsyncedio=std::ios::sync_with_stdio(false);
using namespace std;
typedef unsigned int uint;
typedef long long ll;

#define fori(n) for(ll i=0; i<(n); i++)
#define forn(i, n) for(ll (i)=0; (i)<(n); (i)++)

int main() {
int n, m;
    cin>>n>>m;

    int ans;
    if(m>=n)
        ans=0;
    else
        ans=max(1, min(m, min(n-m, n/2)));
    cout<<ans<<endl;
}

