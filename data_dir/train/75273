using namespace std;
 

 
 
int main()
{
	long long ab, bc, ac;
	cin >> ab >> bc >> ac;
	long long a = ab * ac / bc;
	a = sqrt(a);
	long long b = ab / a;
	long long c = bc / b;
	cout << (a + b + c) * 4 << endl;
 
 
}