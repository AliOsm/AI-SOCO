#include <bits/stdc++.h>
#define ll long long
ll a,l,r,a1,b1,c1,b,c,d,p[100000],k,n;
using namespace std;
int main()
{ ios_base::sync_with_stdio(0);
 cin.tie(NULL);
 cout.tie(NULL);
 cin>>n>>k;
 for (int i=1;i<=n;i++)
 {
 cin>>p[i];
 if (k==i) a=p[i];
 }
 for (int i=1;i<=n;i++)
 {
     if (p[i]>=a && p[i]>0) l++; else break; 
 }
 cout<<l;
}
