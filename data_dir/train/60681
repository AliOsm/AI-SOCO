typedef unsigned long long ull;
typedef long long ll;
int dx8[] = { 0, 0, 1, -1, 1, -1, 1, -1 };
int dy8[] = { -1, 1, 0, 0, -1, -1, 1, 1 };
int dy[] = { 1, -1, 0, 0 };
int dx[] = { 0, 0, 1, -1 };
int X[6] = { 0, 0, 0, -1, 0, 1 };
int Y[6] = { 0, 0, -1, 0, 1, 0 };
int Z[6] = { 1, -1, 0, 0, 0, 0 };
// start + (end - start) / 2;

#define OO ll(1e18)
#define mod ll(1000000007)


int main() {
	int n;
	cin >> n;
	map<int, ll>mp;
	for (int i = 0; i < n;i++) {
		int a;
		cin >> a;
		mp[a]++;
	}
	ll ans = 0;
	for (map<int, ll>::iterator it = mp.begin();it != mp.end();it++) {
		if ((*it).first > 0) {
			ans += ll((*it).second*mp[-(*it).first]);
		}
		else if ((*it).first == 0) {
			ans += ll(((*it).second - 1)*	(*it).second / 2);
		}
	}
	cout << ans << "\n";
}