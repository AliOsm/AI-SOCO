#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;

class ALinksAndPearls {
public:
	void solve(std::istream& in, std::ostream& out) {
		string s; in>>s;
		int n = s.length();
		int cnt = 0;
		for(char c: s) if(c == '-') ++cnt;
		int os = n-cnt;
		if(os == 0 or cnt%os==0) out<<"YES";
		else out<<"NO";

	}
};


int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	ALinksAndPearls solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
