#include<bits/stdc++.h>

using namespace std;

const int N = 2000000;
const int nn = 2000;

long long b[N],c[N],n, a[N],x,k,m,z, e[nn][nn];
double d[N];
pair<long long, long long> p[N];
pair<string, string> S;
vector<long long> v;
unordered_map<string,string> mp;
string s,t;
char ch;

int main(){
    cin>>n;
    cout<<(n%2?(n-1)*n/2+(n+1)/2:n*n/2)<<endl;
    for(int i=0; i<n; i++) {
        for(int j=0; j<n; j++) cout<<(i%2==j%2 ? 'C':'.');
        cout<<endl;
    }
    return 0;
}