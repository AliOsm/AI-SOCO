#include<stdlib.h>
#include<stdio.h>
#include<math.h>
#include<cstring>
#include<iostream>
#include<algorithm>
using namespace std;
int n,a,b,c;
int main()
{
	scanf("%d",&n);
	for(int i=1;i<=n;i++)
	  scanf("%d",&a),b+=(a<2),c+=(a>1);
	return printf("%d\n",min(b,c)+max(b-c,0)/3),0;
}
