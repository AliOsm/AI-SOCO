// rc.cpp : Defines the entry point for the console application.
//

#include <math.h>

#include <set>
#include <list>
#include <cmath>
#include <ctime>
#include <map>
#include <deque>
#include <queue>
#include <stack>
#include <string>
#include <bitset>
#include <cstdio>
#include <limits>
#include <vector>
#include <climits>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <numeric>
#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>
#include <functional>
#include <iomanip>
#include <iterator>
#include <regex>

using namespace std;

#define PI 3.14159265358979323846
#define EPS 1.E-8

#define FIN(a, n) { for (ul _ = 0; _ < n; ++_) cin >> (a)[_]; }
#define FOUT(a, n) { cout << a[0]; for (ul _ = 1; _ < n; ++_) cout << ' ' << a[_]; cout << '\n'; }

typedef unsigned char uc;
typedef unsigned int ui;
typedef unsigned long long ul;
typedef long long sl;

sl a[100000], t[100000];

int main(int argc, char* argv[])
{
    ios_base::sync_with_stdio(false);

    ui n, k;
    cin >> n >> k;

    for (ui i = 0; i < n; ++i)
        cin >> a[i];

    sl ca = 0;
    for (ui i = 0; i < n; ++i) {
        cin >> t[i];
        if (t[i])
            ca += a[i];
    }

    sl ct = 0, mx = ca;
    for (ui i = 0; i < n; ++i) {
        if (i >= k) {
            if (!t[i - k])
                ct -= a[i - k];
        }

        if (!t[i])
            ct += a[i];

        if (ca + ct > mx)
            mx = ca + ct;
    }

    cout << mx << endl;
    return 0;
}
