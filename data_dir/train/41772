#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define pb push_back
#define f first
#define s second
#define y1 bbp
#define sz size()
using namespace std;
int const N=1e6+4,inf=1e9+7,NN=2e5+1;ll const md=998244353;
ll n,k,ans,y1,x1,qq,m,b[N],a[N];
vector <pair<ll,ll> > v[N];
bool us[1003][1005];
string s,t;
char ch;
set <ll> st;
main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    cin>>n>>s;
    for (int i=0;i<n;i+=2)
    {
        if (s[i]==s[i+1])
        {
            if (s[i]=='b') s[i]='a'; else s[i]='b';qq++;
        }
    }
    cout<<qq<<endl<<s;
    return 0;
}
