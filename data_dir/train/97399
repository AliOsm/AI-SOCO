#include <bits/stdc++.h>
using namespace std;
#define FAST ios_base:: sync_with_stdio(false),cin.tie(0),cout.tie(0);
typedef long long ll;

int main()
{
   
   ll l;
   cin>>l;
   string a;
   vector<char> b;
   cin>>a;
   
   for(ll i=0;i<l-1;i++)
   {
       if(a[i]==a[i+1])
       {}
       else
       {
           b.push_back(a[i]);
           b.push_back(a[i+1]);
           i++;
       }
   }
      ll l1=b.size();
      cout<<l-l1<<endl;
       for(auto X:b)
         cout<<X;

   
   
   	return 0;
}