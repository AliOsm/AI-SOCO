#include <iostream>
#include <bits/stdc++.h>

using namespace std;

int n;  string s;

int main()
{
    int Answer = 0;
    cin>>n>>s;
    for(int i=0;i<n;i++){
        if(s[i]=='+')  Answer++;
        else {
            if(Answer)  Answer--;
        }
    }
    cout<<Answer;
    return 0;
}
