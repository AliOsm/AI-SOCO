#include <bits/stdc++.h>
#define fast ios_base::sync_with_stdio(0);cin.tie(NULL);cout.tie(NULL)
#define ll long long int
using namespace std;
const int N= 2 * 1e6 + 10;
const ll inf = 1e18;


int main(){
  fast;
  ll n, m;
  cin >> n >> m;
  cout << min(n + 1, m + 1) << "\n";
  if(m <= n){
    for(int i = m, j = 0; i >= 0; i--, j++){
      cout << j << " " << i << "\n";
    }
  }
  else{
    for(int i = n, j = 0; i >= 0; i-- , j++){
      cout << i << "  " << j << "\n";
    }
  }

  return 0;
}