#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
const ll N=3e5 + 5;
const ll MOD=1e9+7;
ll ans[]={0,1,0,3,0,15,0,133,0,2025,0,37851,0,1030367,0,36362925,0,1606008513,0};
int main(){
    ios_base:: sync_with_stdio(false);
    cin.tie(NULL); cout.tie(NULL);
    ll n,val=1;cin>>n;
    for(ll i=1;i<=n;i++)val=(val*i)%MOD;
    cout<<(ans[n]*val)%MOD;
}


