int solve()
{  

	int N, X;
	std::cin >> N >> X;

	// 2*i-1
	// i = 1  : 1
	// i = 2  : 3
	// i = 3  : 5
	// i = 4  : 7
	// i = 5  : 9
	//....
	// all odd numbers

	// x-e  even number
	// 2*x
	std::cout << X * 2 << '\n';
	return 0;
}
