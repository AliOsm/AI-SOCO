#include<bits/stdc++.h>

using namespace std;

const int maxn = 2e5;
#define ll long long
int test;
string s;
int n , k;

int main()
{
    scanf("%d",&test);
    while(test--){
        scanf("%d%d",&n,&k);
        s = "";
        while(1){
            for(int i = 0; i<k; i++){
                char a = 'a'+i;
                s+=a;
                n--;
                if(!n)break;
            }
            if(!n)break;
        }
        cout << s << endl;
    }
    return 0;
}
