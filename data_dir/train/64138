using namespace std;
//ll solve(ll n){return (n*(n+1))/2;}
ll cnt[(int)1e6];
int main()
{


    time;
    ll n;
    cin>>n;

    vector<ll>m,m2(n,0);
    for (int i=0;i<n;i++)
    {
        ll x;
        cin>>x;
        m.push_back(x);

    }
    ll s=0;
    ll e=n-1;
    while(s<=e)
    {
        m2[s]=s+1;
        m2[e]=s+1;
        s++;
        e--;
    }

    ll maxi=0;
    for (int i=0;i<n;i++)
    {
     if (m[i]>=m2[i]){cnt[m[i]-m2[i]]++;maxi=max(cnt[m[i]-m2[i]],maxi);}

    }
    cout<<n-maxi<<endl;
    return 0;
}
