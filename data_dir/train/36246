#include <bits/stdc++.h>
#define f first
#define s second
#define MOD 1000000007
#define BASE 29
#define pb push_back
#define EPS 1e-6
#define MAX 2
#define PI 3.1415926535897932

using namespace std;
typedef long long ll;
typedef pair<int,int> pii;
typedef pair<ll,ll> pll;

const int N = 200002;

using namespace std;

long double getTan(long double x) {
    return sin(x);
}

int main()
{
    long double n,r;
    cin>>n>>r;
    cout<<fixed<<setprecision(10)<<r * getTan(PI/n) / (1-getTan(PI/n));
    return 0;
}
