inline void read(register int *n) {
	register char c; *n = 0;
	do { c = getchar(); } while (c < '0' || c > '9');
	do { *n = c-'0'+*n*10; c = getchar(); } while (c >= '0' && c <= '9');
}

int main() {
	int k, a, b;
	cin >> k >> a >> b;
	string s;
	cin >> s;
	if (Size(s) < k*a || Size(s) > k*b) {
		cout << "No solution" << endl;
		return 0;
	}
	int rem = Size(s)-k*a;
	FOR(i, 0, k) {
		int take = min(rem, b-a)+a;
		rem -= min(rem, b-a);
		cout << s.substr(0, take) << endl;
		s = s.substr(take);
	}
	return 0;
}
