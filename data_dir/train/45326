using namespace std;    
const int N = int(3e5), mod = int(1e9)  + 7; 

int n;
vi v;


int main () {
	cin >> n;
	if(n & 1){
		n -= 3;
		cout << 1 + n / 2 << endl;
		cout << 3 << " ";
		
	}
	else{
		cout << n / 2 << endl;
	}
	for(int i = 0; i < n / 2; i++){
			cout << 2 << " ";
		}
return 0;
}