#include<bits/stdc++.h>
#define ll long long
#define pb push_back
using namespace std;
int main()
{
        int t; cin>>t;
        while(t--)
        {
            ll n,k;
            cin>>n>>k;
            ll ans=0;
            while(n>0){
                ans+=n%k;
                n/=k;
                if(n)
                ans++;
            }
            cout<<ans<<"\n";
        }
      return 0;
}
