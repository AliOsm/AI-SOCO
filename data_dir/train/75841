#include <iostream>
using namespace std;

int main() {
    cout << 2001 << endl;
    for(int i = 1; i <= 1000; i++) {
        cout << i << " " << 1 << " " << i << " " << 2 << endl;
    }
    cout << "1 1 1 2" << endl;
    for(int i = 1; i <= 1000; i++) {
        cout << i << " " << 1 << " " << i << " " << 2 << endl;
    }
    return 0;
}