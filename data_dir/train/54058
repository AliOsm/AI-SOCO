const int N = 1000*1000 + 123;
const int INF = 1000*1000*1000 + 123;

int n,p;

int price[N];
int val[N];
int p_max[N];


int main() {
    int l,r,a;
    cin >> l >> r >> a;

    if(l > r) swap(l,r);

    int dif = r-l;
    if( a <= dif){
        cout << 2*(l+a) << endl;
    }
    else{
        cout << 2*(r+ (a-dif)/2) << endl;
    }

    return 0;
}

