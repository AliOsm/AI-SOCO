#include<bits/stdc++.h>

using namespace std;

int main(){
	ios::sync_with_stdio(false);
	int n;
	cin>>n;
	if(n<6) cout<<-1<<endl;
	else {
		cout<<"1 2\n2 3\n2 4\n4 5\n4 6\n";
		for(int i=7; i<=n; ++i) 
			cout<<"2 "<<i<<endl;
	}	
	for(int i=1; i<n; ++i)
		cout<<i<<" "<<i+1<<endl;
	return 0;
}