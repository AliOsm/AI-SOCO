#include<bits/stdc++.h>
#define int long long
using namespace std;
signed main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    long double n,m,ans;cin>>n>>m;
    ans=n;
    for(long double i=1;i<n;i++)
    {
        ans-=pow(i/n,m);
    }
    cout<<setprecision(15)<<fixed<<ans;
    
}