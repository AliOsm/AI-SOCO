#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
#define what_is(x) cerr << #x << " is " << x << endl;
#define pii pair < int , int >
#define fi first
#define se second
using namespace std;
typedef long long ll;

int T, N;

int main()
{
    optimiza_io
    cin >> T;
    while( T -- ) {
        cin >> N;
        vector < int > el[2];
        for(int i = 1; i <= N; i ++) {
            int x;
            cin >> x;
            el[x & 1].push_back( i );
        }
        if( el[0].size() > 0 ) 
            cout << "1\n" << el[0][0] << "\n"; 
        else if( el[1].size() > 1 ) 
            cout << "2\n" << el[1][0] << " " << el[1][1] << "\n";
        else
            cout << "-1\n";
    }
    return 0;
}

