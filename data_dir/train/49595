int32_t main() {
    kchay;
    int y, b, r, mn;
    cin >> y >> b >> r;
    if(b == r)b--;
    y = min({y, b - 1, r - 2});
    mn = min({y, b, r});
    if(mn < 0)return cout << 0, 0;
    if(r == mn) {
        if(mn < 2)cout << 0;
            else cout << mn * 3 - 3;
    } elif(b == mn) {
        if(mn < 1)cout << 0;
            else cout << 3 * mn;
    } else {
        cout << mn * 3 + 3;
    }
    
    return 0;
}