tree<T, null_type, less<T>, rb_tree_tag, tree_order_statistics_node_update>;

const double EPS = 1e-9;
const double pi = acos(-1.0);

int main() {
#ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
#endif
    ios::sync_with_stdio(0) , cin.tie(0);
    int n;
    cin >> n;
    int ans = 0;
    for(int i = 0 ; i < n ; ++i){
        int x , y;
        cin >> x >> y;
        ans = max(ans , y + x);
    }
    cout << ans << '\n';
}
