#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    string s;
    cin>>s;
    ll ans=0;
    for(int i=0;i<s.size();i++){
        if(s[i]=='a')ans++;
    }
    ll x=s.size();
    if(2*ans>s.size())cout<<x;
    else cout<<2*ans-1;
    return 0;
}