#include<bits/stdc++.h>
using namespace std;

#define ll long long

int main()
{
//    freopen("a.in","r",stdin);
    ll t,n,a,b,maxL,minR;
    cin>>t;
    while(t--)
    {
        maxL=0;minR=1e10;
        cin>>n;
        while(n--)
        {
            cin>>a>>b;
            maxL=max(maxL,a);
            minR=min(minR,b);
        }
        cout<<max((ll)0,maxL-minR)<<endl;
    }


}
