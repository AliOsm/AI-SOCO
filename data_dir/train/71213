#include <iostream>
#include <cmath>
using namespace std;

int main() {
int a,b,c,ans;
cin >> a >> b >> c;
int m=a+c+b;
int n=a+a+b+b;
int x=a+c+c+a;
int y=b+c+c+b;
if (x<=y && x<=m && x<=n)ans=x;
if (y<=x && y<=m && y<=n)ans=y;
if (m<=y && m<=x && m<=n)ans=m;
if (n<=y && n<=m && n<=x)ans=n;
cout << ans;
    return 0;
}