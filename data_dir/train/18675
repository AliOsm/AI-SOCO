#include <iostream>

using namespace std;

int main()
{
    int x, r;
    cin>>x;
    r = x % 4;
    if (r == 1)
        cout<<"0 A\n";
    else
    if (r == 2)
        cout<<"1 B\n";
    else
    if (r == 3)
        cout<<"2 A\n";
    else
        cout<<"1 A\n";
    return 0;
}
