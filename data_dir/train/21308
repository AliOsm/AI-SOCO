#include <bits/stdc++.h>
#define VI vector<int>
#define pb push_back
#define mp make_pair
#define pii pair<int,int>
#define LL long long
using namespace std;
int main(){
	int t;
	LL n;
	scanf("%d", &t);
	while(t--){
		scanf("%lld", &n);
		n /= 2;
		printf("%lld\n", 8 * n * (n+1)* (2*n + 1)/6);
	}
	return 0;
}