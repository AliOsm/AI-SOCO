#include <bits/stdc++.h>
#define ll long long
#define ld long double
using namespace std;
ll n,a[1005];
int main()
{
    cin >> n;
    for(int i=0;i<n;i++)
    {
        cin >> a[i];
        if(a[i]%2==0)
            a[i]--;
    }
    for(int i=0;i<n;i++)
        cout << a[i]<< ' ' ;
    cout << endl;
    return 0;
}
