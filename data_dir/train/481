#include <bits/stdc++.h>

using namespace std;

#define ll long long
#define ull unsigned long long
#define sz(a) ((int)(a).size())
#define all(n) (n).begin(),(n).end()
#define EPS 1e-9
#define OO 1e9

int dx[] = { 0, 0, -1, 1 };
int dy[] = { 1, -1, 0, 0 };

int main() {
	int n, m;
	scanf("%d %d", &n, &m);
	if (abs(m - n) <= 1 && m + n > 0)
		puts("YES");
	else
		puts("NO");
}
