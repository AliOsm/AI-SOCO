#include<bits/stdc++.h>
using namespace std;

int main()
{string x;
cin>>x;int sum=0;if(x[0]=='4')
{cout<<"NO";return 0;}
  for(int i=0;i<x.size();i++)
  {if(x[i]!='1'&&x[i]!='4')
  {
      cout<<"NO";return 0;
  }
  if(x[i]=='1')
  sum=0;
  if(x[i]=='4')
  sum++;
      if(sum==3)
      {cout<<"NO";return 0;}
  }
  cout<<"YES";
}
