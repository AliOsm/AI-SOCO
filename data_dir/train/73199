

#include <bits/stdc++.h>

using namespace std;



int main () {
	int n; scanf("%d", &n);
	long long int cur = 0;
	for(int i = 0; i < n; i++) {
		long long int e; scanf("%lld", &e);
		if (e > 1){
			cur += (e - 1) % 2;
		}
		if(cur % 2) {
			cout << 1 << endl;
		}
		else {
			cout << 2 << endl;
		}
	}
	return 0;

}
