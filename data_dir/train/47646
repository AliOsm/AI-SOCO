typedef long long ll;
typedef pair<ll,ll> pii;
const ll MAX=500+100,INF=1e9;
bool vis[MAX];
vector<int> adj[MAX];
int main(){
	int a,b,c,x=0;
	cin>>a>>b>>c;
	for(int i=1;;i++){
		if(a>=i&&(b>=2*i&&c>=4*i))
			x=i;
		else
			break;
	}
	cout<<7*x;
}