#include <bits/stdc++.h>
#define ll long long

using namespace std;

int main ()
{
    ios_base::sync_with_stdio(false);
    int n, h=0; cin >> n;
    for(int i=0;i<n;i++) {
        int a, b, c; cin >> a >> b >> c;
        if(a+b+c>1) h++;
    }
    cout << h << endl;
    return 0;
}
