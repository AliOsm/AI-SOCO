// In The Name of Allah
# include <bits/stdc++.h>

using namespace std;

int main() {
	ios_base::sync_with_stdio(false);
	int n, cnt = 0;
	cin >> n;
	for (int i = 0; i < n; i++) {
		int x;
		cin >> x;
		if (x == 0)
			cnt++;
	}
	if (n == 1) {
		if (cnt == 0)
			cout << "YES\n";
		else
			cout << "NO\n";
		return 0;
	}
	cout << (cnt == 1 ? "YES" : "NO") << endl;
	return 0;
}
