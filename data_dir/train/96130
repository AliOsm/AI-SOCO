#include <bits/stdc++.h>
#pragma GCC optimize("O3")

#define MP make_pair
#define PB push_back
#define ST first
#define ND second

using namespace std;

typedef pair<int, int> PII;
typedef vector<int> VI;
typedef vector<PII> VII;
typedef long long LL;

void init_ios() {
     ios_base::sync_with_stdio(0);
     cin.tie(0);
}

int w[2], h[2];

int main() {
  init_ios();
  cin >> w[0] >> h[0] >> w[1] >> h[1];
  cout<<w[0]+2+2*h[0]+w[1]+2+2*h[1]+w[0]-w[1]<<"\n";
}