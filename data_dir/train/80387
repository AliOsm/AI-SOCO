const lli INF = 0xFFFFFFFFFFFFFFFL;

lli seed;
mt19937 rng(seed=chrono::steady_clock::now().time_since_epoch().count());
inline lli rnd(lli l=0,lli r=INF)
{return uniform_int_distribution<lli>(l,r)(rng);}

class CMP
{public:
bool operator()(ii a , ii b) //For min priority_queue .
{    return ! ( a.X < b.X || a.X==b.X && a.Y == b.Y);   }};

void add( map<lli,lli> &m, lli x,lli cnt=1)
{
    auto jt=m.find(x);
    if(jt==m.end())         m.insert({x,cnt});
    else                    jt->Y+=cnt;
}

void del( map<lli,lli> &m, lli x,lli cnt=1)
{
    auto jt=m.find(x);
    if(jt->Y<=cnt)            m.erase(jt);
    else                      jt->Y-=cnt;
}

bool cmp(const ii &a,const ii &b)
{
    return a.X<b.X||(a.X==b.X&&a.Y<b.Y);
}

const lli mod = 1000000007L;
const lli maxN = 5000L;

    lli T,n,i,j,k,in,l,r,u,v,x,y,ans,q;
    lli m;
    string s;
    vii a;
    lli final[4*maxN+5][5];
    lli cnt[maxN+5];
    //priority_queue < ii , vector < ii > , CMP > pq;// min priority_queue .

void add(lli l,lli r)
{
    lli i;
    repA(i,l,r)
        cnt[i]++;
}

void pre(lli id,lli l,lli r)
{
    if(l>r)
        return;
    if(l==r)
    {
        if(cnt[l]<=2)
            final[id][cnt[l]]=1;
        else
            final[id][3]=1;
        return;
    }
    lli m=(l+r)/2;
    pre(2*id,l,m);
    pre(2*id+1,m+1,r);
    fo(m,4)
        final[id][m]=final[2*id][m]+final[2*id+1][m];
}

lli FIND(lli L,lli R,lli v)
{
    if(L>R)
        return 0;
    return final[R][v]-final[L-1][v];
    // if(L<=l&&r<=R)
    //     return final[id][v];
    // lli m=(l+r)/2;
    // return FIND(2*id,l,m,L,R,v)+FIND(2*id+1,m+1,r,L,R,v);
}

lli solve(ii a,ii b)
{
    lli ans=final[n][1]+final[n][2]+final[n][3];
    if(a.X>b.X||(a.X==b.X&&a.Y>b.Y))
        swap(a,b);
    // if(a.X!=88||b.X!=555)
        // return 0;
    dbg(ans);
    ans-=FIND(a.X,a.Y,1);
    dbg(ans);
    ans-=FIND(b.X,b.Y,1);
    dbg(ans);
    ans-=FIND(b.X,min(b.Y,a.Y),2);
    dbg(ans);
    ans+=FIND(b.X,min(b.Y,a.Y),1);
    dbg(ans);
    dbg(a,b,ans);
    return ans;
}

void pre2()
{
    lli i,j;
    repA(i,1,n)
    {
        if(cnt[i]<=2)
            final[i][cnt[i]]=1;
        else
            final[i][3]=1;
        fo(j,4)
            final[i][j]+=final[i-1][j];
    }
}

int main(void) {
    ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
    // freopen("txt.in", "r", stdin);
    // freopen("txt.out", "w", stdout);
// cout<<std::fixed<<std::setprecision(35);
// cin>>T;while(T--)
{

    cin>>n>>q;
    a.clear();a.reserve(q);
    
    fo(i,q)
    {
        cin>>l>>r;
        a.pb({l,r});
        add(l,r);
    }
    
    // pre(1,1,n);
    pre2();
    fo(i,q)
    {
        repA(j,i+1,q-1)
            ans=max(ans,solve(a[i],a[j]));
    }
    cout<<ans<<endl;
}   aryanc403();
    return 0;
}