#include <bits/stdc++.h>
using namespace std;

int k,n=18*2;
string a="888888888888888888";
int main() {
	cin >> k;
	if(k>n)return puts("-1"),0;
	for(int i = 0 ; k!=n && i <a.size() ; i++){
		a[i]='4';
		n--;
	}
	for(int i = 0 ; k!=n && i <a.size() ; i++){
		a[i]='1';
		n--;
	}
	cout << a ;
}