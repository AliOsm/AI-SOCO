#include<bits/stdc++.h>
#define ll long long int
#define r_0 return 0
#define pb push_back
#define sz size()
#define fr first
#define sc second
#define Ibrohim ios_base::sync_with_stdio(0)
using namespace std;
ll n , l , m , k , mx , mn , x , y ;
int sum , cnt , ans ;
char c , ch ;
bool b , bo ;
string s1 , s2 , s3 , s ;
set < ll > se;
set < ll > :: iterator it ;
vector< ll > v , d ;
float f , fl , flo , x1 , x2 , x3 ;
vector < pair < int , int > > p ;
float ar [ 10000001 ] ;
int a [ 10000001 ] ;
float arr [ 1001 ] [ 1001 ];
int main ( )
{
    Ibrohim;
    cin >> n >> m;
    for ( int i = max ( n , m ) ; i >= 1 ; i -- )
    {
        if ( n > 0 && m > 0 )
        {
            n -- ;
            m --;
            cnt ++;
        }
        if ( n >= 2 && m <= 0 )
        {
            ans ++;
            n -= 2;
        }
        if ( n <= 0 && m >= 2 )
        {
            ans ++;
            m -= 2;
        }
    }
    cout << cnt << " " << ans ;
}











