//besmellah
#include <bits/stdc++.h>
using namespace std;

#define int long long

int32_t main(){
	ios::sync_with_stdio(false);
	cin.tie(0);
	int q;
	cin >> q;
	while (q --){
		int a, b, n, S;
		cin >> a >> b >> n >> S;
		if (b < S % n || a * n + b < S){
			cout << "NO\n";
		}
		else{
			if (a * n >= S){
				cout << "YES\n";
			}
			else if (a * n + b >= S){
				cout << "YES\n";
			}
			else
				cout << "NO\n";
		}
	}
}
