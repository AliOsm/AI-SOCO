//let's do it
 #include <iostream>
#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define inf 1000000000000
#define mod 1000000007
#define pb push_back
#define mp make_pair
#define all(v) v.begin(),v.end()
#define S second
#define F first
#define boost1 ios::sync_with_stdio(false);
#define boost2 cin.tie(0);
#define mem(a,val) memset(a,val,sizeof a)
#define endl "\n"
#define maxn 1000001

int deg[maxn];

int main()
{
    boost1;boost2;
    int i,j,n,x,y;
    cin>>n;
    for(i=1;i<=n-1;i++)
    {
        cin>>x>>y;
        deg[x]++;
        deg[y]++;
    }
    for(i=1;i<=n;i++)
    {
        if(deg[i]==2)
        {
            cout<<"NO";
            return 0;
        }
    }
    cout<<"YES";
    return 0;
}
