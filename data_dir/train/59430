#define ff(i,s,e) for(int i = (s);i<(e);++i)
#define FF(i,s,e) for(int i = (s);i<=(e);++i)
#define fr(i,s,e) for(int i = (e);--i>=(s);)
#define Fr(i,s,e) for(int i = (e);i>=(e);--i)
