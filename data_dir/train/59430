template<class T, class U>
void smin(T&a,const U&b) {
    if (a > b)
        a = b;
}
template<class T, class U>
void smax(T&a,const U&b) {
    if (a < b)
        a = b;
}
string getstr() {
    char s[200001];
    scanf("%s",s);
    return s;
}

main() {
    int n;
    scanf("%d", &n);
    if (n&1)
        printf("0");
    else {
        n /= 2;
        printf("%d", (n-1)/2);
    }
    
}