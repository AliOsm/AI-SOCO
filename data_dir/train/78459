typedef vector<string> vs;

/** faster solution */
const int MAXN = 778;
int C[MAXN + 1][MAXN + 1];
void init_nCr() {
    C[0][0] = 1;
    for (int n = 1; n <= MAXN; ++n) {
        C[n][0] = C[n][n] = 1;
        for (int k = 1; k < n; ++k)
            C[n][k] = C[n - 1][k - 1] + C[n - 1][k];
    }
}

int nCr(int n, int k) {
    return C[n][k];
}

void solve() {
    cini(n);

    int ans=nCr(n, 5) + nCr(n,6) + nCr(n,7);
    cout<<ans<<endl;
}

signed main() {
    cin.tie(nullptr);
    std::ios::sync_with_stdio(false);
init_nCr();
        solve();
}

