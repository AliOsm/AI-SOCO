#include <cctype>
#include <string>
#include <iostream>
#include <algorithm>
#include <vector>
#include <set>
#include <cmath>
#include <map>
#include <queue>
#include <functional>
#include <iomanip>

void solve() {
  int n;
  std::cin >> n;
  if (n % 2 == 1) {
    std::cout << 0;
  } else {
    int s = ((n / 2) - 1) / 2;
    std::cout << s;
  }
}

int main () {
    std::ios_base::sync_with_stdio(false);
    std::cin.tie(nullptr);
    solve();
    return 0;
}

