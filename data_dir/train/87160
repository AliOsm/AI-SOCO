#include <bits/stdc++.h>

using namespace std;
#define ll long long
#define mp make_pair
#define pb push_back

int main(){
    ios_base::sync_with_stdio(false);
    ll k,n,s,p,sheet,pack;
    cin >> k>>n>>s>>p;
    if (n%s!=0){
        sheet=n/s +1;
    }else{
        sheet=n/s;
    }
    sheet*=k;
    if (sheet%p!=0){
        pack=sheet/p +1;
    }else{
        pack=sheet/p;
    }
    cout << pack;

    return 0;
}