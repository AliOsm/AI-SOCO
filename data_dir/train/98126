#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define fr(i,j,k) for(int i=j;i<k;i++)
#define f(n) fr(i,0,n)
#define f1(n) fr(i,1,n+1)
#define pb push_back
#define F first
#define S second
#define all(x) x.begin(), x.end()
using namespace std;
const int maxn = 1048576;
const int mod = 998244353;
const double pi= acos(-1);

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    double n;
    cin >> n;
    while (cin >> n)
        cout << fixed << setprecision(10) << sin((2 * n - 1) / (4 * n) * pi) / sin(pi / (2 * n)) << '\n';
}