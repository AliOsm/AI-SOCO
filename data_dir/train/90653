#include <bits/stdc++.h>
using namespace std;

#define FastIO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl "\n"
#define long int64_t

int main()
{
    FastIO;
    int t;
    cin >> t;
    while(t--)
    {
        long n, a, b;
        cin >> n >> a >> b;
        if(a+a <= b)
            cout << n*a;
        else
            cout << (n/2)*b + (n%2)*a;
        cout << endl;
    }
    return 0;
}
