#include <bits/stdc++.h>
using namespace std;

int n;
vector<int> a, b;
vector<pair<int, int> > ans;

void solve(int num) {
	int q = num;
	while(b[q] != a[num]) {
		++q;
	}
	while(q != num) {
		ans.push_back(make_pair(q + 1, q));
		swap(b[q], b[q - 1]);
		--q;
	}
}

int main (int argc, char *argv[])
{
	scanf("%d", &n);
	a.resize(n);
	for(int i = 0; i < n; ++i) {
		scanf("%d", &a[i]);
	}
	b.resize(n);	
	for(int i = 0; i < n; ++i) {
		scanf("%d", &b[i]);
	}
	for(int i = 0; i < n; ++i) {
		if(a[i] != b[i]) {
			solve(i);
		}
	}
	printf("%d\n", int(ans.size()));
	for(int i = 0; i < ans.size(); ++i) {
		printf("%d %d\n", ans[i].second, ans[i].first);
	}

	return 0;
}

