#include <iostream>
#include <string>
#include <vector>
#include <set>
#include <map>
#include <stack>
#include <queue>
#include <cstdio>
#include <algorithm>
#include <cmath>
using namespace std;

#define ll long long
#define MP make_pair

const int MAX_VALUE = 1e9 + 7;

int main()
{
    int d1 = 0;
    int d2 = 0;
    int d3 = 0;

    cin >> d1 >> d2 >> d3;

    vector<int> d;
    d.push_back(d1 + d2 + d3);
    d.push_back(2 * d1 + 2 * d3);
    d.push_back(2 * d2 + 2 * d3);
    d.push_back(2 * d1 + 2 * d2);

    sort(d.begin(), d.end());

    cout << d[0] << endl;
    return 0;
}











