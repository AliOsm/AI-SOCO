#include <bits/stdc++.h>

using namespace std;

int main() {
	ios::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);

	int n, l, r;
	cin >> n >> l >> r;
	cout << (n - l + 1) + (1 << l) - 2 << ' ' << (1 << (r - 1)) * (n - r) + (1 << r) - 1;

	return 0;
}