#define re return(0);
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <set>
using namespace std;
double const pi=3.1415926536;
int main()
{
   long long n,k;
   cin>>n>>k;
   if(k>n)
   {
   	if(k-n>=n)
   	cout<<0;
   	else
   	{
   		cout<<(2*n-k+1)/2;
	}
   }
   else
   {
   	cout<<(k-1)/2;
   }
}
