const int inf = (int)1e9;
const int mod = inf + 7;
const double eps = 1e-9;
const double pi = acos(-1.0);

ll read_long() {
    ll ans = 0;
    char c;
    bool started = false;
    bool is_negative = false;
    while (true) {
        c = getchar();
        if ((c < '0' || c > '9') && c != '-' && !started) continue;
        if ((c < '0' || c > '9') && c != '-' && started) break;
        if (started) {
            ans = ans * 10;
        }
        started = true;
        if (c == '-') is_negative = true;
        else ans += c - '0';
    }
    if (is_negative) ans *= -1;
    return ans;
}

int main(){

    int n;
    string s;
    cin >> n;
    cin >> s;

    for (int i = 0; i < n; i++) {
        map<char, int> cnt;
        int sz = 0;
        int mx = 0;
        for (int j = i; j < n; j++) {
            sz++;
            cnt[s[j]]++;
            mx = max(mx, cnt[s[j]]);
            if (mx <= sz / 2) {
                cout << "YES" << endl;
                for (int t = i; t <= j; t++) cout << s[t];
                cout << endl;
                return 0;
            }
        }
    }

    cout << "NO" << endl;

    return 0;
}
