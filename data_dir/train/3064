            BBBBBB                  DDDDD                AA
            BB   BB                 DD  DD              AAAA
            BB    BB       OOOO     DD   DD            AA  AA
            BB   BB       OO  OO    DD    DD          AA    AA
            BBBBBB       OO    OO   DD     DD        AA      AA
            BB   BB       OO  OO    DD    DD        AAAAAAAAAAAA
            BB    BB       OOOO     DD   DD        AA          AA
            BB   BB                 DD  DD        AA            AA
            BBBBBB                  DDDDD        AA              AA


*/

#include <iostream>
#include <bits/stdc++.h>
#define LL long long
#define LD long double
#define IO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);

using namespace std;

int main()
{
    IO
    LL n;
    LD k,a,b,s,mn=100000;
    cin>>n>>k;
    for (int i=0; i<n ; i++ )
    {
        cin>>a>>b;
        s=a/b;
        if (s<mn )
            mn=s;
    }
    s=mn*k;
    cout<<fixed<<setprecision(6)<<s;






    return 0;
}
