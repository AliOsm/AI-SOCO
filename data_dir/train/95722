#include<bits/stdc++.h>
using namespace std;
#define Jewel ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);

int main()
{
    int n, i;
    cin>>n;
    if(n==1)
        cout<<'1';
    else if(n&1)
    {
        cout<<'7';
        n -= 3;
    }
    n >>= 1;
    while(n--)
        cout<<'1';
    cout<<endl;
    return 0;
}
