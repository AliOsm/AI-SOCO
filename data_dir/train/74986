#include <bits/stdc++.h>
#define pb push_back
#define F first
#define S second
#define all(x) x.begin(), x.end()
using namespace std;
typedef long long ll ; 
typedef long double ld ;
typedef pair<ll , ll> pll ;

const ll N = 2e5 + 30 , Mod = 1e9 + 7 ;
const ll SQ = 330 ;

string a[] = {"hate " , "love "} ;
int main () {
    ios::sync_with_stdio(0), cin.tie(0) ;
    ll n ;
    cin >> n ;
    for (int i = 2 ; i <= n ; i ++) 
    	cout << "I " << a[i & 1] << "that " ; 
    cout << "I " <<  a[1 - n & 1] << "it" ; 
    return (0) ;
}
