#include <bits/stdc++.h>
using namespace std;

#define int long long
#define f(i,n) for(int i=0;i<n;i++)
#define rep(i,a,b) for(int i=a;i<=b;i++)

class BApplemanAndCardGame {
public:
	void solve(std::istream& in, std::ostream& out) {
		int n, k; in >> n >> k;
        string s; in >> s;
        map<char, int> Map;
        for(char c: s) Map[c]++;
        vector<int> freq;
        for(auto w: Map) freq.push_back(w.second);
        sort(freq.rbegin(), freq.rend());
        vector<int> ans;
        for(int x: freq){
            if(x>=k){
                ans.push_back(k);
                break;
            }
            ans.push_back(x);
            k -= x;
        }
        int res = 0;
        for(int x: ans) res += (x*x);
        out << res;
	}
};


int32_t main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	BApplemanAndCardGame solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
