#include <bits/stdc++.h>

#pragma GCC target("sse,sse2,sse3,ssse3,sse4,popcnt,abm,mmx")

#define fi first
#define se second
#define pb push_back
#define last(s) (s)[(s).size()-1]
#define all(a) (a).begin(),(a).end()
#define elif else if
#define left asdasd
#define next zaza
#define prev azaz
#define cclear cout<<flush;
#define x0 kerker
#define y0 lolik
#define kchay ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

using namespace std;

using llong = long long;
using ld = long double;
using ii = pair<int,int>;
using ull = unsigned long long;
using pll = pair<llong, llong>;
using psi = pair<string, int>;
using ll = pair<llong, llong>;

const llong over999 = 1e18;
const llong md = 1e9+7;
const ld eps = 1e-16;
const ld Pi = acos(-1);
const llong N = 1e5;

/*12312*/

llong n, m, x, y;

int32_t main()
{
    kchay;

    cin >> n >> x;

    if(x >= 3)
    {
        llong ans = -over999;
        for(int i = 0; i < n; i++)
        {
            cin >> y;
            ans = max(ans, y);
        }

        cout << ans;
        return 0;
    } elif(x == 2)
    {
        llong ans, a2;
        cin >> ans;
        for(int i = 1; i < n; i++)
        {
            cin >> a2;
        }

        cout << max(ans, a2);
        return 0;
    } else {
        llong ans = over999;
        for(int i = 0; i < n; i++)
        {
            cin >> x;
            ans = min(ans, x);
        }
        cout << ans;
    }
    return 0;
}
