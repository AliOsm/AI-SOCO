/// However long the night,
///     The dawn will break
/// ICPC next year

#include<bits/stdc++.h>
using namespace std ;
const int N = 3e5+5 ;

int t ,n ;
int main(){
    cin >> t ;
    while(t--){
        scanf("%d",&n);
        if(n%2){
            printf("7");
            n-=3;
        }
        for(int i=0;i<n;i+=2)printf("1");
        puts("");
    }
    return 0;
}
