#include <bits/stdc++.h>
using namespace std;
#define F first
#define S second
#define PI acos(-1)
#define X real()
#define Y imag()

typedef long long lli;
typedef complex<lli> P;
const int MX = 100005 , infi =1000000000 , mod = 1000000007;
typedef pair<int,int> pii;

int n,l,r;

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    cin>>n;
    for(int i=0;i<n;i++)
    {
        int x , y;
        cin>>x>>y;
        if(x<0)l++;
        else r++;
    }
    cout<<(min(l,r)<2?"Yes":"No");
    return 0;
}
