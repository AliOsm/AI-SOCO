#include <bits/stdc++.h>
using namespace std;
#define eb emplace_back
#define emp emplace
#define fi first
#define se second
typedef long long ll;
typedef pair<int, int> ii;

int main(void) {
	ios_base::sync_with_stdio(false);

	int n; cin >> n;

	int ans = 0;
	ans += n/100;
	n %= 100;
	ans += n/20;
	n %= 20;
	ans += n/10;
	n %= 10;
	ans += n/5;
	n %= 5;
	ans += n/1;
	n %= 1;

	cout << ans << endl;

	return 0;
}

