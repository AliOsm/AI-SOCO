#define all(a) (a).begin(), (a).end()
#define sz(a) (int)(a).size()
#define pb push_back

using namespace std;

typedef long long ll;
typedef unsigned long long ull;
typedef pair<int, int> pii;
typedef pair<ll, ll> pll;
typedef long double ld;

int main() {

    ll k, n, s, p;
    cin >> k >> n >> s >> p;

    ll t = (n + s - 1) / s;
    cout << (k * t + p - 1) / p << "\n";

}

