#include <bits/stdc++.h>
#define LL long long
#define pb push_back
#define mp make_pair
#define fi first
#define sc second
using namespace std;

int n,k;

int main(){
	cin>>n>>k;
	if(k==n) cout<<"0 0"<<endl;
	else if(k==0) cout<<"0 0"<<endl;
	else {
		int ans, mn;
		ans = k*2;
		ans = min(ans, n-k);
		cout<<"1 "<<ans<<endl;
	}
	return 0;
}