#include <bits/stdc++.h>

#define ll long long
#define pb push_back
#define pii pair<int,int>
#define pll pair<ll,ll>
#define mp make_pair
#define ff first
#define ss second

using namespace std;

const double pi=acos(-1);
const int N=(int)1e6+7,mod=1000000007,M=2e9;

//scanf("%d",&);
int n;

int main()
{
//    freopen(".txt","r",stdin);
    cin>>n;
    cout<<"1 ";
    n--;
    if((n-1)%3){
        cout<<"1 ";
        n--;
    }
    else{
        cout<<"2 ";
        n-=2;
    }
    cout<<n;
    return 0;
}
