#include <bits/stdc++.h>
using namespace std;
int main ()
{
    long long n, a, b;
    cin>>n;
    b=0;
    while(n>0)
    {
        a=n%10;
        n=n/10;
        if(a==4)
        {
            b=b+1;
        }
        else
        {
            if(a==7)
            {
                b=b+1;
            }
        }
    }
    if (b==4)
    {
        cout<<"YES";
        return 0;
    }   
    else
    {
        if (b==7)
        {
            cout<<"YES";
            return 0;
        }
        else
        {
            cout<<"NO";
            return 0;
        }
    }
}