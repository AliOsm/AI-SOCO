#include <bits/stdc++.h>

using namespace std;

int main()
{
    int x,line,n,i;

    scanf("%d",&line);

    while(line--)
    {
        scanf("%d",&n);

        if(n==9 || n==4)
        {
            printf("1\n");
        }

        else if(n<=3)
        {
            printf("-1\n");
        }

        else if(n%2==0)
        {
            printf("%d\n",n/4);
        }

        else
        {
            if(n<=11)
            {
                printf("-1\n");
            }

            else
            {
                int temp=n-9;

                printf("%d\n",(temp/4)+1);

            }
        }
    }

    return 0;
}
