#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef pair<int, int> pi;


int main() {
  ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
  ll n, k;
  cin >> n >> k;
  ll s = n+k;
  for (ll i = 1; i <= n; i++) {
    if ((1+i)*i/2 + i == s) {
      cout << n-i << endl;
      return 0;
    }
  }
}

