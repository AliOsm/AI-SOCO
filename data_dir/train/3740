//In the name of God

#include <iostream>
#include <algorithm>
#include <vector>
#include <cmath>

using namespace std;

int main()
{
  ios::sync_with_stdio(false);
  int n;
  cin>>n;
  if(n==1 || n==2 || n==3)
    {
      cout<<"NO"<<endl;
      return 0;
    }
  if(n==5)
    {
      cout<<"YES"<<endl;
      cout<<"3 * 4 = 12"<<endl;
      cout<<"5 - 2 = 3"<<endl;
      cout<<"3 - 1 = 2"<<endl;
      cout<<"2 * 12 = 24"<<endl;
      return 0;
      }
  if(n==4)
    {
      cout<<"YES"<<endl;
      cout<<"1 * 2 = 2"<<endl<<"2 * 3 = 6"<<endl<<"6 * 4 = 24"<<endl;
      return 0;
    }
  cout<<"YES"<<endl;
  cout<<"4 * 6 = 24"<<endl;
  cout<<"3 - 2 = 1"<<endl;
  cout<<"1 - 1 = 0"<<endl;
  cout<<"5 * 0 = 0"<<endl;
  for(int i=7;i<=n;i++)
    {
      cout<<i<<" * 0 = 0"<<endl;
    }
  cout<<"0 + 24 = 24"<<endl;
  return 0;
}
