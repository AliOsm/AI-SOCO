#include <bits/stdc++.h>
#define ll long long
#define fr first
#define sc second
#define mp make_pair
#define ii pair<int,int>
using namespace std;
int main()
{
    ios_base::sync_with_stdio(false);
    int t;
    cin>>t;
    while(t--)
    {
        int a,b,n,s;
        cin>>a>>b>>n>>s;
        int minx = min(s/n , a);
        s-=minx * n;
        if(s <= b)
        {
            cout<<"YES\n";

        }
        else
            cout<<"NO\n";
    }

    return 0 ;
}
