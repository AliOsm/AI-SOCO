#include <bits/stdc++.h>
using namespace std;

int main(){

	int n; cin >> n;
    int a = 0, b = 0;
    for(int i = 0; i < n; i++){
        int x; cin >> x;
        if(x%2 == 1){
            if(i%2 == 1) a++;
            else a--;
        }
        else{
            if(i%2 == 1) b++;
            else b--;
        }
    }
    if(a == 0 || b == 0) cout << "YES" << endl;
    else cout << "NO" << endl;

	return 0;
}
