#include <iostream>

using namespace std;

int main()
{
    int a,b,k=1,co=0;
    cin>>a>>b;
    for(int i=1;i>-1;i++){
            co++;
            a--;
        if(i==b*k){
            a++;
            k++;
        }
        if(a==0&&i!=3*k){
            cout<<co<<endl;
            return 0;
        }
    }
    return 0;
}
