#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef long double ld;

void solve() {
    int n, m;
    cin >> n >> m;
    if (m == 0) cout << 1 << endl; else
    if (n == m) cout << 0 << endl; else {
        cout << min(m, n - m) << endl;
    }
}

int main() {
    ios_base::sync_with_stdio(false);
    int test;
    test = 1;
    for (int tst = 1; tst <= test; ++tst) {
        solve();
    }
    return 0;
}
