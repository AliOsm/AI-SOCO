#include <bits/stdc++.h>

using namespace std;

#define MOD 1000000007
#define N 100005
#define ll long long 
#define ld long double
#define pb push_back
#define ff first
#define ss second

int main(){
	ios::sync_with_stdio(false); cin.tie(0); cout.tie(0);
	//freopen("input.txt", "r", stdin);
	//freopen("output.txt", "w", stdout);
	int n; cin>>n;
	int x = sqrt(n), ans;
	if(x*x >= n){
		ans = 2*x;
	}
	else if(x*x + x >= n){
		ans = 2*x + 1;
	}
	else{
		ans = 2*x + 2;
	}
	cout<<ans;
	return 0;
}