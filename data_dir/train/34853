#include <bits/stdc++.h>

using namespace std;

int main()
{
	// cheated :(
	int k;
	cin >> k;
	int i;
	// ((i-1)/2 + x)*i - x = k
	// (i-1)/2 * n + x*(i-1) = k
	// x*(i-1) = k - (i-1)/2*i
	long long s=2000+k;
	long long b=s/1999,m=s%1999;
	cout << "2000\n-1 ";
	for(int i=0;i<1999;i++)
	{
		cout << b+(i<m?1:0) << " ";
	}
	cout << endl;


}