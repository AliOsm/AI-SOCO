int main() {
	int a, b;
	cin >> a >> b;
	if(a == 0 && b == 0){
		cout << "NO\n";
		return 0;
	}
	if (abs(a - b) > 1)
		cout << "NO\n";
	else
		cout << "YES\n";
	return 0;
}