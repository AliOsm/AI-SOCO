#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define ss second
#define ff first
#define pb push_back
#define mp make_pair

int main() {
    int n,m;
    cin>>n>>m;
    m=n-m;
    if(m==n)
    {
        cout<<1;
        return 0;
    }
    int a=min(m,n/2);
    if(m>(n+1)/2)
    {
        a-=m-((n+1)/2);
    }
    cout<<a;
   return 0;
}
/*
4 4 4 4
13 16 15 4
5 2 8 9
14 11 12 10
1 6 3 7
*/
