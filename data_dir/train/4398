using namespace std;

long long n, m, k, d, r;

int main()
{
    cin >> n >> m >> k;

    r =  (k + (m * 2 - 1)) / (m * 2);

    d = k - (r - 1) * (m * 2);
    cout << r << " " << (d + 1) / 2;

    if(k % 2 == 0)
        cout << " R" << endl;
    else
        cout << " L" << endl;

}
