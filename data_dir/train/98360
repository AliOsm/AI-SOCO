#include<bits/stdc++.h>
#define REP(i,j,k) for(int i=j;i<k;++i)
#define RREP(i,j,k) for(int i=(int)j-1;i>=k;--i)
#define int long long
#define pb emplace_back
#define P pair<int,int>
#define F first
#define S second
#define ALL(x) x.begin(),x.end()
#define sz(a) (int)(a).size()
#define MX 200005
#define oo 1e18
#define L d*2
#define R (d*2+1)
#define mid (l+r>>1)
#define Ls l,mid,d*2
#define Rs mid+1,r,d*2+1
#define MIN(x,y) (x=min(x,(y)))
#define MAX(x,y) (x=max(x,(y)))
#define mo (int)(1e9+7)
#define IOS cin.tie(0) ,cout.tie(0), cout.sync_with_stdio(0)
using namespace std;
int n;
string s;
vector<int> v; 
main(){
	IOS;
	cin>>n>>s;
	RREP(i,n,0){
		if(!sz(v) || v.back()<s[i]) v.pb(s[i]);
		else *lower_bound(ALL(v),s[i]) = s[i];
		if(sz(v)>2) return cout<<"NO\n",0;
		if(v[0]<s[i]) s[i] = '1';
		else s[i] = '0';
	}
	cout<<"YES\n"<<s;
}


