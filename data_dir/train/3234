const int mod = (int)1e9 + 7;
const ll INF = 10000005;
const int N = 100005;
ll m, n, k;
int main(){
    cin >> m >> n >> k;
    ll dop = (ll)sqrt(m * n * k + 0.1);
    ll ans = dop / m + dop / n + dop / k;
    ans *= 4;
    cout << ans << endl;
    return 0 ;
}
