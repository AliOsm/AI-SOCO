#include <stdio.h>
using namespace std;
int main(int argc, char **argv)
{
    int n;
    scanf("%d", &n);
    if (n % 2 == 0) {
        int m = n / 2;
        if (m % 2 == 0) {
            printf("%d %d", m - 1, m + 1);
        } else {
            printf("%d %d", m - 2, m + 2);
        }
    } else {
        printf("%d %d", n / 2, n / 2 + 1);
    }
    return 0;
}
