#include<bits/stdc++.h>

#define ll long long
#define dl double

using namespace std;

int main()
{
    int n;
    string s;
    cin >> n >> s;

    int A = 0, I = 0;
    for(int i = 0; i < n; i++){
        if(s[i] == 'A') A++;
        if(s[i] == 'I') I++;
    }

    if(!I) cout << A << endl;
    else if(I == 1) cout << I << endl;
    else cout << 0 << endl;

    return 0;
}
