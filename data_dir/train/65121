#define int long long
using namespace std;

const double eps = 0.000001;
const ld pi = acos(-1);
const int maxn = 1e7 + 9;
const int mod = 1e9 + 7;
const ll MOD = 1e18 + 9;
const ll INF = 1e18 + 123;
const int minn = 1e5 + 9;
const int N = 5e3 + 123;                                          
const int NN = 5e5 + 123;
const int PRI = 555557;
const int pri = 997;

int t[30], sum, ans;
string s;
map<int, int> pref[30];
 
main () {
	for (int i = 0;i < 26;i ++) {
		cin >> t[i];			
	}
	cin >> s;
	for (int i = 0; i < sz(s); i ++) {
		ans += pref[s[i] - 'a'][sum];
		sum += t[s[i] - 'a'];
		
		if(i != sz(s) - 1) {
			pref[s[i] - 'a'][sum] ++;
		}
	}
	
	cout << ans;
}