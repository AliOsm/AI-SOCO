using namespace std;
 
 

 

 
#define ll long long




int main() {
	int a, b;
	scanf("%d %d", &a, &b);
	if (a == 0 && b == 0) {
		cout << "NO";
		return 0;
	}
	if (abs(a - b) <= 1) {
		cout << "YES";
	} else {
		cout << "NO";
	}
    return 0;
}
















 