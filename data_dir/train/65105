#include<cstdio>
#include<cstring>
#include<set>
#include<string>
#include<iostream>
#include<cmath>
#include<ctime>
#include<algorithm>
using namespace std;
int a,b,c;
int main()
{
    int x,y,z;
    scanf("%d%d%d",&x,&y,&z);
    int a=(int)sqrt(1.0*x*y/z);
    int b=(int)sqrt(1.0*y*z/x);
    int c=(int)sqrt(1.0*x*z/y);
    printf("%d\n",(a+b+c)*4);
    return 0;
}