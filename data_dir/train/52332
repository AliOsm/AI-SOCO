void start ()
{
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

}int main ()
{
int n , m , x =0;
cin >> n >> m ;
int i =1 ,d=1;
while (n)
{
    n--;
    if (i*m==d )
    {n++;i++; }
    x++;

    d++;
}
cout << x <<"\n" ;

  return 0  ;
}
