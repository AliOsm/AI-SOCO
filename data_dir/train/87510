#include<bits/stdc++.h>
using namespace std;

#define F first
#define S second
#define ii pair<int,int>

typedef long double ldbl;
typedef long long ll;
typedef double dbl;

const ldbl pi = acos(-1);
const ll inf = 1LL<<30;
const dbl eps = 1e-9;
const ll mod = 1e9+7;

/** /////////// ** Code ** /////////// **/

const int N=0;

int main(){
    int n;
    scanf("%d",&n);
    ll ans=0;
    for(ll i=2 ; i<=n ; i++){
        ll x=n/i;
        x--;
        ans+=x*i*4LL;
    }
    printf("%lld",ans);
}
