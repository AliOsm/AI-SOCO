template <ll SIZE>
struct DSU
{
    int par[SIZE] , sz[SIZE];
    set<int> adj[SIZE];
    DSU(){
        fill(par , par + SIZE , -1);
        fill(sz , sz + SIZE , 1);
        for(ll i = 0 ; i < SIZE ; i++){
            adj[i].insert(i);
        }
    }

    ll Find(ll v){
        return (par[v] == -1 ? v : par[v] = Find(par[v]));
    }

    ll Union(ll v , ll u){
        ll pv = Find(v) , pu = Find(u);
        if(pv == pu)    return 0;
        if(adj[pv].size() < adj[pu].size()) swap(pv , pu);
        for(auto &i : adj[pu])  adj[pv].insert(i);
        par[pu] = pv;
        sz[pv] += sz[pu];
        adj[pu].clear();
        return 1;
    }

    ll getSize(ll v){
        return sz[Find(v)];
    }
};

