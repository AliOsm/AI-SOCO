map<int , vector<int>> adj[MAXN];
DSU<MAXN> dsu;

int main() {
    fast_io;

    cin >> n >> m >> q >> q;

    for(ll i = 0 ; i < m ; i++){
        cin >> v >> u >> c;
        dsu.adj[dsu.Find(v)].insert(u);
        dsu.adj[dsu.Find(u)].insert(v);
        if(adj[v][c].size()){
            dsu.Union(u , adj[v][c].back());
        }
        if(adj[u][c].size()){
            dsu.Union(v , adj[u][c].back());
        }
        adj[v][c].push_back(u);
        adj[u][c].push_back(v);
    }

    while(q--){
        cin >> type >> v >> u;
        if(type == '+'){
            cin >> c;
            dsu.adj[dsu.Find(v)].insert(u);
            dsu.adj[dsu.Find(u)].insert(v);
            if(adj[v][c].size()){
                dsu.Union(u , adj[v][c].back());
            }
            if(adj[u][c].size()){
                dsu.Union(v , adj[u][c].back());
            }
            adj[v][c].push_back(u);
            adj[u][c].push_back(v);
        }
        else{
            if(dsu.adj[dsu.Find(v)].find(u) != dsu.adj[dsu.Find(v)].end()){
                cout << "Yes" << endl;
            }
            else{
                cout << "No" << endl;
            }
        }
    }

    return 0;
