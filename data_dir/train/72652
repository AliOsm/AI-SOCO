// in the name of Allah

#include <bits/stdc++.h>

#define endl '\n'
#define sz(x) ((int) (x.size()))

using namespace std;

int main() {
	ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	int n;
	cin >> n;
	int sum = 0, cnt = 0, x;
	while(n--) {
		cin >> x;
		sum += x;
		if(sum < 0) {
			cnt++;
			sum = 0;
		}
	}
	cout << cnt;
	return 0;
}

