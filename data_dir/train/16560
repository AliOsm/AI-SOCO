#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define pb push_back
#define mk make_pair
#define lw lower_bound
ll b,c,d,e,i,j,n,l,r;
vector<ll> v,v1;
map<ll,ll> m;
int main(){
	ios_base::sync_with_stdio(NULL);
	cin.tie(NULL);
	cout.tie(NULL);
	cin>>n;
	ll ans;
	for(i=1;i<=n;i++){
		if(i<n-i && __gcd(i,n-i)==1){ans=i;
		}
	}
	cout<<ans<<" "<<n-ans;
}
//(n-i+1)*(n-i+1)*(n-i)!*i!
