#include <bits/stdc++.h>
#define ll long long
#define mp make_pair
#define pb push_back
#define fi first
#define se second

using namespace std;

int main() {
    ios::sync_with_stdio(false);
    ll n;
    cin>>n;
    ll t=n/2;
    if(n%2!=0)
    {
        cout<<0<<endl;
        return 0;
    }
    ll sol=1;
    for(int i=0;i<t;i++)
    {
        sol*=2;
    }
    cout<<sol<<endl;

    return 0;
}
