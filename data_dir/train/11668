# include <bits/stdc++.h>

using namespace std;

typedef long long int LL;
typedef pair <int,int> pii;

# define PB push_back
# define MP make_pair
# define L first
# define R second

int main(){
	ios_base::sync_with_stdio(false);
	cin.tie(0); cout.tie(0);
	int n, b, p;
	cin >> n >> b >> p;
	cout << (n - 1) * (2 * b + 1) << " " << n * p << endl;
	return 0;
}
