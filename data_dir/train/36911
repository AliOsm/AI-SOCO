#include <iostream>
#include <fstream>
#include <iomanip>
#include <cstdio>
#include <cmath>
#include <vector>
#include <map>
#define inf 1000000000
#define mod 1000000007
using namespace std;
char s[53];
int n;
int main()
{
    scanf("%d",&n);
    scanf("%s",s);
    long long ans=0;
    for(int i=0;s[i];i++)
        if(s[i]=='B')
            ans+=((long long)1<<i);
    printf("%I64d\n",ans);
    return 0;
}
