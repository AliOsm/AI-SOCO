#include <fstream>
using namespace std;
int main()
{
	//freopen("input.txt","r",stdin);
	int t;
	cin>>t;
	while(t--)
	{
		long long int n,l,r;
		cin>>n>>l>>r;
		long long int a=n/l;
		long long int b=n%l;
		long long int c=r-l;
		if((c*a)>=b)
			cout<<"Yes\n";
		else
			cout<<"No\n";
	}
	return 0;
}