#include<bits/stdc++.h>
#define pb push_back
#define pf push_front
#define all(s) s.begin(),s.end()
#define bp pop_back
#define fp pop_front
#define mp make_pair
#define sz size()
#define fi first
#define se second
#define ins insert
#define ll long long 
#define ull unsigned long long
using namespace std;
int main() {
    int a, b;
    cin >> a >> b;
    while(a --){
        int x, y;
        cin >> x >> y;
        b = max(b, x + y);
    }
    cout << b;
}  
