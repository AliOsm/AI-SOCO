#define pb push_back
#define ff first
#define ss second
#define ll long long
#define maxn 200005
#define mod 1000000007
#include <bits/stdc++.h>
using namespace std;
 
 
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int tc;
    cin >> tc;
    while(tc--){
        ll x, n, m, req;
        cin >> x >> n >> m;
        while( (x > 20) && n){
            x /= 2;
            x += 10;
            n--;
        }
        req = (x+9) / 10;
        if(m >= req) cout << "YES" << endl;
        else cout << "NO" << endl;
 
    }
    return 0;
}
 
