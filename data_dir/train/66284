#include <bits/stdc++.h>

#define int long long

using namespace std ;

int n , k ;

int32_t main(){
	ios::sync_with_stdio(false) , cin.tie(0) , cout.tie(0) ;

	cin >> n >> k ;

	int p = n / 2 / (k + 1) ;

	cout << p << ' ' << p * k << ' ' << n - p * (k + 1) << '\n' ;
}
