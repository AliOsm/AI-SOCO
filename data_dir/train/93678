#include <iterator>
#define ll long long
#define ss second
#define ff first
using namespace std;
ll n,m,x,y,z,w,k,ans,a[100100],b;
int main(){
    cin>>n>>m>>k;
    for(int i=0;i<n;i++){cin>>a[i];if(a[i]-1)y++;else x++;}
    if(m<x){ans+=x-m;m=0;}
    else m-=x;
    if(y>k+m)ans+=y-k-m;
    cout<<ans;
    return 0;
}
