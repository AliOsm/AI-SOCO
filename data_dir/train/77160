#include <bits/stdc++.h>
#define um unordered_map
#define us unordered_set
#define f first
#define s second
#define pb push_back
#define MOD 1000000007
#define eps 1e-9
#define INF 1000000002

using namespace std;

typedef long long ll;
typedef pair<int,int> pii;
typedef pair<int, pii> piii;
typedef pair<pii,pii> piiii;

const int N = 255;

int main() {
    int q;
    cin>>q;
    while(q--) {
        int n;
        cin>>n;
        if(n<= 4) {
            cout<<4-n<<endl;
        } else {
            cout<<(n&1?1:0)<<endl;
        }
    }
    return 0;
}