#include<bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);

    int t;
    cin>>t;

    while (t--) {
        int x, y, a, b;
        cin>>x>>y>>a>>b;

        if ((x-y)%(a+b))    cout<<-1<<endl;
        else                cout<<(-x+y)/(a+b)<<endl;
    }
}
