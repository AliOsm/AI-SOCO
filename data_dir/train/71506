#include<bits/stdc++.h>
#define ll long long
#define pb push_back
#define pf push_front
#define fr first
#define sc second
#define r_0 return 0
#define fin freopen("input.txt", "r", stdin);
#define fout freopen("output.txt", "w", stdout);
using namespace std;
    const ll N = 2e5 + 7 ;

int n , m , x , y , cnt , ans ;
int used[N];
vector < int > g[N];
string s , t ;
int a[N];

int main()
{

    ios_base::sync_with_stdio(0);

    cin >> n >> s ;
    for ( int i = 0 ; i < s.size(); i += 2 ){
        while ( s[i] == s[i + 1] ){
            s.erase( s.begin() + i );
        }
    }
    if ( s.size() % 2 == 1 )
        s.pop_back();
    cout << n - s.size() << "\n" << s ;



}
