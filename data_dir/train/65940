#include <bits/stdc++.h>
#define fast ios::sync_with_stdio(0); cin.tie(0); cout.tie(0)
#define pb push_back
#define endl '\n'
#define MOD 1000000007
#define MOD2 998244353

using namespace std;
typedef long long int ll;

int main(void)
{
	fast;
	#ifndef ONLINE_JUDGE
	freopen("in", "r", stdin);
	freopen("out", "w", stdout);
	#endif

	ll y, b, r; cin >> y >> b >> r;
	int ans = 0;
	for (int i = 1; i <= y; ++i)
	{
		if (i+1 <= b and i+2 <= r)
			ans = i + i+1 + i+2;
	}
	cout << ans;
}