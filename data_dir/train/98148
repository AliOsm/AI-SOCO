const int INF = (int) 2e9 + 7;
const ld EPS = (ld) 1e-5;
const int BASE = (int) 1e9 + 7;
const int MAXN = 100500;
const ll INFLL = (ll) 4e18;

int n, a, b, c;

int main() {
    scanf ("%d%d%d%d", &n, &a, &b, &c);
    if (n == 1) {
        cout << 0;
        return 0;
    }
    int ans = min(a, b);
    ans += min (a, min(b, c)) * (n - 2);
    cout << ans ;


}
