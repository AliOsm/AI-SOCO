ll n,m,i,j,num[500005],dp[500005],ans;
string st;
int main()
{
	read(n);
	rep(i,n) read(num[i]);
	rep(i,n) if (num[i]<=num[i-1]*2) ans=max(dp[i]=dp[i-1]+1,ans); else ans=max(ans,dp[i]=1);
	cout<<ans;
	return 0;
}