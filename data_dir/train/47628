#include<bits/stdc++.h>
using namespace std;
int main()
{

    int   n,m;
    cin >>n>>m;

    int ara[n+1];

    for(int i=0;i<n;i++)   cin>>ara[i+1];
    int ans=0;
    for(int i=0;i<m;i++)
    {
        int x,y;

        cin >>x>>y;
        ans+=min(ara[x],ara[y]);

    }

       cout <<ans <<endl;


}
