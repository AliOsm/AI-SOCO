#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define fr(i,j,k) for(int i=j;i<k;i++)
#define f(n) fr(i,0,n)
#define f1(n) fr(i,1,n+1)
#define pb push_back
#define F first
#define S second
#define all(x) x.begin(), x.end()
using namespace std;
const int maxn = 300005;
const int mod = 998244353;

int main() {
    ios_base::sync_with_stdio(false); 
    cin.tie(0);
    int t;
    cin >> t;
    while(t--) {
        int n;
        cin >> n;
        ll sum = 0;
        ll sumd = 0;
        vector<pair<ll,ll>>v(n);
        vector<ll>d;
        for (auto &i : v) {
            cin >> i.F >> i.S;
            sum += i.F;
        }
        f(n) {
            d.pb(min(v[(i+1)%n].F,v[i].S));
            sumd += d.back();
        }
        sort(all(d));
        sumd -= d[0];
        cout << sum - sumd << '\n';
    }
}