#define pb push_back
#define ff first
#define ss second
#define ll long long
#define maxn 1000006
#define mod 1000000007
#include <bits/stdc++.h>
using namespace std;
 
 
 
int main() {
    ll tc;
    cin >> tc;
    while(tc--){
        ll n;
        cin >> n;
        if(n%4 != 0){
            cout << "NO" << endl;
            continue;
        }
        cout << "YES" << endl;
        for(int i=2;i<=n;i+=2){
            cout << i << " ";
        }
        for(int i=1;i<=n-2;i+=2){
            cout << i << " ";
        }
        cout << (n+(n/2)-1);
        cout << endl;
    }
    return 0;
}
 
