using namespace std;

char s[55];

int main() {

	scanf("%s",s+1);

	int n=strlen(s+1);

	int cnta=0;

	for(int i=1;i<=n;i++) cnta+=(s[i]=='a');

	printf("%d",n-max(0,n-2*cnta+1));

}