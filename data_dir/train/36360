#include <bits/stdc++.h>

using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    int t;
    cin >> t;
    while (t--)
    {
        long long a , b , c;
        cin >> a >> b >> c;
        long long ans = a - b;
        ans *= c / 2;
        if (c % 2 != 0)
            ans += a;
        cout << ans << endl;
    }
}
