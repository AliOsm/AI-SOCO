#define re return(0);
#define ce continue;
typedef long long ll;
typedef long double ld;
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <cstring>
#include <set>
#include <iomanip>
#include <fstream>
using namespace std;
double const pi=3.1415926536;
int main()
{
	int k,a,b,v;
	cin>>k>>a>>b>>v;
    for(int i=0;i<100000;i++)
    {
    	int c=i+min((k-1)*i,b);
    	if(c*v>=a)
    	{
		cout<<i;
    	re;
        }
	}
}

