#define lson l,m,rt<<1
#define rson m+1,r,rt<<1|1
const int maxn  =  100010;
const int mod  = 1000000007;
int main()
{
    int i,j,k;
    string s;
    cin>>s;
    for(i=0;i<s.length();)
    {
        if(s[i] == '.')
        {
            printf("0");
            i++;
        }
        else if(s[i] == '-' && s[i+1] =='.')
        {
            printf("1");
            i+=2;
        }
        else 
        {
            printf("2");
            i+=2;
        }
    }
    return 0;
}