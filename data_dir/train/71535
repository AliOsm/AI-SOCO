#include <iostream>
#include <algorithm>
#include <set>
#include <vector>
#include <string>
// DON'T DIVIDE
// Try different approaches
using namespace std;

long long n;

int main()
{
	ios::sync_with_stdio(0);
	cin >> n;

	if(n == 0)
		cout << 0 << "\n";
	else if(n % 2 == 0)
		cout << n + 1 << "\n";
	else
		cout << (n + 1) / 2 << "\n";

	return 0;
}