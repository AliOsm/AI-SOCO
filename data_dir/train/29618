#include<iostream>
#include<cmath>
using namespace std;
int main(){
	
	int n , k;
	cin >> n >> k;
	
	
	if((n-1)% k > 1)	cout << ((n-1)/k)*2 + 2 <<endl;
	else if((n-1)%k == 1)	cout << ((n-1)/k)*2 +1<<endl;
	else 	cout << ((n-1)/k)*2<<endl;
	
	for(int i = 2 ; i <= k+1 ; i++)	cout << "1 "<<i<<endl;
	
	for(int i = k+2 ; i <= n ; i++)		cout << i-k<<" "<<i<<endl;
}