#include <bits/stdc++.h>

using namespace std;

const int MAXN = (int)5e5+228;
const int INF = (int)1e9 + 7;

int n, m;

int main() {
	#ifdef accepted
		freopen(".in", "r", stdin);
	#endif
	srand(time(0));
	ios_base::sync_with_stdio(0);
	cin >> n >> m;
	if(m <= n / 2) cout << max(1, m) << endl;
	else cout << n - m << endl;
	                    
	return 0;
}