#pragma GCC optimize("Ofast")
#pragma GCC optimize("unroll-loops")
#pragma GCC target("sse,sse2,sse3,ssse3,sse4,popcnt,abm,mmx,avx,tune=native")
#include <bits/stdc++.h>
using namespace std;

int main()
{
	ios::sync_with_stdio(false);
	int n; cin >> n;
	string t; cin >> t;
	string s;
	for (int i = 0, len = 1; i < n; len++)
	{
		s += t[i];
		i += len;
	}
	cout << s << endl;
}