#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef pair<int, int> pi;


int main() {
  ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
  int n;
  cin >> n;
  string s;
  cin >> s;
  int i = -1; 
  while (i < n) {
    i++;
    int d = 0;
    while (i < n and s[i] == '1') {i++; d++;}
    cout << d;
  }
  cout << endl;
  return 0;
}

