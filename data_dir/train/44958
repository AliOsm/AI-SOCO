using namespace std;

#define EPS 1e-9
#define INF MOD
#define MOD 1000000007LL
#define fir first
#define iss istringstream
#define sst stringstream
#define ite iterator
#define ll long long
#define mp make_pair
#define rep(i,n) rep2(i,0,n)
#define rep2(i,m,n) for(int i=m;i<n;i++)
#define pi pair<int,int>
#define pb push_back
#define sec second
#define sh(i) (1LL<<i)
#define sz size()
#define vi vector<int>
#define vc vector
#define vl vector<ll>
#define vs vector<string>

int a[200010],n,s;

int main(){
	cin>>n;
	rep(i,n){
		cin>>a[i];
		s+=a[i];
	}
	if(s%n){cout<<0;}
	else{
		s/=n;
		vi v;
		rep(i,n)if(a[i]==s)v.pb(i+1);
		cout<<v.sz<<endl;
		rep(i,v.sz)cout<<v[i]<<" ";
	}
}
