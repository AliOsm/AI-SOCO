#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

int main() {
    ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
    int n;
    string s;
    cin >> n >> s;

    int c = 0;
    for(int i = 0; i < n; i++) {
        if(s[i] == '8') c++;
    }

    cout << min(c, n / 11) << endl;
}

