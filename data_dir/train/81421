#include<stdio.h>
int main()
{
int n;
scanf("%d",&n);
if(n==2)printf("NO\n");
else {
int x,y;
scanf("%d%d",&x,&y);
if(x==n/2 && y==n/2)printf("NO\n");
else 
if(x==n/2 && y==n/2+1)printf("NO\n");
else 
if(x==n/2+1 && y==n/2)printf("NO\n");
else 
if(x==n/2+1 && y==n/2+1)printf("NO\n");
else 
printf("YES\n");
}
return 0;
}