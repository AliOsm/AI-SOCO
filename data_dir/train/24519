#include <bits/stdc++.h>
using namespace std;
int main(){
  long long a, b, c, mn=2e18, tmp, tmp1, tmp2, tmp3, i;
  while(cin>>a>>b>>c){
    mn=4e18;
    i=max(a, max(b, c));
    for(long long tmp=i-10; tmp<i+10; ++tmp){
      tmp1=tmp;
      tmp2=tmp;
      tmp3=tmp;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
        mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp;
      tmp2=tmp;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp;
      tmp2=tmp-1;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
