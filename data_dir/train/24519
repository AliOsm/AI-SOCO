      tmp1=tmp-1;
      tmp2=tmp;
      tmp3=tmp;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-1;
      tmp2=tmp;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-2;
      tmp2=tmp-1;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-1;
      tmp2=tmp-1;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-1;
      tmp2=tmp-1;
      tmp3=tmp;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-1;
      tmp2=tmp-1;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-1;
      tmp2=tmp-2;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-2;
      tmp2=tmp-2;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-2;
      tmp2=tmp-2;
      tmp3=tmp-2;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-1;
      tmp2=tmp-2;
      tmp3=tmp-2;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-1;
      tmp2=tmp-1;
      tmp3=tmp-2;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
      tmp1=tmp-1;
      tmp2=tmp-1;
      tmp3=tmp-1;
      if(tmp1>=a&&tmp2>=b&&tmp3>=c)
      mn=min(mn, max(0ll, tmp1-a)+max(0ll, tmp2-b)+max(0ll, tmp3-c));
    }
    cout<<mn<<endl;
  }
