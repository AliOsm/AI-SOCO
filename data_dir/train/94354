#include <bits/stdc++.h>
using namespace std;

int n;

int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    cin >> n;
    int ans = 0;
    for (int i = 1; i <= n; i++) {
        int x[3];
        cin >> x[0] >> x[1] >> x[2];
        sort(x, x + 3);
        if (x[1] == 1) {
            ans++;
        }
    }
    cout << ans << '\n';

    return 0;
}
