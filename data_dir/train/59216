#include<bits/stdc++.h>
#define ll long long
//using namespace std;

 using namespace std;
ll n,i,j,k,l,sum=0,flag=0,t,a[100005],ans=0,m;
string s,ss;
int main()
{
   int n;
   cin>>n;
   while(n--)
   {
    int x,c=0;
    string s;
    cin>>x;
    cin>>s;
    int i=0,j=s.size()-1;
    while(i<j)
    {
        if(s[i]==s[j]||abs(s[i]-s[j])==2)
        {
            i++;
            j--;
            continue;

        }
        else if(s[i]!=s[j]&&abs(s[i]-s[j])!=2)
        {
            cout<<"NO"<<endl;
            c++;
            break;
        }
     //   cout<<"YES"<<endl;
    }
   if(c==0)
    cout<<"YES"<<endl ;
   }
   


}

