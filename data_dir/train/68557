#include<bits/stdc++.h>
using namespace std;
long long int nm[300];
int main()
{
    long long int a,b,c,d,e,j,k,x,i;
    cin>>a>>b>>x;
    if(x%2==0)
    {
        if(b<=a)
        {
        d=1;
        for(i=1;i<=(x/2);i++)
        {
            nm[d++]=0;
            nm[d++]=1;
        }
        for(i=(x/2)+1;i<=b;i++)
        {
            nm[d++]=1;
        }
        for(i=(x/2)+1;i<=a;i++)
        {
            nm[d++]=0;
        }
        }

        else
        {
        d=1;
        for(i=1;i<=(x/2);i++)
        {
            nm[d++]=1;
            nm[d++]=0;
        }
        for(i=(x/2)+1;i<=a;i++)
        {
            nm[d++]=0;
        }
        for(i=(x/2)+1;i<=b;i++)
        {
            nm[d++]=1;
        }
        }
    }
    else
    {
        if(a<=b)
        {
        d=1;
        for(i=1;i<=(x/2);i++)
        {
            nm[d++]=1;
            nm[d++]=0;
        }
        for(i=(x/2)+1;i<=b;i++)
        {
            nm[d++]=1;
        }
        for(i=(x/2)+1;i<=a;i++)
        {
            nm[d++]=0;
        }
        }

        else
        {
        d=1;
        for(i=1;i<=(x/2);i++)
        {
            nm[d++]=0;
            nm[d++]=1;
        }
        for(i=(x/2)+1;i<=a;i++)
        {
            nm[d++]=0;
        }
        for(i=(x/2)+1;i<=b;i++)
        {
            nm[d++]=1;
        }
        }
    }
    for(i=1;i<=a+b;i++)
    {
        cout<<nm[i];
    }
    cout<<endl;
    return 0;
}
