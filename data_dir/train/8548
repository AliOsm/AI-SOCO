#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N, M;
i64 a[MAX];

bool ok( i64 n )
{
    i64 tmp = 0;
    i64 cnt = 0;
    i64 quita = 0;
    for( i64 i = N; i >= 1; i -- )
    {
        cnt++;
        if( cnt > n )
        {
            cnt = 1;
            quita++;
        }
        tmp += max( 0LL , a[i] - quita );
    }
    return tmp >= M;
}

int main()
{
    optimiza_io
    cin >> N >> M;
    for( i64 i = 1; i <= N; i ++ )
        cin >> a[i];
    
    sort( a + 1 , a + N + 1 );
    
    i64 ini = 1;
    i64 fin = N;
    while( ini < fin )
    {
        i64 mid = ( ini + fin ) / 2;
        if( ok( mid ) )
            fin = mid;
        else
            ini = mid + 1;
    }
    if( ok( ini ) )
        cout << ini;
    else
        cout << "-1\n";
    return 0;
}

