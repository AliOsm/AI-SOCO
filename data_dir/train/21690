#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef unsigned long long ull;
int inf_int=2e9;
ll inf_ll=2e18;
typedef pair<int,int> pii;
#define pb push_back
const double pi=3.1415926535898;
#define dout if(debug) cout
#define fi first
#define se second
#define sp setprecision
template<typename T>
void prin(vector<T>& a)
{
    for(int i=0;i<a.size();i++)
    {
        cout << a[i]<<" ";
    }
}
template<typename T>
void prin_new_line(vector<T>& a)
{
    for(int i=0;i<a.size();i++)
    {
        cout << a[i]<<"\n";
    }
}
template<typename T,typename T1>
void prin_new_line(vector<pair<T,T1> >& a)
{
    for(int i=0;i<a.size();i++)
    {
        cout << a[i].fi<<" "<<a[i].se<<"\n";
    }
}

int sum_vec(vector<int>& a)
{
    int s=0;
    for(int i=0;i<a.size();i++)
    {
        s+=a[i];
    }
    return s;
}
template<typename T>
T max(vector<T>& a)
{
    T ans=a[0];
    for(int i=1;i<a.size();i++)
    {
        ans=max(ans,a[i]);
    }
    return ans;
}
template<typename T>
T min(vector<T>& a)
{
    T ans=a[0];
    for(int i=1;i<a.size();i++)
    {
        ans=min(ans,a[i]);
    }
    return ans;
}
int min(int a,int b,int c)
{
    return min(a,min(b,c));
}
ll min(ll a,ll b,ll c)
{
    return min(a,min(b,c));
}
int max(int a,int b,int c)
{
    return max(a,max(b,c));
}
ll max(ll a,ll b,ll c)
{
    return max(a,max(b,c));
}
#define debug 0
double s_triangle(double x1,double y1,double x2,double y2,double x3,double y3)
{
    return (((x2-x1)*(y3-y1)-(x3-x1)*(y2-y1))/2);
}
ll k,s;
vector<pair<ll,int> > gad_dol,gad_fund;
ll pre_dol[300000];
ll pre_dol_ind[300000];
ll pre_funt[300000];
ll pre_funt_ind[300000];
vector<pii> ans;
bool check(int v)
{
    ans.clear();
    int cnt=k;
    ll dol=pre_dol[v];
    ll ind_dol=pre_dol_ind[v];
    ll fun=pre_funt[v];
    ll ind_fun=pre_funt_ind[v];
    int i=0,e=0;
    ll money=0;
    while(cnt && (i<gad_dol.size() || e<gad_fund.size()))
    {
        if(i<gad_dol.size() && e<gad_fund.size())
        {
            if(gad_dol[i].fi*dol<=gad_fund[e].fi*fun)
            {
                ans.pb({gad_dol[i].se,ind_dol});
                cnt--;
                money+=gad_dol[i].fi*dol;
                i++;
            }
            else
            {
                ans.pb({gad_fund[e].se,ind_fun});
                cnt--;
                money+=gad_fund[e].fi*fun;
                e++;
            }
        }
        else if(i<gad_dol.size())
        {
            ans.pb({gad_dol[i].se,ind_dol});
            cnt--;
            money+=gad_dol[i].fi*dol;
            i++;
        }
        else
        {
            ans.pb({gad_fund[e].se,ind_fun});
                cnt--;
                money+=gad_fund[e].fi*fun;
                e++;
        }
    }
    if(cnt==0 && money<=s)
    {
        return true;
    }
    return false;
}
void solve()
{
   int n;
   cin >>n;
   int m;
   cin >> m;
   cin >> k;
   cin >> s;
   int dol[n+1];
   int funt[n+1];
   for(int i=1;i<=n;i++)
   {
       cin >> dol[i];
   }
   for(int i=1;i<=n;i++)
   {
       cin >> funt[i];
   }
   for(int i=0;i<m;i++)
   {
       int x,y;
       cin >> x >> y;
       if(x==1)
       {
           gad_dol.pb({y,i+1});
       }
       else
       {
           gad_fund.pb({y,i+1});
       }
   }
   sort(gad_dol.begin(),gad_dol.end());
   sort(gad_fund.begin(),gad_fund.end());
   pre_dol[0]=inf_int;
   pre_funt[0]=inf_int;
   for(int i=1;i<=n;i++)
   {

       if(dol[i]<pre_dol[i-1])
       {
           pre_dol[i]=dol[i];
           pre_dol_ind[i]=i;
       }
       else
       {
           pre_dol[i]=pre_dol[i-1];
           pre_dol_ind[i]=pre_dol_ind[i-1];
       }
       if(funt[i]<pre_funt[i-1])
       {
           pre_funt[i]=funt[i];
           pre_funt_ind[i]=i;
       }
       else
       {
           pre_funt[i]=pre_funt[i-1];
           pre_funt_ind[i]=pre_funt_ind[i-1];
       }
   }

   int ans1=inf_int;
   int l=1,r=n;
   vector<pii> ans2;
   while(l<=r)
   {
       int m=(l+r)/2;
       if(check(m))
       {
           if(m<ans1)
           {
               ans1=m;
               ans2=ans;
           }
           r=m-1;
       }
       else
       {
           l=m+1;
       }
   }
   if(ans1==inf_int)
   {
       cout << -1;
       return;
   }
   cout <<ans1<<"\n";
   prin_new_line(ans2);




}
#define FILE "planetwars"
int main()
{

     //   freopen("input.txt","r",stdin);
      //  freopen("output.txt","w",stdout);

  //   freopen(FILE".in","r",stdin);
   //  freopen(FILE".out","w",stdout);
       if(!debug)
       {
           ios_base::sync_with_stdio(0);
            cin.tie(0);
            cout.tie(0);
       }

        int t=1;
        while(t--)
            solve();
}
