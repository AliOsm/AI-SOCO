#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[223456],d[123456], l,r, t, k,x, y,z,a[434568],m,b[445678];
string p,q,qq;
long long s;
int main() {
    cin >> p;
    if (p == "0"){
        cout << 0;
        return 0;
    }
    l = p.size();
    s = (l-1)/2;
    for (i = 0; i < l; i ++){
        if (p[i] == '0'){
            t ++;
        }
    }
    if (l%2 == 0||t < l-1)
        s ++;
    
    cout <<s;
    return 0;   
}