#include <iostream>
#include <algorithm>
#include <set>
#include <vector>
#include <map>
#include <queue>
#include <stack>
#include <string>
#include <cstring>
#include <cstdio>
// Kobe is the GOAT
// DON'T DIVIDE
// Greedy, Prefix, Sets/Bsearch, Dfs/bfs, DP
// Stack, Bitmask, Dsu 
using namespace std;

int n;

int main()
{
	ios::sync_with_stdio(0);
	cin >> n;

	long long ans = 0; 

	for(long long i = 2; i < n; i++)
		ans += i * (i + 1);
	cout << ans << "\n";

	return 0;
}
