#include<iostream>
#include<cstdlib>
#include<vector>
#include<climits>
#include<cctype>
#include<map>
#include<list>
#include<cstdio>
#include<algorithm>
#include<memory.h>
#include<cmath>
#include<queue>
#include<fstream>
#include<sstream>
#include<set>
#define L long long int
#define LD long double
#define pi 3.141592653589793238462643383
#define M 1000000007

using namespace std;

int main()
{
    int tc=1;
    L k,b,n,t,i,s;
    while(tc--)
    {
              cin>>k>>b>>n>>t;
              i=1;
              s=0;
              while(1)
              {
                      i*=k;
                      i+=b;
                      if(i>t)
                      break;
                      s++;
              }
              cout<<max((L)0,n-s)<<"\n";
              
    }
    return 0;
}
