using namespace std;
ll n,m,k,x,y;
int main(){
    cin>>x>>y;
    if(x%y==0)cout<<(x/y)*(x/y-1)*y/2<<' ';
    else cout<<(x/y+1)*(x/y)*(x%y)/2+(x/y)*(x/y-1)*(y-x%y)/2<<' ';
    cout<<(x-y+1)*(x-y)/2;
    return 0;
}