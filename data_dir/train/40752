//In the name of Allah

#include<bits/stdc++.h>

using namespace std;

int x, y;

int main()
{
    cin >> x >> y;
    int yp = y, xp = x;
    if(y < 0)
        yp -= abs(x);
    else
        yp += abs(x);
    if(x < 0)
        xp -= abs(y);
    else
        xp += abs(y);
    if(xp > 0)
        cout << 0 << " " << yp << " " << xp << " " << 0 << endl;
    else
        cout << xp << " " << 0 << " " << 0 << " " << yp << endl;
    return 0;
}
