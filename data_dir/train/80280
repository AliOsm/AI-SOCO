#include<bits/stdc++.h>
using namespace std;
#define forr(i,a,n) for(int i=a; i<n; i++)
#define loop(i,a,n)	for(int i=a; i>=n; i--)
#define conti continue
#define brk break
#define pb push_back
#define SPEED ios_base :: sync_with_stdio(false), cin.tie(NULL), cout.tie(0)
#define in cin>>
#define out cout<<
#define endl <<"\n"
#define ll long long 

int main() 
{
	SPEED;
	int m;
	in m;
	while(m--)
	{
	int a,b,c,d;
	in a>>b>>c>>d;
	if(b==0)	{out abs(c-d) endl; conti;}
	//if(abs(c-d)==1)
	//{	
	if(c>d)	{c=c; d=d;}
	else swap(c,d);
	forr(i,0,b)
	{
		if(c<a)	c++;		
		else{
		if(d>1) d--;}
		
	}
	out c-d endl;
	}
	//else out abs(c-d) endl;
	//}
	return 0;
}