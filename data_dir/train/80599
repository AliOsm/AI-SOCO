  //  mt19937_64 rng(chrono::steady_clock::now().time_since_epoch().count()) ;




signed main(){
cin.tie(0);
ios::sync_with_stdio(false);
int n,k;
	cin>>n>>k;
	map<int,int>ma;
	vector<int>ve(n+1,0),rui(n+1,0);
	for(int i=1;i<=n;i++){
		cin>>ve[i];
		ma[ve[i]]++;
	}
	for(auto i:ma){
		if(i.second>=k){
			cout<<0<<endl;
			return 0;
		}
	}
	sort(ve.begin(),ve.end());
	for(int i=1;i<=n;i++){
//		cin>>ve[i];
		rui[i]=rui[i-1]+ve[i];
	}
	
	int ans=inf*1000000000ll;
	{
		int g=k-ma[ve[k]];
		int l=0;
		for(int i=1;i<=n;i++)if(ve[i]<ve[k])l=i;
		
		ans=min(ans,(ve[k]-1)*l-rui[l]+g);
		
	}{
		int g=k-ma[ve[n-k+1]];
		int l=0;
		for(int i=1;i<=n;i++)l+=ve[n-k+1]<ve[i];
		
		ans=min(ans,rui[n]-rui[n-l]-(ve[n-k+1]+1)*l+g);
	}
	ve[0]=-inf;
	//cout<<ans<<endl;
	for(auto w:ve)if(w!=0)for(int er=-2;er<=2;er++){
		int v=w+er;
		if(v<=0)continue;
		int k1,k2;
		int it=lower_bound(ve.begin(),ve.end(),v)-ve.begin()-1;
		int mae=(v-1)*it-rui[it];
	//	cout<<it<<endl;
		k1=it;
		if(it>=k)continue;
		it=lower_bound(ve.begin(),ve.end(),v+1)-ve.begin();
		it=n-it+1;
		k2=it;
		int ato=(rui[n]-rui[n-it])-(v+1)*it;
		if(it>=k)continue;
		
		int f=k-ma[v];
		assert(ma[v]+k1+k2==n);
	//	cout<<v<<" "<<mae<<" "<<ato<<" "<<f<<endl;
		//if(mae+ato+f==11)cout<<v<<endl;
		ans=min(ans,mae+ato+f);
	}
	cout<<ans<<endl;
	

	return 0;
 }

