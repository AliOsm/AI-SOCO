#define ll long long
#define ull unsigned long long



int main() {
    //freopen("input.txt", "rt", stdin);
    //freopen("kebab.in", "rt", stdin);
    //freopen("kebab.out", "wt", stdout);
	
	int n;
	scanf("%d", &n);
	ll ans= 0;
	for(int i = 0; i < n; i++) {
		ll a;
		cin >> a;
		ans += (a - 1LL) * (ll)i + a;
	}
	cout << ans << endl;

    return 0;
}