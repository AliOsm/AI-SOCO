#include<bits/stdc++.h>
#define MOD 1000000007
#define ll long long
#define mp make_pair
#define pb push_back 
using namespace std;
int main(){
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	int t, s, x;
	cin >> t >> s >> x;
	if(x < t){
		cout << "NO\n";
	}
	else{
		x -= t;
		if(x % s == 0 || (x % s == 1 && x / s))
			cout << "YES\n";
		else cout << "NO\n";
	}


}