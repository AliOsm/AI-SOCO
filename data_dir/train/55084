using namespace std;

#define fi first
#define se second
#define mp make_pair
#define pb push_back

#define task "a"

int main() {
    //freopen(task".in", "r", stdin); freopen(task".out", "w", stdout);
    int n, m;
    cin >> n >> m;
    int i = 1;
    while (true) {
        n--;
        if (n == -1) {
            cout << i - 1 << endl;
            return 0;
        }
        if (i % m == 0) {
            n++;
        }
        i++;
    }
    return 0;
}
