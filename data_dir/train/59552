/*jai mata di
let's rock*/
#include<bits/stdc++.h>
using namespace std;
int main()
{
  long long n,k;
  scanf("%I64d %I64d",&n,&k);
  if(n>=k)
  {
     long long ans=(k-1)/2;
     printf("%I64d\n",ans);
  }
  else
  {
      long long ans;
      if(k%2==1)
         ans=n-(k-1)/2;
      else
         ans=n-(k-1)/2-1;
      ans=max(ans,0*1LL);
      printf("%I64d\n",ans);
  }
  return 0;
}
