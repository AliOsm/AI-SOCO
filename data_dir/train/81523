#include <bits/stdc++.h>

using namespace std;

int main() {
    string s;
    cin >> s;
    for (int i = 0; i < (int)s.size() - 2; i++) {
        string t = s.substr(i, 3);
        sort(t.begin(), t.end());
        if (t == "ABC") {
            cout << "YES";
            return 0;
        }
    }
    cout << "NO";
}