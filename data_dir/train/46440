#include <bits/stdc++.h>

using namespace std;

int main(){
    int n;
    scanf("%d",&n);

    int arr[n+5];
    for(int i=0;i<n;i++){
        scanf("%d",&arr[i]);
        if(arr[i]%2==0){
            --arr[i];
        }
    }
    for(int i=0;i<n;i++){
        if(i)printf(" ");
        printf("%d",arr[i]);
    }
    puts("");

    return 0;
}
