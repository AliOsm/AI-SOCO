#include <algorithm>
#include <cstdio>
#include <cstdlib>
#include <cstring>
#include <iostream>
#define N 70
using namespace std;

char s[N];

int main(void)
{
    int i;
    int c;

    scanf("%s", s);
    for(i = c = 0; s[i]; i ++)
        c += s[i] == 'a';

    printf("%d\n", min((c << 1) - 1, i));
    
    return 0;
}