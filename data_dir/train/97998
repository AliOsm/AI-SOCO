
#include <bits/stdc++.h>

using namespace std;

typedef long long ll;

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(0);
  int t;
  cin >> t;
  while (t--) {
    ll a, b, k;
    cin >> a >> b >> k;
    ll x = 0;
    x += (k / 2) * (a - b);
    if (k % 2) {
      cout << x + a << endl;
    }
    else {
      cout << x << endl;
    }
  }
  return 0;
}
