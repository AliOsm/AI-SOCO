#include <bits/stdc++.h>

#define long long long

using namespace std ;

int main()
{
    ios_base :: sync_with_stdio(false) , cin.tie(nullptr) , cout.tie(nullptr) ;

    double a , b , c , d , p1 , p2;

    cin >> a >> b >> c >> d ;

    p1 = a / b , p2 = c / d ;
    
    cout << setprecision(10) <<  p1 * (1 /(1 - ((1 - p1) * (1 - p2))))  << '\n' ;

    return  0 ;
}