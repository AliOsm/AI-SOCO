#include<iostream>
#include<set>
#include<cmath>
#include <algorithm>
#include <vector>
using namespace std;
int main()
{ 
    int t;
    cin>>t;
    for(int i=0;i<t;i++)
    {
    	int n,k;
    	cin>>n>>k;
    	int z=n/k;
    	z=z*k;
    	int o=n%k;
    	cout<<z+min(o,k/2)<<endl;
    }
} 


