using namespace std;
ll n,m,t,x,y,a[210];
string s;
int main(){
    cin>>n>>s;
    for(int i=0;i<2*n-2;i++){
        if(i%2==0)a[s[i]-'a']++;
        else {
            if(a[s[i]-'A'])a[s[i]-'A']--;
            else x++;
        }
    }
    cout<<x;
    return 0;
}
