#define pb push_back
#define ff first
#define ss second
#define ll long long
#define maxn 105
#define mod 10000007
#include <bits/stdc++.h>
using namespace std;
 
 
 
int main(){
    int tc;
    cin >> tc;
    while(tc--){
        int a, b, x, y;
        cin >> a >> b;
        x = b / a;
        y = b % a;
        ll res = ((x+1) * (x + 1) * y) + (x * x * (a - y));
        cout << res << endl;
 
    }
    return 0;
}