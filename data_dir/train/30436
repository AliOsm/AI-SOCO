#include <bits/stdc++.h>

using namespace std;

#define int long long

int n, a[1005], ct;

main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cin >> n;
    for (int i=1;i<=n;i++)
        cin >> a[i];
    sort(a+1,a+1+n);
    swap(a[1], a[n]);
    for (int i=1;i<=n;i++)
    {
        cout << a[i] << " ";
    }
}
