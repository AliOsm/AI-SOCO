int is_prime(int n){
    for(int i = 2;i<n;i++){
        if(n%i == 0){
            return 0;
        }
    }
    return 1;
}

int main(int argc, char *argv[]){
    //freopen("input.txt", "r", stdin);
    //freopen("output.txt", "w", stdout);
    
    int n;cin>>n;
    
    int p = -1;
    
    for(int i = n;;i++){
        if( is_prime(i)){
            p =i;
            break;
        }
    }
    printf("%d\n",p);
    for(int i = 1; i<=n; i++){
        printf("%d %d\n", i, ((i+1 == n+1) ? 1 : i+1 )  );
    }
    p -= n;
    
    for(int i = 0;i<p;i++){
        printf("%d %d\n", i+1, n/2+i+1 );
    }
    
    
	return 0;
}
 