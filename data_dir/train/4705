#include<bits/stdc++.h>
#define ll long long
#define OO 2e18
#define oo 1e9
#define yalla ios::sync_with_stdio(0),cin.tie(0),cout.tie(0);
#define sz  100005
#define re return
#define mod  1000000007
#define pi acos(-1)
using namespace std;
int n,sum;
int main()
{cin>>n; int arr[n+1];
for(int i=0;i<n;i++)
    cin>>arr[i];
///
for(int i=1;i<n-1;i++)
{
  if(arr[i]>arr[i-1]&&arr[i]>arr[i+1])
       sum++;
  else if(arr[i]<arr[i-1]&&arr[i]<arr[i+1])
       sum++;
}
cout<<sum<<endl;
 re 0;
}
