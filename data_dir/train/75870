ll power(ll x,ll y){ll res=1;x=x;while(y>0){if(y&1)res=(res*x);y=y>>1;x=(x*x);}return res;}
template<typename T> T gcd(T a,T b){ if(a==0) return b; return gcd(b%a,a); }
template<typename T> T powm(T a,T b, ll m){T cnt=1; while(b>0){ if(b%2==1) cnt=(cnt*a)%m; b/=2; a=(a*a)%m; }return cnt%m;}
ll ncr(ll n,ll r){ll res=1;if(r>n)return 0;if(r>n-r)r=n-r;for(ll i=0;i<r;i++){res*=(n-i);res/=(i+1);}return res;}
ll sqr(ll x) { return x * x;}
// always use 1ll*ans to avoid signed integer overflow;
string fun(vector<int> &a,int x,int y,int curr)
{
    if(x>y)
        return "";
    if(a[x]>curr && a[y]>curr)
    {
        if(a[x]==a[y])
        {
            string s1=fun(a,x+1,y,a[x]);
            string s2=fun(a,x,y-1,a[y]);
            if(sz(s1)>sz(s2))
                return "L"+s1;
            else
                return "R"+s2;
        }
        if(a[x]<a[y])
        {
            return "L"+fun(a,x+1,y,a[x]);
        }
        else
            return "R"+fun(a,x,y-1,a[y]);
    }
    else if(a[x]>curr)
        return "L"+fun(a,x+1,y,a[x]);
    else if(a[y]>curr)
        return "R"+fun(a,x,y-1,a[y]);
    else
        return "";
}
void solve(){
	int n;cin>>n;
    vector<int> a(n);
    for(int i=0;i<n;i++)
        cin>>a[i];
    string t=fun(a,0,n-1,0);
    cout<<sz(t)<<endl;
    cout<<t<<endl;
}
int main()
{
    IOS;
    int tc;
    tc=1;
    //cin>>tc;
    while(tc--)
        solve();
    return 0; 
}
