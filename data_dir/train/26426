#define read(FILENAME) freopen((FILENAME + ".in").c_str(), "r", stdin)
#define write(FILENAME) freopen((FILENAME + ".out").c_str(), "w", stdout)
#define files(FILENAME) read(FILENAME), write(FILENAME)
#define pb push_back
const string FILENAME = "input";
const int Mod = 1000000007;


int mul(int a, int b) {
    return (1LL * a * b) % Mod;
}


int m;
unordered_map<long long, int> was;

long long getkek(long long n) {
    if (n < m) {
        return 1;
    }
    if (n == m) {
        return 2;
    }
    if (was.find(n) != was.end()) {
        return was[n];
    }
    long long f = n / 2;
    long long cnt = 0;
    for (long long i = max(1LL, f - m + 2); i <= f && i + m - 1 <= n; i++) {
        cnt += mul(getkek(f - (f - i + 1)), getkek(n - f - (i + m - 1 - f)));
    }
    cnt += mul(getkek(f), getkek(n - f));
    cnt %= Mod;
    was[n] = cnt;
    return cnt;
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
  //  read(FILENAME);
    long long n;
    cin >> n >> m;
    cout << getkek(n) << '\n';
    return 0;       
}

