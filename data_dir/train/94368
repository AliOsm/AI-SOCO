#include <bits/stdc++.h>

using namespace std;

#define ll long long
#define vt vector
#define inf 1000000000
#define mod 1000000007

int main()
{
    int a, b;
    cin >> a >> b;
    if (a < b)
        swap(a, b);
    if (a+b == 2)
        cout << 0 << endl;
    else
        cout << (a+b - 2 - !((a-b)%3)) << endl;
    return 0;
}