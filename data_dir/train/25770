using namespace std;

#define space " "
#define enter endl
#define ex exit(0)
#define mp make_pair
#define pb push_back
#define pf push_front
#define fi first
#define se second
#define input(s)\
    freopen(s,"r",stdin)
#define output(s)\
    freopen(s,"w",stdout)
#define INF 2000000007
#define LINF 40000000000000000007

typedef long long LL;
typedef unsigned long long ULL;
typedef double DB;
typedef long double LDB;
typedef pair<int,int> pii;

const int MAXN = 1e3;

int n, sum, res, ans = INF, col;
int a[MAXN];

int main()
{
    //input("input.txt"); output("output.txt");
    cin >> n;
    sum = res = 0;
    for (int i = 1; i <= n; i++)
    {
        cin >> a[i];
        sum += a[i];
    }
    sort(a + 1, a + n + 1);
    reverse(a + 1, a + n + 1);
    for (int i = 1; i <= n; i++)
    {
        res += a[i];
        if (res > sum - res)
        {
            cout << i;
            return 0;
        }
    }
}
