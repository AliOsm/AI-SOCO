#include <bits/stdc++.h>
using namespace std;
#define eb emplace_back
#define emp emplace
#define fi first
#define se second
typedef long long ll;
typedef pair<int, int> ii;
mt19937 rng(chrono::steady_clock::now().time_since_epoch().count());

int main(void) {
	ios_base::sync_with_stdio(false); cin.tie(0);

	int n; cin >> n;

	ll ans = 0;
	for (int i = 2; i <= n-1; i++) {
		ans += i*(i+1);
	}
	cout << ans << endl;

	return 0;
}

