	{
		cin>>n;
		int a[n];
		bool fl=false;
		for(j=0;j<n;++j)
		{
			cin>>a[j];
		}
		for(j=0;j<n;++j)
		{
			if(a[j]%2==0)
			{
				cout<<"1\n";
				cout<<(j+1)<<endl;
				fl=true;
				break;
			}
		}
		if(fl)continue;
		if(n==1)
			cout<<-1<<endl;
		else
			cout<<"2\n"<<"1 2"<<endl;
	}
}