#include <math.h>

#include <set>
#include <list>
#include <cmath>
#include <ctime>
#include <map>
#include <deque>
#include <queue>
#include <stack>
#include <string>
#include <bitset>
#include <cstdio>
#include <limits>
#include <vector>
#include <climits>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <numeric>
#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>
#include <functional>
#include <iomanip>
#include <iterator>
#include <regex>

using namespace std;

#define PI 3.14159265358979323846
#define EPS 1.E-8

#define FIN(a, n) { for (ul _ = 0; _ < n; ++_) cin >> (a)[_]; }
#define FOUT(a, n) { cout << a[0]; for (ul _ = 1; _ < n; ++_) cout << ' ' << a[_]; cout << '\n'; }

typedef unsigned char uc;
typedef unsigned int ui;
typedef unsigned long long ul;
typedef long long sl;

pair<int, int> a[1000];

bool cmp(const pair<int, int>& x, const pair<int, int>& y)
{
	if (x.first == y.first)
		return x.second < y.second;
	return x.first > y.first;
}

int main(int argc, char* argv[])
{
    ios_base::sync_with_stdio(false);

	int n;
	cin >> n;
	for (int i = 0; i < n; ++i)
	{
		int c = 0;
		for (int j = 0; j < 4; ++j)
		{
			int t;
			cin >> t;
			c += t;
		}

		a[i].first = c;
		a[i].second = i;
	}

	sort(a, a + n, cmp);
	int x = 0;
	for (int i = 0; i < n; ++i)
	{
		if (a[i].second == 0)
		{
			x = i + 1;
			break;
		}
	}

	cout << x << endl;
    return 0;
}
