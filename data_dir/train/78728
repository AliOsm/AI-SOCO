#include<bits/stdc++.h>
#define MAX 100005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

i64 N;

int main()
{
    optimiza_io
    cin >> N;
    N++;
    i64 ans = 0;
    i64 mult = 1;
    i64 primera = true;
    while( N > 1 )
    {
        if( N % 2 == 0 )
        {
            if( primera )
            {
                ans++;
                primera = false;
                N /= 2;
            }
            else
            {
                ans += mult;
                mult *= 2;
                N /= 2;
            }
        }
        else
        {
            ans += ( N * mult );
            if( ! primera )
                ans -= mult;
            break;
        }
    }
    cout << ans << "\n";
    return 0;
}
