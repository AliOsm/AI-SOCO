#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef pair <int , int> pii;

const int N = 2e5+10 , mod = 1e9+7;

int32_t main(){
   ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0);
   int t;
   cin >> t;
   while(t--){
      int n;
      cin >> n;
      if(n % 2 == 1){
         cout << 7;
         n -= 3;
      }
      for(int i = 0 ; i < n / 2 ; i++)
         cout << 1;
      cout << "\n";
   }
   return 0;
}
