#include<bits/stdc++.h>
using namespace std;
main()
{
   int i,n;
   cin>>n;
   if(n%2==0)
      return cout<<-1,0;
   int a[n+1],b[n+1],c[n+1];
   for(i=0;i<n;++i)
   {
      a[i]=b[i]=i;
      c[i]=(a[i]+b[i])%n;
   }
   for(i=0;i<n;++i)
      cout<<a[i]<<" ";
   cout<<endl;
   for(i=0;i<n;++i)
      cout<<b[i]<<" ";
   cout<<endl;
   for(i=0;i<n;++i)
      cout<<c[i]<<" ";
   cout<<endl;
}