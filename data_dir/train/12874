#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define rep(i,a,n) for (int i=a;i<n;i++)
#define per(i,a,n) for (int i=n-1;i>=a;i--)
#define setDP(arr) memset(arr,-1,sizeof arr)
#define Clear(arr) memset(arr,0,sizeof arr)
#define pb push_back
#define mp make_pair
#define all(x) (x).begin(),(x).end()
#define fi first
#define se second
#define sz(x) ((int)(x).size())
#define TurnOn(s,j) s|=(1<<j)
#define TurnOff(s,j) s&=~(1<<j)
#define Flip(s,j) s^=(1<<j)
#define LSB(s) s&(-s)
#define Setall(n) ((1<<n)-1)
const ll mod = 1000000007;
const double eps = 1e-9;
#define In_the_name_of_allah_the_merciful ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
#define Alhamdulillah return 0 ;
const int N = 1e6+6;
vector<int> v[N];
bool vis[N];
int n,t[N],T[N],tt,root;
vector <int> ans;
int dfs(int cr){
    vis[cr] = 1;
    int nodeTemp = 0;
    rep(i,0,sz(v[cr])){
        int child = v[cr][i];
        if (!vis[child]){
            nodeTemp += dfs(child);
        }
    }
    T[cr] = nodeTemp + t[cr];
    //cout << "curr node : " << cr << " has Temperature : " << T[cr] << endl;
    if (T[cr] == tt/3 && sz(ans) < 2 && cr != root){
        ans.pb(cr);
        return 0;
    }
    return T[cr];
}
int main()
{
    In_the_name_of_allah_the_merciful
    cin >> n;
    ++n;
    rep(i,1,n){
        int lamp;
        cin >> lamp >> t[i];
        if (lamp){
            v[lamp].pb(i);
            v[i].pb(lamp);
        }
        else root = i;
        tt += t[i];
    }
    if (tt%3!=0)
        return cout << "-1" << endl,0;
    dfs(root);
    if (sz(ans) == 2)
        cout << ans[0] << " " << ans[1] << endl;
    else
        cout << "-1" << endl;
    Alhamdulillah
}

