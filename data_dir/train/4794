#include<bits/stdc++.h>

using namespace std;

int main()
{
    int a[3],result[6];
    scanf("%d %d %d",&a[0],&a[1],&a[2]);
    result[0]=a[0]*a[1]*a[2];
    result[1]=a[0]+a[1]+a[2];
    result[2]=(a[0]+a[1])*a[2];
    result[3]=(a[0]*a[1])+a[2];
    result[4]=a[0]+(a[1]*a[2]);
    result[5]=a[0]*(a[1]+a[2]);
    sort(result,result+6);
    cout<<result[5];
    return 0;
}
