int main()
{
  //freopen("in.txt","r",stdin);
  int n,i,j;
  while(~scanf("%d",&n))
  {
   if(n%2==0)
   {puts("-1");continue;}
   else
   {
    for(i=0;i<n;i++)printf("%d ",i);
    puts("");
    for(i=0;i<n;i++)printf("%d ",i);
    puts("");
    for(i=0;i<n;i++)printf("%d ",(i+i)%n);
    puts("");
   }
  }
  return 0;
}
