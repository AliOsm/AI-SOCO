#include <bits/stdc++.h>
#define ll long long
using namespace std;
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    //ifstream cin("in.in");
    ll sk, naud, a, b, cena;
    cin >> sk;
    for(ll i = 0;i < sk;i++)
    {
        cin >> naud >> a >> b >> cena;
        cout << naud/cena + ((naud/cena)/a)*b << '\n';
    }
    return 0;
}
