#include <bits/stdc++.h>
#define ld long double
#define ll long long int
#define mod 1000000007
#define pb push_back
#define endl '\n'
#define Endl '\n'
#define eps 1e-9
#define PI acos(-1.0)
#define ii pair<ll,ll>
#define se second
#define fi first
using namespace std;

int main(){
    int n;
    cin>>n;
    string str;
    cin>>str;
    int ans=0;
    for(int i=0;i<n && str[i]=='<';i++)ans++;
    for(int i=n-1;i>=0 && str[i]=='>';i--)ans++;
    cout<<ans<<endl;
}
