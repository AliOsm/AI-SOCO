#include <bits/stdc++.h>

using namespace std;

int main() {

	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);

	int n;

	cin >> n;

	int memo[n + 1][4];

	memo[0][0] = 1;

	for (int i = 0; i <= n; i++)
		for (int j = 0; j < 4; j++) {
			if (i == 0 && j == 0)
				continue;
			memo[i][j] = 0;
		}

	for (int i = 1; i <= n; i++)
		for (int j = 0; j < 4; j++)
			for (int offset = 1; offset < 4; offset++)
				memo[i][j] = (memo[i][j] + memo[i - 1][(j + offset) % 4])
						% (int) (1e9 + 7);

	cout << memo[n][0] << '\n';

	return 0;

}
