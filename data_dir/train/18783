#include<bits/stdc++.h>
using namespace std;
#define Jewel ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);

int main()
{
    Jewel;
    int n, i;
    string a;
    cin>>n>>a;
    a = '0' + a + '0';
