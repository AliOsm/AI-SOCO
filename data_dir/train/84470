#include<bits/stdc++.h>
#define ll long long 
#define scn(n) scanf("%d",&n)
#define lscn(n) scanf("%lld",&n)
#define lpri(n) printf("%lld",n)
#define pri(n) printf("%d",n)
#define pln() printf("\n")
#define priln(n) printf("%d\n",n)
#define lpriln(n) printf("%lld\n",n)
#define rep(i,init,n) for(int i=init;i<n;i++)
#define pb push_back     
#define mp make_pair
#define F first
#define S second
#define gcd __gcd
#define inf INT_MAX
#define ninf INT_MIN
using namespace std;
const ll mod=1e9+7;         
const int N=1e3+4;
int main()                  
{
    int n;
    scn(n);
    int f=0;
    rep(i,0,n)
    {
        int tf=0;
        if(f)
        {
            rep(i,0,n)
            {
                if(tf==0)
                cout<<'W';
                else
                cout<<'B';
                tf^=1;
            }
        }
        else
        {
            rep(i,0,n)
            {
                if(tf==0)
                cout<<'B';
                else
                cout<<'W';
                tf^=1;
            }
        }
        f^=1;
        printf("\n");
    }
}