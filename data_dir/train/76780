#include<bits/stdc++.h>
#define ll long long
using namespace std;

int main()
{
    int q;

    cin >> q;

    while(q--){
        string s;
        int l;

        cin >> l >> s;

        string ch = s.substr(1, l - 1);

        if(l == 2 && s[0] >= s[1]) cout << "NO" << endl;
        else{
            cout << "YES" << endl;
            cout << 2 << endl;
            cout << s[0] << ' ' << ch << endl;
        }
    }

    return 0;
}
