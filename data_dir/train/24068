#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,m,i;
    cin>>n>>m;
    if(n==m)
    {
        cout<<n+1<<endl;
        for(i=0;i<n;i++)
            cout<<n-i<<" "<<i<<endl;
        cout<<n-n<<" "<<i<<endl;
    }
    else if(n<m)
    {
        cout<<n+1<<endl;
        for(i=0;i<=n;i++)
            cout<<i<<" "<<i+1<<endl;
    }
    else
    {
        cout<<m+1<<endl;
        for(i=0;i<=m;i++)
            cout<<i+1<<" "<<i<<endl;
    }
}