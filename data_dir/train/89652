typedef long long LL;
using namespace std;
const LL MOD = 1000000000 + 7;
const LL MAXN = 100000 + 100;

int main()
{
#ifdef ONLINE_JUDGE
    //freopen("input.txt", "r", stdin); freopen("output.txt", "w", stdout);
#else
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
#endif
    ios::sync_with_stdio(false);
    cin.tie(0);
    
    int n,k;
    cin>>n>>k;
    string s;
    cin>>s;

    int maxi = 0;
    vector<int> count(26);
    for(int i = 0; i < n; ++i) {
        int v = i;
        while(v < n && s[v] == s[i]) {
            v++;
        }

        int len = v - i;
        //cout<<len<<endl;
        count[s[i] - 'a'] += len / k;
        maxi = max(maxi, count[s[i] - 'a']);
        i = v - 1;
    }

    cout<<maxi;

    return 0;
}