int32_t main(){__
  int n;
  cin>>n;
  vi a(n);
  for(int i=0;i<n;i++){
    cin>>a[i];
  }
  sort(all(a));
  int ans=0;
  for(int i=0;i+1<n;i+=2){
    ans+=(a[i+1]-a[i]);
  }
  cout<<ans<<"\n";
return 0;
}