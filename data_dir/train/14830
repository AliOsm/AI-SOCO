#include <bits/stdc++.h>
using namespace std;
#define int long long
int32_t main() {
    ios::sync_with_stdio(false);cin.tie(0);
    int t;
    cin>>t;
    while(t--) {
        int n,x,y;
        cin>>n;
        map<int,pair<int,int> > m;
        map<int,vector<int> > m2; 
        vector<pair<int,int> > v;
        for(int i=0;i<n;i++) {
            cin>>x>>y;
            m[x].first++;
            m[x].second+=y;
        }
        for(auto &i:m) {
            m2[i.second.first].push_back(i.second.second);
        }
        pair<int,int> ans;
        int mx = 1000000;
        multiset<int> ones;
        while((m2.size() || ones.size()) && mx>0) {
            if(ones.empty()) {
                auto it = --m2.end();
                mx = it->first;
                for(auto &i:it->second) {
                    ones.insert(i);
                }
                m2.erase(it);
            } else {
                auto it = m2.find(mx);
                if(it!=m2.end()) {
                    for(auto &i:it->second) {
                        ones.insert(i);
                    }
                    m2.erase(it);
                }
                ans.first+=mx;
                auto it2 = --ones.end();
                ans.second += min(*it2, mx);
                ones.erase(it2);
                mx--;
            }
        }
        cout<<ans.first<<" "<<ans.second<<'\n';
    }
    return 0;
}