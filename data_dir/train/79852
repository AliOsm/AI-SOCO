#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[123456],a[1111234], b[1125678],d[123456], l,ll,r, s, t, k, m, xh, x, x1, y,z;
string p,q;
map<long long,long long> mm;
int main() {
    cin >> n>>p;
    for (i = 0; i < n; i ++){
        if (p[i] == 'o'){
            if (i +2 <n && p[i+1] == 'g' && p[i+2] == 'o' ){
                cout << "***";
                while (i + 2 < n && p[i+1] =='g'&& p[i+2] == 'o')
                    i += 2;
            }
            else cout << p[i];
        }
        else cout << p[i];
    }
    return 0;
}