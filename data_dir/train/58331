    #include <bits/stdc++.h>

    using namespace std;

    typedef long long int ll;
    typedef double dd;
    typedef unsigned long long int ull;
    typedef long double ldd;


    inline ll StrToInt(string& s)
    {
        ll ans = 0;
        for (int i = 0; i < s.size(); i++)
            ans = ans * 10 + s[i] - '0';
        return ans;
    }

    int main()
    {
        ios_base::sync_with_stdio(0);
        cin.tie(0);


        int k;
        cin >> k;
        if (k > 18 * 2)
        {
            cout << -1;
            return 0;
        }
        while (k >= 2)
        {
            cout << 8;
            k -= 2;
        }
        if (k)
            cout << 9;
    }
