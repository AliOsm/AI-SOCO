#include<bits/stdc++.h>
using namespace std;
#define F first
#define S second
#define pb push_back
#define mp make_pair
#define ll long long
const int MX=2e7+5;
int N, M, K;
int arr[MX], cnt[MX];
bool is[MX];
int main()
{



    cin>>N;
    ll an=0;
    for(int i=1;i<=N;i++)
    {
        int x, y;
        scanf("%d%d", &x, &y);
        an=max(an,(ll) x+y);

    }
    cout<<an;

    return 0;
}
