#include <bits/stdc++.h>

using namespace std;


int main() {
  #ifdef LOCAL
  freopen("sol.in", "r", stdin);
  freopen("sol.out", "w+", stdout);
  #endif
  ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
  long long n, m, k, l;
  scanf("%lld %lld %lld %lld", &n, &m, &k, &l);
  long long d = ((l + k + m - 1) / m);
  if (d * m <= n) {
    printf("%lld\n", d);
  } else {
    puts("-1");
  }
  return 0;
}