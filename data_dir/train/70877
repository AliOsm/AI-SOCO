#include<bits/stdc++.h>
#define ll long long
#define pi acos(-1.0)
using namespace std;

int main()
{
    int w, h, k, sum = 0;

    cin >> w >> h >> k;

    while(k--){
        sum += 2 *(w + (h - 2));

        w -= 4;
        h -= 4;
    }

    cout << sum << endl;

    return 0;
}
