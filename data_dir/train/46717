const int mod=1000000007;
typedef pair<int,int> pii;
const int inf=1e17;
const int N=1e5+5;
int32_t main()
{
    ios_base::sync_with_stdio(0); cin.tie(0);cout.tie(0);
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        if(n%2){
            int ans=n-n/2-1;
            ans=max(ans,0LL);
            cout<<ans<<endl;
        }
        else{
            int ans=n-n/2-1;
            ans=max(ans,0LL);
            cout<<ans<<endl;
        }
    }
}