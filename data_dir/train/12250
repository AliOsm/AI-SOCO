#include <stdio.h>
#include <math.h>
#include <vector>
#include <queue>
#include <set>
#include <map>
#include <string>
#include <algorithm>
#include <iostream>
using namespace std;
 
 
 
long long n, r;
 
int main() {
    cin >> n;
 
    r = (n / 3) * 2;
 
    if (n % 3)
        r++;
 
    cout << r;
}