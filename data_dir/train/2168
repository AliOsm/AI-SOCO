#include <bits/stdc++.h>
using namespace std;
int main()
{
	int t;
	cin >> t;
	while(t--)
	{
		int  a, b, c, e, d;
		cin >> a >> b >> c >> d;
		e = max(a, max(b, c));
		if((a + b + c + d) % 3 == 0 && (a + b + c + d)/3 >= e)
		{
			cout << "YES" << endl;
		}
		else
		{
			cout << "NO" << endl;
		}
	}
}