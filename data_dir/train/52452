# define line cout<<"\n";

const ld pie = 3.14159265358979 ;
const ll mod = 1e9 + 7 ;

string vow = "aeiou";

void solve ( int test_case )
{
    int n ;
    cin >> n ;

    string s ; cin >> s ;

    string v = "ACTG" ;
    int ans = INT_MAX ;

    for ( int i=0 ; i < n-4 + 1 ; i++ )
    {
        int c = 0 ;
        for ( int j = 0 ; j < 4 ; j++ )
        {
            c += min ( 26 - abs ( s[i+j] - v[j] ) , abs ( s[i+j] - v[j] ) ) ;
        }

        ans = min ( ans , c ) ;

    }

    cout << ans ; line
}

int main()
{
    int t = 1;
    //cin >> t;

    for ( int i=0 ; i < t ; i++ ) solve(i);
    return 0;
}
