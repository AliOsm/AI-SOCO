#include <bits/stdc++.h>
#define lld long long
using namespace std;
int main()
{
    int n;
    cin>>n;
    if (n==3)
    {
        cout<<"6\n";
        return 0;
    }
    lld last = 6;
    for (int i=4;i<=n;++i)
        last = last + (i*(i-1));
    cout<<last<<'\n';
    return 0;
}
