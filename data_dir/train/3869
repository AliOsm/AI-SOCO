// IN THE NAME OF GOD
#include <bits/stdc++.h>

using namespace std;

typedef long long ll;

const int MAXN= 1e5 + 22 , INF = 1e9 + 7;

int n ;

int main()
{
	ios_base::sync_with_stdio(false) ;
	cin >> n ;
	if(n%2==0)
	{	
		cout << n/2 << endl ;
		for(int i=1;i<=n/2;i++)
			cout << 2 << " " ;
	}
	else
	{
		cout <<((n-3)/2)+1 << endl ;
		cout << 3 << " " ; 
		for(int i=1;i<=(n-3)/2;i++)
			cout << 2 << " " ;
	}
	return 0 ;	
}


