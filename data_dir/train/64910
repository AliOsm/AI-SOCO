int n, x, y;
int main() {
  cin >> n >> x >> y;
  n /= 2;
  if (x >= n && x <= n +1 && y >= n && y <= n + 1) {
    cout << "NO\n";
  } else {
    cout << "YES\n";
  }
  return 0;

}
