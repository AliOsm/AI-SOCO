#include <bits/stdc++.h>
#include <iostream>
#include <queue>
using namespace std;
//43 + 311 + 12 = 366;
//1229 + 291 + 1807 + 2291 + 483 + 1205 + 1328;
long long n,a,b,c,d,tt,e,y;

int main()
{
    cin >> n >> a;
    for(int i = 0 ; i < n-1 ; i += 1){
        cin >> b;
        c = abs(b-a);
        a = b;
        tt = d;
        d = max(c,e+c);
        y = max(y,d);
        e = tt - c;
    }
    cout << y;
}