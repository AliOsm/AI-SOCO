#include<bits/stdc++.h>
using namespace std;
int main () {
	int n;
	cin>>n;
	string s;
	cin>>s;
	if(n%2==0){
		for(int i=0;i<s.size();i+=2){
			if(s.size()-2==i){
				cout<<s[i]<<s[i+1];
				break;
			}
			cout<<s[i]<<s[i+1]<<"-";
		}
	}
	else {
		for(int i=0;i<s.size();i+=2){
			if(s.size()-3==i){
				cout<<s[i]<<s[i+1]<<s[i+2];
				break;
			}
			cout<<s[i]<<s[i+1]<<"-";
		}
	}
	return 0;
}
