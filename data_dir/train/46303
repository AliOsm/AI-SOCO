#include <bits/stdc++.h>
using namespace std;
#define int long long
int in(){int32_t x ; scanf("%d",&x) ;  return x ;}
const int maxn = 2e5 + 10;
inline int rev(int x) {int ret =0 ; while(x) ret = 10*ret+(x%10) , x /= 10 ; return ret; }
int32_t main()
{
    int a = in() - 1;
    int x = a;

    int zel = 1;
    while(a --) zel += 3;
    cout << zel*(zel+1)/2+3*x*(x+1)/2 << endl;
}
