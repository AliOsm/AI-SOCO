#include <bits/stdc++.h>
using namespace std;

using ll = long long;
const int sz = 2e5 + 10;

int main() {
    #ifdef CLown1331
        freopen( "in.txt","r",stdin );
    #endif /// CLown1331
    int n, ans;
    string s;
    while( cin >> n ) {
        ans = 0;
        while( n-- ) {
            cin >> s;
            ans += ( s[0] == '+' || s[2] == '+' ) ? 1 : -1;
        }
        cout << ans << "\n";
    }
    return 0;
}
