//Dream your Code, Code your Dream
#include<bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef long double ld;
ll ans = 0;
ll n;
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    cin >> n;
    while(n > 0){
        ans += n/2;
        ans += n%2;
        n--;
    }
    cout << ans;
    return 0;
}
