#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;

class ProblemCWarriorAndArcher {
public:
	void solve(std::istream& in, std::ostream& out) {
		int n; in>>n;
		int arr[n];
		for(int i = 0; i<n; ++i) in>>arr[i];
		sort(arr, arr+n);
		int res = arr[n/2]-arr[0];
		for(int i = 1; i<n/2; ++i) res = min(res, arr[n/2+i]-arr[i]);
		out<<res;
	}
};


int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	ProblemCWarriorAndArcher solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
