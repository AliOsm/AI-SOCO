#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

int n;
vector<ll> arr;

ll solve(int l, int r, ll h) {
	if(l > r) {
		return 0;
	}
	int min_i = l;
	for(int i = l + 1; i <= r; ++i) {
		if(arr[i] < arr[min_i]) {
			min_i = i;
		}
	}
	return min(ll(r - l + 1), solve(l, min_i - 1, arr[min_i]) + solve(min_i + 1, r, arr[min_i]) + arr[min_i] - h);
}

int main (int argc, char *argv[])
{
	scanf("%d", &n);
	arr.resize(n);
	for(int i = 0; i < n; ++i) {
		scanf("%lld", &arr[i]);
	}
	printf("%lld", solve(0, n - 1, 0));
	
	return 0;
}

