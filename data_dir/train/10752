using namespace std;

const int N = 100005;
const int inf = 1000 * 1000 * 100;
const int mod = 1000 * 1000 * 1000 + 7;
mt19937 myrand(chrono::steady_clock::now().time_since_epoch().count());

int t;
int n;

int main() {
    cin >> t;
    while (t--) {
        cin >> n;
        if (n % 2){
            printf("7");
            n -= 3;
        }
        n /= 2;
        while (n--) {
            printf("1");
        }
        printf("\n");
    }
    return 0;
}
