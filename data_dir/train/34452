typedef long long ll;
typedef double d;
using namespace std;

int main()
{
    cin.tie(0);
    std::ios::sync_with_stdio(false);
    ll n=0,out=0,target,add=0;
    cin >> target;
    target=abs(target);
    while(target>n||n%2!=target%2)
    {
        add++;
        n+=add;
    }
    cout << add<< endl;
    return 0;
}
