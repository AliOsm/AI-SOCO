// #define IOS ios_base::sync_with_stdio(0); cin.tie(0)
const int MXN = (int)3e2 + 7;
const int mod = (int)1e9 + 7;
int main() {
	int n; string s; cin >> n >> s;
	for (int i = 0; i < n - 1; i++) {
		if (s[i] > s[i+1]) {
			printf("YES\n%d %d\n", i+1, i+2);
			return 0;
		}
	}
	puts("NO");
	return 0;
}
