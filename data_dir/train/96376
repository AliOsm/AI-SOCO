set <ll> st;
int main(){
	ios::sync_with_stdio(NULL);
	cin.tie(NULL);
	cout.tie(NULL);
	string s;
	cin>>s;
	for(i=0;i<s.size();i++){
		b=(s[i-1]-48)*10+s[i]-48;
		if(s[i]%4==0){
			//cout<<i<<"q";
			ans++;
		}
		if(b%4==0){
			ans+=i;
			//cout<<i<<"w";
			}
	}
	cout<<ans;
}