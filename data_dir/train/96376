#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define pb push_back
#define mk make_pair
#define lw lower_bound
ll b,ans=0,c[1234567],d,e,i,j,n,l,r,k,h;
vector<ll> v,v1,v2,v3,v4;
map<ll,ll> m;
pair<ll,ll> p[1234567];
