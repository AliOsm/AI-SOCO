#include "bits/stdc++.h"
using namespace std;

#define F first
#define S second
#define mp make_pair
#define pb push_back
#define pi acos(-1.0)
typedef long long int ll;
const ll N = 2e5+5,inf = 1e9+7;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);

    double n,R;cin>>n>>R;
    double theata = ( pi ) / n ;
    double  r = R * sin(theata );
    r /= ( 1 - sin( theata ) );
    cout<<fixed;
    cout<<setprecision(10);
    cout<<r<< "\n";





    return 0;
}
