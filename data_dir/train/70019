#include <bits/stdc++.h>
using namespace std;

int n, ans = 0;
vector<int> p;

int pw(int a) {
	int ans = 1;
	while(a--) {
		ans *= 2;
	}

	return ans;
}

int dfs(int v) {
	int q = 0, qq = 0;
	if(2 * v + 1 < n) {
		q = dfs(2 * v + 1);
		qq = dfs(2 * v + 2);
		ans += abs(q - qq);
		q = max(q, qq);
	}
	return p[v] + q;
}

int main (int argc, char *argv[])
{
	int m;
	scanf("%d", &m);
	n = pw(m + 1) - 1;
	p.resize(n);
	p[0] = 0;
	for(int i = 1; i < n; ++i) { 
		scanf("%d", &p[i]);
	}
	dfs(0);
	printf("%d", ans);

	return 0;
}

