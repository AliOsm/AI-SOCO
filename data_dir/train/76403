#include <bits/stdc++.h>
using namespace std;

typedef long long ll;
const int maxn=1e6+7;
const int inf=INT_MAX;
const ll inff=1e18;
const ll mod=1e9+7;
#define pii pair<int,int>
#define mkp make_pair
#define F first
#define S second
#define pb push_back
#define sz(v) ((int)(v).size())
#define all(v) (v).begin(),(v).end()
//#define int ll

#ifdef HNO2
#define IOS
#else
#define endl '\n'
#define IOS ios::sync_with_stdio(0); cin.tie(0);
#endif // HNO2

int q;
int n;
int a[maxn];

int32_t main()
{
    IOS
    cin>>q;
    while (q--)
    {
        cin>>n;
        for (int i=1;i<=n;i++) cin>>a[i];
        sort(a+1,a+n+1);
        int now=0;
        for (int i=1;i<n;i++)
            if (a[i+1]-a[i]==1) now++;
        if (now) cout<<2<<endl;
        else cout<<1<<endl;
    }
}

