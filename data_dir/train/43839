#include <bits/stdc++.h>
#define INT long long int
#define mod 1000000007
#define MOD 1000000000000000000
#define mod2 998244353
using namespace std;
INT t, a[100010];

int main()
{
    ios::sync_with_stdio(false);
    cin>>t;
    while( t-- )
    {
        INT n;
        cin>>n;
        for(int i = 0 ; i < n ; i++ ) cin>>a[i];
        sort(a, a+n);
        cout<<min( a[n-2]-1, n-2 )<<endl;
    }
}



