#include <bits/stdc++.h>
 
#define ll long long
#define ull unsigned ll
#define pb push_back
#define mp make_pair
#define F first
#define S second
using namespace std;
int main () {
    ll a, b;
    cin >> a;
    if(a <= 2){
        cout << -1;
        return 0;
    }
    if(a % 2 != 0){
        cout << a / 2 * 1ll * (a + 1) << " " << a / 2 * 1ll * (a + 1) + 1;
    }
    else{
        cout << a * a / 4 + 1 << " " << a * a / 4 - 1;
        
    }
    return 0;
}