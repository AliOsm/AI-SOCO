	// ios_base::sync_with_stdio(false);
	// cin.tie(0);
	// cout.tie(0);
	int TESTS=1;
//	cin>>TESTS;
	while(TESTS--)
	{
		ll n,k;
		cin>>n>>k;
		//cout<<n<<' '<<k<<endl;
		ll p[26]={0};
		string s;
		cin>>s;
		ll ans=0;
		rep(i,0,k)
		{
			char c;
			cin>>c;
		//	cout<<c<<endl;
			p[c-'a']=1;
		}
		ll i=0;
		while(i<n)
		{
			while((i<n)&&(p[s[i]-'a']==0)) i++;
			ll j=i;
			while((j<n)&&(p[s[j]-'a']==1)) j++;
			ans+=(j-i)*(j-i+1)/2;
			i=j;
		}
		cout<<ans<<endl;
	}
	return 0;
}