#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, x, cub[2];

int main()
{
    optimiza_io
    cin >> N;
    while( N -- ) {
        cin >> x;
        cub[x & 1]++;
    }
    cout << min( cub[0] , cub[1] );
    return 0;
}