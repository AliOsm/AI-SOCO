	ll power(ll x,ll y, ll p) 
	{ 
	    ll res = 1; 
	    x = x % p;
	    while (y > 0) 
	    {  // If y is odd, multiply x with result 
	        if (y & 1) 
	            res = (res*x) % p;
	            
	        y = y>>1; 
	        x = (x*x) % p;   
	    } 
	    return res; 
	} 
	ll isPrime(ll n)
	        {
	            
	           if(n==0 || n==1)
	           return 0;
	            if (n%2 == 0) 
	                return 2;
	            
	            if(n%3==0)
	                return 3;
	         
	            for (ll i=5; i*i<=n; i=i+6)
	            {
	                if (n%i == 0)
	                   return i;
	                if (n%(i+2) == 0)
	                   return i+2;
	            }
	            
	            return n;
	        }

vector<pair<pair<ll,ll> ,pair<ll,ll> > > v;

ll id[100010];
void ini()
{
	for(ll i=0;i<100010;i++)
		id[i]=i;

}
ll root(ll x)
{
	while(id[x]!=x)
	{
		id[x]=id[id[x]];
		x=id[x];
	}
	return x;
}
void uni(ll x,ll y)
{
	x=root(x);
	y=root(y);
	id[x]=id[y];
}
map<ll,ll> fr;
ll span(ll m)
{	
	ll cost=0;
	
	for(ll i=0;i<m;i++)
	{
		ll x,y;
		x=v[i].ss.ff;
		y=v[i].ss.ss;
		//cout<<x<<" "<<y<<endl;
		if(root(x)!=root(y))
		{	//cout<<v[i].ff.ss<<"  ";
			fr[v[i].ff.ss]=1;
			uni(x,y);
			cost+=v[i].ff.ff;
			//cout<<v[i].ff.ff<<" "<<x<<" "<<y<<endl;
		}
	}
	//cout<<cost<<endl;
	return cost;

}
	
int main()
{
	    FAST;
		ll n,m,k;
		cin>>n;
		string s;
		cin>>s;
		ll c=0;
		ll i=0;
		while(i<n && s[i]=='-')
			i++;

		while(i<n)
		{
			if(s[i]=='+')
				c++;
			else
				c--;
			if(c<0)
				c=0;
			i++;
		}
		cout<<c;
		


}