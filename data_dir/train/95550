	    #define FAST ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	
	    
	ll count(ll n)
	{
	    ll k=n,s=0;
	    while(k>0)
	    {
	        s+=k%10;
	        k/=10;    
	    }
	    return s;
	}
	ll div(ll n)
	{
	    for(ll i=2;i*i<=n;i++)
	    {
	        if(n%i==0)
	        {    //cout<<"ZZ"<<n<<endl;
	            return n/i;
	        }
	    }
	    return 0;
	}
	
	ll d,x,y;
	void extendedEuclid(ll A, ll B) 
	{
	    if(B == 0) {
	        d = A;
	        x = 1;
	        y = 0;
	    }
	    else {
	        extendedEuclid(B, A%B);
	        int temp = x;
	        x = y;
	        y = temp - (A/B)*y;
	    }
	}
