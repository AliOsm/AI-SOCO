#include<iostream>
#include<string>
#include<algorithm>
#include<vector>
#include<set>
#include<unordered_set>
#include<map>
#include<cmath>
#include <iterator>
#include<stack>
#include<queue>
#include <iomanip>
#include<math.h>
#include <limits.h>
#include <numeric>
#include <functional>
#include<fstream>
#include <bitset>
#include <cstring>
using namespace std;

#define ll  long long
#define endl '\n'
const ll mod = 1000000007;
int main()
{
	ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
	int x;
	cin >> x;
	int ce = 0, co = 0, y;
	for (int i = 0; i < x; i++) {
		cin >> y;
		if (y % 2 == 0)
			ce++;
		else
			co++;
	}
	if (ce > co)
		cout << co << endl;
	else
		cout << ce << endl;
	return 0;
}