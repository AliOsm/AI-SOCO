#include <bits/stdc++.h>
using namespace std;
long long a[534567],b[534567],c[534567],d,e,zai,i,j,m,k,x,y,z,l,r,n,s,t,tt;
string p,q,qq; 
map<long long, long long> u,v;
int main(){
    cin >> t;
    while (t --){
        cin >>x>>y>>n>>m;
        s=-1;
        zai = y-x;
        if (zai%(n+m)==0)
            s = zai/(n+m);
        cout<<s<<endl;
    }
    return 0;
}