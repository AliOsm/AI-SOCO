// In the Name of Allah
#include <bits/stdc++.h>

using namespace std;

typedef long double LD;
typedef long long int LL;
typedef pair <int,int> pii;

#define L first
#define R second

int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(0); cout.tie(0);
	int t;
	cin >> t;
	while (t--) {
		LL s, a, b, c;
		cin >> s >> a >> b >> c;
		LL cnt = s / c;
		cout << cnt + (cnt / a) * b << endl;
	}
	return 0;
}