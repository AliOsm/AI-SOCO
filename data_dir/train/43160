#include<bits/stdc++.h>

using namespace std;
int main()
{
    int n,i,j;
    cin>>n;
    int cur=0,ans=0;
    for(i=1; i<=n; i++)
    {
        int x;
        cin>>x;
        cur=max(cur,x);
        if(cur==i)
        {
            ans++;
            cur=x;
        }
    }
    cout<<ans<<endl;
    return 0;

}
