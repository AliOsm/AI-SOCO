int main()
{   
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    int tests=1;
      //freopen("input.txt", "r", stdin);
     // freopen("output.txt", "w", stdout);B
    //    cin>>tests;
   // ll l=0,b=0;   
    while(tests--)  
    { 
       int m,one;
       cin>>m>>one;
       if(one>=m-1 && one <= 2*(m+1))
       {
        if(one == m-1)
        {
            int c =0;
            for(int i =0;i<one+m;i++)
            {
                if(c==0){
                    cout<<c;
                    c=1;
                }
                else if(c==1)
                {
                    cout<<c;
                    c=0;
                }
            }
        }
        if(one==m)
        {
            int c =0;
            for(int i =0;i<one+m;i++)
            {
                if(c==0)
                {
                    cout<<c;
                    c=1;
                }
                else if(c==1)
                {
                    cout<<c;
                    c=0;
                }
            }
        }
        if(one == m+1)
        {
            int c =0;
            for(int i =0;i<one+m;i++)
            {
                if(c==0)
                {
                    cout<<1;
                    c=1;
                }
                else if(c==1)
                {
                    cout<<0;
                    c=0;
                }
            }
        }
        if(one > m+1)
        {
            int x = one - (m+1);
            int y = x;
            int c =0;
            for(int i =0;i<m+one-x;i++)
            {
                if(c==0)
                {
                    if(y){
                        cout<<11;
                        y--;
                    }
                    else
                        cout<<1;
                    c=1;
                }
                else if(c==1){
                    cout<<0;
                    c=0;
                }
            }
        }
       }
       else
        cout<<-1;
    }
}






