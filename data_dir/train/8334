#include<bits/stdc++.h>
using namespace std;
string s;
set<pair<int,int> > st;
long long b,c,l,r;
int main()
{
	ios_base::sync_with_stdio(false),cin.tie(0),cout.tie(0);
	cin>>s;
	for (int i=0;i<s.size();i++)
	{
		if (s[i]=='(') b++;
		else if (s[i]==')') b--;
		else cin>>l>>r,b--,s[i]=')',c+=r,st.insert({l-r,i});
		while (b<0 && st.size()) b+=2,s[(*st.begin()).second]='(',c+=(*st.begin()).first,st.erase(st.begin());
		if (b<0) break;
	}
	if (b!=0) cout<<-1;
	else cout<<c<<'\n'<<s;
}	
