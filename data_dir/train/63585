#include <bits/stdc++.h>
using namespace std;
#define long int64_t

int main()
{
    ios::sync_with_stdio(false), cin.tie(nullptr);
    int T;
    cin >> T;
    while(T--)
    {
        long x, y;
        cin >> x >> y;
        cout << (x - y > 1 ? "YES" : "NO") << '\n';
    }
    return 0;
}
