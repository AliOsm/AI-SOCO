#include <iostream>
#include <fstream>

#include <iostream>
#include <vector>
#include <algorithm>

class TaskC {
public:
	void solve(std::istream& in, std::ostream& out) {
		std::vector<long long> nums;
		long long temp;
		for(int i = 0; i < 3; i++){
			in >> temp;
			nums.push_back(temp);
		}
		std::sort(nums.begin(),nums.end());
		nums[2] = std::min(nums[2], nums[0]*2+nums[1]*2);
		out << (nums[0]+nums[1]+nums[2])/3;
		//out << nums[0] << nums[1] << nums[2] << "\n";
	}
};


int main() {
	TaskC solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
