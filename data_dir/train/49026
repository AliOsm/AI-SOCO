#include <bits/stdc++.h>

using namespace std;

int main()
{
    int x1 , y1 , x2 , y2;
    cin >> x1 >> y1 >> x2 >> y2;
    if(x1 == x2)
        cout << ((abs(y1-y2)+3)<<1);
    else if(y1 == y2)
        cout << ((abs(x1-x2)+3)<<1);
    else
        cout << ((abs(y1-y2)-1)<<1)+((abs(x1-x2)+3)<<1);
    return 0;
}
