#include <bits/stdc++.h>

using namespace std;

#define ff first
#define ss second
#define pb push_back
using ii = pair<long long, long long>;
using ll = long long;
#define oo 1000000000000000000
#define mod 1000000007

int main (){
	int n;
	scanf("%d",&n);
	if(n <= 5){
		printf("-1\n");
	}
	else{
		printf("1 2\n");
		printf("1 3\n");
		printf("1 4\n");
		for(int i = 5; i <= n; i++)
			printf("2 %d\n",i );
	}
	for(int i = 2; i <= n; i++)
		printf("1 %d\n",i);
	return 0;
}
