/// إِنَّ مَعَ الْعُسْرِ يُسْرًا
/// لَا أَبْرَحُ حَتَّىٰ أَبْلُغَ


#include <bits/stdc++.h>
#define LL long long
#define LD long double
#define S second
#define IO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define F first
#define PI acos(-1)
#define MAX 100005
using namespace std;


int main()
{
    IO
    LL n,m;
    cin>>n;
    LL a[n];
    for(int i=0; i<n; i++)
        cin>>a[i];
    for(int i=0;i<n; i++)
    {
        if(a[i]%2==0)
            cout<<a[i]-1<<" ";
        else
            cout<<a[i]<<" ";
    }

    return 0;
}

