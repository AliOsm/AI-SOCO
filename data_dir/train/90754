#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        long long a, b, k;
        cin >> a >> b >> k;
        if (k % 2 == 0)
            cout << (a-b) * (k/2) << '\n';
        else
            cout << (a-b) * (k/2) + a << '\n';
    }
}