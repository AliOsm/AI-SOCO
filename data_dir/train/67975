#include <bits/stdc++.h>
using namespace std;
long long n,A,B,C,D;
main ()
{
	cin>>n;
	
	A=1;
	B=2;
	C=3;
	
	for (int i=1; i<=n; i++)
	{
		cin>>D;
		
		if (A==D) swap(B,C);
			else
		if (B==D) swap(A,C);
			else
		{
			cout<<"NO"<<endl;
			return 0;
		}
	}
	
	cout<<"YES"<<endl;
}