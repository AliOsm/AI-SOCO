#include <stdio.h>
#include <cstdlib>
#include <iostream>
#include <algorithm>
#include <vector>
#include <map>
#include <string>
#include <math.h>
using namespace std;

bool p,q;
int ans,n,k,i,j;
string s,t;

main()
{
 cin>>n;
 cin>>s;
 cin>>t;

 j=0; while ( s[j]==t[j] ) j++;
 i=n-1; while ( s[i]==t[i] ) i--;
 p=true;
 for ( k=j;k<i;k++ )
  if ( t[k]!=s[k+1] ) p=false;

 q=true;
 for ( k=j;k<i;k++ )
  if ( s[k]!=t[k+1] ) q=false;

 ans=0;
 if ( p ) ans++;
 if ( q ) ans++;

 cout<<ans<<endl;
}