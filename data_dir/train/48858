#include <cstdio>

#include <cmath>

#include <cstring>

#include <queue>

#include <vector>

#include <iostream>

#include <algorithm>

#include <map>



using namespace std;



typedef long long LL;


LL n;

int main()

{
    scanf("%I64d",&n);
    n=n*(n+1)/2;
    n=n*6;
    n++;
    printf("%I64d\n",n);

    return 0;

}