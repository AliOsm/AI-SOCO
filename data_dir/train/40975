#include <bits/stdc++.h>
#define ll long long
#define ull unsigned long long
#define pb push_back
#define mp make_pair
#define fi first
#define se second
#define INF 1e9

using namespace std;

int main()
{
    int n,m;
    cin >> n;

    if(n==1)
        return cout << 1,0;

    if(n%2==0)
        return cout << n/2,0;

    if(n%2!=0)
        return cout << ((n/2)+1),0;

    return 0;
}
