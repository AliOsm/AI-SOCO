#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main()
{
    ll n,v;
    cin>>n>>v;
    ll cur = 0, pos = 1;
    ll ans = 0;
    if (v>=n - 1)
    {
        cout<<n-1;
        return 0;
    }
     ans = v;
    for(ll i = 2; i<=n - v; i++)
        ans+=i;
    cout<<ans;




  //  while ()


    return 0;
}