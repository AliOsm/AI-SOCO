#include<bits/stdc++.h>
using namespace std;

int main()
{
    string s;
    int l, i;

    cin >> s;

    l = s.length();

    for(i = 0; i < l; ){
        if(s[i] == '.'){
            cout << 0;
            i++;
        }
        else{
            if(s[i + 1] == '.') cout << 1;
            else cout << 2;

            i += 2;
        }
    }

    return 0;
}
