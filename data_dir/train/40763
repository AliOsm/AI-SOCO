#include <iostream>
#include <string>
#include <cmath>
#include <vector>
#include <algorithm>
#include <iterator>
#include <cstdlib>
#include <cstdio>
#include <map>
#include <set>
#include <queue>
#include <deque>
#include <stack>
#include <list>

using namespace std;

int size_n;
int result;

int main()
{
	cin >> size_n;

	result = 2 * (size_n / 3);

	if ((size_n % 3) != 0)
		result++;

	cout << result << endl;

	return 0;
}