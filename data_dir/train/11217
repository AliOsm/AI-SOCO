using namespace std;

int counts[111111];


int main() {
    int n,R;
    cin>>n>>R;
    double Pi = 3.14159265359;
    
    
    double ratio = sin(Pi/n);
    
    
    double r = R*ratio / (1.0 - ratio);
    
    printf("%1.12f\n",r);
    
    
}
