#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n, sum = 0;

    cin >> n;

    for(int i = 1, j = (n * n); i <= ((n / 2) * n); i++, j--){
        cout << i << ' ' << j << ' ';

        sum += 2;

        if(sum == n) sum = 0, cout << endl;
    }

    return 0;
}
