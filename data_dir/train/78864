//besmellah
#include <bits/stdc++.h>
using namespace std;

int main(){
    ios::sync_with_stdio(false);
    long long t, a, b, k, tmp;
    cin >> t;
    for (int T = 0; T < t; T++){
        cin >> a >> b >> k;
        tmp = (k / 2) * (a - b);
        if (k % 2)
            tmp += a;
        cout << tmp << '\n';
    }
}