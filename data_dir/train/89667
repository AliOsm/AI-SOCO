#include <bits/stdc++.h>

using namespace std;

int main(){
    string s;
    cin>>s;
    for(int i=1;i+1<s.size();i++){
        if(s[i-1]=='A' && s[i]=='B' && s[i+1]=='C'){
            printf("Yes\n");
            return 0;
        }
        if(s[i-1]=='A' && s[i]=='C' && s[i+1]=='B'){
            printf("Yes\n");
            return 0;
        }
        if(s[i-1]=='B' && s[i]=='A' && s[i+1]=='C'){
            printf("Yes\n");
            return 0;
        }
        if(s[i-1]=='B' && s[i]=='C' && s[i+1]=='A'){
            printf("Yes\n");
            return 0;
        }
        if(s[i-1]=='C' && s[i]=='A' && s[i+1]=='B'){
            printf("Yes\n");
            return 0;
        }
        if(s[i-1]=='C' && s[i]=='B' && s[i+1]=='A'){
            printf("Yes\n");
            return 0;
        }
    }
    printf("No\n");


    return 0;
}
