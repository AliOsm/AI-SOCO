/*************************** MACROS **************************/
#define itn int
#define ld long double
#define ll long long  
#define ull unsigned long long
#define vll vector<ll>
#define pb push_back
#define mp make_pair
#define S second
#define F first
#define loop(i,x,y) for(ll i=x;i<y;i++)
#define rloop(i,x,y) for(ll i=x;i>=y;i--)
#define W(x) while(x--)
#define pll pair< ll,ll >
#define vpll vector< pll >
#define qll queue<ll>
#define qpll queue<pll>
#define B begin()
#define E end()
#define pqll priority_queue<ll>
#define pqpll priority_queue<pll>
#define MOD 1000000007
#define MOD1 998244353
#define MIN_LL -1e18
#define MAX_LL 1e18
#define MAX_INT 1e9
#define MIN_INT -1e9
#define Line cout<<"\n**************************\n\n";


const ld pie = 3.1415926535;

using namespace std;

ll fpow(ll n,ll p){ll m=1;while(p){if(p%2)m*=n;p>>=1;n*=n;}return m;}
ll mfpow(ll n,ll p,ll M){ll m=1;n%=M;while(p){if(p%2)m=(m*n)%M;n=(n*n)%M;p>>=1;}return m%M;}
const vll days={31,28,31,30,31,30,31,31,30,31,30,31};


/*************************** VARIABLES **************************/

bool br1,br2,br;

char ch,ch1,ch2;

ll n,k,x,y,z,mini,maxi,l,ind,ini,sum,t,len,r,w,imini,m;

string s,s1,s2;


/**************************** FXNS ****************************/

string a[(int)1e6+100];
map<pll,ll> mp1;
vll v;
bool vis[(int)1e3+10][(int)1e3+10];
pll p;

void dfs(ll x,ll y){

	if(x<0 || x>=n || y<0 || y>=m || vis[x][y])return ;

	// cout<<"@ "<<x<<" "<<y<<endl;

	if(a[x][y] == '*'){

		v[mp1[p]]++;

		return ;
	}

	vis[x][y] = 1;
	mp1[mp(x,y)] = mp1[p];

	dfs(x-1,y);
	dfs(x+1,y);
	dfs(x,y+1);
	dfs(x,y-1);
}

void solve(){

	cin>>n>>m>>k;

	loop(i,0,n)cin>>a[i];

	loop(i,0,k){

		cin>>x>>y;

		x--;
		y--;

		if(vis[x][y])cout<<v[mp1[mp(x,y)]]<<"\n";

		else {

			p = mp(x,y);
			mp1[p] = v.size();
			v.pb(0);

			dfs(x,y);

			cout<<v[mp1[mp(x,y)]]<<"\n";
		}
	}

}

/*************************** MAIN ****************************/

int main(){


	// #ifndef ONLINE_JUDGE
	        // freopen("input.txt", "rt", stdin);
	        // freopen("output.txt", "wt", stdout);
	// #endif

	ios_base::sync_with_stdio(0);
	cin.tie(NULL);

	solve();

return 0;
}
