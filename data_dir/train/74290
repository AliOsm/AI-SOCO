#define lol(i,a,b) for (long long i=a;i<b;i++) 
#define lol1(i,a,b) for (long long i=a;i>=b;i--)
#define fi(a,b) for (long long i=a;i<b;i++) 
#define fi1(a,b) for (long long i=a-1;i>=b;i--) 
