}
 
 ll lcm (ll a, ll b) {
     return a/gcd(a,b)*b; 
 }
 
void solve (int ppppppppp=1) {
    
    
     /* --------- */
     ll n,z; 
cin>>n; 
	z=n;
	for(int i=2;i*i<=n;i++)
		while(n%i==0)
			n/=i,z+=n;
	z+=n>1;
	printf("%d\n",z);
    /* --------- */
      return; 
} 
 
 
 
