#include <bits/stdc++.h>
#define intt long long
#define pb push_back
#define mk make_pair
#define ii pair<intt,intt>
#define sc second
#define fr first
using namespace std;

int main()
{
    intt t;
    cin>>t;
    while(t--)
    {
        intt a,b,n,s;
        cin>>a>>b>>n>>s;
        intt f=s/n;
        s-=(min(a,f)*n);
        if(s>b)
        {
            cout<<"NO"<<endl;
        }
        else
            cout<<"YES"<<endl;
    }

    return 0;
}
