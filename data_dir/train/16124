#include <bits/stdc++.h>
#define ff first
#define ss second
using namespace std;
#define MP make_pair
#define PB push_back
#define ll long long
#define int long long
#define f(i,x,n) for(int i=x;i<n;i++)
#define mod 1000000007
int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int ans=0;
    int n,m;
    cin>>n>>m;
    while(n!=0)
    {
        if(n>=m)
        {
            n-=m-1;
            ans+=m;
        }
        else
        {
            ans+=n;
            n=0;
        }
    }
    cout<<ans<<endl;
    return 0;
}
