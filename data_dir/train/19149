#include <iostream>
#include <cstdlib>
#include <string>
#include <algorithm>

const int N = 100000;

using namespace std;
string str;
int n, x = 0;

int main()
{
    ios_base::sync_with_stdio(false);
    cin >> n;
    for(int i = 0; i < n; i++)
    {
        cin >> str;
        x += (str[1] == '+') ? +1 : -1;
    }
    cout << x << endl;
    return 0;
}
