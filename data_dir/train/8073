#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n;
    cin >> n;
    int i;
    cout << "YES" << endl;
    for(i=0;i<n;i++)
    {
        long long a,b,c,d;
        cin >> a >> b >> c >> d;
        a+=((long long)1e9);
        b+=((long long)1e9);
        cout << (a%2)*2+(b%2)+1 << endl;
    }
}
