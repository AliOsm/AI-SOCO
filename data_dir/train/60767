#include <bits/stdc++.h>

using namespace std;
long long n,m,i,l,k,j,sum;
int main()
{
    cin>>n;
    if(n%2!=0){
        cout<<'0'<<endl;
    }
    else{
        if(n%4!=0){
            cout<<n/4<<endl;
        }
        else{
            cout<<(n/4)-1<<endl;
        }
    }
    return 0;
}
