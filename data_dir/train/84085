#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;

class ProblemBSpiderMan {
public:
	void solve(std::istream& in, std::ostream& out) {
		int n; in>>n;
		int dp[n+1];
		dp[0] = 1;
		for(int i = 1; i<=n; ++i){
			int x; in>>x;
			if(x==1) dp[i] = dp[i-1];
			else if(x%2==0) dp[i] = 1-dp[i-1];
			else dp[i] = dp[i-1];
		}
		for(int i = 1; i<=n; ++i) out<<dp[i]+1<<'\n';
	}
};


int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	ProblemBSpiderMan solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
