#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

#define fi first
#define se second

int main() {
    int n;
    cin >> n;
    for (int a = 0; a * 4 <= n; a++) {
        if ((n - a * 4) % 7 == 0) {
            int b = (n - a * 4) / 7;
            while(a--) {
                printf("4");
            }
            while(b--) {
                printf("7");
            }
            printf("\n");
            return 0;
        }
    }
    printf("-1");
    return 0;
}
