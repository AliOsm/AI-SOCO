#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define f first
#define s second
#define bp push_back
#define mp make_pair
const int N=1e5+10;
const double eps=1e-9;
const int inf=1e9;
int a[N];
main(){

    int n;
    cin>>n;
    ll sum=0;
    for(int i=0;i<n;i++){
        int x;
        cin>>x;
        sum+=x;
        --sum;
        if(sum&1)cout<<1<<endl;
        else cout<<2<<endl;
    }



}
