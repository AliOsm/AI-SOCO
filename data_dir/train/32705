#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef pair<int, int> ii;
typedef pair<ll, ll> l4;
typedef pair<double, double> dd;
#define mp make_pair
#define pb push_back
#define debug(x) cerr << #x << " = " << x << " "


int main()
{
  int T; scanf("%d", &T);
  for (int kase = 1; kase <= T; ++kase)
    {
      int n; scanf("%d", &n);
      int cnt = n/2;
      putchar((n&1)?'7':'1');
      for (int i = 1; i < cnt; ++i) putchar('1');
      putchar('\n');
    }
}
