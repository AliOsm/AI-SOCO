#include <bits/stdc++.h>
#define pb push_back
#define F first
#define S second
#define all(x) x.begin(), x.end()
using namespace std;
typedef long long ll; 
typedef long double ld;
typedef pair<ll, ll> pll;

const ll N = 2e5 + 30, Mod = 1e9 + 7;
const ll SQ = 330;

int main () {
	ios::sync_with_stdio(0), cin.tie(0);
	ll q;
	cin >> q;
	while (q --) {
		ll n;
		cin >> n;
		ll rem = n / 2;
		ll ans = 0;
		for (ll i = 1; i <= rem; i ++) {
			ll res = 2 * i;
			ans += res * 4 * i;
		}
		cout << ans << '\n';
	}

}
