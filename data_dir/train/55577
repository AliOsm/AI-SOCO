#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

int main (int argc, char *argv[])
{
	ll n;
	scanf("%lld", &n);
	for(ll i = 1; ; ++i) {	
		ll q = i * (i + 1) / 2;
		if(q < n) {
			continue;
		}
		if(q == n) {
			printf("%lld", i);
			return 0;
		}
		if(q > n) {
			q = i * (i - 1) / 2;
			n -= q;
			printf("%lld", n);
			return 0;
		}
	}
	
	return 0;
}

