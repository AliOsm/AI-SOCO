#include <bits/stdc++.h>

// Shabdan Batyrkulov

using namespace std;

#define MAX 107
#define pb push_back
#define fr first
#define sc second
#define mk make_pair
#define ll long long
#define ld long double

const long long N = (int)1e5 + 7;
const int inf = (int)1e9 + 7;

int main () {
        int n; scanf ("%d", &n);
        double sum = 0;
        for (int i = 1; i <= n; i++) {
                double a; cin >> a;
                sum += a / 100;
        }
        cout << fixed << setprecision(12) << sum / n * 100;
}
