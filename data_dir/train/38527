#define pb push_back
#define ff first
#define ss second
#define ll long long
#define maxn 501
#define mod 1000000007
#include <bits/stdc++.h>
using namespace std;
 
 
 
 
int main() {
    int tc;
    cin >> tc;
    while(tc--){
        int a, b, c, n;
        cin >> a >> b >> c >> n;
        n += a + b + c;
        if(n%3) cout << "NO" << endl;
        else {
            n /= 3;
            if(a > n || b > n || c > n){
                cout << "NO" << endl;
            }
            else{
                cout << "YES" << endl;
            }
        }
    }
    return 0;
}