int MOD = 1e9+7;
void ADD(LL& x,LL v){x=(x+v)%MOD;if(x<0)x+=MOD;}
/*}}}*/
const int SIZE = 1e6+10;
int n,k,l;
LL d[SIZE];
PLL dp[SIZE];
int solve(){
    int one=0;
    REP(i,n){
        one+=d[i+1];
    }
    if(one<=1)return 0;
    int ll=1,rr=one;
    while(ll<rr){
        int mm=(ll+rr)/2;
        FOR(i,1,n){
            dp[i]=MP(dp[i-1].F+d[i]*k,dp[i-1].S);
            if(i>=l)dp[i]=min(dp[i],MP(dp[i-l].F+mm,dp[i-l].S+1));
        }
        //W(mm,dp[n]);
        if(dp[n].S>k)ll=mm+1;
        else rr=mm;
    }
    FOR(i,1,n){
        dp[i]=MP(dp[i-1].F+d[i]*k,dp[i-1].S);
        if(i>=l)dp[i]=min(dp[i],MP(dp[i-l].F+ll,dp[i-l].S+1));
    }
    //W("|",ll,dp[n]);
    return (dp[n].F-ll*k)/k;
}
int main(){
    R(n,k,l);
    if((LL)k*l>=n){
        W(0);
        return 0;
    }
    string s;
    R(s);
    REP(i,n){
        if('a'<=s[i]&&s[i]<='z')d[i+1]=1;
    }
    int an=solve();
    REP(i,n)d[i+1]=1-d[i+1];
    an=min(an,solve());
    W(an);
    return 0;
}
