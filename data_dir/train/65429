#include <bits/stdc++.h>
//
using namespace std;

int main()
{
   int n;
   cin  >> n;
   int o=0;
   int c=0;
   for(int i =0;i<n;i++){
    int k;
    cin >> k;
    if(k<0){
        if(o==0){
            c++;
        }
        else{
            o-=1;
        }
    }else{
        o+=k;
    }
   }
   cout << c ;

    return 0;
}