#include <cstring>
#include <cstdlib>
using namespace std;
typedef long long ll;
typedef long double ld;
#define INF 2001001001
#define MOD 1000000007

int main()
{
  //ios_base::sync_with_stdio(0);cin.tie(0);
  int T;
  cin>>T;
  while (T--){
    int N,S,T;
    cin>>N>>S>>T;
    int X=(S+T-N);
    int s=N-T;
    int t=N-S;
    cout<<min(N-X+1,max(s+1,t+1))<<endl;
  }
  return 0;
}
