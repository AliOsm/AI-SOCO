using namespace std;


typedef pair<int, int> ii;
typedef vector<ii> vii;
typedef vector<int> vi;
typedef long long ll;



ll powd( ll a, ll b){
   ll ans = 1LL;
   while( b){
          if( b&1)
              ans = (a*ans);
          a = (a*a);
          b /= 2;
   }
   return ans;
}

int main(){
    
    double l, p, q, n, m;
    cin >> l >> p >> q;
    
    double av = (l)/(p + q);
    av = av*p;
    cout << av << endl;
    
    //system("pause");
    return 0;
}
