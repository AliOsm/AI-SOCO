#include <iostream>
#include <fstream>
#include <vector>
#include <string>
#include <algorithm>
#include <cmath>
#include <cstdio>
#include <string.h>
#include <sstream>
#include <set>
#include <queue>
using namespace std;
#define FOR(i,a,b) for(int i=a; i<=b; ++i)
#define mp make_pair
#define pb push_back
#define sz(s) (int)((s).size())
const int inf = 1000000000;
const int MOD = 1000000007;
typedef long long Int;

int cnt[2000009];

int main()
{
	//freopen("input.txt","r",stdin);freopen("output.txt","w",stdout);
	int n,k;cin>>n>>k;
	FOR(i,1,n) {
		int x;
		scanf("%d",&x);
		cnt[x]++;
	}
	FOR(i,1,2000000) cnt[i]+=cnt[i-1];

	for(int i=1000000; i>=1; --i) {
		bool ok=true;
		if(cnt[i-1]) continue;
		for(int j=i+i; j<=2000000;j+=i) {
			int t = j-i+k;
			if(j-1>t && cnt[j-1]-cnt[t]>0) ok=false;
		}
		if(ok){
			cout<<i<<endl;
			return 0;
		}
	}
}