int main()
{


	ios::sync_with_stdio(false);
	cin.tie(0);
	cout.tie(0);

	cin>>n;
	if(n==2)
	{
		cout<<3<<endl<<"2 1 2";
	}
	else
	{
		cout<<2*(n/2)+(n+1)/2<<endl;
		for(int i=2;i<=n;i+=2) cout<<i<<" ";
		for(int i=1;i<=n;i+=2) cout<<i<<" ";
		for(int i=2;i<=n;i+=2) cout<<i<<" ";
	}

}
