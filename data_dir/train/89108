#include <bits/stdc++.h>
#define MOD (ll)(1e9 + 7)
#define MAX (ll)(3e5 + 9)

using namespace std;
using ll = long long;

set<int> ar[MAX];
int ma[MAX];

int main () {
	int t;
	cin >> t;
	while (t--) {
		int n, m;
		cin >> n >> m;
		int ans = 0;
		if (n > 1 && n < 3) {
			ans = m;
		}
		else if (n > 1) {
			ans = 2 * m;
		}
		cout << ans << "\n";
	}
}

