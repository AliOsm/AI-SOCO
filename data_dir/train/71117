#include <bits/stdc++.h>
using namespace std;

char arr[202];

int main(){
    scanf("%s",arr);

    for(int i=0; i<strlen(arr); i++){
        int act = arr[i];
        if(act=='.')
            printf("0");
        else{
            if(arr[i+1]=='.')
                printf("1");
            else
                printf("2");
            i++;
        }
    }
    printf("\n");

    return 0;
}
