#include <stdio.h>
#include <math.h>
#include <string.h>
#include <limits.h>
#include <stdlib.h>
#include <algorithm>
#include <iostream>
#include <utility>
#include <vector>
#include <string>
#include <map>
#include <queue>
#include <set>
#include <stack>

using namespace std;

#define long long long
#define fi first
#define se second
typedef pair<int,int> ii;

int main()
{
	// ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	// freopen("input.in", "r", stdin);


	int n; scanf("%d", &n);
	int mn = 1e9, mx = 0;

	for(int i = 0; i < n; i++)
	{
		int x; scanf("%d", &x);
		mn = min(mn, x);
		mx = max(mx, x);
	}
	printf("%d\n", mx-mn+1-n);
}








