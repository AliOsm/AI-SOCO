#include <bits/stdc++.h>
using namespace std;

int x;

void Input() {
	cin >> x;
}

void Solve() {
	if (x == 1) cout << "-1\n";
	else cout << x << " " << x << endl;
}

int main(int argc, char* argv[]) {
	ios_base::sync_with_stdio(0); cin.tie(NULL);
	Input(); Solve(); return 0;
}

