#include <bits/stdc++.h>

using namespace std;

int main() {
	ios::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);

	int n;
	cin >> n;
	int m = (n + 2) / 2;
	cout << m << '\n';
	int r = 1, c = 1;
	for (int i = 0; i < n - 1; ++i) {
		cout << r << ' ' << c << '\n';
		if (r == m) {
			++c;
		}
		else {
			++r;
		}
	}
	cout << m << ' ' << m;

	return 0;
}