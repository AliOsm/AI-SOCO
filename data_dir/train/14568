#include <bits/stdc++.h>
using namespace std;

#define endl "\n"
#define long long long

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);

    long int n;
    cin>>n;

    while(n--){
        long int a,b,c;
        cin>>a>>b>>c;

        cout<<(a+b+c)/2<<endl;
    }

    return 0;
}
