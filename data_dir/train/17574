#include <iostream>
using namespace std;

int main()
{
	int N;
	cin >> N;
	cout << "+------------------------+" << endl;
	cout << "|";
	if(N>=1) cout << "O.";
	else cout << "#.";
	int k = 5;
	for(int i=0;i<10;i++)
	{
		if(N>=k) cout << "O.";
		else cout << "#.";
		k += 3;
	}
	cout << "|D|)" << endl;
	cout << "|";
	if(N>=2) cout << "O.";
	else cout << "#.";
	k = 6;
	for(int i=0;i<10;i++)
	{
		if(N>=k) cout << "O.";
		else cout << "#.";
		k += 3;
	}
	cout << "|.|" << endl;
	if(N>=3) cout << "|O.......................|" << endl;
	else     cout << "|#.......................|" << endl;
	cout << "|";
	if(N>=4) cout << "O.";
	else cout << "#.";
	k = 7;
	for(int i=0;i<10;i++)
	{
		if(N>=k) cout << "O.";
		else cout << "#.";
		k += 3;
	}
	cout << "|.|)" << endl;
	cout << "+------------------------+" << endl;
	return 0;
}