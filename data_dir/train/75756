#include <iostream>
#include <iomanip>
#include <stdio.h>
#include <vector>
#include <algorithm>
#include <string>
#include <assert.h>
#include <ctype.h>
#include <limits.h>
#include <math.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>
#include <bitset>
#include <deque>
#include <map>
#include <queue>
#include <set>
#include <sstream>
#include <numeric>
using namespace std;

typedef long long ll;

const int M = 1e9 + 7;
int n, k, p[8], vis[8], vs;

int calc(int at) {
	if (at == k) {
		for (int i = 0; i < k; ++i) {
			++vs;
			int at = i, d = 0;
			while (true) {
				if (at == 0 && d > 0)
					break;
				if (vis[at] == vs)
					return 0;
				vis[at] = vs;
				++d;
				at = p[at];
			}
		}
		return 1;
	}
	int res = 0;
	for (int i = 0; i < k; ++i) {
		p[at] = i;
		res += calc(at + 1);
	}
	return res;
}

int main(int argc, char **argv) {
//	freopen("in.txt", "r", stdin);
	scanf("%d%d", &n, &k);
	int can = calc(0);
	ll res = can;
	for (int i = k; i < n; ++i)
		res = (res * (n - k)) % M;
	printf("%lld\n", res);
	return 0;
}