//Itâ€™s never too late to become what you might have been....
 #include <iostream>
#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define inf 2000000000000000005
#define mod 1000000007
#define pb push_back
#define mp make_pair
#define all(v) v.begin(),v.end()
#define S second
#define F first
#define boost1 ios::sync_with_stdio(false);
#define boost2 cin.tie(0);
#define mem(a,val) memset(a,val,sizeof a)
#define endl "\n"
#define maxn 100001

pair<ll,pair<ll,ll> >in[4],out[4];
int main()
{
	boost1;boost2;	
	ll i,j,b,d,s,curb,curd,curs,ans=inf,x,y,maxi;
	cin>>b>>d>>s;
	maxi=b;
	maxi=max(maxi,d);
	maxi=max(maxi,s);
	if(maxi==1)
	{
		cout<<"0";
		return 0;
	}
	in[0]={1,{1,1}};
	in[1]={0,{1,1}};
	in[2]={0,{0,1}};
	in[3]={0,{0,0}};

	out[0]={0,{0,0}};
	out[1]={1,{0,0}};
	out[2]={1,{1,0}};
	out[3]={1,{1,1}};

	for(i=0;i<=3;i++)
	{
		for(j=0;j<=3;j++)
		{
			curb=in[i].F+out[j].F;
			curd=in[i].S.F+out[j].S.F;
			curs=in[i].S.S+out[j].S.S;
			
			x=b-curb;
			x=max(x,d-curd);
			x=max(x,s-curs);
			x=max(x,0LL);
			ans=min(ans,x+curb-b+x+curd-d+x+curs-s);
		}
	}
	cout<<ans;
	return 0;
}

