#include <bits/stdc++.h>
using namespace std;
#define pb push_back
#define mp make_pair
typedef pair<int,int> pii;
typedef long long ll;

const int N = 5*10001;

ll t ,s, a , b ,c ;

int main(){
	cin >> t;
	while(t--){
		cin >> s >> a >> b >> c;
		ll gt = s/c;
		ll ad = gt/a;
		ll ans = gt + ad * b;
		cout << ans << endl;
	}
	return 0;
}