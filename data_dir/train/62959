#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define ss second
#define ff first
#define pb push_back
#define mp make_pair
int main() {
    ll a, b,c;
    cin>>a>>b>>c;
    a+=c;
    b+=c;
    if(a<b)
        swap(a,b);
    a=min(a,b+1);
    cout<<a+b;
    return 0;
}
