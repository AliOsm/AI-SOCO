#include <bits/stdc++.h>
using namespace std;
//#define int long long
int in(){int32_t x ; scanf("%d",&x) ;  return x ;}
inline long long lin() {long long x ; scanf("%lld",&x) ; return x ;}
const int maxn = 1e5 + 10;
int32_t main()
{
    int a = in() , b = in();
    if (abs(a-b) <= 1 && a+b) cout << "YES\n";
    else cout << "NO\n";
}
