#include<bits/stdc++.h>
#define ll long long
#define TIME ios_base::sync_with_stdio(0);
#define sz size()
#define r return
#define pb push_back
#define fr first
#define sc second
using namespace std;

const ll N = 1e6 + 1;

ll n , m , l , cnt , ans , k , x , y , mn , mx ;
string s , t;
int main()
{
    cin >> s >> t ;
    for ( ll i = 0 ; i < t.sz; i ++ )
    {
        if ( s [ n ] == t [ i ] )
        {
            n ++;
        }
    }
    cout << n + 1;

}










