# define ll long long
# define PI 3.1415926535

char arr[102][102];

int main() 
{
	int n,x,sum=0;
	cin >> n >> x;
	int arr[n];
	for(int i=0; i<n; i++)
	{
		cin >> arr[i];
		sum += arr[i];
	}
	sum = abs(sum);
	cout << (sum+x-1)/x << endl;

    return 0;
}

