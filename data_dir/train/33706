template<class T, size_t N> void FILL(T(&a)[N], const T& val) { for (auto& x : a) x = val; }
template<class ARY, size_t N, size_t M, class T> void FILL(ARY(&a)[N][M], const T& val) { for (auto& b : a) FILL(b, val); }
template<class T> void FILL(std::vector<T>& a, const T& val) { for (auto& x : a) x = val; }
template<class ARY, class T> void FILL(std::vector<std::vector<ARY>>& a, const T& val) { for (auto& b : a) FILL(b, val); }
// ------------>8------------------------------------->8------------

int slow(int m, int a, int b) {
	auto run = [&](int x) {
		V<bool> dp(x + 1, false);
		dp[0] = true;
		int res = 1;
		std::queue<int> que({ 0 });
		while (!que.empty()) {
			int p = que.front(); que.pop();
			for (auto& d : { +a, -b }) {
				int q = p + d;
				if (!IN(0, q, x + 1)) continue;
				if (dp[q]) continue;
				dp[q] = true;
				++res;
				que.push(q);
			}
		}
		return res;
	};

	int ans = 0;
	REP(x, m + 1) ans += run(x);
	return ans;
}

ll gcd(ll a, ll b) {
	return b ? gcd(b, a%b) : a;
}

bool dp[10000007];

int calc(int m, int a, int b) {
	FILL(dp, false);

	if (a == 1) {
		return (m + 1) + m * (m + 1) / 2;
	}

	int g = gcd(a, b);

	int ans = std::min(m + 1, g);
	dp[0] = true;
	int now = 1;
	int top = g;
	FOR(i, g, m + 1) {
		if (i - a >= 0 && dp[i - a]) {
			dp[i] = true;
			++now;
			std::queue<int> que({ i });
			while (!que.empty()) {
				int p = que.front(); que.pop();
				for (auto& d : { +a, -b }) {
					int q = p + d;
					if (!IN(0, q, i + 1)) continue;
					if (dp[q]) continue;
					dp[q] = true;
					++now;
					que.push(q);
				}
			}
		}
		ans += now;

		while (top <= i && dp[top]) top += g;
		if (top > i) {
			ans -= now;
			int t = m / g + 1;
			int rest = m - (m / g * g) + 1;
			m /= g;
			i /= g;
			ans += ((m - i) * (m - i + 1) / 2 + i * (m - i)) * g;
			ans += t * rest;
			break;
		}
	}
	return ans;
}


signed main() {
	INIT;

	VAR(int, m, a, b);
	OUT(calc(m, a, b))BR;
	return 0;

	auto system_now = std::chrono::system_clock::now();
	std::mt19937 mt(std::chrono::duration_cast<std::chrono::microseconds>(system_now.time_since_epoch()).count());
	std::uniform_int_distribution<> rand(/* min */1, /* max */100);

	while (true) {
		int m = rand(mt);
		int a = rand(mt);
		int b = rand(mt);

		int t = slow(m, a, b);
		int t1 = calc(m, a, b);
		if (t != t1) {
			SHOW(m);
			SHOW(a);
			SHOW(b);
			SHOW(t);
			SHOW(t1);
			VAR(int, x);
		}
		OUT('*');
	}

	return 0;
}