//In the name of Allah

#include<bits/stdc++.h>

using namespace std;

string s, t;

int main()
{
    cin >> s >> t;
    int pt = 0;
    for(int i = 0; i < (int)t.size(); i ++)
    {
        if(s[pt] == t[i])
            pt ++;
    }

    cout << pt + 1 << endl;
    return 0;
}
