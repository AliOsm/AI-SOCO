//*******************************************************************
#define M 100100
int A[100100];
int main()
{
    //change inf for long long
    //read;
    int i, j, k, n, add, sum=0, p;
    in2(n, add);
    for (i=0; i<n; i++) in(A[i]);

    sort(A, A+n);
    i=j=n-1;
    int maxx=0;

    while (j>=0&&i>=0)
    {
       // prs(i);prs(j);
        if (sum+(A[i]-A[j])<=add)
        {
            sum+=(A[i]-A[j]);
            j--;
        }
        else
        {
            if (A[i]==A[i-1]) i--;
            else
            {
                sum-= (i-j-1)*(A[i]-A[i-1]);
                i--;
            }
        }
        if (i-j>=maxx)
        {
            maxx=i-j;
            p=A[i];
        }
       // pr(sum);
    }
pr2(maxx, p);
//file?
return 0;
}
