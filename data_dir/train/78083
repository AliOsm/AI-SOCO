#include <bits/stdc++.h>

using namespace std;

typedef long long ll;

#define mp make_pair
#define F first
#define S second
#define pb push_back

int main()
{
    int i , j , k , n , m;
    scanf("%d",&n);
    if(n < 6)
    {
        printf("-1\n");
    }
    else
    {
        for(i = 2 ; i <= n-2 ; i++)printf("1 %d\n",i);
        printf("2 %d\n2 %d\n",n-1,n);
    }
    for(i = 2 ; i <= n ; i++)printf("1 %d\n",i);


    return 0;
}

