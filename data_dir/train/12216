#include<bits/stdc++.h>
using namespace std;
long long n, ara[1000000];
int main()
{
       int n;
       cin >>n;

   int mn = n/4;
   int mx = n/7;
   int ans=0;
   int x=0,y=0;


   for(int i=0;i<=mx;i++)
   {

     int     rem =   n - i*7;
      if(rem%4==0)
       {
           x = rem/4;
           y=i;
       }


   }
   if(x==0  && y==0)
   {
       cout <<-1<<endl;
   }else
   {
       while(x--)
       {
              cout <<4;

       }

       while(y--)
       {
           cout <<7;
       }
   }


}
