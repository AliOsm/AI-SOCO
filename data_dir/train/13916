#include <bits/stdc++.h>
using namespace std;

int n;

int main(){


    ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0);

    cin >> n;

    int m = n * n,c = 1;
    for (int i = 1;i <= n;i++){

        for (int j = 1;j <= n / 2;j++){
            cout << c << ' ' << m << ' ';
            m--;
            c++;
        }
        cout << '\n';
    }



}
