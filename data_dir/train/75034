#include<bits/stdc++.h>
#define MAX 5005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, K, ans;
int dp[MAX][MAX];
int a[MAX];

int main()
{
    optimiza_io
    cin >> N >> K;
    for( int i = 1; i <= N; i ++ )
        cin >> a[i];
    sort( a + 1 , a + N + 1 );
    int nxt = N;
    for( int i = N; i >= 1; i -- )
    {
        while( a[nxt] - a[i] > 5 )
            nxt--;
        for( int k = K; k >= 1; k -- )
        {
            dp[i][k] = dp[i + 1][k];
            dp[i][k] = max( dp[i][k] , nxt - i + 1 + dp[nxt + 1][k + 1] );
            ans = max( ans , dp[i][k] );
        }
    }
    cout << ans;
    return 0;
}

