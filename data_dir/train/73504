#define pl pair<ll,ll>
#define N 1234567
#define freopen freopen("input.txt", "r", stdin);freopen("output.txt", "w", stdout);
#define PI 3.14159265358979323846264338327950288419716939937510582097494459230781640628
ll a,b,c[N],d[N],c1[1234][1234],e,n,j,i,l,r,x,y,k,ans,sum;
bool used[1234567];
ll T;
vector<ll> v1,v[N];
string s,s1[1234];
vector<pl> vp;
char ch[1234][1234];
pl p[1234567];
priority_queue<ll> pq;
ll dx[4]={1,-1,0,0},dy[4]={0,0,1,-1};
map<ll,ll> ma;
int main(){
    cin>>n>>l>>k;
    cin>>s;
    sort(s.begin(),s.end());
    x=0;
    rep(j,0,l-1){
        rep(i,1,k){
            if(used[i]==0){
                ch[i][j]=s[x],x++;
            }
        }
        rep(i,1,k){
            if(used[i]==0&&ch[i][j]!=ch[k][j])used[i]=1;
        }
    }
    rep(i,1,n){
        rep(j,0,l-1){
            if(!ch[i][j]){
                ch[i][j]=s[x];
                x++;
            }
        }
    }
    rep(i,1,n){
        rep(j,0,l-1)cout<<ch[i][j];
        puts("");
    }
}