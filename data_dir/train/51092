#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
const ll mod=1e9+7;
const ll inf=(1ll<<61);
const int MX=3e5+9;
int n,k,ans;
int main(){
    cin>>n>>k;
    if(k==1||k==n){
        cout<<3*n<<endl;
        return 0;
    }
    k=min(k,n-k+1);
    ans=(k-1)*2+n-k   +   n+1;
    cout<<ans+n<<endl;
}
