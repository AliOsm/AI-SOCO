#include <bits/stdc++.h>
#define ff first
#define ss second
using namespace std;
#define MP make_pair
#define PB push_back
#define ll long long
#define int long long
#define f(i,x,n) for(int i=x;i<n;i++)
#define mod 1000000007
int ans[3];
int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n;
    cin>>n;
    f(i,0,n)
    {
        int a,b,c;
        cin>>a>>b>>c;
        ans[0]+=a;
        ans[1]+=b;
        ans[2]+=c;
    }
    if(ans[0]==0&&ans[1]==0&&ans[2]==0)
    {
        cout<<"YES"<<endl;
    }
    else
    {
        cout<<"NO"<<endl;
    }
    return 0;
}
