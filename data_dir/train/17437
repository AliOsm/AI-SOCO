using namespace std;

#define forn(i,n) for (int i = int(0); i < int(n); i++)
#define forb(i,n) for (int i = int(n-1); i >= int(0); i--)
#define for1(i,n) for (int i = int(1); i <= int(n); i++)
#define fore(i,a,n) for (int i = int(a); i < int(n); i++)

#define pb push_back
#define mp make_pair
#define fr first
#define sc second
#define sz size()
#define sqr(x) ((x)*(x))
#define cube(x) ((x)*(x)*(x))
#define all(x) x.begin(), x.end()
  
typedef long long ll;
typedef long double ld;
typedef unsigned long long ull;
  
const int base = 1e9;
const int maxn = 105;
const int MAXN = 5500;
const int logn = 20;
const int inf = 2e9;
const int alpha = 26;
const int my_hash = 29;
const int my_mod = 2495828519;
const long long l_inf = 4e18;
const long long mod = 1e9+7;
const double pi = acos(-1.0);
const double eps = 1e-9;

void check(int pos, int l, int r) {
	if (l % 2 == 0 && r % 2 == 0) {
		printf(pos == 0 ? "0" : "1");
		exit(0);
	}
}

int main() {
	int n, sum_l = 0, sum_r = 0;
	scanf("%d", &n);
	vector<pair<int,int> > a(n);
	for (int i = 0; i < n; i++) {
		scanf("%d %d", &a[i].fr, &a[i].sc);
		sum_l += a[i].fr;
		sum_r += a[i].sc;
	}
	check(0, sum_l, sum_r);
	for (int i = 0; i < n; i++)
		check(i + 1, sum_l - a[i].fr + a[i].sc, sum_r - a[i].sc + a[i].fr);
	printf("-1");
}