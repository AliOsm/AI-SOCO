#include <bits/stdc++.h>

using namespace std;

inline void prep()
{
    cin.tie(0);
    cin.sync_with_stdio(0);
}

#define X first
#define Y second
#define ll long long
#define inf (0x7fffffffffffffff)
#define all(x) x.begin(), x.end()
#define ZXC cerr << clock() * 1.0 / CLOCKS_PER_SEC << endl;

const int mod = (int)1e9 + 7;
const int MX = (int)5e6 + 5;

int main()
{
    prep();


    string s;
    cin >> s;

    int n = s.size();
    int o = count(all(s), 'o');
    int d = count(all(s), '-');

    if(o == 0 || d % o == 0){
        puts("YES");
    }
    else
        puts("NO");

    // ZXC
    return 0;
}