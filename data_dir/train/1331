#include<bits/stdc++.h>
using namespace std;
#define ll long long
ll i,ans,j,c[1000000],d[1000000],a,e,p,n=0,b;	
	ll q[100];
int main(){
	cin>>n;
	ll x=0,y=0;
	for(i=1;i<=n;i++){
		cin>>b;
		if(b==1)x++;
		else y++;
	}
	if(x==n){
		for(i=1;i<=n;i++){
			cout<<1<<" ";
		}exit(0);
	}
	if(y==n){
		for(i=1;i<=n;i++){
			cout<<2<<" ";
		}exit(0);
	}
	cout<<2<<" "<<1<<" ";
	for(i=1;i<=y-1;i++){
	      cout<<"2 ";
	}
	for(i=1;i<=x-1;i++){
	      cout<<"1 ";
	}
}