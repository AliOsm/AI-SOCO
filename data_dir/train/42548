#include <bits/stdc++.h>
#define fr first
#define sc scanf
#define pf printf
#define se second
#define ll long long
#define pb push_back
#define mk make_pair
#define pr pair<ll,ll>
#define piip pair< pair<ll,ll>,ll >
#define fin(s) freopen( s, "r", stdin )
#define fout(s) freopen( s, "w", stdout )
#define TIME ios_base::sync_with_stdio(0)
using namespace std;

const ll INF = 1e9;
const ll N = 2e5 + 1;
const ll mod = 1e9 + 7;
const long double eps = 1E-7;

ll a, b, c, d, ans;
int main()
{
    TIME;
    cin >> a >> b;
    c = abs(a - b);
    d = c / 2;
    ans += d * (d+1);
    if( c % 2 == 1 )
        ans += d+1;
    cout << ans << endl;
}
