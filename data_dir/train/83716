typedef long long ll;
#define po pop_back
#define pb push_back
#define mk make_pair
#define lw lower_bound
#define up upper_bound
#define ff first
#define ss second
#define MOD 1000000007
#define boost ios_base::sync_with_stdio(); cin.tie(0); cout.tie(0);
ll a,b=0,c[1234567],ans,d[1234567],i,j,n,k=0,x;
map<string , ll> m;
vector<pair<ll,pair<ll,ll>>> v,v1;
vector<ll> ::iterator it;
string s[1234567],s1[1234567];
set<ll> se;
queue<ll> q;
deque<ll> dq;
priority_queue<pair<ll,ll>> pq;
int main(){
	boost
	cin>>n;
	while(n--){
		cin>>a>>b;
		if(b<a)swap(a,b);
		k=a+b;
		b-=a;
		b*=2;
		double q;
		q=b;
		q=sqrt(q);
		x=q;
		if(x*(x+1)>=b) x+=0;
		else x++;
		if(((x+1)*x/2+k)%2==1)x++;
		if(((x+1)*x/2+k)%2==1)x++;
		cout<<x<<endl;
	}
}