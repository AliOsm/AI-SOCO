#include <bits/stdc++.h>

using namespace std;

#define done return 0
#define f first
#define s second
#define pb push_back
#define mp make_pair
#define boost ios_base::sync_with_stdio(false)
#define eb emplace_back
#define OUT(x) {cout << x; return (0); }
#define rep( a, b) for(int i=(a); i<=(b); ++i)
typedef unsigned int ui;
typedef long long ll;
typedef unsigned long long llu;
typedef pair <int, int> PII;
typedef pair <ll, ll> PLL;
typedef pair <PLL, PLL> PP;
typedef pair <PII, int> PPI;
typedef vector <int> vi;
const ll mod = 1e9+7;
const int inf = 1e9+9;
const ll MOD = 1e9+696969;
const ll INF = 1e18;
inline Int(){ int n;scanf("%d",&n);return n;}
inline I64(){ ll n;scanf("%I64d",&n);return n;}
inline I64u(){ llu n;scanf("%I64d",&n);return n;}
int t;
#define maxn 500100
char s[maxn];
int a[maxn],b[maxn];
int n;
ll ans;
map<int,int>ap,bp;
int main()
{
    n=Int();
    rep(1,n){
     int c=Int(),d=Int();
     ans+=(ap[c+d]+bp[c-d]);
    ap[c+d]++,bp[c-d]++;
    }
    /*rep(1,n){
    ans+=(ap[a[i]+b[i]]-1+bp[a[i]-b[i]]-1);
    }*/
    OUT(ans);
    done;
}

