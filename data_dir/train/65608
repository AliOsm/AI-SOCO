#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define MOD 1000000007
int main()
{
    //freopen("input.txt","r",stdin);
    //freopen("output.txt","w",stdout);
    int n,i;
    cin>>n;
    cout<<n/2<<endl;
    if(n%2==0)
    {
        for(i=0;i<n/2;i++)
            cout<<2<<" ";
    }
    else
    {
        for(i=0;i<n/2-1;i++)
            cout<<2<<" ";
        cout<<3;
    }
    return 0;
}
