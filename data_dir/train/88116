#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define pb push_back
#define mp make_pair
#define F first
#define S second
void go() {
	ll n, a, b, x;
	cin >> n >> x >> a >> b;
	cout << min(n - 1, x + abs(b - a)) << "\n";
	return;
}
int main() {
	ll t;
	cin >> t;
	while(t--)
		go();
	return 0;
}