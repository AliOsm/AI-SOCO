#include<iostream>
#include<cstdio>
#include<algorithm>
#include<map>
#include<queue>
#include<string>
#include<cstring>
#include<vector>

using namespace std;

int main(){
    int n, m;
    cin >> n >> m;
    int ans = 0;
    for(int i = 0; i < n; ++i){
        int t;
        cin >> t;
        ans += t;
    }
    ans = abs(ans);
    if(ans % m ) cout << ans / m + 1;
    else cout << ans / m;
    //system("pause");
}