#include <bits/stdc++.h>
using namespace std;
#define ll long long

void solve()
{
    ll n, m;
    cin>>n>>m;
    if (n > m) swap(n, m);
    if (n == 1)
    {
        cout<<"YES"<<endl;
        return;
    }
    if (n == 2)
    {
        if (m == 2)
        {
            cout<<"YES"<<endl;
            return;
        }
        cout<<"NO"<<endl;
        return;
    }
    cout<<"NO"<<endl;
    return;


}

int main()
{
    ll n;
    cin>>n;
    while (n--)
        solve();

    return 0;
}
