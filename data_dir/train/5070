#include<bits/stdc++.h>
using namespace std;
string st[1009];
long long int nm[10];
int main()
{
  long long int a,b,c,d,e,i,j,k,l,n,m,x,y,t,p;
  scanf("%lld",&n);
  char ch;
  for(i=0;i<n;i++)
  {
      for(j=0;j<7;j++)
      {
          cin>>ch;
          if(ch=='1')
          {
              nm[j]++;
          }
      }
  }
  a=0;
  for(j=0;j<7;j++)
  {
      a=max(a,nm[j]);
  }
  cout<<a<<endl;
}