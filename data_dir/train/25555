const  int N=5e5+5,MOD=1e9+7;
double   ar[N],br[N];



LL n;
string  s,ss;

double go(double mid)
{
    double mx=0.0;
    rep(i,n)
    {
        mx=max(mx,abs(ar[i]-mid)/double (br[i]) );
    }  return mx;
}

int main()
{
  // _CIN;

    cin>>n; rep(i,n) cin>>ar[i];
    rep(i,n)  cin>>br[i];

    double lo=0.0,hi=1e9;

    double r=1e18;
    rep(i,300)
    {
        double fst=(lo*2.0+hi)/3.0;
        double snd=(hi*2.0+lo)/3.00;

        double xx=go(fst);
        double yy=go(snd);
        r=min(r,xx);
        r=min(r,yy);

        if(xx<yy)  hi=snd;
        else  lo=fst;
    }

    cout<<fixed<<setprecision(10)<<r;




   return 0;

}
