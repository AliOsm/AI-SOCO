#include <bits/stdc++.h>

using namespace std;

#define pb push_back
#define mp make_pair
#define ff first
#define ss second
#define ll long long
#define oo 1e9
#define OO 1e18
#define dd pair<double,double>
#define ii pair<int,int>

int main(){
	int i,f=0,se=0,qu=0;
	string s;
	cin >> s;
	for(i=0;i<s.size();i++){
		if(s[i]=='7' || s[i]=='4') se++;
	}
	if(se == 7 || se == 4) printf("YES\n");
	else printf("NO\n");
	return 0;
}