#include <bits/stdc++.h>
#define ll long long
#define TIME ios_base::sync_with_stdio(0);
#define sz size()
using namespace std;
ll n , l , a , b , cnt , ans , m;
int main()
{
    ll T;
    cin >> T;
    while( T -- ){
        cin >> a >> b;
        if( sqrt(a) < b ){
            cout << "NO" << endl;
            continue;
        }
        if( a % 2 == b % 2  ){
            cout << "YES" << endl;
            continue;
        }
            cout << "NO" << endl;
    }
}

