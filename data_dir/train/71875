#include<bits/stdc++.h>
using namespace std;
int main()
{
	int n;
	cin >> n;
	for(int i = 1; i <= n; i++)
	{
		int x;
		cin >> x;
		if(x % 2)
		{
			cout << '7';
			x -= 3;
		}
		for(int k = 1; k <= x/2; k++)
		{
			cout << 1;
		}
		cout << endl;
	}
}