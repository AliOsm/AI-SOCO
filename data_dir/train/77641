#include <bits/stdc++.h>

using namespace std;

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    int n,ans=0,mx=-1;
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        int x;
        cin>>x;
        mx=max(mx,x);
        if(mx==i)
        {
            ans++;
            mx=-1;
        }
    }
    cout<<ans<<endl;
    return 0;
}
