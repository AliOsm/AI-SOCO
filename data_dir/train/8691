#include <bits/stdc++.h>
#define ff first
#define ss second
using namespace std;
#define MP make_pair
#define PB push_back
#define ll long long
#define int long long
#define f(i,x,n) for(int i=x;i<n;i++)
#define mod 1000000007
int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n,m,k,l;
    cin>>n>>m>>k>>l;
    int val=n/m;
    int quan=((l+k+m-1)/m);
    //cout<<quan<<endl;
    if(quan==0)
    cout<<-1<<endl;
    else if(l>(n-k))
    cout<<-1<<endl;
    // else if(k+l>m)
    // cout<<-1<<endl;
    else if(quan<=val)
    {
        cout<<quan<<endl;
    }
    else
    {
        cout<<-1<<endl;
    }
    return 0;
}