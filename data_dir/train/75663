#include<iostream>
#include <bits/stdc++.h>
#define ll long long
#define IO ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
using namespace std;
ll a, b, c, x;
int main()
{
	IO;
	cin >> a >> b >> c;
	x = min(a, b);
	c += x;
	a -= x;
	b -= x;
	c *= 2;
	if(a || b)
		c++;
	cout << c;
}
