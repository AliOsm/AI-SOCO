#include <cstdio>
#include <cstring>

int main()
{
     long long k, d, t;
     
     scanf("%I64d%I64d%I64d", &k, &d, &t);
     
     if (k % d == 0)
     {
          printf("%I64d\n", t);
          return 0;
     }
     
     long long p;
     if (k > d)
          p = ((k / d) + 1) * d;
     else //k < d
          p = d;
          
     long long dt = 2 * k + (p - k);
     t = t * 2;
     
     long long count = t / dt;
     long long r = t % dt;
     
     long long s = 0;
     s = count * p * 2;
     if (r <= k * 2)
     {
          s = s + r;
     }
     else
     {
          s = s + k * 2;
          r = (r - k * 2);
          s = s + r * 2;
     }
     //s = s + r;
     
     double ans = s / 2.0;
     
     printf("%.11lf\n", ans);
     
     
     
     return 0;
}
