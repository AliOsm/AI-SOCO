#include <bits/stdc++.h>

#define fi first
#define se second
#define ll long long
#define dl double long

using namespace std;

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
    //freopen( "input.txt" , "r" , stdin );
    //freopen( "output.txt" , "w" , stdout );

    int t;
    cin >> t;
    dl x = acos(-1);
    while( t-- ){
        int n;
        cin >> n;
        n *= 2;
        dl r = 1.0 / (2 * 1.0 * tan(x / (n * 1.0)));
        cout.precision(9);
        cout << fixed << r * 2 << "\n";
    }
}

