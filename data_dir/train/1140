#include<bits/stdc++.h>
using namespace std;
#define Jewel ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

int main()
{
    Jewel;
    int a, b, s;
    cin>>a>>b>>s;
    a = abs(a), b = abs(b);
    s -= (a+b);

    if(s>=0 && s%2==0)
        cout<<"YES";
    else
        cout<<"NO";
    return 0;
}
