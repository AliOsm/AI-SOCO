#include<bits/stdc++.h>
#define mod 1000000007

using namespace std;

int main()
{
    long long n,i,j,k,m,a,c,b,p,t,l,x,y,q;
    cin>>n>>m;
    int ara[n],ara1[m];
    for(i=0;i<n;i++)cin>>ara[i];
    for(i=0;i<m;i++)cin>>ara1[i];
    sort(ara,ara+n);
    sort(ara1,ara1+m);
    if( ara[n-1]>(2*ara[0]) )p=ara[n-1];
    else p=2*ara[0];
    if(ara1[0]>p)cout<<p<<endl;
    else cout<<"-1\n";
    return 0;
}
