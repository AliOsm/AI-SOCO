#include<bits/stdc++.h>
using namespace std;




int main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    int n;
    cin >> n;
    double x;
    int a = 0, b = 0;
    for(int i = 1; i <= n; i++){
        cin >> x;
        if(x > 0){
            a += 1;
        }
        else if(x < 0){
            b += 1;
        }
    }
    if(a * 2 >= n){
        cout << 1;
    }
    else if(b * 2 >= n){
        cout << -1;
    }
    else{
        cout << 0;
    }
}
