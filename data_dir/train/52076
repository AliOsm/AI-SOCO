#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, H, M, ans;
int a[MAX];

int main()
{
    optimiza_io
    cin >> N >> H >> M;
    for( int i = 1; i <= N; i ++ )
        a[i] = H;
    while( M -- )
    {
        int l, r, x;
        cin >> l >> r >> x;
        for( int i = l; i <= r; i ++ )
            a[i] = min( a[i] , x );
    }
    for( int i = 1; i <= N; i ++ )
        ans += a[i] * a[i];
    
    cout << ans;
    return 0;
}

