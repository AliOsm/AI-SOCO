using namespace std;

#define ll long long
#define vt vector


int main()
{
	int n;
	string s;
	cin >> n >> s;
	ll a = 0;
	for(int i = 0; i < n; i++)
		if (s[i] == 'B')
			a += powl(2, i);
	cout << a << endl;
	return 0;
}