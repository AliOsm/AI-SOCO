#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int X;
int a[10][10];

int main()
{
    optimiza_io
    cin >> X;
    for( int i = 1; i <= 4; i ++ )
        for( int j = 1; j <= 4; j ++ )
            a[i][j] = ( 1 << 17 );
    
    a[1][1] ^= X;
    a[2][1] ^= X;
    a[2][2] ^= X;
    a[2][3] ^= X;
    a[3][3] ^= X;
    a[4][3] ^= X;
    a[4][4] ^= X;

    a[3][3] ^= ( 1 << 17 );
    a[4][4] ^= ( 1 << 17 );
    
    cout << "4 4\n";
    for( int i = 1; i <= 4; i ++ )
        for( int j = 1; j <= 4; j ++ )
            cout << a[i][j] << " \n"[j == 4];
    return 0;
}

