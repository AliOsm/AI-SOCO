// Sky's the limit :)
#include<bits/stdc++.h>
using namespace std;
#define int long long

signed main()
{
    ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    
    //int t = 1; cin >> t; while(t--)
    {
    	int n;
    	cin >> n;
    	cout << "I hate ";
		for(int i = 2; i <= n; i++) {
	        if(i % 2 == 0)
	            cout << "that I love ";
	        else
	            cout << "that I hate ";
		}
		cout << "it\n";
    }
    
    cerr << "Time elapsed : " << 1.0 * clock() / CLOCKS_PER_SEC << " sec \n";
    return 0;
}
