#include <bits/stdc++.h>
using namespace std;

typedef long long ll;


int main()
{
    ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
    int t;
    cin >> t;
    while(t--){
        int n,k;
        cin>>n>>k;
        int candy = (n/k)*k;
        candy = min( n , candy + k/2 );
        cout << candy << "\n";
    }


    return 0;
}
