#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define se second
#define fi first
#define pb push_back
const int N = 1e5 +5;

int main(){

//	freopen("in.txt","r",stdin);

	string s;
	cin >>s;
	int ca=0, cb=0, cc=0, in=0;
	while (in < s.size() && s[in] == 'a')ca++, in++;
	while (in < s.size() && s[in] == 'b')cb++, in++;
	while (in < s.size() && s[in] == 'c')cc++, in++;
	if (ca + cb + cc == s.size() && (ca == cc || cb == cc) && ca && cb)puts("YES");
	else puts("NO");

}
