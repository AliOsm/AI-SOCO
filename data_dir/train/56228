#include<bits/stdc++.h>
using namespace std;
long long n,m,k,a[10000000],b[10000000];
string s;
int main(){
	cin>>n;
	cin>>s;
	cout<<s[0];
	for(int i=1; i<s.size(); i++){
		if(s[i]=='a' || s[i]=='e' || s[i]=='i' || s[i]=='o' || s[i]=='u' || s[i]=='y'){
			if(s[i-1]=='a' || s[i-1]=='e' || s[i-1]=='i' || s[i-1]=='o' || s[i-1]=='u' || s[i-1]=='y')cout<<"";
			else {
				cout<<s[i];
			}
		}
		else {
			cout<<s[i];
		}
	}
	
	
	
	return 0;
}