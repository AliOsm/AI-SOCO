void solve () {
	int n, l, r;
	cin >> n >> l >> r;
	int kol = 1;
	int sum1 = n - l + 1;
	if (l - 1 != 0) {
		int uu = 1;
		for (int i = 1; i <= l - 1; i ++) {
		    uu *= 2;
		    sum1 += uu;
		}	
	}
	cout << sum1 << " ";
	int uu = 0;
	int sum = 0;
	for (int i = 1; i <= r; i ++) {
	    if (i == 1) uu = 1;
	    else {
	    	uu *= 2;	
	    }
	    sum += uu;
	}
	sum += (n - r) * uu;
	cout << sum;
}

