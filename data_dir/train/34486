	scanf("%d",&n);

	int hund=n/100;

	n-=hund*100;

	int twe=n/20;

	n-=twe*20;

	int ten=n/10;

	n-=ten*10;

	int fiv=n/5;

	n-=fiv*5;

	printf("%d",hund+twe+ten+fiv+n);

}