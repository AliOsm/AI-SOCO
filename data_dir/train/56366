const double PI = 2.0 * acos(0.0);
const double EX = 2.7182818284;
const int MOD = 1e9 + 7;
const int oo = 2e9 + 1e8;

int di[] = { 0, 1, 0, -1, 1, 1, -1, -1 };
int dj[] = { 1, 0, -1, 0, 1, -1, -1, 1 };
int dik[] = { -1, -1, 1, 1, -2, -2, 2, 2 };
int djk[] = { 2, -2, 2, -2, 1, -1, 1, -1 };

ll gcd(ll x, ll y) { return !y ? x : gcd(y, x%y); }

ll getInt() {
    ll ret;
    char tmpc;
    bool sign = 0;
    while (tmpc = getchar()) {
        if (tmpc<'0' || tmpc>'9') sign = (tmpc == '-');
        else break;
    }
    ret = tmpc - '0';
    while (tmpc = getchar(), tmpc >= '0' && tmpc <= '9')
        ret = ret * 10 + tmpc - '0';
    if (sign) ret *= -1;
    return ret;
}

int n, k, d, memo[101][2];

int calc(int have, bool good) {
    if (!have)
        return good;
    int &ret = memo[have][good];
    if (ret != -1)
        return ret;
    ret = 0;
    Rep(i, 1, min(have, k) + 1) {
        ret += calc(have - i, good | (i >= d));
        ret %= MOD;
    }
    return ret;
}

int main() {
    cin >> n >> k >> d;
    mem(memo, -1);
    cout << calc(n, 0) << endl;
    return 0;
}