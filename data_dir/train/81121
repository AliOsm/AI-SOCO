using namespace std;

const int N=2500010;

typedef long long ll;

#define pb push_back
#define sz(x) (int((x).size()))

int a[N],b[N];

ll f[N];

int main()
{
	int n;
	scanf("%d",&n);
	ll sum=0;
	for(int i=1;i<=n;i++)
		sum+=(i-1)*(n-i)+i;
	cout<<sum<<endl;
	return 0;
}
