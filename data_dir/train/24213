#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, ans;
int cub[MAX];
bool ya[MAX];

int main()
{
    optimiza_io
    cin >> N;
    while( N -- ) {
        int a;
        cin >> a;
        cub[a]++;
    }
    for( int i = 1; i <= 150000; i ++ ) {
        if( cub[i] && ! ya[i - 1] && i > 1 ) {
            cub[i]--;
            ya[i - 1] = 1;
        }
        if( cub[i] && ! ya[i] ) {
            cub[i]--;
            ya[i] = 1;
        }
        if( cub[i] && ! ya[i + 1] ) {
            cub[i]--;
            ya[i + 1] = 1;
        }
    }
    for( int i = 1; i <= 150001; i ++ ) 
        if( ya[i] )
            ans++;
    
    cout << ans;
    return 0;
}