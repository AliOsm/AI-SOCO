#include <bits/stdc++.h>
typedef long long ll ;
using namespace std;

int main()
{
    ll n = 0 , k = 0  ;

    cin >> n >> k ;

    ll r = (n/2)/(k+1);
    
    ll win = r * (k + 1);
    
    //! win = k*x + x  = x*(k + 1) // lose = n - win 
    //! x = win/(k+1) 

    cout << r << " " << r*k << " " << n - win << endl ;

    return 0;
}
