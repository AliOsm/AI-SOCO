#include <bits/stdc++.h>
using namespace std;

int m;

void solve() {
	int s, f, t;
	scanf("%d%d%d", &s, &f, &t);
	int q = t / m;
	int cur;
	if(q % 2) {
		cur = m - (t % m) + 1;
	} else {
		cur = (t % m) + 1;
	}
	if(s < f) {
		if(q % 2) {
			printf("%d\n", cur + f - 2 + t);
		} else {
			if(cur > s) {
				printf("%d\n", 2 * m - cur + f + t);
			} else {
				printf("%d\n", f - cur + t);
			}
		}
	} else if(s > f) {
		if(q % 2) {
			if(cur < s) {
				printf("%d\n", cur + 2 * m - f + t);
			} else {
				printf("%d\n", cur - f + t);
			}
		} else {
			printf("%d\n", m + 1 - cur + m + 1 - f + t);
		}
	} else {
		printf("%d\n", t);
	}
}

int main (int argc, char *argv[])
{
	int n;
	scanf("%d%d", &n, &m);
	--m;
	while(n--) {
		solve();
	}
	
	return 0;
}

