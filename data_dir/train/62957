#define _CRT_SECURE_NO_WARNINGS

#include <iostream>
#include <cstdlib>
#include <ctime>
#include <cmath>
#include <cstring>
#include <string>
#include <vector>
#include <stdio.h>
#include <climits>
#include <Windows.h>
#include <iterator>
#include <algorithm>

using namespace std;

typedef unsigned long long ull;
typedef long long ll;

void solve()
{
    int n, a, b, count(0);
    cin >> n;

    for (int i(0); i < n; i++)
    {
        cin >> a >> b;
        if (b - a >= 2) count++;
    }

    cout << count;
}

int main()
{
    solve();

    return 0;
}