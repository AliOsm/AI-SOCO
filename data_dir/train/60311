#include <bits/stdc++.h>

using namespace std;

int main()
{
    //freopen("in.txt","r",stdin);
    long long i,j,p,q,k,l,m,n,x,a,b,c;
    while(cin>>m>>n)
    {
        x=m-n+1;
        k=m/n;
//        if(n>k)
//            cout<<m-n<<" "<<(x*(x-1))/2<<endl;
//        else
//        {
            l=m/n;
            p=(n-1)*((l*(l-1))/2);
            q=m-((n-1)*l);
            a=q-l;
            b=a*((l*(l+1))/2);
            c=(n-a)*((l*(l-1))/2);
            i=(q*(q-1))/2;
            cout<<b+c<<" "<<(x*(x-1))/2<<endl;
   //     }
    }
}
