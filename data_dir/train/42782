// In the name of Allah the Most Merciful.

#include<bits/stdc++.h>
using namespace std;

int main(void)
{

    int n , m;
    cin >> n >> m;

    int ar[n+1] , value = 0;

    for(int i=1;i<=n;i++)cin >> ar[i];

    while(m--){

        int in1 , in2;
        cin >> in1 >> in2;

        value+=min(ar[in1] , ar[in2]);
    }

    cout << value << endl;

    return 0;
}
