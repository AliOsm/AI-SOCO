#include <iostream>
#include <algorithm>
#include <set>
#include <vector>
#include <map>
#include <queue>
#include <string>
#include <cstring>
#include <cstdio>
// Kobe is the GOAT
// DON'T DIVIDE
// Greedy, Prefix, Sets/Bsearch, Dfs/bfs, DP
// Stack, Bitmask, Dsu 
using namespace std;

int t, s, x;

int main()
{
	ios::sync_with_stdio(0);
	cin >> t >> s >> x;

	if(x == t + 1)
		cout << "NO\n";
	else if(x >= t && ((x - t) % s == 0 || (x - t) % s == 1))
		cout << "YES\n";
	else
		cout << "NO\n";

	return 0;
}
