#include <iostream>
#include <fstream>

#include <iostream>
using namespace std;

class TaskA {
public:
	void solve(std::istream& in, std::ostream& out) {
		int n;
		in >> n;
        out << (n * n + 1) / 2 << endl;
        for (int i = 0; i < n; ++i) {
            for (int j = 0; j < n; ++j) {
                out << ((i + j) % 2 == 0 ? 'C' : '.');
            }
            out << endl;
        }
	}
};


int main() {
    TaskA solver;
    std::istream& in(std::cin);
    std::ostream& out(std::cout);
    solver.solve(in, out);
    return 0;
}
