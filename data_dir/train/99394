#include <bits/stdc++.h>

using namespace std;

void Solve() {
    int64_t a, b, k;
    cin >> a >> b >> k;
    int64_t pos = k / 2 * (a - b);
    if (k % 2 != 0) {
        pos += a;
    }
    cout << pos << "\n";
}

int main() {
    //freopen("input.txt", "r", stdin);
    //freopen("output.txt", "w", stdout);
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);

    int number_of_tests;
    cin >> number_of_tests;
    for (int i = 0; i < number_of_tests; ++i) {
        Solve();
    }
    return 0;
}
