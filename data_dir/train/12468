#include <bits/stdc++.h>
#define ll long long
#define f first
#define s second
#define pb push_back
using namespace std;
ll n,m,e,r,x,h,q,w,l,k,d,y;
ll const N=5*1e5+4,inf=1e9+7;
ll a[N],b[N],z[N];
bool us[N];
ll mn,mm,ans;
vector <ll> v;
string s;
char ch;
int main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    cin>>n;
    k=inf;
    for (int i=0;i<n;i++)
    {
        cin>>a[i];
        k=min(k,a[i]);
    }
    k=k-k%n;
    while(a[q]>k)
    {
        q++;
        if (q==n) q=0;
        k++;
    }
    cout<<q+1;
return 0;
}