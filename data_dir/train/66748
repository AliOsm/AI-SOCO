#include <iostream>

using namespace std;

long m,x,i,j,ans,f,n,k;
bool b[1001];
long a[1001][1010];


int main () {
    
    
 cin>>n;
 for (i=1; i<n; ++i){
  k = n-i;
  if (((k % 2)==0 )&&((i % 2)==0)) {
                                    cout<<"YES"<<endl;
                                    return 0;
                                   }
 }
 cout<<"NO"<<endl;
}



