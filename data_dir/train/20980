#include<bits/stdc++.h>
#define ll long long
using namespace std;

int main()
{
    ll n, i;
    vector < ll > a;

    cin >> n;

    for(i = 0; i < n; i++){
        ll x;
        cin >> x;
        a.push_back(x);
    }

    for(i = 0; i < n; i++){
        if(a[i] % 2 == 0) cout << a[i] - 1 << " ";
        else cout << a[i] << " ";
    }

    cout << endl;

    return 0;
}
