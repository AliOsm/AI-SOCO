#include<bits/stdc++.h>
using namespace std;
typedef long double ld;
typedef long long int ll;

const ll N=1e5+5;
const ll INF=1e18;
const ll mod=1e9+7;

#define f first
#define s second
#define pb(x) push_back(x)
#define mp(x,y) make_pair(x,y)
#define bits(x) __builtin_popcountll(x)
#define OPT ios_base::sync_with_stdio(false);cin.tie(NULL);

void MaiN()
{
  ll k,n,w,sum=0;
  cin>>k>>n>>w;
  for(ll i=1;i<=w;i++){sum+=(i*k);}
  ll ans=sum-n;
  if(ans<=0){ans=0;}
  cout<<ans<<endl;
}

int main()
{
  OPT;
  int t=1;
  //cin>>t;
  while(t--){MaiN();}
}
