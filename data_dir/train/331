/// NO PAIN <-> NO GAIN
/// FROM ASHES TO THE EMPIRE
#include <bits/stdc++.h>

#define ss second
#define ff first
#define pb push_back
#define faster ios::sync_with_stdio(0), cin.tie(0), cout.tie(0)

using namespace std;

typedef long long ll;
typedef long double ld;

const ll N=300100,mod=1e9+7;

ll n,m,x,y,w,z,k,ans,t,a[N],b[N];

string s,f[N];

int main(){
    faster;
    cin>>t;
    while(t--){
        cin>>n>>s;
        if(n==1 || (n==2 && s[0]>=s[1]))cout<<"NO"<<endl;
        else cout<<"YES"<<endl<<2<<endl<<s[0]<<' '<<s.substr(1,s.size()-1)<<endl;
    }
    return 0;
}
