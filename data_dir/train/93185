#define sqr(x) ((x) * (x))

const int inf = (int)1e9;
const int mod = inf + 7;
const double eps = 1e-9;
const double pi = acos(-1.0);

ll read_long() {
    ll ans = 0;
    char c;
    bool started = false;
    bool is_negative = false;
    while (true) {
        c = getchar();
        if ((c < '0' || c > '9') && c != '-' && !started) continue;
        if ((c < '0' || c > '9') && c != '-' && started) break;
        if (started) {
            ans = ans * 10;
        }
        started = true;
        if (c == '-') is_negative = true;
        else ans += c - '0';
    }
    if (is_negative) ans *= -1;
    return ans;
}

int n;
char tmp[1001000];
string a, b;
int dp[1001000];

int calc(int ind) {
    if (ind >= n) return 0;
    int &res = dp[ind];
    if (res != -1) return res;
    res = inf;
    if (a[ind] == b[ind]) res = min(res, calc(ind + 1));
    if (a[ind] != b[ind]) res = min(res, 1 + calc(ind + 1));
    if (ind + 1 < n && a[ind] == b[ind + 1] && a[ind + 1] == b[ind]) res = min(res, 1 + calc(ind + 2));
    return res;
}

int main(){

    scanf("%d\n", &n);
    scanf("%s\n", tmp); a = tmp;
    scanf("%s\n", tmp); b = tmp;

    memset(dp, -1, sizeof dp);

    cout << calc(0) << endl;

    return 0;
}
