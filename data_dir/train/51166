#include<bits/stdc++.h>
using namespace std;
#define pi 3.14159265359
#define int long long
#define pii pair<int,int>
#define ld long double
const int mod=1e9 +7;

int dx[] = {-1, 0, 1, 0};
int dy[] = { 0,-1, 0, 1};




int32_t main()
{
     ios::sync_with_stdio(false);
  cin.tie(0);
  cout.tie(0);

   // freopen("input.txt", "rt", stdin);
  //freopen("output.txt", "wt", stdout);
  
  int n,d,e;
  cin>>n>>d>>e;
  int ans=1e9;
  for(int i=5;i*e<=n;i+=5)
  {
     ans=min(ans,(n-i*e)%d);
  }
  
  cout<<min(ans,n%d);
      
}