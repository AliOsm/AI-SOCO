#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define pb push_back
#define mem(a,b) memset(a,b,sizeof(a))

int main(){
	ios::sync_with_stdio(false);
	cin.tie(0);
	int n; 
	cin>>n;
	for(int i=0;i<n;i++)cout<<"  ";cout<<0<<endl;
	for(int i=n-1;i>=0;i--){
		for(int j=0;j<i;j++)cout<<"  ";cout<<"0 ";
		for(int j=1;j<=n-i;j++)cout<<j<<" ";
		for(int j=n-i-1;j>=1;j--)cout<<j<<" ";
		cout<<0<<endl; 
	}
	for(int i=1;i<=n-1;i++){
		for(int j=0;j<i;j++)cout<<"  ";cout<<"0 ";
		for(int j=1;j<=n-i;j++)cout<<j<<" ";
		for(int j=n-i-1;j>=1;j--)cout<<j<<" ";
		cout<<0<<endl; 
	}
	for(int i=0;i<n;i++)cout<<"  ";cout<<0<<endl;
	return 0;
} 