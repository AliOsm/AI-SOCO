#include <bits/stdc++.h>

#define FI(i,a,b) for(int i=(a);i<=(b);i++)
#define FD(i,a,b) for(int i=(a);i>=(b);i--)

#define LL long long
#define Ldouble long double
#define PI 3.1415926535897932384626

#define PII pair<int,int>
#define PLL pair<LL,LL>
#define mp make_pair
#define fi first
#define se second

using namespace std;

int a, b;

int main(){
	scanf("%d %d", &a, &b);
	if(abs(a - b) <= 1 && a + b > 0) printf("YES\n");
	else printf("NO\n");
	return 0;
}