#include<bits/stdc++.h>
#define ff first
#define ss second
#define pb push_back
#define mp make_pair
#define ll long long
#define ld long double
#define all(a) a.begin(),a.end()
#define int long long
using namespace std;

const int N=3e5+1;
const int inf=1e18;
const int mon=1e9+7;



main ()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);cout.tie(0);
    int n;
    cin>>n;
    if (n==1 || n==2){
        cout<<"No";
        exit(0);
    }
    cout<<"Yes"<<endl;
    cout<<n-1<<" ";
    for (int i=1;i<=n-1;++i){
        cout<<i<<" ";
    }
    cout<<endl;
    cout<<1<<" "<<n<<endl;
}
