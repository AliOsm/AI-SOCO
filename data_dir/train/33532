#include <bits/stdc++.h>

using namespace std;
#define ll long long

int main() {
    //freopen("aranjare.in", "r", stdin);
    //freopen("aranjare.out", "w", stdout);
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    int n;
    cin>>n;
    int cur=n/2;
    cur++;
    cout<<cur<<endl;
    int x=1,y=1;
    while(n--){
        cout<<x<<" "<<y<<endl;
        if(y<cur){
            y++;
        }
        else{
            x++;
        }
    }
    return 0;
}
