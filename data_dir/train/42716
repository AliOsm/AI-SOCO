#include <bits/stdc++.h>

using namespace std;

int n, ans;
main(){
cin >> n;
if (n % 2 == 0){
    ans = n / 2;
    cout << ans << "\n";
    for (int i = 1; i <= ans; i++){
        cout << 2 << " ";
    }
    return 0;
}
else {}
  ans = n / 2;
  cout << ans << "\n";
   for (int i = 1; i <= ans - 1; i++){
     cout << 2 << " ";
   }
    cout << 3 << "\n";
}
