#include <bits/stdc++.h>

using namespace std;

const int maxi=1e6+6;

#define pb push_back

int a[maxi];
int n;

int main()
{
    int t;
    cin>>t;

    while(t--)
    {
        scanf("%d",&n);
        if (n%4==0) printf("%d\n",n/4); else
            if (n%4==1 && n/4>=2) printf("%d\n",n/4-1); else
            if (n%4==2 && n/4>=1) printf("%d\n",n/4); else
            if (n%4==3 && n/4>=3) printf("%d\n",n/4-1); else
            printf("-1\n");
    }


   return 0;
}
//lepo je kada se ocekuje da budes 602 od 610. Znas da ne mozes ispod ocekivanja (+- 7,8 pozicija maximalno)
