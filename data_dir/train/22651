#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
const ll N = 1e5 + 5;
const ll mod = 1e9 + 7;

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    ll n,x;
    bool flg=false;
    cin>>n;

    while(n-->0){
        cin>>x;
        if(x%2==0)
            flg=!flg;
        cout<<(flg?1:2)<<"\n";
    }
}
