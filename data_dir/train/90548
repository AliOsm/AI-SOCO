int n;

void solve()
{
	cin >> n;
	cout << (n / 2);
	cout << endl;
	if (n & 1)
	{
		cout << "3 ";
		n -= 3;
	}
	for(int i = 0; i < n / 2; ++i)
		cout << "2 ";
}

int main()
{
	cin.tie(0); ios_base::sync_with_stdio(false);
