#include "bits/stdc++.h"
#define int long long
using namespace std;
map<int,int> m;
int32_t main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    int n;
    string s;
    cin>>n>>s;
    int c=0,ans=0;
    for(int i=0;i<s.size();i++)
    {
    	if(s[i]=='x')c++;
    	else c=0;
    	if(c>2)ans++;
    }
    cout<<ans;
}