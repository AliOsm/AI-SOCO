#include <bits/stdc++.h>
#define pb push_back
#define mp make_pair
#define pp pair<int, int>
#define ppp pair<pp, int>
#define pp4 pair<pp, pp>
#define pp3 pair<ll, pair<int, int> > 
#define fi first
#define se second
#define N  222
#define mod 1000000007
#define inf 2000000001
#define esp 1e-9
#define BLOCK 333
#define BITNUM 555
#define BASE 311097
typedef long long ll;
// const ll oo = (ll)1e18 + 1;
using namespace std;
int nt;
int n, m;

int main() {
    ios::sync_with_stdio(false);
    // freopen("in.in", "r", stdin);    
    cin >> nt;
    while (nt--) {
    	cin >> n >> m;
    	if (n > m) swap(n, m);
    	if (n == 1) {
    		cout << "YES\n";
    		continue;
    	}
    	if (n == 2 && m == 2) {
    		cout << "YES\n";
    		continue;
    	}
    	cout << "NO\n";
    }
    return 0;
}

