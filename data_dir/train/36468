	void solve(std::istream& in, std::ostream& out) {
		string s; in >> s;
		vector<int> arr;
		int cnt = 0;
		int n = s.length();
		f(i, n){
			if(s[i] == 'a') ++cnt;
			else if(s[i] == 'b'){
				if(cnt) arr.emplace_back(cnt+1);
				cnt = 0;
			}
		}
		if(cnt) arr.emplace_back(cnt + 1);
		int res = 1;
		for(int x: arr) res = mul(res, x);
		--res;
		res += MOD;
		res %= MOD;
		out << res;
	}
};


