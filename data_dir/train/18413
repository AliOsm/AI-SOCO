#include<bits/stdc++.h>
using namespace std;

typedef long long int ll;
typedef long double ld;
typedef vector<ll> vec;

#define int long long int
#define LM LLONG_MAX

#define ff first
#define ss second

#define FAST ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl "\n"
#define pb push_back

#define MOD 1000000007
#define MAX 200005

signed main()
{
        
        FAST;
        
        ll n;
        cin>>n;
        
        for(int i=n;i<100000;i++)
        {
                ll sum=0;
                ll temp=i;
                     while(temp>0)
                        {
                                sum+=temp%10; temp/=10;
                        }
                        if(sum%4==0)
                        {
                                cout<<i;  return 0;
                        }
                            
        
        }
        
        
}