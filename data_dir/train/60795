#include<iostream>
#include<cstdio>
#include<cstring>
#include<vector>
#include<algorithm>
using namespace std;
int n, k;
int m;
int main() {
    while (cin>>n>>k) {
          m = (6 * n - 1) * k;
          cout<<m<<endl;
          for (int i = 0; i < n; ++i) {
              cout<<(6 * i + 1) * k<<" "<<(6 * i + 2) * k<<" "<<(6 * i + 3) * k<<" "<<(6 * i + 5) * k<<endl;
          }
    }
    return 0;
}
