using namespace std; 

#define REP(i, n) for (int (i) = 0; (i) < (n); (i)++) 
#define sz(v) (int)(v).size() 
#define all(v) (v).begin(), (v).end()

int main() {
#ifdef LOCAL
	freopen("input.txt", "r", stdin);
	freopen("output.txt", "w", stdout);
#endif
	int a, b, c = 0, r = 0;
	cin >> a >> b;
	while (a > 0) {
		--a, ++r, ++c;
		if (c == b) ++a, c = 0;
	}
	cout << r << endl;
	return 0;
}