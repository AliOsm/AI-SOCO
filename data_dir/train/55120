int main()
{
    string s;cin>>s;
    int k;cin>>k;
    int n=s.size();
    
    if(k>=n){
        cout<<(k+n)/2*2;
        return 0;
    }
    
    for(int len=k+n;len>=2;len--){
        if(len%2){
            continue;
        }
        for(int i=0;i<n;i++){
            if(i+len>n+k){
                break;
            }
            
            int flag=1;
            for(int j=0;j<len/2;j++){
                int left=i+j;
                int right=left+len/2;
                if(left<n && right<n && s[left]!=s[right])flag=0;
            }
            
            if(flag){
                cout<<len;
                return 0;
            }
            
            
        }
    }
    
    
    return 0;
}


