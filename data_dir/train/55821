/*************************************************/
int n,m,i,j,x,y;
double f[1005][1005],s[1005],t[1005];
void solve(int x,int y)
{
	double tmp=f[y][x]/f[x][x];
	int i;
	f[y][x]=0;
	f[y][y]-=tmp*f[x][y];
	f[y][m+1]-=tmp*f[x][m+1]; 
}
void gauss()
{
	int i,j;
	rep(i,m-1)
	{
		solve(i,i+1);
	}
	repd(i,m)
	{
		if (i<m) f[i][m+1]-=f[i][i+1]*s[i+1];
		s[i]=f[i][m+1]/f[i][i];
	}
}
int main()
{
	scanf("%d%d%d%d",&n,&m,&x,&y);
	n-=x;
	if (m==1)
	{
		printf("%.10f\n",2.0*n);
		return 0;
	}
	while (n--)
	{
		memcpy(t,s,sizeof(t));
		f[1][1]=2;f[1][2]=-1;f[1][m+1]=t[1]+3;
		forup(i,2,m-1)
		{
			f[i][i-1]=f[i][i+1]=-1;
			f[i][i]=3;
			f[i][m+1]=t[i]+4;
		}
		f[m][m]=2;f[m][m-1]=-1;f[m][m+1]=t[m]+3;
		gauss();
	}
	printf("%.10f\n",s[y]);
	return 0;
}