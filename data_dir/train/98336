#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[123456],a[1111234], b[1125678],d[123456], l,ll,r, s, t, k, m,x, y,y1,z;
string p,q;
map <long long,long long> mm;
int main() {
    cin >> n;
    m = n;
    i = 1;
    while (m >= i){
        m -= i;
        i ++;
    }
    s = i-1;
    cout << s<<endl;
    for (i = 1; i < s; i ++)
        cout <<i<< ' ';
    cout << n - s*(s-1)/2;
    return 0;
}