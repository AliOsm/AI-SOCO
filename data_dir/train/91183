#include <iostream>
#include <vector>
#include <string>
#include <iterator>
#include <set>
#include <map>
#include <algorithm>
using namespace std;

int main(void)
{
    long long sum = 0, n, x;
    cin >> n >> x;
    for (int i = 0; i < n; ++i)
    {
        int t;
        cin >> t;
        sum += t;
    }
    sum = abs(sum);
    cout << sum / x + (sum % x != 0);
    return 0;
}