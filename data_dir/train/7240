void prec(){
	
}
int col[N],p[N];
void solve(){
	int n;cin>>n;
	rep(i,2,n) cin>>p[i];
	rep(i,1,n) cin>>col[i];
	int ans=1;
	rep(i,2,n) {
		if(col[i]!=col[p[i]]) ans++;
	}
	cout<<ans;
}
int main()
{
    ios;
    int tc=1;
    //cin>>tc;
    prec();
    while(tc--)
    	solve();
    return 0; 
}