int di[] = { 0, 1, 0, -1 };
int dj[] = { 1, 0, -1, 0 };
int dik[] = { 1, 1, 2, 2, -1, -1, -2, -2 };
int djk[] = { 2, -2, 1, -1, -2, 2, -1, 1 };

ll gcd(ll x, ll y){ return !y ? x : gcd(y, x%y); }

int main(){
    int n, tmp, ans;
    cin >> n, ans;
    vi have(5);
    rep(i, n) scanf("%d", &tmp), have[tmp]++;
    ans = min(have[1], have[3]);
    have[1] -= ans, have[3] -= ans;
    ans += have[4] + have[3] + (have[2] * 2 + have[1]) / 4 + ((have[2] * 2 + have[1]) % 4 != 0);
    cout << ans << endl;
    return 0;
}







