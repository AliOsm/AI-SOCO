#define ld long double
#define pii pair<int, int>
#define y1 sda
using namespace std;    
const int N = int(3e5), mod = int(1e9)  + 7; 

int n;

int x[4] = {0,1,0,-1};
int y[4] = {1,0,-1,0};

int main () {
	cin >> n;
	cout << 0 << " " << 0 << endl;
	int p = 1;
	for(int i = 0; i < n - 1; i++){
		cout << x[i % 4] * p << " " << y[i % 4] * p << endl;;
		if(i % 4 == 3) p++;
	}

return 0;
}