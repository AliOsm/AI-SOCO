const int MOD = 1000000007;
const int HASH = 3137;

void solve() {
  int t, s, x;
  scanf("%d%d%d", &t, &s, &x);
  if(x < t) {
    printf("NO\n");
    return;
  }
  if(x == t) {
    printf("YES\n");
    return;
  }
  if(x < t+s) {
    printf("NO\n");
    return;
  }
  x -= t + s;
  x %= s;
  if(x == 0 || x == 1) printf("YES\n");
  else printf("NO\n");
}

int main() {
  /*
  freopen("integral.in","r",stdin);
  freopen("integral.out","w",stdout);
  */
  int qq = 1;
  //int qq = 1e9;
  //int qq; scanf("%d\n", &qq);
  for(int casenum = 1; casenum <= qq; casenum++) {
    solve();
  }
  return 0;
}
