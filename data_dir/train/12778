#include <bits/stdc++.h>
using namespace std;
#define F first
#define S second
#define pb push_back
#define ll long long
#define pi pair<int,int>
#define go ios::sync_with_stdio(0); cin.tie(0); cout.tie(0)
int n,k,r,mn,mx;
int main()
{
    go;
    cin>>n>>k;
    if(!k||n==k)
    {
        cout<<"0 0";
        return 0;
    }
    mn=1;
    mx=min(2*k,n-k);
    cout<<mn<<" "<<mx;
    return 0;
}
