#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[123456],a[1111234], b[1125678],d[123456], l,ll, s, t, k, m, xh, x, x1, y,z;
string p,q;
int main() {
    cin >> n>>m>>k;
    for (i = 0; i < n; i ++){
        cin >> a[i];
    }
    sort (a,a+n);
    x = m/(k+1);
    y = m%(k+1);
    s = (k*a[n-1]+a[n-2])*x+y*(a[n-1]); 
    cout << s;
    return 0;
}