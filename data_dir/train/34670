#include<bits/stdc++.h>

using namespace std;

#define lli long long int

int main(){
	
	ios :: sync_with_stdio(false); cin.tie(0) ; cout.tie(0);
	
	lli n,k;
	
	cin>>n>>k;
	
	lli even = n/2;
	
	lli odd = n-even;
	
	if(k <= odd){
			
		cout<<1+(k-1)*2;
	}
		
	else{
			
		k -= odd;
			
		cout<<2+(k-1)*2;
	}
}
