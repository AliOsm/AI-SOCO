using namespace std;
ll n,s = 3,x;
int main()
{
    abdelrahman001
    cin >> n;
    while(n--)
    {
        cin >> x;
        if(s == x)
            return cout << "NO",0;
        for(int i = 1;i<=3;i++)
            if(i!=s && i!=x)
            {
                s = i;
                break;
            }
    }
    cout << "YES";
    return 0;
}
