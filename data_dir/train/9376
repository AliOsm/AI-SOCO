#include<bits/stdc++.h>
#define ll long long
#define f first
#define s second
#define mp make_pair
#define bp push_back
const int mx=1e5+10;
using namespace std;
int a[mx],b[mx];
main(){
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    ll n,k;
    cin>>n>>k;
    ll ans=1;
    if(k==1){
        return cout<<n<<endl,0;
    }
    while(ans<=n){
        ans<<=1;
    }
    cout<<ans-1;
}
