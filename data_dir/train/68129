#include <bits/stdc++.h>
using namespace std;

int y, b, r;

int main(){
    scanf("%d %d %d",&y,&b,&r);
    if(r-2==min(y,min(b-1,r-2))){
        printf("%d\n",3*r-3);
    }
    else if(b-1==min(y,min(b-1,r-2))){
        printf("%d\n",3*b);
    }
    else{
        printf("%d\n",3*y+3);
    }
    return 0;
}
