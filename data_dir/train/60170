#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int n;
    cin >> n;
    bool f=true;
    for(int i=0;i<n;i++){
        if(!f)
            cout << "that ";
        if(i%2)
            cout << "I love ";
        else
            cout << "I hate ";
        f=false;
    }
    cout << "it" << endl;
    return 0;
}

