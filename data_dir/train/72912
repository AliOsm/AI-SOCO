#include <bits/stdc++.h>
using namespace std;
int n;

int main()
{
    //freopen("in.txt","r",stdin);
    //freopen("out.txt","w",stdout);
    scanf("%d",&n);
    long long ans=2*n-1;
    long long val=ans-2;
    while(val>=0){
        ans+=2*val;
        val-=2;
    }
    cout<<ans;
    return 0;
}
