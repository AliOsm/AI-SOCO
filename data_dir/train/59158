#include<bits/stdc++.h>
using namespace std;
#define Jewel ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
long long int n, ans, m, b, i, a[11];
int main()
{
    Jewel;
    int n, s;
    cin>>n>>s;
    while(n--)
    {
        int f, t;
        cin>>f>>t;
        s = max(s,f+t);
    }
    cout<<s<<endl;
    return 0;
}
