#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;

class ProblemCLoadBalancing {
public:
	void solve(std::istream& in, std::ostream& out) {
		ll n; in>>n;
		ll a[n], sum = 0;
		for(int i = 0; i<n; ++i) in>>a[i], sum += a[i];
		ll res = 0;
		ll avg = sum/n;
        ll extra = sum%n;
        sort(a, a+n);
        reverse(a, a+n);
		for(int i= 0; i<n; ++i){
            if(i<extra) res += abs(avg+1-a[i]);
            else res += abs(avg-a[i]);
		}
		out<<res/2;
	}
};


int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	ProblemCLoadBalancing solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
