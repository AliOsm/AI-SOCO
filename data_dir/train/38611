#include <string.h>
#include <assert.h>
#include <stdio.h>

using namespace std;

int main() {
    long long k, n, w;
    cin >> k >> n >> w;
    long long sum = k * (w + 1) * w / 2 - n;
    if (sum < 0) sum = 0;
    cout << sum << endl;
}