#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[123456],a[1111234], b[1125678],d[123456], l,ll,r, s, t, k, m, xh, x, x1, y,z;
string p,q;
map<long long,long long> mm;
int main() {
    cin >> n;
    for (i = 0; i < n; i ++){
        cin >>a[i];
        if (a[i] > s){
            s = a[i];
            x = i;
        }
    }
    sort (a,a+n);
    cout << x+1<<' '<<a[n-2];
    return 0;
}