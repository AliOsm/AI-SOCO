#define lson			l, mid, rt<<1
#define rson			mid+1, r, rt<<1|1

const int mod = 1e6+3;
const int maxn = 1001;
int a[maxn];

void init() {
	a[0] = 1;
	a[1] = 1;
	
	rep(i, 2, maxn)
		a[i] = a[i-1]*3%mod;
}

int main() {
	ios::sync_with_stdio(false);
	#ifndef ONLINE_JUDGE
		freopen("data.in", "r", stdin);
		freopen("data.out", "w", stdout);
	#endif
	
	int n;
	
	init();
	cin >> n;
	cout << a[n] << endl;
	
	#ifndef ONLINE_JUDGE
		printf("time = %d.\n", (int)clock());
	#endif
	
	return 0;
}
