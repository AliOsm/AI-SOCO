// in the name of Allah

#include <bits/stdc++.h>

using namespace std;

#define endl '\n'
#define pb push_back
#define sz(x) ((int) (x.size()))

int main() {
	ios::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);

	int tc;
	cin >> tc;
	while(tc--) {
		long long x, y, a, b;
		cin >> x >> y >> a >> b;
		long long d = abs(y - x);
		if(d % (a + b) == 0) {
			cout << d / (a + b) << endl;
		}
		else cout << "-1" << endl;
	}

	return 0;
}