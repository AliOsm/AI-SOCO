#ifdef USE_CERR
    #define CERR(a) cerr << "dump: " << a << endl
#else
    #define CERR(a)
#endif

#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;
typedef pair<int, int> pii;

int main() {
    int a, b;
    cin >> a >> b;
    int d = abs(a - b);
    if (d <= 1 && max(a, b) > 0)
        cout << "YES";
    else
        cout << "NO";
}
