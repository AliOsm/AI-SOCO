#define ll long long
#define ss second
#define ff first
#define pb push_back
using namespace std;
ll n,m,x,y,z,w,t,d,ans;
bool p(ll xx){
    for(ll i=2;i*i<=xx;i++){
        if(xx%i==0)return false;
    }
    return true;
}
int main(){
    ios::sync_with_stdio(0), cin.tie(0), cout.tie(0);
    cin>>t;
    while(t--){
        cin>>x>>y;z=x-y;
        ans=z*x+z*y;
        if(z==1 && p(ans))cout<<"YES"<<endl;
        else cout<<"NO"<<endl;
    }
    return 0;
}
