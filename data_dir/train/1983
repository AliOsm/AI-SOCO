#include<bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef long double ld;

int main()
{
	ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
#ifdef ONLINE_JUDGE
	// freopen("", "r", stdin);
	// freopen("", "w", stdout);
#endif
	int t;
	cin >> t;
	while (t--)
	{
		int x, y, a, b;
		cin >> x >> y >> a >> b;
		int dif = y - x;
		int jump = a + b;
		if (dif % jump == 0)
			cout << dif / jump << '\n';
		else
			cout << -1 << '\n';
	}
	return 0;
}
