#include <bits/stdc++.h>
using namespace std;
#define fi first
#define se second
typedef pair<int, int> ii;
const int MAX = 1e3;

int main()
{
	int a, b, c, ans = 0;
	cin >> a >> b >> c;
	int r = sqrt((a * b) / c);
	int l = a / r;
	int k = b / r;
	cout << 4 * (l + r + k) << '\n';

    return 0;
}