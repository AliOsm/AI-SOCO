#include<bits/stdc++.h>
#define LiangJiaJun main
#define ll long long
using namespace std;
int n,m,k,a[200004];
int w33ha(){
    for(int i=1;i<=n;i++)scanf("%d",&a[i]);
    sort(a+1,a+n+1);
    ll perc=m/(k+1),orc=m%(k+1),otc;
    otc=1LL*k*a[n]+a[n-1];
    printf("%lld\n",perc*otc+orc*a[n]);
    return 0;
}
int LiangJiaJun(){
    while(scanf("%d%d%d",&n,&m,&k)!=EOF)w33ha();
    return 0;
}

