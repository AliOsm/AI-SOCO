// In the name of Allah the Most Merciful.

#include<bits/stdc++.h>
using namespace std;

typedef long long ll;

int main(void)
{
    int x , y;
    cin >> x >> y;

    if(y==0)cout << "No" << endl;
    else if(y==1){

        if(x==0)cout << "Yes" << endl;
        else cout << "No" << endl;
    }
    else if(y>x+1)cout << "No" << endl;
    else if(x%2==y%2)cout << "No" << endl;
    else cout << "Yes" << endl;

    return 0;
}
