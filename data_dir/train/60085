#include<bits/stdc++.h>
#define int long long
using namespace std;
main()
{
   int t;
   cin>>t;
   while(t--)
   {
       int x,y,a,b;
       cin>>x>>y>>a>>b;
       int tym=(y-x)/(a+b);
       int p1=x+tym*a;
       int p2=y-tym*b;
       if(p1!=p2)
       {
           cout<<"-1"<<endl;
       }
        else cout<<tym<<endl;
   }
}
