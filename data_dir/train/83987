#include <bits/stdc++.h>
using namespace std;

int a, b, an = 0, last = 0;
int ans[2][30];

int main (int argc, char *argv[])
{
	scanf("%d%d", &a, &b);
	memset(ans, 0, sizeof(ans));
	for(int i = 0; i < 30; ++i) {
		ans[0][i] = a % 3;
		a /= 3;
		last = max(last, i);
		if(!a) {
			break;
		}
	}
	for(int i = 0; i < 30; ++i) {
		ans[1][i] = b % 3;
		last = max(last, i);
		b /= 3;
		if(!b) {
			break;
		}
	}
	for(int i = 0, r = 1; i <= last; ++i, r *= 3) {
		int q = ans[1][i] - ans[0][i];
		while(q < 0) {
			q += 3;
		}
		an += q * r;
	}
	printf("%d", an);

	return 0;
}

