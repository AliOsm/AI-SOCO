#include <bits/stdc++.h>
#define ll long long
ll mod=1e9+7;
using namespace std;

int main()
{     ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
        int n; cin>>n;
        n=1+2*(n-1);
        int ans=n;
        for(int i=n-2;i>0;i-=2){
            ans+=2*i;
        }
        cout<<ans;
    return 0;
}
