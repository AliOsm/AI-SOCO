#include<cstring>
#include<iostream>
#include<cstdlib>
#include<cstdio>
#include<algorithm>
#define LiangJiaJun main
using namespace std;
long long ans=0;
long long n;
string s;
int LiangJiaJun(){
    //freopen("ball.in","r",stdin);freopen("ball.out","w",stdout);
    cin>>n;
    cin>>s;
    for(long long i=0;i<n;i++){
        if(s[i]=='B')ans+=1LL<<i;
    }
    cout<<ans<<endl;
    //fclse(stdout);fclose(stdin);
    return 0;
}
