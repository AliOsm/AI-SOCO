#include<bits/stdc++.h>
#define ll long long
using namespace std;
const int N = 1e5 + 5;
int main()
{
    ios_base ::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
    ll k, n, s, p;
    cin >> k >> n >> s >> p;
    ll ans = 0;
    ll sheets = ceil((double) n / s);
    sheets = k * sheets;
    ans = ceil((double)sheets / p);
    cout << ans;
return 0;
}
