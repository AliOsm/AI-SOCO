#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
const int maxn = 2e5 + 14;


int main(){
	ios::sync_with_stdio(0), cin.tie(0);
	int t;
	cin >> t;
	while(t--){
		ll a, b, c;
		cin >> a >> b >> c;
		ll s = a + b + c;
		cout << s / 2 << '\n';
	}
}
