#include <bits/stdc++.h>
using namespace std;
#define F first
#define S second
#define pb push_back
#define ll long long
#define pi pair<int,int>
#define all(X) X.begin(),X.end()
#define go ios::sync_with_stdio(0); cin.tie(0); cout.tie(0)
int t;
int main()
{
    go;
    cin>>t;
    while(t--)
    {
        int a,b,c,ans=0;
        cin>>a>>b>>c;
        ans=min(min(a,b),(a+b+c)/3);
        cout<<ans<<endl;
    }
    return 0;
}
