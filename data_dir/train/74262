#include <bits/stdc++.h>

using namespace std;
string s;
long long i,j,a,d,f,g,h,flag1,flag2,flag3;
int main()
{
    cin>>s;
    if(s[0]=='1')flag1=1;
    if(s.find("444")==-1)flag2=1;
    flag3=1;
    for(i=0;i<s.length();i++){
        if(s[i]!='1' && s[i]!='4'){flag3=0;
        break;
        }
    }
    if(flag1==1 && flag2==1 && flag3==1){
        cout<<"YES"<<endl;
    }
    else{
        cout<<"NO"<<endl;
    }
    return 0;
}
