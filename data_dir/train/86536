#include<bits/stdc++.h>
#define r_0 return 0;
#define ll long long int
#define ld  long double
#define pb push_back
#define fr first
#define se second
#define in freopen("input.txt","r",stdin);
#define out freopen("output.txt","w" stdout);
#define TIME ios_base::sync_with_stdio(NULL);
#define tcn cin.tie(NULL);
#define tct cout.tie(NULL);
using namespace std;
string s,s1,s2;
ll n, m;
ld mn=1e9,cnt,k,t,ans;
vector<int>v;
int main()
{
      TIME tcn tct
      cin >> n >> m;
      int arr[n];
      for( int i=0;i<n;i ++ ){
            cnt=0;
        cin >> arr[i];
      while ( arr[i] ){
        if( arr[i]%10==4 or arr[i]%10==7 )
            cnt++;
        arr[i]/=10;
      }
      if( cnt<=m )
        ans++;
    }
    cout<<ans;
}

