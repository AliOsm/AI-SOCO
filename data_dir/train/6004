#include<bits/stdc++.h>
#define ll long long
#define over999 1234567890
#define mp make_pair
#define pb push_back
#define fi first
#define se second
#define pi M_PI
 
using namespace std;

int a[1001],n;
char c;
vector < pair <int,int> > v;

int main() {
    cin >> n;
    for(int i=0;i<n;i++)
        cin >> a[i];
    
    sort(a,a+n);
    
    int i=0,j=n-1;
    while(i<=j)
    {
        cout << a[i] << " ";
        i++;
        if(i<=j){cout << a[j] << " "; j--;}
    }
    return 0;
 
}