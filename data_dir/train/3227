#include<bits/stdc++.h>
using namespace std;
long long a,b,c,d,i,e,f,g,n,m,k,l,t,ans,A[100005];
char ch;
int main()
{
           cin>>n;
           for(long long i=1;i<=n;i++)
           cin>>A[i];
           sort(A+1,A+1+n);
           for(long long i=1;i<n;i+=2)
           ans+=A[i+1]-A[i];
           cout<<ans;
}