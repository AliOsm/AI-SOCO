
 #include<bits/stdc++.h>

using namespace std;

int n,m;

int main(){
    cin>>n>>m;
    if(n>m) {
        cout<<n+m-1<<endl;
        for(int i=0; i<n; i++) cout<<i+1<<" 1\n";
        for(int i=2; i<=m; i++) cout<<"1 "<<i<<endl;
    } else {
        cout<<m+n-1<<endl;
        for(int i=1; i<=m; i++) cout<<"1 "<<i<<endl;
        for(int i=2; i<=n; i++) cout<<i<<" 1\n";
    }
	return 0;
}