typedef long long ll;
typedef long double ld;
typedef pair<int,int> pii;
typedef vector<int> vi;
const int oo = /*2 * 1000 * 1000 * 1000*/0x3f3f3f3f;
const ll ooo=9223372036854775807ll; 
const int _cnt = 1000 * 1000 + 7;
const int _p = 1000 * 1000 * 1000 + 7;
const int N=10005; 
const double PI=acos(-1.0);
const double eps=1e-9;
int o(int x) { return x%_p; }
int gcd(int a, int b) { return b ? gcd(b, a%b) : a; }
int lcm(int a, int b) { return a / gcd(a, b)*b; }

void file_put() {
    freopen("filename.in", "r", stdin);
    freopen("filename.out", "w", stdout);
}

int n,k;
char st[105][105];
int a[105][105],cnt[3],ans=0,t,num;

int main() {
    //file_put();
    
    scanf("%d%d",&n,&k);
    rep(i,1,n) scanf("%s",st[i]+1);
    rep(i,1,n) rep(j,1,12) {
    	if (st[i][j]=='.') {
    		a[i][j]+=(st[i][j-1]=='S');
    		a[i][j]+=(st[i][j+1]=='S');
    		cnt[a[i][j]]++;
		}
		if (st[i][j]=='S') {
    		ans+=(st[i][j-1]=='S' || st[i][j-1]=='P');
    		ans+=(st[i][j+1]=='S' || st[i][j+1]=='P');
		}
	}
	rep(i,1,n) rep(j,1,12)
		if (k && st[i][j]=='.') {
			t=a[i][j];
			num=0;
			rep(p,0,t-1) num+=cnt[p];
			if (k<=num) continue;
			cnt[t]--;
			k--;
			st[i][j]='x';
			ans+=t;
		}
	printf("%d\n",ans);
	rep(i,1,n) printf("%s\n",st[i]+1);
	
    return 0;
}

