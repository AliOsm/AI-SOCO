#include <stdio.h>
#include <bits/stdc++.h>

#define pb push_back
using namespace std;
typedef long long ll;

typedef pair<int,int>ii;
using namespace std;
const int N = 3001;

int main()
{
    //freopen("test.in","r",stdin);
    int n,k,x;
    cin>>n>>k>>x;
    int sum=0;
    for(int i=1;i<=n;i++){
        int a;
        scanf("%d",&a);
        if(i+k>n)sum+=x;
        else sum+=a;
    }
    cout<<sum;
    return 0;
}
