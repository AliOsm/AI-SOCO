#include<bits/stdc++.h>
using namespace std;

#define si(n) scanf("%d",&n)
#define MAX 10004


int main()
{
    int i,j,n,x,y;
    si(n);
    si(x);
    bool flag=true;
    for(i=2;i<=n;i++){
        si(y);
        if(abs(x-y)>=2)flag=false;
        x=y;
    }
    if(flag)cout<<"YES"<<endl;
    else cout<<"NO"<<endl;
}
