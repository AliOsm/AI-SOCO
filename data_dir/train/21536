#include <bits/stdc++.h>
using namespace std;
#define long int64_t

int main()
{
    ios::sync_with_stdio(false), cin.tie(nullptr);
    int T;
    cin >> T;
    while(T--)
    {
        int n, k;
        cin >> k >> n;
        cout << (n%k) * (n/k + 1) * (n/k + 1) + (k - n%k) * (n/k) * (n/k) << '\n';
    }
    return 0;
}
