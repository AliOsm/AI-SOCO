int main()
{
    int n,m,d;cin>>n>>m>>d;
    int data[10000]={0,};
    n*=m;
    cin>>data[0];
    for(int i=1;i<n;i++){
        cin>>data[i];
        if(data[i]%d!=data[i-1]%d){
            cout<<-1;
            return 0;
        }
    }
    
    for(int i=0;i<n;i++){
        data[i]/=d;
    }
    sort(data,data+n);
    
    m=data[n/2];
    
    int answer=0;
    for(int i=0;i<n;i++)answer+=abs(data[i]-m);
    
    cout<<answer;
    
    return 0;
}





