#define re return(0);
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <set>
using namespace std;
int main()
{
	string n;
	cin>>n;
	int k;
	cin>>k;
	int s=0,nu=0;
	for(int i=n.length()-1;i>=0;i--)
	{
	    if(n[i]=='0')
		nu++;
		if(nu==k)
		{
			cout<<s;
			re;
		}
		if(n[i]!='0')
		s++;	
	}
	cout<<n.length()-1;
}
