#include<bits/stdc++.h>
#define int long long
#define ll long long
#define ull unsigned long long
#define ff first
#define ss second
#define pb push_back
#define mk make_pair
#define ld long double
#define y1 asdfghjkl
#define ufo ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0)
using namespace std;

mt19937_64 mt_rnd_64(chrono::steady_clock::now().time_since_epoch().count());
long long rnd(long long l, long long r){
    return (mt_rnd_64() % (r-l+1)) + l;
}

const int N = 1e6 + 5;

int n,ans,x;
int a[N];

main()
{
    cin>>n;
    for(int i = 1;i <= n;i++){
        cin>>a[i];
        a[i] = i - a[i];
    }
    a[n+1] = 2 * 1e9 + 228;
    for(int i = n;i >= 1;i--)
        a[i] = min(a[i],a[i+1]);
    for(int i = 1;i <= n;i++)
        ans += (a[i+1] > i);
    cout<<ans;
}
