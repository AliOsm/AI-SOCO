#include <bits/stdc++.h>
using namespace std;

#define ll long long

int main() {

   ll n;
   
   cin >> n;
   
   ll a = n * (n - 1) * (n - 2) * (n - 3) * (n - 4) / (2 * 3 * 4 * 5);
   ll b = a * (n - 5) / 6;
   ll c = b * (n - 6) / 7;
   
   cout << a + b + c;
   
   return 0;
}