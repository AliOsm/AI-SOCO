#include <bits/stdc++.h>

using namespace std;
#define ll long long

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int q;
    cin>>q;
    while(q--){
        int a,b,n,s;
        cin>>a>>b>>n>>s;
        int can=s/n;
        if(can>a){
            can=a;
        }
        can*=n;
        if(can+b>=s){
            cout<<"YES"<<endl;
        }
        else{
            cout<<"NO"<<endl;
        }
    }

    return 0;
}