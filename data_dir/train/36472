#include <iostream>
#include <string>
#include <cmath>
#include <algorithm>
#include <vector>
#include <set>
#include <map>
#include <sstream>
#include <cstdio>
#include <cstring>
#include <iomanip>
#include <fstream>
#include <stack>
#include <limits.h>

#define FOR(i,a,b) for(int i=(a);i<(b);i++)
#define REV(i,b,a) for(int i=(a);i>=(b);i--)
#define mp make_pair
#define pb push_back
#define SZ(v) (int)v.size()
#define all(c) (c).begin(),(c).end()
#define rall(c) (c).rbegin(),(c).rend()
#define LLI long long int
using namespace std;
double PI = 3.1415926536;
int dX[] = { 1, -1, 0, 0 };
int dY[] = { 0, 0, 1, -1 };

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
    int n;
    cin >> n;
    vector<int> v(n);
    FOR(i, 0, n)
        cin >> v[i];    
    while (1)
    {
        if (v[0] == 0)
        {
            FOR(i, 0, n)
            {
                if (v[i] != i)
                    return puts("No"), 0;
            }
            return puts("Yes"), 0;
        }
        FOR(i, 0, n)
        {
            if (i % 2)
                v[i]--;
            else
                v[i]++;
            if (v[i] < 0)
                v[i] += n;
            else
                v[i] %= n;
        }
    }
}