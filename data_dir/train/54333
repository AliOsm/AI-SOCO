#include <bits/stdc++.h>
#define ll long long
#define pb push_back
#define fr first
#define se second
using namespace std;
ll n,a,b,c;
int main()
{
  cin >> n >> a >> b >> c;
  if( a<=b and a<c or b<=a and b<c or n==1 )
    cout<<min(a,b)*(n-1);
  else
    cout<<min(a,b)+(c*(n-2));
}

