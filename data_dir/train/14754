#include <bits/stdc++.h>
using namespace std;
typedef unsigned long long ll;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    int n;
    cin >> n;
    int num;
    int least = 1e9+2;
    int most = -1;
    for(int i = 0; i < n; ++i) {
        cin >> num;
        least = min(least, num);
        most = max(most, num);
    }
    cout << most-least+1-n << '\n';
    return 0;
}










































