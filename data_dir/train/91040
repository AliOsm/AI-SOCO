#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

const int N = int(1e5) + 5;

int n;
ll l, r, ql, qr;
ll w[N], l_a[N], r_a[N];
ll ans = ll(1e14);

int main (int argc, char *argv[])
{
	scanf("%d%lld%lld%lld%lld", &n, &l, &r, &ql, &qr);
	for(int i = 1; i <= n; ++i) {
		scanf("%lld", &w[i]);
	}
	l_a[0] = 0;
	r_a[n + 1] = 0;
	for(int i = 1; i <= n; ++i) {
		l_a[i] = w[i] * l;
		l_a[i] += l_a[i - 1];
	}
	for(int i = n; i > 0; --i) {
		r_a[i] = w[i] * r;
		r_a[i] += r_a[i + 1];
	}
	for(int i = 0; i <= n; ++i) {
		ll q = l_a[i] + r_a[i + 1];
		if(n - 2 * i > 1) {
			q += (n - 2 * i - 1) * qr;
		} else if(n - 2 * i < -1) {
			q += abs(n - 2 * i + 1) * ql;
		} 
		ans = min(ans, q);
	}
	printf("%lld", ans);

	return 0;
}

