#include<bits/stdc++.h>
using namespace std;




int main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    int a, b;
    cin >> a >> b;
    int c = abs(a - b) / 2;
    int ans = c * (c + 1) / 2;
    c = abs(a - b) - abs(a - b) / 2;
    ans += c * (c + 1) / 2;
    cout << ans;
}
