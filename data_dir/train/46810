#include <bits/stdc++.h>
using namespace std;
#define eb emplace_back
#define emp emplace
#define fi first
#define se second
typedef long long ll;
typedef pair<int, int> ii;

int main(void) {
	ios_base::sync_with_stdio(false); cin.tie(0);

	ll n, m, k, l; cin >> n >> m >> k >> l;

    ll ans = (l+k+m-1)/m;

	if (ans * m <= n) cout << ans << endl;
	else cout << -1 << endl;

	return 0;
}

