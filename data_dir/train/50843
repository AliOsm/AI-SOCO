#include <bits/stdc++.h>
typedef long long ll ;
using namespace std;

int main()
{

    int n ;
    cin >> n;

    string s ;

    int res = 0 ;
    while(cin >> s){

          int ans =0  ;
          for(int i =0 ; i < s.size() ; i++){
               if(s[i] >= 'A' && s[i] <= 'Z') ans ++ ;
          }

          res = max(res , ans);
    }

    cout << res << endl ;


    return 0;
}
