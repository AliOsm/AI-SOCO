/* In The Name Of God */
#include <bits/stdc++.h>

# define xx first
# define yy second
# define pb push_back
# define pp pop_back
# define eps 1e-9

using namespace std;
typedef long long ll;
typedef pair<int,int> pii;
typedef vector<int> vint;

int main(){
	ios_base::sync_with_stdio (0);
	int a,b,n;
	cin>>a>>b>>n;
	n -= (abs(a)+abs(b)) ;
	if(n<0 || n%2){
		cout<<"No\n";
	}
	else
		cout<<"Yes\n";
	return 0;
}

