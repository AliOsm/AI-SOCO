#include <bits/stdc++.h>
#define ll long long
#define en cin.close();return 0;
#define fio ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
#define INF 150005
#define INF2 ((ll)(1e18))
#define g << " " <<
using namespace std;
int main()
{
    fio;
    //ifstream cin("in.in");
    string a;
    cin >> a;
    for(ll i = 0;i < a.size();i++)
    {
        if(a[i]=='-'&&a[i+1]=='-')
        {
            cout << 2;
            i++;
        }
        else if(a[i]=='.')
            cout << 0;
        else
        {
            cout << 1;
            i++;
        }
    }
    //cin.close();
    return 0;
}
