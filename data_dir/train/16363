#include <bits/stdc++.h>

using namespace std;
#define ll long long

ll a,b,c;

int main(){

    cin>>a>>b>>c;
    if(c==0 ){
        if(a==b){
            cout<<"YES"<<endl;
        }else cout<<"NO"<<endl;
        return 0;

    }
    ll z=b-a;
    int p,q;
    if(z>=0)p=1;
    else p=0;
    if(c>0 || z==0)q=1;
    else q=0;
    if(p!=q){
        cout<<"NO"<<endl;
        return 0;
    }
    if(z%c){
        cout<<"NO"<<endl;
    }else cout<<"YES"<<endl;


}
