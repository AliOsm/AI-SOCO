#include<bits/stdc++.h>
#define ll long long
#define f first
#define s second
#define pb push_back
using namespace std;
ll n,x,y,xm,ym;
int main(){
	cin>>n;
	
	for(int i=1; i<=n; i++){
		cin>>x>>y;
		if(x + y > xm + ym){
			xm = x;
			ym = y;
		}
	}
	
	
	
	cout<<xm+ym;
	
	
	return 0;
}