#pragma GCC optimize("Ofast")
#pragma GCC optimize("unroll-loops")
#pragma GCC target("sse,sse2,sse3,ssse3,sse4,popcnt,abm,mmx,avx,tune=native")
#include <bits/stdc++.h>
using namespace std;

int main()
{
	ios::sync_with_stdio(false);
	int n; cin >> n;
	int result = 0;
	for (int i = 0; i < n; i++)
	{
		int x, y;
		cin >> x >> y;
		result = max(result, x + y);
	}
	cout << result << endl;
}