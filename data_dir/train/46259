//besme taala
//ya_hossein
#include <bits/stdc++.h>
using namespace std;
int main()
{
	int n;
	string a;
	cin >> n >> a;
	for(int i = 0; a[i]; i++)
	{
		if(a[i] == 'U' && a[i + 1] == 'R')
		{
			n--;
			i++;
		}
		else if(a[i] == 'R' && a[i + 1] == 'U')
		{
			n--;
			i++;
		}
	}
	cout << n;
}