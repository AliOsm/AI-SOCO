#include <bits/stdc++.h>
using namespace std;
#define LL long long int
const int N = 305;
const LL INF = 1e16;

int main() {
		ios::sync_with_stdio(false);
		cin.tie(NULL);cout.tie(NULL);
		int q;
		cin >> q;
		while(q--) {
 		LL n, a, b;
		cin >> n >> a >> b;
		if (b >= 2 * a) cout << a * n << '\n';
		else cout << a*n + (b-2*a) * (n/2) << '\n';
	}
    return 0;
}
