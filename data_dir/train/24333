#include <bits/stdc++.h>
using namespace std;
#define pb  push_back
#define ll  long long
#define vi  vector<int>
#define vvi vector<vi >
#define all(x) x.begin(), x.end()

int a, b, c, x;

int main() {
    ios_base::sync_with_stdio(false);
    cin >> a >> b >> c;
    x = 1;
    for (int i = 1; i < 101; ++i)
        if (i <= a && i + 1 <= b && i + 2 <= c)
            x = i;
    cout << 3 * x + 3;

    return 0;
}