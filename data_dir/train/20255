#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n, m, a, b, y, z;
    y=0;
    cin>>n>>m>>a>>b;
    double x;
    x=b/m;
    if (x>=a)
    {
        cout<<n*a;
        return 0;
    }
    z=n/m;
    y=z*b;
    z=n%m;
    if (b<z*a)
    {
        y=y+b;
    }
    else
    {
        y=y+z*a;
    }
    cout<<y;
    return 0;
}