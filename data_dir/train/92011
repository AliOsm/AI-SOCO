#include <bits/stdc++.h>
using namespace std;

int N, M;

int main() {
    scanf("%d %d", &N, &M);

    if(N == 1) {
        printf("1\n");
        return 0;
    }

    int L = M - 1, R = N - M;

    if (L < R)  printf("%d\n", M + 1);
    else        printf("%d\n", M - 1);

    return 0;
}
