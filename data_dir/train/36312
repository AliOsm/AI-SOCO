#include <bits/stdc++.h>
#define ll long long
#define ull unsigned ll
#define ld long double
#define F first
#define S second
#define y1 kdjghdsjf
#define pb push_back
#define mp make_pair

using namespace std;

const ll MIN = 1e3 + 2;
const ll MXN = 1e6 + 3;
const ll INF = 1e9 + 7;
const ll LINF = 1e18 + 15;
const ld EPS = 1e-9;

ll n;

int main(){
   cin >> n;
   if (n % 3 == 0){
      cout << n / 3 * 2;
   }
   else {
      cout << n / 3 * 2 + 1;
   }
   return 0;
}
