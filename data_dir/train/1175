#include<iostream>
#include<cmath>
#include<cstdio>
using namespace std;

main(){
	int a, i, j;
	cin>>a;
	printf("%d\n", a * a / 2 + a % 2);
	for (int i = 0; i < a; i++){
		for (int j = 0; j < a; j++){
			if ((i + j) % 2 == 0) printf("C");
			else printf(".");
		}
		printf("\n");
	}
}
