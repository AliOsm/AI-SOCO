#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;
typedef long double ld;
typedef pair<ll,ll> p2;
void solve(){
	ll n;
	cin>>n;
	if(n==2)
	cout<<"1\n1";
	else if(n==3)
	cout<<"2\n1 3";
	else{
		cout<<n<<endl;
		for(ll i=2;i<=n;i+=2)
		cout<<i<<" ";
		for(ll i=1;i<=n;i+=2)
		cout<<i<<" ";
	}
}
int main(){
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);
	ll qc=1;
	for(ll i=1;i<=qc;i++)
	solve();
}
