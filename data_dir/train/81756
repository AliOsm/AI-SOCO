#include <bits/stdc++.h>
using namespace std;

int main()
{
    char s[100];
    int n, lg = 0, lg2 = 0;
    cin.getline(s, 100);
    n = strlen(s);
    for (int i=0; i<n; i++)
        if (s[i] == 'a')
            lg++; else lg2++;
    if (lg > lg2)
        cout << n;
    else
        cout << lg * 2 - 1;
    return 0;
}
