#include <bits/stdc++.h>
#define LL long long
#define LD long double
#define S second
#define F first
#define IO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);

using namespace std;

int main()
{
    IO
    int l,r,m,sum=0;
    cin>>l>>r>>m;
    if(l>r)
        swap(l,r);
    while(l!=r && m>0)
    {
        l++;
        m--;
    }
    sum=2*(min(l,r)+m/2);


    cout<<sum;







    return 0;
}
