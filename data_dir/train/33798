using namespace std;
#define ll long long
const int mod = 1000000007;
//#define ld long double
const double sn = 1e-6;
int a, b;
int main() {
	scanf("%d%d", &a, &b);
	if (a == 0 && b == 0) {
		printf("NO\n");
		return 0;
	}
	if (a == b || abs(a - b) == 1)
		printf("YES\n");
	else
		printf("NO\n");
	return 0;
}