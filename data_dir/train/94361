#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef unsigned long long ull;
const int N = 3e6+50;
const int oo = 1e9;
const int mod = 1e9+7;

int main(){
	ll ans=0,x=1,n;
	cin>>n;
	while(n>1){
		ans+=n/2*x;
		n = ceil(n/2.0);
		x*=2;
	}
	cout << ans << endl;
}