int n, m, k, x, y, sum, cnt, ans;
int main () {
	scanf("%d", &n);
	for (int i=n/2; i>0; i--) {
		if (__gcd(i, n-i)==1) return 0*printf("%d %d\n", i, n-i);
	}
	return 0;
}