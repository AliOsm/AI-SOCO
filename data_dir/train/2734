#define sz(x)       (int)x.size()
#define hell        1000000007
#define endl        '\n'
#define rep(i,a,b)    for(int i=a;i<b;i++)
using namespace std;

void solve(){
    int n;
    map<int,int>m;
    cin>>n;
    rep(i,0,n){
        int temp;
        cin>>temp;
        m[temp]++;
    }
    int maxa=0;
    for(auto i:m)maxa=max(maxa,i.S);
    cout<<maxa<<" "<<sz(m);
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    int t=1;
//    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}