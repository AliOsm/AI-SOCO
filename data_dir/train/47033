int main() {
    //freopen("input.txt", "rt", stdin);
    //freopen("output.txt", "wt", stdout);
    
    int n;
    scanf("%d", &n);
    int res = (n * n + 1) / 2;
    printf("%d\n", res);
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < n; j++) {
            if((i + j) % 2 == 0) printf("C");
            else printf(".");
        }
        printf("\n");
    }
        
    return 0;
}