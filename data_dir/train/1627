#include<bits/stdc++.h>
#define si(x) scanf("%d",&x)
#define sii(x,y) scanf("%d %d",&x,&y)
#define siii(x,y,z) scanf("%d %d %d",&x,&y,&z)
#define su(x) scanf("%u",&x)
#define sl(x) scanf("%ld",&x)
#define sli(x) scanf("%lld",&x)
#define slii(x,y) scanf("%lld %lld",&x,&y)
#define sliii(x,y,z) scanf("%lld %lld %lld",&x,&y,&z)
#define slu(x) scanf("%llu",&x)
#define sf(x) scanf("%f",&x)
#define slf(x) scanf("%lf",&x)
#define slff(x,y) scanf("%lf %lf",&x,&y)
#define sc(x) scanf("%c",&x)
#define ss(x) scanf("%s",x)
#define pf printf
#define fpf fprintf
#define pb push_back
#define f(i,x,y,z) for(ll i=x;i<y;i=i+z)
#define f1(i,x,y,z) for(ll i=x;i>y;i=i-z)
#define MAX 1000000000
#define pi 3.1415926535
#define mp make_pair
#define M 1000000007
#define xx first
#define yy second
#define N 105
#define E 100005
#define vc vector
#define pq priority_queue
#define Q queue


using namespace std;

typedef long long int ll;
typedef unsigned long long int lu;

int main()
{
    ll n,k;
    while(1)
    {
        slii(n,k);
        if(k==1) pf("%lld\n",n);
        else
        {
            ll ans = 1;
            while(n>0)
            {

                n /= 2;
                ans *= 2;
            }
            pf("%lld\n",ans-1);

        }
        break;
    }
    return 0;
}
