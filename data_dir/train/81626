int MOD = 1e9+7;
void ADD(LL& x,LL v){x=(x+v)%MOD;if(x<0)x+=MOD;}
/*}}}*/
const int SIZE = 3010;
int h[SIZE][SIZE];
int row_mi[SIZE][SIZE];
int n,m,a,b;
PII stk[SIZE];
int sl,sn;
void stk_init(){
    sl=sn=0;
}
void stk_add(int id,int v,int bound){
    while(sn>sl&&v<=stk[sn-1].F){
        sn--;
    }
    stk[sn++]=MP(v,id);
    while(id-stk[sl].S>=bound)sl++;
}
int main(){
    R(n,m,a,b);
    int g0,x,y,z;
    R(g0,x,y,z);
    LL gg=g0;
    REP(i,n)REP(j,m){
        h[i][j]=gg;
        gg=(gg*x+y)%z;
    }
    REP(i,n){
        stk_init();
        REP(j,m){
            stk_add(j,h[i][j],b);
            row_mi[i][j]=stk[sl].F;
        }
    }
    LL an=0;
    REPP(j,b-1,m){
        stk_init();
        REP(i,n){
            stk_add(i,row_mi[i][j],a);
            if(i>=a-1)an+=stk[sl].F;
        }
    }
    W(an);
    return 0;
}
