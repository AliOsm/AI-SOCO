#include <iostream>
#include <complex>
#include <vector>
#include <sstream>
#include <string>
#include <math.h>
#include <iomanip>
#include <algorithm>
#include <map>
#include <set>

using namespace std;


int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);

	int y, b, r;
	cin >> y >> b >> r;
	cout << min(y, min(b - 1, r - 2)) * 3 + 3 << '\n';

	return 0;
}