vector<ll> adj[MAXN];

void DFS(ll v){
    for(ll u : adj[v]){
        DFS(u);
    }

    if(adj[v].size() == 0)  return;
    if(op[v] == 1){
        ans[v] = INF;
        for(ll u : adj[v])  ans[v] = min(ans[v] , ans[u]);
    }
    else{
        for(ll u : adj[v])  ans[v] += ans[u];
        ans[v] += adj[v].size() - 1;
    }
}

