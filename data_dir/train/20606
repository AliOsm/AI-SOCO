int main(){
    cin>>n;
    ll aa=0,bb=0;
    rep(i,1,n){
        cin>>a;
        if(a%2==0)cout<<a/2;
        else{
            if(a>0){
                if(aa>0)aa=0,cout<<a/2+1;
                else cout<<a/2,aa=1;
            }
            else{
                if(bb>0)bb=0,cout<<a/2-1;
                else cout<<a/2,bb=1;
            }
        }
        cout<<" ";
    }
}
