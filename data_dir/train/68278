int main()
{
  ll n;
  cin>>n;
  ll x=n;
  ll y=n+1;
  ll z=(n+1)*(ll)(n);
  if(x<=1000000000 and y<=1000000000 and z<=1000000000 and n>1){
    cout<<x<<" "<<y<<" "<<z<<endl;
    return 0;
  }
  cout<<-1<<endl;
  return 0;
}
