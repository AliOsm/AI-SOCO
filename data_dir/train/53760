#include <bits/stdc++.h>
#define ll long long
#define pb push_back
#define f first
#define s second
using namespace std;
int const N=2e5+6,inf=1e9+7,mod=998244353;
ll const NN=1e18+13;
ll x,a[N],b[N],dp[N],n,k,m,l,x1,x2,y,r,ans,c,kk;
long long q;
char ch;
vector <ll> v;
bool us[N];
string s,t;
main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    cin>>n;
    if (n==1 || n==2) return cout<<1<<endl<<1,0;
    if (n==3) return cout<<2<<endl<<"1 3",0;
    if (n==4) return cout<<4<<endl<<"3 1 4 2",0;
    cout<<n<<endl;
    for (int i=1;i<=n;i+=2)
    {
        cout<<i<<" ";
    }
    for (int i=2;i<=n;i+=2)
    {
        cout<<i<<" ";
    }
    return 0;
}