#define ios     ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0);
using namespace std;
mt19937 rng(chrono::steady_clock::now().time_since_epoch().count()); 
int n,i,j,k,l,sum=0,flag=0,t,a[200005],ans=0;

void solve(){
    cin>>k;
    int x = 1;
    for(int x=1;;x++){
        for(int l=0;l+3<=2000;l++){
            if((k+2*x)%(l+1)==0 && ((k+2*x)/(l+1))<=1000000){
                cout<<l+3<<endl;
                for(int i=0;i<l;i++) cout<<0<<" ";
                    cout<<-x<<" "<<x<<" ";
                cout<<((k+2*x)/(l+1))<<endl;
                return;
            }
        }     
    }
   
}
signed main()
{
    ios
    int test=1;
    //cin>>test;
    while(test--){
        solve();
    }
    return 0;
}