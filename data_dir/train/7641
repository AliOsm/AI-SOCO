#include<bits/stdc++.h>
#define int long long 
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define pb push_back
#define all(a) a.begin(),a.end()
#define ld long double
#define ub upper_bound
#define lb lower_bound
#define pii pair<int,int>
using namespace std;
signed main(){
    fast;
    int n,k;
    cin>>n>>k;
    int a[2*n+1];
    for(int i=1;i<=2*n;i++){
    	a[i] = i;
    }
    for(int i=1;i<=k;i++){
    	swap(a[2*i-1],a[2*i]);
    }
    for(int i=1;i<=2*n;i++)
    	cout<<a[i]<<" ";
}  