    #include <bits/stdc++.h>
    using namespace std;
    #define ll long long
    #define ld long double
    #define ff first
    #define ss second
    #define pb push_back
    #define mp make_pair
    #define MOD 1000000007
    #define FAST ios_base::sync_with_stdio(false),cin.tie(0),cout.tie(0);srand(time(NULL))
    int main()
    {
         FAST;
         ll n;
         cin >> n;
         for(ll i=0;i<n;i++)
         {
              for(ll j=0;j<n;j++)   
              {
                   if((i+j)%2)     cout<<"W";
                   else            cout<<"B";
              }
              cout<<"\n";
         }
    }