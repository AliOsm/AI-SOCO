#include <bits/stdc++.h>
#define LL long long
using namespace std;

const int N = 2500;
int a[N];

int main()
{
    int n;
    cin>>n;

    for (int i=1; i<=n; i++)    cin>>a[i];

    int MX = 100000;
    cout<<n+1<<"\n";
    cout<<1<<" "<<n<<" "<<MX<<"\n";

    for (int i=1; i<=n; i++) {
        a[i] += MX;
        cout<<2<<" "<<i<<" "<<a[i] - i <<"\n";
    }
}
