#include <bits/stdc++.h>

using namespace std;

#define int long long
#define MP make_pair
#define F first
#define S second
#define pi pair<int,int> 
#define sz(s) ((int)s.size())

const unsigned mod = 1e9 + 7;
const unsigned N = 5e5 + 4;

signed main() {
  ios::sync_with_stdio(false); cin.tie(0); cout.tie(0);

  string s;

  cin >> s;

  char mx = *max_element(s.begin(), s.end());

  for (char i : s) {
  	if (i == mx) cout << mx;
  }  
  
  return 0;
}