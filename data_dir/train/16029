#include<bits/stdc++.h>
using namespace std;

#define ll           long long
#define pii          pair<ll,ll>
#define bug(a)       cerr << #a << " : " << a << endl;
#define FastRead     ios_base::sync_with_stdio(false);cin.tie(NULL);

const int MAX = 1e6;

int main()
{
    int t;
    cin >> t;
    while(t--)
    {
        ll s,a,b,c;
        cin >> s >> a >> b >> c;

        ll cnt = s/c;
        ll x = cnt/a;
        cout << cnt+(x*1LL*b) << endl;
    }
}
