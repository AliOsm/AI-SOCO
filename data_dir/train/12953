#include <bits/stdc++.h>
using namespace std;

#define pb push_back
#define mk make_pair
#define fi first
#define se second
#define eb emplace_back

typedef long long ll;
typedef pair<int,int> ii;
typedef vector< pair<int,int> > vii;
const int INF = 0x3f3f3f3f;
 
int main() {
    ios_base::sync_with_stdio(false);
    int tc; cin >> tc;
    while(tc--) {
        int a,b,c;
        cin >> a >> b >> c;
        int ans = 0;
        while(b > 0 and c > 1) ans += 3, b--, c -= 2;
        while(a > 0 and b > 1) ans += 3, a--, b -= 2;
        cout << ans << endl;
    }

    
    
    return 0;
}

