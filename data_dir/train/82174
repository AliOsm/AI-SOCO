#include <bits/stdc++.h>

using namespace std;

#define int long long

const int mod=1e9+9;
const int n5=1e5+5;
const int n6=1e6+5;
const int oo=1e9+5;
const long long ooo=1e18+5;
const int N=1e5*3+1;

int k, ct, c;
string s;

main()
{
//    ios_base::sync_with_stdio(0);
//    cin.tie(0);
    cin >> s >> k;
    for (int i=s.size()-1;i>=0;i--)
    {
        if (s[i]=='0')
            ct++;
        else
            c++;
        if (ct==k)
        {
            cout << c;
            return 0;
        }
    }
        cout << s.size()-1;
    return 0;
}
