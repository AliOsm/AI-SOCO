        #include <bits/stdc++.h>
        using namespace std;
        long long  i, j, n, c[123456],a[123423], b[125678],d[123456], l,ll, r, s, t, k, m, xh, x, x1, y,z;
        string p;
        vector <string> q[123];
        int main() {
            cin >>n;
            for (i = 0; i < n; i ++){
                cin >> a[i];
                if (a[i] != a[i-1]){
                    b[l] = t; 
                    t = 1;
                    l++;
                }
                else {
                    t ++;
                }
            }
            b[l] = t;
            for (i = 1; i <= l; i ++){
             // cout << b[i]<<' ';
                s = min (b[i-1],b[i]);
                k = max (k,s);
            }
            cout <<2*k;
            return 0;
        }