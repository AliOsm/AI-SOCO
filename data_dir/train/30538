#include <bits/stdc++.h>

using namespace std;
int main() {
#ifndef ONLINE_JUDGE
	freopen("C:\\Users\\Omar Mohamed\\ClionProjects\\Go\\input.in", "r", stdin);
#endif
	int t, x, s;
	scanf("%d %d %d", &t, &s, &x);

	if (x < t) {
		printf("NO\n");
		return 0;
	}
	x -= t;

	if ((x % s == 0 || x % s == 1) && (x / s || !x)) {
		printf("YES\n");
	} else {
		printf("NO\n");
	}


	return 0;
}

