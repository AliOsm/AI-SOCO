/// إِنَّ مَعَ الْعُسْرِ يُسْرًا
/// لَا أَبْرَحُ حَتَّىٰ أَبْلُغَ

#include <bits/stdc++.h>
#define LL long long
#define LD long double
#define S second
#define F first
#define IO ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);

using namespace std;

int main()
{
    IO
   string s;
   cin>>s;
   int c1=0,c2=0;
   for(int i=0; i<s.size() ; i++)
   {
       if(s[i]=='-')
        c1++;
       else
        c2++;
   }
   if(c2==0 )
   {
       cout<<"YES";
   }
   else if(c1%c2==0)
   {
       cout<<"YES";
   }
   else
   {
       cout<<"NO";
   }
    return 0;
}

