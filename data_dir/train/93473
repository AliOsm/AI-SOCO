#include <bits/stdc++.h>
using namespace std;
#define pb  push_back
#define ll  long long
#define vi  vector<ll >
#define vvi vector<vi >
#define all(x) x.begin(), x.end()

int a, b, c;

int num() {
    cin >> a >> b >> c;
    int mi = min(a, b);
    return min(mi, (a + b + c) / 3);
}

int main() {
    ios_base::sync_with_stdio(false);
    int t; cin >> t;
    while (t--)
        cout << num() << endl;

    return 0;
}