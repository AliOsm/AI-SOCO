#include <bits/stdc++.h>
#include <ext/numeric>

using namespace std;
using namespace __gnu_cxx;

typedef long long ll;
typedef unsigned long long ull;

void fastInOut();

int main() {
#ifndef ONLINE_JUDGE
	freopen("input.txt", "r", stdin);
#endif
	fastInOut();
	int n, p;
	double ret = 0;
	cin >> n;
	for (int i = 0; i < n; i++)
		cin >> p, ret += p;
	ret = ret / n;
	cout << fixed << setprecision(12) << ret << endl;
	return 0;
}

