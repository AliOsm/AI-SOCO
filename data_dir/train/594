#include <iostream>
#include <fstream>
#include <cstdio>
#include <cmath>
#include <vector>
#include <cstring>
#include <string>
#include <set>
#include <map>
#include <stack>
#include <queue>
#include <deque>
#include <bitset>
#include <algorithm>
#include <complex>
#include <array>
using namespace std;
 
#define REP(i,n) for(int i=0; i<n; ++i)
#define FOR(i,a,b) for(int i=a; i<=b; ++i)
#define FORR(i,a,b) for (int i=a; i>=b; --i)
#define ALL(c) (c).begin(), (c).end()
 
typedef long long ll;
typedef vector<int> VI;
typedef vector<ll> VL;
typedef vector<VI> VVI;
typedef vector<VL> VVL;
typedef pair<int,int> P;
typedef pair<ll,ll> PL;
typedef vector<double> VD;
typedef vector<VD> VVD;

int in() { int x; scanf("%d", &x); return x; }
ll lin() { ll x; scanf("%lld", &x); return x; }

const ll mod = 1e9 + 7;
ll dp[2010][2010];

int main() {
    ll n;
    cin >> n;
    dp[0][0] = 1;
    REP(i,2*n) REP(j,i+1){
        if (j > 0) dp[i + 1][j - 1] = (dp[i + 1][j - 1] + dp[i][j]) % mod;
        if (j < 2 * n - i) dp[i + 1][j + 1] = (dp[i + 1][j + 1] + dp[i][j]) % mod;
    }
    ll ans = 0;
    REP(i,2*n+1) REP(j,2*n+1){
        if (j % 2) ans = (ans + dp[i][j]) % mod;
    }
    cout << ans << endl;

    return 0;
}
