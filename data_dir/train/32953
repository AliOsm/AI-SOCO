#include <cstdio>
#include <cstring>
#include <cmath>
#include <algorithm>
#include <vector>
using namespace std;

#define FOR(it, c) for(__typeof((c).begin()) it = (c).begin(); it != (c).end(); it++)
#define SZ(c) ((int)(c).size())

int main(void) {
	int n, k;
	scanf("%d%d", &n, &k);
	for(int i=1;i<=k;i++)printf("%d %d ", i*2, i*2-1);
	for(int i=k+1;i<=n;i++) printf("%d %d ", i*2-1, i*2);
	puts("");
	return 0;
}
