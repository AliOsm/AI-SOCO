//marico el que lo lea
#include <iostream>
#include <cstring>
#include <cstdio>
#include <cmath>
#include <algorithm>
#include <vector>
using namespace std;

#define FOR(i,f,t) for(int i=f; i<(int)f; i++)
#define FORR(i,f,t) for(int i=f; i>(int)f; i--)
#define ms(obj, val) memset(obj, val, sizeof(obj))
#define ms2(obj, val, sz) memset(obj, val, sizeof(obj[0])*sz)
#define pb push_back
#define ri(x) scanf("%d", &x)
#define rii(x,y) ri(x), ri(y)

typedef vector<int> vi;
typedef long long ll;

int n;

int main(){
	cin>>n;
	if(n==1){
		cout<<-1<<endl;
		return 0;
	}
	cout<<n<<" "<<n+1<<" "<<n*(n+1)<<endl;
}
