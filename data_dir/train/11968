#include <bits/stdc++.h>
using namespace std;

int n, a;

int main()
{
    scanf("%d %d",&n,&a);
    int mina=a, maxa=a, mini=0, maxi=0;
    for (int i=1; i<n; i++)
    {
        scanf("%d",&a);
        if(a>maxa)
        {
            maxa = a;
            maxi = i;
        }
        if(a<=mina)
        {
            mina = a;
            mini = i;
        }
    }
    printf("%d\n",maxi+(n-1-mini)-(mini<maxi?1:0));
    return 0;
}
