#include <iostream>
#include <cmath>
#include <map>
#include <cstdio>
#include <string>
#include <cstring>
#include <algorithm>
#include <vector>
using namespace std;
long long i,k,j,jj,l,s,t,a[223556],b[223456],c[456789],cc,n,m,d,e,f,ff;
string p,r,q,rr;
pair <long long , long long> x[45678];
int main(){
    cin >>p;
    while (p.size() > 0){
        l = p.size();
        t = 1;
        for (i = 1; i < l; i ++)
            t = t *2;
        s += t;
        if (p[0] == '7')
            s += t;
        q = r;
        for (i = 1; i < p.size(); i ++)
            q = q + p[i];
        p = q;
    }
    cout << s;

    return 0;
  
}


