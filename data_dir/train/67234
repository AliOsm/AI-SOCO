#include<bits/stdc++.h>
#define pb push_back
#define f first
#define s second
using namespace std;
long long a,b,n,m;
int main(){
	cin>>n;
	
	while(n>0){
		m++;
		a = m;
		b = 0;
		while(a>0){
			b+=a%10;
			a/=10;
		}
		if(b==10){
		//	cout<<m<<endl;
			n--;
		}
	}
	
	cout<<m;
	
	return 0;
}