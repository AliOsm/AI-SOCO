main()
{
	FX iOS
	int i,j; 
	cin>>n;
	if(n==1)
		return cout<<2,0;
	ll h=1,l=1;ans=2;
	while(h*l<n)
	{
		if(h==l)h++;
		else l++;
		ans++;
	}
	cout<<ans;
}