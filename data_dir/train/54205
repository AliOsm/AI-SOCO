#include <bits/stdc++.h>
using namespace std;
int n, x, y, Sum;
int main ()
{
    #ifndef ONLINE_JUDGE 
		freopen (".in", "r", stdin); 
    #endif 
    scanf ("%d", &n);
    for (int i = 1; i <= n; ++ i)
    {
    	scanf ("%d%d", &x, &y);
    	if (x + 2 <= y)
    		Sum ++;
    }
    printf ("%d", Sum);
	return 0;
}