#include <bits/stdc++.h>
#define ll long long
#define pb push_back
#define f first
#define s second
#define y1 bbp
using namespace std;
int const N=1e6+4,inf=1e9+7;ll const md=998244353;
ll b[N],a[N],pref[N][5],n,k,m,x1,y,x,y1,kk,sz,ans;
long long q,qq;
char ch;
vector <ll> v;
bool us[N];
pair <ll,ll> p[N];
string s,t;
main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    cin>>s;
    if (s=="0") return cout<<0,0;
    if (s=="1") return cout<<0,0;
    if (s=="10") return cout<<1,0;
    n=s.size();
    for (int i=0;i<n;i++)
    {
        if (s[i]=='0') k++;
    }
    if (k==n-1 && n%2==1) x=1;
    cout<<((n+1)/2)-x;
    return 0;
}