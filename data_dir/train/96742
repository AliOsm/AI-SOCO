struct P{
  int x,y;
  bool operator < (const P &a )const{
    //if(y!=a.y)
    return y<a.y;
  };
};

int a,b,c,d,i,k,n,m,e,dx[10]={1,0,-1,0,1,1,-1,-1},dy[10]={0,1,0,-1,1,-1,1,-1};
int o[111];
int l[1];
int j[1];

long long x,y,z,mod=1000000007;
string r;
//char r[1];

P u[1];
queue<int> q;
stack<int> s;

vector<int> v;

bool as(P a,P b)
{
  return a.x>b.x;
}

int main()
{
  scanf("%d",&e);
  for(int tt=1;tt<=e;tt++)
  {
    scanf("%d",&a);
    for(int t=1;t<=a;t++)
      scanf("%d",&o[t]);
    for(int t=1;t<=a;t++)
    if(o[t]%2==0)
    {
      printf("1\n%d\n",t);
      goto qwe;
    }
    if(a>1) printf("2\n1 2\n");
    else puts("-1");
    qwe:;
  }
}
