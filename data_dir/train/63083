int main()
{
    #ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
    #endif
    ll t,i,j,l,r,q,k,kk,x,c,m,n,p;
    cin(n);
    ll ok = 0;
    for(i=2;i<=sqrt(n);i++){
        if(n%i == 0){
            ok = 1;
            break;
        }
    }
    if(!ok){
        cout(1LL);
    }else{
        if(n%2){
            ll p = n - 2;
            ok = 0;
            for(i=2;i<=sqrt(p);i++){
                if(p%i==0){
                    ok = 1;
                    break;
                }
            }
            if(ok){
                cout(3LL);
            }else{
                cout(2LL);
            }
        }else{
            cout(2LL);
        }
    }
return 0;
}