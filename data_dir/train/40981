#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef pair<int, int> pi;


int main() {
  ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
  int t;
  cin >> t;
  while (t--) {
    int a, b, c, st = 0;
    cin >> a >> b >> c;
    int g = min(b, c/2);
    st += 3*g;
    b -= g;
    g = min(a, b/2);
    st += 3*g;
    cout << st << endl;
  }
}

