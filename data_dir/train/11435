#include<bits/stdc++.h>
using namespace std;
int main()
{

  int n,m;
  cin >>n >>m;
  int ara[110];

  memset(ara,0,sizeof(ara));

  for(int i=1;i<=n;i++)
  {
        int x;
        cin >>x;

        ara[ ( x-1) /m ] = i;

  }
  for(int i=100;i>=0;i--)
  {
       if(ara[i])
          {

                  cout <<ara[ i ]  <<endl;
                  return 0;

          }
  }




}
