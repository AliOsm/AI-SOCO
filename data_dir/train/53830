#include <bits/stdc++.h>

using namespace std;

int const N = 5e5+10;
int n;

int main(){
	ios::sync_with_stdio(false); cin.tie(0); cout.tie(0);
	cout << "YES\n";
	cin >> n;
	for (int i = 0, a, b, c, d; i < n; i ++){
		cin >> a >> b >> c >> d;
		int res = 0;
		if (a & 1) res ++;
		if (b & 1) res += 2;
		cout << res+1 << '\n';
	}
}
