#include <bits/stdc++.h>
using namespace std;

int n, one;
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(NULL);

    cin >> n;

    for (int i = 0; i < n; i++){
        int button;
        cin >> button;
        if (button) one++;
    }

    if (n == 1){
        cout << (one ? "YES" : "NO") << endl;
        return 0;
    }
    cout << (one == n-1 ? "YES" : "NO") << endl;
    return 0;
}
