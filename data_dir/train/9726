# include <bits/stdc++.h>
# define speed ios_base::sync_with_stdio(0)
# define L_L long long
using namespace std;

int n,m,prime = 335411;

int main(){
    speed;
    cin>>n>>m;
    cout<<prime<<' '<<prime<<endl;
    for (int i=1;i<n-1;i++){
        cout<<i<<' '<<i+1<<' '<<1<<endl;
        }
    cout<<n-1<<' '<<n<<' '<<prime - n + 2<<endl;
    m = m - n + 1;
    for (int i=1;i<=n;i++){
        for (int j=i+2;j<=n;j++){
            if (m==0)return 0;
            cout<<i<<' '<<j<<' '<<1000000000<<endl;
            m--;
            }
        }
    return 0;
}


