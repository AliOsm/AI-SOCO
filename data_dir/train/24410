#include <bits/stdc++.h>
using namespace std;
#define pb  push_back
#define ll  long long
#define vi  vector<ll >
#define vvi vector<vi >
#define all(x) x.begin(), x.end()

double pi = acos(-1.0);
int n;

double f() {
    cin >> n;
    return 1.0 / tan(pi / (2 * n));
}

int main() {
    ios_base::sync_with_stdio(false); cin.tie(0);
    int t; cin >> t;
    while (t--)
        cout << fixed << setprecision(15) << f() << "\n";

    return 0;
}