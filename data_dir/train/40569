using namespace std;

ll n, i, t, ans;

    void solve()
    {
        cin >> n;

        ans = 0;

        for (i = 1; i <= n / 2; i++) ans += i * i * 8;

        cout << ans << endl;
    }

int main()
{
    //freopen("input.txt", "r", stdin);
    //freopen("output.txt", "w", stdout);

    ios::sync_with_stdio(0);
    cin.tie(0);

    cin >> t;

    while (t--) solve();

    re 0;
}
