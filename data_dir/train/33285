const int inf = (int)1e9;
const int mod = inf + 7;
const double eps = 1e-9;
const double pi = acos(-1.0);

ll read_long() {
    ll ans = 0;
    char c;
    bool started = false;
    bool is_negative = false;
    while (true) {
        c = getchar();
        if ((c < '0' || c > '9') && c != '-' && !started) continue;
        if ((c < '0' || c > '9') && c != '-' && started) break;
        if (started) {
            ans = ans * 10;
        }
        started = true;
        if (c == '-') is_negative = true;
        else ans += c - '0';
    }
    if (is_negative) ans *= -1;
    return ans;
}

int w1, h1, w2, h2;

int main(){

    cin >> w1 >> h1 >> w2 >> h2;

    ll ans = 2ll * h1 + w1 + 2;

    if (w1 == w2) {
        ans += h2;
        ans += h2;
        ans += w2;
        ans += 2;
    } else {
        ans += h2;
        ans += h2;
        ans += w2;
        ans += 2;
        ans += w1 - w2;
    }

    cout << ans << endl;

    return 0;
}
