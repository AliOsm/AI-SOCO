#include <bits/stdc++.h>
#define fr first
#define sc scanf
#define pf printf
#define se second
#define sq(x) x * x
#define ll long long
#define pb push_back
#define mk make_pair
#define ld long double
#define pr pair<int,int>
#define sz(s) int(s.size())
#define piip pair< pair<ll,ll>,ll >
#define fin(s) freopen( s, "r", stdin )
#define fout(s) freopen( s, "w", stdout )
#define TIME ios_base::sync_with_stdio(0)
using namespace std;

const ll INF = 1e9;
const ll N = 1e5;
const ll mod = 1e9 + 7;
const long double eps = 1E-7;
ll n , mx , mn = 1e9,cnt , m;
string s;
int main()
{
        TIME;
        ll T;
       cin >> T ;
       while ( T -- ){
            cin >> n;
       ll arr[n]={0};
       for( int i=0; i< n;i ++ ){
        cin >> arr[i];
       }
       for( int i = 1; i <  n;i ++ ){
        if( abs( arr[ i ] - arr[ i - 1 ] ) == 1 or abs( arr[ i ] - arr[ i - 1 ] ) == n - 1  )
            continue;
        else
            cnt=1;
       }
       if( !cnt )
        cout << "YES\n";
       else
        cout<<"NO\n";
       cnt=0;
       }
}












