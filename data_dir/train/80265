#include <bits/stdc++.h>
#define int long long
using namespace std;
const int N = 1123456;
const int mod = 1e9 + 7;
const int inf = 1e15 + 7;
int read()
{
    int x;
    scanf("%I64d", &x);
    return x;
}
int gcd(int a, int b) {
    if(b == 0) return a;
    return gcd(b, a % b);
}
main()
{
    int n, m, i, j, x, k;
    cin >> n >> k;
    cout << min(1ll, min(n - k, k)) << " " << min(2 * k, n - k);
}

