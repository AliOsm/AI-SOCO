const int M = 100010;

int main()
{
#ifndef ONLINE_JUDGE
    freopen("/home/riaz/Documents/in.txt", "r", stdin);
//    freopen("/home/riaz/Documents/out.txt", "w", stdout);
#endif
    ios_base::sync_with_stdio(false);

    int n, i, j, k;
    int a = 0, b = 0;
    vi A;

    in(n);
    while (n--)
    {
        in(k);

        for (i = 0; i < k/2; i++) in(j),  a += j;
        if (k % 2 == 1) in(j), A.pb(j);
        for (i = 0; i < k/2; i++) in(j),  b += j;
    }

    sort(all(A), greater<int>());

    for (i = 0; i < A.size(); i++) i % 2 == 0 ? a += A[i] : b += A[i];

    pr2(a, b);


return 0;
}

