#include <bits/stdc++.h>
using namespace std;

int B, G;

int main() {
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);

    scanf("%d %d", &B, &G);

    while (B && G) {
        printf("%c%c", B > G ? 'B' : 'G', B > G ? 'G' : 'B');
        B--, G--;
    }

    while (B--) printf("B");
    while (G--) printf("G");
    printf("\n");

    return 0;
}
