using namespace std;
typedef long long LL;
typedef unsigned long long ULL;
#define MEM(a,b) memset((a),(b),sizeof(a))
const LL INF = 1e9 + 7;
const int N = 1e3 + 10;
int a[N];
int main()
{
	//freopen("input.txt", "r", stdin);
	//freopen("output.txt", "w", stdout);
	int n, k;
	cin >> n >> k;
	n--;
	int ans = min(n, k);
	int x = 1;
	while (n--)
	{
		if (k) k--;
		else ans += ++x;
	}
	cout << ans << endl;
	return 0;
}