using namespace std;

#define forn(i,n) for (int i = int(0); i < int(n); i++)
#define forb(i,n) for (int i = int(n-1); i >= int(0); i--)
#define for1(i,n) for (int i = int(1); i <= int(n); i++)
#define fore(i,a,n) for (int i = int(a); i < int(n); i++)

#define pb push_back
#define mp make_pair
#define fr first
#define sc second
#define sz size()
#define sqr(x) ((x)*(x))
#define cube(x) ((x)*(x)*(x))
#define all(x) x.begin(), x.end()
#define min3(a, b, c) min(a, min(b, c))
#define max3(a, b, c) max(a, max(b, c))
#define dist(x1, y1, x2, y2) sqrt(sqr(x1 - x2) + sqr(y1 - y2))
  
typedef long long ll;
typedef long double ld;
typedef unsigned long long ull;
  
const int base = 1e9;
const int maxn = 100005;
const int MAXN = 1000000;
const int logn = 12;
const int inf = 2e9;
const int alpha = 26;
const int my_hash = 31;
const long long my_mod = 2674894331;
const long long l_inf = 4e18;
const long long mod = 1e9;
const double pi = acos(-1.0);
const double eps = 1e-8;

int main() {
	int n, ans = 0;
	scanf("%d", &n);
	for (int i = 1; i < n; i++)
		ans += i * (n - i);
	ans += n;
	printf("%d", ans);
}