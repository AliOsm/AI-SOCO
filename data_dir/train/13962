//#ifdef _MY_DEBUG
//#define HMOD 1000000007
//#endif
#define MAX 2000000000
#define HBASE 127

const int MAXN = 1000100;

int n, m;
int cnt[MAXN];
int mas[MAXN];

void solve()
{
	scanf("%d %d", &n, &m);
	for(int i = 0; i < n; ++i)
	{
		int t = 0;
		scanf("%d", &t);
		mas[i] = t;
		if (t <= m)
		cnt[t]++;
	}
	for(int i = m - 1; i > 0; --i)
	{
		for(int j = 2 * i; j <= m; j += i)
			cnt[j] += cnt[i];
	}
	int nok = 1, best = 0;
	for(int i = 1; i <= m; ++i)
	{
		if (cnt[i] > best)
		{
			best = cnt[i];
			nok = i;
		}
	}
	printf("%d %d\n", nok, best);
	for(int i = 0; i < n; ++i)
	{
		if ((nok % mas[i]) == 0)
			printf("%d ", i + 1);
	}
}	

int main()
{
	ios_base::sync_with_stdio(false); cin.tie(0);
#ifdef _MY_DEBUG
    freopen("input.txt", "rt", stdin); freopen("output.txt", "wt", stdout);
#else
    //freopen(TASK ".in", "rt", stdin); freopen(TASK ".out", "wt", stdout);
#endif
    //stresstest(); return 0;
    srand(1313);
	solve();
	
    return 0;
}