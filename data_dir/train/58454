#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;
typedef long double ld;
typedef pair<ll,ll> p2;
void solve(){
	ll n,m;
	cin>>n>>m;
	for(ll i=0;i<n;i++){
		for(ll j=0;j<m;j++)
		if(i==0&&j==0)
		cout<<"W";
		else
		cout<<"B";
		cout<<endl;
	}
}
int main(){
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);
	ll qc;
	cin>>qc;
	for(ll i=1;i<=qc;i++)
	solve();
}
