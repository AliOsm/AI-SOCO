#include <bits/stdc++.h>
#define  FOR(i,x,n) for(int i=x;i<n;i++)
#define rFOR(i,x,n) for(int i=x;i>n;i--)
#define fi first
#define se second
#define SZ(x) (int)x.size()
typedef long long ll;
typedef long double lD;
using namespace std;

int main()
{
  ll a,b,c; 
  cin>>a>>b>>c;
  if(abs(a)+abs(b)==c) cout<<"Yes";
  else
  if(c>abs(a)+abs(b))
  {
     if(!((c-(abs(a)+abs(b)))&1)) cout<<"Yes";
     else cout<<"No";
  }
  else cout<<"No";
}