#define re return(0);
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <set>
using namespace std;
double const pi=3.1415926536;
int main()
{
	long long n;
	cin>>n;
	long long s=9,c=0;
	while(n-s>=0)
	{
		n-=s;
		c+=9;
		s*=10;
	}
	while(n)
	{
		c+=n%10;
		n/=10;
	}
	cout<<c;
}
