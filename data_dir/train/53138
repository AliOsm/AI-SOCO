# include <bits/stdc++.h>

using namespace std;

#define fi first
#define se second

#define pb push_back
#define sz(x) ((int)(x).size())

typedef long long ll;
typedef long double ld;

const int INF = (int)1e9 + 7;
const int base = 1000 * 1000 * 1000;

const ld pi = acos(-1);
const ll linf = (ll)1e18;

typedef pair < ll, ll > pll;
typedef pair < int, int > pii;

int w1, h1, w2, h2;
int main(){ 
 scanf ("%d %d %d %d", &w1, &h1, &w2, &h2);
 ll ans = 1ll * w1 + 2 + h1 * 1ll * 2 + w2 + 2 + h2 * 1ll * 2;
 if (w1 > w2) ans += (w1 - w2);
 printf ("%lld\n", ans);
 return 0; 
}
