#include<bits/stdc++.h>
using namespace std;

int main(){
    int a,b,n,m,t=0;
   // string s,s2="";
    cin >>n;
   // 4*7=6,9,8
    m=n;
   // 4,7,47,74,447,474,744,774,747,477
    while(n%4==0){
        n=n/4;
    }
    while(n%7==0){
        n=n/7;
    }
    while(n%47==0){
        n=n/47;
    }
    while(n%74==0){
        n=n/74;
    }
    while(n%447==0){
        n=n/447;
    }
    while(n%474==0){
        n=n/474;
    }
    while(n%744==0){
        n=n/744;
    }
    while(n%774==0){
        n=n/774;
    }
    while(n%747==0){
        n=n/747;
    }
    while(n%477==0){
        n=n/477;
    }
    if(n<m){
        cout << "YES";
    }
    else{
        cout << "NO";
    }
    return 0;
}
