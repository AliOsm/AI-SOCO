using namespace std;

#define FTB(i,a,b) for(LL i=a;i<=b;i++)
#define FT(i,a,b) for(LL i=a;i<b;i++)
#define FGB(i,a,b) for(LL i=a;i>=b;i--)
#define FG(i,a,b) for(LL i=a;i>b;i--)
#define endl "\n"
#define PB push_back
#define mp make_pair
#define fi first
#define se second
#define debug cout<<"VL\n";
#define PI 3.1415926535897
#define lbnd(dau,cuoi,giatri) lower_bound(dau,cuoi,giatri)
#define ubnd(dau,cuoi,giatri) upper_bound(dau,cuoi,giatri)
typedef double DB;
typedef long long LL;
typedef unsigned long long UL;
typedef long double LD;
typedef pair<LL,LL> II;
typedef vector<LL> VI;
typedef vector<bool> VB;



LL n,k,res,hi[300005];
bool ok[300005];
II c[300005];
priority_queue<II> Q;
VI v;

int main(){
    ios::sync_with_stdio(false);cin.tie(0);
//	freopen("input.txt","r",stdin);
//  freopen("output.txt","w",stdout);
	cin>>n>>k;
	FTB(i,1,n){
		cin>>c[i].first;
		c[i].second=i;
		if(i<=k) Q.push(c[i]);
	}
	FTB(i,k+1,k+n){
		if(i<=n) Q.push(c[i]);
		II g=Q.top();
		res+=(i-g.se)* g.fi;
		hi[g.second]=i;
		Q.pop();
	}
	cout<<res<<endl;
	FTB(i,1,n) cout<<hi[i]<<" ";




	return 0;
}



