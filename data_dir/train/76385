#include <bits/stdc++.h>

using namespace std;
typedef long long ll;
typedef pair<int, int> pi;


int main() {
  ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
  int T;
  cin >> T;
  while (T--) {
    ll st, in, bp;
    cin >> st >> in >> bp;
    cout << min(bp+1, max(0ll, (bp+st-in+1)/2)) << endl;
  }
}

