#define pb push_back
#define inf 1000000000
#define mod 1000000007
#define fast ios_base::sync_with_stdio(0);cin.tie(NULL);cout.tie(NULL);
#define mx 100005
main()
{
	fast;
	int t;
	cin>>t;
	while(t--)
	{
		int a,b,c;
		cin>>a>>b>>c;
		int x = min(b,c/2);
		int ans = 0;
		ans += x;
		b-=x;
		ans += min(a,b/2);
		cout<<ans*3<<endl;
	}
}