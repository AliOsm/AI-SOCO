typedef vector< double > vd;
typedef vector< vd > vvd;
typedef vector< string > vs;

template< class T1, class T2 >
int upmin( T1 &x, T2 v ){
  if( x <= v ){
    return 0;
  }
  x = v;
  return 1;
}

template< class T1, class T2 >
int upmax( T1 &x, T2 v ){
  if( x >= v ){
    return 0;
  }
  x = v;
  return 1;
}

