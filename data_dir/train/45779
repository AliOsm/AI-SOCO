#include<bits/stdc++.h>
using namespace std;
#define forr(i,a,n)	for(long long int i=a; i<n; i++)
#define loop(i,a,n)	for(long long int i=a; i>=n; i--)

int main() 
{
	ios_base :: sync_with_stdio(false),cin.tie(NULL),cout.tie(0);
	
	int m; cin>>m; while(m--)
	{
		long double a,n,x=0;
		cin>>a;
		a*=2;
		x=(a-2)*(1.57079632679);
		x/=a;
		cout<<fixed<<setprecision(10)<<tan(x)<<'\n';
	}
	
	return 0;
}