#include <bits/stdc++.h>
#define mk make_pair
#define fs first
#define sc second
using namespace std;
typedef long long ll;
typedef long double ld;
int a[100010];
int main(){
    int a, b, c, d;
    while(cin>>a>>b>>c>>d){
        ll ans=0;
        ans=a+2+c+2+(b+d)*2+(a-c);
        cout<<ans<<endl;
    }
  return 0;
}


