#include<bits/stdc++.h>
#define MAX 1005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, X, Y, ans;
bool dead[MAX];
int x[MAX];
int y[MAX];

int main()
{
    optimiza_io
    cin >> N >> X >> Y;
    for( int i = 1; i <= N; i ++ )
        cin >> x[i] >> y[i];
    for( int i = 1; i <= N; i ++ )
        if( ! dead[i] )
        {
            ans ++;
            dead[i] = 1;
            int P = x[i] - X ;
            int Q = y[i] - Y ;
            for( int j = i + 1; j <= N; j ++ )
                if( ! dead[j] )
                {
                    int p = x[j] - X;
                    int q = y[j] - Y;
                    if( P * q == Q * p )
                        dead[j] = 1;
                }
        }
    cout << ans;
    return 0;
}
