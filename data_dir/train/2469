// Don't Look
#include <bits/stdc++.h> 
#include "bits/stdc++.h" 

using namespace std;

#define int long long
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

#ifndef bhupixb
  #define var(...) 
  #define stl(...) 
#endif

void solve() {
	int x, y;
	cin >> x >> y;
	if (x == 1) {
		cout << 0 << '\n';
	}
	else if (x == 2) {
		cout << y << '\n';
	}
	else {
		cout << y * 2 << '\n';
	}
}

signed main() {
  fast;
  int t = 1; cin >> t;
  while (t--) {    
  	solve();
  }
 

  return 0;
}