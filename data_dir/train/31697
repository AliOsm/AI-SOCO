/*input
6
5 2 3
100 1 4
1 10 5
1000000000 1 6
1 1 1000000000
1 1 999999999

*/
#include<bits/stdc++.h>

using namespace std;

int main()
{
	ios_base::sync_with_stdio(0);
	cin.tie(NULL);

	int t;
	cin>>t;
	while(t--)
	{
		long long a,b,k;
		cin>>a>>b>>k;

		if(k&1) cout<<(k/2+1)*a-(k/2)*b<<'\n';
		else cout<<(k/2)*a-(k/2)*b<<'\n';
	}
}