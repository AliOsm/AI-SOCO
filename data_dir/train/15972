#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define MAX_INT 100000
int main()
{
   ll n,i,j,sum=0,m=0;
   cin>>n;
   for(i=0;i<n;i++){
       cin>>j;
       sum+=j;
       m=max(m,j);
   }
   if(sum%2==1 || m>(sum/2)){
       cout<<"NO"<<endl;
   }else{
       cout<<"YES"<<endl;
   }
    return 0;
}