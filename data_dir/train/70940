#include <bits/stdc++.h>
using namespace std;

int main() {
    
    ios::sync_with_stdio(0);
    cin.tie(NULL), cout.tie(NULL);
    
    int N, K;
    cin >> N >> K;
    
    K = min(K, N - K + 1);
    
    int coins = N;
    int moves = N + 1;
    int steps = N - 1 + K - 1;
    
    cout << coins + moves + steps << "\n";
    return 0;
}
