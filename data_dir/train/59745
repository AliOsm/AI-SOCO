ll n,m,i,j,f[200005],g[200005],sz[200005],ans,x,y;
vl e[200005];
void dfs1(ll x,ll p)
{
	sz[x]=1;fe(it,e[x])if(*it!=p){dfs1(*it,x);sz[x]+=sz[*it];}
	f[x]=sz[x];fe(it,e[x])if(*it!=p)f[x]+=f[*it];
}
void dfs2(ll x,ll p)
{
	if(p){
		g[x]=g[p]+f[p]-f[x]-sz[p]+(n-sz[x]);
	}fe(it,e[x])if(*it!=p)dfs2(*it,x);
}
int main()
{
	read(n);
	rep(i,n-1){
		read(x);read(y);
		e[x].pb(y);e[y].pb(x);
	}dfs1(1,0);dfs2(1,0);
	rep(i,n)ans=max(ans,f[i]-sz[i]+g[i]+n);
	cout<<ans<<endl;
	return 0;
}