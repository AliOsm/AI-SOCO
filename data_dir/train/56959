// In the name of Allah the Most Merciful.

#include<bits/stdc++.h>
using namespace std;

int main(void)
{
    int n;
    scanf("%d",&n);
    vector<int>v;

    for(int i=0;i<n;i++){

        int in;
        scanf("%d",&in);
        v.push_back(in);
    }

    sort(v.begin() , v.end());

    if(v[0]==1)printf("-1\n");
    else printf("1\n");

    return 0;
}
