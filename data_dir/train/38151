#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define ld  double
#define oo 666666666

int main()
{
    ios::sync_with_stdio(0);
    ll n;
    cin>>n;
    /*
    https://math.stackexchange.com/questions/1137064/existence-of-a-pythagorean-triple-with-one-side-given
    */

    if(n<3)cout<<-1;
    else if(n&1)cout<<(n*n-1)/2<<" "<<(n*n+1)/2<<"\n";
    else cout<<(n*n/4-1)<<" "<<(n*n/4+1)<<"\n";
}
