#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <set>
#include <queue>
#include <deque>
#include <map>
#include <stack>
#include<bitset>
#include<list>
#include<cassert>
#include<numeric>

using namespace std;

const int N = 1000;
int main() 
{
	int n;
	cin >> n;
	for (int i = 0; i < N; i++)
	{
		if (i * (i + 1) == 2 * n)
		{
			cout << "YES" << endl;
			exit(0);
		}
	}
	cout << "NO" << endl;
}

