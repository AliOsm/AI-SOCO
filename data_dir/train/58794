#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
const int maxn = (int) 5001;

int n;
int main(){
  cin >> n;
  n %= 4;
  if(n == 0){
    cout << "1 A";
  }
  if(n == 1){
    cout << "0 A";
  }
  if(n == 2){
    cout << "1 B";
  }
  if(n == 3){
    cout << "2 A";
  }
}