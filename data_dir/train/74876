#include<bits/stdc++.h>
using namespace std;

int main(){
    
    int t;
    cin >> t;
    while(t--){
        int n;
        cin >> n;
        if(n & 1){
            cout << 7;
            n-=3;
        }
        while(n){
            cout << 1;
            n-=2;
        }
        cout << endl;
    }
}