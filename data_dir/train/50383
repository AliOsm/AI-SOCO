#include<bits/stdc++.h>
#define int long long

using namespace std;

signed main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);

    int T;
    cin >> T;

    while (T--)
    {
        int n;
        cin >> n;
        cout << (n < 4 ? 4 - n : n % 2) << '\n';
    }

    return 0;
}

