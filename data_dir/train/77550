//++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
using namespace std;
//++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
typedef long long ll;
typedef long double ld;
typedef unsigned long long ull;
//++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++--++
const int MAXN = 1e5 + 1;
const int inf = 1e18;
signed main()
{
	fastio();
	int n, x;
	cin >> n >> x;
	vector<pair<int, int>> a(n);
	for (int i = 0; i < n; ++i)
	{
		cin >> a[i].first >> a[i].second;
	}
	int ans = 0;
	for (int i = 0; i < n; ++i)
	{
		if (i == 0)
		{
			ans += (a[i].first - 1) % x;
		}
		ans += a[i].second - a[i].first + 1;
		if (i < n - 1)
		{
			ans += (a[i + 1].first - a[i].second - 1) % x;
		}
	}
	cout << ans;
}