#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
    if (n==1 || n==2 || n%2)
    {
        cout<<"NO\n";
        return 0;
    }
    for (int i=2;i<n;++i)
    {
        if (!((n-i)%2))
        {
            cout<<"YES\n";
            return 0;
        }
    }
    cout<<"NO\n";
    return 0;
}
