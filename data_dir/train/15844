#include <bits/stdc++.h>
#pragma GCC optimize("O3")

#define MP make_pair
#define PB push_back
#define ST first
#define ND second

using namespace std;

typedef pair<int, int> PII;
typedef vector<int> VI;
typedef vector<PII> VII;
typedef long long LL;

void init_ios() {
     ios_base::sync_with_stdio(0);
     cin.tie(0);
}

int n, res;

int main() {
  init_ios();
  cin >> n;
  for (int i = 1; i <= n-2; ++i)
    res += (i+1)*(i+2);
  cout<<res<<"\n";
}