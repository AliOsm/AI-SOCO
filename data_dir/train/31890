ll gcd(ll x,ll y)
{
    if(y==0)
        return x;
    else
        return gcd(y,x%y);
}
ll expo(ll n,ll m,ll p)   //MODULAR EXPONENTIATION
{
    ll r=1;
    while(m>0)
    {
        if(m%2)
            r=(r*n)%p;
        n=(n*n)%p;
        m=m/2;
    }
    return r%p;
}
ll kadane(vector<ll>&b)
{
  ll max_so_far=0,max_ending_here=0;
  for(ll i=0;i<b.size();i++)
  {
    max_ending_here+=b[i];
    if(max_ending_here<0)
      max_ending_here=0;
    max_so_far=max(max_so_far,max_ending_here);
  }
  return max_so_far;
}
int main()
{
 
   IOS;
   #ifndef ONLINE_JUDGE
   freopen("input.txt","r",stdin); 
   freopen("output.txt","w",stdout);
   #endif
   /********************* Code starts here ************************/
   ll n;
   cin>>n;
   vi a(n);
   loop(i,0,n)
   cin>>a[i];
   vi f(n),r(n);
   for(ll i=1;i<n;i++)
    f[i-1]=abs(a[i]-a[i-1]),r[i-1]=abs(a[i]-a[i-1]);
   for(ll i=0;i<n;i++)
   {
    if(i%2)
      r[i]=r[i]*(-1);
    else
      f[i]=f[i]*(-1);
   }
   cout<<max(kadane(f),kadane(r));
   return 0;
}  