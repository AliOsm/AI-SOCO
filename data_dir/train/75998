#include <bits/stdc++.h>
using namespace std;
 
#define pb push_back
#define ff first
#define ss second
 
typedef long long ll;
 
const int MAXN = 2 * 100 * 1000 + 17;
 
int a, b;
 
int main() {
	ios_base::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	cin >> a >> b;
	if (abs(a - b) > 1 or a + b == 0)
		cout << "NO";
	else
		cout << "YES";
	return 0;
}