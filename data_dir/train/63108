#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define endl '\n';
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define floop(i,a,b) for(int i=a;i<=b;++i)
const ll mod=1e9+7;

int main(){
	IOS;
	int n,k;
	cin>>n>>k;
	int ans=2;
	int x=k-1,y=n-k;
	if(x>y) swap(x,y);
	ans+=4*x+1;
	ans+=3*y;
	cout<<ans<<endl;
	return 0;
}