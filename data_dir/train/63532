#include<bits/stdc++.h>
using namespace std;
#define ll long long
ll i,j;
int main()
{
    ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    ll a,b,c,d;
    cin>>a>>b>>c>>d;
    for(i=1;i<=1000000;i++)
    {
        if(i>=b && i>=d && (i-b)%a==0 && (i-d)%c==0)
        {
            cout<<i<<endl;
            return 0;
        }
    }
    cout<<-1<<endl;
}

