#include <bits/stdc++.h>
using namespace std;
const int N = 1010, MAXN = 100000;
int r[N][N], c[N][N];
int a[MAXN];
int main() {
	int n;
	cin >> n;
	string s;
	cin >> s;
	for (int i = n - 2; i >= 0; i -= 2) {
		cout << s[i];
	}
	for (int i = 1 - (n % 2); i < n; i += 2) {
		cout << s[i];
	}
	
	return 0;
}
