// Seize the moment try to freeze it and own it, squeeze it and hold it,
// â€˜Cause we consider these minutes golden.
#include "bits/stdc++.h"
using namespace std;

#define int long long
const int N = 400005;
const int mod = 1e9 + 7;

int po(int x, int n) {
  int res = 1;
  while (n > 0) {
    if (n & 1) {
      res = (res * x) % mod;
    }
    x = (x * x) % mod;
    n >>= 1;
  }
  return res;
}

signed main() {
  ios::sync_with_stdio(false);
  cin.tie(0); cout.tie(0);

  int n, m, k;
  cin >> n >> m >> k;

  if (k == 2) return cout << m, 0;
  if (m == 1) return cout << 1, 0;
  // Number of palindromes of length n and m characters
  if (k > n || k == 1) return cout << po(m, n), 0;  
  if (k == n) return cout << po(m, n + 1 >> 1), 0;  

  if (k & 1) {
    return cout << m * m, 0;
  }
  cout << m;
  
  return 0;
}