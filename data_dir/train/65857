using namespace std;

typedef unsigned long long ull;
typedef long long ll;

#define OO ll(1e17)
#define mod ll(1000000007)

/*
*/
int main() {
	ll n, k;
	cin >> n >> k;
	ll o = n / 2 + n % 2;
	if (k <= o) {
		cout << 1 + 2 * (k - 1) << "\n";
	}
	else {
		k -= o;
		cout << 2 * k << "\n";
	}
}
