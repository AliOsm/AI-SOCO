#include <bits/stdc++.h>
using namespace std;

#define FASTIO ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL)
#define LL long long 
#define ar32(x) array<int, x> 
#define ar64(x) array<LL, x>
// Infinity xP
const int oo = 1e9 + 5;
// const int MOD = 1e9 + 7;
const LL ooll = 1e18;
// const int MOD = 998244353;
const int MOD = 1e9 + 7;

const int N = 2e6 + 5;

int v[N];
void solve() {
    int n;
    cin >> n;
    if (n & 1) {
        cout << '7';
        n -= 3;
    } else {
        cout << '1';
        n -= 2;
    }
    for (int i=0;i<n/2;i++) cout << '1';
    cout << '\n';
}
 
int main() {
    FASTIO;
    int t = 1;
    cin >> t;
    while(t--) solve();
    return 0;
}