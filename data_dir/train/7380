#include <bits/stdc++.h>
using namespace std;
const int MaxN = 1e5 + 7;
int n, m;
int main ()
{
    #ifndef ONLINE_JUDGE 
		freopen (".in", "r", stdin); 
    #endif 
    scanf ("%d%d", &n, &m);
    cout << min (n, m) + 1 << endl;
    for (int i = 0; i <= min (n, m); ++ i)
    	cout << i << ' ' << min (n, m) - i << endl;
	return 0;
}           