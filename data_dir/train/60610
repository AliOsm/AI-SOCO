#include <bits/stdc++.h>
typedef long long ll ;
using namespace std;

int main()
{

    ll n , a , b , c ;

    cin >> n >> a >> b >> c;

    if(n % 4 == 1) cout << min(a*3 , min(a + b , c));

    if(n % 4 == 2) cout << min(a*2 , min(b , 2*c));

    if(n % 4 == 3) cout << min(a , min(b + c , 3*c));

    if(n % 4 == 0) cout << 0 ;





    return 0;
}
