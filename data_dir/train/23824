#define re return(0);
#define ce continue;
typedef long long ll;
typedef long double ld;
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <cstring>
#include <set>
#include <iomanip>
#include <fstream>
using namespace std;
double const pi=3.1415926536;
int main()
{
	int n;
	cin>>n;
	int a[n];
	for(int i=0;i<n;i++)
	cin>>a[i];
	int c=1,max=0;
	for(int i=0;i<n-1;i++)
	{
		if(a[i+1]<=2*a[i])
		c++;
		else
		{
			if(c>max)
			max=c;
			c=1;
		}
	}
	if(c>max)
	max=c;
	cout<<max;
}


