int main(){

    int n = Int  ;
    set<int>s1;

    fr( i , n , 1 ){
        int u = Int + 1 ;
        if( i % 2 ){
            u = ( i - u + n ) % n ;
        }else{
             u = ( u - i + n ) % n ;
        }
      //  cout<<u<<endl;
    s1.insert( u ) ;
    }

    if( s1.size() == 1 ) pf("Yes\n");
    else pf("No\n") ;

    done;
}


