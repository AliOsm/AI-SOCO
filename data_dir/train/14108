#include<bits/stdc++.h>
using namespace std;	
typedef vector<int> vi;
typedef vector<pair<int,int> > vp;
#define pb push_back
#define mp make_pair
#define ll long long
#define rep(i,n) for(int i=0;i<n;i++)
#define MOD 1000000007
int main(){
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	vector<int> df;
	for(int i=0;i<3;i++){
		int x;
		cin>>x;
		df.pb(x);
	}
	sort(df.begin(), df.end());
	if(df[2] + 1 <= df[0] + df[1])
		cout<<0<<'\n';
	else cout<<df[2] + 1 - (df[0] + df[1])<<'\n';



	
}