/// NO PAIN <-> NO GAIN
/// FROM ASHES TO THE EMPIRE
#include <bits/stdc++.h>

#define ss second
#define ff first
#define pb push_back
#define faster ios::sync_with_stdio(0), cin.tie(0), cout.tie(0)

using namespace std;

typedef long long ll;
typedef long double ld;

const ll N=1100,mod=1e9+7,mod2=1e9+9,mod3=998244353,sq=450,base=727,lg=30;

ll n,m,x,y,z,w,k,ans,t,a[N];

int main(){
    faster;
    cin>>n>>x>>y;
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    if(x>y)return cout<<n,0;
    for(int i=0;i<n;i++){
        if(a[i]<=x)z++;
    }
    cout<<(z+1)/2;
    return 0;
}
