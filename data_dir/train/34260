#include<bits/stdc++.h>
#define ll long long
#define ff first
#define ss second
#define pb push_back
#define int long long
#define mk make_pair
using namespace std;

int n,k,ans;
int a[5005];

main()
{
    cin>>n>>k;
    ans = n + n + 1;
    ans += min( (k-1 + n-1), (n-k + n-1));
    cout<<ans;
}
