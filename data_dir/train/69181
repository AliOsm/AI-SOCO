using namespace std;
//using namespace __gnu_cxx;

typedef long long ll;
typedef pair<int,int> P;
typedef pair<ll,ll> Pll;
typedef unsigned long long ull;

const ll LLMAX=2e18;
const int MOD=1e9+7;
const int MAXN=1e6+10;

template<class T>
inline void read(T &DataIn)
{
    DataIn=0;    T Flag=0;   char c=getchar();
    while(!isdigit(c)){ Flag|=c=='-'; c=getchar(); }
    while(isdigit(c)){ DataIn=DataIn*10+c-'0'; c=getchar(); }
    DataIn= Flag? -DataIn: DataIn;
}

template<class T>
inline void write(T DataOut,char EndChar='\n')
{
    T lenth=0,number[30];
    if(DataOut==0){ putchar(48);putchar(EndChar); return; }
	while(DataOut>0){ number[++lenth]=DataOut%10; DataOut/=10;}
	for(int i=lenth;i>=1;i--)    putchar(number[i]+48);
    putchar(EndChar);
}

priority_queue<int,vector<int>,less<int> > qd;
priority_queue<int,vector<int>,greater<int> > qu;

struct node{
    ll t,b,tag=0,id;
    bool operator<(const node&n)const{
        return b>n.b;
    }
}a[MAXN];

ll sum[MAXN];

bool cmp(node x,node y){
    return x.t>y.t;
}

priority_queue<node> q;

int main(void)
{
    FILE *fin=NULL,*fout=NULL;
    ios::sync_with_stdio(false);    cin.tie(0);
    //fin=freopen("D:/Project__C++/testdata.in","r",stdin);
    //fout=freopen("D:/Project__C++/testdata.out","w",stdout);
    ll n,k,ans=0,sum=0;    cin>>n>>k;
    for(int i=0;i<n;i++)    cin>>a[i].t>>a[i].b;
    sort(a,a+n,cmp);
    for(int i=0;i<n;i++)    a[i].id=i;
    for(int i=0;i<k-1;i++)  sum+=a[i].t,a[i].tag=1;
    for(int i=0;i<n;i++)    q.push(a[i]);
    int base=k-1;
    while(!q.empty()){
        node now=q.top();   q.pop();
        if(a[now.id].tag){
            while(base<n&&a[base].tag)   base++;
            if(base<n)  sum+=a[base].t,a[base].tag=1,base++;
            ans=max(ans,sum*now.b);
            sum-=now.t;
        }
        else{
            a[now.id].tag=1;
            ans=max(ans,(sum+now.t)*now.b);
        }
    }
    cout<<ans<<endl;   
    return 0; 
}
