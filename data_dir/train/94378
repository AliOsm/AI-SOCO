#include <iostream>
#include <cstdio>
#include <fstream>
#include <iomanip>
#include <cmath>
#include <bitset>
#define inf 2000000000
using namespace std;
double a,b,c;
long double ep=1e-8;
int main()
{
  //  freopen("input.txt","r",stdin);
  //  freopen("output.txt","w",stdout);
    double s;
    cin>>s;
    cin>>a>>b>>c;
    if(a+b+c<ep)
        cout<<"0 0 0"<<endl;
    else
        cout<<setprecision(20)<<s*a/(a+b+c)<<" "<<s*b/(a+b+c)<<" "<<s*c/(a+b+c)<<endl;
    return 0;
}
