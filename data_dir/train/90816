#include<iostream>
#include<cstring>
#include<string>
using namespace std;
int main()

{
    int n;
    int kol=0;
    int m=0;
    int mp=0;
    cin>>n;
    for(int a=0; a<n; a++)
    {
        cin>>m;
        if(m!=mp)
        {
            kol++;
        }
        mp=m;
    }
    cout<<kol;
   return 0;
  
  
}
 