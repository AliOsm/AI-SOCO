#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;

class ProblemBWateringSystem {
public:
	void solve(std::istream& in, std::ostream& out) {
		int n, a, b; in>>n>>a>>b;
		int first_hole; in>>first_hole;
		int arr[n-1];
		ll sum = first_hole;
		for(int i = 0; i<n-1; ++i){
			in>>arr[i];
			sum += arr[i];
		}
		sort(arr, arr+n-1);
		reverse(arr, arr+n-1);
		int res = 0;
		if(first_hole*a/sum>=b){
			out<<res;
			return;
		}
		for(int i = 0; i<n-1; ++i){
			++res;
			sum-=arr[i];
			if(first_hole*a/sum>=b){
				out<<res;
				return;
			}
		}
	}
};


int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	ProblemBWateringSystem solver;
	std::istream& in(std::cin);
	std::ostream& out(std::cout);
	solver.solve(in, out);
	return 0;
}
