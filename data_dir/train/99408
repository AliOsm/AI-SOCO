typedef vector<ii> vii;

const int inf = 1e9 + 143;
const ll longinf = 1e18 + 143;

inline int read(){int x;scanf(" %d",&x);return x;}

int main() {
	int k = read();
	int a = read();
	int b = read();
	int x = a / k;
	int y = b / k;
	if (a % k > 0 && b < k) {
		puts("-1");
		return 0;
	}
	if (b % k > 0 && a < k) {
		puts("-1");
		return 0;
	}
	printf("%d\n", x + y);
  return 0;    
}