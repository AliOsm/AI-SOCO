#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef unsigned long long ull;
const int N = 1e5+50;
const int oo = 1e9;
const int mod = 1e9+7;

int main(){
	int n;
	cin>>n;
	int v = 1,q=n*n;
	for(int i=1;i<=n;i++){
		for(int j=1;j<=n/2;j++){
			cout << v++ << ' ';
		}
		for(int j=1;j<=n/2;j++){
			cout << q-- << ' ';
		}
		puts("");
	}
}	