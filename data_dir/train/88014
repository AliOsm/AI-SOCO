#include <bits/stdc++.h>

#define all(v) (v).begin(), (v).end()
#define upmax(a, b) a = ((b > a) ? b : a)

using namespace std;
using ll = long long;

int main() {
    ios::sync_with_stdio(false), cin.tie(0);
    int n;
    cin >> n;
    if (n % 2) {
        cout << 0;
    }
    else {
        cout << (1LL << (n/2));
    }
    return 0;
}