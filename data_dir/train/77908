#include <bits/stdc++.h>
#define ll long long
using namespace std;
int main()
{
    //ifstream cin("in.in");
    ll sk, k, csk = 0;
    cin >> sk >> k;
    for(ll i = 0, iev;i < sk;i++)
    {
        cin >> iev;
        if(iev <= 5-k)csk++;
    }
    cout << csk/3;
    //cin.close();
    return 0;
}
