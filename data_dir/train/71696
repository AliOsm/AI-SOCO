const int MOD = 1E9+7;
const int INF=MOD;


int main(){
  init();
  int n;scan(n);vi v(n);scan(v);
  int t=0;for(int i:v)t+=i;if(t&1)return puts("0"),0;
  t/=2;
  int ac=v[0],ans=0;
  ff(i,1,n){
    if(ac==t)ans++;
    ac+=v[i];
  }
  pr(ans);
}

