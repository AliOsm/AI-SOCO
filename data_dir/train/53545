int main()
{
//    freopen("in.txt","r", stdin);
//    freopen("out.txt", "w", stdout);
//    cin.tie(0);
//    cout << fixed << setprecision(20);
    ios_base::sync_with_stdio(false);
    cin.tie(0);


    int n;
    cin >> n;
    string s;
    cin >> s;
    for (int i = 1; i < n; ++i) {
        if (s[i - 1] > s[i]) {
            cout << "YES\n";
            cout << i << ' ' << i + 1 << endl;
            return 0;
        }
    }
    cout << "NO\n";
}
