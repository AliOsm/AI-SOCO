#include <bits/stdc++.h>
#include <unordered_map>
#define ll long long
#define OO LONG_LONG_MAX
#define oo 1e9
#define yalla ios::sync_with_stdio(0),cin.tie(0),cout.tie(0);
#define sz  100005
#define re return
#define mod  1000000007
#define pi acos(-1)
using namespace std;
ll n,s,num,tot;
ll temp[sz],arr[sz];

ll calc_sum(ll k)
{ll sum=0;
  for(int i=1;i<=n;i++)
    temp[i]=arr[i]+(i*k);

sort(temp,temp+(n+1) );

  for(int i=1;i<=k;i++)
    sum+=temp[i];
re sum;
}
int main()
{yalla;
cin>>n>>s;
for(int i=1;i<=n;i++)
    cin>>arr[i];

ll fi=1,se=n,mid;
while(fi<=se)
{mid=(fi+se)/2;

 ll ans= calc_sum(mid);
  if(ans<=s)
    fi=mid+1,num=mid,tot=ans;
  else
    se=mid-1;
}
cout<<num<<" "<<tot<<endl;
 return 0;
}
