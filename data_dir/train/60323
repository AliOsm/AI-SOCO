using namespace std;
#define f(i,a,b) for(i=a;i<b;i++)
#define rep(i,n) f(i,0,n)
#define fd(i,a,b) for(i=a;i>=b;i--)
#define pb push_back
#define mp make_pair
#define vi vector< int >
#define vl vector< ll >
#define ss second
#define ff first
#define ll long long
#define pii pair< int,int >
#define pll pair< ll,ll >
#define sz(a) a.size()
#define inf (1000*1000*1000+5)
#define all(a) a.begin(),a.end()
#define tri pair<int,pii>
#define vii vector<pii>
#define vll vector<pll>
#define viii vector<tri>
#define mod (1000*1000*1000+7)
#define pqueue priority_queue< int >
#define pdqueue priority_queue< int,vi ,greater< int > >

//std::ios::sync_with_stdio(false);
int n,a[100005],dp[100005][2];
vector<vi>vec(100005);
int compute(int pos,int fl){
	if(vec[pos].size()==0){
		return dp[pos][fl]=0;
	}
	if(dp[pos][fl]!=-1){
		return dp[pos][fl];
	}
	int i;
	dp[pos][fl]=0;
	rep(i,vec[pos].size()){
		compute(vec[pos][i],fl^1);
		if(dp[vec[pos][i]][fl^1]==0){
			dp[pos][fl]=1;
		}
	}
	return dp[pos][fl];
}
int main(){
	std::ios::sync_with_stdio(false);
	cin>>n;
	int i,pos;
	rep(i,n){
		dp[i][0]=-1;
		dp[i][1]=-1;
		cin>>a[i];
	}	
	rep(i,n){
		pos=i;
		while(pos<n){
			if(a[pos]>a[i]){
				vec[i].pb(pos);
			}
			pos+=a[i];
		}
		pos=i;
		while(pos>=0){
			if(a[pos]>a[i]){
				vec[i].pb(pos);
			}
			pos-=a[i];
		}
	}
	rep(i,n){
		compute(i,0);
		if(dp[i][0]==1){
			cout<<"A";
		}
		else{
			cout<<"B";
		}
	}
} 
	