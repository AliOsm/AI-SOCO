    #include <bits/stdc++.h>

    using namespace std;
    typedef long long ll;
    typedef vector<ll> vl ;

    #define mp make_pair
    #define pb push_back
    #define f first
    #define s second
    #define all(v) (v).begin(),(v).end()

    const int MOD = 998244353;
    const int N = 1000005;
    const double PI =4*atan(1);

    ll n,m,k;
   

    int main(){
        ios::sync_with_stdio(0);
        //freopen("easy.txt","r",stdin);
        cin >> n >> m >> k;
        cout << (m*(m-1))/2 << endl;
        if(k==0){
            for(int i=0;i<m;i++){
                for(int j=i+1;j<m;j++){
                    cout <<i+1 << " " << j+1 << endl;
                }
            }
        }else{
            for(int i=0;i<m;i++){
                for(int j=i+1;j<m;j++){
                    cout << m-i << " " << m-j << endl;
                }
            }
        }
        
        return 0;
    }