#define M 100005
//////////////////////////////////////////


int main(){
    int k=Int;
    string s;
    cin>>s;
    multiset<char>ms;
    set<char>s1;


    for(int i=0;i<s.size();i++){
        ms.insert(s[i]);
        s1.insert(s[i]);
    }

    set<char>::iterator it=s1.begin();

    while(it!=s1.end()){
        int d=ms.count(*it);
        if(d%k!=0){
            printf("-1\n");
            done;
        }
        it++;
    }


    for(int i=1;i<=k;i++){
        it=s1.begin();
        while(it!=s1.end()){
            for(int j=1;j<=ms.count(*it)/k;j++) printf("%c",*it);
            it++;
        }
    }

    done;
}


