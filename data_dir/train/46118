#include<bits/stdc++.h>
using namespace std;
#define int long long int

signed main()
{
	ios::sync_with_stdio(0);cin.tie(0);cout.tie(0);

    //int t=1; cin>>t; while(t--)
    {
    	int t,x,s;
    	cin>>t>>s>>x;

    	cout << (( x>=t && x != t+1 && (x-t)%s < 2 ) ? "YES\n" : "NO\n");
    }

    cerr << "Time elapsed : " << 1.0 * clock() / CLOCKS_PER_SEC << " sec \n";
    return 0;
}
