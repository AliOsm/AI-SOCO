#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define ss second
#define ff first
#define pb push_back
#define mp make_pair
int n;

int main() {
    cin>>n;
    if(n%2==0)
    {
        cout<<"NO"<<endl;

        return 0;
    }
    cout<<"YES"<<endl;
    bool ok=1;
    for(int i=1;i<=n;i++)
    {
        cout<<i*2-ok<<' ';
        ok=!ok;

    }
    ok=0;
     for(int i=1;i<=n;i++)
    {
        cout<<i*2-ok<<' ';
        ok=!ok;

    }
    return 0;
}
