#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, ans, best;
int a[MAX];

int check( int x )
{
    int tmp = 0;
    for( int i = 1; i <= N; i ++ )
    {
        if( a[i] > x )
            tmp += a[i] - x - 1;
        else if( a[i] < x )
            tmp += x - a[i] - 1;
    }
    return tmp;
}

int main()
{
    optimiza_io
    cin >> N;
    for( int i = 1; i <= N; i ++ )
        cin >> a[i];
        
    for( int i = 1; i <= 100; i ++ )
        if( i == 1 or check( i ) < ans )
        {
            ans = check( i );
            best = i;
        }
    
    cout << best << " " << ans << "\n";
    return 0;
}

