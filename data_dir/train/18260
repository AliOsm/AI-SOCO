#include<bits/stdc++.h>
using namespace  std;
#define long long long int
long i,j,k,l,a,b,c,d,x,y,z,f,cnt,p=0,n,m,tc,ans;
string s,str,s1,s2,s3,st;

int main ()
{
    string s;
    cin >>s;
    int n   =  s.size();

    int   cnt1=0;
    int   cnt2=0;

      for(int i=0; i<n; i++)
        {
            if(s[i]=='o')
                cnt1++;
            else
                cnt2++;
        }

   if(  cnt1==0)
    {
          cout <<"YES"<<endl;
    }
   else  if(cnt1 == n  || cnt2%cnt1==0)
    {
        cout <<"YES"<<endl;
    }else
    {
           cout <<"NO"<<endl;
    }

}
