#include <algorithm>
#include <cmath>
#include <cstdio>
#include <cstdlib>
#include <cstring>
#include <iostream>
#include <string>
#include <vector>
#define SZ(x) ((int)(x).size())
#define FOR(it, c) for(__typeof((c).begin()) it = (c).begin(); it != (c).end(); ++it)
using namespace std;
typedef long long LL;

int main(void) {
  printf("2000\n");
  for(int i=1;i<=1000;i++)
    printf("%d 1 %d 2\n", i, i);
  for(int i=1000;i>=1;i--)
    printf("%d 1 %d 2\n", i, i);
  return 0;
}
