int as[int(1e6+2)];

int main() {
  ios::sync_with_stdio(false), cin.tie(NULL), cout.tie(NULL);
#ifndef ONLINE_JUDGE
  freopen("test.in", "rt", stdin);
//  freopen("o.txt", "wt", stdout);
#endif
  string s;
  cin >> s;

  int res = 0, cnt = 0, md = 1000000007;
  for (int i = sz(s) - 1; i >= 0; --i) {
    if (s[i] == 'b')
      cnt++;
    else {
      res += cnt, res %= md;
      cnt *= 2, cnt %= md;
    }
  }
  cout << res << endl;
  return 0;
}
