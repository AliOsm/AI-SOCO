#include<bits/stdc++.h>
#define int long long

using namespace std;

signed main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    
    int t, s, x;
    cin >> t >> s >> x;
    if (x < t)
        cout << "NO\n";
    else if (x == t)
        cout << "YES\n";
    else if (x == t + 1)
        cout << "NO\n";
    else if ((x - t) % s <= 1)
        cout << "YES\n";
    else
        cout << "NO\n";
    
    return 0;
}