#include<bits/stdc++.h>
using namespace std;

//#pragma gcc optimize("O3,unroll-loop")
//#pragma gcc target("sse,sse2,sse3,ssse3,sse4,avx,avx2,fma,abm,mmx,popcnt,tune=native")
//#define int long long
//#define double long double

signed main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);

    int k;
    cin >> k;

    int t = 1;
    while (t <= k)
        t *= 2;
    int o = t + k;

    cout << "3 4\n";
    cout << o << ' ' << k << ' ' << k << " 0\n";
    cout << t << " 0 " << k << " 0\n";
    cout << t << ' ' << t << ' ' << o << ' ' << k << '\n';

    return 0;
}

