#include<bits/stdc++.h>
 
using namespace std;
 
#define lli long long int
 
#define ulli unsigned long long int
 
int main(){
   
    ios_base::sync_with_stdio(false); cin.tie(nullptr); cout.tie(nullptr);
    
    int a,b,s;
    
    cin>>a>>b>>s;
    
    int x = abs(a)+abs(b);
    
    if(s < x){
    	
    	cout<<"No";
	}
	
	else{
		
		int y = s-x;
		
		if(y&1){
			
			cout<<"No";
		}
		
		else{
			
			cout<<"Yes";
		}
	}
}
