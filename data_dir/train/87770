const  int N=5e5+5,MOD=1e9+7;
LL ar[N],br[N];
LL a=0,b=0,c=0,r=0,rr=0,f=0,n,m,t=0,ks=0;
string  s,ss;


priority_queue<LL>st;


struct info

{
    LL x,y,z;
}arr[N];


bool com(info a,info b)
{
    return (a.x)<(b.x);
}
int main()
{
  // _CIN;
    cin>>n>>m;
    repp(i,n)  cin>>br[i]>>ar[i];
    LL ans=0;


    repp(i,n)
    {
        arr[i].x=br[i];   arr[i].y=ar[i];

        arr[i].z=i;
    }

    sort(arr+1,arr+n+1,com);
    repp(i,n)
    {
        //st.push(-arr[i].y);
        if(st.size()<m)  st.push(-arr[i].y);
        else if(len(st)>=m and  -st.top()<arr[i].y)
        {
            st.pop();   st.push(-arr[i].y);

            //D(n);
        }
        if((ans<(-st.top()-arr[i].x+1)  and len(st)>=m))
        {
            ans=(-st.top()-arr[i].x+1);  r=arr[i].x;

           // D(ans);
        }

        //D(ans);
    }

    cout<<ans<<endl;


    //cout<<ans;


    if(not ans)rep(i,m) cout<<i+1<<" ";

    repp(i,n)
    {

        if(m<=0 or not ans)  break;

        if(arr[i].x<=r  and    (ans+r-1)<=arr[i].y)
        {

            m--;

            cout<<arr[i].z<<" ";

            //cout<<i<<" ";

        }

    }

   // D(m);

    cout<<endl;





   return 0;

}
