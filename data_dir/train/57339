#pragma GCC optimize ("O3")
#include <bits/stdc++.h>
#define abdelrahman001 ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
typedef long long ll;
using namespace std;

int main()
{
	abdelrahman001
	ll t,n,k;
	cin >> t;
	while(t--)
	{
		cin >> n >> k;
		ll cnt = n/k;
		ll ans = cnt * k;
		ans+=min(n - cnt*k,k/2);
		cout << ans << '\n';
	}
	return 0;
}
