#include<bits/stdc++.h>
using namespace std;
int main()
{
	int n;
	cin>>n;
	string s;
	cin>>s;
	int ctr=0;
	for(int i=0;i<s.length()-1;i++)
	{
		if(s[i]==s[i+1])
		{
			if(i<n-2)
				{if(s[i+1]=='R')
				{
					if(s[i+2]=='R')
					{
						s[i+1]='G';
					}
					else if(s[i+2]=='G')
					{
						s[i+1]='B';
					}
					else
					{
						s[i+1]='G';
					}


				}
				else if(s[i+1]=='G')
				{
					if(s[i+2]=='G')
					{
						s[i+1]='R';
					}
					else if(s[i+2]=='B')
					{
						s[i+1]='R';
					}
					else if(s[i+2]=='R')
					{
						s[i+1]='B';
					}

				}
				else if(s[i+1]=='B')
				{
					if(s[i+2]=='R')
					{
						s[i+1]='G';
					}
					else if(s[i+2]=='B')
					{
						s[i+1]='G';
					}
					else if(s[i+2]=='G')
					{
						s[i+1]='R';
					}

				

			}}
			else
			{
				if(s[i+1]=='R')
				{
					s[i+1]='G';
				}
				else if(s[i+1]=='G')
				{
					s[i+1]='R';
				}
				else if(s[i+1]=='B')
				{
					s[i+1]='R';
				}
			}
			ctr++;
		}
	}
	cout<<ctr;
	cout<<endl<<s;
}