typedef long long int64;
typedef unsigned long long uint64;
typedef unsigned int uint32;
typedef long double ldd;
const int N = 300000;
using namespace std;

int n, m;
int64 a, b, k;
int64 s(int64 a)
{
    if (a < 0)
        return 0;
    return a / k + 1; 
}

void solve()
{
    
    cin >> k >> a >> b;
    if (a <= 0 && b >= 0)
    {
        cout << s(abs(a)) + s(b) - 1;
    }
    else
    {
        a = abs(a);
        b = abs(b);
        if (b < a)
            swap(a, b);
        cout << s(b) - s(a - 1);  
    }
}


int main()
{
   // ios_base::sync_with_stdio(false); cin.tie(0);
#ifdef _MY_DEBUG
    freopen("input.txt", "rt", stdin); freopen("output.txt", "wt", stdout);
#endif
    srand(1337);
    solve();
    return 0;
}