#include <algorithm>
#include <numeric>
#include <functional>

using namespace std;

typedef unsigned char uchar;
typedef unsigned int uint;
typedef unsigned long long uint64;
typedef long long sint64;

#define PI 3.1415926535897932384626433832795
#define EPS 1E-8

int main(int argc, char* argv[])
{
    uint64 k, n, w;
    cin >> k >> n >> w;

    uint64 s = k * (w + 1) * w / 2,
        r = s < n ? 0 : s - n;

    cout << r << endl;
    return 0;
}
