#include<bits/stdc++.h>
#define ll long long
#define pb push_back
#define fr first
#define sc second
#define r_0 return 0
#define fin freopen( "input.txt", "r" , stdin );
#define fout freopen( "output.txt", "w" , stdout );
using namespace std;

const ll N = 1e5 + 1 ;

ll n , m , k , l , x , y , z , cnt , ans , sum , mx , mn = -1e18 ;

ll a[N];
string s , t ;

int main()
{
    ios_base::sync_with_stdio(0);

    cin >> n ;
    vector < int >v ;
    for ( int i = 2; i <= n + 1 ;i ++ ){
        x = 0;
        for ( int j = 2; j <= sqrt ( i ); j ++ ){
            if ( i % j == 0 ){
                v.pb ( 2 );
            x = 1 ;
            break;
            }
        }
    if ( !x )
        v.pb ( 1 );
    }
    cout << *max_element( v.begin() , v.end() ) << endl ;
    for ( int i = 0 ; i <v.size(); i ++ )cout << v[i] << " ";

}


















