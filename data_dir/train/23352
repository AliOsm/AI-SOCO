#include<iostream>
#include<cstdio>
#include<cmath>
#include<vector>
using namespace std;
int n,m;
int main()
{
    int i;
    scanf("%d %d",&n,&m);
    printf("%d\n",n+m-1);
    for(i=0;i<n;i++)
        printf("%d 1\n",i+1);
    for(i=1;i<m;i++)
        printf("1 %d\n",i+1);
    return 0;
}
