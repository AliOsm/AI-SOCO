#include<bits/stdc++.h>
#define ll long long
#define ld long double
#define se second
#define fr first
#define pb push_back
using namespace std;
ll a[200],b[200],i,j,k,l,m,n,s,t;
int main(){
	cin>>n;
	for(i=0;i<n;i++)
	{
		cin>>a[i];
		m+=a[i];
		if(i==0||2*a[i]<=a[0]){
			b[k++]=i+1;
			s+=a[i];

		}
	}
	if(2*s<=m){ cout<<"0";}
	else{
		cout<<k<<endl;
		for(i=0;i<k;i++)
		{
			cout<<b[i]<<" ";
		}
	}
}
