#include <bits/stdc++.h>

using namespace std;
typedef long long ll ;
const int N = 2e5 + 4;
int a[N];
int main()
{

    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    int n ;
    cin >> n;
    bool c = 0;
    for(int i = 0 ; i < n ; ++i){
        if(i & 1) c = 1 ;
        else c = 0;
        for(int j = 0  ; j < n ; ++j){
            if(c) cout << "B";
            else cout << "W";
            c^=1;
        }
        cout << endl;
    }

    return 0;
}
