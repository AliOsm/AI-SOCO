#include<iostream>
#include<algorithm>
#include<string>
#include<vector>
#include<fstream>
#include<map>
#include<set>
#include<iomanip>
#include<cmath>
#include<numeric>
using namespace std;
int main()
{
	int n, x, even = 0, odd = 0, i,sum=0;
	cin >> n;
	for (i = 0; i < n; i++)
	{
		cin >> x;
		sum += x;
		if (x % 2 == 0)even++;
		else odd++;
	}
	if (sum % 2 == 0)cout << even << endl;
	else cout << odd << endl;
	return 0;
}