#include <bits/stdc++.h>

using namespace std;
/*
 2003905434

 1990700287
 */
int main() {
	int n;
	scanf("%d", &n);
	long long ans = n * 1LL * (n + 1) / 2LL;
	vector<long long> v(n + 1), cnt(n + 1, 0);
	for (int i = 1; i <= n; i++)
		scanf("%lld", &v[i]);
	map<long long, long long> mp, vis;
	mp[0] = 0;
	vis[0] = 1;
	long long mx = 0;
	for (int i = 1; i <= n; i++) {
		cnt[i] = cnt[i - 1] + v[i];
		if (vis[cnt[i]]) {
			long long l = mp[cnt[i]] - mx;
			long long r = n - i;
			if (l >= 0) {
				ans -= (l * r) + l + r;
				ans--;
			}
			mx = max(mp[cnt[i]] + 1, mx);
		}
		mp[cnt[i]] = i;
		vis[cnt[i]] = 1;
	}
	printf("%lld\n", ans);
}
