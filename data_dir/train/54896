#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;

    vector<int>vec;
    while(n > 3)
    {

        vec.push_back(2);
        n-=2;
    }
    if(n==2) vec.push_back(2);
    else if(n==3) vec.push_back(3);
    cout<<vec.size()<<endl;
    for(int i = 0 ; i<vec.size() ; i++) cout<<vec[i]<<" ";
    return 0;
}
