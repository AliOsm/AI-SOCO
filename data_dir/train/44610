#include<bits/stdc++.h>
using namespace std;
const int MAXN=1e5+5;
int a[MAXN];
int main()
{
	int n,now=0,t;
	scanf("%d",&n);
	for(int i=1;i<=n;i++)
	{
		scanf("%d",&a[i]);
		if(a[i]%2==0)
		{
			t=1;
		}
		else
		{
			t=0;
		}
		now^=t;
		if(now)
		{
			printf("1\n");
		}
		else
		{
			printf("2\n");
		}
	}
}