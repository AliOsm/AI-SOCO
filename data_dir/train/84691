#include <iostream>
using namespace std;
int main() {
	long long t ;
	cin >> t; 
	while(t-->0)
	{
		long long n;
		cin >> n ;
		char c[n];
		cin >> c;
		if(n==2 && (c[0]>=c[1]))
		{
				cout << "NO" << endl;
		}
		else
		{
			cout << "YES" << endl << 2 << endl << c[0] << " " ;
			for(int i = 1 ; i < n ; i++)
				cout << c[i];
				cout << endl;
		}
	}
	return 0;
}