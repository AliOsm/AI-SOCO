#include <bits/stdc++.h>
#define MOD 1000000007
#define Nmax 1000005
#define pb push_back
#define mp make_pair
#define INF 1000000000
#define eps 0.000000000001

using namespace std;

bool viz[Nmax];

inline int Pow_Log(int x, int p)
{
    int sol=1;
    while(p)
    {
        if(p&1)
        {
            sol=(1LL*sol*x)%MOD; --p;
        }
        p>>=1; x=(1LL*x*x)%MOD;
    }
    return sol;
}

int main()
{
    int i,j,p,k,nr=0;
    #ifndef ONLINE_JUDGE
        freopen ("date.in","r",stdin);
        freopen ("date.out","w",stdout);
    #endif
    cin.sync_with_stdio(0);
    cin>>p>>k;
    if(!k)
    {
        cout<<Pow_Log(p,p-1); return 0;
    }
    if(k==1)
    {
        cout<<Pow_Log(p,p); return 0;
    }
    for(i=1;i<p;++i)
    {
        if(viz[i]) continue;
        ++nr;
        for(j=i;!viz[j];j=(1LL*j*k)%p) viz[j]=true;
    }
    cout<<Pow_Log(p,nr);
    return 0;
}
