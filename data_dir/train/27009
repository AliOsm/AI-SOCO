int main() {
	int n;
	cin >> n;
	if (n == 3) {
		cout << "2\n1 3\n";
		return 0;
	}
	if (n == 4) {
		cout << "4\n2 4 1 3\n";
		return 0;
	}
	if (n == 2) {
		cout << "1\n1\n";
		return 0;
	}
	cout << n << endl;
	for(int i = 1; i <= n; i += 2)
		printf("%d ", i);

	for (int i = 2; i <= n; i += 2)
		printf("%d ", i);

	cout << endl;
	
	return 0;


}
