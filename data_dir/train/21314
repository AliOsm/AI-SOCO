#include<iostream>
#include<cmath>
#include<cstdio>
using namespace std;

int main(){
	int a;
	scanf("%d", &a);
	int b = a;
	int o1 = 0;
	while (true){
		a += 1;
		o1++;
		int k = abs(a);
		bool q = false;
		while (k > 0) {
			int c = k % 10;
			if (c == 8) q = true;
			k /= 10;
		}
		if (q) break;
	}
	printf("%d", o1);
}
