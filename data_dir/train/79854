#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n;
    scanf("%d", &n);
    string s1 = "";
    string s2 = "";
    for(int i=0; i<n; i++){
        if(i%2 == 0) s1 += 'W';
        else s1 += 'B';

        if(i%2 == 0) s2 += 'B';
        else s2 += 'W';
    }
    for(int i=0; i<n; i++){
        if(i%2 == 0) cout << s1 << endl;
        else cout << s2 << endl;
    }
}

