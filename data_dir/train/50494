#include<bits/stdc++.h>
using namespace std;
int main(){
    int n,x,b[1001]={0},y=0;
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>x;
        b[x]++;
    }
    x=0;
    for(int i=0;i<1001;i++){
        if(b[i])x++;
        y=max(y,b[i]);
    }
    cout<<y<<" "<<x;
    return 0;
}
