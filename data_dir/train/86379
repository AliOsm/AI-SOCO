#include<bits/stdc++.h>
#define N 100005
#define M 2000
#define int long long
#define pb push_back
#define x first
#define y second
#define all(v) v.begin(),v.end()
#define coffee prince
#define sz(a) (int)a.size()
#define ll long long
#define SIZE N
using namespace std;
int n,a,sum;

signed main(){
	ios_base::sync_with_stdio(0);
	cin.tie(0); 
	cout.tie(0);
	cin>>n;
	for(int i=0;i<n;i++){
	    cin>>a;
	    sum+=a;
	}
	if(n==1&&sum==1){
	    cout<<"YES";
	    return 0;
	}
	if(n==1&&sum==0){
	    cout<<"NO";
	    return 0;
	}
	if(sum==n-1)cout<<"YES";
	else cout<<"NO";
	
}