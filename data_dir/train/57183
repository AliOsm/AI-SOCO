int main(){
	//read; write;
	ll c[3];
	cin >> c[0] >> c[1] >> c[2];
	sort(c, c + 3);
	if (c[0] == c[2])c[0] --;
	if (c[1] == c[2])c[1] --;
	cout << c[2] * 2 - c[0] - c[1] - 2;
	return 0;
}