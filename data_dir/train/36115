//#define HMOD (1000000000000000003LL)
//#ifdef _MY_DEBUG
//#define HMOD 1000000007
//#endif
//#define HBASE 524287

//mt19937 ggen;
const int MAXN = 300100;
int mas[MAXN];
int n, k;
void solve()
{
	cin >> n >> k;
	pii ans(-1, -1);
	for(int i = 0; i < n; ++i)
	{
		cin >> mas[i];
	}
	int l = 0;
	for(int i = 0; i < n; ++i)
	{
		while((k > 0 || (k == 0 && mas[l])) && l < n)
		{
			k -= !mas[l];
			l++;
		}
		ans = max(pii(l - i, i), ans);
		k += !mas[i];
	}
	for(int i = ans.second; i < ans.second + ans.first; ++i)
		mas[i] = 1;

	cout << ans.first << '\n';
	for(int i = 0; i < n; ++i)
		cout << mas[i] << ' ';

}

int main()
{
    ios_base::sync_with_stdio(false); cin.tie(0);
#ifdef _MY_DEBUG
    freopen("input.txt", "rt", stdin); freopen("output.txt", "wt", stdout);
#else
    //freopen(TASK ".in", "rt", stdin); freopen(TASK ".out", "wt", stdout);
#endif
    srand(1313);
  
	solve();
	
    return 0;
}