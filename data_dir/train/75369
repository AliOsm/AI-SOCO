using namespace std;

const int INF = 2e9;
const int MOD = 1e9 + 7;

int check(int a, int b, int c) {
	int one = a;
	int two = b;
	if (one < two) {
		int x = min(c, two - one);
		one += x;
		c -= x;
	}
	if (two < one) {
		int x = min(c, one - two);
		two += x;
		c -= x;
	}

	if (one == two) {
		one += c / 2;
		two += c / 2;
	}
	return min(one, two);
}

void solve() {
	int t;
	cin >> t;
	for (int i = 0; i < t; i++) {
		int a, b, c;
		cin >> a >> b >> c;
		int ans = check(a, b, c);
		ans = max(ans, check(b, c, a));
		ans = max(ans, check(c, a, b));
		cout << ans << '\n';
	}
}


signed main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	cout.tie(nullptr);
	cout.precision(12);
	/*
	freopen("distance4.in", "r", stdin);
	freopen("distance4.out", "w", stdout);
	*/
	solve();
}