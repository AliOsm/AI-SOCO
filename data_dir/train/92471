#include <bits/stdc++.h>

using namespace std;
typedef long long ll;

int main ()
{
    ios_base::sync_with_stdio(false);
    int n, y, x[3] = {0}; cin >> n;
    while(n--) cin >> y, x[y]++;
    if(x[1] > x[2]) cout << x[2] + (x[1]-x[2])/3 << endl;
    else cout << x[1] << endl;
    return 0;
}
