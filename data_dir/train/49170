#include <bits/stdc++.h>
#define int long long
using namespace std;
#define IOS ios::sync_with_stdio(false) , cin.tie(0) , cout.tie(0)
inline int in(){int32_t x ; scanf("%d",&x) ; return x ; }
inline long long lin(){long long x ; scanf("%lld",&x) ; return x ;}
const int maxn = 1e6 + 10;
int32_t main()
{
    int T = in() , S = in() , q = in();
    int ret = 0;
    while (S < T)
    {
        S = q * S;
        ret ++;
    }
    cout << ret << endl;
}
