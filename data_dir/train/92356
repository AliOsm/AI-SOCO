using namespace std;

const long long int MOD = 1000000007;
//const long long  int MOD = 998244353;
//long long int N, M, K, H, W, L, R;

long long int N, M, K, H, W, L, R;

int gcd(int a, int b) {
	while (b) {
		a %= b;
		swap(a, b);
	}
	return a;
}

int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);

	cin >> N;
	for (int i = (N - 1) / 2; i >= 1; i--) {
		if (gcd(i,N-i)!=1)continue;
		cout << i << " " << N - i << endl;
		return 0;
	}
	return 0;
}