#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef long double ld;
const ld pi=acos(-1);
void solve(){
    ll n;cin>>n;
    ld num = cos(pi/(4.0*n));
    ld dem = sin(pi/(2.0*n));
    cout<<fixed<<setprecision(18)<<num/dem<<"\n";
}
int main(){
    ios_base:: sync_with_stdio(false);
    cin.tie(NULL); cout.tie(NULL);
    ll t;cin>>t;
    while(t--)solve();
}
