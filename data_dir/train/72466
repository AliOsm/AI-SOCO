#include <bits/stdc++.h>
using namespace std;
 
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define endl "\n"
#define int long long
#define double long double

int32_t main()
{
    IOS;
    int w1,h1,w2,h2;
    cin>>w1>>h1>>w2>>h2;
    int ans=h1*2+2*(w1+2);
    ans+=(h2-1)*2+w2+2;
    ans-=w2;
    cout<<ans;
}