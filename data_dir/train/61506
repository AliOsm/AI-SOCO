#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
const ll maxn = 5e5;

#define pb push_back

ll n, a[maxn], x, ans , m;
int main(){
  cin >> n >> m >> x;
  for(int i = 1; i <= n; i++){
    cin >> a[i];
  }
  for(int i = 1; i <= n - m; i++){
    ans += a[i];
  }
  cout << ans + m * x;
}
