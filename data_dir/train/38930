#pragma GCC optimize ("O3")
#include <bits/stdc++.h>
#define abdelrahman001 ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
typedef long long ll;
using namespace std;
int main()
{
    abdelrahman001
    ll n;
    cin >> n;
    for(int i = 0;i<n;i++,cout << endl)
        for(int j = 0;j<n;j++)
            if((i&1 && j&1) || (!(i&1) && !(j&1)))
                cout << 'W';
            else
                cout << 'B';
    return 0;
}
