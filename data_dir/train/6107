#include<bits/stdc++.h>
using namespace std;
#define m1 make_pair
#define ll long long int
/*
  CREATED BY VISHAL SOM:
  DATE:24/10/18 
  VRC
*/
int main()
{
  int w,h,k;
  cin>>w>>h>>k;int ans=0,l,b;
  for(int i=1;i<=k;i++)
  {
    l=w-4*(i-1);
    b=h-4*(i-1);
    ans=ans+2*(l+b)-4;
  }
  cout<<ans<<endl;
}
