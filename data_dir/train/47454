#include <algorithm>
#include <cmath>
#include <cstdio>
#include <cstdlib>
#include <cstring>
#include <iostream>
using namespace std;

int main(void)
{
    int m, n;
    int i;
    double o;

    scanf("%d %d", &m, &n);

    for(i = 1, o = m; i < m; i ++)
        o -= pow((double)i / m, n);

    printf("%.5lf\n", o);
    
    return 0;
}