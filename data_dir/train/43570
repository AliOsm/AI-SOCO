int main () {
    ios_base :: sync_with_stdio(false);
    cin.tie(0);
    cin >> q;
    rep(i, 1, q) {
        cin >> n;
        cin >> s;
        if (n == 1 || (n == 2 && s[0] >= s[1])) {
            cout << "NO" << endl;
            continue;
        }
        cout << "YES" << endl;
        cout << 2 << endl;
