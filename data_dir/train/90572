#include<bits/stdc++.h>
#define ll long long
#define f first
#define s second
#define mp make_pair
#define bp push_back
const int mx=1e5+10;
using namespace std;
ll a[mx],b[mx];
main(){
ios::sync_with_stdio(0);
cin.tie(0);
cout.tie(0);
int n;
cin>>n;
for(int i=0;i<n;i++){
	cin>>a[i];
}
sort(a,a+n);
for(int i=0;i<n/2;i++){
	cout<<a[i]<<" "<<a[n-i-1]<<" ";
}
if(n%2){
	cout<<a[n/2];
}
}
