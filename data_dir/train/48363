#include <bits/stdc++.h>
#define ll long long
#define en cin.close();return 0;
#define fio ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
#define INF 150005
#define INF2 ((ll)(1e18))
using namespace std;
int main()
{
    fio;
    //ifstream cin("in.inn");
    ll n;
    cin >> n;
    for(ll i = 0;i < n;i++)
    {
        for(ll a = 0;a < n;a++)
            cout << (((i+a)%2)?'W':'B');
        cout << "\n";
    }
    //cin.close();
    return 0;
}
