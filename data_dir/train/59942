#include <bits/stdc++.h>

using namespace std;

#define ll long long

int main()
{
    //freopen("in.txt", "r", stdin);
    ll n;
    cin >> n;
    ll p = (ll)sqrt(n);
    ll obo = n-p*p;
    if(obo%p == 0) obo = obo/p;
    else obo = obo/p + 1;
    ll tot = p*4 + obo*2;
    cout << tot;
}

