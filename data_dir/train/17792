#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <cstdio>
#include <map>
#include <queue>
#include <cstring>
#include <cstdlib>
#include <set>
using namespace std;
#define INF 2001001001
#define MOD 1000000007
typedef long long ll;

int N,arr[1001];

int main()
{
  ios_base::sync_with_stdio(0);cin.tie(0);
  cin>>N;
  for (int i=0;i<N;i++)
    cin>>arr[i];
  sort(arr,arr+N);
  cout<<arr[N-1]-arr[0]+1-N<<endl;
  return 0;
}
