#include <iostream>
#include <cstdio>
#include <algorithm>
#include <cmath>
#include <string>
#include <vector>
#include <stack>
#include <queue>
#include <set>
#include <cstring>
#include <cstdlib>
#include <map>
#define f first
#define s second
#define ll long long
#define ull unsigned long long
#define mp make_pair
#define pb push_back
#define vi vector <int>
#define pii pair<int , int>
using namespace std;
const int N = int(2e5);
int mn,n,a,p;

int main () {
    cin >> n;
    mn = int(1e9);
    ll ans = 0;
    for(int i=1;i<=n;i++){
        cin >> a >> p;
        mn = min(mn,p);
        ans += 1ll * mn * a;
    }
    cout << ans;
    

return 0;
}
