#include <bits/stdc++.h>

#define ll long long
#define pii pair<int,int>
#define piii pair<pii,int>
#define fr first
#define sc second
#define mp make_pair
#define pb push_back
#define LOGN (ll) (20)
#define all(x) (x).begin(),(x).end()
int OO=1e9;
int const N = 3e5 + 10;
int const M = 1e6 + 10;
using namespace std;

int main(){
    int n;
    string s;
    cin >> n >> s;
    for(int i=s.size()-2;i>=0;i--){
        if(s[i]>s[i+1]){
            return cout <<"Yes\n"<< i+1 << " " << i+2,0;
        }
    }
    cout << "No";
}
