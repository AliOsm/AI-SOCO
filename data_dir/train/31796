using namespace std;
typedef long long ll;
typedef long double ld;
int main(){
    ll n;
    while(cin>>n){
        ll ans, sm=0, tmp=0;
        sm=n*(n+1)/2;
        ans=sm%2;
        cout<<ans<<endl;
    }
  return 0;
}


