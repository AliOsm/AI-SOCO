void correct(int n)
{

    for (int i=1;i<n;i++)
    {
        printf("%d %d\n",i,i+1);
    }
}
void incorrect(int n)
{

    if (n<6){printf("-1\n");}
    else {
         printf("1 2\n");
         printf("1 3\n");
         printf("1 4\n");
         for (int i=5;i<=n;i++)
         {
              printf("2 %d\n",i);
         }
    }
}
double EPS = 0.000000000001 ;
int main()
{

    // fqreopen("input.txt","r",stdin);
    //freopen("output.txt","w",stdout);

   int n;
   scanf("%d",&n);
   incorrect(n);
   correct(n);

    return 0;
}
