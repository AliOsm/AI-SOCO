#include<bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef long double ld;
typedef vector<ll> vec;
typedef pair<ll,ll> pair;

#define ff first
#define ss second
#define pb push_back
#define mp make_pair
#define M 1
#define LM LLONG_MAX

int main(){

    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
    ll a,b;
    cin>>a>>b;
    
    if(a==0 && b==0)
        cout<<"NO";
    else if(a==b || abs(a-b)==1)
        cout<<"YES";
    else
        cout<<"NO";
   
}