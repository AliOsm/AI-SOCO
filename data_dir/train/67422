#include<bits/stdc++.h>
using namespace std;
typedef long long  ll;
typedef pair<ll, ll>pii;
//typedef bitset<14> mask;
//int x4[4]={1,0,0,-1};
//int y4[4]={0,1,-1,0};
ll n,ans;

int main()
{
//freopen("hotel.in","r",stdin);
//freopen("math.in","w",stdout);
cin>>n;
for(int i=1;i<=n/2;i++)
    ans+=i*2;
if(n%2==1)
    ans+=(n/2)+1;
cout<<ans;
return 0;
}
