#include<math.h>
#include <limits.h>
#include <numeric>
#include <functional>
#include<fstream>
using namespace std;

#define mod  
#define ll  long long
#define endl "\n"
int main()
{
	ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
	string s;
	cin >> s;
	int c = 0;
	for (int i = 0; i < s.length(); i++) {
		if (s[i] == '1')
			c++;
	}
	cout << (c == 1||c==0 ? s.length() / 2 : (s.length() + 1) / 2) << endl;
	return 0;
}