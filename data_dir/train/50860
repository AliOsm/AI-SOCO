#include <bits/stdc++.h>
using namespace std;

#define fr(i,n)    for(int i=0;i<n;i++)
#define fru(i,a,b) for(int i=a;i<=b;i++)
#define frd(i,a,b) for(int i=a;i>=b;i--)

typedef long long   ll;
typedef long double ld;
	
const int INF = 2e9 + 10;
const int MOD = 1e9 + 7;
const int N   = 1e3 + 10;

int n;
int a[N];

int main() {
   ios_base::sync_with_stdio(0);
   cout.tie(0); cin.tie(0);
   
   cin >> n;
   
   ll sum = 1LL * (n + 1) * n / 2;
   
   if(sum % 2) {
      cout << 1 << "\n";
   } else {
      cout << 0 << "\n";
   }
   
   vector<int> vec;
   sum = sum / 2;
   
   frd(i, n, 1) {
      if(sum >= i) {
         sum -= i;
         vec.push_back(i);
      }
   }
   
   cout << (int)vec.size() << "\n";
   fr(i, (int)vec.size()) {
      cout << vec[i] << " ";
   }
   
   return 0;
}