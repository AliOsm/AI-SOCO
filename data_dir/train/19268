#include <bits/stdc++.h>
#define ll long long
#define ld long double
#define ull unsigned ll
#define pb push_back
#define mp make_pair
#define y1 hjfgszfkjhd
#define exp safdgsdfgsdf
#define F first
#define S second

using namespace std;

const ll MIN = 1e3 + 2;
const ll MXN = 1e6 + 3;
const ll INF = 1e9 + 7;
const ll LINF = 1e18 + 15;
const ld EPS = 1e-9;

ll n, a[MXN], ans;

int main(){
    //freopen ("sum.in", "r", stdin);
    //freopen ("sum.out", "w", stdout);
    cin >> n;
    for (ll i = 1; i <= n; i++){
        cin >> a[i];
    }
    sort (a + 1, a + n + 1);
    for (ll i = 1; i <= n; i++){
        ans += abs (a[i] - i);
    }
    cout << ans;
return 0;
}
