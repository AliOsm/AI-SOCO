const int inf = 2009000999;
const double eps = 1e-4;
const int maxn = 1e5 + 500;
const int base = 1073741789;
const ll basell = 1e18 + 3;

string itosm(ll x){
    string ans = "";
    while(x > 0){
        ans +=((x%10) + '0');
        x/=10;
    }
    reverse(ans.begin(), ans.end());
    return ans;
}

ll stoim(string str){
    ll ans = 0;
    ll k = 1;
    for(int i = str.length()-1; i >= 0; i--){
        ans+=(str[i]-'0')*k;
        k*=10;
    }
    return ans;
}

int main(){
    //fast_io;
    int a, b;
    cin >> a >> b;
    if(a == 0 && b == 0){
        cout << "NO";
        return 0;
    }
    int c = abs(a - b);
    if(c <= 1)
        cout << "YES";
    else
        cout << "NO";
    return 0;
}