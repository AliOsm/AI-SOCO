#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
#define what_is(x) cerr << #x << " is " << x << endl;
#define pii pair < int , int >
#define fi first
#define se second
using namespace std;
typedef long long ll;

ll T, N, K;

int main()
{
    optimiza_io
    cin >> T;
    while( T -- ) {
        cin >> N >> K;
        ll sm = N;
        for( ll i = 2; i * i <= N; i ++ )
            if( N % i == 0 ) 
                sm = min( sm , i );
        cout << N + sm + ( K - 1 ) * 2 << "\n"; 
    }
    return 0;
}

