
#include<bits/stdc++.h>
using namespace std;

#define LL                  long long
#define ull                 unsigned long long int
#define scl(n)              scanf("%lld", &n)
#define scf(n)              scanf("%lf", &n)
#define sci(n)              scanf("%d", &n)
#define scii(n,m)           scanf("%d %d",&n,&m)
#define sciii(n,m,p)        scanf("%d %d %d",&n,&m,&p)

#define MOD                 1000000007
#define MODP                99999999999973LL
#define pb                  push_back
#define mp                  make_pair
#define pp                  pair<int,int>
#define memo(a,b)           memset(a,b,sizeof(a))
#define INF                 1e9
#define EPS                 1e-8
#define Pi                  acos(-1.0)

#define N 200005

int main()
{

    int q;
    sci(q);

    while(q--)
    {
        LL a,b;
        cin>>a>>b;

        a--;

        LL tot;

        if(b%2==0)
            tot=b/2;
        else
            tot=b/2-b;

        LL mn;

        if(a%2==0)
            mn=a/2;
        else
            mn=a/2-a;

        cout<<tot-mn<<endl;


    }



    return 0;
}

