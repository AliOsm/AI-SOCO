#define re return(0);
typedef long long ll;
typedef long double ld;
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <string>
#include <cstring>
#include <set>
#include <iomanip>

using namespace std;
double const pi=3.1415926536;
int main()
{
	string a,s;
	cin>>s;
	a=s;
	reverse(&a[0],&a[a.length()]);
	if(a==s)
	{
		for(int i=0;i<a.length();i++)
		{
			if(a[i]!='A' && a[i]!='H' && a[i]!='I' && a[i]!='M' && a[i]!='O' && a[i]!='T' && a[i]!='U' && a[i]!='V' && a[i]!='W' && a[i]!='X' && a[i]!='Y')
			{
				cout<<"NO";
				re;
			}
		}
		cout<<"YES";
	}
	else
	cout<<"NO";
	
}
