using namespace std;

const int N = 2 * 1000 + 5;
int n, a, b;
int chores[N];
int main() 
{
	cin >> n >> a >> b;
	for (int i = 0; i < n; i++)
	{
		cin >> chores[i];
	}
	sort(chores, chores + n);
	cout << chores[n - a ] - chores[n - a - 1] << endl;



	
}


