#include<bits/stdc++.h>
#define  ll long long
using namespace std;

ll n, m, a, b, c;

int main (){
    ll n,m,mn,mx;
    cin >> n >> m;
    long long k = n - (m - 1);
    mx = (k *( k - 1)) / 2;
    k = n / m;
    ll cnt = n % m;
    ll j = m - cnt;
    ll v = k + 1;
    mn = cnt * ((v * (v - 1)) / 2) + j *( (k * (k - 1)) / 2);
    cout<<mn<<" "<<mx;
}
