/*
0303A. Lucky Permutation Triple
*/

#include<bits/stdc++.h>
using namespace std;

typedef long long ll;
typedef unsigned long long ull;
typedef long double ld;

#define mp make_pair
#define pb push_back
#define F(i,a,b) for(ll i = (ll)(a); i <= (ll)(b); i++)
#define RF(i,a,b) for(ll i = (ll)(a); i >= (ll)(b); i--)

const ll prime = 1e9 + 7;
const ll maxN = 2e6;

int main(){
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  
  ll n;
  cin >> n;
  if(n%2 == 1){
    F(i,0,n-1){cout << i << " ";} cout << endl;
    F(i,0,n-1){cout << i << " ";} cout << endl;
    F(i,0,n-1){cout << (2*i)%n << " ";}
  }
  else if(n%2 == 0){
    cout << -1;
  }
  
  return 0;
}