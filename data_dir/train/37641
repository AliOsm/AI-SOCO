#include<iostream>
#include<string>
using namespace std;
int main()
{
	int a, b, c = 0, d = 0;
	cin >> a >> b;
	while (a > 0 && b > 0)
	{
		a--;
		b--;
		c++;
	}
	if (a == 0 && b>0)
	{
		d = int(b / 2);
	}
	else if (b == 0 && a>0)
	{
		d = int(a / 2);
	}

	cout << c << " " << d;
	return 0;
}