typedef long long LL;
typedef struct data sd;
int main()
{
    //use %I64d
 //   read;
    int n, k1, k2, i, j, cnt=0, moves=0;
    queue<int>A, B;
    in(n);
    in(k1);
    while (k1--) {in(j); A.push(j);}
    in(k2);
    while (k2--) {in(j); B.push(j);}

    while (!A.empty()&&!B.empty())
    {
        cnt++;
        if (cnt>1000000) {pr(-1); return 0;}
        moves++;
      //  pr2(A.front(), B.front());
        if (A.front()<B.front())
        {
            B.push(A.front());
            B.push(B.front());
        }
        else if (A.front()>B.front())
        {
            A.push(B.front());
            A.push(A.front());
        }

        A.pop();
        B.pop();
    }
pr(moves);

if (A.empty()) pr(2);
else pr(1);
//file?
return 0;
}
