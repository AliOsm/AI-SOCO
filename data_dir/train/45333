#include<bits/stdc++.h>
using namespace std;

#define F first
#define S second
#define PB push_back
#define all(x) x.begin(), x.end()
#define div dv
typedef long long ll; 
typedef long double ld;
typedef pair<ll, ll> pll;

const int N = 1e6 + 10; 
int mod = 1e9 + 7;

int32_t main()
{
	ios::sync_with_stdio(0); cin.tie(0);
	int t;
	cin>> t;
	while(t--)
	{
		int n, x, a, b;
		cin>> n >> x >> a >> b;
		cout<< min(n - 1, abs(a - b) + x) << '\n';
	}
}	
