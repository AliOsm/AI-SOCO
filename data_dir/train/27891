#include<bits/stdc++.h>
#define MAX 200005
#define optimiza_io cin.tie(0); ios_base::sync_with_stdio(0);
using namespace std;
typedef long long i64;

int N, nice;
int a[MAX];
int mp[MAX];

int main()
{
    optimiza_io
    cin >> N;
    int si = -1;
    for( int i = 1; i <= N; i ++ )
    {
        cin >> a[i];
        mp[a[i]]++;
        if( mp[a[i]] == 1) nice++;
        if( mp[a[i]] == 2 ) nice--;
        if( mp[a[i]] == 3 ) si = a[i];
    }
    bool ok = false;
    if( ! ( nice & 1 ) )
    {
        bool voy = 0;
        cout << "YES\n";
        for( int i = 1; i <= N; i ++ )
        {
            if( mp[a[i]] == 1 )
            {
                if( voy ) cout << "A";
                else cout << "B";
                voy = ! voy;
            }
            else
                cout << "A";
        }
        cout << "\n";
    }
    else if( si != -1 )
    {
        cout << "YES\n";
        bool voy = 1;
        for( int i = 1; i <= N; i ++ )
        {
            if( mp[a[i]] == 1 )
            {
                if( voy ) cout << "A";
                else cout << "B";
                voy = ! voy;
            }
            else if( a[i] == si && ! ok )
            {
                cout << "B";
                ok = 1;
            }
            else if( a[i] == si && ok )
                cout << "A";
            else
                cout << "B";
        }
        cout << "\n";
    }
    else
        cout << "NO\n";
    return 0;
}
