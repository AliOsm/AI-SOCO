#include <bits/stdc++.h>
using namespace std;
long long  i, j, n, c[123456],a[1111234], b[1125678],d[123456], l,ll, s, t, k, m, xh, x, x1, y,z;
string p,r,w;
map <string,long long> q;
int main() {
    cin >> l;
    while (l --){
        cin >>n>>k;
        s = 0;
        t = 0;
        while (n > 0){
            s += n%k;
            n/=k;
            t ++;
        }
        cout <<s+t-1<<endl;
    }
    return 0;
}