#define vi vector<int>
#define ll long long
int n;
int main()
{

    ll a,b,c;
    cin>>a>>b>>c;
    if(a>b)swap(a,b);
    if(a>c)swap(a,c);
    if(b>c)swap(b,c);
    if((a+b)*2<=c)
    {
        cout<<a+b<<endl;
    }
    else cout<<(a+b+c)/3;



}
