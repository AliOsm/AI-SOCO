#include <bits/stdc++.h>
#define int long long
#define endl "\n"
using namespace std;
inline int in(){int32_t x ; scanf("%d",&x);return x;}
const int maxn = 1e6 + 10;
const int mod = 1e9 + 7;
const int inf = 1e9 + 10;
int32_t main()
{
    int n = in() , k = in();
    int mini = bool(n-k)&&k ,maxi = min(n-k,2*k);
    cout << mini << " " << maxi << "\n";
}
