int32_t main() {
    ios_base::sync_with_stdio(false), cin.tie(nullptr);
    make(int, t);
    while(t--){
        make(int, n);
        makev(a, n);
        int i = 0;
        while(i < n && a[i] >= i){
            i++;
        }
        int j = n - 1;
        while(j >= 0 && a[j] >= (n - j - 1)){
            j--;
        }
        if (i - 1 > j){
            cout << "Yes\n";
        }else{
            cout << "No\n";
        }
    }

    return 0;
}