# include <stdio.h>
# include <string.h>
# include <math.h>


# define iabs(x) ( (x) < 0 ? (-(x)) : (x) )
# define imax(a,b) ( (a) > (b) ? (a) : (b) )
# define imin(a,b) ( (a) < (b) ? (a) : (b) )
# define isalpha(c) ( (c) >= 'a' && (c) <= 'z' )
# define isAlpha(c) ( (c) >= 'A' && (c) <= 'Z' )
# define isdigit(c) ( (c) >= '0' && (c) <= '9' )

# define convert(x) ( isalpha (x) ? (x)-'a'+'A' : (x) )
# define Convert(x) ( isAlpha (x) ? (x)-'A'+'a' : (x) )


const int N = 100010;


int n, m, k, l, r;
int a [N];
char s [N];

int main ()
{
# ifndef ONLINE_JUDGE
   freopen ("B.txt", "rt", stdin);
   freopen ("B.out", "wt", stdout);
# endif

   scanf ("%s\n", s);
   n = strlen (s);
   scanf ("%d\n", &m);

# ifndef ONLINE_JUDGE
      printf ("%s\n", s);
# endif

   for ( n=1; s [n]; n++ )
   {
      if ( s [n] == s [n-1] )
         a [n] = a [n-1] + 1;
      else
         a [n] = a [n-1];
# ifndef ONLINE_JUDGE
      printf ("%d] %d\n", n, a [n]);
# endif
   }

   for ( int i=0; i < m; i++ )
   {
      scanf ("%d %d\n", &l, &r);

      k = a [r-1] - a [l-1];

# ifndef ONLINE_JUDGE
      printf ("%d %d   ", l, r);
# endif
      printf ("%d\n", k);
   }

   return 0;
}
