#include <bits/stdc++.h>
using namespace std;
int main(){
    ios_base::sync_with_stdio(0);
    int n,x,y,i,banyak;
    double temp;
    
    cin>>n>>x>>y;
    temp=(double(y*n)/100);
    if (x>temp)
        banyak=0;
    else
        banyak=ceil(temp-x);
    cout<<banyak<<endl;
    return 0;
}