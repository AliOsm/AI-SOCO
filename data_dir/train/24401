#include <bits/stdc++.h>
using namespace std;
int n;

int init();
int solve();

int main()
{
    init();
    solve();
}

int init()
{
    scanf("%d", &n);
}

int solve()
{
    int result;

    if (n % 2 == 1)
    {
        printf("0");
    }
    else
    {
        n /= 2;
        if (n % 2 == 1) result = n/2;
        else result = n/2 - 1;

        printf("%d", result);
    }
}



















